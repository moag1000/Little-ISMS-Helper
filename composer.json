{
    "name": "moag/small-isms-helper",
    "description": "Little ISMS Helper - Ein Tool zur Unterstützung des Informationssicherheitsmanagements nach ISO 27001 für kleine und mittelständische Unternehmen",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "minimum-stability": "beta",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "api-platform/core": "^4.2.6",
        "doctrine/dbal": "^4.3.4",
        "doctrine/doctrine-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^3.7",
        "doctrine/orm": "^3.5.7",
        "dompdf/dompdf": ">=3.1.4",
        "endroid/qr-code": "^6.0.9",
        "knpuniversity/oauth2-client-bundle": ">=2.19",
        "onelogin/php-saml": "^4.3",
        "phpdocumentor/reflection-docblock": "^5.6.4",
        "phpoffice/phpspreadsheet": ">=5.2",
        "phpstan/phpdoc-parser": "^2.3",
        "spomky-labs/otphp": "^11.3",
        "symfony/asset": "7.4.*",
        "symfony/asset-mapper": "7.4.*",
        "symfony/console": "7.4.*",
        "symfony/doctrine-messenger": "7.4.*",
        "symfony/dotenv": "7.4.*",
        "symfony/expression-language": "7.4.*",
        "symfony/flex": "^2.10",
        "symfony/form": "7.4.*",
        "symfony/framework-bundle": "7.4.*",
        "symfony/http-client": "7.4.*",
        "symfony/intl": "7.4.*",
        "symfony/mailer": "7.4.*",
        "symfony/mime": "7.4.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/notifier": "7.4.*",
        "symfony/password-hasher": "7.4.*",
        "symfony/process": "7.4.*",
        "symfony/property-access": "7.4.*",
        "symfony/property-info": "7.4.*",
        "symfony/rate-limiter": "7.4.*",
        "symfony/runtime": "7.4.*",
        "symfony/security-bundle": "7.4.*",
        "symfony/serializer": "7.4.*",
        "symfony/stimulus-bundle": "^2.31",
        "symfony/string": "7.4.*",
        "symfony/translation": "7.4.*",
        "symfony/twig-bundle": "7.4.*",
        "symfony/ux-chartjs": "^2.31",
        "symfony/ux-turbo": "^2.31",
        "symfony/validator": "7.4.*",
        "symfony/web-link": "7.4.*",
        "symfony/yaml": "7.4.*",
        "thenetworg/oauth2-azure": "^2.2.2",
        "twig/extra-bundle": "^3.22.1",
        "twig/string-extra": "^3.22.1",
        "twig/twig": "^3.22",
        "vich/uploader-bundle": ">=2.8.1"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-php84": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "importmap:install": "symfony-cmd",
            "asset-map:compile": "symfony-cmd"
        },
        "setup-directories": [
            "@php -r \"is_dir('var/cache') || mkdir('var/cache', 0755, true);\"",
            "@php -r \"is_dir('var/log') || mkdir('var/log', 0755, true);\"",
            "@php -r \"is_dir('var/sessions') || mkdir('var/sessions', 0700, true);\"",
            "@php -r \"is_dir('public/uploads') || mkdir('public/uploads', 0755, true);\"",
            "@php -r \"is_dir('public/assets') || mkdir('public/assets', 0755, true);\""
        ],
        "clean-assets": [
            "@php -r '$files = glob(\"public/assets/*.{js,css,map,json}\", GLOB_BRACE) ?: []; foreach ($files as $f) { if (is_file($f)) @unlink($f); }'",
            "@php -r '$files = glob(\"public/assets/*/*.{js,css,map,json}\", GLOB_BRACE) ?: []; foreach ($files as $f) { if (is_file($f)) @unlink($f); }'",
            "@php -r '$files = glob(\"public/assets/*/*/*.{js,css,map,json}\", GLOB_BRACE) ?: []; foreach ($files as $f) { if (is_file($f)) @unlink($f); }'"
        ],
        "post-install-cmd": [
            "@setup-directories",
            "@clean-assets",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@setup-directories",
            "@clean-assets",
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.4.*"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4.3",
        "symfony/browser-kit": "7.4.*",
        "symfony/css-selector": "7.4.*",
        "symfony/debug-bundle": "7.4.*",
        "symfony/maker-bundle": "^1.64",
        "symfony/stopwatch": "7.4.*",
        "symfony/web-profiler-bundle": "7.4.*"
    }
}

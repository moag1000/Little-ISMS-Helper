# Production Environment Configuration
# Copy this file to .env.local on your production server and fill in the values
# DO NOT commit .env.local to git!

###> symfony/framework-bundle ###
# CRITICAL: Must be set to 'prod' in production!
APP_ENV=prod

# Generate a secure secret: php bin/console secrets:generate-keys
# Or use: openssl rand -hex 32
APP_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_STRING
###< symfony/framework-bundle ###

###> symfony/routing ###
# Your production domain
DEFAULT_URI=https://yourdomain.com
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# Database configuration for production
# Strato/Plesk typically provides these values in the Plesk control panel

DB_USER=your_db_user
DB_PASS=your_secure_db_password
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=your_database_name

# MySQL (default for Strato)
DATABASE_URL="mysql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}?serverVersion=8.0&charset=utf8mb4"

# MariaDB (alternative)
# DATABASE_URL="mysql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}?serverVersion=10.11-MariaDB&charset=utf8mb4"

# PostgreSQL (if available)
# DB_PORT=5432
# DATABASE_URL="postgresql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}?serverVersion=16&charset=utf8"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< symfony/messenger ###

###> symfony/mailer ###
# Configure your production mailer
# For SMTP:
MAILER_DSN=smtp://username:password@smtp.yourdomain.com:587
# For Sendmail:
# MAILER_DSN=sendmail://default
###< symfony/mailer ###

###> Azure OAuth2 Configuration (Optional) ###
# Only needed if using Azure AD authentication
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
###< Azure OAuth2 Configuration ###

###> Azure SAML Configuration (Optional) ###
# Only needed if using Azure AD SAML authentication
SAML_IDP_ENTITY_ID=
SAML_IDP_SSO_URL=
SAML_IDP_SLO_URL=
SAML_IDP_CERT=
SAML_SP_CERT=
SAML_SP_PRIVATE_KEY=
###< Azure SAML Configuration ###

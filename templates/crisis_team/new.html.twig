{% extends 'base.html.twig' %}
{% block title %}{{ 'crisis_team.new'|trans }} - {{ parent() }}{% endblock %}
{% block body %}
<div class="container py-4">
    <div class="card">
        <div class="card-header bg-primary text-white"><h4 class="mb-0">{{ 'crisis_team.new'|trans }}</h4></div>
        <div class="card-body">
            {{ form_start(form) }}{{ form_widget(form) }}
                <div class="d-flex justify-content-between pt-3 border-top">
                    <a href="{{ path('app_crisis_team_index') }}" class="btn btn-outline-secondary">{{ 'common.back'|trans }}</a>

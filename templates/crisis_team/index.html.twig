{% extends 'base.html.twig' %}
{% block title %}{{ 'crisis_team.title'|trans }} - {{ parent() }}{% endblock %}
{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-shield-exclamation" aria-hidden="true"></i> {{ 'crisis_team.title'|trans }}</h1>
        <a href="{{ path('app_crisis_team_new') }}" class="btn btn-primary"><i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'crisis_team.new'|trans }}</a>
    </div>
    <div class="row mb-4">
        <div class="col-md-4"><div class="card border-success"><div class="card-body text-center"><h2 class="text-success">{{ active_count }}</h2><p class="mb-0">{{ 'crisis_team.kpi.active'|trans }}</p></div></div></div>
        <div class="col-md-4"><div class="card"><div class="card-body text-center"><h3>{{ operational_count }}</h3><p class="mb-0">{{ 'crisis_team.type.operational'|trans }}</p></div></div></div>
        <div class="col-md-4"><div class="card"><div class="card-body text-center"><h3>{{ strategic_count }}</h3><p class="mb-0">{{ 'crisis_team.type.strategic'|trans }}</p></div></div></div>
    </div>
    {% if crisis_teams|length == 0 %}
        <div class="alert alert-info">{{ 'crisis_team.empty'|trans }}</div>
    {% else %}
        <div class="card"><div class="table-responsive"><table class="table table-hover mb-0">
            <thead><tr><th scope="col">{{ 'crisis_team.field.team_name'|trans }}</th><th scope="col">{{ 'crisis_team.field.team_type'|trans }}</th><th scope="col">{{ 'crisis_team.field.team_leader'|trans }}</th><th scope="col">{{ 'common.actions'|trans }}</th></tr></thead>
            <tbody>
                {% for team in crisis_teams %}
                    <tr class="{{ team.isActive ? '' : 'table-secondary' }}">
                        <td><strong>{{ team.teamName }}</strong></td>
                        <td><span class="badge bg-primary">{{ ('crisis_team.type.' ~ team.teamType)|trans }}</span></td>
                        <td>{{ team.teamLeader ? team.teamLeader.email : 'N/A' }}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('app_crisis_team_show', {id: team.id}) }}" class="btn btn-outline-primary" aria-label="{{ 'common.view'|trans }}"><i class="bi bi-eye" aria-hidden="true"></i></a>
                                <a href="{{ path('app_crisis_team_edit', {id: team.id}) }}" class="btn btn-outline-secondary" aria-label="{{ 'common.edit'|trans }}"><i class="bi bi-pencil" aria-hidden="true"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table></div></div>
    {% endif %}
</div>
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'crisis_team' %}
{% import '_macros/cards.html.twig' as cards %}

{% block title %}{{ 'crisis_team.title'|trans({}, 'crisis_team') }} - {{ 'app.title'|trans({}, 'messages') }}{% endblock %}
{% block body %}
<div class="container-fluid py-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.bcm'|trans({}, 'nav'), url: path('app_bcm_index') },
            { label: 'nav.crisis_team'|trans({}, 'nav') }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-shield-exclamation" aria-hidden="true"></i> {{ 'crisis_team.title'|trans({}, 'crisis_team') }}</h1>
        <a href="{{ path('app_crisis_team_new') }}" class="btn btn-primary"><i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'crisis_team.new'|trans({}, 'crisis_team') }}</a>
    </div>
    <div class="row mb-4">
        <div class="col-md-4">
            {{ cards.kpi_card('crisis_team.kpi.active'|trans({}, 'crisis_team'), active_count, null, null, 'success', 'border-success') }}
        </div>
        <div class="col-md-4">
            {{ cards.kpi_card('crisis_team.type.operational'|trans({}, 'crisis_team'), operational_count, null, null, 'primary', null) }}
        </div>
        <div class="col-md-4">
            {{ cards.kpi_card('crisis_team.type.strategic'|trans({}, 'crisis_team'), strategic_count, null, null, 'info', null) }}
        </div>
    </div>
    {% if crisis_teams|length == 0 %}
        <div class="alert alert-info">{{ 'crisis_team.empty'|trans({}, 'crisis_team') }}</div>
    {% else %}
        <div class="card">
            {% embed '_components/_table.html.twig' with {
                'noMargin': true
            } %}
                {% block table_head %}
                    <tr>
                        <th scope="col">{{ 'crisis_team.field.team_name'|trans({}, 'crisis_team') }}</th>
                        <th scope="col">{{ 'crisis_team.field.team_type'|trans({}, 'crisis_team') }}</th>
                        <th scope="col">{{ 'crisis_team.field.team_leader'|trans({}, 'crisis_team') }}</th>
                        <th scope="col">{{ 'common.actions'|trans({}, 'messages') }}</th>
                    </tr>
                {% endblock %}
                {% block table_body %}
                    {% for team in crisis_teams %}
                        <tr class="{{ team.isActive ? '' : 'table-secondary' }}">
                            <td><strong>{{ team.teamName }}</strong></td>
                            <td><span class="badge bg-primary">{{ ('crisis_team.type.' ~ team.teamType)|trans }}</span></td>
                            <td>{{ team.teamLeader ? team.teamLeader.email : 'not_assigned'|trans({}, 'messages') }}</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                                    <a href="{{ path('app_crisis_team_show', {id: team.id}) }}" class="btn btn-outline-primary" title="{{ 'common.view'|trans({}, 'messages') }}" aria-label="{{ 'common.view'|trans({}, 'messages') }}"><i class="bi bi-eye" aria-hidden="true"></i></a>
                                    <a href="{{ path('app_crisis_team_edit', {id: team.id}) }}" class="btn btn-outline-secondary" title="{{ 'common.edit'|trans({}, 'messages') }}" aria-label="{{ 'common.edit'|trans({}, 'messages') }}"><i class="bi bi-pencil" aria-hidden="true"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% endblock %}
            {% endembed %}
        </div>
    {% endif %}
</div>
{% endblock %}

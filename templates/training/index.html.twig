{% extends 'base.html.twig' %}
{% import '_macros/inheritance_badge.html.twig' as inheritance %}

{% block title %}{{ 'training.title'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">
            <i class="bi bi-mortarboard" aria-hidden="true"></i> {{ 'training.title'|trans }}
        </h1>
        {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_training_new') }}" class="btn btn-primary" data-turbo-action="advance">
            <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'training.new'|trans }}
        </a>
        {% endif %}
    </div>

    {# View Filter #}
    {% if currentTenant %}
    <div class="card mb-3">
        <div class="card-body py-2">
            <form method="get" action="{{ path('app_training_index') }}" class="d-flex align-items-center gap-2">
                <label for="view-filter" class="mb-0 fw-bold">
                    <i class="bi bi-eye" aria-hidden="true"></i> {{ 'common.view'|trans }}:
                </label>
                <select class="form-select form-select-sm" style="width: auto;" id="view-filter" name="view" onchange="this.form.submit()">
                    <option value="own" {{ inheritanceInfo.currentView == 'own' ? 'selected' : '' }}>
                        {{ 'corporate.view.own_only'|trans }}
                    </option>
                    {% if inheritanceInfo.hasParent %}
                    <option value="inherited" {{ inheritanceInfo.currentView == 'inherited' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_inherited'|trans }}
                    </option>
                    {% endif %}
                    {% if inheritanceInfo.hasSubsidiaries %}
                    <option value="subsidiaries" {{ inheritanceInfo.currentView == 'subsidiaries' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_subsidiaries'|trans }}
                    </option>
                    {% endif %}
                </select>
                <noscript>
                    <button type="submit" class="btn btn-sm btn-secondary">{{ 'common.apply'|trans }}</button>
                </noscript>
            </form>
        </div>
    </div>
    {% endif %}

    {# Statistics Cards #}
    <turbo-frame id="training-stats">
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-primary">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-collection text-primary icon-2rem" aria-hidden="true"></i>
                            </div>
                            <div class="ms-3">
                                <h6 class="text-muted mb-1">{{ 'training.statistics.total'|trans }}</h6>
                                <h3 class="mb-0">
                                    <span id="training-total-count">{{ detailedStats.total }}</span>
                                </h3>
                                {% if currentTenant %}
                                    <small style="font-size: 11px; color: #6c757d; opacity: 0.85; display: block;">
                                        {{ 'corporate.stats.breakdown'|trans({'%own%': detailedStats.own, '%inherited%': detailedStats.inherited, '%subsidiaries%': detailedStats.subsidiaries}) }}
                                    </small>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card border-info">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-calendar-check text-info icon-2rem" aria-hidden="true"></i>
                            </div>
                            <div class="ms-3">
                                <h6 class="text-muted mb-1">{{ 'training.statistics.upcoming'|trans }}</h6>
                                <h3 class="mb-0">
                                    <span id="training-upcoming-count">{{ statistics.upcoming ?? 0 }}</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card border-success">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-check-circle text-success icon-2rem" aria-hidden="true"></i>
                            </div>
                            <div class="ms-3">
                                <h6 class="text-muted mb-1">{{ 'training.statistics.completed'|trans }}</h6>
                                <h3 class="mb-0">
                                    <span id="training-completed-count">{{ statistics.completed ?? 0 }}</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card border-warning">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-exclamation-triangle text-warning icon-2rem" aria-hidden="true"></i>
                            </div>
                            <div class="ms-3">
                                <h6 class="text-muted mb-1">{{ 'training.statistics.mandatory'|trans }}</h6>
                                <h3 class="mb-0">
                                    <span id="training-mandatory-count">{{ statistics.mandatory ?? 0 }}</span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </turbo-frame>

    {# Upcoming Trainings Section #}
    {% if upcoming|length > 0 %}
    <div class="card mb-4 border-info">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-calendar-event" aria-hidden="true"></i> {{ 'training.upcoming_trainings'|trans }}</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'training.title'|trans }}</th>
                            <th scope="col">{{ 'training.type'|trans }}</th>
                            <th scope="col">{{ 'training.scheduled_date'|trans }}</th>
                            <th scope="col">{{ 'training.delivery_method'|trans }}</th>
                            <th scope="col">{{ 'training.mandatory'|trans }}</th>
                            <th scope="col">{{ 'common.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for training in upcoming %}
                        <tr>
                            <td>
                                <strong>{{ training.title }}</strong>
                                {{ inheritance.small_badge(training, currentTenant) }}
                                {% if training.mandatory %}
                                <span class="badge bg-warning text-dark ms-1">
                                    <i class="bi bi-exclamation-circle" aria-hidden="true"></i> {{ 'training.mandatory_label'|trans }}
                                </span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    {{ ('training.type.' ~ training.trainingType)|trans }}
                                </span>
                            </td>
                            <td>
                                <i class="bi bi-clock" aria-hidden="true"></i>
                                {{ training.scheduledDate|date('d.m.Y H:i') }}
                            </td>
                            <td>{{ ('training.delivery.' ~ training.deliveryMethod)|trans }}</td>
                            <td>
                                {% if training.mandatory %}
                                <span class="text-warning"><i class="bi bi-check-circle-fill" aria-hidden="true"></i> {{ 'common.yes'|trans }}</span>
                                {% else %}
                                <span class="text-muted">{{ 'common.no'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_training_show', {id: training.id}) }}"
                                   class="btn btn-sm btn-outline-primary"
                                   data-turbo-action="advance">
                                    <i class="bi bi-eye" aria-hidden="true"></i> {{ 'common.view'|trans }}
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}

    {# All Trainings Section #}
    <div class="card" data-controller="bulk-actions" data-bulk-actions-endpoint-value="/training">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list" aria-hidden="true"></i> {{ 'training.all_trainings'|trans }}</h5>
        </div>
        <div class="card-body">
            {% if trainings|length == 0 %}
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'training.no_trainings'|trans }}
                {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_training_new') }}" class="alert-link" data-turbo-action="advance">
                    {{ 'training.create_first'|trans }}
                </a>
                {% endif %}
            </div>
            {% else %}
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th scope="col" class="w-40px">
                                <input type="checkbox"
                                       class="form-check-input"
                                       data-action="bulk-actions#selectAll"
                                       data-bulk-actions-target="selectAllCheckbox"
                                       aria-label="Alle auswÃ¤hlen">
                            </th>
                            <th scope="col">{{ 'training.title'|trans }}</th>
                            <th scope="col">{{ 'training.type'|trans }}</th>
                            <th scope="col">{{ 'training.scheduled_date'|trans }}</th>
                            <th scope="col">{{ 'training.duration'|trans }}</th>
                            <th scope="col">{{ 'training.status'|trans }}</th>
                            <th scope="col">{{ 'training.participants_count'|trans }}</th>
                            <th scope="col">{{ 'common.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for training in trainings %}
                        <tr data-training-id="{{ training.id }}">
                            <td>
                                <input type="checkbox"
                                       class="form-check-input"
                                       data-bulk-actions-target="item"
                                       data-action="bulk-actions#selectItem"
                                       value="{{ training.id }}">
                            </td>
                            <td>
                                <strong>{{ training.title }}</strong>
                                {{ inheritance.small_badge(training, currentTenant) }}
                                {% if training.mandatory %}
                                <span class="badge bg-warning text-dark ms-1">
                                    <i class="bi bi-exclamation-circle" aria-hidden="true"></i>
                                </span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    {{ ('training.type.' ~ training.trainingType)|trans }}
                                </span>
                            </td>
                            <td>{{ training.scheduledDate|date('d.m.Y H:i') }}</td>
                            <td>{{ training.duration }} {{ 'training.minutes'|trans }}</td>
                            <td>
                                {% set statusClass = {
                                    'planned': 'info',
                                    'confirmed': 'primary',
                                    'completed': 'success',
                                    'cancelled': 'danger',
                                    'postponed': 'warning'
                                } %}
                                <span class="badge bg-{{ statusClass[training.status] ?? 'secondary' }}">
                                    {{ ('training.status.' ~ training.status)|trans }}
                                </span>
                            </td>
                            <td>
                                <i class="bi bi-people" aria-hidden="true"></i>
                                {{ training.participants|length }}
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('app_training_show', {id: training.id}) }}"
                                       class="btn btn-outline-primary"
                                       data-turbo-action="advance"
                                       title="{{ 'common.view'|trans }}">
                                        <i class="bi bi-eye" aria-hidden="true"></i>
                                    </a>
                                    {% if is_granted('ROLE_USER') %}
                                    <a href="{{ path('app_training_edit', {id: training.id}) }}"
                                       class="btn btn-outline-secondary"
                                       data-turbo-action="advance"
                                       title="{{ 'common.edit'|trans }}">
                                        <i class="bi bi-pencil" aria-hidden="true"></i>
                                    </a>
                                    {% endif %}
                                    {% if is_granted('ROLE_ADMIN') %}
                                    <button type="button"
                                            class="btn btn-outline-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteModal{{ training.id }}"
                                            title="{{ 'common.delete'|trans }}">
                                        <i class="bi bi-trash" aria-hidden="true"></i>
                                    </button>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% endif %}
        </div>

        {# Bulk Action Bar #}
        {% if trainings|length > 0 %}
        {% include '_components/_bulk_action_bar.html.twig' with {
            actions: ['export', 'assign', 'delete']
        } %}
        {% endif %}
    </div>
</div>

{# Delete Modals #}
{% for training in trainings %}
<div class="modal fade" id="deleteModal{{ training.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ training.id }}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel{{ training.id }}">
                    <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'training.confirm_delete'|trans }}
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>{{ 'training.delete_warning'|trans({'%title%': training.title}) }}</p>
                <p class="text-muted"><small>{{ 'common.action_irreversible'|trans }}</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    {{ 'common.cancel'|trans }}
                </button>
                <form method="post" action="{{ path('app_training_delete', {id: training.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ training.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash" aria-hidden="true"></i> {{ 'common.delete'|trans }}
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}

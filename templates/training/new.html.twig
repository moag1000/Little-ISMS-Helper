{% extends 'base.html.twig' %}
{% trans_default_domain 'training' %}

{% block title %}{{ 'training.new'|trans({}, 'messages') }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_training_index') }}" data-turbo-action="advance">
                            <i class="bi bi-mortarboard" aria-hidden="true"></i> {{ 'training.title'|trans({}, 'messages') }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'training.new'|trans({}, 'messages') }}</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'training.new'|trans({}, 'messages') }}
                </h1>
                <a href="{{ path('app_training_index') }}" class="btn btn-outline-secondary" data-turbo-action="advance">
                    <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                </a>
            </div>

            <div class="alert alert-info mb-4" role="alert">
                <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'training.new_help'|trans({}, 'messages') }}
            </div>

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">{{ 'training.new'|trans({}, 'messages') }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'training-form'}}) }}

                    {# Basic Information Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-info-square" aria-hidden="true"></i>
                            {{ 'training.section.basic_info'|trans({}, 'messages') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.title,
                                    'label': form.title.vars.label|default('training.field.title'|trans({}, 'messages')),
                                    'required': true
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.description,
                                    'label': form.description.vars.label|default('training.field.description'|trans({}, 'messages'))
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.trainingType,
                                    'label': form.trainingType.vars.label|default('training.field.training_type'|trans({}, 'messages'))
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.deliveryMethod,
                                    'label': form.deliveryMethod.vars.label|default('training.field.delivery_method'|trans({}, 'messages'))
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Schedule & Location Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-calendar-event" aria-hidden="true"></i>
                            {{ 'training.section.schedule'|trans({}, 'messages') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.scheduledDate,
                                    'label': form.scheduledDate.vars.label|default('training.field.scheduled_date'|trans({}, 'messages'))
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.duration,
                                    'label': form.duration.vars.label|default('training.field.duration'|trans({}, 'messages'))
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.location,
                                    'label': form.location.vars.label|default('training.field.location'|trans({}, 'messages'))
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Trainer & Participants Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-people" aria-hidden="true"></i>
                            {{ 'training.section.people'|trans({}, 'messages') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.trainer,
                                    'label': form.trainer.vars.label|default('training.field.trainer'|trans({}, 'messages'))
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.targetAudience,
                                    'label': form.targetAudience.vars.label|default('training.field.target_audience'|trans({}, 'messages'))
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.participants,
                                    'label': form.participants.vars.label|default('training.field.participants'|trans({}, 'messages'))
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Status & Requirements Section #}
                    <fieldset class="mb-4" id="status-fieldset">
                        <legend class="h5 mb-3">
                            <i class="bi bi-flag" aria-hidden="true"></i>
                            {{ 'training.section.status'|trans({}, 'messages') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.status,
                                    'label': form.status.vars.label|default('training.field.status'|trans({}, 'messages'))
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.mandatory,
                                    'label': form.mandatory.vars.label|default('training.field.mandatory'|trans({}, 'messages'))
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# ISO 27001 Controls Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-shield-check" aria-hidden="true"></i>
                            {{ 'training.section.controls'|trans({}, 'messages') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.relatedControls,
                                    'label': form.relatedControls.vars.label|default('training.field.related_controls'|trans({}, 'messages')),
                                    'help': 'training.controls_help'|trans({}, 'messages')
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Materials & Feedback Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-file-earmark-text" aria-hidden="true"></i>
                            {{ 'training.section.materials'|trans({}, 'messages') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.materials,
                                    'label': form.materials.vars.label|default('training.field.materials'|trans({}, 'messages'))
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.feedback,
                                    'label': form.feedback.vars.label|default('training.field.feedback'|trans({}, 'messages'))
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a href="{{ path('app_training_index') }}"
                           class="btn btn-outline-secondary"
                           data-turbo-action="advance">
                            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'training.create'|trans({}, 'messages') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-check-input {
        cursor: pointer;
    }
    .form-check-label {
        cursor: pointer;
    }
    select[multiple] {
        min-height: 200px;
    }
</style>

<script>
    document.addEventListener('turbo:load', function() {
        // Add visual feedback for mandatory checkbox - adapted for fieldset
        const mandatoryInputs = document.querySelectorAll('input[name*="[mandatory]"]');
        mandatoryInputs.forEach(function(input) {
            input.addEventListener('change', function() {
                const fieldset = document.getElementById('status-fieldset');
                if (fieldset) {
                    if (this.value === '1' || this.checked) {
                        fieldset.classList.add('border-warning');
                    } else {
                        fieldset.classList.remove('border-warning');
                    }
                }
            });
        });
    });
</script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'training.edit'|trans }} - {{ training.title }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_training_index') }}" data-turbo-action="advance">
                    <i class="bi bi-mortarboard" aria-hidden="true"></i> {{ 'training.title'|trans }}
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_training_show', {id: training.id}) }}" data-turbo-action="advance">
                    {{ training.title }}
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'common.edit'|trans }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'training.edit'|trans }}: {{ training.title }}
                    </h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'training.edit_help'|trans }}
                    </p>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {# Basic Information Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-info-square" aria-hidden="true"></i> {{ 'training.section.basic_info'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.title) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.description) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.trainingType) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.deliveryMethod) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Schedule & Location Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-calendar-event" aria-hidden="true"></i> {{ 'training.section.schedule'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.scheduledDate) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.duration) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.location) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Trainer & Participants Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-people" aria-hidden="true"></i> {{ 'training.section.people'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.trainer) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.targetAudience) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.participants) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Status & Requirements Section #}
                    <div class="card mb-4 {% if training.mandatory %}border-warning{% endif %}">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-flag" aria-hidden="true"></i> {{ 'training.section.status'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.status) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.mandatory) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# ISO 27001 Controls Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-shield-check" aria-hidden="true"></i> {{ 'training.section.controls'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.relatedControls) }}
                                    <div class="form-text">
                                        <i class="bi bi-lightbulb" aria-hidden="true"></i> {{ 'training.controls_help'|trans }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Materials & Feedback Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-file-earmark-text" aria-hidden="true"></i> {{ 'training.section.materials'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.materials) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.feedback) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <div>
                            <a href="{{ path('app_training_show', {id: training.id}) }}"
                               class="btn btn-outline-secondary"
                               data-turbo-action="advance">
                                <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans }}
                            </a>
                            <a href="{{ path('app_training_index') }}"
                               class="btn btn-outline-secondary"
                               data-turbo-action="advance">
                                <i class="bi bi-list" aria-hidden="true"></i> {{ 'common.to_list'|trans }}
                            </a>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save_changes'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Metadata Card #}
            <div class="card shadow mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'common.metadata'|trans }}</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">{{ 'common.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ training.createdAt|date('d.m.Y H:i') }}</dd>

                        <dt class="col-sm-3 text-muted">{{ 'common.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ training.updatedAt|date('d.m.Y H:i') }}</dd>

                        <dt class="col-sm-3 text-muted">{{ 'common.id'|trans }}</dt>
                        <dd class="col-sm-9"><code>{{ training.id }}</code></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-check-input {
        cursor: pointer;
    }
    .form-check-label {
        cursor: pointer;
    }
    select[multiple] {
        min-height: 200px;
    }
</style>

<script>
    document.addEventListener('turbo:load', function() {
        // Add visual feedback for mandatory checkbox
        const mandatoryInputs = document.querySelectorAll('input[name*="[mandatory]"]');
        mandatoryInputs.forEach(function(input) {
            input.addEventListener('change', function() {
                const card = this.closest('.card');
                if (this.value === '1') {
                    card.classList.add('border-warning');
                } else {
                    card.classList.remove('border-warning');
                }
            });
        });

        // Highlight if currently marked as mandatory
        const statusCard = document.querySelector('.border-warning');
        if (statusCard) {
            statusCard.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
    });
</script>
{% endblock %}

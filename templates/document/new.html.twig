{% extends 'base.html.twig' %}
{% trans_default_domain 'document' %}

{% block title %}{{ 'document.new'|trans({}, 'document')}} - {{ parent() }}{% endblock %}

{% block body %}
{# Breadcrumb Navigation #}
{% include '_components/_breadcrumb.html.twig' with {
    breadcrumbs: [
        { label: 'document.title'|trans({}, 'document'), url: path('app_document_index'), icon: 'bi-file-earmark-text' },
        { label: 'document.new'|trans({}, 'document')}
    ]
} %}

{# Page Header #}
{% include '_components/_page_header.html.twig' with {
    title: 'document.new'|trans({}, 'document'),
    icon: 'bi-plus-circle',
    actions: [
        { label: 'common.back'|trans({}, 'messages'), url: path('app_document_index'), variant: 'secondary', icon: 'bi-arrow-left' }
    ]
} %}

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            {% include '_components/_auto_form.html.twig' with {
                'form': form,
                'sections': {
                    'basic_info': {
                        'label': 'document.section.basic_info'|trans({}, 'document'),
                        'fields': ['originalFilename', 'description', 'category']
                    },
                    'file_upload': {
                        'label': 'document.section.file_upload'|trans({}, 'document'),
                        'fields': ['file']
                    }
                },
                'col_widths': {
                    'originalFilename': 12,
                    'description': 12,
                    'category': 6,
                    'file': 12
                }
            } %}

            <div class="form-actions d-flex gap-2 justify-content-end">
                <a href="{{ path('app_document_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle" aria-hidden="true"></i>
                    {{ 'common.cancel'|trans({}, 'messages') }}
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-upload" aria-hidden="true"></i>
                    {{ 'document.action.upload'|trans({}, 'document')}}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'document.new'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_document_index') }}"><i class="bi bi-file-earmark-text"></i> {{ 'nav.documents'|trans }}</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'document.new'|trans }}</li>
        </ol>
    </nav>

    <div class="page-header">
        <h1><i class="bi bi-plus-circle"></i> {{ 'document.new'|trans }}</h1>
        <a href="{{ path('app_document_index') }}" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> {{ 'common.back'|trans }}</a>
    </div>

    <div class="card">
        <div class="card-content">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.documentType) }}
                    {{ form_widget(form.documentType) }}
                    {{ form_errors(form.documentType) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.file) }}
                    {{ form_widget(form.file) }}
                    {{ form_errors(form.file) }}
                    <small class="help-text">{{ 'document.file_help'|trans }}</small>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-upload"></i> {{ 'document.upload'|trans }}</button>
                    <a href="{{ path('app_document_index') }}" class="btn btn-secondary"><i class="bi bi-x-circle"></i> {{ 'common.cancel'|trans }}</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

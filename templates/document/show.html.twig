{% extends 'base.html.twig' %}

{% block title %}{{ document.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>{{ document.name }}</h1>
        <div class="actions">
            <a href="{{ path('app_document_download', {id: document.id}) }}" class="btn btn-primary">Download</a>
            <a href="{{ path('app_document_edit', {id: document.id}) }}" class="btn btn-secondary">Edit</a>
            <a href="{{ path('app_document_index') }}" class="btn btn-secondary">Back to List</a>
            {% if is_granted('ROLE_ADMIN') %}
                <form method="post" action="{{ path('app_document_delete', {id: document.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this document?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            {% endif %}
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>Document Details</h2>
            <span class="badge">{{ document.documentType|upper }}</span>
        </div>
        <div class="card-content">
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="label">Type:</span>
                    <span class="value">{{ document.documentType|upper|replace({'_': ' '}) }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">File Name:</span>
                    <span class="value">{{ document.originalName }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Size:</span>
                    <span class="value">{{ document.fileSizeFormatted }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">MIME Type:</span>
                    <span class="value">{{ document.mimeType }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Uploaded By:</span>
                    <span class="value">{{ document.uploadedBy.fullName }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Uploaded At:</span>
                    <span class="value">{{ document.uploadedAt|date('d.m.Y H:i') }}</span>
                </div>
                {% if document.updatedAt %}
                <div class="detail-item">
                    <span class="label">Last Updated:</span>
                    <span class="value">{{ document.updatedAt|date('d.m.Y H:i') }}</span>
                </div>
                {% endif %}
            </div>

            {% if document.description %}
                <div class="detail-section">
                    <h3>Description</h3>
                    <p>{{ document.description }}</p>
                </div>
            {% endif %}

            {% if document.relatedEntityType and document.relatedEntityId %}
                <div class="detail-section">
                    <h3>Related Entity</h3>
                    <p>{{ document.relatedEntityType }} #{{ document.relatedEntityId }}</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

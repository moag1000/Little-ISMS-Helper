{% extends 'base.html.twig' %}
{% trans_default_domain 'documents' %}

{% block title %}{{ document.originalFilename }}{% endblock %}

{% block body %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.documents'|trans({}, 'nav'), url: path('app_document_index') },
            { label: document.originalFilename }
        ]
    } %}

    <div class="page-header">
        <h1>
            {{ document.originalFilename }}
            {% if isInherited is defined and isInherited %}
                <span class="badge bg-info ms-2">
                    <i class="bi bi-building" aria-hidden="true"></i> {{ 'corporate.inherited'|trans({}, 'messages') }}
                </span>
            {% endif %}
        </h1>
        <div class="actions">
            <a href="{{ path('app_document_download', {id: document.id}) }}" class="btn btn-primary">{{ 'common.download'|trans({}, 'messages') }}</a>
            {% if canEdit is defined and canEdit %}
                <a href="{{ path('app_document_edit', {id: document.id}) }}" class="btn btn-secondary">{{ 'common.edit'|trans({}, 'messages') }}</a>
            {% else %}
                <button class="btn btn-secondary" disabled title="{{ 'corporate.inheritance.cannot_edit_inherited'|trans({}, 'messages') }}">
                    <i class="bi bi-lock" aria-hidden="true"></i> {{ 'common.edit'|trans({}, 'messages') }}
                </button>
            {% endif %}
            <a href="{{ path('app_document_index') }}" class="btn btn-secondary">{{ 'common.back_to_list'|trans({}, 'messages') }}</a>
            {% if is_granted('ROLE_ADMIN') and (canEdit is not defined or canEdit) %}
                <form method="post" action="{{ path('app_document_delete', {id: document.id}) }}" style="display:inline;" onsubmit="return confirm('{{ 'document.confirm.delete'|trans({}, 'document') }}');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                    <button type="submit" class="btn btn-danger">{{ 'common.delete'|trans({}, 'messages') }}</button>
                </form>
            {% endif %}
        </div>
    </div>

    {% if isInherited is defined and isInherited %}
        <div class="alert alert-info mb-3">
            <div class="d-flex align-items-start">
                <i class="bi bi-info-circle-fill me-2 mt-1" aria-hidden="true"></i>
                <div>
                    <strong>{{ 'corporate.inheritance.view_only_title'|trans({}, 'messages') }}</strong>
                    <p class="mb-0">{{ 'corporate.inheritance.document_inherited_message'|trans({}, 'messages') }}</p>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="card">
        <div class="card-header">
            <h2>{{ 'document.details.title'|trans({}, 'document') }}</h2>
            <span class="badge">{{ document.category|upper }}</span>
        </div>
        <div class="card-content">
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="label">{{ 'document.label.type'|trans({}, 'document') }}</span>
                    <span class="value">{{ document.category|upper|replace({'_': ' '}) }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'document.label.file_name'|trans({}, 'document') }}</span>
                    <span class="value">{{ document.originalFilename }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'document.label.size'|trans({}, 'document') }}</span>
                    <span class="value">{{ document.fileSizeFormatted }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'document.label.mime_type'|trans({}, 'document') }}</span>
                    <span class="value">{{ document.mimeType }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'document.label.uploaded_by'|trans({}, 'document') }}</span>
                    <span class="value">{{ document.uploadedBy ? document.uploadedBy.fullName : '-' }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'document.label.uploaded_at'|trans({}, 'document') }}</span>
                    <span class="value">{{ document.uploadedAt|date('d.m.Y H:i') }}</span>
                </div>
                {% if document.updatedAt %}
                <div class="detail-item">
                    <span class="label">{{ 'document.label.last_updated'|trans({}, 'document') }}</span>
                    <span class="value">{{ document.updatedAt|date('d.m.Y H:i') }}</span>
                </div>
                {% endif %}
            </div>

            {% if document.description %}
                <div class="detail-section">
                    <h2>{{ 'common.description'|trans({}, 'messages') }}</h2>
                    <p>{{ document.description }}</p>
                </div>
            {% endif %}

            {% if document.entityType and document.entityId %}
                <div class="detail-section">
                    <h2>{{ 'document.label.related_entity'|trans({}, 'document') }}</h2>
                    <p>{{ document.entityType }} #{{ document.entityId }}</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% trans_default_domain 'documents' %}
<form method="post" action="{{ path('app_document_delete', {id: document.id}) }}"
      data-controller="ui-actions"
      data-action="submit->ui-actions#confirm"
      data-ui-actions-message-param="{{ 'document.confirm.delete'|trans({}, 'document') }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash" aria-hidden="true"></i>
        {{ 'common.delete'|trans({}, 'messages') }}
    </button>
</form>

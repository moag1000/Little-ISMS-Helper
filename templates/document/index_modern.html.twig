{% extends 'base.html.twig' %}
{% import '_macros/inheritance_badge.html.twig' as inheritance %}

{% block title %}{{ 'document.title'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'common.dashboard'|trans, url: path('app_dashboard') },
            { label: 'document.title'|trans }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'document.title'|trans,
        subtitle: 'document.subtitle'|trans,
        icon: 'bi-file-earmark-text',
        actions: [
            {
                label: 'document.action.upload'|trans,
                url: path('app_document_new'),
                variant: 'primary',
                icon: 'bi-cloud-upload'
            }
        ]
    } %}

    {# View Filter #}
    {% if currentTenant %}
    <div class="card mb-3">
        <div class="card-body py-2">
            <form method="get" action="{{ path('app_document_index') }}" class="d-flex align-items-center gap-2">
                <label for="view-filter" class="mb-0 fw-bold">
                    <i class="bi bi-eye"></i> {{ 'common.view'|trans }}:
                </label>
                <select class="form-select form-select-sm" style="width: auto;" id="view-filter" name="view" onchange="this.form.submit()">
                    <option value="own" {{ inheritanceInfo.currentView == 'own' ? 'selected' : '' }}>
                        {{ 'corporate.view.own_only'|trans }}
                    </option>
                    {% if inheritanceInfo.hasParent %}
                    <option value="inherited" {{ inheritanceInfo.currentView == 'inherited' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_inherited'|trans }}
                    </option>
                    {% endif %}
                    {% if inheritanceInfo.hasSubsidiaries %}
                    <option value="subsidiaries" {{ inheritanceInfo.currentView == 'subsidiaries' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_subsidiaries'|trans }}
                    </option>
                    {% endif %}
                </select>
                <noscript>
                    <button type="submit" class="btn btn-sm btn-secondary">{{ 'common.apply'|trans }}</button>
                </noscript>
            </form>
        </div>
    </div>
    {% endif %}

    {# Calculate Stats #}
    {% set total = detailedStats.total %}
    {% set totalSize = documents|reduce((carry, doc) => carry + doc.fileSize, 0) %}
    {% set totalSizeMB = (totalSize / 1024 / 1024)|number_format(2) %}
    {% set pdfDocs = documents|filter(d => d.mimeType == 'application/pdf')|length %}
    {% set imageDocs = documents|filter(d => d.mimeType starts with 'image/')|length %}
    {% set excelDocs = documents|filter(d => d.mimeType matches '/spreadsheet/')|length %}

    {# KPI Cards #}
    <div class="kpi-grid">
        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-file-earmark-text',
            label: 'document.kpi.total_documents'|trans,
            value: total,
            detail: currentTenant ? ('corporate.stats.breakdown'|trans({'%own%': detailedStats.own, '%inherited%': detailedStats.inherited, '%subsidiaries%': detailedStats.subsidiaries})) : null,
            variant: 'primary',
            link: null
        } %}

        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-hdd',
            label: 'document.kpi.total_size'|trans,
            value: totalSizeMB,
            unit: 'MB',
            variant: 'info',
            link: null
        } %}

        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-file-pdf',
            label: 'document.type.pdf'|trans,
            value: pdfDocs,
            variant: 'danger',
            link: null
        } %}

        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-file-earmark-spreadsheet',
            label: 'document.type.excel'|trans,
            value: excelDocs,
            variant: 'success',
            link: null
        } %}
    </div>

    {# Document Type Distribution #}
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="mb-0">
                <i class="bi bi-pie-chart"></i>
                {{ 'document.section.type_overview'|trans }}
            </h2>
        </div>
        <div class="card-body">
            <div class="row g-4">
                {# PDF #}
                <div class="col-md-3">
                    <div class="type-card text-center p-4 bg-pdf-light">
                        <div class="type-icon mb-3 fs-25 color-pdf">
                            <i class="bi bi-file-pdf"></i>
                        </div>
                        <div class="type-label text-muted mb-2">{{ 'document.type.pdf'|trans }}</div>
                        <div class="type-count fs-2 fw-700 color-pdf">
                            {{ pdfDocs }}
                        </div>
                    </div>
                </div>

                {# Images #}
                <div class="col-md-3">
                    <div class="type-card text-center p-4 bg-image-light">
                        <div class="type-icon mb-3 fs-25 color-image">
                            <i class="bi bi-image"></i>
                        </div>
                        <div class="type-label text-muted mb-2">{{ 'document.type.images'|trans }}</div>
                        <div class="type-count fs-2 fw-700 color-image">
                            {{ imageDocs }}
                        </div>
                    </div>
                </div>

                {# Excel/Spreadsheets #}
                <div class="col-md-3">
                    <div class="type-card text-center p-4 bg-excel-light">
                        <div class="type-icon mb-3 fs-25 color-excel">
                            <i class="bi bi-file-earmark-spreadsheet"></i>
                        </div>
                        <div class="type-label text-muted mb-2">{{ 'document.type.tables'|trans }}</div>
                        <div class="type-count fs-2 fw-700 color-excel">
                            {{ excelDocs }}
                        </div>
                    </div>
                </div>

                {# Other #}
                <div class="col-md-3">
                    <div class="type-card text-center p-4 bg-other-light">
                        <div class="type-icon mb-3 fs-25 color-other">
                            <i class="bi bi-file-earmark"></i>
                        </div>
                        <div class="type-label text-muted mb-2">{{ 'document.type.other'|trans }}</div>
                        <div class="type-count fs-2 fw-700 color-other">
                            {{ total - pdfDocs - imageDocs - excelDocs }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Document List with Bulk Actions #}
    <div class="card" data-controller="bulk-actions" data-bulk-actions-endpoint-value="/document">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="bi bi-list-ul"></i>
                {{ 'document.section.all_documents'|trans }}
                <span class="bulk-selected-badge" data-bulk-actions-target="countBadge" class="d-none">
                    <span data-bulk-actions-target="count">0</span> {{ 'common.selected'|trans }}
                </span>
            </h2>

            {# Filter Controls #}
            <div class="d-flex gap-2">
                <select class="form-select form-select-sm" id="categoryFilter" class="w-auto">
                    <option value="">{{ 'document.filter.all_categories'|trans }}</option>
                    {% set categories = [] %}
                    {% for doc in documents %}
                        {% if doc.category not in categories %}
                            {% set categories = categories|merge([doc.category]) %}
                        {% endif %}
                    {% endfor %}
                    {% for category in categories %}
                        <option value="{{ category }}">{{ category|capitalize }}</option>
                    {% endfor %}
                </select>

                <input type="search"
                       class="form-control form-control-sm"
                       id="documentSearch"
                       placeholder="{{ 'document.filter.search_placeholder'|trans }}"
                       class="w-250px">
            </div>
        </div>

        <div class="card-body p-0">
            {% if documents|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover table-bulk-selectable mb-0">
                    <thead class="thead-sticky">
                        <tr>
                            <th class="bulk-select-column">
                                <input type="checkbox"
                                       data-action="bulk-actions#selectAll"
                                       data-bulk-actions-target="selectAllCheckbox">
                            </th>
                            <th class="w-50px"></th>
                            <th>{{ 'common.name'|trans }}</th>
                            <th class="w-150px">{{ 'common.category'|trans }}</th>
                            <th class="w-100px">{{ 'common.size'|trans }}</th>
                            <th class="w-150px">{{ 'document.table.uploaded_by'|trans }}</th>
                            <th class="w-130px">{{ 'common.date'|trans }}</th>
                            <th class="w-180px text-right">{{ 'common.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody id="documentTableBody">
                        {% for document in documents %}
                        <tr class="document-row"
                            data-category="{{ document.category|lower }}"
                            data-name="{{ document.originalFilename|lower }}">
                            <td class="bulk-select-column">
                                <input type="checkbox"
                                       data-bulk-actions-target="item"
                                       data-action="bulk-actions#selectItem"
                                       value="{{ document.id }}">
                            </td>
                            <td>
                                {# File Type Icon #}
                                {% if document.mimeType == 'application/pdf' %}
                                    <i class="bi bi-file-pdf-fill text-danger fs-15"></i>
                                {% elseif document.mimeType starts with 'image/' %}
                                    <i class="bi bi-file-image-fill text-primary fs-15"></i>
                                {% elseif document.mimeType matches '/spreadsheet/' %}
                                    <i class="bi bi-file-earmark-spreadsheet-fill text-success fs-15"></i>
                                {% elseif document.mimeType matches '/word/' or document.mimeType matches '/document/' %}
                                    <i class="bi bi-file-word-fill text-info fs-15"></i>
                                {% else %}
                                    <i class="bi bi-file-earmark-fill text-secondary fs-15"></i>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_document_show', {id: document.id}) }}" class="text-decoration-none">
                                    <strong>{{ document.originalFilename }}</strong>
                                </a>
                                {{ inheritance.small_badge(document, currentTenant) }}
                                {% if document.description %}
                                <br>
                                <small class="text-muted">{{ document.description|length > 60 ? document.description|slice(0, 60) ~ '...' : document.description }}</small>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-secondary">{{ document.category|capitalize }}</span>
                            </td>
                            <td>
                                {{ document.fileSizeFormatted }}
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle me-1"></i>
                                    {{ document.uploadedBy ? document.uploadedBy.fullName : '-' }}
                                </div>
                            </td>
                            <td>
                                <i class="bi bi-calendar3"></i>
                                {{ document.uploadedAt|date('d.m.Y') }}
                                <br>
                                <small class="text-muted">{{ document.uploadedAt|date('H:i') }}</small>
                            </td>
                            <td class="text-right">
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_document_download', {id: document.id}) }}"
                                       class="btn btn-sm btn-outline-success"
                                       title="{{ 'common.download'|trans }}">
                                        <i class="bi bi-download"></i>
                                    </a>
                                    <a href="{{ path('app_document_show', {id: document.id}) }}"
                                       class="btn btn-sm btn-outline-primary"
                                       title="{{ 'common.details'|trans }}">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_document_edit', {id: document.id}) }}"
                                       class="btn btn-sm btn-outline-secondary"
                                       title="{{ 'common.edit'|trans }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# No Results Message #}
            <div id="noResults" class="text-center p-5 d-none">
                <i class="bi bi-search icon-search-empty"></i>
                <p class="text-muted mt-3">{{ 'document.message.no_results'|trans }}</p>
            </div>

            {# Bulk Action Bar #}
            {% include '_components/_bulk_action_bar.html.twig' with {
                actions: ['delete', 'export']
            } %}
            {% else %}
            {# Empty State #}
            {% include '_components/_empty_state.html.twig' with {
                icon: 'bi-file-earmark-text',
                title: 'document.message.no_documents'|trans,
                description: 'document.message.upload_first'|trans,
                action: {
                    label: 'document.action.upload'|trans,
                    url: path('app_document_new'),
                    icon: 'bi-cloud-upload'
                }
            } %}
            {% endif %}
        </div>
    </div>
</div>

<style>
/* Type Cards Hover Effect */
.type-card {
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: default;
}

.type-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

/* Table Row Hover */
.table tbody tr:hover {
    background-color: rgba(52, 152, 219, 0.05);
    transition: background-color 0.2s;
}

/* Filter Controls */
#categoryFilter:focus,
#documentSearch:focus {
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 0.2rem rgba(60, 141, 188, 0.25);
}

/* Count Badge */
.bulk-selected-badge {
    background: var(--color-secondary);
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    padding: 4px 12px;
    border-radius: 12px;
    margin-left: var(--spacing-md);
}
</style>

<script>
function initializeDocumentFilters() {
    const categoryFilter = document.getElementById('categoryFilter');
    const searchInput = document.getElementById('documentSearch');
    const documentRows = document.querySelectorAll('.document-row');
    const noResults = document.getElementById('noResults');
    const tableBody = document.getElementById('documentTableBody');

    if (!categoryFilter && !searchInput) return; // Elements not present on page

    function filterDocuments() {
        const categoryValue = categoryFilter ? categoryFilter.value.toLowerCase() : '';
        const searchValue = searchInput ? searchInput.value.toLowerCase() : '';
        let visibleCount = 0;

        documentRows.forEach(row => {
            const category = row.dataset.category;
            const name = row.dataset.name;

            const matchesCategory = !categoryValue || category === categoryValue;
            const matchesSearch = !searchValue || name.includes(searchValue);

            if (matchesCategory && matchesSearch) {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        });

        // Show/hide no results message
        if (noResults && tableBody) {
            if (visibleCount === 0 && documentRows.length > 0) {
                tableBody.style.display = 'none';
                noResults.style.display = 'block';
            } else {
                tableBody.style.display = '';
                noResults.style.display = 'none';
            }
        }
    }

    // Attach event listeners (prevent duplicates)
    if (categoryFilter && categoryFilter.dataset.initialized !== 'true') {
        categoryFilter.dataset.initialized = 'true';
        categoryFilter.addEventListener('change', filterDocuments);
    }

    if (searchInput && searchInput.dataset.initialized !== 'true') {
        searchInput.dataset.initialized = 'true';
        searchInput.addEventListener('input', filterDocuments);
    }

    // Update badge visibility when selection changes
    const bulkActionsController = document.querySelector('[data-controller="bulk-actions"]');
    if (bulkActionsController && bulkActionsController.dataset.badgeInitialized !== 'true') {
        bulkActionsController.dataset.badgeInitialized = 'true';
        const countBadge = document.querySelector('[data-bulk-actions-target="countBadge"]');
        const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
                if (mutation.target.classList.contains('bulk-actions-target') && mutation.target.dataset.bulkActionsTarget === 'count') {
                    const count = parseInt(mutation.target.textContent);
                    if (countBadge) {
                        countBadge.style.display = count > 0 ? 'inline-block' : 'none';
                    }
                }
            });
        });

        const countTarget = document.querySelector('[data-bulk-actions-target="count"]');
        if (countTarget && countBadge) {
            observer.observe(countTarget, { childList: true, characterData: true, subtree: true });
            // Initial state
            countBadge.style.display = 'none';
        }
    }
}

// Cleanup before Turbo caches the page to allow re-initialization on back navigation
document.addEventListener('turbo:before-cache', function() {
    const categoryFilter = document.getElementById('categoryFilter');
    const searchInput = document.getElementById('documentSearch');
    const bulkActionsController = document.querySelector('[data-controller="bulk-actions"]');

    if (categoryFilter) delete categoryFilter.dataset.initialized;
    if (searchInput) delete searchInput.dataset.initialized;
    if (bulkActionsController) delete bulkActionsController.dataset.badgeInitialized;
});

// Initialize on both DOMContentLoaded (first page load) and turbo:load (Turbo navigation)
document.addEventListener('DOMContentLoaded', initializeDocumentFilters);
document.addEventListener('turbo:load', initializeDocumentFilters);
</script>
{% endblock %}

{% extends 'base.html.twig' %}
{% import '_macros/cards.html.twig' as cards %}

{% block title %}{{ 'document.title.by_type'|trans({}, 'document') }} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="page-header">
    <div>
        <h1>{{ 'document.title.by_type'|trans({}, 'document') }}</h1>
        <p class="text-muted">{{ 'document.description.by_type'|trans({}, 'document') }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_document_index') }}" class="btn btn-secondary">
            ‚Üê {{ 'common.back'|trans({}, 'messages') }}
        </a>
        <a href="{{ path('app_document_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'document.action.create'|trans({}, 'document') }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('document.stats.total'|trans({}, 'document'), totalDocuments, null, null, null, null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('document.stats.document_types'|trans({}, 'document'), documentTypes|length, null, null, null, null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('document.stats.expiring_soon'|trans({}, 'document'), expiringSoonCount, null, null, 'warning', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('document.stats.avg_per_type'|trans({}, 'document'), documentTypes|length > 0 ? (totalDocuments / documentTypes|length)|round : 0, null, null, null, null) }}
    </div>
</div>

{# Document Type Selection #}
{% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
    {% block card_header %}
        <div class="card-header">
            <h2 class="mb-0">{{ 'document.section.select_type'|trans({}, 'document') }}</h2>
        </div>
    {% endblock %}
    {% block card_body %}
        <form method="get" class="mt-md" data-controller="ui-actions">
            <div class="form-group">
                <label for="type">{{ 'document.field.document_type'|trans({}, 'document') }}</label>
                <select name="type" id="type" class="form-select"
                        data-action="change->ui-actions#autoSubmit"
                        aria-label="{{ 'document.field.document_type'|trans({}, 'document') }}">
                    <option value="">{{ 'document.option.all_types'|trans({}, 'document') }}</option>
                    {% for type in documentTypes %}
                        <option value="{{ type.id }}" {% if selectedType and selectedType.id == type.id %}selected{% endif %}>
                            {{ type.name }} ({{ type.documentCount }})
                        </option>
                    {% endfor %}
                </select>
            </div>
        </form>
    {% endblock %}
{% endembed %}

{# Document Types Overview #}
<h2>{{ 'document.section.types_overview'|trans({}, 'document') }}</h2>

<div class="module-grid mb-4">
    {% for type in documentTypes|slice(0, 6) %}
    {% embed '_components/_card.html.twig' %}
        {% block card_body %}
            <div class="fs-2-mb-sm">{{ type.icon ?? 'üìÑ' }}</div>
            <h3 class="fs-11-mb-sm">{{ type.name }}</h3>
            <p class="text-muted-mb-md">
                {{ type.description|default('-') }}
            </p>

            <div class="stats-grid grid-col-2">
                <div class="stat-item">
                    <strong class="fs-4">{{ type.documentCount }}</strong>
                    <span>{{ 'document.field.documents'|trans({}, 'document') }}</span>
                </div>
                <div class="stat-item">
                    <strong>{{ type.activeDocuments }}</strong>
                    <span>{{ 'document.field.active'|trans({}, 'document') }}</span>
                </div>
            </div>

            <div class="mt-3">
                <a href="{{ path('app_document_by_type', {type: type.id}) }}" class="btn btn-sm">
                    {{ 'common.view_all'|trans({}, 'messages') }}
                </a>
            </div>
        {% endblock %}
    {% endembed %}
    {% else %}
    {% embed '_components/_card.html.twig' with { 'class': 'grid-full' } %}
        {% block card_body %}
            <p class="text-center-muted">
                {{ 'document.message.no_types'|trans({}, 'document') }}
            </p>
        {% endblock %}
    {% endembed %}
    {% endfor %}
</div>

{# Documents by Selected Type #}
{% if selectedType %}
{% embed '_components/_card.html.twig' with { 'noPadding': true } %}
    {% block card_header %}
        <div class="card-header">
            <h2 class="mb-0">{{ selectedType.name }} - {{ 'document.section.documents'|trans({}, 'document') }}</h2>
        </div>
    {% endblock %}
    {% block card_body %}
{% embed '_components/_table.html.twig' with {
    'noMargin': true,
    'responsive': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'document.field.title'|trans({}, 'document') }}</th>
            <th scope="col">{{ 'document.field.version'|trans({}, 'document') }}</th>
            <th scope="col">{{ 'document.field.status'|trans({}, 'document') }}</th>
            <th scope="col">{{ 'document.field.owner'|trans({}, 'document') }}</th>
            <th scope="col">{{ 'document.field.last_updated'|trans({}, 'document') }}</th>
            <th scope="col">{{ 'document.field.review_date'|trans({}, 'document') }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for document in documentsByType %}
        <tr>
            <td>
                <strong>{{ document.title }}</strong>
                {% if document.isControlledDocument %}
                    {% include '_components/_badge.html.twig' with { variant: 'info', content: 'document.badge.controlled'|trans({}, 'document'), class: 'ml-xs' } %}
                {% endif %}
                {% if document.isConfidential %}
                    {% include '_components/_badge.html.twig' with { variant: 'danger', content: 'document.badge.confidential'|trans({}, 'document'), class: 'ml-xs' } %}
                {% endif %}
            </td>
            <td>
                <code>{{ document.version }}</code>
            </td>
            <td>
                <span class="{{ badge_status(document.status) }}">
                    {{ ('document.status.' ~ document.status)|trans({}, 'document') }}
                </span>
            </td>
            <td>{{ document.owner.fullName|default('-') }}</td>
            <td>{{ document.updatedAt|date('d.m.Y') }}</td>
            <td>
                {% if document.reviewDate %}
                    {{ document.reviewDate|date('d.m.Y') }}
                    {% if document.reviewDate < date() %}
                        {% include '_components/_badge.html.twig' with { variant: 'danger', content: 'document.badge.overdue'|trans({}, 'document'), class: 'ml-xs' } %}
                    {% elseif document.reviewDate < date('+30 days') %}
                        {% include '_components/_badge.html.twig' with { variant: 'warning', content: 'document.badge.due_soon'|trans({}, 'document'), class: 'ml-xs' } %}
                    {% endif %}
                {% else %}
                    <span class="text-muted">-</span>
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('app_document_show', {id: document.id}) }}" class="btn btn-sm mr-025">
                    üëÅ {{ 'common.view'|trans({}, 'messages') }}
                </a>
                <a href="{{ path('app_document_download', {id: document.id}) }}" class="btn btn-sm btn-secondary">
                    üì• {{ 'common.download'|trans({}, 'messages') }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center-p-xl-muted">
                {{ 'document.message.no_documents_for_type'|trans({}, 'document') }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
    {% endblock %}
{% endembed %}

{# Type Statistics #}
<div class="module-grid mt-4">
    {% embed '_components/_card.html.twig' %}
        {% block card_header %}
            <div class="card-header">
                <h2 class="mb-0">{{ 'document.section.type_statistics'|trans({}, 'document') }}</h2>
            </div>
        {% endblock %}
        {% block card_body %}
            <div class="stats-grid mt-3 grid-col-1">
                <div class="stat-item">
                    <strong>{{ selectedType.documentCount }}</strong>
                    <span>{{ 'document.stats.total_documents'|trans({}, 'document') }}</span>
                </div>
                <div class="stat-item">
                    <strong>{{ selectedType.activeDocuments }}</strong>
                    <span>{{ 'document.stats.active_documents'|trans({}, 'document') }}</span>
                </div>
                <div class="stat-item">
                    <strong>{{ selectedType.draftDocuments }}</strong>
                    <span>{{ 'document.stats.draft_documents'|trans({}, 'document') }}</span>
                </div>
                <div class="stat-item">
                    <strong>{{ selectedType.overdueReviews }}</strong>
                    <span>{{ 'document.stats.overdue_reviews'|trans({}, 'document') }}</span>
                </div>
            </div>
        {% endblock %}
    {% endembed %}

    {% embed '_components/_card.html.twig' %}
        {% block card_header %}
            <div class="card-header">
                <h2 class="mb-0">{{ 'document.section.recent_activity'|trans({}, 'document') }}</h2>
            </div>
        {% endblock %}
        {% block card_body %}

        {% if selectedType.recentDocuments|length > 0 %}
        <ul class="list-unstyled-mt-md">
            {% for doc in selectedType.recentDocuments|slice(0, 5) %}
            <li class="li-border-item">
                <strong>{{ doc.title }}</strong>
                <br><small class="text-muted">
                    {{ 'document.field.updated'|trans({}, 'document') }}: {{ doc.updatedAt|date('d.m.Y H:i') }}
                </small>
            </li>
            {% endfor %}
        </ul>
        {% else %}
        <p class="text-muted-mt-md">
            {{ 'document.message.no_recent_activity'|trans({}, 'document') }}
        </p>
        {% endif %}
        {% endblock %}
    {% endembed %}
</div>

{% else %}

{# All Document Types Table #}
{% embed '_components/_card.html.twig' with { 'noPadding': true } %}
    {% block card_header %}
        <div class="card-header">
            <h2 class="mb-0">{{ 'document.section.all_types'|trans({}, 'document') }}</h2>
        </div>
    {% endblock %}
    {% block card_body %}
{% embed '_components/_table.html.twig' with {
    'noMargin': true,
    'responsive': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'document.field.type_name'|trans({}, 'document') }}</th>
            <th scope="col">{{ 'document.field.description'|trans({}, 'document') }}</th>
            <th scope="col" class="text-center">{{ 'document.field.total_documents'|trans({}, 'document') }}</th>
            <th scope="col" class="text-center">{{ 'document.field.active'|trans({}, 'document') }}</th>
            <th scope="col" class="text-center">{{ 'document.field.draft'|trans({}, 'document') }}</th>
            <th scope="col" class="text-center">{{ 'document.field.overdue_reviews'|trans({}, 'document') }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for type in documentTypes %}
        <tr>
            <td>
                <strong>{{ type.icon ?? 'üìÑ' }} {{ type.name }}</strong>
            </td>
            <td>
                <small class="text-muted">
                    {{ type.description|default('-') }}
                </small>
            </td>
            <td class="text-center">
                {% include '_components/_badge.html.twig' with { variant: 'info', content: type.documentCount } %}
            </td>
            <td class="text-center">
                {% include '_components/_badge.html.twig' with { variant: 'success', content: type.activeDocuments } %}
            </td>
            <td class="text-center">
                {% include '_components/_badge.html.twig' with { variant: 'secondary', content: type.draftDocuments } %}
            </td>
            <td class="text-center">
                {% if type.overdueReviews > 0 %}
                    {% include '_components/_badge.html.twig' with { variant: 'danger', content: type.overdueReviews } %}
                {% else %}
                    {% include '_components/_badge.html.twig' with { variant: 'success', content: '0' } %}
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('app_document_by_type', {type: type.id}) }}" class="btn btn-sm">
                    üëÅ {{ 'common.view'|trans({}, 'messages') }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center-p-xl-muted">
                {{ 'document.message.no_types'|trans({}, 'document') }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
    {% endblock %}
{% endembed %}

{% endif %}
{% endblock %}

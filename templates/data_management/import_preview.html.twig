{% extends 'base.html.twig' %}

{% block title %}Import Preview - Data Management{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-eye" aria-hidden="true"></i> Import Preview</h1>
        <a href="{{ path('data_import_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle" aria-hidden="true"></i> Cancel
        </a>
    </div>

    {# Statistics #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Total Entities</h5>
                    <p class="display-6 text-primary">{{ stats|length }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Total Records</h5>
                    <p class="display-6 text-success">
                        {% set total = 0 %}
                        {% for entity, count in stats %}
                            {% set total = total + count %}
                        {% endfor %}
                        {{ total }}
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Status</h5>
                    <p class="display-6 text-info small">Preview</p>
                </div>
            </div>
        </div>
    </div>

    {# Entity Breakdown #}
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-list-ul" aria-hidden="true"></i> Import Summary
            </h3>
        </div>
        <div class="card-body">
            {% embed '_components/_table.html.twig' with {
                'class': 'table-hover',
                'noMargin': true,
                'responsive': true
            } %}
                {% block table_head %}
                    <tr>
                        <th scope="col">Entity</th>
                        <th scope="col" class="text-end">Record Count</th>
                    </tr>
                {% endblock %}
                {% block table_body %}
                    {% for entity, count in stats %}
                        <tr>
                            <td>
                                <i class="bi bi-folder" aria-hidden="true"></i>
                                <strong>{{ entity }}</strong>
                            </td>
                            <td class="text-end">
                                <span class="badge bg-primary">{{ count }}</span>
                            </td>
                        </tr>
                    {% endfor %}
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    {# Preview Data (first few records) #}
    {% for entity, records in data %}
        {% if records|length > 0 %}
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white"><h5 class="mb-0">
                        <i class="bi bi-table" aria-hidden="true"></i> {{ entity }} - Preview (showing first {{ records|slice(0, 3)|length }} of {{ records|length }})
                    </h5>
                </div>
                <div class="card-body">
                    {% embed '_components/_table.html.twig' with {
                        'class': 'table-sm table-bordered',
                        'theadClass': 'table-light',
                        'noMargin': true,
                        'responsive': true
                    } %}
                        {% block table_head %}
                            <tr>
                                {% for field in records[0]|keys %}
                                    <th scope="col">{{ field }}</th>
                                {% endfor %}
                            </tr>
                        {% endblock %}
                        {% block table_body %}
                            {% for record in records|slice(0, 3) %}
                                <tr>
                                    {% for value in record %}
                                        <td>
                                            <small>{{ value|slice(0, 50) }}{% if value|length > 50 %}...{% endif %}</small>
                                        </td>
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}
                    {% if records|length > 3 %}
                        <small class="text-muted">... and {{ records|length - 3 }} more records</small>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    {% endfor %}

    {# Action Buttons #}
    <div class="card">
        <div class="card-body">
            <div class="alert alert-warning mb-3">
                <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                <strong>Import functionality is currently in preview mode.</strong>
                The actual import execution is not yet implemented. This preview shows what would be imported.
            </div>

            <form method="post" action="{{ path('data_import_execute') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('data_import_execute') }}">

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-warning btn-lg" disabled>
                        <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> Execute Import (Not Yet Available)
                    </button>
                    <a href="{{ path('data_import_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left" aria-hidden="true"></i> Back to Import
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

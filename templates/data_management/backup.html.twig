{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Backup & Wiederherstellung{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">Sichern und Wiederherstellen von Systemdaten</p>
{% endblock %}

{% block admin_content %}
    {# Create Backup Section #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-cloud-download"></i> Neues Backup erstellen
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Erstellen Sie ein vollständiges Backup aller produktiven Daten. Das Backup enthält alle Benutzerdaten,
                        Risiken, Incidents, Assets, Controls und weitere Daten.
                    </p>
                    <form id="createBackupForm">
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="includeAuditLog" name="include_audit_log" checked>
                                <label class="form-check-label" for="includeAuditLog">
                                    Audit-Logs einschließen
                                    <small class="text-muted d-block">Empfohlen für vollständige Nachvollziehbarkeit</small>
                                </label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="includeUserSessions" name="include_user_sessions">
                                <label class="form-check-label" for="includeUserSessions">
                                    Aktive Benutzersitzungen einschließen
                                    <small class="text-muted d-block">Optional, normalerweise nicht erforderlich</small>
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" id="createBackupBtn">
                            <i class="bi bi-cloud-download me-2"></i>Backup jetzt erstellen
                        </button>
                    </form>
                    <div id="createBackupStatus" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>

    {# Upload Backup Section #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-cloud-upload"></i> Backup hochladen
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Laden Sie eine Backup-Datei hoch, um sie wiederherzustellen oder zu validieren.
                    </p>
                    <form id="uploadBackupForm">
                        <div class="mb-3">
                            <input type="file" class="form-control" id="backupFile" name="backup_file" accept=".json,.gz">
                            <div class="form-text">Erlaubte Formate: .json, .gz</div>
                        </div>
                        <button type="submit" class="btn btn-info" id="uploadBackupBtn">
                            <i class="bi bi-cloud-upload me-2"></i>Hochladen
                        </button>
                    </form>
                    <div id="uploadBackupStatus" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>

    {# Available Backups Section #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-archive"></i> Verfügbare Backups
                    </h5>
                </div>
                <div class="card-body">
                    {% if backups is empty %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            Noch keine Backups vorhanden. Erstellen Sie Ihr erstes Backup oben.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Dateiname</th>
                                        <th scope="col">Erstellt am</th>
                                        <th scope="col">Größe</th>
                                        <th scope="col">Aktionen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for backup in backups %}
                                        <tr data-backup="{{ backup.filename }}">
                                            <td>
                                                <i class="bi bi-file-earmark-zip"></i>
                                                {{ backup.filename }}
                                            </td>
                                            <td>{{ backup.created_at }}</td>
                                            <td>{{ (backup.size / 1024 / 1024)|number_format(2) }} MB</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-primary validate-backup" data-filename="{{ backup.filename }}">
                                                        <i class="bi bi-check-circle"></i> Validieren
                                                    </button>
                                                    <button type="button" class="btn btn-outline-info preview-backup" data-filename="{{ backup.filename }}">
                                                        <i class="bi bi-eye"></i> Vorschau
                                                    </button>
                                                    <a href="{{ path('data_backup_download', {filename: backup.filename}) }}" class="btn btn-outline-success">
                                                        <i class="bi bi-download"></i> Download
                                                    </a>
                                                    <button type="button" class="btn btn-outline-warning restore-backup" data-filename="{{ backup.filename }}">
                                                        <i class="bi bi-arrow-clockwise"></i> Wiederherstellen
                                                    </button>
                                                    <button type="button" class="btn btn-outline-danger delete-backup" data-filename="{{ backup.filename }}">
                                                        <i class="bi bi-trash"></i> Löschen
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Restore Options Modal #}
    <div class="modal fade" id="restoreModal" tabindex="-1" aria-labelledby="restoreModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title" id="restoreModalLabel">
                        <i class="bi bi-exclamation-triangle"></i> Backup wiederherstellen
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Achtung:</strong> Die Wiederherstellung eines Backups kann bestehende Daten überschreiben.
                        Es wird empfohlen, zuerst einen Testlauf durchzuführen.
                    </div>

                    <form id="restoreForm">
                        <input type="hidden" id="restoreFilename" name="filename">

                        <div class="mb-3">
                            <label class="form-label fw-bold">Strategie für fehlende Felder:</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="missing_field_strategy" id="strategyDefault" value="use_default" checked>
                                <label class="form-check-label" for="strategyDefault">
                                    Standardwerte verwenden (empfohlen)
                                    <small class="text-muted d-block">Fehlende Felder werden mit Standardwerten gefüllt</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="missing_field_strategy" id="strategySkip" value="skip_field">
                                <label class="form-check-label" for="strategySkip">
                                    Felder überspringen
                                    <small class="text-muted d-block">Fehlende Felder werden ignoriert</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="missing_field_strategy" id="strategyFail" value="fail">
                                <label class="form-check-label" for="strategyFail">
                                    Abbrechen bei Fehler
                                    <small class="text-muted d-block">Wiederherstellung wird bei fehlenden Feldern abgebrochen</small>
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Strategie für bestehende Daten:</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="existing_data_strategy" id="existingUpdate" value="update" checked>
                                <label class="form-check-label" for="existingUpdate">
                                    Aktualisieren (empfohlen)
                                    <small class="text-muted d-block">Bestehende Einträge werden aktualisiert</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="existing_data_strategy" id="existingSkip" value="skip">
                                <label class="form-check-label" for="existingSkip">
                                    Überspringen
                                    <small class="text-muted d-block">Bestehende Einträge werden nicht verändert</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="existing_data_strategy" id="existingReplace" value="replace">
                                <label class="form-check-label" for="existingReplace">
                                    Ersetzen
                                    <small class="text-muted d-block">Bestehende Einträge werden gelöscht und neu erstellt</small>
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="dryRun" name="dry_run" checked>
                                <label class="form-check-label" for="dryRun">
                                    <strong>Testlauf durchführen (empfohlen)</strong>
                                    <small class="text-muted d-block">Keine Daten werden tatsächlich geändert</small>
                                </label>
                            </div>
                        </div>

                        <div id="restoreStatus"></div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                    <button type="button" class="btn btn-warning" id="confirmRestoreBtn">
                        <i class="bi bi-arrow-clockwise me-2"></i>Wiederherstellung starten
                    </button>
                </div>
            </div>
        </div>
    </div>

    {# Preview Modal #}
    <div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="previewModalLabel">
                        <i class="bi bi-eye"></i> Backup-Vorschau
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="previewContent">
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Laden...</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Bootstrap is available globally via window.bootstrap (loaded in app.js)
            // Create Backup Form
            const createBackupForm = document.getElementById('createBackupForm');
            const createBackupBtn = document.getElementById('createBackupBtn');
            const createBackupStatus = document.getElementById('createBackupStatus');

            createBackupForm.addEventListener('submit', async function(e) {
                e.preventDefault();

                createBackupBtn.disabled = true;
                createBackupBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Backup wird erstellt...';

                const formData = new FormData(this);

                try {
                    const response = await fetch('{{ path('data_backup_create') }}', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        createBackupStatus.innerHTML = `
                            <div class="alert alert-success alert-dismissible fade show">
                                <i class="bi bi-check-circle"></i>
                                <strong>${result.message}</strong><br>
                                Datei: ${result.filename}<br>
                                <small>Gesicherte Einträge: ${Object.values(result.statistics).reduce((a, b) => a + b, 0)}</small>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        `;
                        // Reload page after 2 seconds to show new backup
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        createBackupStatus.innerHTML = `
                            <div class="alert alert-danger alert-dismissible fade show">
                                <i class="bi bi-x-circle"></i> ${result.message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        `;
                    }
                } catch (error) {
                    createBackupStatus.innerHTML = `
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-x-circle"></i> Fehler: ${error.message}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    `;
                } finally {
                    createBackupBtn.disabled = false;
                    createBackupBtn.innerHTML = '<i class="bi bi-cloud-download me-2"></i>Backup jetzt erstellen';
                }
            });

            // Upload Backup Form
            const uploadBackupForm = document.getElementById('uploadBackupForm');
            const uploadBackupBtn = document.getElementById('uploadBackupBtn');
            const uploadBackupStatus = document.getElementById('uploadBackupStatus');

            uploadBackupForm.addEventListener('submit', async function(e) {
                e.preventDefault();

                const fileInput = document.getElementById('backupFile');
                if (!fileInput.files.length) {
                    uploadBackupStatus.innerHTML = `
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> Bitte wählen Sie eine Datei aus.
                        </div>
                    `;
                    return;
                }

                uploadBackupBtn.disabled = true;
                uploadBackupBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Hochladen...';

                const formData = new FormData(this);

                try {
                    const response = await fetch('{{ path('data_backup_upload') }}', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        uploadBackupStatus.innerHTML = `
                            <div class="alert alert-success alert-dismissible fade show">
                                <i class="bi bi-check-circle"></i> ${result.message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        `;
                        fileInput.value = '';
                        // Reload page after 2 seconds
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        uploadBackupStatus.innerHTML = `
                            <div class="alert alert-danger alert-dismissible fade show">
                                <i class="bi bi-x-circle"></i> ${result.message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        `;
                    }
                } catch (error) {
                    uploadBackupStatus.innerHTML = `
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-x-circle"></i> Fehler: ${error.message}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    `;
                } finally {
                    uploadBackupBtn.disabled = false;
                    uploadBackupBtn.innerHTML = '<i class="bi bi-cloud-upload me-2"></i>Hochladen';
                }
            });

            // Validate Backup
            document.querySelectorAll('.validate-backup').forEach(btn => {
                btn.addEventListener('click', async function() {
                    const filename = this.getAttribute('data-filename');
                    const row = this.closest('tr');

                    this.disabled = true;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

                    try {
                        const response = await fetch(`{{ path('data_backup_validate', {filename: '__FILENAME__'}) }}`.replace('__FILENAME__', filename), {
                            method: 'POST'
                        });

                        const result = await response.json();

                        let alertClass = result.valid ? 'alert-success' : 'alert-danger';
                        let icon = result.valid ? 'check-circle' : 'x-circle';

                        let message = `<div class="alert ${alertClass} mt-2">`;
                        message += `<i class="bi bi-${icon}"></i> `;
                        message += result.valid ? '<strong>Backup ist gültig</strong>' : '<strong>Backup ist ungültig</strong>';

                        if (result.metadata) {
                            message += `<br><small>Version: ${result.metadata.version} | Erstellt: ${result.metadata.created_at}</small>`;
                        }

                        if (result.errors && result.errors.length > 0) {
                            message += '<br><strong>Fehler:</strong><ul class="mb-0">';
                            result.errors.forEach(error => {
                                message += `<li>${error}</li>`;
                            });
                            message += '</ul>';
                        }

                        if (result.warnings && result.warnings.length > 0) {
                            message += '<br><strong>Warnungen:</strong><ul class="mb-0">';
                            result.warnings.forEach(warning => {
                                message += `<li>${warning}</li>`;
                            });
                            message += '</ul>';
                        }

                        message += '</div>';

                        // Insert message after row
                        const existingAlert = row.nextElementSibling;
                        if (existingAlert && existingAlert.classList.contains('validation-result')) {
                            existingAlert.remove();
                        }

                        const newRow = row.parentNode.insertRow(row.rowIndex + 1);
                        newRow.classList.add('validation-result');
                        const cell = newRow.insertCell(0);
                        cell.colSpan = 4;
                        cell.innerHTML = message;

                    } catch (error) {
                        alert('Fehler bei der Validierung: ' + error.message);
                    } finally {
                        this.disabled = false;
                        this.innerHTML = '<i class="bi bi-check-circle"></i> Validieren';
                    }
                });
            });

            // Preview Backup
            const previewModal = new window.bootstrap.Modal(document.getElementById('previewModal'));
            document.querySelectorAll('.preview-backup').forEach(btn => {
                btn.addEventListener('click', async function() {
                    const filename = this.getAttribute('data-filename');
                    const previewContent = document.getElementById('previewContent');

                    previewContent.innerHTML = '<div class="text-center"><div class="spinner-border text-primary"></div></div>';
                    previewModal.show();

                    try {
                        const response = await fetch(`{{ path('data_backup_preview', {filename: '__FILENAME__'}) }}`.replace('__FILENAME__', filename));
                        const result = await response.json();

                        if (result.success) {
                            let html = '<div class="table-responsive"><table class="table table-sm">';
                            html += '<thead><tr><th scope="col">Entity</th><th scope="col">Wiederherzustellen</th><th scope="col">Bereits vorhanden</th><th scope="col">Beispieldaten</th></tr></thead><tbody>';

                            for (const [entity, data] of Object.entries(result.preview.entities)) {
                                html += `<tr><td><strong>${entity}</strong></td><td>${data.to_restore}</td><td>${data.existing}</td>`;
                                html += '<td><small>' + JSON.stringify(data.sample[0] || {}, null, 2).substring(0, 100) + '...</small></td></tr>';
                            }

                            html += '</tbody></table></div>';
                            html += `<div class="alert alert-info"><strong>Gesamtanzahl Datensätze:</strong> ${result.preview.total_records}</div>`;

                            if (result.preview.metadata) {
                                html += `<div class="card"><div class="card-body"><h6>Metadata:</h6><pre>${JSON.stringify(result.preview.metadata, null, 2)}</pre></div></div>`;
                            }

                            previewContent.innerHTML = html;
                        } else {
                            previewContent.innerHTML = `<div class="alert alert-danger">${result.message}</div>`;
                        }
                    } catch (error) {
                        previewContent.innerHTML = `<div class="alert alert-danger">Fehler: ${error.message}</div>`;
                    }
                });
            });

            // Restore Backup
            const restoreModal = new window.bootstrap.Modal(document.getElementById('restoreModal'));
            document.querySelectorAll('.restore-backup').forEach(btn => {
                btn.addEventListener('click', function() {
                    const filename = this.getAttribute('data-filename');
                    document.getElementById('restoreFilename').value = filename;
                    document.getElementById('restoreModalLabel').innerHTML = `<i class="bi bi-exclamation-triangle"></i> ${filename} wiederherstellen`;
                    document.getElementById('restoreStatus').innerHTML = '';
                    restoreModal.show();
                });
            });

            document.getElementById('confirmRestoreBtn').addEventListener('click', async function() {
                const filename = document.getElementById('restoreFilename').value;
                const restoreStatus = document.getElementById('restoreStatus');
                const confirmBtn = this;

                confirmBtn.disabled = true;
                confirmBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Wiederherstellung läuft...';

                const formData = new FormData(document.getElementById('restoreForm'));

                try {
                    const response = await fetch(`{{ path('data_backup_restore', {filename: '__FILENAME__'}) }}`.replace('__FILENAME__', filename), {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        let html = `<div class="alert alert-success"><i class="bi bi-check-circle"></i> <strong>${result.message}</strong>`;

                        if (result.statistics) {
                            html += '<br><br><strong>Statistiken:</strong><table class="table table-sm mt-2">';
                            html += '<thead><tr><th scope="col">Entity</th><th scope="col">Erstellt</th><th scope="col">Aktualisiert</th><th scope="col">Übersprungen</th><th scope="col">Fehler</th></tr></thead><tbody>';
                            for (const [entity, stats] of Object.entries(result.statistics)) {
                                html += `<tr><td>${entity}</td><td>${stats.created}</td><td>${stats.updated}</td><td>${stats.skipped}</td><td>${stats.errors}</td></tr>`;
                            }
                            html += '</tbody></table>';
                        }

                        if (result.warnings && result.warnings.length > 0) {
                            html += '<br><strong>Warnungen:</strong><ul>';
                            result.warnings.forEach(warning => {
                                html += `<li>${warning}</li>`;
                            });
                            html += '</ul>';
                        }

                        if (!result.dry_run) {
                            html += '<br><small class="text-muted">Die Seite wird in 3 Sekunden neu geladen...</small>';
                        }

                        html += '</div>';
                        restoreStatus.innerHTML = html;

                        if (!result.dry_run) {
                            setTimeout(() => location.reload(), 3000);
                        }
                    } else {
                        restoreStatus.innerHTML = `<div class="alert alert-danger"><i class="bi bi-x-circle"></i> ${result.message}</div>`;
                    }
                } catch (error) {
                    restoreStatus.innerHTML = `<div class="alert alert-danger"><i class="bi bi-x-circle"></i> Fehler: ${error.message}</div>`;
                } finally {
                    confirmBtn.disabled = false;
                    confirmBtn.innerHTML = '<i class="bi bi-arrow-clockwise me-2"></i>Wiederherstellung starten';
                }
            });

            // Delete Backup
            document.querySelectorAll('.delete-backup').forEach(btn => {
                btn.addEventListener('click', async function() {
                    const filename = this.getAttribute('data-filename');

                    if (!confirm(`Möchten Sie das Backup "${filename}" wirklich löschen?`)) {
                        return;
                    }

                    try {
                        const response = await fetch(`{{ path('data_backup_delete', {filename: '__FILENAME__'}) }}`.replace('__FILENAME__', filename), {
                            method: 'DELETE'
                        });

                        const result = await response.json();

                        if (result.success) {
                            this.closest('tr').remove();
                        } else {
                            alert('Fehler beim Löschen: ' + result.message);
                        }
                    } catch (error) {
                        alert('Fehler: ' + error.message);
                    }
                });
            });
        });
    </script>
{% endblock %}

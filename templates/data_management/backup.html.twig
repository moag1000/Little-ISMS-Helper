{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'data_management.backup.title'|trans({}, 'admin') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'data_management.backup.subtitle'|trans({}, 'admin') }}</p>
{% endblock %}

{% block admin_content %}
    {# Create Backup Section #}
    <div class="row mb-4">
        <div class="col-12">
            {% embed '_components/_card.html.twig' with {borderColor: 'primary'} %}
                {% block card_header %}
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="bi bi-cloud-download" aria-hidden="true"></i> {{ 'data_management.backup.section.create'|trans({}, 'admin') }}
                        </h3>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <p class="text-muted">
                        {{ 'data_management.backup.create.description'|trans({}, 'admin') }}
                    </p>
                    <form id="createBackupForm">
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="includeAuditLog" name="include_audit_log" checked>
                                <label class="form-check-label" for="includeAuditLog">
                                    {{ 'data_management.backup.create.include_audit_log'|trans({}, 'admin') }}
                                    <small class="text-muted d-block">{{ 'data_management.backup.create.include_audit_log_help'|trans({}, 'admin') }}</small>
                                </label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="includeUserSessions" name="include_user_sessions">
                                <label class="form-check-label" for="includeUserSessions">
                                    {{ 'data_management.backup.create.include_sessions'|trans({}, 'admin') }}
                                    <small class="text-muted d-block">{{ 'data_management.backup.create.include_sessions_help'|trans({}, 'admin') }}</small>
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" id="createBackupBtn">
                            <i class="bi bi-cloud-download me-2" aria-hidden="true"></i>{{ 'data_management.backup.action.create_now'|trans({}, 'admin') }}
                        </button>
                    </form>
                    <div id="createBackupStatus" class="mt-3"></div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    {# Upload Backup Section #}
    <div class="row mb-4">
        <div class="col-12">
            {% embed '_components/_card.html.twig' with {borderColor: 'info'} %}
                {% block card_header %}
                    <div class="card-header bg-info text-white">
                        <h3 class="mb-0">
                            <i class="bi bi-cloud-upload" aria-hidden="true"></i> {{ 'data_management.backup.section.upload'|trans({}, 'admin') }}
                        </h3>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <p class="text-muted">
                        {{ 'data_management.backup.upload.description'|trans({}, 'admin') }}
                    </p>
                    <form id="uploadBackupForm">
                        <div class="mb-3">
                            <label for="backupFile" class="form-label">{{ 'data_management.backup.upload.select_file'|trans({}, 'admin') }}</label>
                            <input type="file" class="form-control" id="backupFile" name="backup_file" accept=".json,.gz">
                            <div class="form-text">{{ 'data_management.backup.upload.allowed_formats'|trans({}, 'admin') }}</div>
                        </div>
                        <button type="submit" class="btn btn-info" id="uploadBackupBtn">
                            <i class="bi bi-cloud-upload me-2" aria-hidden="true"></i>{{ 'data_management.backup.action.upload'|trans({}, 'admin') }}
                        </button>
                    </form>
                    <div id="uploadBackupStatus" class="mt-3"></div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    {# Available Backups Section #}
    <div class="row mb-4">
        <div class="col-12">
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header bg-light">
                        <h3 class="mb-0">
                            <i class="bi bi-archive" aria-hidden="true"></i> {{ 'data_management.backup.section.available'|trans({}, 'admin') }}
                        </h3>
                    </div>
                {% endblock %}
                {% block card_body %}
                    {% if backups is empty %}
                        {% include '_components/_empty_state.html.twig' with {
                            icon: 'bi-archive',
                            title: 'data_management.backup.empty.title'|trans({}, 'admin'),
                            description: 'data_management.backup.empty.description'|trans({}, 'admin')
                        } %}
                    {% else %}
                        {% embed '_components/_table.html.twig' with {
                            'class': 'table-hover',
                            'noMargin': true,
                            'responsive': true
                        } %}
                            {% block table_head %}
                                <tr>
                                    <th scope="col">{{ 'data_management.backup.table.filename'|trans({}, 'admin') }}</th>
                                    <th scope="col">{{ 'data_management.backup.table.created_at'|trans({}, 'admin') }}</th>
                                    <th scope="col">{{ 'data_management.backup.table.size'|trans({}, 'admin') }}</th>
                                    <th scope="col">{{ 'data_management.backup.table.actions'|trans({}, 'admin') }}</th>
                                </tr>
                            {% endblock %}
                            {% block table_body %}
                                {% for backup in backups %}
                                    <tr data-backup="{{ backup.filename }}">
                                        <td>
                                            <i class="bi bi-file-earmark-zip" aria-hidden="true"></i>
                                            {{ backup.filename }}
                                        </td>
                                        <td>{{ backup.created_at }}</td>
                                        <td>{{ (backup.size / 1024 / 1024)|number_format(2) }} MB</td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button type="button" class="btn btn-outline-primary validate-backup" data-filename="{{ backup.filename }}">
                                                    <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'data_management.backup.action.validate'|trans({}, 'admin') }}
                                                </button>
                                                <button type="button" class="btn btn-outline-info preview-backup" data-filename="{{ backup.filename }}">
                                                    <i class="bi bi-eye" aria-hidden="true"></i> {{ 'data_management.backup.action.preview'|trans({}, 'admin') }}
                                                </button>
                                                <a href="{{ path('data_backup_download', {filename: backup.filename}) }}" class="btn btn-outline-success">
                                                    <i class="bi bi-download" aria-hidden="true"></i> {{ 'data_management.backup.action.download'|trans({}, 'admin') }}
                                                </a>
                                                <button type="button" class="btn btn-outline-warning restore-backup" data-filename="{{ backup.filename }}">
                                                    <i class="bi bi-arrow-clockwise" aria-hidden="true"></i> {{ 'data_management.backup.action.restore_action'|trans({}, 'admin') }}
                                                </button>
                                                <button type="button" class="btn btn-outline-danger delete-backup" data-filename="{{ backup.filename }}">
                                                    <i class="bi bi-trash" aria-hidden="true"></i> {{ 'data_management.backup.action.delete'|trans({}, 'admin') }}
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endblock %}
                        {% endembed %}
                    {% endif %}
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    {# Restore Options Modal - Using custom modal pattern like global search #}
    <div class="backup-modal d-none" id="restoreModal"
         aria-labelledby="restoreModalLabel"
         role="dialog" aria-modal="true">
        <div class="backup-modal-container backup-modal-lg">
            <div class="backup-modal-content">
                <div class="backup-modal-header bg-warning text-dark">
                    <h4 class="backup-modal-title h5" id="restoreModalLabel">
                        <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'data_management.backup.restore.title'|trans({}, 'admin') }}
                    </h4>
                    <button type="button" class="btn-close backup-modal-close" aria-label="{{ 'common.close'|trans({}, 'messages') }}"></button>
                </div>
                <div class="backup-modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill" aria-hidden="true"></i>
                        <strong>{{ 'data_management.backup.restore.warning'|trans({}, 'admin') }}:</strong> {{ 'data_management.backup.restore.warning_text'|trans({}, 'admin') }}
                    </div>

                    <form id="restoreForm">
                        <input type="hidden" id="restoreFilename" name="filename">

                        <div class="mb-3">
                            <label class="form-label fw-bold" for="strategyDefault">{{ 'data_management.backup.restore.missing_field_strategy'|trans({}, 'admin') }}:</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="missing_field_strategy" id="strategyDefault" value="use_default" checked>
                                <label class="form-check-label" for="strategyDefault">
                                    {{ 'data_management.backup.restore.strategy_default'|trans({}, 'admin') }}
                                    <small class="text-muted d-block">{{ 'data_management.backup.restore.strategy_default_help'|trans({}, 'admin') }}</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="missing_field_strategy" id="strategySkip" value="skip_field">
                                <label class="form-check-label" for="strategySkip">
                                    {{ 'data_management.backup.restore.strategy_skip'|trans({}, 'admin') }}
                                    <small class="text-muted d-block">{{ 'data_management.backup.restore.strategy_skip_help'|trans({}, 'admin') }}</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="missing_field_strategy" id="strategyFail" value="fail">
                                <label class="form-check-label" for="strategyFail">
                                    {{ 'data_management.backup.restore.strategy_fail'|trans({}, 'admin') }}
                                    <small class="text-muted d-block">{{ 'data_management.backup.restore.strategy_fail_help'|trans({}, 'admin') }}</small>
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold" for="existingUpdate">{{ 'data_management.backup.restore.existing_data_strategy'|trans({}, 'admin') }}:</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="existing_data_strategy" id="existingUpdate" value="update" checked>
                                <label class="form-check-label" for="existingUpdate">
                                    {{ 'data_management.backup.restore.existing_update'|trans({}, 'admin') }}
                                    <small class="text-muted d-block">{{ 'data_management.backup.restore.existing_update_help'|trans({}, 'admin') }}</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="existing_data_strategy" id="existingSkip" value="skip">
                                <label class="form-check-label" for="existingSkip">
                                    {{ 'data_management.backup.restore.existing_skip'|trans({}, 'admin') }}
                                    <small class="text-muted d-block">{{ 'data_management.backup.restore.existing_skip_help'|trans({}, 'admin') }}</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="existing_data_strategy" id="existingReplace" value="replace">
                                <label class="form-check-label" for="existingReplace">
                                    {{ 'data_management.backup.restore.existing_replace'|trans({}, 'admin') }}
                                    <small class="text-muted d-block">{{ 'data_management.backup.restore.existing_replace_help'|trans({}, 'admin') }}</small>
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="clearBeforeRestore" name="clear_before_restore">
                                <label class="form-check-label" for="clearBeforeRestore">
                                    <strong class="text-danger">{{ 'data_management.backup.restore.clear_before'|trans({}, 'admin') }}</strong>
                                    <small class="text-muted d-block">{{ 'data_management.backup.restore.clear_before_help'|trans({}, 'admin') }}</small>
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="adminPassword" class="form-label">
                                <strong>{{ 'data_management.backup.restore.admin_password'|trans({}, 'admin') }}</strong>
                            </label>
                            <input type="password" class="form-control" id="adminPassword" name="admin_password" placeholder="{{ 'data_management.backup.restore.admin_password_placeholder'|trans({}, 'admin') }}">
                            <div class="form-text">
                                <i class="bi bi-info-circle" aria-hidden="true"></i>
                                {{ 'data_management.backup.restore.admin_password_help'|trans({}, 'admin') }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="dryRun" name="dry_run" checked>
                                <label class="form-check-label" for="dryRun">
                                    <strong>{{ 'data_management.backup.restore.dry_run'|trans({}, 'admin') }}</strong>
                                    <small class="text-muted d-block">{{ 'data_management.backup.restore.dry_run_help'|trans({}, 'admin') }}</small>
                                </label>
                            </div>
                        </div>

                        <div id="restoreStatus"></div>
                    </form>
                </div>
                <div class="backup-modal-footer">
                    <button type="button" class="btn btn-secondary backup-modal-close">{{ 'common.cancel'|trans({}, 'messages') }}</button>
                    <button type="button" class="btn btn-warning" id="confirmRestoreBtn">
                        <i class="bi bi-arrow-clockwise me-2" aria-hidden="true"></i>{{ 'data_management.backup.action.start_restore'|trans({}, 'admin') }}
                    </button>
                </div>
            </div>
        </div>
    </div>

    {# Preview Modal - Using custom modal pattern like global search #}
    <div class="backup-modal d-none" id="previewModal"
         aria-labelledby="previewModalLabel"
         role="dialog" aria-modal="true">
        <div class="backup-modal-container backup-modal-xl">
            <div class="backup-modal-content">
                <div class="backup-modal-header">
                    <h5 class="backup-modal-title" id="previewModalLabel">
                        <i class="bi bi-eye" aria-hidden="true"></i> {{ 'data_management.backup.preview.title'|trans({}, 'admin') }}
                    </h5>
                    <button type="button" class="btn-close backup-modal-close" aria-label="{{ 'common.close'|trans({}, 'messages') }}"></button>
                </div>
                <div class="backup-modal-body">
                    <div id="previewContent">
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">{{ 'data_management.backup.message.loading'|trans({}, 'admin') }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="backup-modal-footer">
                    <button type="button" class="btn btn-secondary backup-modal-close">{{ 'common.close'|trans({}, 'messages') }}</button>
                </div>
            </div>
        </div>
    </div>

    {# Custom Modal CSS - Same pattern as global-search-modal #}
    <style>
        .backup-modal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 9999;
            display: flex;
            align-items: flex-start;
            padding-top: 5vh;
            justify-content: center;
            backdrop-filter: blur(5px);
        }

        .backup-modal.d-none {
            display: none !important;
        }

        .backup-modal-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            max-width: 600px;
            width: 90%;
            max-height: 85vh;
            display: flex;
            flex-direction: column;
            animation: backupModalSlideIn 0.3s ease-out;
            overflow: hidden;
        }

        .backup-modal-lg {
            max-width: 800px;
        }

        .backup-modal-xl {
            max-width: 1140px;
        }

        @keyframes backupModalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .backup-modal-content {
            display: flex;
            flex-direction: column;
            height: 100%;
            max-height: 85vh;
            overflow: hidden;
        }

        .backup-modal-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem;
            border-bottom: 1px solid var(--border-color);
            border-radius: 12px 12px 0 0;
            flex-shrink: 0;
        }

        .backup-modal-title {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 500;
        }

        .backup-modal-body {
            padding: 1rem;
            overflow-y: auto;
            flex: 1;
            min-height: 0;
        }

        .backup-modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 0.5rem;
            padding: 1rem;
            border-top: 1px solid var(--border-color);
            border-radius: 0 0 12px 12px;
            background: var(--bg-secondary);
            flex-shrink: 0;
        }
    </style>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Use turbo:load for Turbo navigation compatibility, with DOMContentLoaded fallback
        function initBackupPage() {
            // Prevent re-initialization
            if (window.backupPageInitialized) {
                return;
            }

            // Check if we're on the backup page (elements exist)
            const createBackupForm = document.getElementById('createBackupForm');

            if (!createBackupForm) {
                // Not on backup page, skip initialization
                return;
            }

            window.backupPageInitialized = true;

            // Bootstrap is available globally via window.bootstrap (loaded in app.js)
            // Create Backup Form
            const createBackupBtn = document.getElementById('createBackupBtn');
            const createBackupStatus = document.getElementById('createBackupStatus');

            createBackupForm.addEventListener('submit', async function(e) {
                e.preventDefault();

                createBackupBtn.disabled = true;
                createBackupBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>{{ 'data_management.backup.action.creating'|trans({}, 'admin') }}';

                const formData = new FormData(this);

                try {
                    const response = await fetch('{{ path('data_backup_create') }}', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        createBackupStatus.innerHTML = `
                            <div class="alert alert-success alert-dismissible fade show">
                                <i class="bi bi-check-circle" aria-hidden="true"></i>
                                <strong>${result.message}</strong><br>
                                {{ 'data_management.backup.message.file'|trans({}, 'admin') }}: ${result.filename}<br>
                                <small>{{ 'data_management.backup.message.saved_entries'|trans({}, 'admin') }}: ${Object.values(result.statistics).reduce((a, b) => a + b, 0)}</small>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                            </div>
                        `;
                        // Reload page after 2 seconds to show new backup (Turbo-compatible)
                        setTimeout(() => {
                            if (window.Turbo) {
                                window.Turbo.visit(window.location.href, { action: 'replace' });
                            } else {
                                location.reload();
                            }
                        }, 2000);
                    } else {
                        createBackupStatus.innerHTML = `
                            <div class="alert alert-danger alert-dismissible fade show">
                                <i class="bi bi-x-circle" aria-hidden="true"></i> ${result.message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                            </div>
                        `;
                    }
                } catch (error) {
                    createBackupStatus.innerHTML = `
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'data_management.backup.message.error'|trans({}, 'admin') }}: ${error.message}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                        </div>
                    `;
                } finally {
                    createBackupBtn.disabled = false;
                    createBackupBtn.innerHTML = '<i class="bi bi-cloud-download me-2" aria-hidden="true"></i>{{ 'data_management.backup.action.create_now'|trans({}, 'admin') }}';
                }
            });

            // Upload Backup Form
            const uploadBackupForm = document.getElementById('uploadBackupForm');
            const uploadBackupBtn = document.getElementById('uploadBackupBtn');
            const uploadBackupStatus = document.getElementById('uploadBackupStatus');

            uploadBackupForm.addEventListener('submit', async function(e) {
                e.preventDefault();

                const fileInput = document.getElementById('backupFile');
                if (!fileInput.files.length) {
                    uploadBackupStatus.innerHTML = `
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'data_management.backup.message.select_file'|trans({}, 'admin') }}
                        </div>
                    `;
                    return;
                }

                uploadBackupBtn.disabled = true;
                uploadBackupBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>{{ 'data_management.backup.action.uploading'|trans({}, 'admin') }}';

                const formData = new FormData(this);

                try {
                    const response = await fetch('{{ path('data_backup_upload') }}', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        uploadBackupStatus.innerHTML = `
                            <div class="alert alert-success alert-dismissible fade show">
                                <i class="bi bi-check-circle" aria-hidden="true"></i> ${result.message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                            </div>
                        `;
                        fileInput.value = '';
                        // Reload page after 2 seconds (Turbo-compatible)
                        setTimeout(() => {
                            if (window.Turbo) {
                                window.Turbo.visit(window.location.href, { action: 'replace' });
                            } else {
                                location.reload();
                            }
                        }, 2000);
                    } else {
                        uploadBackupStatus.innerHTML = `
                            <div class="alert alert-danger alert-dismissible fade show">
                                <i class="bi bi-x-circle" aria-hidden="true"></i> ${result.message}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                            </div>
                        `;
                    }
                } catch (error) {
                    uploadBackupStatus.innerHTML = `
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'data_management.backup.message.error'|trans({}, 'admin') }}: ${error.message}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                        </div>
                    `;
                } finally {
                    uploadBackupBtn.disabled = false;
                    uploadBackupBtn.innerHTML = '<i class="bi bi-cloud-upload me-2" aria-hidden="true"></i>{{ 'data_management.backup.action.upload'|trans({}, 'admin') }}';
                }
            });

            // Validate Backup
            document.querySelectorAll('.validate-backup').forEach(btn => {
                btn.addEventListener('click', async function() {
                    const filename = this.getAttribute('data-filename');
                    const row = this.closest('tr');

                    this.disabled = true;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

                    try {
                        const response = await fetch(`{{ path('data_backup_validate', {filename: '__FILENAME__'}) }}`.replace('__FILENAME__', filename), {
                            method: 'POST'
                        });

                        const result = await response.json();

                        let alertClass = result.valid ? 'alert-success' : 'alert-danger';
                        let icon = result.valid ? 'check-circle' : 'x-circle';

                        let message = `<div class="alert ${alertClass} mt-2">`;
                        message += `<i class="bi bi-${icon}" aria-hidden="true"></i> `;
                        message += result.valid ? '<strong>{{ 'data_management.backup.validation.valid'|trans({}, 'admin') }}</strong>' : '<strong>{{ 'data_management.backup.validation.invalid'|trans({}, 'admin') }}</strong>';

                        if (result.metadata) {
                            message += `<br><small>{{ 'data_management.backup.validation.version'|trans({}, 'admin') }}: ${result.metadata.version} | {{ 'data_management.backup.validation.created'|trans({}, 'admin') }}: ${result.metadata.created_at}</small>`;
                        }

                        if (result.errors && result.errors.length > 0) {
                            message += '<br><strong>{{ 'data_management.backup.validation.errors'|trans({}, 'admin') }}:</strong><ul class="mb-0">';
                            result.errors.forEach(error => {
                                message += `<li>${error}</li>`;
                            });
                            message += '</ul>';
                        }

                        if (result.warnings && result.warnings.length > 0) {
                            message += '<br><strong>{{ 'data_management.backup.validation.warnings'|trans({}, 'admin') }}:</strong><ul class="mb-0">';
                            result.warnings.forEach(warning => {
                                message += `<li>${warning}</li>`;
                            });
                            message += '</ul>';
                        }

                        message += '</div>';

                        // Insert message after row
                        const existingAlert = row.nextElementSibling;
                        if (existingAlert && existingAlert.classList.contains('validation-result')) {
                            existingAlert.remove();
                        }

                        // Use sectionRowIndex for tbody-relative index, +1 to insert after current row
                        const newRow = row.parentNode.insertRow(row.sectionRowIndex + 1);
                        newRow.classList.add('validation-result');
                        const cell = newRow.insertCell(0);
                        cell.colSpan = 4;
                        cell.innerHTML = message;

                    } catch (error) {
                        alert('{{ 'data_management.backup.message.validation_error'|trans({}, 'admin') }}: ' + error.message);
                    } finally {
                        this.disabled = false;
                        this.innerHTML = '<i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'data_management.backup.action.validate'|trans({}, 'admin') }}';
                    }
                });
            });

            // Preview Backup - Using simple d-none toggle like global search modal
            const previewModalEl = document.getElementById('previewModal');
            const restoreModalEl = document.getElementById('restoreModal');

            // Simple modal show/hide using d-none class (like global search modal)
            function showModal(modalId) {
                const modalEl = document.getElementById(modalId);
                if (!modalEl) {
                    alert('{{ 'data_management.backup.message.modal_not_found'|trans({}, 'admin') }}: ' + modalId);
                    return false;
                }

                // Simply remove d-none - CSS handles everything else
                modalEl.classList.remove('d-none');
                modalEl.setAttribute('aria-hidden', 'false');
                document.body.style.overflow = 'hidden';

                // Close on backdrop click
                modalEl.onclick = function(e) {
                    if (e.target === modalEl) {
                        hideModal(modalId);
                    }
                };

                // Close on ESC key
                const escHandler = function(e) {
                    if (e.key === 'Escape') {
                        hideModal(modalId);
                        document.removeEventListener('keydown', escHandler);
                    }
                };
                document.addEventListener('keydown', escHandler);
                modalEl._escHandler = escHandler;

                return true;
            }

            function hideModal(modalId) {
                const modalEl = document.getElementById(modalId);
                if (!modalEl) return;

                modalEl.classList.add('d-none');
                modalEl.setAttribute('aria-hidden', 'true');
                document.body.style.overflow = '';

                // Remove ESC handler
                if (modalEl._escHandler) {
                    document.removeEventListener('keydown', modalEl._escHandler);
                    modalEl._escHandler = null;
                }
            }

            // Close buttons
            document.querySelectorAll('.backup-modal-close').forEach(btn => {
                btn.addEventListener('click', function() {
                    const modal = this.closest('.backup-modal');
                    if (modal) {
                        hideModal(modal.id);
                    }
                });
            });

            const previewButtons = document.querySelectorAll('.preview-backup');
            const restoreButtons = document.querySelectorAll('.restore-backup');

            previewButtons.forEach(btn => {
                btn.addEventListener('click', async function(event) {
                    event.preventDefault();
                    event.stopPropagation();

                    const filename = this.getAttribute('data-filename');
                    const previewContent = document.getElementById('previewContent');

                    previewContent.innerHTML = '<div class="text-center"><div class="spinner-border text-primary"></div></div>';

                    if (!showModal('previewModal')) {
                        return;
                    }

                    try {
                        const response = await fetch(`{{ path('data_backup_preview', {filename: '__FILENAME__'}) }}`.replace('__FILENAME__', filename));
                        const result = await response.json();

                        if (result.success) {
                            let html = '<div class="table-responsive"><table class="table table-sm">';
                            html += '<thead><tr><th scope="col">{{ 'data_management.backup.preview.entity'|trans({}, 'admin') }}</th><th scope="col">{{ 'data_management.backup.preview.to_restore'|trans({}, 'admin') }}</th><th scope="col">{{ 'data_management.backup.preview.existing'|trans({}, 'admin') }}</th><th scope="col">{{ 'data_management.backup.preview.sample_data'|trans({}, 'admin') }}</th></tr></thead><tbody>';

                            for (const [entity, data] of Object.entries(result.preview.entities)) {
                                html += `<tr><td><strong>${entity}</strong></td><td>${data.to_restore}</td><td>${data.existing}</td>`;
                                html += '<td><small>' + JSON.stringify(data.sample[0] || {}, null, 2).substring(0, 100) + '...</small></td></tr>';
                            }

                            html += '</tbody></table></div>';
                            html += `<div class="alert alert-info"><strong>{{ 'data_management.backup.preview.total_records'|trans({}, 'admin') }}:</strong> ${result.preview.total_records}</div>`;

                            if (result.preview.metadata) {
                                html += `<div class="card"><div class="card-body"><h4>{{ 'data_management.backup.preview.metadata'|trans({}, 'admin') }}:</h4><pre>${JSON.stringify(result.preview.metadata, null, 2)}</pre></div></div>`;
                            }

                            previewContent.innerHTML = html;
                        } else {
                            previewContent.innerHTML = `<div class="alert alert-danger">${result.message}</div>`;
                        }
                    } catch (error) {
                        previewContent.innerHTML = `<div class="alert alert-danger">{{ 'data_management.backup.message.error'|trans({}, 'admin') }}: ${error.message}</div>`;
                    }
                });
            });

            // Restore Backup
            restoreButtons.forEach(btn => {
                btn.addEventListener('click', function(event) {
                    event.preventDefault();
                    event.stopPropagation();

                    const filename = this.getAttribute('data-filename');
                    document.getElementById('restoreFilename').value = filename;
                    document.getElementById('restoreModalLabel').innerHTML = `<i class="bi bi-exclamation-triangle" aria-hidden="true"></i> ${filename} {{ 'data_management.backup.action.restore'|trans({}, 'admin') }}`;
                    document.getElementById('restoreStatus').innerHTML = '';

                    showModal('restoreModal');
                });
            });

            document.getElementById('confirmRestoreBtn')?.addEventListener('click', async function() {
                const filename = document.getElementById('restoreFilename').value;
                const restoreStatus = document.getElementById('restoreStatus');
                const confirmBtn = this;

                confirmBtn.disabled = true;
                confirmBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>{{ 'data_management.backup.action.restoring'|trans({}, 'admin') }}';

                const formData = new FormData(document.getElementById('restoreForm'));

                try {
                    const response = await fetch(`{{ path('data_backup_restore', {filename: '__FILENAME__'}) }}`.replace('__FILENAME__', filename), {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        let html = `<div class="alert alert-success"><i class="bi bi-check-circle" aria-hidden="true"></i> <strong>${result.message}</strong>`;

                        if (result.statistics) {
                            html += '<br><br><strong>{{ 'data_management.backup.restore.statistics'|trans({}, 'admin') }}:</strong><table class="table table-sm mt-2">';
                            html += '<thead><tr><th scope="col">{{ 'data_management.backup.restore.stat_entity'|trans({}, 'admin') }}</th><th scope="col">{{ 'data_management.backup.restore.stat_created'|trans({}, 'admin') }}</th><th scope="col">{{ 'data_management.backup.restore.stat_updated'|trans({}, 'admin') }}</th><th scope="col">{{ 'data_management.backup.restore.stat_skipped'|trans({}, 'admin') }}</th><th scope="col">{{ 'data_management.backup.restore.stat_errors'|trans({}, 'admin') }}</th></tr></thead><tbody>';
                            for (const [entity, stats] of Object.entries(result.statistics)) {
                                html += `<tr><td>${entity}</td><td>${stats.created}</td><td>${stats.updated}</td><td>${stats.skipped}</td><td>${stats.errors}</td></tr>`;
                            }
                            html += '</tbody></table>';
                        }

                        if (result.warnings && result.warnings.length > 0) {
                            html += '<br><strong>{{ 'data_management.backup.validation.warnings'|trans({}, 'admin') }}:</strong><ul>';
                            result.warnings.forEach(warning => {
                                html += `<li>${warning}</li>`;
                            });
                            html += '</ul>';
                        }

                        if (!result.dry_run) {
                            html += '<br><small class="text-muted">{{ 'data_management.backup.restore.page_reload'|trans({}, 'admin') }}</small>';
                        }

                        html += '</div>';
                        restoreStatus.innerHTML = html;

                        if (!result.dry_run) {
                            setTimeout(() => location.reload(), 3000);
                        }
                    } else {
                        restoreStatus.innerHTML = `<div class="alert alert-danger"><i class="bi bi-x-circle" aria-hidden="true"></i> ${result.message}</div>`;
                    }
                } catch (error) {
                    restoreStatus.innerHTML = `<div class="alert alert-danger"><i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'data_management.backup.message.error'|trans({}, 'admin') }}: ${error.message}</div>`;
                } finally {
                    confirmBtn.disabled = false;
                    confirmBtn.innerHTML = '<i class="bi bi-arrow-clockwise me-2" aria-hidden="true"></i>{{ 'data_management.backup.action.start_restore'|trans({}, 'admin') }}';
                }
            });

            // Delete Backup
            document.querySelectorAll('.delete-backup').forEach(btn => {
                btn.addEventListener('click', async function() {
                    const filename = this.getAttribute('data-filename');

                    if (!confirm('{{ 'data_management.backup.confirm_delete'|trans({'%filename%': ''}, 'admin') }}' + filename + '?')) {
                        return;
                    }

                    try {
                        const response = await fetch(`{{ path('data_backup_delete', {filename: '__FILENAME__'}) }}`.replace('__FILENAME__', filename), {
                            method: 'DELETE'
                        });

                        const result = await response.json();

                        if (result.success) {
                            this.closest('tr').remove();
                        } else {
                            alert('{{ 'data_management.backup.message.delete_error'|trans({}, 'admin') }}: ' + result.message);
                        }
                    } catch (error) {
                        alert('{{ 'data_management.backup.message.error'|trans({}, 'admin') }}: ' + error.message);
                    }
                });
            });
        }

        // Initialize on turbo:load (for Turbo navigation) OR on immediate/DOMContentLoaded
        // But NOT both - prevent double initialization
        // Use window-scoped flag to prevent redeclaration errors during Turbo navigation
        if (!window.backupTurboLoadRegistered) {
            window.backupTurboLoadRegistered = false;
        }

        // Helper function to wait for Bootstrap to be available
        function waitForBootstrap(callback, maxAttempts = 10) {
            let attempts = 0;
            const checkBootstrap = () => {
                attempts++;
                if (window.bootstrap && window.bootstrap.Modal) {
                    callback();
                } else if (attempts < maxAttempts) {
                    setTimeout(checkBootstrap, 100);
                } else {
                    console.error('Bootstrap could not be loaded after', maxAttempts, 'attempts');
                    callback(); // Initialize anyway, will show errors when trying to use modals
                }
            };
            checkBootstrap();
        }

        document.addEventListener('turbo:load', function() {
            window.backupTurboLoadRegistered = true;
            window.backupPageInitialized = false; // Reset on each Turbo navigation
            waitForBootstrap(initBackupPage);
        });

        // Only use DOMContentLoaded/immediate if turbo:load hasn't fired yet
        // Give turbo:load 100ms to fire first
        setTimeout(function() {
            if (!window.backupTurboLoadRegistered && !window.backupPageInitialized) {
                waitForBootstrap(initBackupPage);
            }
        }, 100);
    </script>

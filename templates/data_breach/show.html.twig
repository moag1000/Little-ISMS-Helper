{% extends 'base.html.twig' %}
{% trans_default_domain 'privacy' %}

{% block title %}{{ 'privacy.data_breach.show.page_title'|trans({'%ref%': breach.referenceNumber}, 'privacy') }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'privacy.breadcrumb.privacy'|trans({}, 'privacy'), icon: 'bi-shield-lock' },
            { label: 'privacy.breadcrumb.data_breaches'|trans({}, 'privacy'), url: path('app_data_breach_index') },
            { label: breach.referenceNumber }
        ]
    } %}

    {% include '_components/_page_header.html.twig' with {
        title: breach.title,
        subtitle: breach.referenceNumber ~ ' - ' ~ breach.status|replace({'_': ' '})|title,
        icon: 'bi-exclamation-triangle-fill',
        actions: [
            { label: 'privacy.data_breach.action.export_pdf'|trans({}, 'privacy'), url: path('app_data_breach_export_pdf', {id: breach.id}), variant: 'success', icon: 'bi-file-pdf' },
            { label: 'common.back_to_list'|trans({}, 'messages'), url: path('app_data_breach_index'), variant: 'secondary', icon: 'bi-arrow-left' }
        ]
    } %}

    {# CRITICAL: 72-Hour Deadline Alert #}
    {% if breach.requiresAuthorityNotification and not breach.supervisoryAuthorityNotifiedAt %}
        {% set hours = breach.hoursUntilAuthorityDeadline %}
        {% if hours < 0 %}
            <div class="alert alert-danger" role="alert">
                <div class="alert-heading fw-bold"><i class="bi bi-exclamation-triangle-fill" aria-hidden="true"></i> {{ 'privacy.data_breach.alert.overdue_title'|trans({}, 'privacy') }}</div>
                <p>
                    {{ 'privacy.data_breach.alert.overdue_text'|trans({'%count%': 1}, 'privacy')|raw }}
                </p>
                <hr>
                <p class="mb-0">
                    <strong>{{ 'privacy.data_breach.field.detected'|trans({}, 'privacy') }}:</strong> {{ breach.incident.detectedAt|date('Y-m-d H:i') }} ·
                    <strong>{{ 'privacy.data_breach.field.deadline'|trans({}, 'privacy') }}:</strong> {{ breach.authorityNotificationDeadline|date('Y-m-d H:i') }}
                </p>
            </div>
        {% elseif hours < 24 %}
            <div class="alert alert-warning" role="alert">
                <div class="alert-heading fw-bold"><i class="bi bi-clock" aria-hidden="true"></i> {{ 'privacy.data_breach.score.timeliness'|trans({}, 'privacy') }}</div>
                <p>
                    {{ 'privacy.data_breach.field.notification_required'|trans({}, 'privacy') }} {{ 'privacy.data_breach.field.within'|default('within') }} <strong>{{ hours|number_format }} {{ 'privacy.data_breach.field.hours'|trans({}, 'privacy') }}</strong>.
                </p>
                <p class="mb-0">
                    <strong>{{ 'privacy.data_breach.field.detected'|trans({}, 'privacy') }}:</strong> {{ breach.incident.detectedAt|date('Y-m-d H:i') }} ·
                    <strong>{{ 'privacy.data_breach.field.deadline'|trans({}, 'privacy') }}:</strong> {{ breach.authorityNotificationDeadline|date('Y-m-d H:i') }}
                </p>
            </div>
        {% else %}
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle" aria-hidden="true"></i>
                {{ 'privacy.data_breach.field.notification_required'|trans({}, 'privacy') }} <strong>{{ hours|number_format }} {{ 'privacy.data_breach.field.hours'|trans({}, 'privacy') }}</strong>
                ({{ 'privacy.data_breach.field.deadline'|trans({}, 'privacy') }}: {{ breach.authorityNotificationDeadline|date('Y-m-d H:i') }}).
            </div>
        {% endif %}
    {% endif %}

    {# Status & Workflow Actions #}
    <div class="card mb-4">
        <div class="card-header"><h2 class="mb-0"><i class="bi bi-diagram-3" aria-hidden="true"></i> {{ 'privacy.data_breach.section.status_workflow'|trans({}, 'privacy') }}</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>{{ 'privacy.data_breach.field.status'|trans({}, 'privacy') }}:</strong>
                        {% set status_class = {
                            'draft': 'secondary',
                            'under_assessment': 'info',
                            'authority_notified': 'success',
                            'subjects_notified': 'success',
                            'closed': 'dark'
                        }[breach.status] %}
                        <span class="badge bg-{{ status_class }}">{{ ('privacy.data_breach.status.' ~ breach.status)|trans({}, 'privacy') }}</span>
                    </p>
                    <p><strong>{{ 'privacy.data_breach.field.completeness'|trans({}, 'privacy') }}:</strong> {{ breach.completenessPercentage }}%</p>
                    {% if breach.assessor %}
                        <p><strong>{{ 'privacy.data_breach.field.assessor'|trans({}, 'privacy') }}:</strong> {{ breach.assessor.firstName }} {{ breach.assessor.lastName }}</p>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    {% if breach.affectedDataSubjects %}
                        <p><strong>{{ 'privacy.data_breach.field.affected_subjects'|trans({}, 'privacy') }}:</strong> {{ breach.affectedDataSubjects|number_format }}</p>
                    {% endif %}
                    {% if breach.riskLevel %}
                        <p><strong>{{ 'privacy.data_breach.field.risk_level'|trans({}, 'privacy') }}:</strong>
                            {% set risk_class = {'low': 'success', 'medium': 'info', 'high': 'warning', 'critical': 'danger'}[breach.riskLevel] %}
                            <span class="badge bg-{{ risk_class }}">{{ ('privacy.data_breach.risk.' ~ breach.riskLevel)|trans({}, 'privacy') }}</span>
                        </p>
                    {% endif %}
                    <p><strong>{{ 'privacy.data_breach.field.created'|trans({}, 'privacy') }}:</strong> {{ breach.createdAt|date('Y-m-d H:i') }}</p>
                </div>
            </div>

            {# Workflow Actions #}
            <div class="mt-3">
                {% if breach.status == 'draft' and breach.isComplete %}
                    <form action="{{ path('app_data_breach_submit_for_assessment', {id: breach.id}) }}" method="post" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('submit' ~ breach.id) }}">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send" aria-hidden="true"></i> {{ 'privacy.data_breach.action.submit_for_assessment'|trans({}, 'privacy') }}
                        </button>
                    </form>
                {% endif %}

                {% if breach.status in ['draft', 'under_assessment'] %}
                    <a href="{{ path('app_data_breach_edit', {id: breach.id}) }}" class="btn btn-secondary">
                        <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'privacy.data_breach.action.edit'|trans({}, 'privacy') }}
                    </a>
                {% endif %}

                {% if is_granted('ROLE_AUDITOR') and breach.requiresAuthorityNotification and not breach.supervisoryAuthorityNotifiedAt %}
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#authorityModal">
                        <i class="bi bi-building" aria-hidden="true"></i> {{ 'privacy.data_breach.action.notify_authority'|trans({}, 'privacy') }}
                    </button>
                {% endif %}

                {% if is_granted('ROLE_AUDITOR') and breach.requiresSubjectNotification and not breach.dataSubjectsNotifiedAt and breach.supervisoryAuthorityNotifiedAt %}
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#subjectsModal">
                        <i class="bi bi-people" aria-hidden="true"></i> {{ 'privacy.data_breach.action.notify_subjects'|trans({}, 'privacy') }}
                    </button>
                {% endif %}

                {% if is_granted('ROLE_AUDITOR') and not breach.requiresSubjectNotification and not breach.noSubjectNotificationReason %}
                    <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#exemptionModal">
                        <i class="bi bi-shield-check" aria-hidden="true"></i> {{ 'privacy.data_breach.action.record_exemption'|trans({}, 'privacy') }}
                    </button>
                {% endif %}

                {% if is_granted('ROLE_AUDITOR') and breach.status in ['authority_notified', 'subjects_notified'] %}
                    <form action="{{ path('app_data_breach_close', {id: breach.id}) }}" method="post" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('close' ~ breach.id) }}">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'privacy.data_breach.action.close_investigation'|trans({}, 'privacy') }}
                        </button>
                    </form>
                {% endif %}

                {% if is_granted('ROLE_MANAGER') and breach.status == 'closed' %}
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#reopenModal">
                        <i class="bi bi-folder2-open" aria-hidden="true"></i> {{ 'privacy.data_breach.action.reopen'|trans({}, 'privacy') }}
                    </button>
                {% endif %}

                {% if is_granted('ROLE_MANAGER') %}
                    <form action="{{ path('app_data_breach_delete', {id: breach.id}) }}" method="post" class="d-inline"
                          data-controller="ui-actions"
                          data-action="submit->ui-actions#confirm"
                          data-ui-actions-message-param="{{ 'data_breach.confirm.delete'|trans({}, 'privacy') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ breach.id) }}">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="bi bi-trash" aria-hidden="true"></i> {{ 'common.delete'|trans({}, 'messages') }}
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>

    {# Detection & Links #}
    <div class="card mb-4">
        <div class="card-header"><h2 class="mb-0"><i class="bi bi-link-45deg" aria-hidden="true"></i> {{ 'privacy.data_breach.section.detection_links'|trans({}, 'privacy') }}</h2>
        </div>
        <div class="card-body">
            <p><strong>{{ 'privacy.data_breach.field.detected'|trans({}, 'privacy') }}:</strong> {{ breach.detectedAt|date('Y-m-d H:i') }}</p>
            <p><strong>{{ 'privacy.data_breach.field.severity'|trans({}, 'privacy') }}:</strong>
                {% set sev_class = {'low': 'success', 'medium': 'info', 'high': 'warning', 'critical': 'danger'}[breach.severity] %}
                <span class="badge bg-{{ sev_class }}">{{ ('privacy.data_breach.severity.' ~ breach.severity)|trans({}, 'privacy') }}</span>
            </p>

            {% if breach.incident %}
                <p><strong>{{ 'privacy.data_breach.field.incident'|trans({}, 'privacy') }}:</strong>
                    <a href="{{ path('app_incident_show', {id: breach.incident.id}) }}">
                        {{ breach.incident.incidentNumber }} - {{ breach.incident.title }}
                    </a>
                </p>
            {% else %}
                <p><strong>{{ 'privacy.data_breach.field.incident'|trans({}, 'privacy') }}:</strong>
                    <span class="text-muted">{{ 'privacy.data_breach.standalone_breach'|trans({}, 'privacy') }}</span>
                </p>
            {% endif %}

            {% if breach.processingActivity %}
                <p><strong>{{ 'privacy.data_breach.field.processing_activity'|trans({}, 'privacy') }}:</strong>
                    <a href="{{ path('app_processing_activity_show', {id: breach.processingActivity.id}) }}">
                        {{ breach.processingActivity.name }}
                    </a>
                </p>
            {% endif %}
        </div>
    </div>

    {# Art. 33/34 Notifications #}
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header"><h2 class="mb-0"><i class="bi bi-building" aria-hidden="true"></i> {{ 'privacy.data_breach.section.authority'|trans({}, 'privacy') }}</h2>
                </div>
                <div class="card-body">
                    <p><strong>{{ 'privacy.data_breach.field.notification_required'|trans({}, 'privacy') }}:</strong>
                        {% if breach.requiresAuthorityNotification %}
                            <span class="text-warning"><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'privacy.data_breach.field.yes'|trans({}, 'privacy') }}</span>
                        {% else %}
                            <span class="text-muted">{{ 'privacy.data_breach.field.no'|trans({}, 'privacy') }}</span>
                            {% if breach.noNotificationReason %}
                                <br><small class="text-muted">{{ 'privacy.data_breach.field.delay_reason'|trans({}, 'privacy') }}: {{ breach.noNotificationReason }}</small>
                            {% endif %}
                        {% endif %}
                    </p>
                    {% if breach.supervisoryAuthorityNotifiedAt %}
                        <p><strong>{{ 'privacy.data_breach.field.notified'|trans({}, 'privacy') }}:</strong>
                            <span class="text-success"><i class="bi bi-check-circle" aria-hidden="true"></i> {{ breach.supervisoryAuthorityNotifiedAt|date('Y-m-d H:i') }}</span>
                        </p>
                        <p><strong>{{ 'privacy.data_breach.field.authority'|trans({}, 'privacy') }}:</strong> {{ breach.supervisoryAuthorityName }}</p>
                        {% if breach.supervisoryAuthorityReference %}
                            <p><strong>{{ 'privacy.data_breach.field.reference'|trans({}, 'privacy') }}:</strong> {{ breach.supervisoryAuthorityReference }}</p>
                        {% endif %}
                        <p><strong>{{ 'privacy.data_breach.field.method'|trans({}, 'privacy') }}:</strong> {{ breach.notificationMethod }}</p>
                        {% if breach.notificationDelayReason %}
                            <div class="alert alert-warning">
                                <strong>{{ 'privacy.data_breach.field.delay_reason'|trans({}, 'privacy') }}:</strong> {{ breach.notificationDelayReason }}
                            </div>
                        {% endif %}
                    {% elseif breach.requiresAuthorityNotification %}
                        <p class="text-danger"><i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'privacy.data_breach.field.not_yet_notified'|trans({}, 'privacy') }}</p>
                        <p><strong>{{ 'privacy.data_breach.field.deadline'|trans({}, 'privacy') }}:</strong> {{ breach.authorityNotificationDeadline|date('Y-m-d H:i') }}</p>
                        <p><strong>{{ 'privacy.data_breach.field.time_remaining'|trans({}, 'privacy') }}:</strong>
                            {% set hours = breach.hoursUntilAuthorityDeadline %}
                            {% if hours < 0 %}
                                <span class="text-danger">{{ 'privacy.data_breach.field.overdue_by'|trans({}, 'privacy') }} {{ (hours * -1)|number_format }}h</span>
                            {% else %}
                                <span class="{% if hours < 24 %}text-warning{% else %}text-info{% endif %}">
                                    {{ hours|number_format }} {{ 'privacy.data_breach.field.hours'|trans({}, 'privacy') }}
                                </span>
                            {% endif %}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header"><h2 class="mb-0"><i class="bi bi-people" aria-hidden="true"></i> {{ 'privacy.data_breach.section.subjects'|trans({}, 'privacy') }}</h2>
                </div>
                <div class="card-body">
                    <p><strong>{{ 'privacy.data_breach.field.notification_required'|trans({}, 'privacy') }}:</strong>
                        {% if breach.requiresSubjectNotification %}
                            <span class="text-warning"><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'privacy.data_breach.field.high_risk'|trans({}, 'privacy') }}</span>
                        {% else %}
                            <span class="text-muted">{{ 'privacy.data_breach.field.no'|trans({}, 'privacy') }}</span>
                            {% if breach.noSubjectNotificationReason %}
                                <br><small class="text-muted">{{ 'privacy.data_breach.field.exemption_reason'|trans({}, 'privacy') }}: {{ breach.noSubjectNotificationReason }}</small>
                            {% endif %}
                        {% endif %}
                    </p>
                    {% if breach.dataSubjectsNotifiedAt %}
                        <p><strong>{{ 'privacy.data_breach.field.notified'|trans({}, 'privacy') }}:</strong>
                            <span class="text-success"><i class="bi bi-check-circle" aria-hidden="true"></i> {{ breach.dataSubjectsNotifiedAt|date('Y-m-d H:i') }}</span>
                        </p>
                        <p><strong>{{ 'privacy.data_breach.field.subjects_notified'|trans({}, 'privacy') }}:</strong> {{ breach.subjectsNotified|number_format }}</p>
                        <p><strong>{{ 'privacy.data_breach.field.method'|trans({}, 'privacy') }}:</strong> {{ breach.subjectNotificationMethod }}</p>
                    {% elseif breach.requiresSubjectNotification %}
                        <p class="text-warning"><i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'privacy.data_breach.field.not_yet_notified'|trans({}, 'privacy') }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Breach Details - Art. 33(3) Content #}
    <div class="card mb-4">
        <div class="card-header"><h2 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'privacy.data_breach.section.nature'|trans({}, 'privacy') }}</h2>
        </div>
        <div class="card-body">
            {% if breach.breachNature %}
                <h3>{{ 'privacy.data_breach.section.nature'|trans({}, 'privacy') }} (Art. 33(3)(a)):</h3>
                <p>{{ breach.breachNature|nl2br }}</p>
            {% endif %}
            {% if breach.dataCategories|length > 0 %}
                <h3>{{ 'privacy.data_breach.field.data_categories'|trans({}, 'privacy') }}:</h3>
                <p>{% for category in breach.dataCategories %}{{ ('data_breach.data_categories.' ~ category)|trans({}, 'privacy') }}{% if not loop.last %}, {% endif %}{% endfor %}</p>
            {% endif %}
            {% if breach.dataSubjectCategories|length > 0 %}
                <h3>{{ 'privacy.data_breach.field.data_subject_categories'|trans({}, 'privacy') }}:</h3>
                <p>{% for category in breach.dataSubjectCategories %}{{ ('data_breach.data_subject_categories.' ~ category)|trans({}, 'privacy') }}{% if not loop.last %}, {% endif %}{% endfor %}</p>
            {% endif %}
            {% if breach.specialCategoriesAffected %}
                <div class="alert alert-warning">
                    <i class="bi bi-shield-lock" aria-hidden="true"></i> <strong>{{ 'privacy.data_breach.field.special_categories_affected'|trans({}, 'privacy') }}</strong>
                </div>
            {% endif %}
            {% if breach.criminalDataAffected %}
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> <strong>{{ 'privacy.data_breach.field.criminal_data_affected'|trans({}, 'privacy') }}</strong>
                </div>
            {% endif %}
        </div>
    </div>

    {# Consequences & Measures #}
    <div class="card mb-4">
        <div class="card-header"><h2 class="mb-0"><i class="bi bi-shield-check" aria-hidden="true"></i> {{ 'privacy.data_breach.section.consequences'|trans({}, 'privacy') }}</h2>
        </div>
        <div class="card-body">
            {% if breach.likelyConsequences %}
                <h3>{{ 'privacy.data_breach.field.likely_consequences'|trans({}, 'privacy') }}:</h3>
                <p>{{ breach.likelyConsequences|nl2br }}</p>
            {% endif %}
            {% if breach.measuresTaken %}
                <h3>{{ 'privacy.data_breach.field.measures_taken'|trans({}, 'privacy') }}:</h3>
                <p>{{ breach.measuresTaken|nl2br }}</p>
            {% endif %}
            {% if breach.mitigationMeasures %}
                <h3>{{ 'privacy.data_breach.field.measures_planned'|trans({}, 'privacy') }}:</h3>
                <p>{{ breach.mitigationMeasures|nl2br }}</p>
            {% endif %}
        </div>
    </div>

    {# Investigation & Follow-up #}
    {% if breach.rootCause or breach.lessonsLearned or breach.followUpActions|length > 0 %}
        <div class="card mb-4">
            <div class="card-header"><h2 class="mb-0"><i class="bi bi-search" aria-hidden="true"></i> {{ 'privacy.data_breach.investigation_followup'|trans({}, 'privacy') }}</h2>
            </div>
            <div class="card-body">
                {% if breach.rootCause %}
                    <h3>{{ 'privacy.data_breach.root_cause'|trans({}, 'privacy') }}:</h3>
                    <p>{{ breach.rootCause|nl2br }}</p>
                {% endif %}
                {% if breach.lessonsLearned %}
                    <h3>{{ 'privacy.data_breach.lessons_learned'|trans({}, 'privacy') }}:</h3>
                    <p>{{ breach.lessonsLearned|nl2br }}</p>
                {% endif %}
                {% if breach.followUpActions|length > 0 %}
                    <h3>{{ 'privacy.data_breach.follow_up_actions'|trans({}, 'privacy') }}:</h3>
                    <ul>
                        {% for action in breach.followUpActions %}
                            <li>{{ action }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>

{# Notify Supervisory Authority Modal #}
<div class="modal fade" id="authorityModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="{{ path('app_data_breach_notify_authority', {id: breach.id}) }}" method="post">
                <input type="hidden" name="_token" value="{{ csrf_token('notify_authority' ~ breach.id) }}">
                <div class="modal-header">
                    <h2 class="modal-title">{{ 'privacy.data_breach.action.notify_authority'|trans({}, 'privacy') }} (Art. 33 GDPR)</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">{{ 'privacy.data_breach.field.authority'|trans({}, 'privacy') }} *</label>
                        <select name="authority_name" class="form-select" required>
                            <option value="">Select authority...</option>
                            <option value="BfDI">BfDI (Federal Commissioner)</option>
                            <option value="LfDI Baden-Württemberg">LfDI Baden-Württemberg</option>
                            <option value="LfDI Bayern">LfDI Bayern</option>
                            <option value="BlnBDI">BlnBDI (Berlin)</option>
                            <option value="LDA Brandenburg">LDA Brandenburg</option>
                            <option value="LfDI Bremen">LfDI Bremen</option>
                            <option value="HmbBfDI">HmbBfDI (Hamburg)</option>
                            <option value="HBDI">HBDI (Hessen)</option>
                            <option value="LfDI Mecklenburg-Vorpommern">LfDI Mecklenburg-Vorpommern</option>
                            <option value="LfD Niedersachsen">LfD Niedersachsen</option>
                            <option value="LDI NRW">LDI NRW</option>
                            <option value="LfDI Rheinland-Pfalz">LfDI Rheinland-Pfalz</option>
                            <option value="ULD Schleswig-Holstein">ULD Schleswig-Holstein</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">{{ 'privacy.data_breach.field.method'|trans({}, 'privacy') }} *</label>
                        <select name="notification_method" class="form-select" required>
                            <option value="email">Email</option>
                            <option value="web_portal">Web Portal</option>
                            <option value="phone">Phone</option>
                            <option value="letter">Registered Letter</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">{{ 'privacy.data_breach.field.reference'|trans({}, 'privacy') }} (optional)</label>
                        <input type="text" name="authority_reference" class="form-control" placeholder="{{ 'common.placeholder.case_number_from_authority'|trans({}, 'messages') }}">
                    </div>
                    {% if breach.hoursUntilAuthorityDeadline < 0 %}
                        <div class="mb-3">
                            <label class="form-label">{{ 'privacy.data_breach.field.delay_reason'|trans({}, 'privacy') }} * (required for overdue notifications)</label>
                            <textarea name="delay_reason" class="form-control" rows="3" required
                                      placeholder="{{ 'common.placeholder.explain_deadline_exceeded'|trans({}, 'messages') }}"></textarea>
                            <small class="text-muted">Art. 33(1) GDPR requires justification for delays.</small>
                        </div>
                    {% endif %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'common.cancel'|trans({}, 'messages') }}</button>
                    <button type="submit" class="btn btn-warning">{{ 'privacy.data_breach.action.notify_authority'|trans({}, 'privacy') }}</button>
                </div>
            </form>
        </div>
    </div>
</div>

{# Notify Data Subjects Modal #}
<div class="modal fade" id="subjectsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="{{ path('app_data_breach_notify_subjects', {id: breach.id}) }}" method="post">

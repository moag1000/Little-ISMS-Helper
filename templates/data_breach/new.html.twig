{% extends 'base.html.twig' %}
{% trans_default_domain 'privacy' %}

{% block title %}{{ 'privacy.data_breach.page.new_title'|trans({}, 'privacy') }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'privacy.breadcrumb.privacy'|trans({}, 'privacy'), icon: 'bi-shield-lock' },
            { label: 'privacy.breadcrumb.data_breaches'|trans({}, 'privacy'), url: path('app_data_breach_index') },
            { label: 'privacy.data_breach.page.new_title'|trans({}, 'privacy') }
        ]
    } %}

    {% include '_components/_page_header.html.twig' with {
        title: 'privacy.data_breach.page.new_title'|trans({}, 'privacy'),
        subtitle: 'privacy.data_breach.page.new_subtitle'|trans({}, 'privacy'),
        icon: 'bi-exclamation-triangle-fill',
        actions: [
            { label: 'common.cancel'|trans({}, 'messages'), url: path('app_data_breach_index'), variant: 'secondary', icon: 'bi-x-lg' }
        ]
    } %}

    {% embed '_components/_card.html.twig' %}
        {% block card_header %}
            <div class="card-header"><h2 class="mb-0"><i class="bi bi-clipboard-check" aria-hidden="true"></i> {{ 'privacy.data_breach.form.title'|trans({}, 'privacy') }}</h2></div>
        {% endblock %}
        {% block card_body %}
            {{ form_start(form) }}
                {% include '_components/_auto_form.html.twig' with {
                    'form': form,
                    'sections': {
                        'basic_info': {
                            'label': '<i class="bi bi-info-circle" aria-hidden="true"></i> '~ 'data_breach.section.basic_info'|trans({}, 'privacy'),
                            'fields': ['title', 'detectedAt', 'incident', 'processingActivity']
                        },
                        'notification_content': {
                            'label': '<i class="bi bi-file-text" aria-hidden="true"></i> Art. 33(3) - Content of Notification'|raw,
                            'fields': ['affectedDataSubjects', 'dataCategories', 'dataSubjectCategories', 'breachNature', 'likelyConsequences', 'measuresTaken', 'mitigationMeasures']
                        },
                        'risk_assessment': {
                            'label': '<i class="bi bi-exclamation-triangle" aria-hidden="true"></i> '~ 'data_breach.section.risk_assessment'|trans({}, 'privacy'),
                            'fields': ['severity', 'riskLevel', 'riskAssessment', 'specialCategoriesAffected', 'criminalDataAffected']
                        },
                        'notification_requirements': {
                            'label': '<i class="bi bi-bell" aria-hidden="true"></i> Notification Requirements'|raw,
                            'fields': ['requiresAuthorityNotification', 'requiresSubjectNotification', 'noSubjectNotificationReason']
                        },
                        'investigation': {
                            'label': '<i class="bi bi-search" aria-hidden="true"></i> Investigation & Follow-up'|raw,
                            'fields': ['rootCause', 'lessonsLearned']
                        },
                        'responsible_persons': {
                            'label': '<i class="bi bi-person-badge" aria-hidden="true"></i> Responsible Persons'|raw,
                            'fields': ['dataProtectionOfficer']
                        }
                    },
                    'col_widths': {
                        'title': 6,
                        'detectedAt': 6,
                        'incident': 6,
                        'processingActivity': 6,
                        'affectedDataSubjects': 12,
                        'dataCategories': 12,
                        'dataSubjectCategories': 12,
                        'breachNature': 12,
                        'likelyConsequences': 12,
                        'measuresTaken': 12,
                        'mitigationMeasures': 12,
                        'severity': 6,
                        'riskLevel': 6,
                        'riskAssessment': 12,
                        'specialCategoriesAffected': 6,
                        'criminalDataAffected': 6,
                        'requiresAuthorityNotification': 6,
                        'requiresSubjectNotification': 6,
                        'noSubjectNotificationReason': 12,
                        'rootCause': 12,
                        'lessonsLearned': 12,
                        'dataProtectionOfficer': 12
                    },
                    'tooltips': {
                        'affectedDataSubjects': 'data_breach.tooltip.affected_data_subjects',
                        'severity': 'data_breach.tooltip.severity',
                        'riskLevel': 'data_breach.tooltip.risk_level'
                    },
                    'translation_domain': 'privacy'
                } %}

                <div class="mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-save" aria-hidden="true"></i> {{ 'privacy.data_breach.action.create'|trans({}, 'privacy') }}
                    </button>
                    <a href="{{ path('app_data_breach_index') }}" class="btn btn-secondary">
                        <i class="bi bi-x-lg" aria-hidden="true"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                    </a>
                </div>
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
</div>
{% endblock %}

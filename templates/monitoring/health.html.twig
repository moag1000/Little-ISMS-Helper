{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'monitoring.health.title'|trans({}, 'monitoring') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'monitoring.subtitle'|trans({}, 'monitoring') }}</p>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .auto-fix-btn {
            margin-top: 0.5rem;
        }
        .fix-result {
            margin-top: 0.5rem;
            padding: 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
        }
    </style>
{% endblock %}

{% block admin_content %}
    <div class="mb-3">
        <a href="{{ path('monitoring_health_json') }}" class="btn btn-outline-secondary" target="_blank">
            <i class="bi bi-code-square" aria-hidden="true"></i> {{ 'monitoring.health.json_api'|trans({}, 'monitoring') }}
        </a>
    </div>

    {# Overall Status Banner #}
    <div class="alert alert-{{ overall_status == 'healthy' ? 'success' : (overall_status == 'warning' ? 'warning' : 'danger') }} mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-{{ overall_status == 'healthy' ? 'check-circle-fill' : (overall_status == 'warning' ? 'exclamation-triangle-fill' : 'x-circle-fill') }} fs-1 me-3" aria-hidden="true"></i>
            <div>
                <h2 class="mb-1">
                    {{ 'monitoring.health.system_status'|trans({}, 'monitoring') }}:
                    {% if overall_status == 'healthy' %}
                        <strong>{{ 'monitoring.health.healthy'|trans({}, 'monitoring') }}</strong>
                    {% elseif overall_status == 'warning' %}
                        <strong>{{ 'monitoring.health.warning'|trans({}, 'monitoring') }}</strong>
                    {% else %}
                        <strong>{{ 'monitoring.health.error'|trans({}, 'monitoring') }}</strong>
                    {% endif %}
                </h2>
                <p class="mb-0">
                    {{ 'monitoring.health.last_checked'|trans({}, 'monitoring') }}: {{ 'now'|date('Y-m-d H:i:s') }}
                </p>
            </div>
        </div>
    </div>

    {% import '_macros/cards.html.twig' as cards %}
    <div class="row">
        {# Database Health #}
        <div class="col-md-6 mb-4">
            {% set db_status = health_checks.database.status %}
            {% set db_color = db_status == 'healthy' ? 'success' : 'danger' %}
            {% set db_content %}
                <dl class="row mb-0">
                    <dt class="col-sm-4">{{ 'monitoring.database.status'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-8">
                        <span class="{{ badge_status(db_status) }}">
                            {{ db_status|upper }}
                        </span>
                    </dd>

                    {% if health_checks.database.response_time is defined %}
                        <dt class="col-sm-4">{{ 'monitoring.database.response_time'|trans({}, 'monitoring') }}:</dt>
                        <dd class="col-sm-8">{{ health_checks.database.response_time }}</dd>

                        <dt class="col-sm-4">{{ 'monitoring.database.driver'|trans({}, 'monitoring') }}:</dt>
                        <dd class="col-sm-8"><code>{{ health_checks.database.driver }}</code></dd>
                    {% endif %}

                    {% if health_checks.database.error is defined %}
                        <dt class="col-sm-4">{{ 'monitoring.database.error'|trans({}, 'monitoring') }}:</dt>
                        <dd class="col-sm-8 text-danger">{{ health_checks.database.error }}</dd>
                    {% endif %}
                </dl>
            {% endset %}
            {{ cards.status_card('monitoring.card.database'|trans({}, 'monitoring'), 'database', db_status, db_color, db_content) }}
        </div>

        {# Disk Space #}
        <div class="col-md-6 mb-4">
            {% set disk_status = health_checks.disk.status %}
            {% set disk_color = disk_status == 'healthy' ? 'success' : 'warning' %}
            {% set disk_content %}
                <dl class="row mb-3">
                    <dt class="col-sm-4">{{ 'monitoring.disk.free'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-8">{{ health_checks.disk.free }}</dd>

                    <dt class="col-sm-4">{{ 'monitoring.disk.used'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-8">{{ health_checks.disk.used }}</dd>

                    <dt class="col-sm-4">{{ 'monitoring.disk.total'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-8">{{ health_checks.disk.total }}</dd>
                </dl>

                <div class="progress" style="height: 25px;">
                    <div class="progress-bar bg-{{ health_checks.disk.percentage > 90 ? 'danger' : (health_checks.disk.percentage > 75 ? 'warning' : 'success') }}"
                         role="progressbar"
                         style="width: {{ health_checks.disk.percentage }}%"
                         aria-valuenow="{{ health_checks.disk.percentage }}"
                         aria-valuemin="0"
                         aria-valuemax="100">
                        {{ health_checks.disk.percentage }}%
                    </div>
                </div>
            {% endset %}
            {% set disk_actions %}
                {% if health_checks.disk.percentage > 75 and is_granted('MONITORING_MANAGE') %}
                    <button class="btn btn-sm btn-warning auto-fix-btn"
                            data-controller="autofix"
                            data-action="click->autofix#fix"
                            data-autofix-action-param="optimize-disk"
                            data-autofix-url-value="{{ path('monitoring_health') }}">
                        <i class="bi bi-tools" aria-hidden="true"></i> {{ 'monitoring.action.optimize_disk'|trans({}, 'monitoring') }}
                    </button>
                    <div id="fix-result-optimize-disk"></div>
                {% endif %}
            {% endset %}
            {{ cards.status_card('monitoring.card.disk_space'|trans({}, 'monitoring'), 'hdd', disk_status, disk_color, disk_content, disk_actions) }}
        </div>

        {# PHP Info #}
        <div class="col-md-6 mb-4">
            {% set php_status = health_checks.php.status %}
            {% set php_color = php_status == 'healthy' ? 'success' : 'danger' %}
            {% set php_content %}
                <dl class="row mb-0">
                    <dt class="col-sm-5">{{ 'monitoring.php.version'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7"><code>{{ health_checks.php.version }}</code></dd>

                    <dt class="col-sm-5">{{ 'monitoring.php.memory_limit'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7"><code>{{ health_checks.php.memory_limit }}</code></dd>

                    <dt class="col-sm-5">{{ 'monitoring.php.max_execution_time'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7"><code>{{ health_checks.php.max_execution_time }}s</code></dd>

                    <dt class="col-sm-5">{{ 'monitoring.php.extensions'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7">
                        {% include '_components/_badge.html.twig' with { variant: 'success', content: health_checks.php.loaded_extensions|length ~ ' ' ~ 'monitoring.php.loaded'|trans({}, 'monitoring') } %}
                        {% if health_checks.php.missing_extensions|length > 0 %}
                            {% include '_components/_badge.html.twig' with { variant: 'danger', content: health_checks.php.missing_extensions|length ~ ' ' ~ 'monitoring.php.missing'|trans({}, 'monitoring') } %}
                        {% endif %}
                    </dd>

                    {% if health_checks.php.missing_extensions|length > 0 %}
                        <dt class="col-sm-5">{{ 'monitoring.php.missing'|trans({}, 'monitoring') }}:</dt>
                        <dd class="col-sm-7">
                            {% for ext in health_checks.php.missing_extensions %}
                                <code class="text-danger">{{ ext }}</code>{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </dd>
                    {% endif %}
                </dl>
            {% endset %}
            {{ cards.status_card('monitoring.card.php'|trans({}, 'monitoring'), 'code-slash', php_status, php_color, php_content) }}
        </div>

        {# Symfony Info #}
        <div class="col-md-6 mb-4">
            {% set symfony_status = 'healthy' %}
            {% set symfony_color = 'success' %}
            {% set symfony_content %}
                <dl class="row mb-0">
                    <dt class="col-sm-5">{{ 'monitoring.symfony.version'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7"><code>{{ health_checks.symfony.version }}</code></dd>

                    <dt class="col-sm-5">{{ 'monitoring.symfony.environment'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7">
                        {% include '_components/_badge.html.twig' with { variant: health_checks.symfony.environment == 'prod' ? 'success' : 'warning', content: health_checks.symfony.environment|upper } %}
                    </dd>

                    <dt class="col-sm-5">{{ 'monitoring.symfony.debug'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7">
                        {% include '_components/_badge.html.twig' with { variant: health_checks.symfony.debug ? 'warning' : 'success', content: health_checks.symfony.debug ? 'monitoring.health.on'|trans({}, 'monitoring') : 'monitoring.health.off'|trans({}, 'monitoring') } %}
                    </dd>
                </dl>
            {% endset %}
            {{ cards.status_card('monitoring.card.symfony'|trans({}, 'monitoring'), 'gear', symfony_status, symfony_color, symfony_content) }}
        </div>

        {# Cache #}
        <div class="col-md-6 mb-4">
            {% set cache_status = health_checks.cache.status %}
            {% set cache_color = cache_status == 'healthy' ? 'success' : 'danger' %}
            {% set cache_content %}
                <dl class="row mb-0">
                    <dt class="col-sm-4">{{ 'monitoring.database.status'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-8">
                        <span class="{{ badge_status(health_checks.cache.status) }}">
                            {{ health_checks.cache.status|upper }}
                        </span>
                    </dd>

                    <dt class="col-sm-4">{{ 'monitoring.cache.directory'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-8"><code class="small">{{ health_checks.cache.directory }}</code></dd>

                    <dt class="col-sm-4">{{ 'monitoring.cache.writable'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-8">
                        {% if health_checks.cache.writable %}
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i> {{ 'monitoring.health.yes'|trans({}, 'monitoring') }}
                        {% else %}
                            <i class="bi bi-x-circle text-danger" aria-hidden="true"></i> {{ 'monitoring.health.no'|trans({}, 'monitoring') }}
                        {% endif %}
                    </dd>
                </dl>
            {% endset %}
            {% set cache_actions %}
                {% if is_granted('MONITORING_MANAGE') %}
                    {% if not health_checks.cache.writable %}
                        <button class="btn btn-sm btn-danger auto-fix-btn"
                                data-controller="autofix"
                                data-action="click->autofix#fix"
                                data-autofix-action-param="cache"
                                data-autofix-url-value="{{ path('monitoring_health') }}">
                            <i class="bi bi-wrench" aria-hidden="true"></i> {{ 'monitoring.action.fix_permissions'|trans({}, 'monitoring') }}
                        </button>
                    {% endif %}
                    <button class="btn btn-sm btn-primary auto-fix-btn"
                            data-controller="autofix"
                            data-action="click->autofix#fix"
                            data-autofix-action-param="clear-cache"
                            data-autofix-url-value="{{ path('monitoring_health') }}">
                        <i class="bi bi-trash" aria-hidden="true"></i> {{ 'monitoring.action.clear_cache'|trans({}, 'monitoring') }}
                    </button>
                    <div id="fix-result-cache"></div>
                    <div id="fix-result-clear-cache"></div>
                {% endif %}
            {% endset %}
            {{ cards.status_card('monitoring.card.cache'|trans({}, 'monitoring'), 'lightning', cache_status, cache_color, cache_content, cache_actions) }}
        </div>

        {# Logs #}
        <div class="col-md-6 mb-4">
            {% set logs_status = health_checks.logs.status %}
            {% set logs_color = logs_status == 'healthy' ? 'success' : 'danger' %}
            {% set logs_content %}
                <dl class="row mb-0">
                    <dt class="col-sm-4">{{ 'monitoring.database.status'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-8">
                        <span class="{{ badge_status(health_checks.logs.status) }}">
                            {{ health_checks.logs.status|upper }}
                        </span>
                    </dd>

                    <dt class="col-sm-4">{{ 'monitoring.logs.directory'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-8"><code class="small">{{ health_checks.logs.directory }}</code></dd>

                    <dt class="col-sm-4">{{ 'monitoring.logs.writable'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-8">
                        {% if health_checks.logs.writable %}
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i> {{ 'monitoring.health.yes'|trans({}, 'monitoring') }}
                        {% else %}
                            <i class="bi bi-x-circle text-danger" aria-hidden="true"></i> {{ 'monitoring.health.no'|trans({}, 'monitoring') }}
                        {% endif %}
                    </dd>
                </dl>
            {% endset %}
            {% set logs_actions %}
                {% if is_granted('MONITORING_MANAGE') %}
                    {% if not health_checks.logs.writable %}
                        <button class="btn btn-sm btn-danger auto-fix-btn"
                                data-controller="autofix"
                                data-action="click->autofix#fix"
                                data-autofix-action-param="logs"
                                data-autofix-url-value="{{ path('monitoring_health') }}">
                            <i class="bi bi-wrench" aria-hidden="true"></i> {{ 'monitoring.action.fix_permissions'|trans({}, 'monitoring') }}
                        </button>
                    {% endif %}
                    <button class="btn btn-sm btn-warning auto-fix-btn"
                            data-controller="autofix"
                            data-action="click->autofix#fix"
                            data-autofix-action-param="clean-logs"
                            data-autofix-url-value="{{ path('monitoring_health') }}">
                        <i class="bi bi-trash" aria-hidden="true"></i> {{ 'monitoring.action.clean_logs'|trans({}, 'monitoring') }}
                    </button>
                    <button class="btn btn-sm btn-info auto-fix-btn"
                            data-controller="autofix"
                            data-action="click->autofix#fix"
                            data-autofix-action-param="rotate-logs"
                            data-autofix-url-value="{{ path('monitoring_health') }}">
                        <i class="bi bi-arrow-repeat" aria-hidden="true"></i> {{ 'monitoring.action.rotate_logs'|trans({}, 'monitoring') }}
                    </button>
                    <div id="fix-result-logs"></div>
                    <div id="fix-result-clean-logs"></div>
                    <div id="fix-result-rotate-logs"></div>
                {% endif %}
            {% endset %}
            {{ cards.status_card('monitoring.card.logs'|trans({}, 'monitoring'), 'file-text', logs_status, logs_color, logs_content, logs_actions) }}
        </div>

        {# File Permissions #}
        {% if health_checks.permissions is defined %}
        <div class="col-md-6 mb-4">
            {% set perms_status = health_checks.permissions.status %}
            {% set perms_color = perms_status == 'healthy' ? 'success' : 'danger' %}
            {% set perms_content %}
                <dl class="row mb-0">
                    <dt class="col-sm-5">var/ {{ 'monitoring.cache.writable'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7">
                        {% if health_checks.permissions.var_writable %}
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i> {{ 'monitoring.health.yes'|trans({}, 'monitoring') }}
                        {% else %}
                            <i class="bi bi-x-circle text-danger" aria-hidden="true"></i> {{ 'monitoring.health.no'|trans({}, 'monitoring') }}
                        {% endif %}
                    </dd>

                    <dt class="col-sm-5">uploads/ {{ 'monitoring.cache.writable'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7">
                        {% if health_checks.permissions.uploads_writable is null %}
                            <span class="text-muted">N/A</span>
                        {% elseif health_checks.permissions.uploads_writable %}
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i> {{ 'monitoring.health.yes'|trans({}, 'monitoring') }}
                        {% else %}
                            <i class="bi bi-x-circle text-danger" aria-hidden="true"></i> {{ 'monitoring.health.no'|trans({}, 'monitoring') }}
                        {% endif %}
                    </dd>

                    {% if health_checks.permissions.issues|length > 0 %}
                        <dt class="col-sm-5">Issues:</dt>
                        <dd class="col-sm-7">
                            {% for issue in health_checks.permissions.issues %}
                                {% include '_components/_badge.html.twig' with { variant: 'danger', content: issue } %}<br>
                            {% endfor %}
                        </dd>
                    {% endif %}
                </dl>
            {% endset %}
            {% set perms_actions %}
                {% if is_granted('MONITORING_MANAGE') and health_checks.permissions.status != 'healthy' %}
                    {% if not health_checks.permissions.var_writable %}
                        <button class="btn btn-sm btn-danger auto-fix-btn"
                                data-controller="autofix"
                                data-action="click->autofix#fix"
                                data-autofix-action-param="var-permissions"
                                data-autofix-url-value="{{ path('monitoring_health') }}">
                            <i class="bi bi-wrench" aria-hidden="true"></i> {{ 'monitoring.action.fix_permissions'|trans({}, 'monitoring') }} var/
                        </button>
                    {% endif %}
                    {% if health_checks.permissions.uploads_writable is not null and not health_checks.permissions.uploads_writable %}
                        <button class="btn btn-sm btn-danger auto-fix-btn"
                                data-controller="autofix"
                                data-action="click->autofix#fix"
                                data-autofix-action-param="uploads-permissions"
                                data-autofix-url-value="{{ path('monitoring_health') }}">
                            <i class="bi bi-wrench" aria-hidden="true"></i> {{ 'monitoring.action.fix_permissions'|trans({}, 'monitoring') }} uploads/
                        </button>
                    {% endif %}
                    <div id="fix-result-var-permissions"></div>
                    <div id="fix-result-uploads-permissions"></div>
                {% endif %}
            {% endset %}
            {{ cards.status_card('monitoring.card.file_permissions'|trans({}, 'monitoring'), 'shield-lock', perms_status, perms_color, perms_content, perms_actions) }}
        </div>
        {% endif %}

        {# Composer Dependencies #}
        {% if health_checks.composer is defined %}
        <div class="col-md-6 mb-4">
            {% set composer_status = health_checks.composer.status %}
            {% set composer_color = composer_status == 'healthy' ? 'success' : 'danger' %}
            {% set composer_content %}
                <dl class="row mb-0">
                    <dt class="col-sm-5">{{ 'monitoring.database.status'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7">
                        <span class="{{ badge_status(health_checks.composer.status) }}">
                            {{ health_checks.composer.status|upper }}
                        </span>
                    </dd>

                    <dt class="col-sm-5">composer.lock:</dt>
                    <dd class="col-sm-7">
                        {% if health_checks.composer.lock_exists %}
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i> {{ 'monitoring.health.exists'|trans({}, 'monitoring') }}
                        {% else %}
                            <i class="bi bi-x-circle text-danger" aria-hidden="true"></i> {{ 'monitoring.php.missing'|trans({}, 'monitoring') }}
                        {% endif %}
                    </dd>

                    <dt class="col-sm-5">vendor/:</dt>
                    <dd class="col-sm-7">
                        {% if health_checks.composer.vendor_exists %}
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i> {{ 'monitoring.health.exists'|trans({}, 'monitoring') }}
                        {% else %}
                            <i class="bi bi-x-circle text-danger" aria-hidden="true"></i> {{ 'monitoring.php.missing'|trans({}, 'monitoring') }}
                        {% endif %}
                    </dd>

                    <dt class="col-sm-5">Message:</dt>
                    <dd class="col-sm-7">{{ health_checks.composer.message }}</dd>
                </dl>
            {% endset %}
            {% set composer_actions %}
                {% if is_granted('MONITORING_MANAGE') and health_checks.composer.status != 'healthy' %}
                    <button class="btn btn-sm btn-danger auto-fix-btn"
                            data-controller="autofix"
                            data-action="click->autofix#fix"
                            data-autofix-action-param="composer-install"
                            data-autofix-url-value="{{ path('monitoring_health') }}">
                        <i class="bi bi-download" aria-hidden="true"></i> {{ 'monitoring.action.composer_install'|trans({}, 'monitoring') }}
                    </button>
                    <div id="fix-result-composer-install"></div>
                {% endif %}
            {% endset %}
            {{ cards.status_card('monitoring.card.composer'|trans({}, 'monitoring'), 'box-seam', composer_status, composer_color, composer_content, composer_actions) }}
        </div>
        {% endif %}

        {# Environment Variables #}
        {% if health_checks.environment is defined %}
        <div class="col-md-6 mb-4">
            {% set env_status = health_checks.environment.status %}
            {% set env_color = env_status == 'healthy' ? 'success' : 'danger' %}
            {% set env_content %}
                <dl class="row mb-0">
                    <dt class="col-sm-5">.env File:</dt>
                    <dd class="col-sm-7">
                        {% if health_checks.environment.env_file_exists %}
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i> {{ 'monitoring.health.exists'|trans({}, 'monitoring') }}
                        {% else %}
                            <i class="bi bi-x-circle text-danger" aria-hidden="true"></i> {{ 'monitoring.php.missing'|trans({}, 'monitoring') }}
                        {% endif %}
                    </dd>

                    <dt class="col-sm-5">.env.local File:</dt>
                    <dd class="col-sm-7">
                        {% if health_checks.environment.env_local_exists %}
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i> {{ 'monitoring.health.exists'|trans({}, 'monitoring') }}
                        {% else %}
                            <span class="text-muted">{{ 'monitoring.health.not_used'|trans({}, 'monitoring') }}</span>
                        {% endif %}
                    </dd>

                    {% if health_checks.environment.missing_vars|length > 0 %}
                        <dt class="col-sm-5">Missing Vars:</dt>
                        <dd class="col-sm-7">
                            {% for var in health_checks.environment.missing_vars %}
                                <code class="text-danger">{{ var }}</code>{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </dd>
                    {% else %}
                        <dt class="col-sm-5">All Required Vars:</dt>
                        <dd class="col-sm-7">
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i> {{ 'monitoring.health.present'|trans({}, 'monitoring') }}
                        </dd>
                    {% endif %}
                </dl>
            {% endset %}
            {{ cards.status_card('monitoring.card.environment'|trans({}, 'monitoring'), 'file-earmark-text', env_status, env_color, env_content) }}
        </div>
        {% endif %}

        {# PHP Configuration #}
        {% if health_checks.php_config is defined %}
        <div class="col-md-6 mb-4">
            {% set phpconf_status = health_checks.php_config.status %}
            {% set phpconf_color = phpconf_status == 'healthy' ? 'success' : 'warning' %}
            {% set phpconf_content %}
                <dl class="row mb-0">
                    <dt class="col-sm-5">OPcache:</dt>
                    <dd class="col-sm-7">
                        {% if health_checks.php_config.opcache_enabled %}
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i> {{ 'monitoring.health.on'|trans({}, 'monitoring') }}
                        {% else %}
                            <i class="bi bi-x-circle text-warning" aria-hidden="true"></i> {{ 'monitoring.health.off'|trans({}, 'monitoring') }}
                        {% endif %}
                    </dd>

                    <dt class="col-sm-5">{{ 'monitoring.php.memory_limit'|trans({}, 'monitoring') }}:</dt>
                    <dd class="col-sm-7">
                        <code>{{ health_checks.php_config.memory_limit }}</code>
                        {% if health_checks.php_config.memory_sufficient %}
                            <i class="bi bi-check-circle text-success" aria-hidden="true"></i>
                        {% else %}
                            <i class="bi bi-exclamation-triangle text-warning" aria-hidden="true"></i>
                        {% endif %}
                    </dd>

                    {% if health_checks.php_config.issues|length > 0 %}
                        <dt class="col-sm-5">Issues:</dt>
                        <dd class="col-sm-7">
                            {% for issue in health_checks.php_config.issues %}
                                {% include '_components/_badge.html.twig' with { variant: 'warning', content: issue } %}<br>
                            {% endfor %}
                        </dd>
                    {% endif %}
                </dl>
            {% endset %}
            {{ cards.status_card('monitoring.card.php_config'|trans({}, 'monitoring'), 'sliders', phpconf_status, phpconf_color, phpconf_content) }}
        </div>
        {% endif %}

        {# Session Storage #}
        {% if health_checks.sessions is defined %}
        <div class="col-md-6 mb-4">
            {% set sessions_status = health_checks.sessions.status %}

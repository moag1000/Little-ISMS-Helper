{% block javascripts %}
    {{ parent() }}
    <script>
        // Auto-fix helper for programmatic calls
        async function autoFixAction(action) {
            try {
                const response = await fetch('{{ path('monitoring_health') }}/fix/' + action, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });
                return await response.json();
            } catch (error) {
                return { success: false, message: error.message };
            }
        }

        // Auto-fix permission issues on page load
        async function initHealthMonitoring() {
            if (window.healthMonitoringInitialized) return;
            window.healthMonitoringInitialized = true;

            {% if is_granted('MONITORING_MANAGE') %}
                const permissionIssues = [];

                {% if not health_checks.cache.writable %}
                    permissionIssues.push({ action: 'cache', type: 'Cache directory' });
                {% endif %}

                {% if not health_checks.logs.writable %}
                    permissionIssues.push({ action: 'logs', type: 'Log directory' });
                {% endif %}

                {% if health_checks.permissions is defined and not health_checks.permissions.var_writable %}
                    permissionIssues.push({ action: 'var-permissions', type: 'var/ directory' });
                {% endif %}

                if (permissionIssues.length > 0) {
                    let anySuccessful = false;

                    for (const issue of permissionIssues) {
                        const result = await autoFixAction(issue.action);
                        if (result.success) {
                            anySuccessful = true;
                        }
                    }

                    if (anySuccessful) {
                        setTimeout(() => {
                            window.location.reload();
                        }, 2000);
                    }
                }
            {% endif %}
        }

        document.addEventListener('turbo:load', function() {
            window.healthMonitoringInitialized = false;
            initHealthMonitoring();
        });

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initHealthMonitoring);
        } else {
            initHealthMonitoring();
        }
    </script>
{% endblock %}

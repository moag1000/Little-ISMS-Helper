{% extends 'admin/layout.html.twig' %}

{% block admin_title %}System Health{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">Systemüberwachung und Diagnose</p>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .auto-fix-btn {
            margin-top: 0.5rem;
        }
        .fix-result {
            margin-top: 0.5rem;
            padding: 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
        }
    </style>
{% endblock %}

{% block admin_content %}
    <div class="mb-3">
        <a href="{{ path('monitoring_health_json') }}" class="btn btn-outline-secondary" target="_blank">
            <i class="bi bi-code-square"></i> JSON API
        </a>
    </div>

    {# Overall Status Banner #}
    <div class="alert alert-{{ overall_status == 'healthy' ? 'success' : (overall_status == 'warning' ? 'warning' : 'danger') }} mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-{{ overall_status == 'healthy' ? 'check-circle-fill' : (overall_status == 'warning' ? 'exclamation-triangle-fill' : 'x-circle-fill') }} fs-1 me-3"></i>
            <div>
                <h4 class="mb-1">
                    System Status:
                    {% if overall_status == 'healthy' %}
                        <strong>Healthy</strong>
                    {% elseif overall_status == 'warning' %}
                        <strong>Warning</strong>
                    {% else %}
                        <strong>Error</strong>
                    {% endif %}
                </h4>
                <p class="mb-0">
                    Last checked: {{ 'now'|date('Y-m-d H:i:s') }}
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        {# Database Health #}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-{{ health_checks.database.status == 'healthy' ? 'success' : 'danger' }}">
                <div class="card-header bg-{{ health_checks.database.status == 'healthy' ? 'success' : 'danger' }} text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-database"></i> Database
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-{{ health_checks.database.status == 'healthy' ? 'success' : 'danger' }}">
                                {{ health_checks.database.status|upper }}
                            </span>
                        </dd>

                        {% if health_checks.database.response_time is defined %}
                            <dt class="col-sm-4">Response Time:</dt>
                            <dd class="col-sm-8">{{ health_checks.database.response_time }}</dd>

                            <dt class="col-sm-4">Driver:</dt>
                            <dd class="col-sm-8"><code>{{ health_checks.database.driver }}</code></dd>
                        {% endif %}

                        {% if health_checks.database.error is defined %}
                            <dt class="col-sm-4">Error:</dt>
                            <dd class="col-sm-8 text-danger">{{ health_checks.database.error }}</dd>
                        {% endif %}
                    </dl>
                </div>
            </div>
        </div>

        {# Disk Space #}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-{{ health_checks.disk.status == 'healthy' ? 'success' : 'warning' }}">
                <div class="card-header bg-{{ health_checks.disk.status == 'healthy' ? 'success' : 'warning' }} text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-hdd"></i> Disk Space
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-3">
                        <dt class="col-sm-4">Free:</dt>
                        <dd class="col-sm-8">{{ health_checks.disk.free }}</dd>

                        <dt class="col-sm-4">Used:</dt>
                        <dd class="col-sm-8">{{ health_checks.disk.used }}</dd>

                        <dt class="col-sm-4">Total:</dt>
                        <dd class="col-sm-8">{{ health_checks.disk.total }}</dd>
                    </dl>

                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-{{ health_checks.disk.percentage > 90 ? 'danger' : (health_checks.disk.percentage > 75 ? 'warning' : 'success') }}"
                             role="progressbar"
                             style="width: {{ health_checks.disk.percentage }}%"
                             aria-valuenow="{{ health_checks.disk.percentage }}"
                             aria-valuemin="0"
                             aria-valuemax="100">
                            {{ health_checks.disk.percentage }}%
                        </div>
                    </div>

                    {% if health_checks.disk.percentage > 75 and is_granted('MONITORING_MANAGE') %}
                        <div class="mt-3">
                            <button class="btn btn-sm btn-warning auto-fix-btn"
                                    onclick="autoFix('optimize-disk', this)">
                                <i class="bi bi-tools"></i> Optimize Disk Space
                            </button>
                            <div id="fix-result-optimize-disk"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# PHP Info #}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-{{ health_checks.php.status == 'healthy' ? 'success' : 'danger' }}">
                <div class="card-header bg-{{ health_checks.php.status == 'healthy' ? 'success' : 'danger' }} text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-code-slash"></i> PHP
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Version:</dt>
                        <dd class="col-sm-7"><code>{{ health_checks.php.version }}</code></dd>

                        <dt class="col-sm-5">Memory Limit:</dt>
                        <dd class="col-sm-7"><code>{{ health_checks.php.memory_limit }}</code></dd>

                        <dt class="col-sm-5">Max Execution:</dt>
                        <dd class="col-sm-7"><code>{{ health_checks.php.max_execution_time }}s</code></dd>

                        <dt class="col-sm-5">Extensions:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-success">{{ health_checks.php.loaded_extensions|length }} loaded</span>
                            {% if health_checks.php.missing_extensions|length > 0 %}
                                <span class="badge bg-danger">{{ health_checks.php.missing_extensions|length }} missing</span>
                            {% endif %}
                        </dd>

                        {% if health_checks.php.missing_extensions|length > 0 %}
                            <dt class="col-sm-5">Missing:</dt>
                            <dd class="col-sm-7">
                                {% for ext in health_checks.php.missing_extensions %}
                                    <code class="text-danger">{{ ext }}</code>{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </dd>
                        {% endif %}
                    </dl>
                </div>
            </div>
        </div>

        {# Symfony Info #}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-gear"></i> Symfony
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Version:</dt>
                        <dd class="col-sm-7"><code>{{ health_checks.symfony.version }}</code></dd>

                        <dt class="col-sm-5">Environment:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-{{ health_checks.symfony.environment == 'prod' ? 'success' : 'warning' }}">
                                {{ health_checks.symfony.environment|upper }}
                            </span>
                        </dd>

                        <dt class="col-sm-5">Debug Mode:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-{{ health_checks.symfony.debug ? 'warning' : 'success' }}">
                                {{ health_checks.symfony.debug ? 'ON' : 'OFF' }}
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        {# Cache #}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-{{ health_checks.cache.status == 'healthy' ? 'success' : 'danger' }}">
                <div class="card-header bg-{{ health_checks.cache.status == 'healthy' ? 'success' : 'danger' }} text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i> Cache
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-{{ health_checks.cache.status == 'healthy' ? 'success' : 'danger' }}">
                                {{ health_checks.cache.status|upper }}
                            </span>
                        </dd>

                        <dt class="col-sm-4">Directory:</dt>
                        <dd class="col-sm-8"><code class="small">{{ health_checks.cache.directory }}</code></dd>

                        <dt class="col-sm-4">Writable:</dt>
                        <dd class="col-sm-8">
                            {% if health_checks.cache.writable %}
                                <i class="bi bi-check-circle text-success"></i> Yes
                            {% else %}
                                <i class="bi bi-x-circle text-danger"></i> No
                            {% endif %}
                        </dd>
                    </dl>

                    {% if is_granted('MONITORING_MANAGE') %}
                        <div class="mt-3">
                            {% if not health_checks.cache.writable %}
                                <button class="btn btn-sm btn-danger auto-fix-btn"
                                        onclick="autoFix('cache', this)">
                                    <i class="bi bi-wrench"></i> Fix Permissions
                                </button>
                            {% endif %}
                            <button class="btn btn-sm btn-primary auto-fix-btn"
                                    onclick="autoFix('clear-cache', this)">
                                <i class="bi bi-trash"></i> Clear Cache
                            </button>
                            <div id="fix-result-cache"></div>
                            <div id="fix-result-clear-cache"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Logs #}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-{{ health_checks.logs.status == 'healthy' ? 'success' : 'danger' }}">
                <div class="card-header bg-{{ health_checks.logs.status == 'healthy' ? 'success' : 'danger' }} text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-file-text"></i> Logs
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-{{ health_checks.logs.status == 'healthy' ? 'success' : 'danger' }}">
                                {{ health_checks.logs.status|upper }}
                            </span>
                        </dd>

                        <dt class="col-sm-4">Directory:</dt>
                        <dd class="col-sm-8"><code class="small">{{ health_checks.logs.directory }}</code></dd>

                        <dt class="col-sm-4">Writable:</dt>
                        <dd class="col-sm-8">
                            {% if health_checks.logs.writable %}
                                <i class="bi bi-check-circle text-success"></i> Yes
                            {% else %}
                                <i class="bi bi-x-circle text-danger"></i> No
                            {% endif %}
                        </dd>
                    </dl>

                    {% if is_granted('MONITORING_MANAGE') %}
                        <div class="mt-3">
                            {% if not health_checks.logs.writable %}
                                <button class="btn btn-sm btn-danger auto-fix-btn"
                                        onclick="autoFix('logs', this)">
                                    <i class="bi bi-wrench"></i> Fix Permissions
                                </button>
                            {% endif %}
                            <button class="btn btn-sm btn-warning auto-fix-btn"
                                    onclick="autoFix('clean-logs', this)">
                                <i class="bi bi-trash"></i> Clean Old Logs
                            </button>
                            <button class="btn btn-sm btn-info auto-fix-btn"
                                    onclick="autoFix('rotate-logs', this)">
                                <i class="bi bi-arrow-repeat"></i> Rotate Logs
                            </button>
                            <div id="fix-result-logs"></div>
                            <div id="fix-result-clean-logs"></div>
                            <div id="fix-result-rotate-logs"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# File Permissions #}
        {% if health_checks.permissions is defined %}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-{{ health_checks.permissions.status == 'healthy' ? 'success' : 'danger' }}">
                <div class="card-header bg-{{ health_checks.permissions.status == 'healthy' ? 'success' : 'danger' }} text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-lock"></i> File Permissions
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">var/ Writable:</dt>
                        <dd class="col-sm-7">
                            {% if health_checks.permissions.var_writable %}
                                <i class="bi bi-check-circle text-success"></i> Yes
                            {% else %}
                                <i class="bi bi-x-circle text-danger"></i> No
                            {% endif %}
                        </dd>

                        <dt class="col-sm-5">uploads/ Writable:</dt>
                        <dd class="col-sm-7">
                            {% if health_checks.permissions.uploads_writable is null %}
                                <span class="text-muted">N/A</span>
                            {% elseif health_checks.permissions.uploads_writable %}
                                <i class="bi bi-check-circle text-success"></i> Yes
                            {% else %}
                                <i class="bi bi-x-circle text-danger"></i> No
                            {% endif %}
                        </dd>

                        {% if health_checks.permissions.issues|length > 0 %}
                            <dt class="col-sm-5">Issues:</dt>
                            <dd class="col-sm-7">
                                {% for issue in health_checks.permissions.issues %}
                                    <span class="badge bg-danger">{{ issue }}</span><br>
                                {% endfor %}
                            </dd>
                        {% endif %}
                    </dl>

                    {% if is_granted('MONITORING_MANAGE') and health_checks.permissions.status != 'healthy' %}
                        <div class="mt-3">
                            {% if not health_checks.permissions.var_writable %}
                                <button class="btn btn-sm btn-danger auto-fix-btn"
                                        onclick="autoFix('var-permissions', this)">
                                    <i class="bi bi-wrench"></i> Fix var/ Permissions
                                </button>
                            {% endif %}
                            {% if health_checks.permissions.uploads_writable is not null and not health_checks.permissions.uploads_writable %}
                                <button class="btn btn-sm btn-danger auto-fix-btn"
                                        onclick="autoFix('uploads-permissions', this)">
                                    <i class="bi bi-wrench"></i> Fix uploads/ Permissions
                                </button>
                            {% endif %}
                            <div id="fix-result-var-permissions"></div>
                            <div id="fix-result-uploads-permissions"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}

        {# Composer Dependencies #}
        {% if health_checks.composer is defined %}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-{{ health_checks.composer.status == 'healthy' ? 'success' : 'danger' }}">
                <div class="card-header bg-{{ health_checks.composer.status == 'healthy' ? 'success' : 'danger' }} text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-box-seam"></i> Composer
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Status:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-{{ health_checks.composer.status == 'healthy' ? 'success' : 'danger' }}">
                                {{ health_checks.composer.status|upper }}
                            </span>
                        </dd>

                        <dt class="col-sm-5">composer.lock:</dt>
                        <dd class="col-sm-7">
                            {% if health_checks.composer.lock_exists %}
                                <i class="bi bi-check-circle text-success"></i> Exists
                            {% else %}
                                <i class="bi bi-x-circle text-danger"></i> Missing
                            {% endif %}
                        </dd>

                        <dt class="col-sm-5">vendor/:</dt>
                        <dd class="col-sm-7">
                            {% if health_checks.composer.vendor_exists %}
                                <i class="bi bi-check-circle text-success"></i> Exists
                            {% else %}
                                <i class="bi bi-x-circle text-danger"></i> Missing
                            {% endif %}
                        </dd>

                        <dt class="col-sm-5">Message:</dt>
                        <dd class="col-sm-7">{{ health_checks.composer.message }}</dd>
                    </dl>

                    {% if is_granted('MONITORING_MANAGE') and health_checks.composer.status != 'healthy' %}
                        <div class="mt-3">
                            <button class="btn btn-sm btn-danger auto-fix-btn"
                                    onclick="autoFix('composer-install', this)">
                                <i class="bi bi-download"></i> Run Composer Install
                            </button>
                            <div id="fix-result-composer-install"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}

        {# Environment Variables #}
        {% if health_checks.environment is defined %}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-{{ health_checks.environment.status == 'healthy' ? 'success' : 'danger' }}">
                <div class="card-header bg-{{ health_checks.environment.status == 'healthy' ? 'success' : 'danger' }} text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark-text"></i> Environment
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">.env File:</dt>
                        <dd class="col-sm-7">
                            {% if health_checks.environment.env_file_exists %}
                                <i class="bi bi-check-circle text-success"></i> Exists
                            {% else %}
                                <i class="bi bi-x-circle text-danger"></i> Missing
                            {% endif %}
                        </dd>

                        <dt class="col-sm-5">.env.local File:</dt>
                        <dd class="col-sm-7">
                            {% if health_checks.environment.env_local_exists %}
                                <i class="bi bi-check-circle text-success"></i> Exists
                            {% else %}
                                <span class="text-muted">Not used</span>
                            {% endif %}
                        </dd>

                        {% if health_checks.environment.missing_vars|length > 0 %}
                            <dt class="col-sm-5">Missing Vars:</dt>
                            <dd class="col-sm-7">
                                {% for var in health_checks.environment.missing_vars %}
                                    <code class="text-danger">{{ var }}</code>{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </dd>
                        {% else %}
                            <dt class="col-sm-5">All Required Vars:</dt>
                            <dd class="col-sm-7">
                                <i class="bi bi-check-circle text-success"></i> Present
                            </dd>
                        {% endif %}
                    </dl>
                </div>
            </div>
        </div>
        {% endif %}

        {# PHP Configuration #}
        {% if health_checks.php_config is defined %}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-{{ health_checks.php_config.status == 'healthy' ? 'success' : 'warning' }}">
                <div class="card-header bg-{{ health_checks.php_config.status == 'healthy' ? 'success' : 'warning' }} text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-sliders"></i> PHP Configuration
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">OPcache:</dt>
                        <dd class="col-sm-7">
                            {% if health_checks.php_config.opcache_enabled %}
                                <i class="bi bi-check-circle text-success"></i> Enabled
                            {% else %}
                                <i class="bi bi-x-circle text-warning"></i> Disabled
                            {% endif %}
                        </dd>

                        <dt class="col-sm-5">Memory Limit:</dt>
                        <dd class="col-sm-7">
                            <code>{{ health_checks.php_config.memory_limit }}</code>
                            {% if health_checks.php_config.memory_sufficient %}
                                <i class="bi bi-check-circle text-success"></i>
                            {% else %}
                                <i class="bi bi-exclamation-triangle text-warning"></i>
                            {% endif %}
                        </dd>

                        {% if health_checks.php_config.issues|length > 0 %}
                            <dt class="col-sm-5">Issues:</dt>
                            <dd class="col-sm-7">
                                {% for issue in health_checks.php_config.issues %}
                                    <span class="badge bg-warning">{{ issue }}</span><br>
                                {% endfor %}
                            </dd>
                        {% endif %}
                    </dl>
                </div>
            </div>
        </div>
        {% endif %}

        {# Session Storage #}
        {% if health_checks.sessions is defined %}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-{{ health_checks.sessions.status == 'healthy' ? 'success' : 'danger' }}">
                <div class="card-header bg-{{ health_checks.sessions.status == 'healthy' ? 'success' : 'danger' }} text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-key"></i> Sessions
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Handler:</dt>
                        <dd class="col-sm-7"><code>{{ health_checks.sessions.handler }}</code></dd>

                        <dt class="col-sm-5">Save Path:</dt>
                        <dd class="col-sm-7"><code class="small">{{ health_checks.sessions.save_path }}</code></dd>

                        <dt class="col-sm-5">Writable:</dt>
                        <dd class="col-sm-7">
                            {% if health_checks.sessions.writable %}
                                <i class="bi bi-check-circle text-success"></i> Yes
                            {% else %}
                                <i class="bi bi-x-circle text-danger"></i> No
                            {% endif %}
                        </dd>
                    </dl>

                    {% if is_granted('MONITORING_MANAGE') and not health_checks.sessions.writable %}
                        <div class="mt-3">
                            <button class="btn btn-sm btn-danger auto-fix-btn"
                                    onclick="autoFix('session-permissions', this)">
                                <i class="bi bi-wrench"></i> Fix Permissions
                            </button>
                            <div id="fix-result-session-permissions"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}

        {# Uploads Directory #}
        {% if health_checks.uploads is defined %}
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-cloud-upload"></i> Uploads
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Directory:</dt>
                        <dd class="col-sm-7"><code class="small">{{ health_checks.uploads.directory }}</code></dd>

                        <dt class="col-sm-5">Current Size:</dt>
                        <dd class="col-sm-7">{{ health_checks.uploads.size }}</dd>

                        <dt class="col-sm-5">Free Space:</dt>
                        <dd class="col-sm-7">{{ health_checks.uploads.free_space }}</dd>

                        <dt class="col-sm-5">Writable:</dt>
                        <dd class="col-sm-7">
                            {% if health_checks.uploads.writable %}
                                <i class="bi bi-check-circle text-success"></i> Yes
                            {% else %}
                                <i class="bi bi-x-circle text-danger"></i> No
                            {% endif %}
                        </dd>
                    </dl>

                    {% if is_granted('MONITORING_MANAGE') %}
                        <div class="mt-3">
                            <button class="btn btn-sm btn-warning auto-fix-btn"
                                    onclick="autoFix('clean-uploads', this)">
                                <i class="bi bi-trash"></i> Clean Old Uploads
                            </button>
                            <div id="fix-result-clean-uploads"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    {# Quick Actions #}
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-link-45deg"></i> Related Monitoring
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-2">
                    <a href="{{ path('monitoring_performance') }}" class="btn btn-outline-primary w-100">
                        <i class="bi bi-speedometer"></i> Performance Metrics
                    </a>
                </div>
                <div class="col-md-3 mb-2">
                    <a href="{{ path('monitoring_errors') }}" class="btn btn-outline-danger w-100">
                        <i class="bi bi-exclamation-triangle"></i> Error Logs
                    </a>
                </div>
                <div class="col-md-3 mb-2">

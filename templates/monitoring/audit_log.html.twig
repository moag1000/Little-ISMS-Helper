{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'audit_log' %}

{% block admin_title %}{{ 'audit_log.page.title'|trans({}, 'audit_log') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'audit_log.page.monitoring_subtitle'|trans({}, 'audit_log') }}</p>
{% endblock %}

{% block admin_content %}
    <div class="mb-3">
        <a href="{{ path('monitoring_health') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'audit_log.action.back_to_health'|trans({}, 'audit_log') }}
        </a>
    </div>

    {# Statistics #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <div class="card-title text-muted fw-bold">{{ 'audit_log.stats.total_entries'|trans({}, 'audit_log') }}</div>
                    <p class="display-6 text-primary">{{ statistics.total }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body">
                    <div class="card-title text-muted fw-bold">{{ 'audit_log.stats.top_actions'|trans({}, 'audit_log') }}</div>
                    {% for stat in statistics.action_stats|slice(0, 5) %}
                        <div class="d-flex justify-content-between">
                            <span class="badge bg-primary">{{ stat.action }}</span>
                            <span>{{ stat.count }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-info">
                <div class="card-body">
                    <div class="card-title text-muted fw-bold">{{ 'audit_log.stats.top_entities'|trans({}, 'audit_log') }}</div>
                    {% for stat in statistics.entity_stats|slice(0, 5) %}
                        <div class="d-flex justify-content-between">
                            <span>{{ stat.entityType }}</span>
                            <span class="badge bg-info">{{ stat.count }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    {# Quick Filters #}
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">
                <i class="bi bi-funnel" aria-hidden="true"></i> {{ 'audit_log.section.quick_filters'|trans({}, 'audit_log') }}
            </h2>
        </div>
        <div class="card-body">
            <div class="btn-group btn-group-sm" role="group">
                <a href="{{ path('monitoring_audit_log', {filter: 'all'}) }}"
                   class="btn btn-sm {{ current_filter == 'all' ? 'btn-primary' : 'btn-outline-primary' }}">
                    {{ 'audit_log.filter.quick.all'|trans({}, 'audit_log') }}
                </a>
                <a href="{{ path('monitoring_audit_log', {filter: 'today'}) }}"
                   class="btn btn-sm {{ current_filter == 'today' ? 'btn-primary' : 'btn-outline-primary' }}">
                    {{ 'audit_log.filter.quick.today'|trans({}, 'audit_log') }}
                </a>
                <a href="{{ path('monitoring_audit_log', {filter: 'week'}) }}"
                   class="btn btn-sm {{ current_filter == 'week' ? 'btn-primary' : 'btn-outline-primary' }}">
                    {{ 'audit_log.filter.quick.this_week'|trans({}, 'audit_log') }}
                </a>
                <a href="{{ path('monitoring_audit_log', {filter: 'critical'}) }}"
                   class="btn btn-sm {{ current_filter == 'critical' ? 'btn-danger' : 'btn-outline-danger' }}">
                    {{ 'audit_log.filter.quick.critical_actions'|trans({}, 'audit_log') }}
                </a>
            </div>
        </div>
    </div>

    {# Audit Log Entries #}
    <div class="card">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">
                <i class="bi bi-list-ul" aria-hidden="true"></i> {{ 'audit_log.section.entries'|trans({}, 'audit_log') }} ({{ logs|length }})
            </h2>
        </div>
        <div class="card-body p-0">
            {% if logs|length > 0 %}
                {% embed '_components/_table.html.twig' with {
                    'class': 'table-hover mb-0',
                    'theadClass': 'table-light',
                    'noMargin': true,
                    'responsive': true
                } %}
                    {% block table_head %}
                        <tr>
                            <th scope="col">{{ 'audit_log.table.timestamp'|trans({}, 'audit_log') }}</th>
                            <th scope="col">{{ 'audit_log.table.user'|trans({}, 'audit_log') }}</th>
                            <th scope="col">{{ 'audit_log.table.action'|trans({}, 'audit_log') }}</th>
                            <th scope="col">{{ 'audit_log.table.entity'|trans({}, 'audit_log') }}</th>
                            <th scope="col">{{ 'audit_log.table.ip_address'|trans({}, 'audit_log') }}</th>
                            <th scope="col" class="text-end">{{ 'audit_log.table.details'|trans({}, 'audit_log') }}</th>
                        </tr>
                    {% endblock %}
                    {% block table_body %}
                        {% for log in logs %}
                            <tr>
                                <td>
                                    <small>{{ log.createdAt|date('Y-m-d H:i:s') }}</small>
                                </td>
                                <td>
                                    <i class="bi bi-person" aria-hidden="true"></i>
                                    {{ log.userName }}
                                </td>
                                <td>
                                    <span class="badge bg-{{ log.action in ['delete', 'destroy', 'remove'] ? 'danger' : (log.action in ['create', 'add'] ? 'success' : 'primary') }}">
                                        {{ log.action }}
                                    </span>
                                </td>
                                <td>
                                    {% if log.entityType %}
                                        {{ log.entityType }}
                                        {% if log.entityId %}
                                            <code>#{{ log.entityId }}</code>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <code class="small">{{ log.ipAddress ?? '-' }}</code>
                                </td>
                                <td class="text-end">
                                    {% if log.description or log.newValues %}
                                        <button type="button"
                                                class="btn btn-sm btn-outline-primary"
                                                data-bs-toggle="modal"
                                                data-bs-target="#logModal{{ log.id }}">
                                            <i class="bi bi-eye" aria-hidden="true"></i> {{ 'audit_log.table.view_details'|trans({}, 'audit_log') }}
                                        </button>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                            </tr>

                            {# Modal for log details #}
                            {% if log.description or log.newValues %}
                                <div class="modal fade" id="logModal{{ log.id }}" tabindex="-1">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h3 class="modal-title h5">{{ 'audit_log.modal.title'|trans({}, 'audit_log') }}</h3>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                                            </div>
                                            <div class="modal-body">
                                                <dl class="row">
                                                    <dt class="col-sm-3">{{ 'audit_log.table.timestamp'|trans({}, 'audit_log') }}:</dt>
                                                    <dd class="col-sm-9">{{ log.createdAt|date('Y-m-d H:i:s') }}</dd>

                                                    <dt class="col-sm-3">{{ 'audit_log.table.user'|trans({}, 'audit_log') }}:</dt>
                                                    <dd class="col-sm-9">{{ log.userName }}</dd>

                                                    <dt class="col-sm-3">{{ 'audit_log.table.action'|trans({}, 'audit_log') }}:</dt>
                                                    <dd class="col-sm-9">
                                                        <span class="badge bg-primary">{{ log.action }}</span>
                                                    </dd>

                                                    {% if log.description %}
                                                        <dt class="col-sm-3">{{ 'audit_log.table.description'|trans({}, 'audit_log') }}:</dt>
                                                        <dd class="col-sm-9">{{ log.description }}</dd>
                                                    {% endif %}

                                                    {% if log.newValues %}
                                                        <dt class="col-sm-3">{{ 'audit_log.table.changes'|trans({}, 'audit_log') }}:</dt>
                                                        <dd class="col-sm-9">
                                                            <pre class="bg-light p-2 rounded">{{ log.newValues }}</pre>
                                                        </dd>
                                                    {% endif %}
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            {% else %}
                <div class="p-4 text-center">
                    <i class="bi bi-info-circle text-info fs-1" aria-hidden="true"></i>
                    <p class="mt-2">{{ 'audit_log.message.no_entries_filtered'|trans({}, 'audit_log') }}</p>
                </div>
            {% endif %}
        </div>
    </div>

    {# Info Box #}
    <div class="alert alert-info mt-4">
        <div class="fw-bold h5"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'audit_log.info.about_title'|trans({}, 'audit_log') }}</div>
        <p class="mb-0">
            {{ 'audit_log.info.about_text'|trans({}, 'audit_log') }}
            <a href="{{ path('app_audit_log_index') }}" class="alert-link">{{ 'audit_log.info.module_link'|trans({}, 'audit_log') }}</a>.
        </p>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Audit Log - Monitoring{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-journal-text"></i> Audit Log</h1>
        <a href="{{ path('monitoring_health') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Health
        </a>
    </div>

    {# Statistics #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Total Entries</h5>
                    <p class="display-6 text-primary">{{ statistics.total }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body">
                    <h5 class="card-title text-muted">Top Actions</h5>
                    {% for stat in statistics.action_stats|slice(0, 5) %}
                        <div class="d-flex justify-content-between">
                            <span class="badge bg-primary">{{ stat.action }}</span>
                            <span>{{ stat.count }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-info">
                <div class="card-body">
                    <h5 class="card-title text-muted">Top Entities</h5>
                    {% for stat in statistics.entity_stats|slice(0, 5) %}
                        <div class="d-flex justify-content-between">
                            <span>{{ stat.entityType }}</span>
                            <span class="badge bg-info">{{ stat.count }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    {# Quick Filters #}
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Quick Filters
            </h5>
        </div>
        <div class="card-body">
            <div class="btn-group" role="group">
                <a href="{{ path('monitoring_audit_log', {filter: 'all'}) }}"
                   class="btn btn-sm {{ current_filter == 'all' ? 'btn-primary' : 'btn-outline-primary' }}">
                    All
                </a>
                <a href="{{ path('monitoring_audit_log', {filter: 'today'}) }}"
                   class="btn btn-sm {{ current_filter == 'today' ? 'btn-primary' : 'btn-outline-primary' }}">
                    Today
                </a>
                <a href="{{ path('monitoring_audit_log', {filter: 'week'}) }}"
                   class="btn btn-sm {{ current_filter == 'week' ? 'btn-primary' : 'btn-outline-primary' }}">
                    This Week
                </a>
                <a href="{{ path('monitoring_audit_log', {filter: 'critical'}) }}"
                   class="btn btn-sm {{ current_filter == 'critical' ? 'btn-danger' : 'btn-outline-danger' }}">
                    Critical Actions
                </a>
            </div>
        </div>
    </div>

    {# Audit Log Entries #}
    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Audit Entries ({{ logs|length }})
            </h5>
        </div>
        <div class="card-body p-0">
            {% if logs|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Timestamp</th>
                                <th scope="col">User</th>
                                <th scope="col">Action</th>
                                <th scope="col">Entity</th>
                                <th scope="col">IP Address</th>
                                <th scope="col" class="text-end">Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for log in logs %}
                                <tr>
                                    <td>
                                        <small>{{ log.createdAt|date('Y-m-d H:i:s') }}</small>
                                    </td>
                                    <td>
                                        <i class="bi bi-person"></i>
                                        {{ log.userName }}
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ log.action in ['delete', 'destroy', 'remove'] ? 'danger' : (log.action in ['create', 'add'] ? 'success' : 'primary') }}">
                                            {{ log.action }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if log.entityType %}
                                            {{ log.entityType }}
                                            {% if log.entityId %}
                                                <code>#{{ log.entityId }}</code>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <code class="small">{{ log.ipAddress ?? '-' }}</code>
                                    </td>
                                    <td class="text-end">
                                        {% if log.description or log.newValues %}
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-primary"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#logModal{{ log.id }}">
                                                <i class="bi bi-eye"></i> View
                                            </button>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                </tr>

                                {# Modal for log details #}
                                {% if log.description or log.newValues %}
                                    <div class="modal fade" id="logModal{{ log.id }}" tabindex="-1">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Audit Log Details</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <dl class="row">
                                                        <dt class="col-sm-3">Timestamp:</dt>
                                                        <dd class="col-sm-9">{{ log.createdAt|date('Y-m-d H:i:s') }}</dd>

                                                        <dt class="col-sm-3">User:</dt>
                                                        <dd class="col-sm-9">{{ log.userName }}</dd>

                                                        <dt class="col-sm-3">Action:</dt>
                                                        <dd class="col-sm-9">
                                                            <span class="badge bg-primary">{{ log.action }}</span>
                                                        </dd>

                                                        {% if log.description %}
                                                            <dt class="col-sm-3">Description:</dt>
                                                            <dd class="col-sm-9">{{ log.description }}</dd>
                                                        {% endif %}

                                                        {% if log.newValues %}
                                                            <dt class="col-sm-3">Changes:</dt>
                                                            <dd class="col-sm-9">
                                                                <pre class="bg-light p-2 rounded">{{ log.newValues }}</pre>
                                                            </dd>
                                                        {% endif %}
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="p-4 text-center">
                    <i class="bi bi-info-circle text-info fs-1"></i>
                    <p class="mt-2">No audit log entries found for the selected filter.</p>
                </div>
            {% endif %}
        </div>
    </div>

    {# Info Box #}
    <div class="alert alert-info mt-4">
        <h5><i class="bi bi-info-circle"></i> About Audit Log</h5>
        <p class="mb-0">
            The audit log tracks all significant actions in the system including create, update, and delete operations.
            This provides a complete audit trail for compliance and security purposes.
            For more detailed audit log functionality, visit the dedicated
            <a href="{{ path('audit_log_index') }}" class="alert-link">Audit Log module</a>.
        </p>
    </div>
</div>
{% endblock %}

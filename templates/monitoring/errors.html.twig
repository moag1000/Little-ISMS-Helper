{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'monitoring' %}
{% block admin_title %}{{ 'monitoring.errors.title'|trans({}, 'monitoring') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'monitoring.errors.subtitle'|trans({}, 'monitoring') }}</p>
{% endblock %}

{% block admin_content %}
    <div class="mb-3">
        <a href="{{ path('monitoring_health') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'monitoring.back_to_health'|trans({}, 'monitoring') }}
        </a>
    </div>

    {% if has_log %}
        {# Statistics #}
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-danger">
                    <div class="card-body text-center">
                        <div class="card-title text-muted fw-bold">{{ 'monitoring.errors.total'|trans({}, 'monitoring') }}</div>
                        <p class="display-6 text-danger">{{ error_stats.total }}</p>
                        <small>{{ 'monitoring.errors.shown'|trans({'%count%': errors|length}, 'monitoring') }}</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <div class="card-title text-muted fw-bold">{{ 'monitoring.errors.file_size'|trans({}, 'monitoring') }}</div>
                        <p class="display-6 text-warning small">{{ error_stats.file_size }}</p>
                        <small>{{ 'monitoring.errors.log_file_size'|trans({}, 'monitoring') }}</small>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-info">
                    <div class="card-body">
                        <div class="card-title text-muted fw-bold">{{ 'monitoring.by_level'|trans({}, 'monitoring')}}</div>
                        {% for level, count in error_stats.by_level %}
                            <div class="d-flex justify-content-between mb-2">
                                {% include '_components/_badge.html.twig' with { variant: level == 'ERROR' ? 'danger' : (level == 'WARNING' ? 'warning' : 'info'), content: level } %}
                                <span>{{ count }}</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        {# Log File Info #}
        <div class="alert alert-secondary mb-4">
            <strong>{{ 'monitoring.errors.log_file'|trans({}, 'monitoring') }}:</strong> <code>{{ log_file }}</code><br>
            <strong>{{ 'monitoring.errors.last_modified'|trans({}, 'monitoring') }}:</strong> {{ error_stats.last_modified }}
        </div>

        {# Filter Options #}
        <div class="card mb-4">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-auto">
                        <label for="limit" class="col-form-label">{{ 'monitoring.show_entries'|trans({}, 'monitoring')}}</label>
                    </div>
                    <div class="col-auto">
                        <select name="limit" id="limit" class="form-select" data-controller="ui-actions" data-action="change->ui-actions#autoSubmit">
                            <option value="50" {{ app.request.query.get('limit') == 50 ? 'selected' : '' }}>50</option>
                            <option value="100" {{ app.request.query.get('limit') == 100 or not app.request.query.get('limit') ? 'selected' : '' }}>100</option>
                            <option value="200" {{ app.request.query.get('limit') == 200 ? 'selected' : '' }}>200</option>
                            <option value="500" {{ app.request.query.get('limit') == 500 ? 'selected' : '' }}>500</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>

        {# Error List #}
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">
                    <i class="bi bi-list-ul" aria-hidden="true"></i> {{ 'monitoring.errors.recent'|trans({}, 'monitoring') }}
                </h2>
            </div>
            <div class="card-body p-0">
                {% if errors|length > 0 %}
                    <div class="list-group list-group-flush">
                        {% for error in errors %}
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-2">
                                            {% include '_components/_badge.html.twig' with { variant: error.level == 'ERROR' ? 'danger' : (error.level == 'WARNING' ? 'warning' : (error.level == 'CRITICAL' ? 'dark' : 'info')), class: 'me-2', content: error.level } %}
                                            <small class="text-muted">
                                                <i class="bi bi-clock" aria-hidden="true"></i> {{ error.timestamp }}
                                            </small>
                                            {% include '_components/_badge.html.twig' with { variant: 'secondary', class: 'ms-2', content: error.channel } %}
                                        </div>
                                        <p class="mb-1 font-monospace small">{{ error.message|slice(0, 300) }}{% if error.message|length > 300 %}...{% endif %}</p>
                                        <details class="mt-2">
                                            <summary class="text-muted small" style="cursor: pointer;">
                                                <i class="bi bi-code-square" aria-hidden="true"></i> {{ 'monitoring.errors.show_full'|trans({}, 'monitoring') }}
                                            </summary>
                                            <pre class="mt-2 mb-0 small bg-light p-3 rounded">{{ error.raw }}</pre>
                                        </details>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="p-4 text-center">
                        <i class="bi bi-check-circle text-success fs-1" aria-hidden="true"></i>
                        <p class="mt-2">{{ 'monitoring.no_errors_found'|trans({}, 'monitoring')}}</p>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Warning Box #}
        <div class="alert alert-warning mt-4">
            <h3><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'monitoring.errors.important_notes'|trans({}, 'monitoring') }}</h3>
            <ul class="mb-0">
                <li>{{ 'monitoring.reverse_order'|trans({}, 'monitoring')}}</li>
                <li>{{ 'monitoring.recent_entries_only'|trans({}, 'monitoring')}}</li>
                <li>{{ 'monitoring.full_log_analysis'|trans({}, 'monitoring')}}</li>
                <li>{{ 'monitoring.large_files_warning'|trans({}, 'monitoring')}}</li>
            </ul>
        </div>
    {% else %}
        <div class="alert alert-info">
            <h2><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'monitoring.errors.no_log_file'|trans({}, 'monitoring') }}</h2>
            <p class="mb-0">
                {{ 'monitoring.errors.no_log_file_text'|trans({'%file%': log_file}, 'monitoring')|raw }}
            </p>
        </div>
    {% endif %}
</div>
{% endblock %}

{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'monitoring' %}

{% block admin_title %}{{ 'monitoring.performance.title'|trans({}, 'monitoring') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'monitoring.performance.subtitle'|trans({}, 'monitoring') }}</p>
{% endblock %}

{% block admin_content %}
{% import '_macros/cards.html.twig' as cards %}

    <div class="mb-3">
        <a href="{{ path('monitoring_health') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'monitoring.back_to_health'|trans({}, 'monitoring') }}
        </a>
    </div>

    {# Overview Statistics #}
    <div class="row mb-4">
        <div class="col-md-3">
            {{ cards.kpi_card('monitoring.performance.total_requests'|trans({}, 'monitoring'), total_requests, 'monitoring.performance.last_24h'|trans({}, 'monitoring'), null, 'primary', 'border-primary') }}
        </div>
        <div class="col-md-3">
            {{ cards.kpi_card('monitoring.performance.unique_users'|trans({}, 'monitoring'), unique_users, 'monitoring.performance.active_today'|trans({}, 'monitoring'), null, 'success', 'border-success') }}
        </div>
        <div class="col-md-3">
            {{ cards.kpi_card('monitoring.performance.memory_usage'|trans({}, 'monitoring'), memory_usage, 'monitoring.performance.current'|trans({}, 'monitoring'), null, 'info', 'border-info') }}
        </div>
        <div class="col-md-3">
            {{ cards.kpi_card('monitoring.performance.memory_peak'|trans({}, 'monitoring'), memory_peak, 'monitoring.performance.peak_usage'|trans({}, 'monitoring'), null, 'warning', 'border-warning') }}
        </div>
    </div>

    <div class="row">
        {# Top Actions #}
        <div class="col-md-6 mb-4">
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">
                            <i class="bi bi-activity" aria-hidden="true"></i> {{ 'monitoring.performance.top_actions'|trans({}, 'monitoring') }} ({{ 'monitoring.performance.last_24h'|trans({}, 'monitoring') }})
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    {% if top_actions|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for action, count in top_actions %}
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="bi bi-dot" aria-hidden="true"></i>
                                        <code>{{ action }}</code>
                                    </span>
                                    <span>
                                        {% include '_components/_badge.html.twig' with { variant: 'primary', pill: true, content: count } %}
                                        <small class="text-muted ms-2">
                                            ({{ (count / total_requests * 100)|number_format(1) }}%)
                                        </small>
                                    </span>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'monitoring.performance.no_data'|trans({}, 'monitoring') }}
                        </div>
                    {% endif %}
                {% endblock %}
            {% endembed %}
        </div>

        {# Top Entities #}
        <div class="col-md-6 mb-4">
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header bg-success text-white">
                        <h2 class="mb-0">
                            <i class="bi bi-folder" aria-hidden="true"></i> {{ 'monitoring.performance.top_entities'|trans({}, 'monitoring') }} ({{ 'monitoring.performance.last_24h'|trans({}, 'monitoring') }})
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    {% if top_entities|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for entity, count in top_entities %}
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="bi bi-dot" aria-hidden="true"></i>
                                        {{ entity }}
                                    </span>
                                    <span>
                                        {% include '_components/_badge.html.twig' with { variant: 'success', pill: true, content: count } %}
                                        <small class="text-muted ms-2">
                                            ({{ (count / total_requests * 100)|number_format(1) }}%)
                                        </small>
                                    </span>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'monitoring.performance.no_data'|trans({}, 'monitoring') }}
                        </div>
                    {% endif %}
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    {# System Resources #}
    {% embed '_components/_card.html.twig' %}
        {% block card_header %}
            <div class="card-header bg-info text-white">
                <h2 class="mb-0">
                    <i class="bi bi-cpu" aria-hidden="true"></i> {{ 'monitoring.performance.system_resources'|trans({}, 'monitoring') }}
                </h2>
            </div>
        {% endblock %}
        {% block card_body %}
            <div class="row">
                <div class="col-md-4">
                    <dl class="row">
                        <dt class="col-sm-6">{{ 'monitoring.performance.memory_limit'|trans({}, 'monitoring') }}:</dt>
                        <dd class="col-sm-6"><code>{{ memory_limit }}</code></dd>

                        <dt class="col-sm-6">{{ 'monitoring.performance.current_usage'|trans({}, 'monitoring') }}:</dt>
                        <dd class="col-sm-6"><code>{{ memory_usage }}</code></dd>

                        <dt class="col-sm-6">{{ 'monitoring.performance.peak_usage'|trans({}, 'monitoring') }}:</dt>
                        <dd class="col-sm-6"><code>{{ memory_peak }}</code></dd>
                    </dl>
                </div>
                <div class="col-md-8">
                    <div class="alert alert-info mb-0">
                        <h3><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'monitoring.performance.note_title'|trans({}, 'monitoring') }}</h3>
                        <p class="mb-0">
                            {{ 'monitoring.performance.note_text'|trans({}, 'monitoring')|raw }}
                        </p>
                    </div>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
</div>
{% endblock %}

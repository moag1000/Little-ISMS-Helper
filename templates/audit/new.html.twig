{% extends 'base.html.twig' %}

{% block title %}{{ 'audit.new'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_audit_index') }}" data-turbo-action="advance">
                    <i class="bi bi-clipboard-check"></i> {{ 'audit.title'|trans }}
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'audit.new'|trans }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> {{ 'audit.new'|trans }}
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4" role="alert">
                        <h6 class="alert-heading">
                            <i class="bi bi-info-circle-fill"></i> {{ 'audit.iso_27001_requirement'|trans }}
                        </h6>
                        <p class="mb-0 small">
                            {{ 'audit.iso_27001_clause_info'|trans }}
                        </p>
                    </div>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {# Basic Information Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-info-square"></i> {{ 'audit.section.basic_info'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.title) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.scope) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.scopeType) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.scopedFramework) }}
                                </div>
                                <div class="col-md-12 mb-3" id="subsidiaries-container" style="display: none;">
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle"></i>
                                        <strong>Konzernaudit:</strong> Wählen Sie die Tochtergesellschaften aus, die in dieses Audit einbezogen werden sollen.
                                        Bei "Konzernweites Audit" sollten alle relevanten Tochtergesellschaften ausgewählt werden.
                                    </div>
                                    {{ form_row(form.auditedSubsidiaries) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Schedule Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-calendar-event"></i> {{ 'audit.section.schedule'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.plannedDate) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.actualDate) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Team & Status Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-people"></i> {{ 'audit.section.team'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.leadAuditor) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.status) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.auditTeam) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Objectives Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-bullseye"></i> {{ 'audit.section.objectives'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.objectives) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Findings & Recommendations Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> {{ 'audit.section.findings'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.findings) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.recommendations) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.conclusion) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a href="{{ path('app_audit_index') }}"
                           class="btn btn-outline-secondary"
                           data-turbo-action="advance">
                            <i class="bi bi-arrow-left"></i> {{ 'common.back'|trans }}
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> {{ 'audit.create'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-check-input {
        cursor: pointer;
    }
    .form-check-label {
        cursor: pointer;
    }
    select[multiple] {
        min-height: 150px;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const scopeTypeSelect = document.querySelector('[data-corporate-scope]');
    const subsidiariesContainer = document.getElementById('subsidiaries-container');
    const subsidiariesSelect = document.querySelector('[data-corporate-subsidiaries]');

    if (!scopeTypeSelect || !subsidiariesContainer) {
        return; // Elements not found, exit
    }

    function toggleSubsidiariesField() {
        const selectedScope = scopeTypeSelect.value;
        const isCorporateScope = selectedScope === 'corporate_wide' || selectedScope === 'corporate_subsidiaries';

        if (isCorporateScope) {
            subsidiariesContainer.style.display = 'block';

            // Auto-select all for corporate_wide
            if (selectedScope === 'corporate_wide' && subsidiariesSelect) {
                for (let option of subsidiariesSelect.options) {
                    option.selected = true;
                }
            }
        } else {
            subsidiariesContainer.style.display = 'none';

            // Deselect all when hiding
            if (subsidiariesSelect) {
                for (let option of subsidiariesSelect.options) {
                    option.selected = false;
                }
            }
        }
    }

    // Initial check
    toggleSubsidiariesField();

    // Listen for changes
    scopeTypeSelect.addEventListener('change', toggleSubsidiariesField);
});
</script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'audit.new'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_audit_index') }}" data-turbo-action="advance">
                            <i class="bi bi-clipboard-check" aria-hidden="true"></i> {{ 'audit.title'|trans }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'audit.new'|trans }}</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'audit.new'|trans }}
                </h1>
                <a href="{{ path('app_audit_index') }}" class="btn btn-outline-secondary" data-turbo-action="advance">
                    <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans }}
                </a>
            </div>

            <div class="alert alert-info mb-4" role="alert">
                <h4 class="alert-heading h6">
                    <i class="bi bi-info-circle-fill" aria-hidden="true"></i> {{ 'audit.iso_27001_requirement'|trans }}
                </h4>
                <p class="mb-0 small">
                    {{ 'audit.iso_27001_clause_info'|trans }}
                </p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">{{ 'audit.new'|trans }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'audit-form'}}) }}

                    {# Basic Information Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-info-square" aria-hidden="true"></i>
                            {{ 'audit.section.basic_info'|trans }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.title,
                                    'label': form.title.vars.label|default('audit.field.title'|trans),
                                    'required': true
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.scope,
                                    'label': form.scope.vars.label|default('audit.field.scope'|trans)
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.scopeType,
                                    'label': form.scopeType.vars.label|default('audit.field.scope_type'|trans)
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.scopedFramework,
                                    'label': form.scopedFramework.vars.label|default('audit.field.scoped_framework'|trans)
                                } %}
                            </div>
                            <div class="col-md-12" id="subsidiaries-container" style="display: none;">
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle" aria-hidden="true"></i>
                                    <strong>Konzernaudit:</strong> Wählen Sie die Tochtergesellschaften aus, die in dieses Audit einbezogen werden sollen.
                                    Bei "Konzernweites Audit" sollten alle relevanten Tochtergesellschaften ausgewählt werden.
                                </div>
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.auditedSubsidiaries,
                                    'label': form.auditedSubsidiaries.vars.label|default('audit.field.audited_subsidiaries'|trans)
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Schedule Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-calendar-event" aria-hidden="true"></i>
                            {{ 'audit.section.schedule'|trans }}
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.plannedDate,
                                    'label': form.plannedDate.vars.label|default('audit.field.planned_date'|trans)
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.actualDate,
                                    'label': form.actualDate.vars.label|default('audit.field.actual_date'|trans)
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Team & Status Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-people" aria-hidden="true"></i>
                            {{ 'audit.section.team'|trans }}
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.leadAuditor,
                                    'label': form.leadAuditor.vars.label|default('audit.field.lead_auditor'|trans)
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.status,
                                    'label': form.status.vars.label|default('audit.field.status'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.auditTeam,
                                    'label': form.auditTeam.vars.label|default('audit.field.audit_team'|trans)
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Objectives Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-bullseye" aria-hidden="true"></i>
                            {{ 'audit.section.objectives'|trans }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.objectives,
                                    'label': form.objectives.vars.label|default('audit.field.objectives'|trans)
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Findings & Recommendations Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                            {{ 'audit.section.findings'|trans }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.findings,
                                    'label': form.findings.vars.label|default('audit.field.findings'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.recommendations,
                                    'label': form.recommendations.vars.label|default('audit.field.recommendations'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.conclusion,
                                    'label': form.conclusion.vars.label|default('audit.field.conclusion'|trans)
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a href="{{ path('app_audit_index') }}"
                           class="btn btn-outline-secondary"
                           data-turbo-action="advance">
                            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans }}
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'audit.create'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-check-input {
        cursor: pointer;
    }
    .form-check-label {
        cursor: pointer;
    }
    select[multiple] {
        min-height: 150px;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const scopeTypeSelect = document.querySelector('[data-corporate-scope]');
    const subsidiariesContainer = document.getElementById('subsidiaries-container');
    const subsidiariesSelect = document.querySelector('[data-corporate-subsidiaries]');

    if (!scopeTypeSelect || !subsidiariesContainer) {
        return; // Elements not found, exit
    }

    function toggleSubsidiariesField() {
        const selectedScope = scopeTypeSelect.value;
        const isCorporateScope = selectedScope === 'corporate_wide' || selectedScope === 'corporate_subsidiaries';

        if (isCorporateScope) {
            subsidiariesContainer.style.display = 'block';

            // Auto-select all for corporate_wide
            if (selectedScope === 'corporate_wide' && subsidiariesSelect) {
                for (let option of subsidiariesSelect.options) {
                    option.selected = true;
                }
            }
        } else {
            subsidiariesContainer.style.display = 'none';

            // Deselect all when hiding
            if (subsidiariesSelect) {
                for (let option of subsidiariesSelect.options) {
                    option.selected = false;
                }
            }
        }
    }

    // Initial check
    toggleSubsidiariesField();

    // Listen for changes
    scopeTypeSelect.addEventListener('change', toggleSubsidiariesField);
});

// Also handle Turbo navigation
document.addEventListener('turbo:load', function() {
    const event = new Event('DOMContentLoaded');
    document.dispatchEvent(event);
});
</script>
{% endblock %}

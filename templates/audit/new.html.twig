{% extends 'base.html.twig' %}
{% trans_default_domain 'audit' %}

{% block title %}{{ 'audit.new'|trans({}, 'audit') }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_audit_index') }}" data-turbo-action="advance">
                            <i class="bi bi-clipboard-check" aria-hidden="true"></i> {{ 'audit_management.title'|trans({}, 'audit') }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'audit.new'|trans({}, 'audit') }}</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'audit.new'|trans({}, 'audit') }}
                </h1>
                <a href="{{ path('app_audit_index') }}" class="btn btn-outline-secondary" data-turbo-action="advance">
                    <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                </a>
            </div>

            <div class="alert alert-info mb-4" role="alert">
                <div class="fw-bold mb-2">
                    <i class="bi bi-info-circle-fill" aria-hidden="true"></i> {{ 'audit.iso_27001_requirement'|trans({}, 'audit') }}
                </div>
                <p class="mb-0 small">
                    {{ 'audit.iso_27001_clause_info'|trans({}, 'audit') }}
                </p>
            </div>

            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">{{ 'audit.new'|trans({}, 'audit') }}</h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'audit-form'}}) }}

                    {# Basic Information Section #}
                    <fieldset class="mb-4">
                        <legend class="h3 mb-3">
                            <i class="bi bi-info-square" aria-hidden="true"></i>
                            {{ 'audit.section.basic_info'|trans({}, 'audit') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.title,
                                    'label_key': form.title.vars.label,
                                    'translation_domain': 'audit',
                                    'required': true
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.scope,
                                    'label_key': form.scope.vars.label,
                                    'translation_domain': 'audit'
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.scopeType,
                                    'label_key': form.scopeType.vars.label,
                                    'translation_domain': 'audit'
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.scopedFramework,
                                    'label_key': form.scopedFramework.vars.label,
                                    'translation_domain': 'audit'
                                } %}
                            </div>
                            <div class="col-md-12" id="subsidiaries-container" style="display: none;">
                                <div class="alert alert-info" role="status">
                                    <i class="bi bi-info-circle" aria-hidden="true"></i>
                                    <strong>{{ 'audit.corporate_audit_note_title'|trans({}, 'audit') }}:</strong>
                                    {{ 'audit.corporate_audit_note'|trans({}, 'audit') }}
                                </div>
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.auditedSubsidiaries,
                                    'label_key': form.auditedSubsidiaries.vars.label,
                                    'translation_domain': 'audit'
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {% include '_components/_auto_form.html.twig' with {
                        'form': form,
                        'sections': {
                            'schedule': {
                                'label': 'audit.section.schedule'|trans({}, 'audit'),
                                'fields': ['plannedDate', 'actualDate']
                            },
                            'team': {
                                'label': 'audit.section.team'|trans({}, 'audit'),
                                'fields': ['leadAuditor', 'status', 'auditTeam']
                            },
                            'objectives': {
                                'label': 'audit.section.objectives'|trans({}, 'audit'),
                                'fields': ['objectives']
                            },
                            'findings': {
                                'label': 'audit.section.findings'|trans({}, 'audit'),
                                'fields': ['findings', 'recommendations', 'conclusion']
                            }
                        },
                        'col_widths': {
                            'plannedDate': 6,
                            'actualDate': 6,
                            'leadAuditor': 6,
                            'status': 6
                        }
                    } %}

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a href="{{ path('app_audit_index') }}"
                           class="btn btn-outline-secondary"
                           data-turbo-action="advance">
                            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'audit.create'|trans({}, 'audit') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                {% endblock %}
            {% endembed %}
        </div>
    </div>
</div>

<style>
    .form-check-input {
        cursor: pointer;
    }
    .form-check-label {
        cursor: pointer;
    }
    select[multiple] {
        min-height: 150px;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const scopeTypeSelect = document.querySelector('[data-corporate-scope]');
    const subsidiariesContainer = document.getElementById('subsidiaries-container');
    const subsidiariesSelect = document.querySelector('[data-corporate-subsidiaries]');

    if (!scopeTypeSelect || !subsidiariesContainer) {
        return; // Elements not found, exit
    }

    function toggleSubsidiariesField() {
        const selectedScope = scopeTypeSelect.value;
        const isCorporateScope = selectedScope === 'corporate_wide' || selectedScope === 'corporate_subsidiaries';

        if (isCorporateScope) {
            subsidiariesContainer.style.display = 'block';

            // Auto-select all for corporate_wide
            if (selectedScope === 'corporate_wide' && subsidiariesSelect) {
                for (let option of subsidiariesSelect.options) {
                    option.selected = true;
                }
            }
        } else {
            subsidiariesContainer.style.display = 'none';

            // Deselect all when hiding
            if (subsidiariesSelect) {
                for (let option of subsidiariesSelect.options) {
                    option.selected = false;
                }
            }
        }
    }

    // Initial check
    toggleSubsidiariesField();

    // Listen for changes
    scopeTypeSelect.addEventListener('change', toggleSubsidiariesField);
});

// Also handle Turbo navigation
document.addEventListener('turbo:load', function() {
    const event = new Event('DOMContentLoaded');
    document.dispatchEvent(event);
});
</script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Internes Audit{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'Dashboard', url: path('app_dashboard') },
            { label: 'Internes Audit' }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'Internes Audit',
        subtitle: 'Planung und Durchführung interner ISMS-Audits gemäß ISO 27001',
        icon: 'bi-clipboard-check',
        actions: [
            {
                label: 'Neues Audit',
                url: path('app_audit_new'),
                variant: 'primary',
                icon: 'bi-plus-circle'
            },
            {
                label: 'Excel Export',
                url: path('app_audit_export_excel'),
                variant: 'success',
                icon: 'bi-file-earmark-spreadsheet'
            }
        ]
    } %}

    {# Calculate Stats #}
    {% set total = audits|length %}
    {% set plannedAudits = audits|filter(a => a.status == 'planned')|length %}
    {% set inProgressAudits = audits|filter(a => a.status == 'in_progress')|length %}
    {% set completedAudits = audits|filter(a => a.status == 'completed')|length %}
    {% set upcomingCount = upcoming|length %}

    {# KPI Cards #}
    <div class="kpi-grid">
        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-clipboard-check',
            label: 'Gesamt Audits',
            value: total,
            variant: 'primary',
            link: null
        } %}

        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-calendar-event',
            label: 'Bevorstehend',
            value: upcomingCount,
            variant: 'info',
            link: null
        } %}

        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-hourglass-split',
            label: 'In Bearbeitung',
            value: inProgressAudits,
            variant: 'warning',
            link: null
        } %}

        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-check-circle',
            label: 'Abgeschlossen',
            value: completedAudits,
            variant: 'success',
            link: null
        } %}
    </div>

    {# Status Overview Section #}
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="mb-0">
                <i class="bi bi-pie-chart"></i>
                Status-Übersicht
            </h2>
        </div>
        <div class="card-body">
            <div class="row g-4">
                {# Planned #}
                <div class="col-md-3">
                    <div class="status-card text-center p-4" style="background: rgba(52, 152, 219, 0.1); border-radius: var(--border-radius);">
                        <div class="status-icon mb-3" style="font-size: 2rem; color: #3498db;">
                            <i class="bi bi-calendar3"></i>
                        </div>
                        <div class="status-label text-muted mb-2">Geplant</div>
                        <div class="status-count" style="font-size: 2.5rem; font-weight: 700; color: #3498db;">
                            {{ plannedAudits }}
                        </div>
                    </div>
                </div>

                {# In Progress #}
                <div class="col-md-3">
                    <div class="status-card text-center p-4" style="background: rgba(243, 156, 18, 0.1); border-radius: var(--border-radius);">
                        <div class="status-icon mb-3" style="font-size: 2rem; color: #f39c12;">
                            <i class="bi bi-hourglass-split"></i>
                        </div>
                        <div class="status-label text-muted mb-2">In Bearbeitung</div>
                        <div class="status-count" style="font-size: 2.5rem; font-weight: 700; color: #f39c12;">
                            {{ inProgressAudits }}
                        </div>
                    </div>
                </div>

                {# Completed #}
                <div class="col-md-3">
                    <div class="status-card text-center p-4" style="background: rgba(39, 174, 96, 0.1); border-radius: var(--border-radius);">
                        <div class="status-icon mb-3" style="font-size: 2rem; color: #27ae60;">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div class="status-label text-muted mb-2">Abgeschlossen</div>
                        <div class="status-count" style="font-size: 2.5rem; font-weight: 700; color: #27ae60;">
                            {{ completedAudits }}
                        </div>
                    </div>
                </div>

                {# Cancelled #}
                <div class="col-md-3">
                    <div class="status-card text-center p-4" style="background: rgba(149, 165, 166, 0.1); border-radius: var(--border-radius);">
                        <div class="status-icon mb-3" style="font-size: 2rem; color: #95a5a6;">
                            <i class="bi bi-x-circle"></i>
                        </div>
                        <div class="status-label text-muted mb-2">Abgebrochen</div>
                        <div class="status-count" style="font-size: 2.5rem; font-weight: 700; color: #95a5a6;">
                            {{ audits|filter(a => a.status == 'cancelled')|length }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Upcoming Audits Highlight #}
    {% if upcoming|length > 0 %}
    <div class="alert alert-info mb-4" style="border-left: 4px solid var(--color-info);">
        <div class="d-flex align-items-center">
            <i class="bi bi-calendar-event" style="font-size: 2rem; margin-right: var(--spacing-md);"></i>
            <div>
                <h4 class="mb-1">Bevorstehende Audits</h4>
                <p class="mb-0">Sie haben <strong>{{ upcoming|length }}</strong> bevorstehende Audits geplant.</p>
            </div>
        </div>
    </div>
    {% endif %}

    {# Audit List #}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="bi bi-list-ul"></i>
                Alle Audits
            </h2>

            {# Filter Controls #}
            <div class="d-flex gap-2">
                <select class="form-select form-select-sm" id="statusFilter" style="width: auto;">
                    <option value="">Alle Status</option>
                    <option value="planned">Geplant</option>
                    <option value="in_progress">In Bearbeitung</option>
                    <option value="completed">Abgeschlossen</option>
                    <option value="cancelled">Abgebrochen</option>
                </select>

                <input type="search"
                       class="form-control form-control-sm"
                       id="auditSearch"
                       placeholder="Audits durchsuchen..."
                       style="width: 250px;">
            </div>
        </div>

        <div class="card-body p-0">
            {% if audits|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead style="background: var(--color-bg); position: sticky; top: 0; z-index: 10;">
                        <tr>
                            <th style="width: 120px;">Audit Nr.</th>
                            <th>Titel</th>
                            <th style="width: 150px;">Typ</th>
                            <th style="width: 130px;">Geplantes Datum</th>
                            <th style="width: 130px;">Status</th>
                            <th style="width: 180px; text-align: right;">Aktionen</th>
                        </tr>
                    </thead>
                    <tbody id="auditTableBody">
                        {% for audit in audits|sort((a, b) => b.plannedDate <=> a.plannedDate) %}
                        <tr class="audit-row"
                            data-status="{{ audit.status }}"
                            data-title="{{ audit.title|lower }}"
                            data-number="{{ audit.auditNumber|lower }}">
                            <td>
                                <span class="badge bg-secondary">{{ audit.auditNumber }}</span>
                            </td>
                            <td>
                                <a href="{{ path('app_audit_show', {id: audit.id}) }}" class="text-decoration-none">
                                    <strong>{{ audit.title }}</strong>
                                </a>
                                {% if audit.scope %}
                                <br>
                                <small class="text-muted">{{ audit.scope|length > 60 ? audit.scope|slice(0, 60) ~ '...' : audit.scope }}</small>
                                {% endif %}
                            </td>
                            <td>
                                {% set typeIcons = {
                                    'full': 'bi-building',
                                    'process': 'bi-diagram-3',
                                    'location': 'bi-geo-alt',
                                    'department': 'bi-people',
                                    'framework': 'bi-shield-check',
                                    'asset': 'bi-server'
                                } %}
                                {% set typeLabels = {
                                    'full': 'Vollständig',
                                    'process': 'Prozess',
                                    'location': 'Standort',
                                    'department': 'Abteilung',
                                    'framework': 'Framework',
                                    'asset': 'Asset'
                                } %}
                                <i class="bi {{ typeIcons[audit.scopeType] ?? 'bi-question-circle' }}"></i>
                                {{ typeLabels[audit.scopeType] ?? audit.scopeType }}
                            </td>
                            <td>
                                {% if audit.plannedDate %}
                                <i class="bi bi-calendar3"></i>
                                {{ audit.plannedDate|date('d.m.Y') }}
                                {% else %}
                                <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if audit.status == 'planned' %}
                                    <span class="badge bg-info">
                                        <i class="bi bi-calendar3"></i> Geplant
                                    </span>
                                {% elseif audit.status == 'in_progress' %}
                                    <span class="badge bg-warning">
                                        <i class="bi bi-hourglass-split"></i> In Bearbeitung
                                    </span>
                                {% elseif audit.status == 'completed' %}
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Abgeschlossen
                                    </span>
                                {% elseif audit.status == 'cancelled' %}
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle"></i> Abgebrochen
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ audit.status }}</span>
                                {% endif %}
                            </td>
                            <td style="text-align: right;">
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_audit_show', {id: audit.id}) }}"
                                       class="btn btn-sm btn-outline-primary"
                                       title="Details anzeigen">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_audit_edit', {id: audit.id}) }}"
                                       class="btn btn-sm btn-outline-secondary"
                                       title="Bearbeiten">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="{{ path('app_audit_export_pdf', {id: audit.id}) }}"
                                       class="btn btn-sm btn-outline-success"
                                       title="PDF Export">
                                        <i class="bi bi-file-pdf"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# No Results Message #}
            <div id="noResults" class="text-center p-5" style="display: none;">
                <i class="bi bi-search" style="font-size: 3rem; color: var(--color-text-muted); opacity: 0.5;"></i>
                <p class="text-muted mt-3">Keine Audits gefunden, die den Filterkriterien entsprechen.</p>
            </div>
            {% else %}
            {# Empty State #}
            {% include '_components/_empty_state.html.twig' with {
                icon: 'bi-clipboard-check',
                title: 'Noch keine Audits vorhanden',
                description: 'Legen Sie Ihr erstes internes Audit an, um mit der Planung zu beginnen.',
                action: {
                    label: 'Neues Audit erstellen',
                    url: path('app_audit_new'),
                    icon: 'bi-plus-circle'
                }
            } %}
            {% endif %}
        </div>
    </div>
</div>

<style>
/* Status Cards Hover Effect */
.status-card {
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: default;
}

.status-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

/* Table Row Hover */
.table tbody tr:hover {
    background-color: rgba(52, 152, 219, 0.05);
    transition: background-color 0.2s;
}

/* Filter Controls */
#statusFilter:focus,
#auditSearch:focus {
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 0.2rem rgba(60, 141, 188, 0.25);
}
</style>

<script>
function initializeAuditFilters() {
    const statusFilter = document.getElementById('statusFilter');
    const searchInput = document.getElementById('auditSearch');
    const auditRows = document.querySelectorAll('.audit-row');
    const noResults = document.getElementById('noResults');
    const tableBody = document.getElementById('auditTableBody');

    if (!statusFilter && !searchInput) return; // Elements not present on page

    function filterAudits() {
        const statusValue = statusFilter ? statusFilter.value.toLowerCase() : '';
        const searchValue = searchInput ? searchInput.value.toLowerCase() : '';
        let visibleCount = 0;

        auditRows.forEach(row => {
            const status = row.dataset.status.toLowerCase();
            const title = row.dataset.title;
            const number = row.dataset.number;

            const matchesStatus = !statusValue || status === statusValue;
            const matchesSearch = !searchValue ||
                                  title.includes(searchValue) ||
                                  number.includes(searchValue);

            if (matchesStatus && matchesSearch) {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        });

        // Show/hide no results message
        if (noResults && tableBody) {
            if (visibleCount === 0 && auditRows.length > 0) {
                tableBody.style.display = 'none';
                noResults.style.display = 'block';
            } else {
                tableBody.style.display = '';
                noResults.style.display = 'none';
            }
        }
    }

    // Attach event listeners (prevent duplicates)
    if (statusFilter && statusFilter.dataset.initialized !== 'true') {
        statusFilter.dataset.initialized = 'true';
        statusFilter.addEventListener('change', filterAudits);
    }

    if (searchInput && searchInput.dataset.initialized !== 'true') {
        searchInput.dataset.initialized = 'true';
        searchInput.addEventListener('input', filterAudits);
    }
}

// Initialize on both DOMContentLoaded (first page load) and turbo:load (Turbo navigation)
document.addEventListener('DOMContentLoaded', initializeAuditFilters);
document.addEventListener('turbo:load', initializeAuditFilters);
</script>
{% endblock %}

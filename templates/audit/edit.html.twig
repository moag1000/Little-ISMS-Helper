{% extends 'base.html.twig' %}

{% block title %}{{ 'audit.edit'|trans }} - {{ audit.title }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_audit_index') }}" data-turbo-action="advance">
                    <i class="bi bi-clipboard-check" aria-hidden="true"></i> {{ 'audit.title'|trans }}
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_audit_show', {id: audit.id}) }}" data-turbo-action="advance">
                    {{ audit.title }}
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'common.edit'|trans }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'audit.edit'|trans }}: {{ audit.title }}
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4" role="alert">
                        <h4 class="alert-heading">
                            <i class="bi bi-info-circle-fill" aria-hidden="true"></i> {{ 'audit.iso_27001_requirement'|trans }}
                        </h6>
                        <p class="mb-0 small">
                            {{ 'audit.iso_27001_clause_info'|trans }}
                        </p>
                    </div>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {# Basic Information Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h3 class="mb-0"><i class="bi bi-info-square" aria-hidden="true"></i> {{ 'audit.section.basic_info'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.title) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.scope) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.scopeType) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.auditType) }}
                                </div>
                                <div class="col-md-12 mb-3" id="subsidiaries-container" style="display: none;">
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle" aria-hidden="true"></i>
                                        <strong>Konzernaudit:</strong> Wählen Sie die Tochtergesellschaften aus, die in dieses Audit einbezogen werden sollen.
                                        Bei "Konzernweites Audit" sollten alle relevanten Tochtergesellschaften ausgewählt werden.
                                    </div>
                                    {{ form_row(form.auditedSubsidiaries) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Framework & Standards Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h3 class="mb-0"><i class="bi bi-shield-check" aria-hidden="true"></i> {{ 'audit.section.frameworks'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.framework) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.standard) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Schedule Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h3 class="mb-0"><i class="bi bi-calendar-event" aria-hidden="true"></i> {{ 'audit.section.schedule'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.plannedDate) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.actualDate) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Team & Responsibilities Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h3 class="mb-0"><i class="bi bi-people" aria-hidden="true"></i> {{ 'audit.section.team'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.leadAuditor) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.auditTeam) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.auditee) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.department) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Status & Results Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h3 class="mb-0"><i class="bi bi-flag" aria-hidden="true"></i> {{ 'audit.section.status'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.status) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.overallResult) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Objectives & Criteria Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h3 class="mb-0"><i class="bi bi-bullseye" aria-hidden="true"></i> {{ 'audit.section.objectives'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.objectives) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.auditCriteria) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.methodology) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Findings Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h3 class="mb-0"><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'audit.section.findings'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.findings) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.nonconformities) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.observations) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Recommendations & Follow-up Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h3 class="mb-0"><i class="bi bi-lightbulb" aria-hidden="true"></i> {{ 'audit.section.recommendations'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.recommendations) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.correctiveActions) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.followUpActions) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Documentation Section #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h3 class="mb-0"><i class="bi bi-file-earmark-text" aria-hidden="true"></i> {{ 'audit.section.documentation'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.evidenceCollected) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.summary) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.notes) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <div>
                            <a href="{{ path('app_audit_show', {id: audit.id}) }}"
                               class="btn btn-outline-secondary"
                               data-turbo-action="advance">
                                <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans }}
                            </a>
                            <a href="{{ path('app_audit_index') }}"
                               class="btn btn-outline-secondary"
                               data-turbo-action="advance">
                                <i class="bi bi-list" aria-hidden="true"></i> {{ 'common.to_list'|trans }}
                            </a>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save_changes'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Metadata Card #}
            <div class="card shadow mt-4">
                <div class="card-header bg-light">
                    <h3 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'common.metadata'|trans }}</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">{{ 'common.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ audit.createdAt|date('d.m.Y H:i') }}</dd>

                        <dt class="col-sm-3 text-muted">{{ 'common.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ audit.updatedAt|date('d.m.Y H:i') }}</dd>

                        <dt class="col-sm-3 text-muted">{{ 'common.id'|trans }}</dt>
                        <dd class="col-sm-9"><code>{{ audit.id }}</code></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-check-input {
        cursor: pointer;
    }
    .form-check-label {
        cursor: pointer;
    }
    select[multiple] {
        min-height: 150px;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const scopeTypeSelect = document.querySelector('[data-corporate-scope]');
        const subsidiariesContainer = document.getElementById('subsidiaries-container');
        const subsidiariesSelect = document.querySelector('[data-corporate-subsidiaries]');

        if (!scopeTypeSelect) {
            return; // Exit if scope type field not found
        }

        function toggleSubsidiariesField() {
            const selectedScope = scopeTypeSelect.value;
            const isCorporateScope = selectedScope === 'corporate_wide' || selectedScope === 'corporate_subsidiaries';

            if (isCorporateScope) {
                subsidiariesContainer.style.display = 'block';

                // Auto-select all for corporate_wide
                if (selectedScope === 'corporate_wide' && subsidiariesSelect) {
                    for (let option of subsidiariesSelect.options) {
                        option.selected = true;
                    }
                }
            } else {
                subsidiariesContainer.style.display = 'none';
                // Deselect all when hiding
                if (subsidiariesSelect) {
                    for (let option of subsidiariesSelect.options) {
                        option.selected = false;
                    }
                }
            }
        }

        // Run on page load to show field if already corporate scope
        toggleSubsidiariesField();

        // Run on scope type change
        scopeTypeSelect.addEventListener('change', toggleSubsidiariesField);
    });
</script>
{% endblock %}

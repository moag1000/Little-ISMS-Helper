{% extends 'base.html.twig' %}
{% trans_default_domain 'audit' %}

{% block title %}{{ 'audit.edit'|trans({}, 'audit') }} - {{ audit.title }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_audit_index') }}" data-turbo-action="advance">
                            <i class="bi bi-clipboard-check" aria-hidden="true"></i> {{ 'audit_management.title'|trans({}, 'audit') }}
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_audit_show', {id: audit.id}) }}" data-turbo-action="advance">
                            {{ audit.title }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'common.edit'|trans({}, 'messages') }}</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil" aria-hidden="true"></i>
                    {{ 'audit.edit'|trans({}, 'audit') }}: {{ audit.title }}
                </h1>
                <div>
                    <a href="{{ path('app_audit_show', {id: audit.id}) }}" class="btn btn-outline-secondary" data-turbo-action="advance">
                        <i class="bi bi-eye" aria-hidden="true"></i> {{ 'common.view'|trans({}, 'messages') }}
                    </a>
                </div>
            </div>

            <div class="alert alert-info mb-4" role="alert">
                <h4 class="alert-heading h6">
                    <i class="bi bi-info-circle-fill" aria-hidden="true"></i> {{ 'audit.iso_27001_requirement'|trans({}, 'audit') }}
                </h5>
                <p class="mb-0 small">
                    {{ 'audit.iso_27001_clause_info'|trans({}, 'audit') }}
                </p>
            </div>

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">{{ 'audit.edit'|trans({}, 'audit') }}</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'audit-form'}}) }}

                    {# Basic Information Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-info-square" aria-hidden="true"></i>
                            {{ 'audit.section.basic_info'|trans({}, 'audit') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.title,
                                    'label': 'audit.field.title'|trans({}, 'audit'),
                                    'required': true
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.scope,
                                    'label': 'audit.field.scope'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.scopeType,
                                    'label': 'audit.field.scope_type'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.auditType,
                                    'label': 'audit.field.audit_type'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-12" id="subsidiaries-container" style="display: none;">
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle" aria-hidden="true"></i>
                                    <strong>Konzernaudit:</strong> Wählen Sie die Tochtergesellschaften aus, die in dieses Audit einbezogen werden sollen.
                                    Bei "Konzernweites Audit" sollten alle relevanten Tochtergesellschaften ausgewählt werden.
                                </div>
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.auditedSubsidiaries,
                                    'label': 'audit.field.audited_subsidiaries'|trans({}, 'audit')
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Framework & Standards Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-shield-check" aria-hidden="true"></i>
                            {{ 'audit.section.frameworks'|trans({}, 'audit') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.framework,
                                    'label': 'audit.field.framework'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.standard,
                                    'label': 'audit.field.standard'|trans({}, 'audit')
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Schedule Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-calendar-event" aria-hidden="true"></i>
                            {{ 'audit.section.schedule'|trans({}, 'audit') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.plannedDate,
                                    'label': 'audit.field.planned_date'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.actualDate,
                                    'label': 'audit.field.actual_date'|trans({}, 'audit')
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Team & Responsibilities Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-people" aria-hidden="true"></i>
                            {{ 'audit.section.team'|trans({}, 'audit') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.leadAuditor,
                                    'label': 'audit.field.lead_auditor'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.auditTeam,
                                    'label': 'audit.field.audit_team'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.auditee,
                                    'label': 'audit.field.auditee'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.department,
                                    'label': 'audit.field.department'|trans({}, 'audit')
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Status & Results Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-flag" aria-hidden="true"></i>
                            {{ 'audit.section.status'|trans({}, 'audit') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.status,
                                    'label': 'audit.field.status'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.overallResult,
                                    'label': 'audit.field.overall_result'|trans({}, 'audit')
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Objectives & Criteria Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-bullseye" aria-hidden="true"></i>
                            {{ 'audit.section.objectives'|trans({}, 'audit') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.objectives,
                                    'label': 'audit.field.objectives'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.auditCriteria,
                                    'label': 'audit.field.audit_criteria'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.methodology,
                                    'label': 'audit.field.methodology'|trans({}, 'audit')
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Findings Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                            {{ 'audit.section.findings'|trans({}, 'audit') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.findings,
                                    'label': 'audit.field.findings'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.nonconformities,
                                    'label': 'audit.field.nonconformities'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.observations,
                                    'label': 'audit.field.observations'|trans({}, 'audit')
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Recommendations & Follow-up Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-lightbulb" aria-hidden="true"></i>
                            {{ 'audit.section.recommendations'|trans({}, 'audit') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.recommendations,
                                    'label': 'audit.field.recommendations'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.correctiveActions,
                                    'label': 'audit.field.corrective_actions'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.followUpActions,
                                    'label': 'audit.field.follow_up_actions'|trans({}, 'audit')
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Documentation Section #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-file-earmark-text" aria-hidden="true"></i>
                            {{ 'audit.section.documentation'|trans({}, 'audit') }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.evidenceCollected,
                                    'label': 'audit.field.evidence_collected'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.summary,
                                    'label': 'audit.field.summary'|trans({}, 'audit')
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.notes,
                                    'label': 'audit.field.notes'|trans({}, 'audit')
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <div>
                            <a href="{{ path('app_audit_show', {id: audit.id}) }}"
                               class="btn btn-outline-secondary"
                               data-turbo-action="advance">
                                <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                            </a>
                            <a href="{{ path('app_audit_index') }}"
                               class="btn btn-outline-secondary"
                               data-turbo-action="advance">
                                <i class="bi bi-list" aria-hidden="true"></i> {{ 'common.to_list'|trans({}, 'messages') }}
                            </a>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save_changes'|trans({}, 'messages') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Metadata Card #}
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h3 class="h6 mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'common.metadata'|trans({}, 'messages') }}</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">{{ 'common.created_at'|trans({}, 'messages') }}</dt>
                        <dd class="col-sm-9">{{ audit.createdAt|date('d.m.Y H:i') }}</dd>

                        <dt class="col-sm-3 text-muted">{{ 'common.updated_at'|trans({}, 'messages') }}</dt>
                        <dd class="col-sm-9">{{ audit.updatedAt|date('d.m.Y H:i') }}</dd>

                        <dt class="col-sm-3 text-muted">{{ 'common.id'|trans({}, 'messages') }}</dt>
                        <dd class="col-sm-9"><code>{{ audit.id }}</code></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-check-input {
        cursor: pointer;
    }
    .form-check-label {
        cursor: pointer;
    }
    select[multiple] {
        min-height: 150px;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const scopeTypeSelect = document.querySelector('[data-corporate-scope]');
    const subsidiariesContainer = document.getElementById('subsidiaries-container');
    const subsidiariesSelect = document.querySelector('[data-corporate-subsidiaries]');

    if (!scopeTypeSelect) {
        return; // Exit if scope type field not found
    }

    function toggleSubsidiariesField() {
        const selectedScope = scopeTypeSelect.value;
        const isCorporateScope = selectedScope === 'corporate_wide' || selectedScope === 'corporate_subsidiaries';

        if (isCorporateScope) {
            subsidiariesContainer.style.display = 'block';

            // Auto-select all for corporate_wide
            if (selectedScope === 'corporate_wide' && subsidiariesSelect) {
                for (let option of subsidiariesSelect.options) {
                    option.selected = true;
                }
            }
        } else {
            subsidiariesContainer.style.display = 'none';
            // Deselect all when hiding
            if (subsidiariesSelect) {
                for (let option of subsidiariesSelect.options) {
                    option.selected = false;
                }
            }
        }
    }

    // Run on page load to show field if already corporate scope
    toggleSubsidiariesField();

    // Run on scope type change
    scopeTypeSelect.addEventListener('change', toggleSubsidiariesField);
});

// Also handle Turbo navigation
document.addEventListener('turbo:load', function() {
    const event = new Event('DOMContentLoaded');
    document.dispatchEvent(event);
});
</script>
{% endblock %}

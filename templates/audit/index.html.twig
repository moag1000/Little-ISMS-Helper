{% extends 'base.html.twig' %}
{% trans_default_domain 'audit' %}
{% block title %}{{ 'audit_management.title'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.dashboard'|trans({}, 'nav'), url: path('app_dashboard') },
            { label: 'audit_management.title'|trans }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'audit_management.title'|trans,
        subtitle: 'audit_management.subtitle'|trans,
        icon: 'bi-clipboard-check',
        actions: [
            {
                label: 'audit.new'|trans,
                url: path('app_audit_new'),
                variant: 'primary',
                icon: 'bi-plus-circle'
            },
            {
                label: 'common.export_excel'|trans({}, 'messages'),
                url: path('app_audit_export_excel'),
                variant: 'success',
                icon: 'bi-file-earmark-spreadsheet',
                turbo: false
            }
        ]
    } %}

    {# Calculate Stats #}
    {% set total = audits|length %}
    {% set plannedAudits = audits|filter(a => a.status == 'planned')|length %}
    {% set inProgressAudits = audits|filter(a => a.status == 'in_progress')|length %}
    {% set completedAudits = audits|filter(a => a.status == 'completed')|length %}
    {% set reportedAudits = audits|filter(a => a.status == 'reported')|length %}
    {% set upcomingCount = upcoming|length %}

    {# KPI Cards #}
    <div class="kpi-grid">
        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-clipboard-check',
            label: 'audit.kpi.total'|trans,
            value: total,
            variant: 'primary',
            link: null
        } %}

        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-calendar-event',
            label: 'audit.kpi.upcoming'|trans,
            value: upcomingCount,
            variant: 'info',
            link: null
        } %}

        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-hourglass-split',
            label: 'audit.kpi.in_progress'|trans,
            value: inProgressAudits,
            variant: 'warning',
            link: null
        } %}

        {% include '_components/_kpi_card.html.twig' with {
            icon: 'bi-check-circle',
            label: 'audit.kpi.completed'|trans,
            value: completedAudits,
            variant: 'success',
            link: null
        } %}
    </div>

    {# Status Overview Section #}
    <div class="card mb-4">
        <div class="card-header">
            <h1 class="mb-0">
                <i class="bi bi-pie-chart" aria-hidden="true"></i>
                {{ 'audit.status_overview'|trans }}
            </h1>
        </div>
        <div class="card-body">
            <div class="row g-4">
                {# Planned #}
                <div class="col-md-3">
                    <div class="status-card text-center p-4 bg-audit-planned">
                        <div class="status-icon mb-3 audit-icon-planned">
                            <i class="bi bi-calendar3" aria-hidden="true"></i>
                        </div>
                        <div class="status-label text-muted mb-2">{{ 'audit.status.planned'|trans({}, 'audit') }}</div>
                        <div class="status-count audit-count-planned">
                            {{ plannedAudits }}
                        </div>
                    </div>
                </div>

                {# In Progress #}
                <div class="col-md-3">
                    <div class="status-card text-center p-4 bg-audit-in-progress">
                        <div class="status-icon mb-3 audit-icon-in-progress">
                            <i class="bi bi-hourglass-split" aria-hidden="true"></i>
                        </div>
                        <div class="status-label text-muted mb-2">{{ 'audit.status.in_progress'|trans({}, 'audit') }}</div>
                        <div class="status-count audit-count-in-progress">
                            {{ inProgressAudits }}
                        </div>
                    </div>
                </div>

                {# Completed #}
                <div class="col-md-3">
                    <div class="status-card text-center p-4 bg-audit-completed">
                        <div class="status-icon mb-3 audit-icon-completed">
                            <i class="bi bi-check-circle" aria-hidden="true"></i>
                        </div>
                        <div class="status-label text-muted mb-2">{{ 'audit.status.completed'|trans({}, 'audit') }}</div>
                        <div class="status-count audit-count-completed">
                            {{ completedAudits }}
                        </div>
                    </div>
                </div>

                {# Reported #}
                <div class="col-md-3">
                    <div class="status-card text-center p-4 bg-audit-reported">
                        <div class="status-icon mb-3 audit-icon-reported">
                            <i class="bi bi-file-earmark-text" aria-hidden="true"></i>
                        </div>
                        <div class="status-label text-muted mb-2">{{ 'audit.status.reported'|trans({}, 'audit') }}</div>
                        <div class="status-count audit-count-reported">
                            {{ reportedAudits }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Upcoming Audits Highlight #}
    {% if upcoming|length > 0 %}
    <div class="alert alert-info mb-4 card-border-left-info">
        <div class="d-flex align-items-center">
            <i class="bi bi-calendar-event fs-2-mr-md" aria-hidden="true"></i>
            <div>
                <h4 class="mb-1">{{ 'audit.upcoming_audits'|trans }}</h4>
                <p class="mb-0">{{ 'audit.upcoming_audits_count'|trans({'%count%': upcoming|length}) }}</p>
            </div>
        </div>
    </div>
    {% endif %}

    {# Audit List #}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="bi bi-list-ul" aria-hidden="true"></i>
                {{ 'audit.list.all'|trans }}
            </h2>

            {# Filter Controls #}
            <div class="d-flex gap-2">
                <select class="form-select form-select-sm" id="statusFilter" class="w-auto">
                    <option value="">{{ 'audit.filter.all_status'|trans }}</option>
                    <option value="planned">{{ 'audit.status.planned'|trans({}, 'audit') }}</option>
                    <option value="in_progress">{{ 'audit.status.in_progress'|trans({}, 'audit') }}</option>
                    <option value="completed">{{ 'audit.status.completed'|trans({}, 'audit') }}</option>
                    <option value="reported">{{ 'audit.status.reported'|trans({}, 'audit') }}</option>
                </select>

                <label for="auditSearch" class="visually-hidden">{{ 'common.search'|trans({}, 'messages') }}</label>
                <input type="search"
                       class="form-control form-control-sm w-250px"
                       id="auditSearch"
                       placeholder="{{ 'audit.filter.search_placeholder'|trans }}">
            </div>
        </div>

        <div class="card-body p-0">
            {% if audits|length > 0 %}
            {% embed '_components/_table.html.twig' with {
                'class': 'table-hover mb-0',
                'theadClass': 'thead-sticky',
                'noMargin': true,
                'responsive': true
            } %}
                {% block table_head %}
                    <tr>
                        <th scope="col" class="w-120px">{{ 'audit.field.audit_number'|trans }}</th>
                        <th scope="col">{{ 'audit.field.title'|trans }}</th>
                        <th scope="col" class="w-150px">{{ 'audit.field.scope_type'|trans }}</th>
                        <th scope="col" class="w-130px">{{ 'audit.field.planned_date'|trans }}</th>
                        <th scope="col" class="w-130px">{{ 'audit.field.status'|trans }}</th>
                        <th scope="col" class="w-180px w-text-right">{{ 'common.actions'|trans({}, 'messages') }}</th>
                    </tr>
                {% endblock %}
                {% block table_body_attrs %}id="auditTableBody"{% endblock %}
                {% block table_body %}
                    {% for audit in audits|sort((a, b) => b.plannedDate <=> a.plannedDate) %}
                    <tr class="audit-row"
                        data-status="{{ audit.status }}"
                        data-title="{{ audit.title|lower }}"
                        data-number="{{ audit.auditNumber|lower }}">
                        <td>
                            <span class="badge bg-secondary">{{ audit.auditNumber }}</span>
                        </td>
                        <td>
                            <a href="{{ path('app_audit_show', {id: audit.id}) }}" class="text-decoration-none">
                                <strong>{{ audit.title }}</strong>
                            </a>
                            {% if audit.scope %}
                            <br>
                            <small class="text-muted">{{ audit.scope|length > 60 ? audit.scope|slice(0, 60) ~ '...' : audit.scope }}</small>
                            {% endif %}
                        </td>
                        <td>
                            {% set typeIcons = {
                                'full_isms': 'bi-building',
                                'compliance_framework': 'bi-shield-check',
                                'asset': 'bi-server',
                                'asset_type': 'bi-hdd-stack',
                                'asset_group': 'bi-collection',
                                'location': 'bi-geo-alt',
                                'department': 'bi-people',
                                'corporate_wide': 'bi-globe',
                                'corporate_subsidiaries': 'bi-diagram-3'
                            } %}
                            <i class="bi {{ typeIcons[audit.scopeType] ?? 'bi-question-circle' }}"></i>
                            {{ ('audit.scope_type.' ~ audit.scopeType)|trans({}, 'audit') }}
                        </td>
                        <td>
                            {% if audit.plannedDate %}
                            <i class="bi bi-calendar3" aria-hidden="true"></i>
                            {{ audit.plannedDate|date('d.m.Y') }}
                            {% else %}
                            <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            <span class="{{ badge_status(audit.status) }}">
                                {% if audit.status == 'planned' %}
                                    <i class="bi bi-calendar3" aria-hidden="true"></i>
                                {% elseif audit.status == 'in_progress' %}
                                    <i class="bi bi-hourglass-split" aria-hidden="true"></i>
                                {% elseif audit.status == 'completed' %}
                                    <i class="bi bi-check-circle" aria-hidden="true"></i>
                                {% elseif audit.status == 'reported' %}
                                    <i class="bi bi-file-earmark-text" aria-hidden="true"></i>
                                {% endif %}
                                {{ ('audit.status.' ~ audit.status)|trans({}, 'audit') }}
                            </span>
                        </td>
                        <td class="w-text-right">
                            <div class="btn-group btn-group-sm" role="group" aria-label="{{ 'common.actions'|trans({}, 'messages') }}">
                                <a href="{{ path('app_audit_show', {id: audit.id}) }}"
                                   class="btn btn-sm btn-outline-primary"
                                   title="{{ 'common.view'|trans({}, 'messages') }}" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                    <i class="bi bi-eye" aria-hidden="true"></i>
                                </a>
                                <a href="{{ path('app_audit_edit', {id: audit.id}) }}"
                                   class="btn btn-sm btn-outline-secondary"
                                   title="{{ 'common.edit'|trans({}, 'messages') }}" aria-label="{{ 'common.edit'|trans({}, 'messages') }}">
                                    <i class="bi bi-pencil" aria-hidden="true"></i>
                                </a>
                                <a href="{{ path('app_audit_export_pdf', {id: audit.id}) }}"
                                   class="btn btn-sm btn-outline-success"
                                   data-turbo="false"
                                   title="{{ 'common.export_pdf'|trans({}, 'messages') }}" aria-label="{{ 'common.export_pdf'|trans({}, 'messages') }}">
                                    <i class="bi bi-file-pdf" aria-hidden="true"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                {% endblock %}
            {% endembed %}

            {# No Results Message #}
            <div id="noResults" class="text-center p-5 d-none">
                <i class="bi bi-search fs-3-text-muted-opacity-50" aria-hidden="true"></i>
                <p class="text-muted mt-3">{{ 'audit.filter.no_results'|trans }}</p>
            </div>
            {% else %}
            {# Empty State #}
            {% include '_components/_empty_state.html.twig' with {
                icon: 'bi-clipboard-check',
                title: 'audit.empty.title'|trans,
                description: 'audit.empty.description'|trans,
                action: {
                    label: 'audit.new'|trans,
                    url: path('app_audit_new'),
                    icon: 'bi-plus-circle'
                }
            } %}
            {% endif %}
        </div>
    </div>
</div>

<style>
/* Status Cards Hover Effect */
.status-card {
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: default;
}

.status-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

/* Table Row Hover */
.table tbody tr:hover {
    background-color: rgba(52, 152, 219, 0.05);
    transition: background-color 0.2s;
}

/* Filter Controls */
#statusFilter:focus,
#auditSearch:focus {
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 0.2rem rgba(60, 141, 188, 0.25);
}
</style>

<script>
function initializeAuditFilters() {
    const statusFilter = document.getElementById('statusFilter');
    const searchInput = document.getElementById('auditSearch');
    const auditRows = document.querySelectorAll('.audit-row');
    const noResults = document.getElementById('noResults');
    const tableBody = document.getElementById('auditTableBody');

    if (!statusFilter && !searchInput) return; // Elements not present on page

    function filterAudits() {
        const statusValue = statusFilter ? statusFilter.value.toLowerCase() : '';
        const searchValue = searchInput ? searchInput.value.toLowerCase() : '';
        let visibleCount = 0;

        auditRows.forEach(row => {
            const status = row.dataset.status.toLowerCase();
            const title = row.dataset.title;
            const number = row.dataset.number;

            const matchesStatus = !statusValue || status === statusValue;
            const matchesSearch = !searchValue ||
                                  title.includes(searchValue) ||
                                  number.includes(searchValue);

            if (matchesStatus && matchesSearch) {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        });

        // Show/hide no results message
        if (noResults && tableBody) {
            if (visibleCount === 0 && auditRows.length > 0) {
                tableBody.style.display = 'none';
                noResults.style.display = 'block';
            } else {
                tableBody.style.display = '';
                noResults.style.display = 'none';
            }
        }
    }

    // Attach event listeners (prevent duplicates)
    if (statusFilter && statusFilter.dataset.initialized !== 'true') {
        statusFilter.dataset.initialized = 'true';
        statusFilter.addEventListener('change', filterAudits);
    }

    if (searchInput && searchInput.dataset.initialized !== 'true') {
        searchInput.dataset.initialized = 'true';
        searchInput.addEventListener('input', filterAudits);
    }
}

// Cleanup before Turbo caches the page to allow re-initialization on back navigation
document.addEventListener('turbo:before-cache', function() {
    const statusFilter = document.getElementById('statusFilter');
    const searchInput = document.getElementById('auditSearch');

    if (statusFilter) delete statusFilter.dataset.initialized;
    if (searchInput) delete searchInput.dataset.initialized;
});

// Initialize on both DOMContentLoaded (first page load) and turbo:load (Turbo navigation)
document.addEventListener('DOMContentLoaded', initializeAuditFilters);
document.addEventListener('turbo:load', initializeAuditFilters);
</script>
{% endblock %}

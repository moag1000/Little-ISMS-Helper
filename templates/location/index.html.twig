{% extends 'base.html.twig' %}

{% block title %}{{ 'location.title.list'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="page-header">
    <div>
        <h1>{{ 'location.title.list'|trans }}</h1>
        <p class="text-muted">{{ 'location.description.overview'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_location_new') }}" class="btn btn-primary">
            ‚ûï {{ 'location.action.create'|trans }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="kpi-card">
        <div class="icon">üìç</div>
        <div class="label">{{ 'location.stats.total'|trans }}</div>
        <div>
            <span class="value">{{ locations|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">üè¢</div>
        <div class="label">{{ 'location.stats.buildings'|trans }}</div>
        <div>
            <span class="value">{{ locations|filter(l => l.locationType == 'building')|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">üö™</div>
        <div class="label">{{ 'location.stats.rooms'|trans }}</div>
        <div>
            <span class="value">{{ locations|filter(l => l.locationType == 'room')|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">üîí</div>
        <div class="label">{{ 'location.stats.secure'|trans }}</div>
        <div>
            <span class="value">{{ locations|filter(l => l.requiresBadgeAccess)|length }}</span>
        </div>
    </div>
</div>

{# Locations Table #}
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>{{ 'location.field.name'|trans }}</th>
                <th>{{ 'location.field.type'|trans }}</th>
                <th>{{ 'location.field.code'|trans }}</th>
                <th>{{ 'location.field.city'|trans }}</th>
                <th>{{ 'location.field.security_level'|trans }}</th>
                <th class="text-center">{{ 'location.field.badge_access'|trans }}</th>
                <th class="text-center">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for location in locations %}
            <tr>
                <td>
                    <strong>{{ location.name }}</strong>
                    {% if location.parentLocation %}
                        <br><small class="text-muted-color">‚Ü≥ {{ location.parentLocation.name }}</small>
                    {% endif %}
                </td>
                <td>
                    <span class="badge badge-info">{{ ('location.type.' ~ location.locationType)|trans }}</span>
                </td>
                <td>
                    {% if location.code %}
                        <code>{{ location.code }}</code>
                    {% else %}
                        <span class="text-muted-color">-</span>
                    {% endif %}
                </td>
                <td>
                    {{ location.city ?? '-' }}
                    {% if location.country %}
                        <br><small class="text-muted-color">{{ location.country }}</small>
                    {% endif %}
                </td>
                <td>
                    {% set securityColors = {
                        'public': 'secondary',
                        'restricted': 'info',
                        'controlled': 'warning',
                        'secure': 'warning',
                        'high_security': 'danger'
                    } %}
                    <span class="badge badge-{{ securityColors[location.securityLevel] ?? 'secondary' }}">
                        {{ ('location.security.' ~ location.securityLevel)|trans }}
                    </span>
                </td>
                <td class="text-center">
                    {% if location.requiresBadgeAccess %}
                        <span class="badge badge-success">‚úì</span>
                    {% else %}
                        <span class="badge badge-secondary">‚úó</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <a href="{{ path('app_location_show', {id: location.id}) }}" class="btn btn-sm mr-025">
                        üëÅ {{ 'common.view'|trans }}
                    </a>
                    <a href="{{ path('app_location_edit', {id: location.id}) }}" class="btn btn-sm btn-secondary">
                        ‚úèÔ∏è {{ 'common.edit'|trans }}
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7" class="text-center-p-xl-muted">
                    {{ 'location.message.no_locations'|trans }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

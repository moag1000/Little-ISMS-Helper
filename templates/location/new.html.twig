{% extends 'base.html.twig' %}
{% trans_default_domain 'locations' %}

{% block title %}{{ 'location.title.create'|trans({}, 'locations')}} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.locations'|trans({}, 'nav'), url: path('app_location_index') },
            { label: 'location.title.create'|trans({}, 'locations')}
        ]
    } %}
</div>

<div class="page-header">
    <div>
        <h1>{{ 'location.title.create'|trans({}, 'locations')}}</h1>
    </div>
    <div class="button-group">
        <a href="{{ path('app_location_index') }}" class="btn btn-secondary">
            ‚Üê {{ 'common.back_to_list'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{% embed '_components/_card.html.twig' %}
    {% block card_body %}
        {{ form_start(form) }}
            {% include '_components/_auto_form.html.twig' with {
                'form': form,
                'sections': {
                    'basic_info': {
                        'label': 'location.section.basic_info'|trans({}, 'locations'),
                        'fields': ['name', 'locationType', 'code', 'description']
                    },
                    'address': {
                        'label': 'location.section.address'|trans({}, 'locations'),
                        'fields': ['address', 'city', 'postalCode', 'country']
                    },
                    'hierarchy': {
                        'label': 'location.section.hierarchy'|trans({}, 'locations'),
                        'fields': ['parentLocation']
                    },
                    'security': {
                        'label': 'location.section.security'|trans({}, 'locations'),
                        'fields': ['securityLevel', 'requiresBadgeAccess', 'requiresEscort', 'cameraMonitored', 'accessControlSystem']
                    },
                    'details': {
                        'label': 'location.section.details'|trans({}, 'locations'),
                        'fields': ['responsiblePerson', 'capacity', 'squareMeters', 'notes']
                    }
                },
                'col_widths': {
                    'name': 6,
                    'locationType': 6,
                    'code': 6,
                    'description': 6,
                    'address': 12,
                    'city': 4,
                    'postalCode': 4,
                    'country': 4,
                    'parentLocation': 12,
                    'securityLevel': 6,
                    'requiresBadgeAccess': 12,
                    'requiresEscort': 12,
                    'cameraMonitored': 12,
                    'accessControlSystem': 12,
                    'responsiblePerson': 6,
                    'capacity': 3,
                    'squareMeters': 3,
                    'notes': 12
                },
                'exclude': ['active']
            } %}

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_location_index') }}" class="btn btn-secondary">
                    {{ 'common.cancel'|trans({}, 'messages') }}
                </a>
                <button type="submit" class="btn btn-primary">
                    {{ 'common.create'|trans({}, 'messages') }}
                </button>
            </div>
        {{ form_end(form) }}
    {% endblock %}
{% endembed %}
{% endblock %}

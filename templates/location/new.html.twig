{% extends 'base.html.twig' %}
{% trans_default_domain 'locations' %}

{% block title %}{{ 'location.title.create'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.locations'|trans({}, 'nav'), url: path('app_location_index') },
            { label: 'location.title.create'|trans }
        ]
    } %}
</div>

<div class="page-header">
    <div>
        <h1>{{ 'location.title.create'|trans }}</h1>
    </div>
    <div class="button-group">
        <a href="{{ path('app_location_index') }}" class="btn btn-secondary">
            ‚Üê {{ 'common.back_to_list'|trans({}, 'messages') }}
        </a>
    </div>
</div>

<div class="card">
    <div class="card-content">
        {{ form_start(form) }}
            <fieldset class="mb-4">
                <legend class="h5 mb-3">{{ 'location.section.basic_info'|trans }}</legend>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.locationType) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.code) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.description) }}
                    </div>
                </div>
            </fieldset>

            <fieldset class="mb-4">
                <legend class="h5 mb-3">{{ 'location.section.address'|trans }}</legend>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.address) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.city) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.postalCode) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.country) }}
                    </div>
                </div>
            </fieldset>

            <fieldset class="mb-4">
                <legend class="h5 mb-3">{{ 'location.section.hierarchy'|trans }}</legend>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.parentLocation) }}
                    </div>
                </div>
            </fieldset>

            <fieldset class="mb-4">
                <legend class="h5 mb-3">{{ 'location.section.security'|trans }}</legend>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.securityLevel) }}
                    </div>
                    <div class="col-md-6">
                        <div class="form-check mt-4">
                            {{ form_widget(form.requiresBadgeAccess, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.requiresBadgeAccess, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        {{ form_errors(form.requiresBadgeAccess) }}
                    </div>
                </div>
                {% if form.accessControlSystem is defined %}
                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.accessControlSystem) }}
                    </div>
                </div>
                {% endif %}
            </fieldset>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_location_index') }}" class="btn btn-secondary">
                    {{ 'common.cancel'|trans({}, 'messages') }}
                </a>
                <button type="submit" class="btn btn-primary">
                    {{ 'common.create'|trans({}, 'messages') }}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

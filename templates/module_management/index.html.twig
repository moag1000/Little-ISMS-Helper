{% extends 'base.html.twig' %}

{% block title %}Modul-Verwaltung - Little ISMS Helper{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>
                <i class="fas fa-puzzle-piece me-2"></i>
                Modul-Verwaltung
            </h1>
            <p class="lead text-muted">
                Verwalten Sie die aktivierten Module Ihres ISMS-Systems
            </p>
        </div>
    </div>

    {# Statistics #}
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Gesamt</h6>
                            <h2 class="mb-0">{{ statistics.total_modules }}</h2>
                        </div>
                        <i class="fas fa-th fa-2x text-primary opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Aktiv</h6>
                            <h2 class="mb-0 text-success">{{ statistics.active_modules }}</h2>
                        </div>
                        <i class="fas fa-check-circle fa-2x text-success opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-secondary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Inaktiv</h6>
                            <h2 class="mb-0 text-secondary">{{ statistics.inactive_modules }}</h2>
                        </div>
                        <i class="fas fa-times-circle fa-2x text-secondary opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Erforderlich</h6>
                            <h2 class="mb-0 text-warning">{{ statistics.required_modules }}</h2>
                        </div>
                        <i class="fas fa-star fa-2x text-warning opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Quick Actions #}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">
                                <i class="fas fa-bolt me-2"></i>
                                Schnellaktionen
                            </h5>
                        </div>
                        <div>
                            <a href="{{ path('module_management_graph') }}" class="btn btn-outline-primary">
                                <i class="fas fa-project-diagram me-2"></i>
                                Abhängigkeiten anzeigen
                            </a>
                            <a href="{{ path('setup_wizard_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-magic me-2"></i>
                                Zurück zum Wizard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Active Modules #}
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="mb-3">
                <i class="fas fa-check-circle text-success me-2"></i>
                Aktive Module ({{ active_modules|length }})
            </h3>
            <div class="row g-3">
                {% for key, module in all_modules %}
                    {% if key in active_modules %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="mb-0">
                                        <i class="fas fa-{{ module.icon }} text-{{ module.required ? 'warning' : 'success' }} me-2"></i>
                                        {{ module.name }}
                                    </h5>
                                    <span class="badge bg-success">Aktiv</span>
                                </div>
                                <p class="text-muted">{{ module.description }}</p>

                                <div class="mb-3">
                                    <small class="text-muted d-block mb-1"><strong>Entities:</strong></small>
                                    {% for entity in module.entities %}
                                        <span class="badge bg-secondary me-1 mb-1">{{ entity }}</span>
                                    {% endfor %}
                                </div>

                                {% if dependency_graph[key].dependencies|length > 0 %}
                                    <div class="mb-3">
                                        <small class="text-warning d-block mb-1">
                                            <i class="fas fa-link me-1"></i>
                                            <strong>Abhängigkeiten:</strong>
                                        </small>
                                        {% for dep in dependency_graph[key].dependencies %}
                                            <span class="badge bg-warning text-dark me-1 mb-1">{{ all_modules[dep].name }}</span>
                                        {% endfor %}
                                    </div>
                                {% endif %}

                                {% if dependency_graph[key].dependents|length > 0 %}
                                    <div class="mb-3">
                                        <small class="text-info d-block mb-1">
                                            <i class="fas fa-arrow-right me-1"></i>
                                            <strong>Benötigt von:</strong>
                                        </small>
                                        {% for dep in dependency_graph[key].dependents %}
                                            <span class="badge bg-info me-1 mb-1">{{ all_modules[dep].name }}</span>
                                        {% endfor %}
                                    </div>
                                {% endif %}

                                <div class="d-grid gap-2">
                                    <a href="{{ path('module_management_details', {moduleKey: key}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Details
                                    </a>
                                    {% if not module.required %}
                                        <form method="post" action="{{ path('module_management_deactivate', {moduleKey: key}) }}" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger w-100"
                                                onclick="return confirm('Modul {{ module.name }} wirklich deaktivieren?')">
                                                <i class="fas fa-times me-1"></i>
                                                Deaktivieren
                                            </button>
                                        </form>
                                    {% else %}
                                        <button type="button" class="btn btn-sm btn-secondary" disabled>
                                            <i class="fas fa-lock me-1"></i>
                                            Erforderlich
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

    {# Inactive Modules #}
    {% set inactive_modules = [] %}
    {% for key, module in all_modules %}
        {% if key not in active_modules %}
            {% set inactive_modules = inactive_modules|merge([{key: key, module: module}]) %}
        {% endif %}
    {% endfor %}

    {% if inactive_modules|length > 0 %}
        <div class="row">
            <div class="col-12">
                <h3 class="mb-3">
                    <i class="fas fa-times-circle text-secondary me-2"></i>
                    Inaktive Module ({{ inactive_modules|length }})
                </h3>
                <div class="row g-3">
                    {% for item in inactive_modules %}
                        {% set key = item.key %}
                        {% set module = item.module %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 border-secondary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="mb-0 text-muted">
                                            <i class="fas fa-{{ module.icon }} me-2"></i>
                                            {{ module.name }}
                                        </h5>
                                        <span class="badge bg-secondary">Inaktiv</span>
                                    </div>
                                    <p class="text-muted">{{ module.description }}</p>

                                    {% if dependency_graph[key].dependencies|length > 0 %}
                                        <div class="mb-3">
                                            <small class="text-warning d-block mb-1">
                                                <i class="fas fa-link me-1"></i>
                                                <strong>Abhängigkeiten:</strong>
                                            </small>
                                            {% for dep in dependency_graph[key].dependencies %}
                                                <span class="badge bg-warning text-dark me-1 mb-1">{{ all_modules[dep].name }}</span>
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                    <div class="d-grid gap-2">
                                        <a href="{{ path('module_management_details', {moduleKey: key}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Details
                                        </a>
                                        <form method="post" action="{{ path('module_management_activate', {moduleKey: key}) }}">
                                            <button type="submit" class="btn btn-sm btn-success w-100">
                                                <i class="fas fa-check me-1"></i>
                                                Aktivieren
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% extends 'base.html.twig' %}
{% import '_macros/cards.html.twig' as cards %}

{% block title %}{{ 'nav.dashboard'|trans }} - {{ 'app.title'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'dashboard.title'|trans }}</h1>

<p class="text-muted mb-2">
    {{ 'dashboard.subtitle'|trans }}
</p>

<h2>{{ 'dashboard.kpis'|trans }}</h2>

<div class="kpi-grid">
    {% for kpi in kpis %}
    <div class="col-auto">
        {{ cards.kpi_card(kpi.name, kpi.value ~ (kpi.unit ? ' ' ~ kpi.unit : ''), null, null, null, null) }}
    </div>
    {% endfor %}
</div>

<h2 class="mt-3">{{ 'dashboard.compliance_status'|trans }}</h2>

<div class="info-box">
    <h2 class="mb-md">{{ 'dashboard.implementation_status'|trans }}</h2>
    <div class="mb-sm">
        <strong>Clause 4 - {{ 'clause.4'|trans }}:</strong> <span class="status-in-progress">{{ 'status.in_progress'|trans }}</span>
    </div>
    <div class="mb-sm">
        <strong>Clause 5 - {{ 'clause.5'|trans }}:</strong> <span class="status-not-started">{{ 'status.not_started'|trans }}</span>
    </div>
    <div class="mb-sm">
        <strong>Clause 6 - {{ 'clause.6'|trans }}:</strong> <span class="status-not-started">{{ 'status.not_started'|trans }}</span>
    </div>
    <div class="mb-sm">
        <strong>Clause 7 - {{ 'clause.7'|trans }}:</strong> <span class="status-not-started">{{ 'status.not_started'|trans }}</span>
    </div>
    <div class="mb-sm">
        <strong>Clause 8 - {{ 'clause.8'|trans }}:</strong> <span class="status-not-started">{{ 'status.not_started'|trans }}</span>
    </div>
    <div class="mb-sm">
        <strong>Clause 9 - {{ 'clause.9'|trans }}:</strong> <span class="status-not-started">{{ 'status.not_started'|trans }}</span>
    </div>
    <div class="mb-sm">
        <strong>Clause 10 - {{ 'clause.10'|trans }}:</strong> <span class="status-not-started">{{ 'status.not_started'|trans }}</span>
    </div>
</div>

<h2 class="mt-3">{{ 'dashboard.quick_access'|trans }}</h2>

<div class="d-flex gap-1 mt-md">
    <a href="#" class="btn">{{ 'action.new_asset'|trans }}</a>
    <a href="#" class="btn btn-secondary">{{ 'action.assess_risk'|trans }}</a>
    <a href="#" class="btn btn-secondary">{{ 'action.report_incident'|trans }}</a>
</div>

<div class="warning-box mt-3">
    <p><strong>{{ 'dashboard.next_steps'|trans }}:</strong></p>
    <ul class="ml-lg mt-sm">
        <li>{{ 'form.complete_asset_inventory'|trans }}</li>
        <li>{{ 'form.conduct_risk_analysis'|trans }}</li>
        <li>{{ 'form.document_policies'|trans }}</li>
        <li>{{ 'form.plan_awareness_training'|trans }}</li>
    </ul>
</div>
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'messages' %}

{% block title %}{{ 'home.welcome'|trans({}, 'messages')}} - {{ 'app.title'|trans({}, 'messages')}}{% endblock %}

{% block body %}
{# Hero Section #}
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <i class="bi bi-shield-check text-white" aria-hidden="true"></i>
                        {{ 'app.title'|trans({}, 'messages') }}
                    </h1>
                    <p class="hero-subtitle">
                        {{ 'home.description'|trans({}, 'messages') }}
                    </p>
                    <div class="hero-stats mb-4">
                        <div class="hero-stat">
                            <span class="hero-stat-value">{{ stats.assets|default(0) }}</span>
                            <span class="hero-stat-label">{{ 'assets'|trans({}, 'messages') }}</span>
                        </div>
                        <div class="hero-stat">
                            <span class="hero-stat-value">{{ stats.risks|default(0) }}</span>
                            <span class="hero-stat-label">{{ 'risks'|trans({}, 'messages') }}</span>
                        </div>
                        <div class="hero-stat">
                            <span class="hero-stat-value">{{ stats.controls|default(0) }}</span>
                            <span class="hero-stat-label">{{ 'controls'|trans({}, 'messages') }}</span>
                        </div>
                    </div>
                    <div class="hero-actions">
                        <a href="{{ path('app_dashboard') }}" class="btn btn-light btn-lg">
                            <i class="bi bi-speedometer2" aria-hidden="true"></i> {{ 'home.go_to_dashboard'|trans({}, 'messages') }}
                        </a>
                        <a href="#features" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'common.view_details'|trans({}, 'messages') }}
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="hero-image">
                    <div class="text-center">
                        <i class="bi bi-shield-lock hero-icon" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# Features Section #}
<div class="container my-5" id="features">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold">{{ 'home.modules'|trans({}, 'messages') }}</h2>
        <p class="lead text-muted">{{ 'home.tagline'|trans({}, 'messages') }}</p>
    </div>

    <div class="row g-4">
        {# Asset Management #}
        <div class="col-lg-3 col-md-6">
            <div class="feature-card">
                <div class="feature-icon bg-primary" aria-hidden="true">
                    <i class="bi bi-server" aria-hidden="true"></i>
                </div>
                <h3 class="feature-title">{{ 'home.module.assets.title'|trans({}, 'messages') }}</h3>
                <p class="feature-description">
                    {{ 'home.module.assets.description'|trans({}, 'messages') }}
                </p>
                <a href="{{ path('app_asset_index') }}" class="btn btn-sm btn-outline-primary mt-3">
                    {{ 'home.module.assets.action'|trans({}, 'messages') }} <i class="bi bi-arrow-right" aria-hidden="true"></i>
                </a>
            </div>
        </div>

        {# Risk Management #}
        <div class="col-lg-3 col-md-6">
            <div class="feature-card">
                <div class="feature-icon bg-warning" aria-hidden="true">
                    <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                </div>
                <h3 class="feature-title">{{ 'home.module.risks.title'|trans({}, 'messages') }}</h3>
                <p class="feature-description">
                    {{ 'home.module.risks.description'|trans({}, 'messages') }}
                </p>
                <a href="{{ path('app_risk_index') }}" class="btn btn-sm btn-outline-warning mt-3">
                    {{ 'home.module.risks.action'|trans({}, 'messages') }} <i class="bi bi-arrow-right" aria-hidden="true"></i>
                </a>
            </div>
        </div>

        {# Control Framework #}
        <div class="col-lg-3 col-md-6">
            <div class="feature-card">
                <div class="feature-icon bg-success" aria-hidden="true">
                    <i class="bi bi-shield-check" aria-hidden="true"></i>
                </div>
                <h3 class="feature-title">{{ 'home.module.compliance.title'|trans({}, 'messages') }}</h3>
                <p class="feature-description">
                    {{ 'home.module.compliance.description'|trans({}, 'messages') }}
                </p>
                <a href="{{ path('app_compliance_index') }}" class="btn btn-sm btn-outline-success mt-3">
                    {{ 'home.module.compliance.action'|trans({}, 'messages') }} <i class="bi bi-arrow-right" aria-hidden="true"></i>
                </a>
            </div>
        </div>

        {# Documents Management #}
        <div class="col-lg-3 col-md-6">
            <div class="feature-card">
                <div class="feature-icon bg-info" aria-hidden="true">
                    <i class="bi bi-file-earmark-text" aria-hidden="true"></i>
                </div>
                <h3 class="feature-title">{{ 'home.module.documents.title'|trans({}, 'messages') }}</h3>
                <p class="feature-description">
                    {{ 'home.module.documents.description'|trans({}, 'messages') }}
                </p>
                <a href="{{ path('app_document_index') }}" class="btn btn-sm btn-outline-info mt-3">
                    {{ 'home.module.documents.action'|trans({}, 'messages') }} <i class="bi bi-arrow-right" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>
</div>

{# Quick Start Guide #}
<div class="bg-light py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">{{ 'home.quick_start'|trans({}, 'messages')}}</h2>
            <p class="lead text-muted">{{ 'home.quick_start_subtitle'|trans({}, 'messages') }}</p>
        </div>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="steps-container">
                    {# Step 1 #}
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h3 class="step-title">{{ 'home.step1.title'|trans({}, 'messages') }}</h3>
                            <p class="step-description">
                                {{ 'home.step1.description'|trans({}, 'messages') }}
                            </p>
                            <a href="{{ path('app_asset_new') }}" class="btn btn-sm btn-primary">{{ 'home.step1.action'|trans({}, 'messages') }}</a>
                        </div>
                    </div>

                    {# Step 2 #}
                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h3 class="step-title">{{ 'home.step2.title'|trans({}, 'messages') }}</h3>
                            <p class="step-description">
                                {{ 'home.step2.description'|trans({}, 'messages') }}
                            </p>
                            <a href="{{ path('app_risk_new') }}" class="btn btn-sm btn-primary">{{ 'home.step2.action'|trans({}, 'messages') }}</a>
                        </div>
                    </div>

                    {# Step 3 #}
                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h3 class="step-title">{{ 'home.step3.title'|trans({}, 'messages') }}</h3>
                            <p class="step-description">
                                {{ 'home.step3.description'|trans({}, 'messages') }}
                            </p>
                            <a href="{{ path('app_compliance_index') }}" class="btn btn-sm btn-primary">{{ 'home.step3.action'|trans({}, 'messages') }}</a>
                        </div>
                    </div>

                    {# Step 4 #}
                    <div class="step-item">
                        <div class="step-number">4</div>
                        <div class="step-content">
                            <h3 class="step-title">{{ 'home.step4.title'|trans({}, 'messages') }}</h3>
                            <p class="step-description">
                                {{ 'home.step4.description'|trans({}, 'messages') }}
                            </p>
                            <a href="{{ path('app_training_new') }}" class="btn btn-sm btn-primary">{{ 'home.step4.action'|trans({}, 'messages') }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{# CTA Section #}
<div class="container my-5">
    <div class="text-center py-5">
        <h2 class="display-5 fw-bold mb-4">{{ 'home.go_to_dashboard'|trans({}, 'messages') }}</h2>
        <p class="lead text-muted mb-4">
            {{ 'app.subtitle'|trans({}, 'messages') }}
        </p>
        <a href="{{ path('app_dashboard') }}" class="btn btn-primary btn-lg">
            <i class="bi bi-speedometer2" aria-hidden="true"></i> {{ 'home.go_to_dashboard'|trans({}, 'messages') }}
        </a>
    </div>
</div>
{% endblock %}

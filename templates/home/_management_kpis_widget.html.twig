{#
 # Management KPIs Widget
 # Displays module-aware KPIs for management reports
 # Only shows KPIs for active modules
 #}

{% if management_kpis is defined and management_kpis|length > 0 %}
<div class="widget-card mb-4"
     data-widget-id="management-kpis"
     data-dashboard-customizer-target="widget">
    <div class="widget-header">
        <h3 class="widget-title">
            <i class="bi bi-graph-up" aria-hidden="true"></i>
            {{ 'dashboard.management_kpis.title'|trans({}, 'dashboard') }}
        </h3>
        <div class="widget-actions">
            <span class="badge bg-secondary" title="{{ 'dashboard.management_kpis.subtitle'|trans({}, 'dashboard') }}">
                {{ management_kpis.active_modules|default([])|length }} {{ 'common.modules'|trans({}, 'messages') }}
            </span>
        </div>
    </div>
    <div class="widget-body p-3">
        {# Core KPIs (always shown) #}
        {% if management_kpis.core is defined %}
        <div class="kpi-section mb-3">
            <h6 class="text-muted mb-2 d-flex justify-content-between align-items-center">
                <span>
                    <i class="bi bi-shield-check" aria-hidden="true"></i>
                    {{ 'dashboard.management_kpis.core.title'|trans({}, 'dashboard') }}
                </span>
                <a href="{{ path('app_soa_index') }}" class="btn btn-sm btn-link p-0" title="{{ 'common.view_all'|trans({}, 'messages') }}">
                    <i class="bi bi-arrow-right-circle"></i>
                </a>
            </h6>
            <div class="row g-2">
                {% for key, kpi in management_kpis.core %}
                <div class="col-6">
                    <div class="kpi-card p-2 rounded border-start border-4 border-{{ kpi.status == 'good' ? 'success' : (kpi.status == 'warning' ? 'warning' : (kpi.status == 'danger' ? 'danger' : 'info')) }}">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="small text-muted">{{ ('dashboard.kpi.' ~ key)|trans({}, 'dashboard') }}</span>
                            <span class="badge bg-{{ kpi.status == 'good' ? 'success' : (kpi.status == 'warning' ? 'warning' : (kpi.status == 'danger' ? 'danger' : 'secondary')) }}-subtle text-{{ kpi.status == 'good' ? 'success' : (kpi.status == 'warning' ? 'warning' : (kpi.status == 'danger' ? 'danger' : 'secondary')) }}">
                                {{ kpi.value }}{{ kpi.unit }}
                            </span>
                        </div>
                        {% if kpi.details is defined and kpi.details.total is defined %}
                        <div class="progress mt-1" style="height: 4px;">
                            <div class="progress-bar bg-{{ kpi.status == 'good' ? 'success' : (kpi.status == 'warning' ? 'warning' : 'danger') }}"
                                 role="progressbar"
                                 style="width: {{ kpi.value }}%"
                                 aria-valuenow="{{ kpi.value }}"
                                 aria-valuemin="0"
                                 aria-valuemax="100"></div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        {# Risk Management KPIs #}
        {% if management_kpis.risk_management is defined %}

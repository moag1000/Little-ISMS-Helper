{% extends 'base.html.twig' %}

{% block title %}VVT Dashboard{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'GDPR', icon: 'bi-shield-check' },
            { label: 'VVT Dashboard' }
        ]
    } %}

    {% include '_components/_page_header.html.twig' with {
        title: 'VVT Dashboard',
        subtitle: 'Art. 30 GDPR Compliance Overview',
        icon: 'bi-speedometer2',
        actions: [
            { label: 'View All Activities', url: path('app_processing_activity_index'), variant: 'primary', icon: 'bi-list' },
            { label: 'New Activity', url: path('app_processing_activity_new'), variant: 'success', icon: 'bi-plus-lg' }
        ]
    } %}

    {# Overall Compliance Score #}
    <div class="card mb-4 text-center">
        <div class="card-body">
            <h6 class="text-muted mb-2">Overall VVT Compliance Score</h6>
            {% set score = compliance_score.overall_score %}
            <h1 class="display-1 mb-0
                {% if score >= 80 %}text-success
                {% elseif score >= 60 %}text-warning
                {% else %}text-danger{% endif %}">
                {{ score }}%
            </h1>
            <p class="text-muted mt-2">
                {{ compliance_score.complete_activities }} of {{ compliance_score.total_activities }} activities complete
                {% if compliance_score.dpia_required > 0 %}
                    Â· {{ compliance_score.dpia_completed }}/{{ compliance_score.dpia_required }} DPIAs completed
                {% endif %}
            </p>
        </div>
    </div>

    {# Key Metrics #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Total Activities</h6>
                    <h2>{{ statistics.total }}</h2>
                    <div class="mt-2">
                        <small class="text-success"><i class="bi bi-check-circle"></i> {{ statistics.active }} active</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">High Risk</h6>
                    <h2 class="text-warning">{{ statistics.high_risk }}</h2>
                    <div class="mt-2">
                        <small class="text-danger"><i class="bi bi-exclamation-triangle"></i> {{ statistics.missing_dpia }} missing DPIA</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Completeness Rate</h6>
                    <h2>{{ statistics.completeness_rate }}%</h2>
                    <div class="progress mt-2" style="height: 10px;">
                        <div class="progress-bar bg-success" style="width: {{ statistics.completeness_rate }}%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        {# Action Items #}
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark"><h5 class="mb-0"><i class="bi bi-exclamation-circle"></i> Action Items</h5>
                </div>
                <div class="card-body">
                    {% if incomplete|length > 0 %}
                        <h6>Incomplete Activities ({{ incomplete|length }})</h6>
                        <ul class="list-unstyled">
                            {% for pa in incomplete|slice(0, 5) %}
                                <li class="mb-2">
                                    <a href="{{ path('app_processing_activity_edit', {id: pa.id}) }}">{{ pa.name }}</a>
                                    <span class="badge bg-warning">{{ pa.completenessPercentage }}%</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {% if requiring_dpia|length > 0 %}
                        <h6 class="mt-3">Requiring DPIA ({{ requiring_dpia|length }})</h6>
                        <ul class="list-unstyled">
                            {% for pa in requiring_dpia|slice(0, 5) %}
                                <li class="mb-2">
                                    <a href="{{ path('app_processing_activity_edit', {id: pa.id}) }}">{{ pa.name }}</a>
                                    <span class="badge bg-danger">DPIA Required</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {% if due_for_review|length > 0 %}
                        <h6 class="mt-3">Due for Review ({{ due_for_review|length }})</h6>
                        <ul class="list-unstyled">
                            {% for pa in due_for_review|slice(0, 5) %}
                                <li class="mb-2">
                                    <a href="{{ path('app_processing_activity_show', {id: pa.id}) }}">{{ pa.name }}</a>
                                    <small class="text-muted">{{ pa.nextReviewDate|date('Y-m-d') }}</small>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {% if incomplete|length == 0 and requiring_dpia|length == 0 and due_for_review|length == 0 %}
                        <p class="text-success mb-0"><i class="bi bi-check-circle"></i> No action items - all compliant!</p>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Statistics Charts #}
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header"><h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h5>
                </div>
                <div class="card-body">
                    <h6>{{ 'privacy.chart.by_legal_basis'|trans({}, 'privacy') }}</h6>
                    {% if statistics.by_legal_basis %}
                        <ul class="list-unstyled">
                            {% for basis, count in statistics.by_legal_basis %}
                                <li class="mb-2">
                                    <span class="badge bg-primary">{{ count }}</span>
                                    {{ basis|replace({'_': ' '})|title }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    <h6 class="mt-4">{{ 'privacy.chart.by_risk_level'|trans({}, 'privacy') }}</h6>
                    {% if statistics.by_risk_level %}
                        <ul class="list-unstyled">
                            {% for level, count in statistics.by_risk_level %}
                                {% set risk_color = {
                                    'low': 'success',
                                    'medium': 'info',
                                    'high': 'warning',
                                    'critical': 'danger'
                                }[level] %}
                                <li class="mb-2">
                                    <span class="badge bg-{{ risk_color }}">{{ count }}</span>
                                    {{ level|upper }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    <h6 class="mt-4">Special Processing</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <span class="badge bg-danger">{{ statistics.special_categories }}</span>
                            Special Categories (Art. 9)
                        </li>
                        <li class="mb-2">
                            <span class="badge bg-warning">{{ statistics.third_country_transfers }}</span>
                            Third Country Transfers
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

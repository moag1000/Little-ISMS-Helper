{% extends 'base.html.twig' %}
{% trans_default_domain 'privacy' %}
{% block title %}{{ 'dpia.index.title'|trans({}, 'privacy')}}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'GDPR', icon: 'bi-shield-check' },
            { label: 'DPIA / DSFA' }
        ]
    } %}

    {% include '_components/_page_header.html.twig' with {
        title: 'dpia.index.page_title'|trans({}, 'privacy'),
        subtitle: 'dpia.index.page_subtitle'|trans({}, 'privacy'),
        icon: 'bi-clipboard-check',
        actions: [
            { label: 'dpia.index.button_dashboard'|trans({}, 'privacy'), url: path('app_dpia_dashboard'), variant: 'primary', icon: 'bi-speedometer2' },
            { label: 'dpia.index.button_new_dpia'|trans({}, 'privacy'), url: path('app_dpia_new'), variant: 'success', icon: 'bi-plus-lg' }
        ]
    } %}

    {# Overall Compliance Score #}
    <div class="card mb-4 text-center">
        <div class="card-body">
            <div class="text-muted mb-2 fw-semibold">{{ 'dpia.index.compliance_score'|trans({}, 'privacy') }}</div>
            {% set score = compliance_score.overall_score %}
            <div class="display-1 mb-0
                {% if score >= 80 %}text-success
                {% elseif score >= 60 %}text-warning
                {% else %}text-danger{% endif %}">
                {{ score }}%
            </div>
            <p class="text-muted mt-2">
                {{ compliance_score.approved_dpias }} {{ 'dpia.index.of'|trans({}, 'privacy') }} {{ compliance_score.total_dpias }} {{ 'dpia.index.dpias_approved'|trans({}, 'privacy') }}
                {% if compliance_score.due_for_review > 0 %}
                    Â· {{ compliance_score.due_for_review }} {{ 'dpia.index.due_for_review'|trans({}, 'privacy') }}
                {% endif %}
            </p>
        </div>
    </div>

    {# Key Metrics #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-muted fw-semibold">{{ 'dpia.index.total_dpias'|trans({}, 'privacy') }}</div>
                    <div class="fs-2 fw-bold">{{ statistics.total }}</div>
                    <div class="mt-2">
                        <small class="text-success"><i class="bi bi-check-circle"></i> {{ statistics.approved }} {{ 'dpia.index.approved'|trans({}, 'privacy') }}</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-muted fw-semibold">{{ 'dpia.index.in_review'|trans({}, 'privacy') }}</div>
                    <div class="fs-2 fw-bold text-info">{{ statistics.in_review }}</div>
                    <div class="mt-2">
                        <small class="text-muted"><i class="bi bi-clock"></i> {{ 'dpia.index.awaiting_approval'|trans({}, 'privacy') }}</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-muted fw-semibold">{{ 'dpia.index.high_risk'|trans({}, 'privacy') }}</div>
                    <div class="fs-2 fw-bold text-danger">{{ statistics.high_risk }}</div>
                    <div class="mt-2">
                        <small class="text-warning"><i class="bi bi-exclamation-triangle"></i> {{ 'dpia.index.requires_attention'|trans({}, 'privacy') }}</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-muted fw-semibold">{{ 'dpia.index.completeness'|trans({}, 'privacy') }}</div>
                    <div class="fs-2 fw-bold">{{ statistics.completeness_rate }}%</div>
                    <div class="progress mt-2" style="height: 10px;">
                        <div class="progress-bar bg-success" style="width: {{ statistics.completeness_rate }}%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Filters #}
    <div class="card mb-4">
        <div class="card-header"><h2 class="h5 mb-0"><i class="bi bi-filter"></i> {{ 'dpia.index.filter_dpias'|trans({}, 'privacy') }}</h2>
        </div>
        <div class="card-body">
            <div class="btn-group flex-wrap" role="group">
                <a href="{{ path('app_dpia_index') }}"
                   class="btn btn-outline-primary {{ current_filter == 'all' ? 'active' : '' }}">
                    {{ 'dpia.index.all'|trans({}, 'privacy') }} ({{ statistics.total }})
                </a>
                <a href="{{ path('app_dpia_index', {filter: 'draft'}) }}"
                   class="btn btn-outline-secondary {{ current_filter == 'draft' ? 'active' : '' }}">
                    {{ 'dpia.index.draft'|trans({}, 'privacy') }} ({{ statistics.draft }})
                </a>
                <a href="{{ path('app_dpia_index', {filter: 'in_review'}) }}"
                   class="btn btn-outline-info {{ current_filter == 'in_review' ? 'active' : '' }}">
                    {{ 'dpia.index.in_review'|trans({}, 'privacy') }} ({{ statistics.in_review }})
                </a>
                <a href="{{ path('app_dpia_index', {filter: 'approved'}) }}"
                   class="btn btn-outline-success {{ current_filter == 'approved' ? 'active' : '' }}">
                    {{ 'dpia.index.approved_filter'|trans({}, 'privacy') }} ({{ statistics.approved }})
                </a>
                <a href="{{ path('app_dpia_index', {filter: 'high_risk'}) }}"
                   class="btn btn-outline-danger {{ current_filter == 'high_risk' ? 'active' : '' }}">
                    {{ 'dpia.index.high_risk_filter'|trans({}, 'privacy') }} ({{ statistics.high_risk }})
                </a>
                <a href="{{ path('app_dpia_index', {filter: 'incomplete'}) }}"
                   class="btn btn-outline-warning {{ current_filter == 'incomplete' ? 'active' : '' }}">
                    {{ 'dpia.index.incomplete'|trans({}, 'privacy') }}
                </a>
                <a href="{{ path('app_dpia_index', {filter: 'awaiting_dpo'}) }}"
                   class="btn btn-outline-warning {{ current_filter == 'awaiting_dpo' ? 'active' : '' }}">
                    {{ 'dpia.index.awaiting_dpo'|trans({}, 'privacy') }} ({{ statistics.awaiting_dpo_consultation }})
                </a>
                <a href="{{ path('app_dpia_index', {filter: 'requires_supervisory'}) }}"
                   class="btn btn-outline-warning {{ current_filter == 'requires_supervisory' ? 'active' : '' }}">
                    {{ 'dpia.index.requires_supervisory'|trans({}, 'privacy') }} ({{ statistics.requires_supervisory_consultation }})
                </a>
            </div>
        </div>
    </div>

    {# DPIA Table #}
    <div class="card">
        <div class="card-header"><h2 class="h5 mb-0"><i class="bi bi-list-check"></i> {{ 'dpia.index.dpias_list'|trans({}, 'privacy') }} ({{ dpias|length }})</h2>
        </div>
        <div class="card-body p-0">
            {% if dpias|length > 0 %}
                {% embed '_components/_table.html.twig' with {
                    'noMargin': true
                } %}
                    {% block table_head %}
                        <tr>
                            <th scope="col">{{ 'dpia.index.reference'|trans({}, 'privacy') }}</th>
                            <th scope="col">{{ 'dpia.index.title_col'|trans({}, 'privacy') }}</th>
                            <th scope="col">{{ 'dpia.index.status'|trans({}, 'privacy') }}</th>
                            <th scope="col">{{ 'dpia.index.risk_level'|trans({}, 'privacy') }}</th>
                            <th scope="col">{{ 'dpia.index.residual_risk'|trans({}, 'privacy') }}</th>
                            <th scope="col">{{ 'dpia.index.completeness'|trans({}, 'privacy') }}</th>
                            <th scope="col">{{ 'dpia.index.dpo'|trans({}, 'privacy') }}</th>
                            <th scope="col">{{ 'dpia.index.actions'|trans({}, 'privacy') }}</th>
                        </tr>
                    {% endblock %}
                    {% block table_body %}
                        {% for dpia in dpias %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_dpia_show', {id: dpia.id}) }}">
                                        {{ dpia.referenceNumber }}
                                    </a>
                                </td>
                                <td>{{ dpia.title }}</td>
                                <td>
                                    {% set status_class = {
                                        'draft': 'secondary',
                                        'in_review': 'info',
                                        'approved': 'success',
                                        'rejected': 'danger',
                                        'requires_revision': 'warning'
                                    }[dpia.status] %}
                                    <span class="badge bg-{{ status_class }}">
                                        {{ dpia.status|replace({'_': ' '})|upper }}
                                    </span>
                                </td>
                                <td>
                                    {% if dpia.riskLevel %}
                                        {% set risk_class = {
                                            'low': 'success',
                                            'medium': 'info',
                                            'high': 'warning',
                                            'critical': 'danger'
                                        }[dpia.riskLevel] %}
                                        <span class="badge bg-{{ risk_class }}">
                                            {{ dpia.riskLevel|upper }}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if dpia.residualRiskLevel %}
                                        {% set risk_class = {
                                            'low': 'success',
                                            'medium': 'info',
                                            'high': 'warning',
                                            'critical': 'danger'
                                        }[dpia.residualRiskLevel] %}
                                        <span class="badge bg-{{ risk_class }}">
                                            {{ dpia.residualRiskLevel|upper }}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        {% set percentage = dpia.completenessPercentage %}
                                        {% set bar_class = percentage == 100 ? 'bg-success' : 'bg-warning' %}
                                        <div class="progress-bar {{ bar_class }}"
                                             style="width: {{ percentage }}%">
                                            {{ percentage }}%
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    {% if dpia.dpoConsultationDate %}
                                        <i class="bi bi-check-circle text-success" aria-hidden="true" title="{{ 'dpia.index.dpo_consulted'|trans({}, 'privacy') }} {{ dpia.dpoConsultationDate|date('Y-m-d') }}"></i>
                                    {% else %}
                                        <i class="bi bi-x-circle text-muted" aria-hidden="true" title="{{ 'dpia.index.dpo_not_yet_consulted'|trans({}, 'privacy') }}"></i>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group" aria-label="{{ 'common.actions'|trans({}, 'messages') }}">
                                        <a href="{{ path('app_dpia_show', {id: dpia.id}) }}"
                                           class="btn btn-outline-primary"
                                           title="{{ 'common.view'|trans({}, 'messages') }}" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                            <i class="bi bi-eye" aria-hidden="true"></i>
                                        </a>
                                        {% if dpia.status in ['draft', 'requires_revision'] %}
                                            <a href="{{ path('app_dpia_edit', {id: dpia.id}) }}"
                                               class="btn btn-outline-secondary"
                                               title="{{ 'common.edit'|trans({}, 'messages') }}" aria-label="{{ 'common.edit'|trans({}, 'messages') }}">
                                                <i class="bi bi-pencil" aria-hidden="true"></i>
                                            </a>
                                        {% endif %}
                                        <a href="{{ path('app_dpia_export_pdf', {id: dpia.id}) }}"
                                           class="btn btn-outline-success"
                                           title="{{ 'common.export_pdf'|trans({}, 'messages') }}" aria-label="{{ 'common.export_pdf'|trans({}, 'messages') }}">
                                            <i class="bi bi-file-pdf" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            {% else %}
                <div class="alert alert-info mb-0">
                    <i class="bi bi-info-circle"></i> {{ 'dpia.index.no_dpias_found'|trans({}, 'privacy') }}
                    <a href="{{ path('app_dpia_new') }}" class="alert-link">{{ 'dpia.index.create_first_dpia'|trans({}, 'privacy') }}</a>.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

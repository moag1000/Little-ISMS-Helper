{% extends 'base.html.twig' %}

{% block title %}DPIA Dashboard{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}

<div class="container-fluid mt-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'GDPR', icon: 'bi-shield-check' },
            { label: 'DPIA', url: path('app_dpia_index') },
            { label: 'Dashboard' }
        ]
    } %}

    {% include '_components/_page_header.html.twig' with {
        title: 'DPIA Dashboard',
        subtitle: 'Art. 35 GDPR Compliance Overview',
        icon: 'bi-speedometer2',
        actions: [
            { label: 'View All DPIAs', url: path('app_dpia_index'), variant: 'primary', icon: 'bi-list' },
            { label: 'New DPIA', url: path('app_dpia_new'), variant: 'success', icon: 'bi-plus-lg' }
        ]
    } %}

    {# Overall Compliance Score #}
    {% embed '_components/_card.html.twig' with {class: 'mb-4 text-center'} %}
        {% block card_body %}
            <div class="text-muted mb-2 fw-semibold">Overall DPIA Compliance Score</div>
            {% set score = compliance_score.overall_score %}
            <div class="display-1 mb-0
                {% if score >= 80 %}text-success
                {% elseif score >= 60 %}text-warning
                {% else %}text-danger{% endif %}">
                {{ score }}%
            </div>
            <p class="text-muted mt-2">
                {{ compliance_score.approved_dpias }} of {{ compliance_score.total_dpias }} DPIAs approved
                {% if compliance_score.due_for_review > 0 %}
                    Â· {{ compliance_score.due_for_review }} due for review
                {% endif %}
            </p>
            <div class="row mt-3">
                <div class="col-md-4">
                    <small class="text-muted">Completeness</small>
                    <div class="fs-4 fw-bold mb-0">{{ compliance_score.completeness_score }}%</div>
                </div>
                <div class="col-md-4">
                    <small class="text-muted">Approval Rate</small>
                    <div class="fs-4 fw-bold mb-0">{{ compliance_score.approval_score }}%</div>
                </div>
                <div class="col-md-4">
                    <small class="text-muted">Review Compliance</small>
                    <div class="fs-4 fw-bold mb-0">{{ compliance_score.review_compliance_score }}%</div>
                </div>
            </div>
        {% endblock %}
    {% endembed %}

    {# Key Metrics #}
    <div class="row mb-4">
        <div class="col-md-3">
            {{ cards.kpi_card('Total DPIAs', statistics.total, statistics.approved ~ ' approved', null, null, null) }}
        </div>
        <div class="col-md-3">
            {{ cards.kpi_card('In Review', statistics.in_review, 'Awaiting approval', null, 'info', null) }}
        </div>
        <div class="col-md-3">
            {{ cards.kpi_card('High Risk', statistics.high_risk, 'Requires attention', null, 'danger', null) }}
        </div>
        <div class="col-md-3">
            {{ cards.kpi_card('Completeness', statistics.completeness_rate ~ '%', null, statistics.completeness_rate, 'success', null) }}
        </div>
    </div>

    <div class="row">
        {# Action Items #}
        <div class="col-md-6">
            {% embed '_components/_card.html.twig' with {class: 'mb-4'} %}
                {% block card_header %}
                    <div class="card-header bg-warning text-dark"><h2 class="h5 mb-0"><i class="bi bi-exclamation-circle" aria-hidden="true"></i> Action Items</h2></div>
                {% endblock %}
                {% block card_body %}
                    {% if incomplete|length > 0 %}
                        <h3 class="h6">Incomplete DPIAs ({{ incomplete|length }})</h3>
                        <ul class="list-unstyled">
                            {% for dpia in incomplete|slice(0, 5) %}
                                <li class="mb-2">
                                    <a href="{{ path('app_dpia_edit', {id: dpia.id}) }}">{{ dpia.referenceNumber }} - {{ dpia.title }}</a>
                                    <span class="badge bg-warning">{{ dpia.completenessPercentage }}%</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {% if awaiting_dpo|length > 0 %}
                        <h3 class="h6 mt-3">Awaiting DPO Consultation ({{ awaiting_dpo|length }})</h3>
                        <ul class="list-unstyled">
                            {% for dpia in awaiting_dpo|slice(0, 5) %}
                                <li class="mb-2">
                                    <a href="{{ path('app_dpia_show', {id: dpia.id}) }}">{{ dpia.referenceNumber }} - {{ dpia.title }}</a>
                                    <span class="badge bg-info">{{ dpia.status|replace({'_': ' '})|upper }}</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {% if requires_supervisory|length > 0 %}
                        <h3 class="h6 mt-3">Requires Supervisory Consultation ({{ requires_supervisory|length }})</h3>
                        <ul class="list-unstyled">
                            {% for dpia in requires_supervisory|slice(0, 5) %}
                                <li class="mb-2">
                                    <a href="{{ path('app_dpia_show', {id: dpia.id}) }}">{{ dpia.referenceNumber }} - {{ dpia.title }}</a>
                                    <span class="badge bg-danger">Art. 36</span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {% if due_for_review|length > 0 %}
                        <h3 class="h6 mt-3">Due for Review ({{ due_for_review|length }})</h3>
                        <ul class="list-unstyled">
                            {% for dpia in due_for_review|slice(0, 5) %}
                                <li class="mb-2">
                                    <a href="{{ path('app_dpia_show', {id: dpia.id}) }}">{{ dpia.referenceNumber }} - {{ dpia.title }}</a>
                                    <small class="text-muted">{{ dpia.nextReviewDate|date('Y-m-d') }}</small>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {% if incomplete|length == 0 and awaiting_dpo|length == 0 and requires_supervisory|length == 0 and due_for_review|length == 0 %}
                        <p class="text-success mb-0"><i class="bi bi-check-circle" aria-hidden="true"></i> No action items - all compliant!</p>
                    {% endif %}
                {% endblock %}
            {% endembed %}
        </div>

        {# Statistics Charts #}
        <div class="col-md-6">
            {% embed '_components/_card.html.twig' with {class: 'mb-4'} %}
                {% block card_header %}
                    <div class="card-header"><h2 class="h5 mb-0"><i class="bi bi-bar-chart" aria-hidden="true"></i> Statistics</h2></div>
                {% endblock %}
                {% block card_body %}
                    <h3 class="h6">{{ 'privacy.chart.by_status'|trans({}, 'privacy') }}</h3>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <span class="badge bg-secondary">{{ statistics.draft }}</span>
                            {{ 'privacy.status_label.draft'|trans({}, 'privacy') }}
                        </li>
                        <li class="mb-2">
                            <span class="badge bg-info">{{ statistics.in_review }}</span>
                            {{ 'privacy.status_label.in_review'|trans({}, 'privacy') }}
                        </li>
                        <li class="mb-2">
                            <span class="badge bg-success">{{ statistics.approved }}</span>
                            {{ 'privacy.status_label.approved'|trans({}, 'privacy') }}
                        </li>
                    </ul>

                    <h3 class="h6 mt-4">{{ 'privacy.chart.by_risk_level'|trans({}, 'privacy') }}</h3>
                    {% if statistics.risk_distribution %}
                        <ul class="list-unstyled">
                            {% for level, count in statistics.risk_distribution %}
                                {% if count > 0 %}
                                    {% set risk_color = {
                                        'low': 'success',
                                        'medium': 'info',
                                        'high': 'warning',
                                        'critical': 'danger'
                                    }[level] %}
                                    <li class="mb-2">
                                        <span class="badge bg-{{ risk_color }}">{{ count }}</span>
                                        {{ level|upper }}
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    {% endif %}

                    <h3 class="h6 mt-4">Residual Risk Distribution</h3>
                    {% if statistics.residual_risk_distribution %}
                        <ul class="list-unstyled">
                            {% for level, count in statistics.residual_risk_distribution %}
                                {% if count > 0 %}
                                    {% set risk_color = {
                                        'low': 'success',
                                        'medium': 'info',
                                        'high': 'warning',
                                        'critical': 'danger'
                                    }[level] %}
                                    <li class="mb-2">
                                        <span class="badge bg-{{ risk_color }}">{{ count }}</span>
                                        {{ level|upper }}
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    {% endif %}

                    <h3 class="h6 mt-4">Compliance</h3>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <span class="badge bg-warning">{{ statistics.awaiting_dpo_consultation }}</span>
                            Awaiting DPO (Art. 35(4))
                        </li>
                        <li class="mb-2">
                            <span class="badge bg-danger">{{ statistics.requires_supervisory_consultation }}</span>
                            Requires Supervisory (Art. 36)
                        </li>
                    </ul>
                {% endblock %}
            {% endembed %}

            {# High Risk DPIAs #}
            {% if high_risk|length > 0 %}
                {% embed '_components/_card.html.twig' with {class: 'mb-4'} %}
                    {% block card_header %}
                        <div class="card-header bg-danger text-white"><h2 class="h5 mb-0"><i class="bi bi-exclamation-triangle-fill" aria-hidden="true"></i> High Risk DPIAs</h2></div>
                    {% endblock %}
                    {% block card_body %}
                        <ul class="list-unstyled">
                            {% for dpia in high_risk|slice(0, 5) %}
                                <li class="mb-2">
                                    <a href="{{ path('app_dpia_show', {id: dpia.id}) }}">
                                        {{ dpia.referenceNumber }} - {{ dpia.title }}
                                    </a>
                                    <span class="{{ badge_risk(dpia.riskLevel) }}">
                                        {{ dpia.riskLevel|upper }}
                                    </span>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endblock %}
                {% endembed %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

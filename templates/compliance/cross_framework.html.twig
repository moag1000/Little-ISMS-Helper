{% extends 'base.html.twig' %}

{% block title %}{{ 'compliance.cross_framework.title'|trans({}, 'compliance') }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <div>
            <h1>üîó {{ 'compliance.cross_framework.title'|trans({}, 'compliance') }}</h1>
            <p class="text-muted">{{ 'compliance.cross_framework.subtitle'|trans({}, 'compliance') }}</p>
        </div>
        <div class="button-group">
            <a href="{{ path('app_compliance_index') }}" class="btn btn-secondary">
                ‚Üê {{ 'compliance.cross_framework.back'|trans({}, 'compliance') }}
            </a>
        </div>
    </div>

    {# Coverage Matrix #}
    {% if coverage_matrix is not empty %}
        <div class="card">
            <div class="card-header">
                <h2>üìä {{ 'compliance.cross_framework.coverage_matrix'|trans({}, 'compliance') }}</h2>
                <p class="text-muted">{{ 'compliance.cross_framework.coverage_description'|trans({}, 'compliance') }}</p>
            </div>
            <div class="card-body">
                <div class="coverage-matrix">
                    {% embed '_components/_table.html.twig' with {
                        'class': 'matrix-table',
                        'noMargin': true
                    } %}
                        {% block table_head %}
                            <tr>
                                <th scope="col" class="matrix-corner-cell">{{ 'compliance.cross_framework.source_target_label'|trans({}, 'compliance') }}</th>
                                {% for framework in frameworks %}
                                    <th scope="col" class="matrix-header-cell">
                                        <div class="matrix-header-content">
                                            <strong>{{ framework.code }}</strong>
                                            <small class="framework-name">{{ framework.name }}</small>
                                        </div>
                                    </th>
                                {% endfor %}
                            </tr>
                        {% endblock %}
                        {% block table_body %}
                            {% for sourceFramework in frameworks %}
                                <tr>
                                    <td class="matrix-row-header">
                                        <div class="matrix-row-content">
                                            <strong>{{ sourceFramework.code }}</strong>
                                            <small class="framework-name">{{ sourceFramework.name }}</small>
                                        </div>
                                    </td>
                                    {% for targetFramework in frameworks %}
                                        <td class="matrix-cell">
                                            {% if sourceFramework.id == targetFramework.id %}
                                                <span class="matrix-value self">100%</span>
                                            {% elseif coverage_matrix[sourceFramework.code][targetFramework.code] is defined %}
                                                {% set coverage = coverage_matrix[sourceFramework.code][targetFramework.code] %}
                                                <span class="matrix-value coverage-{{ coverage.coverage_percentage >= 75 ? 'high' : (coverage.coverage_percentage >= 50 ? 'medium' : 'low') }}">
                                                    {{ coverage.coverage_percentage }}%
                                                </span>
                                                <small class="matrix-detail">
                                                    {{ coverage.covered_requirements }}/{{ coverage.total_target_requirements }}
                                                </small>
                                            {% else %}
                                                <span class="matrix-value coverage-none">‚Äî</span>
                                            {% endif %}
                                        </td>
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}
                </div>
                <div class="matrix-legend">
                    <div class="legend-item">
                        <span class="legend-color coverage-high"></span>
                        <span>{{ 'compliance.cross_framework.coverage_high'|trans({}, 'compliance') }}</span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color coverage-medium"></span>
                        <span>{{ 'compliance.cross_framework.coverage_medium'|trans({}, 'compliance') }}</span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color coverage-low"></span>
                        <span>{{ 'compliance.cross_framework.coverage_low'|trans({}, 'compliance') }}</span>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {# Detailed Mappings #}
    {% for mapping_group in cross_mappings %}
        <div class="card mt-lg">
            <div class="card-header">
                <h2>
                    {{ mapping_group.source.code }} ‚Üí {{ mapping_group.target.code }}
                </h3>
                <p class="text-muted">
                    {{ mapping_group.coverage.covered_requirements }} of {{ mapping_group.coverage.total_target_requirements }}
                    requirements covered ({{ mapping_group.coverage.coverage_percentage }}%)
                </p>
            </div>

            <div class="mapping-summary">
                <div class="summary-stat">
                    <div class="summary-icon bg-color-success">‚úì</div>
                    <div class="summary-content">
                        <div class="summary-value">{{ mapping_group.coverage.strong_mappings }}</div>
                        <div class="summary-label">{{ 'compliance.cross_framework.strong_mappings'|trans({}, 'compliance') }}</div>
                    </div>
                </div>
                <div class="summary-stat">
                    <div class="summary-icon bg-color-warning">‚ö†</div>
                    <div class="summary-content">
                        <div class="summary-value">{{ mapping_group.coverage.partial_mappings }}</div>
                        <div class="summary-label">{{ 'compliance.cross_framework.partial_mappings_label'|trans({}, 'compliance') }}</div>
                    </div>
                </div>
                <div class="summary-stat">
                    <div class="summary-icon bg-color-secondary">‚óê</div>
                    <div class="summary-content">
                        <div class="summary-value">{{ mapping_group.coverage.weak_mappings }}</div>
                        <div class="summary-label">{{ 'compliance.cross_framework.weak_mappings'|trans({}, 'compliance') }}</div>
                    </div>
                </div>
            </div>

            {% embed '_components/_table.html.twig' with {
                'noMargin': true,
                'responsive': true
            } %}
                {% block table_head %}
                    <tr>
                        <th scope="col">{{ 'compliance.cross_framework.table.source'|trans({}, 'compliance') }}</th>
                        <th scope="col">{{ 'compliance.cross_framework.table.target'|trans({}, 'compliance') }}</th>
                        <th scope="col">{{ 'compliance.cross_framework.table.type'|trans({}, 'compliance') }}</th>
                        <th scope="col">{{ 'compliance.cross_framework.table.strength'|trans({}, 'compliance') }}</th>
                        <th scope="col">{{ 'compliance.cross_framework.table.bidirectional'|trans({}, 'compliance') }}</th>
                    </tr>
                {% endblock %}
                {% block table_body %}
                    {% for mapping in mapping_group.mappings|slice(0, 20) %}
                        <tr>
                            <td>
                                <strong>{{ mapping.sourceRequirement.requirementId }}</strong><br>
                                <small>{{ mapping.sourceRequirement.title|length > 60 ? mapping.sourceRequirement.title|slice(0, 60) ~ '...' : mapping.sourceRequirement.title }}</small>
                            </td>
                            <td>
                                <strong>{{ mapping.targetRequirement.requirementId }}</strong><br>
                                <small>{{ mapping.targetRequirement.title|length > 60 ? mapping.targetRequirement.title|slice(0, 60) ~ '...' : mapping.targetRequirement.title }}</small>
                            </td>
                            <td>
                                <span class="badge badge-{{ mapping.mappingBadgeClass }}">
                                    {{ mapping.mappingType|upper }}
                                </span>
                            </td>
                            <td>
                                <div class="mapping-strength">
                                    <div class="strength-bar">
                                        <div class="strength-fill" style="width: {{ mapping.mappingPercentage }}%; background: {{ mapping.mappingPercentage >= 100 ? 'var(--color-success)' : (mapping.mappingPercentage >= 50 ? 'var(--color-warning)' : 'var(--color-secondary)') }};"></div>
                                    </div>
                                    <span class="strength-value">{{ mapping.mappingPercentage }}%</span>
                                </div>
                            </td>
                            <td class="text-center">
                                {% if mapping.bidirectional %}
                                    <span class="badge bg-success">{{ 'compliance.cross_framework.yes_bidirectional'|trans({}, 'compliance') }}</span>
                                {% else %}
                                    <span class="badge bg-secondary">‚Üí</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                {% endblock %}
            {% endembed %}

            {% if mapping_group.mappings|length > 20 %}
                <div class="card-footer text-center">
                    {{ 'compliance.cross_framework.showing_of'|trans({'%total%': mapping_group.mappings|length}, 'compliance') }}
                </div>
            {% endif %}
        </div>
    {% endfor %}

    {# Explanation #}
    <div class="card mt-lg">
        <div class="card-header">
            <h2>{{ 'compliance.cross_framework.understanding_title'|trans({}, 'compliance') }}</h2>
        </div>
        <div class="card-body">
            <div class="explanation-grid">
                <div class="explanation-item">
                    <h4>{{ 'compliance.cross_framework.what_title'|trans({}, 'compliance') }}</h5>
                    <p>{{ 'compliance.cross_framework.what_description'|trans({}, 'compliance') }}</p>
                </div>
                <div class="explanation-item">
                    <h4>{{ 'compliance.cross_framework.types_title'|trans({}, 'compliance') }}</h5>
                    <ul>
                        <li><strong>{{ 'compliance.cross_framework.types.exceeds'|trans({}, 'compliance') }}</strong></li>
                        <li><strong>{{ 'compliance.cross_framework.types.full'|trans({}, 'compliance') }}</strong></li>
                        <li><strong>{{ 'compliance.cross_framework.types.partial'|trans({}, 'compliance') }}</strong></li>
                        <li><strong>{{ 'compliance.cross_framework.types.weak'|trans({}, 'compliance') }}</strong></li>
                    </ul>
                </div>
                <div class="explanation-item">
                    <h2>{{ 'compliance.cross_framework.bidirectional_title'|trans({}, 'compliance') }}</h2>
                    <p>{{ 'compliance.cross_framework.bidirectional_description'|trans({}, 'compliance') }}</p>
                </div>
                <div class="explanation-item">
                    <h4>{{ 'compliance.cross_framework.strategic_title'|trans({}, 'compliance') }}</h5>
                    <p>{{ 'compliance.cross_framework.strategic_description'|trans({}, 'compliance') }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.coverage-matrix {
    overflow-x: auto;
}

.matrix-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 600px;
}

.matrix-table th,
.matrix-table td {
    padding: var(--spacing-md);
    border: 1px solid var(--color-border);
    text-align: center;
}

.matrix-table th {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    font-weight: 600;
}

.matrix-corner-cell {
    background: linear-gradient(135deg, #dee2e6 0%, #ced4da 100%) !important;
    font-weight: 700;
    font-size: 0.95rem;
}

.matrix-header-cell {
    min-width: 140px;
    vertical-align: middle;
}

.matrix-header-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.matrix-header-content strong {
    font-size: 1.1rem;
    color: var(--color-primary);
    font-weight: 700;
}

.matrix-header-content .framework-name {
    font-size: 0.7rem;
    color: var(--color-text-secondary);
    font-weight: 400;
    line-height: 1.2;
    max-width: 120px;
    margin: 0 auto;
    display: block;
}

.matrix-row-header {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    font-weight: 600;
    min-width: 140px;
    text-align: left;
}

.matrix-row-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.matrix-row-content strong {
    font-size: 1.05rem;
    color: var(--color-primary);
    font-weight: 700;
}

.matrix-row-content .framework-name {
    font-size: 0.7rem;
    color: var(--color-text-secondary);
    font-weight: 400;
    line-height: 1.2;
}

.matrix-cell {
    position: relative;
}

.matrix-value {
    display: block;
    font-weight: 600;
    font-size: 1.1rem;
}

.matrix-value.self {
    color: var(--color-secondary);
}

.matrix-value.coverage-high {
    color: var(--color-success);
}

.matrix-value.coverage-medium {
    color: var(--color-warning);
}

.matrix-value.coverage-low {
    color: var(--color-danger);
}

.matrix-value.coverage-none {
    color: var(--color-text-tertiary);
}

.matrix-detail {
    display: block;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
}

.matrix-legend {
    display: flex;
    justify-content: center;
    gap: var(--spacing-lg);
    margin-top: var(--spacing-md);
    padding: var(--spacing-md);
    background: var(--color-background);
    border-radius: var(--border-radius);
}

.legend-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
}

.legend-color {
    width: 20px;
    height: 20px;
    border-radius: 4px;
}

.legend-color.coverage-high {
    background: var(--color-success);
}

.legend-color.coverage-medium {
    background: var(--color-warning);
}

.legend-color.coverage-low {
    background: var(--color-danger);
}

.mapping-summary {
    display: flex;
    justify-content: space-around;
    padding: var(--spacing-lg);
    background: var(--color-background);
    border-bottom: 1px solid var(--color-border);
}

.summary-stat {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
}

.summary-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
}

.summary-value {
    font-size: 2rem;
    font-weight: bold;
    color: var(--color-primary);
}

.summary-label {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
}

.mapping-strength {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
}

.strength-bar {
    flex: 1;
    height: 8px;
    background: var(--color-background);
    border-radius: 4px;
    overflow: hidden;
}

.strength-fill {
    height: 100%;
    transition: width 0.3s;
}

.strength-value {
    font-weight: 600;
    min-width: 50px;
    text-align: right;
}

.explanation-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
}

.explanation-item h4 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
}

.explanation-item ul {
    margin: 0;
    padding-left: var(--spacing-lg);
}

.explanation-item li {
    margin-bottom: var(--spacing-xs);
}
</style>
{% endblock %}

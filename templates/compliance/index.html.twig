{% extends 'base.html.twig' %}

{% block title %}{{ 'compliance.page_title'|trans({}, 'compliance') }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <div>
            <h1>üéØ {{ 'compliance.page_title'|trans({}, 'compliance') }}</h1>
            <p class="text-muted">{{ 'compliance.page_subtitle'|trans({}, 'compliance') }}</p>
        </div>
        <div class="button-group">
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_compliance_index') }}" class="btn btn-primary">
                <span class="icon">‚öôÔ∏è</span> {{ 'compliance.manage_frameworks'|trans({}, 'compliance') }}
            </a>
            {% endif %}
            <a href="{{ path('app_mapping_quality_dashboard') }}" class="btn btn-success">
                <span class="icon">üîç</span> Mapping Quality
            </a>
            <a href="{{ path('app_compliance_cross_framework') }}" class="btn btn-secondary">
                <span class="icon">üîó</span> {{ 'compliance.button.cross_framework'|trans({}, 'compliance') }}
            </a>
            <a href="{{ path('app_compliance_transitive') }}" class="btn btn-secondary">
                <span class="icon">üìä</span> {{ 'compliance.button.transitive'|trans({}, 'compliance') }}
            </a>
            <a href="{{ path('app_compliance_compare') }}" class="btn btn-secondary">
                <span class="icon">‚öñÔ∏è</span> {{ 'compliance.button.compare_frameworks'|trans({}, 'compliance') }}
            </a>
        </div>
    </div>

    {# Quick Access Bar - One-Click Navigation #}
    {% if frameworks|length > 0 %}
    <div class="quick-access-bar">
        <div class="quick-access-header">
            <h2>{{ 'compliance.quick_access'|trans({}, 'compliance') }}</h2>
            <span class="quick-access-hint">{{ 'compliance.quick_access_hint'|trans({}, 'compliance') }}</span>
        </div>
        <div class="quick-access-items">
            {% for item in overview %}
                {% set framework = frameworks|filter(f => f.id == item.id)|first %}
                <a href="{{ path('app_compliance_framework', {id: item.id}) }}"
                   class="quick-access-item {% if framework and framework.mandatory %}mandatory{% endif %}"
                   title="{{ item.name }}">
                    <div class="quick-access-code">{{ item.code }}</div>
                    <div class="quick-access-progress">
                        <div class="progress-bar-mini">
                            <div class="progress-fill-mini progress-{% if item.compliance_percentage >= 75 %}success{% elseif item.compliance_percentage >= 50 %}warning{% else %}danger{% endif %}" style="width: {{ item.compliance_percentage }}%;"></div>
                        </div>
                        <span class="progress-text">{{ item.compliance_percentage }}%</span>
                    </div>
                    {% if framework and framework.mandatory %}
                        <span class="mandatory-indicator">!</span>
                    {% endif %}
                </a>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    {# Data Reuse Value Highlight #}
    <div class="alert alert-success alert-gradient-success">
        <h2 class="h3-m0-mb-sm">üíé {{ 'compliance.data_reuse.title'|trans({}, 'compliance') }}</h2>
        <p class="text-lg-m0">
            {{ 'compliance.data_reuse.description'|trans({'%hours%': total_time_savings, '%days%': total_days_savings}, 'compliance')|raw }}
        </p>
    </div>

    {# Framework Overview Cards - Simplified #}
    <div class="framework-grid">
        {% for item in overview %}
            {% set framework = frameworks|filter(f => f.id == item.id)|first %}
            <div class="framework-card">
                <div class="framework-header {% if framework and framework.mandatory %}bg-gradient-danger{% else %}bg-gradient-primary{% endif %}">
                    <div>
                        <h2>{{ item.code }}</h2>
                        <p class="framework-subtitle">{{ item.name|length > 40 ? item.name|slice(0, 40) ~ '...' : item.name }}</p>
                    </div>
                    {% if framework and framework.mandatory %}
                        <span class="badge bg-light">{{ 'compliance.mandatory'|trans({}, 'compliance') }}</span>
                    {% endif %}
                </div>

                <div class="framework-body">
                    {# Main Metric - Compliance #}
                    <div class="compliance-circle">
                        <svg viewBox="0 0 36 36" class="circular-chart">
                            <path class="circle-bg"
                                  d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                            />
                            <path class="circle"
                                  stroke="{{ item.compliance_percentage >= 75 ? '#28a745' : (item.compliance_percentage >= 50 ? '#ffc107' : '#dc3545') }}"
                                  stroke-dasharray="{{ item.compliance_percentage }}, 100"
                                  d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                            />
                            <text x="18" y="20.35" class="percentage">{{ item.compliance_percentage }}%</text>
                        </svg>
                        <div class="compliance-label">{{ 'compliance.label.compliance'|trans({}, 'compliance') }}</div>
                    </div>

                    {# Quick Stats - Minimal #}
                    <div class="quick-stats">
                        <div class="quick-stat">
                            <span class="quick-value">{{ item.fulfilled_requirements }}/{{ item.applicable_requirements }}</span>
                            <span class="quick-label">{{ 'compliance.label.fulfilled'|trans({}, 'compliance') }}</span>
                        </div>
                        <div class="quick-stat">
                            <span class="quick-value text-danger-color">{{ item.applicable_requirements - item.fulfilled_requirements }}</span>
                            <span class="quick-label">{{ 'compliance.label.gaps'|trans({}, 'compliance') }}</span>
                        </div>
                    </div>

                    {# Single Action Button #}
                    <a href="{{ path('app_compliance_framework', {id: item.id}) }}" class="btn btn-block btn-primary">
                        {{ 'compliance.button.open_dashboard'|trans({}, 'compliance') }} ‚Üí
                    </a>
                </div>
            </div>
        {% else %}
            <div class="col-span-all text-center p-xl">
                <p class="text-muted">{{ 'compliance.no_frameworks_loaded'|trans({}, 'compliance') }}</p>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin_compliance_index') }}" class="btn btn-primary btn-lg">
                    <span class="icon">‚öôÔ∏è</span> {{ 'compliance.add_frameworks'|trans({}, 'compliance') }}
                </a>
                {% else %}
                <p class="text-muted"><small>{{ 'compliance.contact_admin_to_add_frameworks'|trans({}, 'compliance') }}</small></p>
                {% endif %}
            </div>
        {% endfor %}
    </div>

    {# Cross-Framework Mapping Statistics #}
    {% if mapping_stats.total_mappings > 0 %}
        <div class="card mt-lg">
            <div class="card-header">
                <h2>üîó {{ 'compliance.cross_framework.title'|trans({}, 'compliance') }}</h2>
            </div>
            <div class="card-body">
                <div class="stats-grid">
                    <div class="stat-box">
                        <div class="stat-icon">üìä</div>
                        <div class="stat-number">{{ mapping_stats.total_mappings }}</div>
                        <div class="stat-text">{{ 'compliance.stats.total_mappings'|trans({}, 'compliance') }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-icon">‚úÖ</div>
                        <div class="stat-number">{{ mapping_stats.full_mappings + mapping_stats.exceeds_mappings }}</div>
                        <div class="stat-text">{{ 'compliance.stats.full_exceeds'|trans({}, 'compliance') }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-icon">‚ö†Ô∏è</div>
                        <div class="stat-number">{{ mapping_stats.partial_mappings }}</div>
                        <div class="stat-text">{{ 'compliance.stats.partial_mappings'|trans({}, 'compliance') }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-icon">üîÑ</div>
                        <div class="stat-number">{{ mapping_stats.bidirectional_mappings }}</div>
                        <div class="stat-text">{{ 'compliance.stats.bidirectional_mappings'|trans({}, 'compliance') }}</div>
                    </div>
                </div>
                <p class="text-center mt-md">
                    <a href="{{ path('app_compliance_cross_framework') }}" class="btn btn-primary">
                        {{ 'compliance.button.explore_mappings'|trans({}, 'compliance') }} ‚Üí
                    </a>
                </p>
            </div>
        </div>
    {% endif %}

    {# Benefits Explanation #}
    <div class="card mt-lg">
        <div class="card-header">
            <h2>{{ 'compliance.benefits.title'|trans({}, 'compliance') }}</h2>
        </div>
        <div class="card-body">
            <div class="benefits-grid">
                <div class="benefit-item">
                    <div class="benefit-icon">üîÑ</div>
                    <strong>{{ 'compliance.benefits.data_reuse.title'|trans({}, 'compliance') }}</strong>
                    <p>{{ 'compliance.benefits.data_reuse.description'|trans({}, 'compliance') }}</p>
                </div>
                <div class="benefit-item">
                    <div class="benefit-icon">‚è±Ô∏è</div>
                    <strong>{{ 'compliance.benefits.time_efficiency.title'|trans({}, 'compliance') }}</strong>
                    <p>{{ 'compliance.benefits.time_efficiency.description'|trans({}, 'compliance') }}</p>
                </div>
                <div class="benefit-item">
                    <div class="benefit-icon">üìä</div>
                    <strong>{{ 'compliance.benefits.transparency.title'|trans({}, 'compliance') }}</strong>
                    <p>{{ 'compliance.benefits.transparency.description'|trans({}, 'compliance') }}</p>
                </div>
                <div class="benefit-item">
                    <div class="benefit-icon">üéØ</div>
                    <strong>{{ 'compliance.benefits.strategic.title'|trans({}, 'compliance') }}</strong>
                    <p>{{ 'compliance.benefits.strategic.description'|trans({}, 'compliance') }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Quick Access Bar */
.quick-access-bar {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
}

.quick-access-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-md);
}

.quick-access-header h3 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--color-primary);
}

.quick-access-hint {
    font-size: 0.8rem;
    color: var(--color-text-secondary);
}

.quick-access-items {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
}

.quick-access-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--spacing-md);
    background: var(--color-background);
    border-radius: var(--border-radius);
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.2s;
    min-width: 100px;
    position: relative;
    border: 2px solid transparent;
}

.quick-access-item:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--color-primary);
    background: white;
}

.quick-access-item.mandatory {
    border-color: rgba(220, 53, 69, 0.3);
}

.quick-access-item.mandatory:hover {
    border-color: #dc3545;
}

.quick-access-code {
    font-weight: 700;
    font-size: 1rem;
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
}

.quick-access-progress {
    width: 100%;
    text-align: center;
}

.progress-bar-mini {
    height: 6px;
    background: var(--color-border);
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 4px;
}

.progress-fill-mini {
    height: 100%;
    transition: width 0.3s;
}

.progress-text {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-secondary);
}

.mandatory-indicator {
    position: absolute;
    top: -5px;
    right: -5px;
    background: #dc3545;
    color: white;
    font-size: 0.7rem;
    font-weight: 700;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 4px rgba(220, 53, 69, 0.4);
}

.framework-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
}

.framework-card {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
}

.framework-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
}

.framework-header {
    padding: var(--spacing-lg);
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.framework-header h3 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: bold;
}

.framework-subtitle {
    margin: var(--spacing-xs) 0 0 0;
    opacity: 0.9;
    font-size: 0.9rem;
}

.framework-body {
    padding: var(--spacing-xl);
    text-align: center;
}

/* Circular Progress Chart */
.compliance-circle {
    margin: var(--spacing-lg) auto;
    max-width: 150px;
}

.circular-chart {
    display: block;
    margin: 0 auto;
    max-height: 150px;
}

.circle-bg {
    fill: none;
    stroke: #eee;
    stroke-width: 3.8;
}

.circle {
    fill: none;
    stroke-width: 2.8;
    stroke-linecap: round;
    animation: progress 1s ease-out forwards;
}

@keyframes progress {
    0% { stroke-dasharray: 0 100; }
}

.circular-chart .percentage {
    fill: var(--color-primary);
    font-size: 0.5em;
    font-weight: bold;
    text-anchor: middle;
}

.compliance-label {
    text-align: center;
    margin-top: var(--spacing-sm);
    color: var(--color-text-secondary);
    font-size: 0.9rem;
}

/* Quick Stats */
.quick-stats {
    display: flex;
    justify-content: center;
    gap: var(--spacing-xl);
    margin: var(--spacing-lg) 0;
    padding: var(--spacing-md);
    background: var(--color-background);
    border-radius: var(--border-radius);
}

.quick-stat {
    text-align: center;
}

.quick-value {
    display: block;
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
}

.quick-label {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
}

.btn-block {
    display: block;
    width: 100%;
    text-align: center;
}

.framework-info {
    margin-bottom: var(--spacing-md);
}

.info-row {
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-xs) 0;
    border-bottom: 1px solid var(--color-border);
}

.info-row .label {
    font-weight: 600;
    color: var(--color-text-secondary);
}

.compliance-progress {
    margin: var(--spacing-md) 0;
}

.progress-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
}

.progress-value {
    color: var(--color-primary);
    font-size: 1.2rem;
}

.progress-bar {
    height: 24px;
    background: var(--color-background);
    border-radius: var(--border-radius);
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    transition: width 0.3s ease;
}

.framework-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
    margin: var(--spacing-md) 0;
}

.stat-item {
    text-align: center;
}

.stat-value {
    font-size: 2rem;
    font-weight: bold;
    color: var(--color-primary);
}

.stat-label {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
}

.framework-actions {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-md);
    flex-wrap: wrap;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-lg);
}

.stat-box {
    text-align: center;
    padding: var(--spacing-lg);
    background: var(--color-background);
    border-radius: var(--border-radius);
}

.stat-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
}

.stat-number {
    font-size: 2.5rem;
    font-weight: bold;
    color: var(--color-primary);
}

.stat-text {
    color: var(--color-text-secondary);
    margin-top: var(--spacing-xs);
}

.benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
}

.benefit-item {
    text-align: center;
    padding: var(--spacing-md);
}

.benefit-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
}

.benefit-item strong {
    display: block;
    margin-bottom: var(--spacing-sm);
    color: var(--color-primary);
    font-size: 1.1rem;
}

.benefit-item p {
    margin: 0;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
}
</style>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'compliance.page_title'|trans }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <div>
            <h1>üéØ {{ 'compliance.page_title'|trans }}</h1>
            <p class="text-muted">{{ 'compliance.page_subtitle'|trans }}</p>
        </div>
        <div class="button-group">
            <a href="{{ path('app_compliance_manage_frameworks') }}" class="btn btn-primary">
                <span class="icon">‚ûï</span> {{ 'compliance.manage_frameworks'|trans }}
            </a>
            <a href="{{ path('app_compliance_cross_framework') }}" class="btn btn-secondary">
                <span class="icon">üîó</span> {{ 'compliance.button.cross_framework'|trans }}
            </a>
            <a href="{{ path('app_compliance_transitive') }}" class="btn btn-secondary">
                <span class="icon">üìä</span> {{ 'compliance.button.transitive'|trans }}
            </a>
            <a href="{{ path('app_compliance_compare') }}" class="btn btn-secondary">
                <span class="icon">‚öñÔ∏è</span> {{ 'compliance.button.compare_frameworks'|trans }}
            </a>
        </div>
    </div>

    {# Data Reuse Value Highlight #}
    <div class="alert alert-success" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white; border: none; margin-bottom: var(--spacing-lg);">
        <h3 style="margin: 0 0 var(--spacing-sm) 0;">üíé {{ 'compliance.data_reuse.title'|trans }}</h3>
        <p style="font-size: 1.1rem; margin: 0;">
            {{ 'compliance.data_reuse.description'|trans({'%hours%': total_time_savings, '%days%': total_days_savings})|raw }}
        </p>
    </div>

    {# Framework Overview Cards - Simplified #}
    <div class="framework-grid">
        {% for item in overview %}
            {% set framework = frameworks|filter(f => f.id == item.id)|first %}
            <div class="framework-card">
                <div class="framework-header" style="background: {{ framework.mandatory ? 'var(--gradient-danger)' : 'var(--gradient-primary)' }};">
                    <div>
                        <h3>{{ item.code }}</h3>
                        <p class="framework-subtitle">{{ item.name|length > 40 ? item.name|slice(0, 40) ~ '...' : item.name }}</p>
                    </div>
                    {% if framework.mandatory %}
                        <span class="badge badge-light">{{ 'compliance.mandatory'|trans }}</span>
                    {% endif %}
                </div>

                <div class="framework-body">
                    {# Main Metric - Compliance #}
                    <div class="compliance-circle">
                        <svg viewBox="0 0 36 36" class="circular-chart">
                            <path class="circle-bg"
                                  d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                            />
                            <path class="circle"
                                  stroke="{{ item.compliance_percentage >= 75 ? '#28a745' : (item.compliance_percentage >= 50 ? '#ffc107' : '#dc3545') }}"
                                  stroke-dasharray="{{ item.compliance_percentage }}, 100"
                                  d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
                            />
                            <text x="18" y="20.35" class="percentage">{{ item.compliance_percentage }}%</text>
                        </svg>
                        <div class="compliance-label">{{ 'compliance.label.compliance'|trans }}</div>
                    </div>

                    {# Quick Stats - Minimal #}
                    <div class="quick-stats">
                        <div class="quick-stat">
                            <span class="quick-value">{{ item.fulfilled_requirements }}/{{ item.applicable_requirements }}</span>
                            <span class="quick-label">{{ 'compliance.label.fulfilled'|trans }}</span>
                        </div>
                        <div class="quick-stat">
                            <span class="quick-value" style="color: var(--color-danger);">{{ item.applicable_requirements - item.fulfilled_requirements }}</span>
                            <span class="quick-label">{{ 'compliance.label.gaps'|trans }}</span>
                        </div>
                    </div>

                    {# Single Action Button #}
                    <a href="{{ path('app_compliance_framework', {id: item.id}) }}" class="btn btn-block btn-primary">
                        {{ 'compliance.button.open_dashboard'|trans }} ‚Üí
                    </a>
                </div>
            </div>
        {% else %}
            <div class="col-span-all text-center" style="padding: var(--spacing-xl);">
                <p class="text-muted">{{ 'compliance.no_frameworks_loaded'|trans }}</p>
                <a href="{{ path('app_compliance_manage_frameworks') }}" class="btn btn-primary btn-lg">
                    <span class="icon">‚ûï</span> {{ 'compliance.add_frameworks'|trans }}
                </a>
            </div>
        {% endfor %}
    </div>

    {# Cross-Framework Mapping Statistics #}
    {% if mapping_stats.total_mappings > 0 %}
        <div class="card" style="margin-top: var(--spacing-lg);">
            <div class="card-header">
                <h2>üîó {{ 'compliance.cross_framework.title'|trans }}</h2>
            </div>
            <div class="card-body">
                <div class="stats-grid">
                    <div class="stat-box">
                        <div class="stat-icon">üìä</div>
                        <div class="stat-number">{{ mapping_stats.total_mappings }}</div>
                        <div class="stat-text">{{ 'compliance.stats.total_mappings'|trans }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-icon">‚úÖ</div>
                        <div class="stat-number">{{ mapping_stats.full_mappings + mapping_stats.exceeds_mappings }}</div>
                        <div class="stat-text">{{ 'compliance.stats.full_exceeds'|trans }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-icon">‚ö†Ô∏è</div>
                        <div class="stat-number">{{ mapping_stats.partial_mappings }}</div>
                        <div class="stat-text">{{ 'compliance.stats.partial_mappings'|trans }}</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-icon">üîÑ</div>
                        <div class="stat-number">{{ mapping_stats.bidirectional_mappings }}</div>
                        <div class="stat-text">{{ 'compliance.stats.bidirectional_mappings'|trans }}</div>
                    </div>
                </div>
                <p class="text-center" style="margin-top: var(--spacing-md);">
                    <a href="{{ path('app_compliance_cross_framework') }}" class="btn btn-primary">
                        {{ 'compliance.button.explore_mappings'|trans }} ‚Üí
                    </a>
                </p>
            </div>
        </div>
    {% endif %}

    {# Benefits Explanation #}
    <div class="card" style="margin-top: var(--spacing-lg);">
        <div class="card-header">
            <h2>{{ 'compliance.benefits.title'|trans }}</h2>
        </div>
        <div class="card-body">
            <div class="benefits-grid">
                <div class="benefit-item">
                    <div class="benefit-icon">üîÑ</div>
                    <strong>{{ 'compliance.benefits.data_reuse.title'|trans }}</strong>
                    <p>{{ 'compliance.benefits.data_reuse.description'|trans }}</p>
                </div>
                <div class="benefit-item">
                    <div class="benefit-icon">‚è±Ô∏è</div>
                    <strong>{{ 'compliance.benefits.time_efficiency.title'|trans }}</strong>
                    <p>{{ 'compliance.benefits.time_efficiency.description'|trans }}</p>
                </div>
                <div class="benefit-item">
                    <div class="benefit-icon">üìä</div>
                    <strong>{{ 'compliance.benefits.transparency.title'|trans }}</strong>
                    <p>{{ 'compliance.benefits.transparency.description'|trans }}</p>
                </div>
                <div class="benefit-item">
                    <div class="benefit-icon">üéØ</div>
                    <strong>{{ 'compliance.benefits.strategic.title'|trans }}</strong>
                    <p>{{ 'compliance.benefits.strategic.description'|trans }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.framework-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
}

.framework-card {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
}

.framework-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
}

.framework-header {
    padding: var(--spacing-lg);
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.framework-header h3 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: bold;
}

.framework-subtitle {
    margin: var(--spacing-xs) 0 0 0;
    opacity: 0.9;
    font-size: 0.9rem;
}

.framework-body {
    padding: var(--spacing-xl);
    text-align: center;
}

/* Circular Progress Chart */
.compliance-circle {
    margin: var(--spacing-lg) auto;
    max-width: 150px;
}

.circular-chart {
    display: block;
    margin: 0 auto;
    max-height: 150px;
}

.circle-bg {
    fill: none;
    stroke: #eee;
    stroke-width: 3.8;
}

.circle {
    fill: none;
    stroke-width: 2.8;
    stroke-linecap: round;
    animation: progress 1s ease-out forwards;
}

@keyframes progress {
    0% { stroke-dasharray: 0 100; }
}

.circular-chart .percentage {
    fill: var(--color-primary);
    font-size: 0.5em;
    font-weight: bold;
    text-anchor: middle;
}

.compliance-label {
    text-align: center;
    margin-top: var(--spacing-sm);
    color: var(--color-text-secondary);
    font-size: 0.9rem;
}

/* Quick Stats */
.quick-stats {
    display: flex;
    justify-content: center;
    gap: var(--spacing-xl);
    margin: var(--spacing-lg) 0;
    padding: var(--spacing-md);
    background: var(--color-background);
    border-radius: var(--border-radius);
}

.quick-stat {
    text-align: center;
}

.quick-value {
    display: block;
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
}

.quick-label {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
}

.btn-block {
    display: block;
    width: 100%;
    text-align: center;
}

.framework-info {
    margin-bottom: var(--spacing-md);
}

.info-row {
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-xs) 0;
    border-bottom: 1px solid var(--color-border);
}

.info-row .label {
    font-weight: 600;
    color: var(--color-text-secondary);
}

.compliance-progress {
    margin: var(--spacing-md) 0;
}

.progress-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--spacing-xs);
    font-weight: 600;
}

.progress-value {
    color: var(--color-primary);
    font-size: 1.2rem;
}

.progress-bar {
    height: 24px;
    background: var(--color-background);
    border-radius: var(--border-radius);
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    transition: width 0.3s ease;
}

.framework-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
    margin: var(--spacing-md) 0;
}

.stat-item {
    text-align: center;
}

.stat-value {
    font-size: 2rem;
    font-weight: bold;
    color: var(--color-primary);
}

.stat-label {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
}

.framework-actions {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-md);
    flex-wrap: wrap;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-lg);
}

.stat-box {
    text-align: center;
    padding: var(--spacing-lg);
    background: var(--color-background);
    border-radius: var(--border-radius);
}

.stat-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
}

.stat-number {
    font-size: 2.5rem;
    font-weight: bold;
    color: var(--color-primary);
}

.stat-text {
    color: var(--color-text-secondary);
    margin-top: var(--spacing-xs);
}

.benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
}

.benefit-item {
    text-align: center;
    padding: var(--spacing-md);
}

.benefit-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
}

.benefit-item strong {
    display: block;
    margin-bottom: var(--spacing-sm);
    color: var(--color-primary);
    font-size: 1.1rem;
}

.benefit-item p {
    margin: 0;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
}
</style>
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'compliance' %}
{% import '_macros/cards.html.twig' as cards %}

{% block title %}{{ 'compliance.title.gap_analysis'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="page-header">
    <div>
        <h1>{{ 'compliance.title.gap_analysis'|trans }}</h1>
        <p class="text-muted">{{ 'compliance.description.gap_analysis'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_compliance_export_gaps_pdf', {id: framework.id}) }}" class="btn btn-danger" data-turbo="false">
            üìÑ {{ 'compliance.action.export_pdf'|trans }}
        </a>
        <a href="{{ path('app_compliance_export_gaps_excel', {id: framework.id}) }}" class="btn btn-success" data-turbo="false">
            üìä {{ 'compliance.action.export_excel'|trans }}
        </a>
        <a href="{{ path('app_compliance_export_gaps', {id: framework.id}) }}" class="btn btn-secondary" data-turbo="false">
            üìÑ {{ 'compliance.action.export_csv'|trans }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('compliance.stats.total_requirements'|trans, totalRequirements, null, null, null, null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('compliance.stats.met_requirements'|trans, metRequirements, null, null, 'success', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('compliance.stats.gaps_identified'|trans, gaps|length, null, null, 'danger', 'border-danger') }}
    </div>
    <div class="col-auto">
        {% set score = totalRequirements > 0 ? (metRequirements / totalRequirements * 100)|round : 0 %}
        {{ cards.kpi_card('compliance.stats.compliance_score'|trans, score ~ '%', null, null, null, null) }}
    </div>
</div>

{# Framework Selection #}
<div class="card mb-4">
    <h2>{{ 'compliance.section.framework_selection'|trans }}</h2>

    <form method="get" class="mt-md">
        <div class="form-group">
            <label for="framework">{{ 'compliance.field.select_framework'|trans }}</label>
            <select name="framework" id="framework" class="form-select" onchange="this.form.submit();">
                <option value="">{{ 'compliance.option.all_frameworks'|trans }}</option>
                {% for framework in frameworks %}
                    <option value="{{ framework.id }}" {% if selectedFramework and selectedFramework.id == framework.id %}selected{% endif %}>
                        {{ framework.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
    </form>
</div>

{# Gap Analysis by Severity #}
<div class="module-grid mb-4">
    <div class="card border-left-danger">
        <div class="fs-2-mb-sm">üî¥</div>
        <h2>{{ 'compliance.severity.critical'|trans }}</h2>
        <div class="mt-2">
            <strong class="fs-15-danger">{{ gaps|filter(g => g.severity == 'critical')|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'compliance.description.critical_gaps'|trans }}
        </p>
    </div>

    <div class="card border-left-warning">
        <div class="fs-2-mb-sm">üü°</div>
        <h3>{{ 'compliance.severity.high'|trans }}</h3>
        <div class="mt-2">
            <strong class="fs-15-warning">{{ gaps|filter(g => g.severity == 'high')|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'compliance.description.high_gaps'|trans }}
        </p>
    </div>

    <div class="card border-left-info">
        <div class="fs-2-mb-sm">üîµ</div>
        <h3>{{ 'compliance.severity.medium'|trans }}</h3>
        <div class="mt-2">
            <strong class="fs-15-info">{{ gaps|filter(g => g.severity == 'medium')|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'compliance.description.medium_gaps'|trans }}
        </p>
    </div>

    <div class="card border-left-secondary">
        <div class="fs-2-mb-sm">‚ö™</div>
        <h3>{{ 'compliance.severity.low'|trans }}</h3>
        <div class="mt-2">
            <strong class="fs-15">{{ gaps|filter(g => g.severity == 'low')|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'compliance.description.low_gaps'|trans }}
        </p>
    </div>
</div>

{# Gaps Table #}
{% embed '_components/_table.html.twig' with {
    'class': 'table-container',
    'noMargin': true,
    'responsive': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'compliance.field.requirement'|trans }}</th>
            <th scope="col">{{ 'compliance.field.framework'|trans }}</th>
            <th scope="col">{{ 'compliance.field.severity'|trans }}</th>
            <th scope="col">{{ 'compliance.field.gap_description'|trans }}</th>
            <th scope="col">{{ 'compliance.field.remediation'|trans }}</th>
            <th scope="col">{{ 'compliance.field.due_date'|trans }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for gap in gaps %}
        <tr>
            <td>
                <strong>{{ gap.requirement.identifier }}</strong>
                <br><small class="text-muted">{{ gap.requirement.name }}</small>
            </td>
            <td>
                <span class="badge bg-info">{{ gap.framework.name }}</span>
            </td>
            <td>
                {% set severityColors = {
                    'critical': 'danger',
                    'high': 'warning',
                    'medium': 'info',
                    'low': 'secondary'
                } %}
                <span class="badge badge-{{ severityColors[gap.severity] ?? 'secondary' }}">
                    {{ ('compliance.severity.' ~ gap.severity)|trans }}
                </span>
            </td>
            <td>
                <small>{{ gap.description|default('-') }}</small>
            </td>
            <td>
                <small>{{ gap.remediationPlan|default('-') }}</small>
            </td>
            <td>
                {% if gap.targetDate %}
                    {{ gap.targetDate|date('d.m.Y') }}
                    {% if gap.targetDate < date() %}
                        <span class="badge bg-danger ml-xs">
                            {{ 'compliance.badge.overdue'|trans }}
                        </span>
                    {% endif %}
                {% else %}
                    <span class="text-muted">-</span>
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('app_compliance_gap_show', {id: gap.id}) }}" class="btn btn-sm">
                    üëÅ {{ 'common.view'|trans }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" style="text-align: center; padding: var(--spacing-xl); color: var(--color-text-muted);">
                <div class="fs-2-mb-sm">‚úÖ</div>
                <p><strong>{{ 'compliance.message.no_gaps'|trans }}</strong></p>
                <p class="mt-xs">{{ 'compliance.message.no_gaps_desc'|trans }}</p>
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
{% endblock %}

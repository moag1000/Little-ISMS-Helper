                                ‚Üì
                            </div>
                            <div style="font-weight: 600; font-size: 0.95rem; color: var(--color-text-secondary); margin-top: 0.25rem;">
                                {{ relationship.targetFramework.code }}
                            </div>
                        </div>

                        <div class="text-center">
                            <div style="font-size: 2rem; font-weight: bold; color: var(--color-success);">
                                {{ relationship.coveragePercentage }}%
                            </div>

<script>
function switchTab(tabName) {
    // Hide all tabs
    document.querySelectorAll('.tab-content').forEach(tab => {
        tab.style.display = 'none';
    });

    // Remove active class from all buttons
    document.querySelectorAll('.tab-button').forEach(btn => {
        btn.classList.remove('active');
    });

    // Show selected tab
    document.getElementById('tab-' + tabName).style.display = 'block';

    // Add active class to clicked button
    event.target.classList.add('active');
}

// Create Cross-Framework Mappings
function initializeMappingButton() {
    console.log('Initializing mapping button...');
    const createBtn = document.getElementById('createMappingsBtn');

    if (!createBtn) {
        console.log('createMappingsBtn not found - mappings already exist or element missing');
        return;
    }

    // Check if already initialized to prevent duplicate listeners
    if (createBtn.dataset.initialized === 'true') {
        console.log('Button already initialized, skipping');
        return;
    }

    console.log('createMappingsBtn found, attaching event listener');
    createBtn.dataset.initialized = 'true';

    const btnIcon = document.getElementById('btnIcon');
    const btnText = document.getElementById('btnText');
    const csrfToken = '{{ csrf_token('create_mappings') }}';

    createBtn.addEventListener('click', async function(e) {
        e.preventDefault();
        console.log('Button clicked!');

        // Confirm action
        if (!confirm('M√∂chten Sie jetzt Cross-Framework Mappings erstellen?\n\nDies kann einige Sekunden dauern und √ºberschreibt bestehende Mappings.')) {
            console.log('User cancelled');
            return;
        }

        console.log('Starting mapping creation...');

        // Disable button and show loading
        createBtn.disabled = true;
        btnIcon.textContent = '‚è≥';
        btnText.textContent = 'Erstelle Mappings...';
        createBtn.style.opacity = '0.7';
        createBtn.style.cursor = 'not-allowed';

        try {
            const url = '{{ path('app_compliance_create_mappings') }}';
            console.log('Fetching:', url);

            const response = await fetch(url, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': csrfToken,
                    'Content-Type': 'application/json'
                }
            });

            console.log('Response status:', response.status);

            // Try to parse JSON even on error responses to get server error message
            const data = await response.json();
            console.log('Response data:', data);

            if (data.success) {
                console.log('Success! Created', data.mappings_created, 'mappings');
                // Show success message
                btnIcon.textContent = '‚úÖ';
                btnText.textContent = data.message;
                createBtn.style.background = '#10b981';
                createBtn.style.color = 'white';

                // Reload page after 2 seconds
                setTimeout(() => {
                    console.log('Reloading page...');
                    window.location.reload();
                }, 2000);
            } else {
                console.error('Server returned error:', data.message);
                // Show error message
                btnIcon.textContent = '‚ùå';
                btnText.textContent = data.message || 'Fehler beim Erstellen der Mappings';
                createBtn.style.background = '#ef4444';
                createBtn.style.color = 'white';

                // Re-enable button after 5 seconds
                setTimeout(() => {
                    btnIcon.textContent = 'üîó';
                    btnText.textContent = 'Mappings jetzt erstellen';
                    createBtn.style.background = 'white';
                    createBtn.style.color = '#667eea';
                    createBtn.style.opacity = '1';
                    createBtn.style.cursor = 'pointer';
                    createBtn.disabled = false;
                }, 5000);
            }
        } catch (error) {
            console.error('JavaScript error creating mappings:', error);
            btnIcon.textContent = '‚ùå';
            btnText.textContent = 'Fehler: ' + error.message;
            createBtn.style.background = '#ef4444';
            createBtn.style.color = 'white';

            // Re-enable button after 5 seconds
            setTimeout(() => {
                btnIcon.textContent = 'üîó';
                btnText.textContent = 'Mappings jetzt erstellen';
                createBtn.style.background = 'white';
                createBtn.style.color = '#667eea';
                createBtn.style.opacity = '1';
                createBtn.style.cursor = 'pointer';
                createBtn.disabled = false;
            }, 5000);
        }
    });
}

// Cleanup before Turbo caches the page to allow re-initialization on back navigation
document.addEventListener('turbo:before-cache', function() {
    const createBtn = document.getElementById('createMappingsBtn');
    if (createBtn) {
        delete createBtn.dataset.initialized;
    }
});

// Initialize on both DOMContentLoaded (first page load) and turbo:load (Turbo navigation)
document.addEventListener('DOMContentLoaded', initializeMappingButton);
document.addEventListener('turbo:load', initializeMappingButton);

// Handler for the "Fehlende Mappings erg√§nzen" button in the header
function initializeHeaderMappingButton() {
    console.log('[Header Button] Initializing...');
    const createAllMappingsBtn = document.getElementById('createAllMappingsBtn');

    if (!createAllMappingsBtn) {
        console.log('[Header Button] Button not found in DOM');
        return;
    }

    // Prevent multiple initializations
    if (createAllMappingsBtn.dataset.headerInitialized === 'true') {
        console.log('[Header Button] Already initialized, skipping');
        return;
    }

    console.log('[Header Button] Found button, attaching event listener');
    createAllMappingsBtn.dataset.headerInitialized = 'true';

    createAllMappingsBtn.addEventListener('click', async function() {
        console.log('[Header Button] Button clicked!');
        const originalText = this.textContent;

        // Confirm action
        if (!confirm('M√∂chten Sie fehlende Cross-Framework Mappings erg√§nzen?\n\nDies erstellt nur neue Mappings und √ºberschreibt keine bestehenden.')) {
            console.log('[Header Button] User cancelled');
            return;
        }

        console.log('[Header Button] Starting mapping creation...');

        // Disable button and show loading
        createAllMappingsBtn.disabled = true;
        createAllMappingsBtn.textContent = '‚è≥ Erstelle Mappings...';
        createAllMappingsBtn.style.opacity = '0.7';

        try {
            const csrfToken = '{{ csrf_token('create_mappings') }}';
            const url = '{{ path('app_compliance_create_mappings') }}';

            console.log('[Header Button] Fetching:', url);

            const response = await fetch(url, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': csrfToken,
                    'Content-Type': 'application/json'
                }
            });

            console.log('[Header Button] Response status:', response.status);

            const data = await response.json();
            console.log('[Header Button] Response data:', data);

            if (data.success) {
                // Show success message
                createAllMappingsBtn.textContent = '‚úÖ ' + data.message;
                createAllMappingsBtn.style.background = '#10b981';
                createAllMappingsBtn.style.color = 'white';

                // Reload page after 2 seconds
                setTimeout(() => {
                    console.log('[Header Button] Reloading page...');
                    window.location.reload();
                }, 2000);
            } else {
                // Show error message
                console.error('[Header Button] Server returned error:', data.message);
                alert('Fehler: ' + (data.message || 'Unbekannter Fehler'));
                createAllMappingsBtn.disabled = false;
                createAllMappingsBtn.textContent = originalText;
                createAllMappingsBtn.style.opacity = '1';
            }
        } catch (error) {
            console.error('[Header Button] JavaScript error:', error);
            alert('Fehler beim Erstellen der Mappings: ' + error.message);
            createAllMappingsBtn.disabled = false;
            createAllMappingsBtn.textContent = originalText;
            createAllMappingsBtn.style.opacity = '1';
        }
    });
}


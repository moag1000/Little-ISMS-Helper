{% extends 'base.html.twig' %}

{% block title %}{{ 'compliance.title.transitive'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="d-flex justify-between align-center mb-4">
    <div>
        <h1>üîó {{ 'compliance.title.transitive'|trans }}</h1>
        <p style="color: var(--color-text-secondary); margin-top: var(--spacing-sm); font-size: 1.1rem;">
            {{ 'compliance.description.transitive'|trans }}
        </p>
    </div>
    <div>
        <a href="{{ path('app_compliance_export_transitive') }}" class="btn btn-success">
            üìä {{ 'compliance.action.export_transitive'|trans }}
        </a>
    </div>
</div>

{# Statistics Cards - Prominently displayed #}
<div class="kpi-grid" style="margin-bottom: 2rem;">
    <div class="kpi-card">
        <div class="icon" style="font-size: 2.5rem;">üîó</div>
        <div class="label" style="font-size: 0.9rem; color: var(--color-text-secondary);">{{ 'compliance.stats.total_relationships'|trans }}</div>
        <div>
            <span class="value" style="font-size: 2.5rem; font-weight: bold; color: var(--color-primary);">{{ total_relationships }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon" style="font-size: 2.5rem;">‚úÖ</div>
        <div class="label" style="font-size: 0.9rem; color: var(--color-text-secondary);">{{ 'compliance.stats.transitive_compliance'|trans }}</div>
        <div>
            <span class="value" style="font-size: 2.5rem; font-weight: bold; color: var(--color-success);">{{ transitive_compliance }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon" style="font-size: 2.5rem;">üìà</div>
        <div class="label" style="font-size: 0.9rem; color: var(--color-text-secondary);">{{ 'compliance.stats.leverage_rate'|trans }}</div>
        <div>
            {% set leverageRate = total_relationships > 0 ? (transitive_compliance / total_relationships * 100)|round : 0 %}
            <span class="value" style="font-size: 2.5rem; font-weight: bold; color: var(--color-info);">{{ leverageRate }}</span>
            <span class="unit" style="font-size: 1.2rem; color: var(--color-text-secondary);">%</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon" style="font-size: 2.5rem;">üéØ</div>
        <div class="label" style="font-size: 0.9rem; color: var(--color-text-secondary);">{{ 'compliance.stats.frameworks_leveraged'|trans }}</div>
        <div>
            <span class="value" style="font-size: 2.5rem; font-weight: bold; color: var(--color-warning);">{{ frameworks_leveraged }}</span>
        </div>
    </div>
</div>

{# Tabbed Interface for better organization #}
<div class="card" style="margin-bottom: 2rem;">
    <div class="tabs">
        <button class="tab-button active" onclick="switchTab('overview')">
            üìä √úbersicht
        </button>
        <button class="tab-button" onclick="switchTab('matrix')">
            üî¢ Mapping-Matrix
        </button>
        <button class="tab-button" onclick="switchTab('details')">
            üìã Detaillierte Mappings
        </button>
        <button class="tab-button" onclick="switchTab('info')">
            üí° Erkl√§rung
        </button>
    </div>

    {# Tab 1: Overview #}
    <div id="tab-overview" class="tab-content active">
        <h2 style="margin-top: 0; color: var(--color-primary);">{{ 'compliance.section.framework_relationships'|trans }}</h2>

        {% if framework_relationships is empty %}
            <div class="info-box" style="background: var(--color-bg-alt); text-align: center; padding: 3rem;">
                <p style="font-size: 1.2rem; color: var(--color-text-muted);">
                    üîç {{ 'compliance.message.no_relationships'|trans }}
                </p>
            </div>
        {% else %}
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 1.5rem;">
                {% for relationship in framework_relationships %}
                <div class="card" style="padding: 1.5rem; border: 2px solid var(--color-border); transition: all 0.2s;">
                    <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                        <div style="flex: 1;">
                            <div style="font-weight: 600; font-size: 0.95rem; color: var(--color-text-secondary); margin-bottom: 0.25rem;">
                                {{ relationship.sourceFramework.code }}
                            </div>
                            <div style="font-size: 2rem; color: var(--color-primary); text-align: center; margin: 0.5rem 0;">
                                ‚Üì
                            </div>
                            <div style="font-weight: 600; font-size: 0.95rem; color: var(--color-text-secondary); margin-top: 0.25rem;">
                                {{ relationship.targetFramework.code }}
                            </div>
                        </div>

                        <div style="text-align: center;">
                            <div style="font-size: 2rem; font-weight: bold; color: var(--color-success);">
                                {{ relationship.coveragePercentage }}%
                            </div>
                            <div style="font-size: 0.75rem; color: var(--color-text-secondary);">
                                Coverage
                            </div>
                        </div>
                    </div>

                    <div style="background: var(--color-bg-alt); padding: 0.75rem; border-radius: 4px; margin-bottom: 1rem;">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <span style="font-size: 0.85rem; color: var(--color-text-secondary);">
                                {{ 'compliance.field.mapped'|trans }}:
                            </span>
                            <span style="font-weight: 600; font-size: 1.1rem; color: var(--color-primary);">
                                {{ relationship.mappedRequirements }}
                            </span>
                        </div>
                    </div>

                    <div class="progress" style="height: 10px; border-radius: 5px; background: var(--color-bg-alt);">
                        <div class="progress-bar" style="width: {{ relationship.coveragePercentage }}%; height: 10px; border-radius: 5px; background: linear-gradient(to right, var(--color-success), var(--color-info)); transition: width 0.3s;"></div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    {# Tab 2: Matrix #}
    <div id="tab-matrix" class="tab-content" style="display: none;">
        <h2 style="margin-top: 0; color: var(--color-primary);">{{ 'compliance.section.compliance_matrix'|trans }}</h2>
        <p style="color: var(--color-text-secondary); margin-bottom: 1.5rem;">
            {{ 'compliance.description.matrix'|trans }}
        </p>

        <div style="overflow-x: auto; margin-bottom: 1.5rem;">
            <table style="width: 100%; border-collapse: collapse; min-width: 600px;">
                <thead>
                    <tr style="background: var(--color-bg-alt);">
                        <th style="padding: 1rem; border: 1px solid var(--color-border); text-align: left; font-weight: 600; position: sticky; left: 0; background: var(--color-bg-alt); z-index: 10;">
                            Von ‚Üí Nach
                        </th>
                        {% for framework in frameworks %}
                            <th style="padding: 1rem; border: 1px solid var(--color-border); text-align: center; font-weight: 600; font-size: 0.9rem;">
                                {{ framework.code }}
                            </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for sourceFramework in frameworks %}
                        <tr>
                            <td style="padding: 1rem; border: 1px solid var(--color-border); font-weight: 600; position: sticky; left: 0; background: white; z-index: 5;">
                                {{ sourceFramework.code }}
                            </td>
                            {% for targetFramework in frameworks %}
                                <td style="padding: 1rem; border: 1px solid var(--color-border); text-align: center;">
                                    {% if sourceFramework.id == targetFramework.id %}
                                        <span style="color: var(--color-text-muted); font-weight: 600;">100%</span>
                                    {% else %}
                                        {% set mapping = mapping_matrix[sourceFramework.id][targetFramework.id] ?? null %}
                                        {% if mapping and mapping.coverage > 0 %}
                                            {% set percentage = mapping.coverage|round %}
                                            <span class="badge" style="padding: 0.4rem 0.8rem; font-size: 0.9rem; font-weight: 600; background: {% if percentage >= 75 %}var(--color-success){% elseif percentage >= 50 %}var(--color-warning){% else %}var(--color-danger){% endif %}; color: white;">
                                                {{ percentage }}%
                                            </span>
                                        {% else %}
                                            <span class="badge badge-secondary" style="padding: 0.4rem 0.8rem; font-size: 0.9rem;">0%</span>
                                        {% endif %}
                                    {% endif %}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div style="display: flex; justify-content: center; gap: 2rem; padding: 1rem; background: var(--color-bg-alt); border-radius: 8px;">
            <div style="display: flex; align-items: center; gap: 0.5rem;">
                <span style="width: 30px; height: 20px; background: var(--color-success); border-radius: 4px;"></span>
                <span style="font-size: 0.9rem;">‚â• 75%</span>
            </div>
            <div style="display: flex; align-items: center; gap: 0.5rem;">
                <span style="width: 30px; height: 20px; background: var(--color-warning); border-radius: 4px;"></span>
                <span style="font-size: 0.9rem;">50-74%</span>
            </div>
            <div style="display: flex; align-items: center; gap: 0.5rem;">
                <span style="width: 30px; height: 20px; background: var(--color-danger); border-radius: 4px;"></span>
                <span style="font-size: 0.9rem;">< 50%</span>
            </div>
        </div>
    </div>

    {# Tab 3: Detailed Mappings #}
    <div id="tab-details" class="tab-content" style="display: none;">
        <h2 style="margin-top: 0; color: var(--color-primary);">{{ 'compliance.section.cross_framework_mappings'|trans }}</h2>

        {% if cross_mappings is empty %}
            <div class="info-box" style="background: var(--color-bg-alt); text-align: center; padding: 3rem;">
                <p style="font-size: 1.2rem; color: var(--color-text-muted);">
                    {{ 'compliance.message.no_mappings'|trans }}
                </p>
            </div>
        {% else %}
            {% for mapping_group in cross_mappings %}
                <details class="card" style="margin-bottom: 1.5rem; border: 2px solid var(--color-border);" open>
                    <summary style="padding: 1.5rem; cursor: pointer; font-size: 1.2rem; font-weight: 600; color: var(--color-primary); list-style: none;">
                        <span style="margin-right: 0.5rem;">‚ñ∂</span>
                        {{ mapping_group.source.code }} ‚Üí {{ mapping_group.target.code }}
                        <span style="float: right; font-size: 1rem; color: var(--color-text-secondary);">
                            {{ mapping_group.coverage.covered_requirements }} mappings ({{ mapping_group.coverage.coverage_percentage|round }}%)
                        </span>
                    </summary>

                    <div style="padding: 0 1.5rem 1.5rem 1.5rem; border-top: 1px solid var(--color-border);">
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin: 1.5rem 0;">
                            <div style="text-align: center; padding: 1rem; background: var(--color-success-light); border-radius: 8px;">
                                <div style="font-size: 2rem; font-weight: bold; color: var(--color-success);">
                                    {{ mapping_group.coverage.strong_mappings ?? 0 }}
                                </div>
                                <div style="font-size: 0.85rem; color: var(--color-text-secondary); margin-top: 0.25rem;">
                                    {{ 'compliance.mapping.type.full'|trans }}
                                </div>
                            </div>
                            <div style="text-align: center; padding: 1rem; background: var(--color-warning-light); border-radius: 8px;">
                                <div style="font-size: 2rem; font-weight: bold; color: var(--color-warning);">
                                    {{ mapping_group.coverage.partial_mappings ?? 0 }}
                                </div>
                                <div style="font-size: 0.85rem; color: var(--color-text-secondary); margin-top: 0.25rem;">
                                    {{ 'compliance.mapping.type.partial'|trans }}
                                </div>
                            </div>
                            <div style="text-align: center; padding: 1rem; background: var(--color-bg-alt); border-radius: 8px;">
                                <div style="font-size: 2rem; font-weight: bold; color: var(--color-secondary);">
                                    {{ mapping_group.coverage.weak_mappings ?? 0 }}
                                </div>
                                <div style="font-size: 0.85rem; color: var(--color-text-secondary); margin-top: 0.25rem;">
                                    {{ 'compliance.mapping.type.weak'|trans }}
                                </div>
                            </div>
                        </div>

                        {% if mapping_group.mappings|length > 5 %}
                            <p style="text-align: center; color: var(--color-text-secondary); font-style: italic; margin: 1rem 0;">
                                Zeige erste 5 von {{ mapping_group.mappings|length }} Mappings
                            </p>
                        {% endif %}

                        <div style="overflow-x: auto;">
                            <table style="width: 100%; border-collapse: collapse;">
                                <thead style="background: var(--color-bg-alt);">
                                    <tr>
                                        <th style="padding: 0.75rem; text-align: left; font-size: 0.9rem;">{{ 'compliance.field.source_requirement'|trans }}</th>
                                        <th style="padding: 0.75rem; text-align: left; font-size: 0.9rem;">{{ 'compliance.field.target_requirements'|trans }}</th>
                                        <th style="padding: 0.75rem; text-align: center; font-size: 0.9rem;">{{ 'compliance.field.mapping_strength'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for mapping in mapping_group.mappings|slice(0, 5) %}
                                        <tr style="border-bottom: 1px solid var(--color-border);">
                                            <td style="padding: 0.75rem;">
                                                <strong style="color: var(--color-primary);">{{ mapping.sourceRequirement.requirementId }}</strong>
                                                <div style="font-size: 0.85rem; color: var(--color-text-secondary); margin-top: 0.25rem;">
                                                    {{ mapping.sourceRequirement.title|length > 60 ? mapping.sourceRequirement.title|slice(0, 60) ~ '...' : mapping.sourceRequirement.title }}
                                                </div>
                                            </td>
                                            <td style="padding: 0.75rem;">
                                                <strong style="color: var(--color-primary);">{{ mapping.targetRequirement.requirementId }}</strong>
                                                <div style="font-size: 0.85rem; color: var(--color-text-secondary); margin-top: 0.25rem;">
                                                    {{ mapping.targetRequirement.title|length > 60 ? mapping.targetRequirement.title|slice(0, 60) ~ '...' : mapping.targetRequirement.title }}
                                                </div>
                                            </td>
                                            <td style="padding: 0.75rem; text-align: center;">
                                                <div style="display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                                                    <div style="flex: 1; max-width: 100px; height: 8px; background: var(--color-bg-alt); border-radius: 4px; overflow: hidden;">
                                                        <div style="height: 100%; width: {{ mapping.mappingPercentage }}%; background: {% if mapping.mappingPercentage >= 100 %}var(--color-success){% elseif mapping.mappingPercentage >= 50 %}var(--color-warning){% else %}var(--color-secondary){% endif %};"></div>
                                                    </div>
                                                    <span style="font-weight: 600; min-width: 45px;">{{ mapping.mappingPercentage }}%</span>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </details>
            {% endfor %}
        {% endif %}
    </div>

    {# Tab 4: Explanation #}
    <div id="tab-info" class="tab-content" style="display: none;">
        <h2 style="margin-top: 0; color: var(--color-primary);">üí° {{ 'compliance.section.mapping_explanation'|trans }}</h2>

        <div style="display: grid; gap: 1.5rem;">
            <div class="card" style="padding: 1.5rem; border-left: 4px solid var(--color-info);">
                <h3 style="color: var(--color-info); margin-top: 0;">{{ 'compliance.explanation.what_are_mappings_title'|trans }}</h3>
                <p style="line-height: 1.6; color: var(--color-text);">
                    {{ 'compliance.explanation.what_are_mappings'|trans }}
                </p>
            </div>

            <div class="card" style="padding: 1.5rem; border-left: 4px solid var(--color-success);">
                <h3 style="color: var(--color-success); margin-top: 0;">{{ 'compliance.explanation.mapping_types_title'|trans }}</h3>
                <ul style="line-height: 1.8; color: var(--color-text); padding-left: 1.5rem;">
                    <li><strong>{{ 'compliance.explanation.mapping_types_exceeds'|trans }}</strong></li>
                    <li><strong>{{ 'compliance.explanation.mapping_types_full'|trans }}</strong></li>
                    <li><strong>{{ 'compliance.explanation.mapping_types_partial'|trans }}</strong></li>
                    <li><strong>{{ 'compliance.explanation.mapping_types_weak'|trans }}</strong></li>
                </ul>
            </div>

            <div class="card" style="padding: 1.5rem; border-left: 4px solid var(--color-warning);">
                <h3 style="color: var(--color-warning); margin-top: 0;">{{ 'compliance.explanation.strategic_value_title'|trans }}</h3>
                <p style="line-height: 1.6; color: var(--color-text);">
                    {{ 'compliance.explanation.strategic_value'|trans }}
                </p>
            </div>
        </div>
    </div>
</div>

<style>
.tabs {
    display: flex;
    border-bottom: 2px solid var(--color-border);
    margin: -1rem -1rem 0 -1rem;
    padding: 0 1rem;
    background: var(--color-bg-alt);
    overflow-x: auto;
}

.tab-button {
    padding: 1rem 1.5rem;
    border: none;
    background: transparent;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    border-bottom: 3px solid transparent;
    transition: all 0.2s;
    white-space: nowrap;
}

.tab-button:hover {
    color: var(--color-primary);
    background: var(--color-bg);
}

.tab-button.active {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
    font-weight: 600;
}

.tab-content {
    padding: 2rem 1rem;
}

details summary {
    transition: color 0.2s;
}

details[open] summary {
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 1rem;
}

details[open] summary span:first-child {
    transform: rotate(90deg);
    display: inline-block;
}
</style>

<script>
function switchTab(tabName) {
    // Hide all tabs
    document.querySelectorAll('.tab-content').forEach(tab => {
        tab.style.display = 'none';
    });

    // Remove active class from all buttons
    document.querySelectorAll('.tab-button').forEach(btn => {
        btn.classList.remove('active');
    });

    // Show selected tab
    document.getElementById('tab-' + tabName).style.display = 'block';

    // Add active class to clicked button
    event.target.classList.add('active');
}
</script>
{% endblock %}

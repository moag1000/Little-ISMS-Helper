{% extends 'base.html.twig' %}

{% block title %}{{ 'compliance.mapping.edit.title'|trans({}, 'compliance') }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.compliance'|trans({}, 'nav'), url: path('app_compliance_index'), icon: 'bi-shield-check' },
            { label: 'compliance.mapping.list.title'|trans({}, 'compliance'), url: path('app_compliance_mapping_index') },
            { label: mapping.sourceRequirement.requirementId ~ ' â†’ ' ~ mapping.targetRequirement.requirementId, url: path('app_compliance_mapping_show', {id: mapping.id}) },
            { label: 'common.edit'|trans({}, 'messages') }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'compliance.mapping.edit.title'|trans({}, 'compliance'),
        icon: 'bi-pencil',
        actions: [
            { label: 'common.view'|trans({}, 'messages'), url: path('app_compliance_mapping_show', {id: mapping.id}), variant: 'outline-primary', icon: 'bi-eye' },
            { label: 'common.back'|trans({}, 'messages'), url: path('app_compliance_mapping_index'), variant: 'secondary', icon: 'bi-arrow-left' }
        ]
    } %}

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}

                    {% include '_components/_auto_form.html.twig' with {
                        'form': form,
                        'sections': {
                            'requirements': {
                                'label': 'compliance.mapping.section.requirements'|trans({}, 'compliance'),
                                'fields': ['sourceRequirement', 'targetRequirement']
                            },
                            'strength': {
                                'label': 'compliance.mapping.section.strength'|trans({}, 'compliance'),
                                'fields': ['mappingPercentage', 'mappingType', 'confidence']
                            },
                            'rationale': {
                                'label': 'compliance.mapping.section.rationale'|trans({}, 'compliance'),
                                'fields': ['mappingRationale', 'bidirectional']
                            }
                        },
                        'col_widths': {
                            'sourceRequirement': 6,
                            'targetRequirement': 6,
                            'mappingPercentage': 4,
                            'mappingType': 4,
                            'confidence': 4,
                            'mappingRationale': 12,
                            'bidirectional': 6
                        }
                    } %}

                    {# Form Actions #}
                    <div class="form-actions d-flex gap-2 justify-content-between">
                        <a href="{{ path('app_compliance_mapping_show', {id: mapping.id}) }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save'|trans({}, 'messages') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header"><h5 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'compliance.mapping.info.current'|trans({}, 'compliance') }}</h5>
                </div>
                <div class="card-body">
                    <p class="small">
                        <strong>{{ 'compliance.mapping.field.source'|trans({}, 'compliance') }}:</strong><br>
                        {{ mapping.sourceRequirement.framework.code }} - {{ mapping.sourceRequirement.requirementId }}
                    </p>
                    <p class="small">
                        <strong>{{ 'compliance.mapping.field.target'|trans({}, 'compliance') }}:</strong><br>
                        {{ mapping.targetRequirement.framework.code }} - {{ mapping.targetRequirement.requirementId }}
                    </p>
                    <p class="small">
                        <strong>{{ 'compliance.mapping.field.type'|trans({}, 'compliance') }}:</strong>
                        <span class="badge bg-{{ mapping.mappingBadgeClass }}">{{ mapping.mappingType }}</span>
                    </p>
                    {% if mapping.isAnalyzed %}
                        <p class="small">
                            <strong>{{ 'compliance.mapping.field.calculated'|trans({}, 'compliance') }}:</strong> {{ mapping.calculatedPercentage }}%<br>
                            <strong>{{ 'compliance.mapping.field.analysis_confidence'|trans({}, 'compliance') }}:</strong> {{ mapping.analysisConfidence }}%
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'compliance' %}

{% block title %}Mapping: {{ mapping.sourceRequirement.requirementId }} → {{ mapping.targetRequirement.requirementId }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.compliance'|trans({}, 'nav'), url: path('app_compliance_index') },
            { label: 'compliance.mapping.title'|trans({}, 'compliance'), url: path('app_compliance_mapping_index') },
            { label: mapping.sourceRequirement.requirementId ~ ' → ' ~ mapping.targetRequirement.requirementId }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-diagram-2" aria-hidden="true"></i> Compliance Mapping</h1>
        <div>
            <a href="{{ path('app_compliance_mapping_edit', {id: mapping.id}) }}" class="btn btn-secondary">
                <i class="bi bi-pencil" aria-hidden="true"></i> Edit
            </a>
            <a href="{{ path('app_compliance_mapping_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left" aria-hidden="true"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            {# Mapping Overview #}
            {% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
                {% block card_header %}
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">Mapping Overview</h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <div class="row">
                        <div class="col-md-5">
                            <p class="fw-bold text-muted">Source Requirement</p>
                            {% embed '_components/_card.html.twig' %}
                                {% block card_body %}
                                    {% include '_components/_badge.html.twig' with { variant: 'secondary', content: mapping.sourceRequirement.framework.code, class: 'mb-2' } %}
                                    <p class="fw-bold fs-5">{{ mapping.sourceRequirement.requirementId }}</p>
                                    <p>{{ mapping.sourceRequirement.title }}</p>
                                    <small class="text-muted">{{ mapping.sourceRequirement.description|u.truncate(150, '...') }}</small>
                                {% endblock %}
                            {% endembed %}
                        </div>
                        <div class="col-md-2 text-center d-flex align-items-center justify-content-center">
                            <div>
                                <i class="bi bi-arrow-right fs-1 text-primary" aria-hidden="true"></i>
                                <br>
                                {% include '_components/_badge.html.twig' with { variant: mapping.mappingBadgeClass, content: mapping.finalPercentage ~ '%', class: 'mt-2' } %}
                            </div>
                        </div>
                        <div class="col-md-5">
                            <p class="fw-bold text-muted">Target Requirement</p>
                            {% embed '_components/_card.html.twig' %}
                                {% block card_body %}
                                    {% include '_components/_badge.html.twig' with { variant: 'secondary', content: mapping.targetRequirement.framework.code, class: 'mb-2' } %}
                                    <p class="fw-bold fs-5">{{ mapping.targetRequirement.requirementId }}</p>
                                    <p>{{ mapping.targetRequirement.title }}</p>
                                    <small class="text-muted">{{ mapping.targetRequirement.description|u.truncate(150, '...') }}</small>
                                {% endblock %}
                            {% endembed %}
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-4">
                            <strong>Mapping Type:</strong>
                            {% include '_components/_badge.html.twig' with { variant: mapping.mappingBadgeClass, content: mapping.mappingType } %}
                        </div>
                        <div class="col-md-4">
                            <strong>Confidence:</strong>
                            {% include '_components/_badge.html.twig' with { variant: 'secondary', content: mapping.confidence } %}
                        </div>
                        <div class="col-md-4">
                            <strong>Bidirectional:</strong>
                            {% if mapping.bidirectional %}
                                {% include '_components/_badge.html.twig' with { variant: 'success', content: 'Yes' } %}
                            {% else %}
                                {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'No' } %}
                            {% endif %}
                        </div>
                    </div>

                    {% if mapping.mappingRationale %}
                        <hr>
                        <p class="fw-bold">Mapping Rationale</p>
                        <p class="text-muted">{{ mapping.mappingRationale }}</p>
                    {% endif %}
                {% endblock %}
            {% endembed %}

            {# Analysis Results #}
            {% if mapping.isAnalyzed %}
                {% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
                    {% block card_header %}
                        <div class="card-header">
                            <h2 class="mb-0"><i class="bi bi-graph-up" aria-hidden="true"></i> Quality Analysis</h2>
                        </div>
                    {% endblock %}
                    {% block card_body %}
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Calculated %:</strong><br>
                                <span class="h4">{{ mapping.calculatedPercentage }}%</span>
                            </div>
                            <div class="col-md-3">
                                <strong>Confidence:</strong><br>
                                <span class="h4">{{ mapping.analysisConfidence }}%</span>
                            </div>
                            <div class="col-md-3">
                                <strong>Text Similarity:</strong><br>
                                <span class="h4">{{ (mapping.textualSimilarity * 100)|number_format(1) }}%</span>
                            </div>
                            <div class="col-md-3">
                                <strong>Quality Score:</strong><br>
                                <span class="h4">{{ mapping.qualityScore|default('-') }}</span>
                            </div>
                        </div>
                    {% endblock %}
                {% endembed %}
            {% endif %}

            {# Gap Items #}
            {% if mapping.gapItems|length > 0 %}
                {% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
                    {% block card_header %}
                        <div class="card-header">
                            <h3 class="mb-0"><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> Gap Items ({{ mapping.gapItems|length }})</h3>
                        </div>
                    {% endblock %}
                    {% block card_body %}
                        <ul class="list-group">
                            {% for gap in mapping.gapItems %}
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <strong>{{ gap.gapType }}</strong>
                                        {% include '_components/_badge.html.twig' with { variant: gap.status == 'resolved' ? 'success' : 'warning', content: gap.status } %}
                                    </div>
                                    <p class="mb-1 small">{{ gap.description }}</p>
                                    <small class="text-muted">Impact: {{ gap.percentageImpact }}%</small>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endblock %}
                {% endembed %}
            {% endif %}
        </div>

        <div class="col-md-4">
            {# Transitive Compliance #}
            {% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
                {% block card_header %}
                    <div class="card-header">
                        <h3 class="mb-0">Transitive Fulfillment</h3>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <p class="text-muted small">
                        If the source requirement is fulfilled, it contributes this much to the target:
                    </p>
                    <div class="text-center">
                        <h2 class="text-primary">{{ transitive_fulfillment }}%</h2>
                    </div>
                {% endblock %}
            {% endembed %}

            {# Review Status #}
            {% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
                {% block card_header %}
                    <div class="card-header">
                        <h3 class="mb-0">Review Status</h3>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <p>
                        <strong>Status:</strong>
                        {% include '_components/_badge.html.twig' with { variant: mapping.reviewStatusBadgeClass, content: mapping.reviewStatus } %}
                    </p>
                    {% if mapping.reviewedBy %}
                        <p><strong>Reviewed By:</strong> {{ mapping.reviewedBy }}</p>
                        <p><strong>Review Date:</strong> {{ mapping.reviewedAt|date('Y-m-d H:i') }}</p>
                    {% endif %}
                    {% if mapping.reviewNotes %}
                        <hr>
                        <h4>Review Notes</h4>
                        <p class="text-muted small">{{ mapping.reviewNotes }}</p>
                    {% endif %}

                    {# Analyze Button #}
                    <form method="post" action="{{ path('app_compliance_mapping_analyze', {id: mapping.id}) }}" class="mt-3">
                        <input type="hidden" name="_token" value="{{ csrf_token('analyze' ~ mapping.id) }}">
                        <button type="submit" class="btn btn-primary btn-sm w-100">
                            <i class="bi bi-graph-up-arrow" aria-hidden="true"></i> Run Analysis
                        </button>
                    </form>
                {% endblock %}
            {% endembed %}

            {# Metadata #}
            {% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
                {% block card_header %}
                    <div class="card-header"><h5 class="mb-0">Metadata</h5></div>
                {% endblock %}
                {% block card_body %}
                    <p><small><strong>Verified By:</strong> {{ mapping.verifiedBy|default('-') }}</small></p>
                    <p><small><strong>Verification Date:</strong>
                        {% if mapping.verificationDate %}
                            {{ mapping.verificationDate|date('Y-m-d') }}
                        {% else %}
                            -
                        {% endif %}
                    </small></p>
                    <p><small><strong>Algorithm:</strong> {{ mapping.analysisAlgorithmVersion|default('-') }}</small></p>
                    <p><small><strong>Created:</strong> {{ mapping.createdAt|date('Y-m-d H:i') }}</small></p>
                    {% if mapping.updatedAt %}
                        <p><small><strong>Updated:</strong> {{ mapping.updatedAt|date('Y-m-d H:i') }}</small></p>
                    {% endif %}
                {% endblock %}
            {% endembed %}

            {# Delete #}
            {% embed '_components/_card.html.twig' with { 'class': 'border-danger' } %}
                {% block card_header %}
                    <div class="card-header bg-danger text-white"><h5 class="mb-0">Danger Zone</h5></div>
                {% endblock %}
                {% block card_body %}
                    <form method="post" action="{{ path('app_compliance_mapping_delete', {id: mapping.id}) }}"
                          data-controller="ui-actions"
                          data-action="submit->ui-actions#confirm"
                          data-ui-actions-message-param="{{ 'compliance.mapping.confirm.delete'|trans({}, 'compliance') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mapping.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm w-100">
                            <i class="bi bi-trash" aria-hidden="true"></i> {{ 'compliance.action.delete_mapping'|trans({}, 'compliance') }}
                        </button>
                    </form>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
</div>
{% endblock %}

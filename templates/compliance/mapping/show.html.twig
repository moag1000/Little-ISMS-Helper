{% extends 'base.html.twig' %}

{% block title %}Mapping: {{ mapping.sourceRequirement.requirementId }} â†’ {{ mapping.targetRequirement.requirementId }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-diagram-2" aria-hidden="true"></i> Compliance Mapping</h1>
        <div>
            <a href="{{ path('app_compliance_mapping_edit', {id: mapping.id}) }}" class="btn btn-secondary">
                <i class="bi bi-pencil" aria-hidden="true"></i> Edit
            </a>
            <a href="{{ path('app_compliance_mapping_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left" aria-hidden="true"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            {# Mapping Overview #}
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Mapping Overview</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5">
                            <h6 class="text-muted">Source Requirement</h5>
                            <div class="card">
                                <div class="card-body">
                                    <span class="badge bg-secondary mb-2">{{ mapping.sourceRequirement.framework.code }}</span>
                                    <h5>{{ mapping.sourceRequirement.requirementId }}</h5>
                                    <p>{{ mapping.sourceRequirement.title }}</p>
                                    <small class="text-muted">{{ mapping.sourceRequirement.description|u.truncate(150, '...') }}</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 text-center d-flex align-items-center justify-content-center">
                            <div>
                                <i class="bi bi-arrow-right fs-1 text-primary" aria-hidden="true"></i>
                                <br>
                                <span class="badge bg-{{ mapping.mappingBadgeClass }} mt-2">
                                    {{ mapping.finalPercentage }}%
                                </span>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <h6 class="text-muted">Target Requirement</h5>
                            <div class="card">
                                <div class="card-body">
                                    <span class="badge bg-secondary mb-2">{{ mapping.targetRequirement.framework.code }}</span>
                                    <h5>{{ mapping.targetRequirement.requirementId }}</h5>
                                    <p>{{ mapping.targetRequirement.title }}</p>
                                    <small class="text-muted">{{ mapping.targetRequirement.description|u.truncate(150, '...') }}</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-4">
                            <strong>Mapping Type:</strong>
                            <span class="badge bg-{{ mapping.mappingBadgeClass }}">{{ mapping.mappingType }}</span>
                        </div>
                        <div class="col-md-4">
                            <strong>Confidence:</strong>
                            <span class="badge bg-secondary">{{ mapping.confidence }}</span>
                        </div>
                        <div class="col-md-4">
                            <strong>Bidirectional:</strong>
                            {% if mapping.bidirectional %}
                                <span class="badge bg-success">Yes</span>
                            {% else %}
                                <span class="badge bg-secondary">No</span>
                            {% endif %}
                        </div>
                    </div>

                    {% if mapping.mappingRationale %}
                        <hr>
                        <h2>Mapping Rationale</h2>
                        <p class="text-muted">{{ mapping.mappingRationale }}</p>
                    {% endif %}
                </div>
            </div>

            {# Analysis Results #}
            {% if mapping.isAnalyzed %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="mb-0"><i class="bi bi-graph-up" aria-hidden="true"></i> Quality Analysis</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Calculated %:</strong><br>
                                <span class="h4">{{ mapping.calculatedPercentage }}%</span>
                            </div>
                            <div class="col-md-3">
                                <strong>Confidence:</strong><br>
                                <span class="h4">{{ mapping.analysisConfidence }}%</span>
                            </div>
                            <div class="col-md-3">
                                <strong>Text Similarity:</strong><br>
                                <span class="h4">{{ (mapping.textualSimilarity * 100)|number_format(1) }}%</span>
                            </div>
                            <div class="col-md-3">
                                <strong>Quality Score:</strong><br>
                                <span class="h4">{{ mapping.qualityScore|default('-') }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            {# Gap Items #}
            {% if mapping.gapItems|length > 0 %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="mb-0"><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> Gap Items ({{ mapping.gapItems|length }})</h3>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            {% for gap in mapping.gapItems %}
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <strong>{{ gap.gapType }}</strong>
                                        <span class="badge bg-{{ gap.status == 'resolved' ? 'success' : 'warning' }}">
                                            {{ gap.status }}
                                        </span>
                                    </div>
                                    <p class="mb-1 small">{{ gap.description }}</p>
                                    <small class="text-muted">Impact: {{ gap.percentageImpact }}%</small>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-md-4">
            {# Transitive Compliance #}
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="mb-0">Transitive Fulfillment</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted small">
                        If the source requirement is fulfilled, it contributes this much to the target:
                    </p>
                    <div class="text-center">
                        <h2 class="text-primary">{{ transitive_fulfillment }}%</h2>
                    </div>
                </div>
            </div>

            {# Review Status #}
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="mb-0">Review Status</h3>
                </div>
                <div class="card-body">
                    <p>
                        <strong>Status:</strong>
                        <span class="badge bg-{{ mapping.reviewStatusBadgeClass }}">{{ mapping.reviewStatus }}</span>
                    </p>
                    {% if mapping.reviewedBy %}
                        <p><strong>Reviewed By:</strong> {{ mapping.reviewedBy }}</p>
                        <p><strong>Review Date:</strong> {{ mapping.reviewedAt|date('Y-m-d H:i') }}</p>
                    {% endif %}
                    {% if mapping.reviewNotes %}
                        <hr>
                        <h4>Review Notes</h5>
                        <p class="text-muted small">{{ mapping.reviewNotes }}</p>
                    {% endif %}

                    {# Analyze Button #}
                    <form method="post" action="{{ path('app_compliance_mapping_analyze', {id: mapping.id}) }}" class="mt-3">
                        <input type="hidden" name="_token" value="{{ csrf_token('analyze' ~ mapping.id) }}">
                        <button type="submit" class="btn btn-primary btn-sm w-100">
                            <i class="bi bi-graph-up-arrow" aria-hidden="true"></i> Run Analysis
                        </button>
                    </form>
                </div>
            </div>

            {# Metadata #}
            <div class="card mb-4">
                <div class="card-header"><h5 class="mb-0">Metadata</h5>
                </div>
                <div class="card-body">
                    <p><small><strong>Verified By:</strong> {{ mapping.verifiedBy|default('-') }}</small></p>
                    <p><small><strong>Verification Date:</strong>
                        {% if mapping.verificationDate %}
                            {{ mapping.verificationDate|date('Y-m-d') }}
                        {% else %}
                            -
                        {% endif %}
                    </small></p>
                    <p><small><strong>Algorithm:</strong> {{ mapping.analysisAlgorithmVersion|default('-') }}</small></p>
                    <p><small><strong>Created:</strong> {{ mapping.createdAt|date('Y-m-d H:i') }}</small></p>
                    {% if mapping.updatedAt %}
                        <p><small><strong>Updated:</strong> {{ mapping.updatedAt|date('Y-m-d H:i') }}</small></p>
                    {% endif %}
                </div>
            </div>

            {# Delete #}
            <div class="card border-danger">
                <div class="card-header bg-danger text-white"><h5 class="mb-0">Danger Zone</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('app_compliance_mapping_delete', {id: mapping.id}) }}"
                          onsubmit="return confirm('Are you sure you want to delete this mapping?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mapping.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm w-100">
                            <i class="bi bi-trash" aria-hidden="true"></i> Delete Mapping
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'compliance.mapping.new.title'|trans({}, 'compliance') }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.compliance'|trans({}, 'nav'), url: path('app_compliance_index'), icon: 'bi-shield-check' },
            { label: 'compliance.mapping.list.title'|trans({}, 'compliance'), url: path('app_compliance_mapping_index') },
            { label: 'compliance.mapping.new.title'|trans({}, 'compliance') }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'compliance.mapping.new.title'|trans({}, 'compliance'),
        icon: 'bi-plus-circle',
        actions: [
            { label: 'common.back'|trans({}, 'messages'), url: path('app_compliance_mapping_index'), variant: 'secondary', icon: 'bi-arrow-left' }
        ]
    } %}

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}

                    {% include '_components/_auto_form.html.twig' with {
                        'form': form,
                        'sections': {
                            'requirements': {
                                'label': 'compliance.mapping.section.requirements'|trans({}, 'compliance'),
                                'fields': ['sourceRequirement', 'targetRequirement']
                            },
                            'strength': {
                                'label': 'compliance.mapping.section.strength'|trans({}, 'compliance'),
                                'fields': ['mappingPercentage', 'mappingType', 'confidence']
                            },
                            'rationale': {
                                'label': 'compliance.mapping.section.rationale'|trans({}, 'compliance'),
                                'fields': ['mappingRationale', 'bidirectional']
                            }
                        },
                        'col_widths': {
                            'sourceRequirement': 6,
                            'targetRequirement': 6,
                            'mappingPercentage': 4,
                            'mappingType': 4,
                            'confidence': 4,
                            'mappingRationale': 12,
                            'bidirectional': 6
                        }
                    } %}

                    {# Form Actions #}
                    <div class="form-actions d-flex gap-2 justify-content-between">
                        <a href="{{ path('app_compliance_mapping_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'compliance.mapping.action.create'|trans({}, 'compliance') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header"><h2 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'compliance.mapping.help.types.title'|trans({}, 'compliance') }}</h2>
                </div>
                <div class="card-body">
                    <ul class="small">
                        <li><strong>{{ 'compliance.mapping.help.types.weak'|trans({}, 'compliance') }}:</strong> {{ 'compliance.mapping.help.types.weak_desc'|trans({}, 'compliance') }}</li>
                        <li><strong>{{ 'compliance.mapping.help.types.partial'|trans({}, 'compliance') }}:</strong> {{ 'compliance.mapping.help.types.partial_desc'|trans({}, 'compliance') }}</li>
                        <li><strong>{{ 'compliance.mapping.help.types.full'|trans({}, 'compliance') }}:</strong> {{ 'compliance.mapping.help.types.full_desc'|trans({}, 'compliance') }}</li>
                        <li><strong>{{ 'compliance.mapping.help.types.exceeds'|trans({}, 'compliance') }}:</strong> {{ 'compliance.mapping.help.types.exceeds_desc'|trans({}, 'compliance') }}</li>
                    </ul>

                    <h3 class="mt-3">{{ 'compliance.mapping.help.confidence.title'|trans({}, 'compliance') }}</h3>
                    <ul class="small">
                        <li><strong>{{ 'compliance.mapping.help.confidence.low'|trans({}, 'compliance') }}:</strong> {{ 'compliance.mapping.help.confidence.low_desc'|trans({}, 'compliance') }}</li>
                        <li><strong>{{ 'compliance.mapping.help.confidence.medium'|trans({}, 'compliance') }}:</strong> {{ 'compliance.mapping.help.confidence.medium_desc'|trans({}, 'compliance') }}</li>
                        <li><strong>{{ 'compliance.mapping.help.confidence.high'|trans({}, 'compliance') }}:</strong> {{ 'compliance.mapping.help.confidence.high_desc'|trans({}, 'compliance') }}</li>
                    </ul>

                    <h3 class="mt-3">{{ 'compliance.mapping.help.bidirectional.title'|trans({}, 'compliance') }}</h3>
                    <p class="small">
                        {{ 'compliance.mapping.help.bidirectional.desc'|trans({}, 'compliance') }}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

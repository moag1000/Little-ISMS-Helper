{% extends 'base.html.twig' %}

{% block title %}New Compliance Mapping{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-plus-circle"></i> New Compliance Mapping</h1>
        <a href="{{ path('app_compliance_mapping_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.sourceRequirement) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.targetRequirement) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.mappingPercentage) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.mappingType) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.confidence) }}
                        </div>
                    </div>

                    {{ form_row(form.mappingRationale) }}

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.bidirectional) }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_compliance_mapping_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create Mapping
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Mapping Types</h6>
                </div>
                <div class="card-body">
                    <ul class="small">
                        <li><strong>Weak (0-49%):</strong> Minimal overlap</li>
                        <li><strong>Partial (50-99%):</strong> Partial fulfillment</li>
                        <li><strong>Full (100%):</strong> Complete fulfillment</li>
                        <li><strong>Exceeds (101-150%):</strong> Overachieves target</li>
                    </ul>

                    <h6 class="mt-3">Confidence Levels</h6>
                    <ul class="small">
                        <li><strong>Low:</strong> Uncertain mapping</li>
                        <li><strong>Medium:</strong> Reasonable confidence</li>
                        <li><strong>High:</strong> Very confident mapping</li>
                    </ul>

                    <h6 class="mt-3">Bidirectional</h6>
                    <p class="small">
                        If checked, this mapping works in both directions (source â†” target).
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

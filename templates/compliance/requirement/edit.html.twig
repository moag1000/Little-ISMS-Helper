{% extends 'base.html.twig' %}

{% block title %}{{ 'compliance.requirement.edit.title'|trans({}, 'compliance') }} {{ requirement.requirementId }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.compliance'|trans({}, 'nav'), url: path('app_compliance_index'), icon: 'bi-shield-check' },
            { label: 'compliance.requirement.list.title'|trans({}, 'compliance'), url: path('app_compliance_requirement_index') },
            { label: requirement.requirementId, url: path('app_compliance_requirement_show', {id: requirement.id}) },
            { label: 'common.edit'|trans({}, 'messages') }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: ('compliance.requirement.edit.title'|trans({}, 'compliance')) ~ ' ' ~ requirement.requirementId,
        icon: 'bi-pencil',
        actions: [
            { label: 'common.view'|trans({}, 'messages'), url: path('app_compliance_requirement_show', {id: requirement.id}), variant: 'outline-primary', icon: 'bi-eye' },
            { label: 'common.back'|trans({}, 'messages'), url: path('app_compliance_requirement_index'), variant: 'secondary', icon: 'bi-arrow-left' }
        ]
    } %}

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}

                    {% include '_components/_auto_form.html.twig' with {
                        'form': form,
                        'sections': {
                            'identification': {
                                'label': 'compliance.requirement.section.identification'|trans({}, 'compliance'),
                                'fields': ['framework', 'requirementId']
                            },
                            'basic': {
                                'label': 'compliance.requirement.section.basic'|trans({}, 'compliance'),
                                'fields': ['title', 'description', 'category', 'priority']
                            },
                            'structure': {
                                'label': 'compliance.requirement.section.structure'|trans({}, 'compliance'),
                                'fields': ['requirementType', 'parentRequirement']
                            }
                        },
                        'col_widths': {
                            'framework': 6,
                            'requirementId': 6,
                            'title': 12,
                            'description': 12,
                            'category': 6,
                            'priority': 6,
                            'requirementType': 6,
                            'parentRequirement': 6
                        }
                    } %}

                    {# Note: Applicability and Fulfillment are now tenant-specific #}
                    {# Use the "Quick Update" form on the show page to manage fulfillment data #}

                    {# Form Actions #}
                    <div class="form-actions d-flex gap-2 justify-content-between">
                        <a href="{{ path('app_compliance_requirement_show', {id: requirement.id}) }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save'|trans({}, 'messages') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header"><h2 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'compliance.requirement.info.title'|trans({}, 'compliance') }}</h2>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-link-45deg" aria-hidden="true"></i> {{ requirement.mappedControls|length }} {{ 'compliance.requirement.info.mapped_controls'|trans({}, 'compliance') }}</li>
                        <li><i class="bi bi-diagram-3" aria-hidden="true"></i> {{ requirement.detailedRequirements|length }} {{ 'compliance.requirement.info.sub_requirements'|trans({}, 'compliance') }}</li>
                        <li><i class="bi bi-calendar" aria-hidden="true"></i> {{ 'common.created'|trans({}, 'messages') }} {{ requirement.createdAt|date('Y-m-d') }}</li>
                    </ul>
                </div>
            </div>

            <div class="card mt-3 bg-light">
                <div class="card-header"><h2 class="mb-0"><i class="bi bi-lightbulb" aria-hidden="true"></i> {{ 'common.note'|trans({}, 'messages') }}</h2>
                </div>
                <div class="card-body">
                    <p class="small mb-0">
                        {{ 'compliance.requirement.edit.note'|trans({}, 'compliance') }} <a href="{{ path('app_compliance_requirement_show', {id: requirement.id}) }}">{{ 'compliance.requirement.view_page_note'|trans({}, 'compliance') }}</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

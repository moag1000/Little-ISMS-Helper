{% extends 'base.html.twig' %}

{% block title %}Compliance Requirements{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.compliance'|trans({}, 'nav'), url: path('app_compliance_index') },
            { label: 'compliance.requirement.title'|trans({}, 'compliance') }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-list-check" aria-hidden="true"></i> Compliance Requirements</h1>
        <a href="{{ path('app_compliance_requirement_new', {framework: selected_framework}) }}" class="btn btn-primary">
            <i class="bi bi-plus-circle" aria-hidden="true"></i> New Requirement
        </a>
    </div>

    {# Framework Filter #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label for="framework" class="form-label">{{ 'compliance.requirement.filter_by_framework'|trans({}, 'compliance') }}</label>
                    <select name="framework" id="framework" class="form-select" onchange="this.form.submit()">
                        <option value="">All Frameworks</option>
                        {% for framework in frameworks %}
                            <option value="{{ framework.id }}" {% if selected_framework == framework.id %}selected{% endif %}>
                                {{ framework.name }} ({{ framework.code }})
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary">
                        <i class="bi bi-funnel" aria-hidden="true"></i> Filter
                    </button>
                    {% if selected_framework %}
                        <a href="{{ path('app_compliance_requirement_index') }}" class="btn btn-outline-secondary ms-2">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> Clear
                        </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>

    {# Requirements Table #}
    <div class="card">
        <div class="card-header">
            <h2 class="mb-0">Requirements ({{ requirements|length }})</h2>
        </div>
        <div class="card-body p-0">
            {% if requirements is empty %}
                <div class="alert alert-info m-3">
                    <i class="bi bi-info-circle" aria-hidden="true"></i> No requirements found.
                    {% if selected_framework %}
                        Try selecting a different framework.
                    {% else %}
                        <a href="{{ path('admin_compliance_index') }}">Load frameworks</a> to get started.
                    {% endif %}
                </div>
            {% else %}
                {% embed '_components/_table.html.twig' with {
                    'noMargin': true,
                    'theadClass': 'table-light'
                } %}
                    {% block table_head %}
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Title</th>
                            <th scope="col">Framework</th>
                            <th scope="col">Category</th>
                            <th scope="col">Priority</th>
                            <th scope="col">Fulfillment</th>
                            <th scope="col">Applicable</th>
                            <th scope="col">Actions</th>
                        </tr>
                    {% endblock %}
                    {% block table_body %}
                        {% for requirement in requirements %}
                            <tr>
                                <td><code>{{ requirement.requirementId }}</code></td>
                                <td>
                                    <a href="{{ path('app_compliance_requirement_show', {id: requirement.id}) }}" class="text-decoration-none">
                                        {{ requirement.title }}
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">{{ requirement.framework.code }}</span>
                                </td>
                                <td>{{ requirement.category|default('-') }}</td>
                                <td>
                                    <span class="{{ badge_priority(requirement.priority) }}">{{ requirement.priority }}</span>
                                </td>
                                <td>
                                    {% set fulfillment = fulfillments[requirement.id] %}
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-2" style="height: 20px; min-width: 100px;">
                                            <div class="progress-bar {{ badge_completion(fulfillment.fulfillmentPercentage)|replace({'badge ': ''}) }}"
                                                 role="progressbar"
                                                 style="width: {{ fulfillment.fulfillmentPercentage }}%"
                                                 aria-valuenow="{{ fulfillment.fulfillmentPercentage }}"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100">
                                                {{ fulfillment.fulfillmentPercentage }}%
                                            </div>
                                        </div>
                                        <small class="text-muted">{{ fulfillment.status }}</small>
                                    </div>
                                </td>
                                <td>
                                    {% if fulfillment.applicable %}
                                        <span class="badge bg-success">Yes</span>
                                    {% else %}
                                        <span class="badge bg-secondary">No</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_compliance_requirement_show', {id: requirement.id}) }}"
                                           class="btn btn-outline-primary" title="{{ 'common.view'|trans({}, 'messages') }}" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                            <i class="bi bi-eye" aria-hidden="true"></i>
                                        </a>
                                        <a href="{{ path('app_compliance_requirement_edit', {id: requirement.id}) }}"
                                           class="btn btn-outline-secondary" title="{{ 'common.edit'|trans({}, 'messages') }}" aria-label="{{ 'common.edit'|trans({}, 'messages') }}">
                                            <i class="bi bi-pencil" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'compliance.requirement.new.title'|trans({}, 'compliance') }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.compliance'|trans({}, 'nav'), url: path('app_compliance_index'), icon: 'bi-shield-check' },
            { label: 'compliance.requirement.list.title'|trans({}, 'compliance'), url: path('app_compliance_requirement_index') },
            { label: 'compliance.requirement.new.title'|trans({}, 'compliance') }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'compliance.requirement.new.title'|trans({}, 'compliance'),
        icon: 'bi-plus-circle',
        actions: [
            { label: 'common.back'|trans({}, 'messages'), url: path('app_compliance_requirement_index'), variant: 'secondary', icon: 'bi-arrow-left' }
        ]
    } %}

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}

                    {% include '_components/_auto_form.html.twig' with {
                        'form': form,
                        'sections': {
                            'identification': {
                                'label': 'compliance.requirement.section.identification'|trans({}, 'compliance'),
                                'fields': ['framework', 'requirementId']
                            },
                            'basic': {
                                'label': 'compliance.requirement.section.basic'|trans({}, 'compliance'),
                                'fields': ['title', 'description', 'category', 'priority']
                            },
                            'structure': {
                                'label': 'compliance.requirement.section.structure'|trans({}, 'compliance'),
                                'fields': ['requirementType', 'parentRequirement']
                            }
                        },
                        'col_widths': {
                            'framework': 6,
                            'requirementId': 6,
                            'title': 12,
                            'description': 12,
                            'category': 6,
                            'priority': 6,
                            'requirementType': 6,
                            'parentRequirement': 6
                        }
                    } %}

                    {# Form Actions #}
                    <div class="form-actions d-flex gap-2 justify-content-between">
                        <a href="{{ path('app_compliance_requirement_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'compliance.requirement.action.create'|trans({}, 'compliance') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header"><h5 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'common.help'|trans({}, 'messages') }}</h5>
                </div>
                <div class="card-body">
                    <h4>{{ 'compliance.requirement.help.types.title'|trans({}, 'compliance') }}</h4>
                    <ul class="small">
                        <li><strong>{{ 'compliance.requirement.help.types.core'|trans({}, 'compliance') }}:</strong> {{ 'compliance.requirement.help.types.core_desc'|trans({}, 'compliance') }}</li>
                        <li><strong>{{ 'compliance.requirement.help.types.detailed'|trans({}, 'compliance') }}:</strong> {{ 'compliance.requirement.help.types.detailed_desc'|trans({}, 'compliance') }}</li>
                        <li><strong>{{ 'compliance.requirement.help.types.sub'|trans({}, 'compliance') }}:</strong> {{ 'compliance.requirement.help.types.sub_desc'|trans({}, 'compliance') }}</li>
                    </ul>

                    <h4 class="mt-3">{{ 'compliance.requirement.help.priority.title'|trans({}, 'compliance') }}</h4>
                    <ul class="small">
                        <li><strong>{{ 'compliance.requirement.help.priority.critical'|trans({}, 'compliance') }}:</strong> {{ 'compliance.requirement.help.priority.critical_desc'|trans({}, 'compliance') }}</li>
                        <li><strong>{{ 'compliance.requirement.help.priority.high'|trans({}, 'compliance') }}:</strong> {{ 'compliance.requirement.help.priority.high_desc'|trans({}, 'compliance') }}</li>
                        <li><strong>{{ 'compliance.requirement.help.priority.medium'|trans({}, 'compliance') }}:</strong> {{ 'compliance.requirement.help.priority.medium_desc'|trans({}, 'compliance') }}</li>
                        <li><strong>{{ 'compliance.requirement.help.priority.low'|trans({}, 'compliance') }}:</strong> {{ 'compliance.requirement.help.priority.low_desc'|trans({}, 'compliance') }}</li>
                    </ul>

                    <h4 class="mt-3">{{ 'compliance.requirement.help.fulfillment.title'|trans({}, 'compliance') }}</h4>
                    <p class="small">
                        {{ 'compliance.requirement.help.fulfillment.desc'|trans({}, 'compliance') }}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

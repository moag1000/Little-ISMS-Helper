{% extends 'base.html.twig' %}

{% block title %}New Compliance Requirement{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'Compliance', url: path('app_compliance_index'), icon: 'bi-shield-check' },
            { label: 'Requirements', url: path('app_compliance_requirement_index') },
            { label: 'New Requirement' }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'New Compliance Requirement',
        icon: 'bi-plus-circle',
        actions: [
            { label: 'Back to List', url: path('app_compliance_requirement_index'), variant: 'secondary', icon: 'bi-arrow-left' }
        ]
    } %}

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}

                    {# Framework & ID #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-bookmark" aria-hidden="true"></i>
                            Framework & Identifier
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.framework,
                                    'label': 'Framework',
                                    'help': 'Select the compliance framework this requirement belongs to',
                                    'required': true
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.requirementId,
                                    'label': 'Requirement ID',
                                    'help': 'Unique identifier (e.g., ISO 27001:2022 A.5.1)',
                                    'required': true
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Basic Information #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-info-circle" aria-hidden="true"></i>
                            Basic Information
                        </legend>

                        {% include '_components/_form_field.html.twig' with {
                            'field': form.title,
                            'label': 'Title',
                            'help': 'Short, descriptive title of the requirement',
                            'required': true
                        } %}

                        {% include '_components/_form_field.html.twig' with {
                            'field': form.description,
                            'label': 'Description',
                            'help': 'Detailed description of what this requirement entails'
                        } %}

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.category,
                                    'label': 'Category',
                                    'help': 'Functional category (e.g., Access Control, Cryptography)'
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.priority,
                                    'label': 'Priority',
                                    'help': 'How urgent is this requirement?'
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Structure #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-diagram-3" aria-hidden="true"></i>
                            Requirement Structure
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.requirementType,
                                    'label': 'Type',
                                    'help': 'Core, Detailed, or Sub-requirement'
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.parentRequirement,
                                    'label': 'Parent Requirement',
                                    'help': 'Optional parent requirement for hierarchical structure'
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Applicability #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-check-square" aria-hidden="true"></i>
                            Applicability & Fulfillment
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.applicable,
                                    'label': 'Applicable',
                                    'help': 'Is this requirement applicable to your organization?'
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.fulfillmentPercentage,
                                    'label': 'Fulfillment Percentage',
                                    'help': 'Current implementation progress (0-100%)'
                                } %}
                            </div>
                        </div>

                        {% include '_components/_form_field.html.twig' with {
                            'field': form.applicabilityJustification,
                            'label': 'Applicability Justification',
                            'help': 'Explain why this requirement is or is not applicable'
                        } %}
                    </fieldset>

                    {# Form Actions #}
                    <div class="form-actions d-flex gap-2 justify-content-between">
                        <a href="{{ path('app_compliance_requirement_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save" aria-hidden="true"></i> Create Requirement
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header"><h5 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> Help</h5>
                </div>
                <div class="card-body">
                    <h4>Requirement Types</h5>
                    <ul class="small">
                        <li><strong>Core:</strong> Main requirement from the framework</li>
                        <li><strong>Detailed:</strong> Detailed requirement under a core requirement</li>
                        <li><strong>Sub-requirement:</strong> Further breakdown of detailed requirements</li>
                    </ul>

                    <h4 class="mt-3">Priority Levels</h5>
                    <ul class="small">
                        <li><strong>Critical:</strong> Must be addressed immediately</li>
                        <li><strong>High:</strong> Important, should be addressed soon</li>
                        <li><strong>Medium:</strong> Normal priority</li>
                        <li><strong>Low:</strong> Can be addressed later</li>
                    </ul>

                    <h4 class="mt-3">Fulfillment Percentage</h5>
                    <p class="small">
                        0-49%: Not implemented<br>
                        50-74%: Partially implemented<br>
                        75-99%: Mostly implemented<br>
                        100%: Fully implemented
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

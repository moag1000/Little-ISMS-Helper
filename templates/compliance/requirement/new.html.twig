{% extends 'base.html.twig' %}

{% block title %}New Compliance Requirement{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-plus-circle"></i> New Compliance Requirement</h1>
        <a href="{{ path('app_compliance_requirement_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.framework) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.requirementId) }}
                        </div>
                    </div>

                    {{ form_row(form.title) }}
                    {{ form_row(form.description) }}

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.category) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.priority) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.requirementType) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.parentRequirement) }}
                        </div>
                    </div>

                    <hr>

                    <h5>Applicability</h5>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.applicable) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.fulfillmentPercentage) }}
                        </div>
                    </div>

                    {{ form_row(form.applicabilityJustification) }}

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_compliance_requirement_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create Requirement
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Help</h6>
                </div>
                <div class="card-body">
                    <h6>Requirement Types</h6>
                    <ul class="small">
                        <li><strong>Core:</strong> Main requirement from the framework</li>
                        <li><strong>Detailed:</strong> Detailed requirement under a core requirement</li>
                        <li><strong>Sub-requirement:</strong> Further breakdown of detailed requirements</li>
                    </ul>

                    <h6 class="mt-3">Priority Levels</h6>
                    <ul class="small">
                        <li><strong>Critical:</strong> Must be addressed immediately</li>
                        <li><strong>High:</strong> Important, should be addressed soon</li>
                        <li><strong>Medium:</strong> Normal priority</li>
                        <li><strong>Low:</strong> Can be addressed later</li>
                    </ul>

                    <h6 class="mt-3">Fulfillment Percentage</h6>
                    <p class="small">
                        0-49%: Not implemented<br>
                        50-74%: Partially implemented<br>
                        75-99%: Mostly implemented<br>
                        100%: Fully implemented
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

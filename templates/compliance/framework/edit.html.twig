{% extends 'base.html.twig' %}

{% block title %}{{ 'compliance.framework.edit.title'|trans({}, 'compliance') }} - {{ framework.name }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.compliance'|trans({}, 'nav'), url: path('app_compliance_index') },
            { label: framework.name, url: path('app_compliance_framework_show', {id: framework.id}) },
            { label: 'common.edit'|trans({}, 'messages') }
        ]
    } %}

    <div class="row">
        <div class="col-lg-8">
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header bg-warning">
                        <h1 class="mb-0 h3">
                            <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'compliance.framework.edit.heading'|trans({}, 'compliance') }}
                            <small class="text-muted">{{ framework.name }}</small>
                        </h1>
                    </div>
                {% endblock %}
                {% block card_body %}
                    {{ form_start(form) }}

                    {% include '_components/_auto_form.html.twig' with {
                        'form': form,
                        'sections': {
                            'identification': {
                                'label': 'compliance.framework.section.identification'|trans({}, 'compliance'),
                                'fields': ['code', 'version', 'name']
                            },
                            'details': {
                                'label': 'compliance.framework.section.details'|trans({}, 'compliance'),
                                'fields': ['description', 'applicableIndustry', 'regulatoryBody', 'scopeDescription']
                            },
                            'configuration': {
                                'label': 'compliance.framework.section.configuration'|trans({}, 'compliance'),
                                'fields': ['mandatory', 'active']
                            }
                        },
                        'col_widths': {
                            'code': 6,
                            'version': 6,
                            'name': 12,
                            'description': 12,
                            'applicableIndustry': 6,
                            'regulatoryBody': 6,
                            'scopeDescription': 12,
                            'mandatory': 4,
                            'active': 4
                        }
                    } %}

                    <div class="d-flex gap-2 pt-3 border-top">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'common.save'|trans({}, 'messages') }}
                        </button>
                        <a href="{{ path('app_compliance_framework_show', {id: framework.id}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                        </a>
                    </div>

                    {{ form_end(form) }}
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-lg-4">
            {% embed '_components/_card.html.twig' with { 'class': 'mb-3' } %}
                {% block card_header %}
                    <div class="card-header bg-secondary text-white">
                        <h2 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'compliance.framework.info'|trans({}, 'compliance') }}</h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <dl class="row mb-0">
                        <dt class="col-sm-6">{{ 'common.created_at'|trans({}, 'messages') }}</dt>
                        <dd class="col-sm-6">{{ framework.createdAt|date('d.m.Y H:i') }}</dd>

                        <dt class="col-sm-6">{{ 'common.updated_at'|trans({}, 'messages') }}</dt>
                        <dd class="col-sm-6">{{ framework.updatedAt ? framework.updatedAt|date('d.m.Y H:i') : '-' }}</dd>

                        <dt class="col-sm-6">{{ 'compliance.framework.field.requirements'|trans({}, 'compliance') }}</dt>
                        <dd class="col-sm-6">{% include '_components/_badge.html.twig' with { variant: 'info', content: framework.requirements|length } %}</dd>
                    </dl>
                {% endblock %}
            {% endembed %}

            {% if is_granted('ROLE_ADMIN') %}
            {% embed '_components/_card.html.twig' with { 'class': 'border-danger' } %}
                {% block card_header %}
                    <div class="card-header bg-danger text-white">
                        <h2 class="mb-0"><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'common.danger_zone'|trans({}, 'messages') }}</h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <form method="post" action="{{ path('app_compliance_framework_delete', {id: framework.id}) }}"
                          data-controller="ui-actions"
                          data-action="submit->ui-actions#confirm"
                          data-ui-actions-message-param="{{ 'compliance.framework.confirm.delete'|trans({}, 'compliance') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ framework.id) }}">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-trash" aria-hidden="true"></i> {{ 'common.delete'|trans({}, 'messages') }}
                        </button>
                    </form>
                {% endblock %}
            {% endembed %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'workflows' %}

{% block title %}{{ 'workflow.title.pending'|trans({}, 'workflows') }} - Little ISMS Helper{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}
{% import '_macros/workflow.html.twig' as workflow_macros %}

<div class="page-header">
    <div>
        <h1>{{ 'workflow.title.pending'|trans({}, 'workflows') }}</h1>
        <p class="text-muted">{{ 'workflow.description.pending_detail'|trans({}, 'workflows') }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_workflow_index') }}" class="btn btn-secondary">
            ‚Üê {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.pending'|trans({}, 'workflows'), pending_approvals|length, null, null, 'warning', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.overdue'|trans({}, 'workflows'), pending_approvals|filter(i => i.overdue)|length, null, null, 'danger', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.my_tasks'|trans({}, 'workflows'), pending_approvals|filter(i => i.assignee and i.assignee.id == app.user.id)|length, null, null, 'success', null) }}
    </div>
    <div class="col-auto">
        {% set weekEnd = 'now'|date_modify('+7 days') %}
        {{ cards.kpi_card('workflow.stats.due_this_week'|trans({}, 'workflows'), pending_approvals|filter(i => i.dueDate and i.dueDate <= weekEnd)|length, null, null, 'info', null) }}
    </div>
</div>

{# Pending Workflows Table #}
{% embed '_components/_table.html.twig' with {
    'class': 'table-container',
    'noMargin': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'workflow.field.name'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.definition'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.current_step'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.assignee'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.due_date'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.priority'|trans({}, 'workflows') }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for instance in pending_approvals %}
        <tr{% if instance.overdue %} class="bg-danger-light"{% endif %}>
            <td>
                <strong>{{ instance.name }}</strong>
                {% if instance.overdue %}
                    <span class="badge bg-danger ml-xs">
                        {{ 'workflow.badge.overdue'|trans({}, 'workflows') }}
                    </span>
                {% endif %}
            </td>
            <td>
                <span class="badge bg-info">{{ instance.definition ? instance.definition.name : '-' }}</span>
            </td>
            <td>{{ instance.currentStep ? instance.currentStep.name : '-' }}</td>
            <td>
                {% if instance.assignee %}
                    {{ instance.assignee.fullName }}
                    {% if instance.assignee.id == app.user.id %}
                        <span class="badge bg-success ml-xs">
                            {{ 'workflow.badge.my_task'|trans({}, 'workflows') }}
                        </span>
                    {% endif %}
                {% else %}
                    <span class="text-muted-color">{{ 'workflow.message.unassigned'|trans({}, 'workflows') }}</span>
                {% endif %}
            </td>
            <td>
                {% if instance.dueDate %}
                    {{ workflow_macros.sla_timeline(instance.dueDate, null, null, instance.createdAt, true) }}
                {% else %}
                    <span class="text-muted-color">-</span>
                {% endif %}
            </td>
            <td>
                {% set priorityColors = {
                    'low': 'secondary',
                    'medium': 'info',
                    'high': 'warning',
                    'critical': 'danger'
                } %}
                <span class="badge badge-{{ priorityColors[instance.priority] ?? 'secondary' }}">
                    {{ ('workflow.priority.' ~ instance.priority)|trans({}, 'workflows') }}
                </span>
            </td>
            <td class="text-center">
                <a href="{{ path('app_workflow_instance_show', {id: instance.id}) }}" class="btn btn-sm">
                    üëÅ {{ 'common.view'|trans({}, 'messages') }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center-p-xl-muted">
                {{ 'workflow.message.no_pending'|trans({}, 'workflows') }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}

{# Modals for Approve/Reject Actions #}
{% for instance in pending_approvals %}
    {% if instance.status in ['pending', 'in_progress'] and userCanApprove[instance.id] ?? false %}
        {# Approve Modal #}
        <div class="modal fade" id="approveWorkflow{{ instance.id }}" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form method="post" action="{{ path('app_workflow_instance_approve', {id: instance.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ instance.id) }}">
                        <div class="modal-header">
                            <h5 class="modal-title">
                                <i class="bi bi-check-circle"></i>
                                {{ 'workflow.widget.action.approve'|trans({}, 'workflows') }}
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>{{ 'workflow.widget.confirm.approve'|trans({workflow: instance.workflow.name}, 'workflows') }}</p>
                            <div class="alert alert-info mb-3">
                                <strong>{{ 'workflow.field.entity'|trans({}, 'workflows') }}:</strong>
                                {{ instance.entityType|split('\\')|last }} #{{ instance.entityId }}
                            </div>
                            <div class="mb-3">
                                <label class="form-label">
                                    {{ 'workflow.widget.field.comments'|trans({}, 'workflows') }}
                                    <span class="text-muted">({{ 'common.optional'|trans({}, 'messages') }})</span>
                                </label>
                                <textarea class="form-control" name="comments" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                {{ 'workflow.action.cancel'|trans({}, 'workflows') }}
                            </button>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg"></i>
                                {{ 'workflow.widget.action.approve'|trans({}, 'workflows') }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {# Reject Modal #}
        <div class="modal fade" id="rejectWorkflow{{ instance.id }}" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form method="post" action="{{ path('app_workflow_instance_reject', {id: instance.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ instance.id) }}">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title">
                                <i class="bi bi-x-circle"></i>
                                {{ 'workflow.widget.action.reject'|trans({}, 'workflows') }}
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>{{ 'workflow.widget.confirm.reject'|trans({workflow: instance.workflow.name}, 'workflows') }}</p>
                            <div class="alert alert-warning mb-3">
                                <strong>{{ 'workflow.field.entity'|trans({}, 'workflows') }}:</strong>
                                {{ instance.entityType|split('\\')|last }} #{{ instance.entityId }}
                            </div>
                            <div class="mb-3">
                                <label class="form-label">
                                    {{ 'workflow.widget.field.reason'|trans({}, 'workflows') }}
                                    <span class="text-danger">*</span>
                                </label>
                                <textarea class="form-control" name="comments" rows="4" required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                {{ 'workflow.action.cancel'|trans({}, 'workflows') }}
                            </button>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-x-lg"></i>
                                {{ 'workflow.widget.action.reject'|trans({}, 'workflows') }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}
{% endfor %}

{% endblock %}

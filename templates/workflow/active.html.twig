{% extends 'base.html.twig' %}
{% trans_default_domain 'workflows' %}

{% block title %}{{ 'workflow.title.active'|trans({}, 'workflows') }} - Little ISMS Helper{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}

<div class="page-header">
    <div>
        <h1>{{ 'workflow.title.active'|trans({}, 'workflows') }}</h1>
        <p class="text-muted">{{ 'workflow.description.active_detail'|trans({}, 'workflows') }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_workflow_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.active'|trans({}, 'workflows'), active_workflows|length, null, null, 'info', null) }}
    </div>
    <div class="col-auto">
        {% set overdueCount = 0 %}
        {% for instance in active_workflows %}
            {% if instance.dueDate and instance.dueDate < date() and instance.status not in ['approved', 'rejected', 'cancelled'] %}
                {% set overdueCount = overdueCount + 1 %}
            {% endif %}
        {% endfor %}
        {{ cards.kpi_card('workflow.stats.overdue'|trans({}, 'workflows'), overdueCount, null, null, 'danger', null) }}
    </div>
    <div class="col-auto">
        {% set myCount = 0 %}
        {% for instance in active_workflows %}
            {% if instance.initiatedBy and instance.initiatedBy.id == app.user.id %}
                {% set myCount = myCount + 1 %}
            {% endif %}
        {% endfor %}
        {{ cards.kpi_card('workflow.stats.my_workflows'|trans({}, 'workflows'), myCount, null, null, 'success', null) }}
    </div>
</div>

{# Active Workflows Table #}
{% embed '_components/_table.html.twig' with {
    'wrapperClass': 'table-container',
    'noMargin': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'workflow.field.entity'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.workflow'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.current_step'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.status'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.initiated_by'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.due_date'|trans({}, 'workflows') }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for instance in active_workflows %}
        {% set isOverdue = instance.dueDate and instance.dueDate < date() and instance.status not in ['approved', 'rejected', 'cancelled'] %}
        <tr{% if isOverdue %} class="table-danger"{% endif %}>
            <td>
                <strong>{{ instance.entityType|split('\\')|last }} #{{ instance.entityId }}</strong>
                {% if isOverdue %}
                    <span class="badge bg-danger ms-1">
                        {{ 'workflow.badge.overdue'|trans({}, 'workflows') }}
                    </span>
                {% endif %}
            </td>
            <td>
                <span class="badge bg-info">{{ instance.workflow ? instance.workflow.name : '-' }}</span>
            </td>
            <td>{{ instance.currentStep ? instance.currentStep.name : '-' }}</td>
            <td>
                {% set statusColors = {
                    'pending': 'warning',
                    'in_progress': 'info',
                    'approved': 'success',
                    'rejected': 'danger',
                    'cancelled': 'secondary'
                } %}
                <span class="badge bg-{{ statusColors[instance.status] ?? 'secondary' }}">
                    {{ ('workflow.status.' ~ instance.status)|trans({}, 'workflows') }}
                </span>
            </td>
            <td>
                {% if instance.initiatedBy %}
                    {{ instance.initiatedBy.firstName ~ ' ' ~ instance.initiatedBy.lastName }}
                    {% if instance.initiatedBy.id == app.user.id %}
                        <span class="badge bg-success ms-1">
                            {{ 'workflow.badge.my_task'|trans({}, 'workflows') }}
                        </span>
                    {% endif %}
                {% else %}
                    <span class="text-muted">{{ 'workflow.message.unassigned'|trans({}, 'workflows') }}</span>
                {% endif %}
            </td>
            <td>
                {% if instance.dueDate %}
                    {{ instance.dueDate|date('d.m.Y') }}
                {% else %}
                    <span class="text-muted">-</span>
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('app_workflow_instance_show', {id: instance.id}) }}" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye" aria-hidden="true"></i> {{ 'common.view'|trans({}, 'messages') }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center text-muted p-4">
                {{ 'workflow.message.no_active'|trans({}, 'workflows') }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
{% endblock %}

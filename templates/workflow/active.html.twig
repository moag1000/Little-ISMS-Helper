{% extends 'base.html.twig' %}
{% trans_default_domain 'workflows' %}

{% block title %}{{ 'workflow.title.active'|trans({}, 'workflows') }} - Little ISMS Helper{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}

<div class="page-header">
    <div>
        <h1>{{ 'workflow.title.active'|trans({}, 'workflows') }}</h1>
        <p class="text-muted">{{ 'workflow.description.active_detail'|trans({}, 'workflows') }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_workflow_index') }}" class="btn btn-secondary">
            ‚Üê {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.active'|trans({}, 'workflows'), activeInstances|length, null, null, 'info', null) }}
    </div>
    <div class="col-auto">
        {% set totalProgress = 0 %}
        {% for instance in activeInstances %}
            {% set totalProgress = totalProgress + (instance.completedSteps|length / instance.definition.steps|length * 100) %}
        {% endfor %}
        {% set avgProgress = activeInstances|length > 0 ? (totalProgress / activeInstances|length)|round : 0 %}
        {{ cards.kpi_card('workflow.stats.avg_progress'|trans({}, 'workflows'), avgProgress ~ '%', null, avgProgress, 'primary', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.overdue'|trans({}, 'workflows'), activeInstances|filter(i => i.overdue)|length, null, null, 'danger', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.my_workflows'|trans({}, 'workflows'), activeInstances|filter(i => i.assignee and i.assignee.id == app.user.id)|length, null, null, 'success', null) }}
    </div>
</div>

{# Active Workflows Table #}
{% embed '_components/_table.html.twig' with {
    'class': 'table-container',
    'noMargin': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'workflow.field.name'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.definition'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.current_step'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.assignee'|trans({}, 'workflows') }}</th>
            <th scope="col" class="text-center">{{ 'workflow.field.progress'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.due_date'|trans({}, 'workflows') }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for instance in activeInstances %}
        <tr{% if instance.overdue %} class="bg-danger-light"{% endif %}>
            <td>
                <strong>{{ instance.name }}</strong>
                {% if instance.overdue %}
                    <span class="badge bg-danger ml-xs">
                        {{ 'workflow.badge.overdue'|trans({}, 'workflows') }}
                    </span>
                {% endif %}
            </td>
            <td>
                <span class="badge bg-info">{{ instance.definition ? instance.definition.name : '-' }}</span>
            </td>
            <td>
                {{ instance.currentStep ? instance.currentStep.name : '-' }}
                <br><small class="text-muted-color">
                    {{ 'workflow.step'|trans({}, 'workflows') }} {{ instance.currentStepNumber }} / {{ instance.definition ? instance.definition.steps|length : 0 }}
                </small>
            </td>
            <td>
                {% if instance.assignee %}
                    {{ instance.assignee.fullName }}
                    {% if instance.assignee.id == app.user.id %}
                        <span class="badge bg-success ml-xs">
                            {{ 'workflow.badge.my_task'|trans({}, 'workflows') }}
                        </span>
                    {% endif %}
                {% else %}
                    <span class="text-muted-color">{{ 'workflow.message.unassigned'|trans({}, 'workflows') }}</span>
                {% endif %}
            </td>
            <td>
                {% set progress = (instance.completedSteps|length / instance.definition.steps|length * 100)|round %}
                <div class="progress progress-inline">
                    <div class="progress-bar progress-bar-fs-075" style="width: {{ progress }}%;">
                        {{ progress }}%
                    </div>
                </div>
            </td>
            <td>
                {% if instance.dueDate %}
                    {{ instance.dueDate|date('d.m.Y') }}
                {% else %}
                    <span class="text-muted-color">-</span>
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('app_workflow_instance_show', {id: instance.id}) }}" class="btn btn-sm">
                    üëÅ {{ 'common.view'|trans({}, 'messages') }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center-p-xl-muted">
                {{ 'workflow.message.no_active'|trans({}, 'workflows') }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'workflows' %}

{% block title %}{{ 'workflow.title.active'|trans({}, 'workflows') }} - Little ISMS Helper{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}
{% import '_macros/workflow.html.twig' as workflow_macros %}

<div class="page-header">
    <div>
        <h1>{{ 'workflow.title.active'|trans({}, 'workflows') }}</h1>
        <p class="text-muted">{{ 'workflow.description.active_detail'|trans({}, 'workflows') }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_workflow_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.active'|trans({}, 'workflows'), active_workflows|length, null, null, 'info', null) }}
    </div>
    <div class="col-auto">
        {% set overdueCount = 0 %}
        {% for instance in active_workflows %}
            {% if instance.dueDate and instance.dueDate < date() and instance.status not in ['approved', 'rejected', 'cancelled'] %}
                {% set overdueCount = overdueCount + 1 %}
            {% endif %}
        {% endfor %}
        {{ cards.kpi_card('workflow.stats.overdue'|trans({}, 'workflows'), overdueCount, null, null, 'danger', null) }}
    </div>
    <div class="col-auto">
        {% set myCount = 0 %}
        {% for instance in active_workflows %}
            {% if instance.initiatedBy and instance.initiatedBy.id == app.user.id %}
                {% set myCount = myCount + 1 %}
            {% endif %}
        {% endfor %}
        {{ cards.kpi_card('workflow.stats.my_workflows'|trans({}, 'workflows'), myCount, null, null, 'success', null) }}
    </div>
</div>

{# Active Workflows Table #}
{% embed '_components/_table.html.twig' with {
    'wrapperClass': 'table-container',
    'noMargin': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'workflow.field.entity'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.workflow'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.current_step'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.status'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.initiated_by'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.due_date'|trans({}, 'workflows') }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for instance in active_workflows %}
        {% set isOverdue = instance.dueDate and instance.dueDate < date() and instance.status not in ['approved', 'rejected', 'cancelled'] %}
        <tr{% if isOverdue %} class="table-danger"{% endif %}>
            <td>
                <strong>{{ instance.entityType|split('\\')|last }} #{{ instance.entityId }}</strong>
                {% if isOverdue %}
                    <span class="badge bg-danger ms-1">
                        {{ 'workflow.badge.overdue'|trans({}, 'workflows') }}
                    </span>
                {% endif %}
            </td>
            <td>
                <span class="badge bg-info">{{ instance.workflow ? instance.workflow.name : '-' }}</span>
            </td>
            <td>{{ instance.currentStep ? instance.currentStep.name : '-' }}</td>
            <td>
                {% set statusColors = {
                    'pending': 'warning',
                    'in_progress': 'info',
                    'approved': 'success',
                    'rejected': 'danger',
                    'cancelled': 'secondary'
                } %}
                <span class="badge bg-{{ statusColors[instance.status] ?? 'secondary' }}">
                    {{ ('workflow.status.' ~ instance.status)|trans({}, 'workflows') }}
                </span>
            </td>
            <td>
                {% if instance.initiatedBy %}
                    {{ instance.initiatedBy.firstName ~ ' ' ~ instance.initiatedBy.lastName }}
                    {% if instance.initiatedBy.id == app.user.id %}
                        <span class="badge bg-success ms-1">
                            {{ 'workflow.badge.my_task'|trans({}, 'workflows') }}
                        </span>
                    {% endif %}
                {% else %}
                    <span class="text-muted">{{ 'workflow.message.unassigned'|trans({}, 'workflows') }}</span>
                {% endif %}
            </td>
            <td>
                {% if instance.dueDate %}
                    {{ instance.dueDate|date('d.m.Y') }}
                {% else %}
                    <span class="text-muted">-</span>
                {% endif %}
            </td>
            <td class="text-center">
                <div class="btn-group" role="group">
                    {% if instance.status in ['pending', 'in_progress'] and (userCanApprove[instance.id] ?? false) %}
                        <button type="button"
                                class="btn btn-sm btn-success"
                                data-bs-toggle="modal"
                                data-bs-target="#approveWorkflow{{ instance.id }}"
                                title="{{ 'workflow.widget.action.approve'|trans({}, 'workflows') }}">
                            <i class="bi bi-check-lg" aria-hidden="true"></i>
                        </button>
                        <button type="button"
                                class="btn btn-sm btn-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#rejectWorkflow{{ instance.id }}"
                                title="{{ 'workflow.widget.action.reject'|trans({}, 'workflows') }}">
                            <i class="bi bi-x-lg" aria-hidden="true"></i>
                        </button>
                    {% endif %}
                    <a href="{{ path('app_workflow_instance_show', {id: instance.id}) }}"
                       class="btn btn-sm btn-outline-primary"
                       title="{{ 'common.view'|trans({}, 'messages') }}">
                        <i class="bi bi-eye" aria-hidden="true"></i>
                    </a>
                </div>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center text-muted p-4">
                {{ 'workflow.message.no_active'|trans({}, 'workflows') }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}

{# Modals for Approve/Reject Actions #}
{% for instance in active_workflows %}
    {% if instance.status in ['pending', 'in_progress'] and (userCanApprove[instance.id] ?? false) %}
        {# Approve Modal #}
        <div class="modal fade" id="approveWorkflow{{ instance.id }}" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form method="post" action="{{ path('app_workflow_instance_approve', {id: instance.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ instance.id) }}">
                        <div class="modal-header">
                            <h2 class="modal-title h5">
                                <i class="bi bi-check-circle"></i>
                                {{ 'workflow.widget.action.approve'|trans({}, 'workflows') }}
                            </h2>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>{{ 'workflow.widget.confirm.approve'|trans({workflow: instance.workflow.name}, 'workflows') }}</p>
                            <div class="alert alert-info mb-3">
                                <strong>{{ 'workflow.field.entity'|trans({}, 'workflows') }}:</strong>
                                {{ instance.entityType|split('\\')|last }} #{{ instance.entityId }}
                            </div>
                            <div class="mb-3">
                                <label class="form-label">
                                    {{ 'workflow.widget.field.comments'|trans({}, 'workflows') }}
                                    <span class="text-muted">({{ 'common.optional'|trans({}, 'messages') }})</span>
                                </label>
                                <textarea class="form-control" name="comments" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                {{ 'workflow.action.cancel'|trans({}, 'workflows') }}
                            </button>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg"></i>
                                {{ 'workflow.widget.action.approve'|trans({}, 'workflows') }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {# Reject Modal #}
        <div class="modal fade" id="rejectWorkflow{{ instance.id }}" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form method="post" action="{{ path('app_workflow_instance_reject', {id: instance.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ instance.id) }}">
                        <div class="modal-header bg-danger text-white">
                            <h2 class="modal-title h5">
                                <i class="bi bi-x-circle"></i>
                                {{ 'workflow.widget.action.reject'|trans({}, 'workflows') }}
                            </h2>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>{{ 'workflow.widget.confirm.reject'|trans({workflow: instance.workflow.name}, 'workflows') }}</p>
                            <div class="alert alert-warning mb-3">
                                <strong>{{ 'workflow.field.entity'|trans({}, 'workflows') }}:</strong>
                                {{ instance.entityType|split('\\')|last }} #{{ instance.entityId }}
                            </div>
                            <div class="mb-3">
                                <label class="form-label">
                                    {{ 'workflow.widget.field.reason'|trans({}, 'workflows') }}
                                    <span class="text-danger">*</span>
                                </label>
                                <textarea class="form-control" name="comments" rows="4" required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                {{ 'workflow.action.cancel'|trans({}, 'workflows') }}
                            </button>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-x-lg"></i>
                                {{ 'workflow.widget.action.reject'|trans({}, 'workflows') }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}
{% endfor %}

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
    {{ is_edit ? 'workflow.definition.edit_title'|trans({}, 'messages') : 'workflow.definition.new_title'|trans({}, 'messages') }}
{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_workflow_index') }}">{{ 'workflow.breadcrumb.home'|trans({}, 'messages') }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_workflow_definitions') }}">{{ 'workflow.breadcrumb.definitions'|trans({}, 'messages') }}</a></li>
                    {% if is_edit %}
                        <li class="breadcrumb-item"><a href="{{ path('app_workflow_definition_show', {id: workflow.id}) }}">{{ workflow.name }}</a></li>
                        <li class="breadcrumb-item active">{{ 'workflow.breadcrumb.edit'|trans({}, 'messages') }}</li>
                    {% else %}
                        <li class="breadcrumb-item active">{{ 'workflow.breadcrumb.new'|trans({}, 'messages') }}</li>
                    {% endif %}
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-{{ is_edit ? 'pencil' : 'plus-circle' }}" aria-hidden="true"></i>
                    {{ is_edit ? 'workflow.definition.edit_title'|trans({}, 'messages') : 'workflow.definition.new_title'|trans({}, 'messages') }}
                </h1>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="bi bi-diagram-3" aria-hidden="true"></i> {{ 'workflow.section.basic_information'|trans({}, 'messages') }}
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                        <small class="form-text text-muted">{{ 'workflow.help.name'|trans({}, 'messages') }}</small>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                        <small class="form-text text-muted">{{ 'workflow.help.description'|trans({}, 'messages') }}</small>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.entityType) }}
                        {{ form_widget(form.entityType) }}
                        {{ form_errors(form.entityType) }}
                        {{ form_help(form.entityType) }}
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            {{ form_widget(form.isActive) }}
                            {{ form_label(form.isActive) }}
                        </div>
                        {{ form_errors(form.isActive) }}
                        {{ form_help(form.isActive) }}
                    </div>

                    {{ form_rest(form) }}

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle" aria-hidden="true"></i>
                        <strong>{{ 'workflow.info.steps_note_title'|trans({}, 'messages') }}</strong><br>
                        {{ 'workflow.info.steps_note_text'|trans({}, 'messages') }}
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ is_edit ? path('app_workflow_definition_show', {id: workflow.id}) : path('app_workflow_definitions') }}"
                           class="btn btn-secondary">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle" aria-hidden="true"></i>
                            {{ is_edit ? 'workflow.action.update'|trans({}, 'messages') : 'workflow.action.create'|trans({}, 'messages') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {% if is_edit %}
                <div class="card mt-4">
                    <div class="card-header bg-warning">
                        <h3 class="mb-0">
                            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'workflow.section.danger_zone'|trans({}, 'messages') }}
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">{{ 'workflow.help.delete_warning'|trans({}, 'messages') }}</p>
                        <form method="post" action="{{ path('app_workflow_definition_delete', {id: workflow.id}) }}"
                              onsubmit="return confirm('{{ 'workflow.confirm.delete'|trans({}, 'messages') }}')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ workflow.id) }}">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash" aria-hidden="true"></i> {{ 'workflow.action.delete_definition'|trans({}, 'messages') }}
                            </button>
                        </form>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

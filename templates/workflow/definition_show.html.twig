{% extends 'base.html.twig' %}

{% block title %}{{ workflow.name }} - {{ 'workflow.definition.title'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_workflow_index') }}">{{ 'workflow.breadcrumb.home'|trans }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_workflow_definitions') }}">{{ 'workflow.breadcrumb.definitions'|trans }}</a></li>
                    <li class="breadcrumb-item active">{{ workflow.name }}</li>
                </ol>
            </nav>
            <h1>
                <i class="bi bi-diagram-3" aria-hidden="true"></i> {{ workflow.name }}
                {% if workflow.isActive %}
                    <span class="badge bg-success">{{ 'workflow.status.active'|trans }}</span>
                {% else %}
                    <span class="badge bg-secondary">{{ 'workflow.status.inactive'|trans }}</span>
                {% endif %}
            </h1>
        </div>
        <div>
            <a href="{{ path('app_workflow_definition_builder', {id: workflow.id}) }}" class="btn btn-success">
                <i class="bi bi-diagram-3" aria-hidden="true"></i> {{ 'workflow.action.builder'|trans }}
            </a>
            <a href="{{ path('app_workflow_definition_edit', {id: workflow.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'workflow.action.edit'|trans }}
            </a>
            <form method="post" action="{{ path('app_workflow_definition_toggle', {id: workflow.id}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ workflow.id) }}">
                <button type="submit" class="btn btn-{{ workflow.isActive ? 'warning' : 'success' }}">
                    <i class="bi bi-{{ workflow.isActive ? 'pause-circle' : 'play-circle' }}" aria-hidden="true"></i>
                    {{ workflow.isActive ? 'workflow.action.deactivate'|trans : 'workflow.action.activate'|trans }}
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            {# Workflow Information #}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'workflow.section.information'|trans }}
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">{{ 'workflow.field.name'|trans }}</dt>
                        <dd class="col-sm-9">{{ workflow.name }}</dd>

                        <dt class="col-sm-3">{{ 'workflow.field.description'|trans }}</dt>
                        <dd class="col-sm-9">{{ workflow.description|default('—') }}</dd>

                        <dt class="col-sm-3">{{ 'workflow.field.entity_type'|trans }}</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">{{ workflow.entityType }}</span>
                        </dd>

                        <dt class="col-sm-3">{{ 'workflow.field.status'|trans }}</dt>
                        <dd class="col-sm-9">
                            {% if workflow.isActive %}
                                <span class="badge bg-success">{{ 'workflow.status.active'|trans }}</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ 'workflow.status.inactive'|trans }}</span>
                            {% endif %}
                        </dd>

                        <dt class="col-sm-3">{{ 'workflow.field.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ workflow.createdAt|date('d.m.Y H:i') }}</dd>

                        {% if workflow.updatedAt %}
                        <dt class="col-sm-3">{{ 'workflow.field.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ workflow.updatedAt|date('d.m.Y H:i') }}</dd>
                        {% endif %}
                    </dl>
                </div>
            </div>

            {# Workflow Steps #}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check" aria-hidden="true"></i> {{ 'workflow.section.steps'|trans }} ({{ workflow.steps|length }})
                    </h5>
                </div>
                <div class="card-body">
                    {% if workflow.steps|length > 0 %}
                        <div class="list-group">
                            {% for step in workflow.steps %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">
                                                <span class="badge bg-primary me-2">{{ step.stepOrder }}</span>
                                                {{ step.name }}
                                            </h6>
                                            {% if step.description %}
                                                <p class="mb-1 text-muted small">{{ step.description }}</p>
                                            {% endif %}
                                            <small class="text-muted">
                                                <i class="bi bi-person" aria-hidden="true"></i> {{ step.approverRole ?: '—' }}
                                            </small>
                                        </div>
                                        <div>
                                            {% if step.requiresComment %}
                                                <span class="badge bg-warning">{{ 'workflow.step.requires_comment'|trans }}</span>
                                            {% endif %}
                                            {% if step.requiresFileUpload %}
                                                <span class="badge bg-info">{{ 'workflow.step.requires_file'|trans }}</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted text-center py-4">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'workflow.message.no_steps'|trans }}
                        </p>
                    {% endif %}
                </div>
            </div>

            {# Recent Instances #}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history" aria-hidden="true"></i> {{ 'workflow.section.recent_instances'|trans }}
                    </h5>
                </div>
                <div class="card-body">
                    {% if recent_instances|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">{{ 'workflow.instance.entity'|trans }}</th>
                                        <th scope="col">{{ 'workflow.instance.status'|trans }}</th>
                                        <th scope="col">{{ 'workflow.instance.current_step'|trans }}</th>
                                        <th scope="col">{{ 'workflow.instance.created'|trans }}</th>
                                        <th scope="col">{{ 'workflow.instance.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for instance in recent_instances %}
                                        <tr>
                                            <td>
                                                {{ instance.entityType }} #{{ instance.entityId }}
                                            </td>
                                            <td>
                                                {% if instance.status == 'completed' %}
                                                    <span class="badge bg-success">{{ 'workflow.status.completed'|trans }}</span>
                                                {% elseif instance.status == 'rejected' %}
                                                    <span class="badge bg-danger">{{ 'workflow.status.rejected'|trans }}</span>
                                                {% elseif instance.status == 'cancelled' %}
                                                    <span class="badge bg-secondary">{{ 'workflow.status.cancelled'|trans }}</span>
                                                {% else %}
                                                    <span class="badge bg-warning">{{ 'workflow.status.pending'|trans }}</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {{ instance.currentStep ? instance.currentStep.name : '—' }}
                                            </td>
                                            <td>{{ instance.createdAt|date('d.m.Y H:i') }}</td>
                                            <td>
                                                <a href="{{ path('app_workflow_instance_show', {id: instance.id}) }}" class="btn btn-sm btn-outline-primary" aria-label="{{ 'common.view'|trans }}">
                                                    <i class="bi bi-eye" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted text-center py-4">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'workflow.message.no_instances'|trans }}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            {# Actions #}
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-lightning" aria-hidden="true"></i> {{ 'workflow.section.actions'|trans }}
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_workflow_definition_edit', {id: workflow.id}) }}" class="btn btn-primary">
                            <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'workflow.action.edit'|trans }}
                        </a>
                        <form method="post" action="{{ path('app_workflow_definition_toggle', {id: workflow.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ workflow.id) }}">
                            <button type="submit" class="btn btn-{{ workflow.isActive ? 'warning' : 'success' }} w-100">
                                <i class="bi bi-{{ workflow.isActive ? 'pause-circle' : 'play-circle' }}" aria-hidden="true"></i>
                                {{ workflow.isActive ? 'workflow.action.deactivate'|trans : 'workflow.action.activate'|trans }}
                            </button>
                        </form>
                        <hr>
                        <form method="post" action="{{ path('app_workflow_definition_delete', {id: workflow.id}) }}"
                              onsubmit="return confirm('{{ 'workflow.confirm.delete'|trans }}')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ workflow.id) }}">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash" aria-hidden="true"></i> {{ 'workflow.action.delete'|trans }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            {# Statistics #}
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-bar-chart" aria-hidden="true"></i> {{ 'workflow.section.statistics'|trans }}
                    </h6>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-6">{{ 'workflow.stats.steps'|trans }}</dt>
                        <dd class="col-sm-6 text-end"><strong>{{ workflow.steps|length }}</strong></dd>

                        <dt class="col-sm-6">{{ 'workflow.stats.total_instances'|trans }}</dt>
                        <dd class="col-sm-6 text-end"><strong>{{ recent_instances|length }}</strong></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ workflow.name }} - {{ 'workflow.definition.title'|trans({}, 'workflows') }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_workflow_index') }}">{{ 'workflow.breadcrumb.home'|trans({}, 'workflows') }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_workflow_definitions') }}">{{ 'workflow.breadcrumb.definitions'|trans({}, 'workflows') }}</a></li>
                    <li class="breadcrumb-item active">{{ workflow.name }}</li>
                </ol>
            </nav>
            <h1>
                <i class="bi bi-diagram-3" aria-hidden="true"></i> {{ workflow.name }}
                {% if workflow.isActive %}
                    {% include '_components/_badge.html.twig' with { variant: 'success', content: 'workflow.status.active'|trans({}, 'workflows') } %}
                {% else %}
                    {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'workflow.status.inactive'|trans({}, 'workflows') } %}
                {% endif %}
            </h1>
        </div>
        <div>
            <a href="{{ path('app_workflow_definition_builder', {id: workflow.id}) }}" class="btn btn-success">
                <i class="bi bi-diagram-3" aria-hidden="true"></i> {{ 'workflow.action.builder'|trans({}, 'workflows') }}
            </a>
            <a href="{{ path('app_workflow_definition_edit', {id: workflow.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'workflow.action.edit'|trans({}, 'workflows') }}
            </a>
            <form method="post" action="{{ path('app_workflow_definition_toggle', {id: workflow.id}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ workflow.id) }}">
                <button type="submit" class="btn btn-{{ workflow.isActive ? 'warning' : 'success' }}">
                    <i class="bi bi-{{ workflow.isActive ? 'pause-circle' : 'play-circle' }}" aria-hidden="true"></i>
                    {{ workflow.isActive ? 'workflow.action.deactivate'|trans({}, 'workflows') : 'workflow.action.activate'|trans({}, 'workflows') }}
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            {# Workflow Information #}
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'workflow.section.information'|trans({}, 'workflows') }}
                    </h2>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">{{ 'workflow.field.name'|trans({}, 'workflows') }}</dt>
                        <dd class="col-sm-9">{{ workflow.name }}</dd>

                        <dt class="col-sm-3">{{ 'workflow.field.description'|trans({}, 'workflows') }}</dt>
                        <dd class="col-sm-9">{{ workflow.description|default('—') }}</dd>

                        <dt class="col-sm-3">{{ 'workflow.field.entity_type'|trans({}, 'workflows') }}</dt>
                        <dd class="col-sm-9">
                            {% include '_components/_badge.html.twig' with { variant: 'info', content: workflow.entityType } %}
                        </dd>

                        <dt class="col-sm-3">{{ 'workflow.field.status'|trans({}, 'workflows') }}</dt>
                        <dd class="col-sm-9">
                            {% if workflow.isActive %}
                                {% include '_components/_badge.html.twig' with { variant: 'success', content: 'workflow.status.active'|trans({}, 'workflows') } %}
                            {% else %}
                                {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'workflow.status.inactive'|trans({}, 'workflows') } %}
                            {% endif %}
                        </dd>

                        <dt class="col-sm-3">{{ 'workflow.field.created_at'|trans({}, 'workflows') }}</dt>
                        <dd class="col-sm-9">{{ workflow.createdAt|date('d.m.Y H:i') }}</dd>

                        {% if workflow.updatedAt %}
                        <dt class="col-sm-3">{{ 'workflow.field.updated_at'|trans({}, 'workflows') }}</dt>
                        <dd class="col-sm-9">{{ workflow.updatedAt|date('d.m.Y H:i') }}</dd>
                        {% endif %}
                    </dl>
                </div>
            </div>

            {# Workflow Steps #}
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="bi bi-list-check" aria-hidden="true"></i> {{ 'workflow.section.steps'|trans({}, 'workflows') }} ({{ workflow.steps|length }})
                    </h2>
                </div>
                <div class="card-body">
                    {% if workflow.steps|length > 0 %}
                        <ul class="list-group">
                            {% for step in workflow.steps %}
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h3 class="mb-1">
                                                {% include '_components/_badge.html.twig' with { variant: 'primary', class: 'me-2', content: step.stepOrder } %}
                                                {{ step.name }}
                                            </h3>
                                            {% if step.description %}
                                                <p class="mb-1 text-muted small">{{ step.description }}</p>
                                            {% endif %}
                                            <small class="text-muted">
                                                <i class="bi bi-person" aria-hidden="true"></i> {{ step.approverRole ?: '—' }}
                                            </small>
                                        </div>
                                        <div>
                                            {% if step.requiresComment %}
                                                {% include '_components/_badge.html.twig' with { variant: 'warning', content: 'workflow.step.requires_comment'|trans({}, 'workflows') } %}
                                            {% endif %}
                                            {% if step.requiresFileUpload %}
                                                {% include '_components/_badge.html.twig' with { variant: 'info', content: 'workflow.step.requires_file'|trans({}, 'workflows') } %}
                                            {% endif %}
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted text-center py-4">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'workflow.message.no_steps'|trans({}, 'workflows') }}
                        </p>
                    {% endif %}
                </div>
            </div>

            {# Recent Instances #}
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="bi bi-clock-history" aria-hidden="true"></i> {{ 'workflow.section.recent_instances'|trans({}, 'workflows') }}
                    </h2>
                </div>
                <div class="card-body">
                    {% if recent_instances|length > 0 %}
                        {% embed '_components/_table.html.twig' with {
                            'class': 'table-hover',
                            'noMargin': true,
                            'responsive': true
                        } %}
                            {% block table_head %}
                                <tr>
                                    <th scope="col">{{ 'workflow.instance.entity'|trans({}, 'workflows') }}</th>
                                    <th scope="col">{{ 'workflow.instance.status'|trans({}, 'workflows') }}</th>
                                    <th scope="col">{{ 'workflow.instance.current_step'|trans({}, 'workflows') }}</th>
                                    <th scope="col">{{ 'workflow.instance.created'|trans({}, 'workflows') }}</th>
                                    <th scope="col">{{ 'workflow.instance.actions'|trans({}, 'workflows') }}</th>
                                </tr>
                            {% endblock %}
                            {% block table_body %}
                                {% for instance in recent_instances %}
                                    <tr>
                                        <td>
                                            {{ instance.entityType }} #{{ instance.entityId }}
                                        </td>
                                        <td>
                                            {% if instance.status == 'completed' %}
                                                {% include '_components/_badge.html.twig' with { variant: 'success', content: 'workflow.status.completed'|trans({}, 'workflows') } %}
                                            {% elseif instance.status == 'rejected' %}
                                                {% include '_components/_badge.html.twig' with { variant: 'danger', content: 'workflow.status.rejected'|trans({}, 'workflows') } %}
                                            {% elseif instance.status == 'cancelled' %}
                                                {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'workflow.status.cancelled'|trans({}, 'workflows') } %}
                                            {% else %}
                                                {% include '_components/_badge.html.twig' with { variant: 'warning', content: 'workflow.status.pending'|trans({}, 'workflows') } %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {{ instance.currentStep ? instance.currentStep.name : '—' }}
                                        </td>
                                        <td>{{ instance.startedAt|date('d.m.Y H:i') }}</td>
                                        <td>
                                            <a href="{{ path('app_workflow_instance_show', {id: instance.id}) }}" class="btn btn-sm btn-outline-primary" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                                <i class="bi bi-eye" aria-hidden="true"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endblock %}
                        {% endembed %}
                    {% else %}
                        <p class="text-muted text-center py-4">
                            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'workflow.message.no_instances'|trans({}, 'workflows') }}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            {# Actions #}
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-lightning" aria-hidden="true"></i> {{ 'workflow.section.actions'|trans({}, 'workflows') }}
                    </h2>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_workflow_definition_edit', {id: workflow.id}) }}" class="btn btn-primary">
                            <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'workflow.action.edit'|trans({}, 'workflows') }}
                        </a>
                        <form method="post" action="{{ path('app_workflow_definition_toggle', {id: workflow.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ workflow.id) }}">
                            <button type="submit" class="btn btn-{{ workflow.isActive ? 'warning' : 'success' }} w-100">
                                <i class="bi bi-{{ workflow.isActive ? 'pause-circle' : 'play-circle' }}" aria-hidden="true"></i>
                                {{ workflow.isActive ? 'workflow.action.deactivate'|trans({}, 'workflows') : 'workflow.action.activate'|trans({}, 'workflows') }}
                            </button>
                        </form>
                        <hr>
                        <form method="post" action="{{ path('app_workflow_definition_delete', {id: workflow.id}) }}"
                              data-controller="ui-actions"
                              data-action="submit->ui-actions#confirm"
                              data-ui-actions-message-param="{{ 'workflow.confirm.delete'|trans({}, 'workflows') }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ workflow.id) }}">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash" aria-hidden="true"></i> {{ 'workflow.action.delete'|trans({}, 'workflows') }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            {# Statistics #}
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-bar-chart" aria-hidden="true"></i> {{ 'workflow.section.statistics'|trans({}, 'workflows') }}
                    </h2>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-6">{{ 'workflow.stats.steps'|trans({}, 'workflows') }}</dt>
                        <dd class="col-sm-6 text-end"><strong>{{ workflow.steps|length }}</strong></dd>

                        <dt class="col-sm-6">{{ 'workflow.stats.total_instances'|trans({}, 'workflows') }}</dt>
                        <dd class="col-sm-6 text-end"><strong>{{ recent_instances|length }}</strong></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'workflows' %}

{% block title %}{{ 'workflow.title.list'|trans({}, 'workflows') }} - Little ISMS Helper{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}

<div class="container-fluid py-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.workflows'|trans({}, 'nav') }
        ]
    } %}
</div>

<div class="page-header">
    <div>
        <h1>{{ 'workflow.title.list'|trans({}, 'workflows') }}</h1>
        <p class="text-muted">{{ 'workflow.description.overview'|trans({}, 'workflows') }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_workflow_definitions') }}" class="btn btn-secondary">
            üìã {{ 'workflow.action.definitions'|trans({}, 'workflows') }}
        </a>
        <a href="{{ path('app_workflow_pending') }}" class="btn btn-primary">
            ‚è≥ {{ 'workflow.action.pending'|trans({}, 'workflows') }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.total'|trans({}, 'workflows'), statistics.total, null, null, null, null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.in_progress'|trans({}, 'workflows'), statistics.in_progress, null, null, 'info', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.pending'|trans({}, 'workflows'), statistics.pending, null, null, 'warning', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.approved'|trans({}, 'workflows'), statistics.approved, null, null, 'success', null) }}
    </div>
</div>

{# Quick Links #}
<div class="module-grid mb-4">
    <div class="card">
        <div class="fs-2-mb-sm">‚è≥</div>
        <h2>{{ 'workflow.section.pending'|trans({}, 'workflows') }}</h2>
        <p class="text-muted-mt-xs">
            {{ 'workflow.description.pending'|trans({}, 'workflows') }}
        </p>
        <div class="mt-2">
            <strong class="fs-4">{{ statistics.pending }}</strong>
        </div>
        <div class="mt-2">
            <a href="{{ path('app_workflow_pending') }}" class="btn btn-sm">{{ 'common.view'|trans({}, 'messages') }}</a>
        </div>
    </div>

    <div class="card">
        <div class="fs-2-mb-sm">üîÑ</div>
        <h2>{{ 'workflow.section.in_progress'|trans({}, 'workflows') }}</h2>
        <p class="text-muted-mt-xs">
            {{ 'workflow.description.in_progress'|trans({}, 'workflows') }}
        </p>
        <div class="mt-2">
            <strong class="fs-4">{{ statistics.in_progress }}</strong>
        </div>
        <div class="mt-2">
            <a href="{{ path('app_workflow_active') }}" class="btn btn-sm">{{ 'common.view'|trans({}, 'messages') }}</a>
        </div>
    </div>

    <div class="card">
        <div class="fs-2-mb-sm">‚ö†Ô∏è</div>
        <h3>{{ 'workflow.section.overdue'|trans({}, 'workflows') }}</h3>
        <p class="text-muted-mt-xs">
            {{ 'workflow.description.overdue'|trans({}, 'workflows') }}
        </p>
        <div class="mt-2">
            <strong class="fs-15-danger">{{ instances|filter(i => i.overdue)|length }}</strong>
        </div>
        <div class="mt-2">
            <a href="{{ path('app_workflow_overdue') }}" class="btn btn-sm btn-danger">{{ 'common.view'|trans({}, 'messages') }}</a>
        </div>
    </div>
</div>

{# Workflow Instances Table #}
<h2>{{ 'workflow.section.recent_instances'|trans({}, 'workflows') }}</h2>

{% embed '_components/_table.html.twig' with {
    'wrapperClass': 'table-container',
    'noMargin': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'workflow.field.entity'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.workflow'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.current_step'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.status'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.initiated_by'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.due_date'|trans({}, 'workflows') }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for instance in instances|slice(0, 20) %}
        <tr>
            <td><strong>{{ instance.entityType|split('\\')|last }} #{{ instance.entityId }}</strong></td>
            <td>
                <span class="badge bg-info">{{ instance.workflow ? instance.workflow.name : '-' }}</span>
            </td>
            <td>{{ instance.currentStep ? instance.currentStep.name : '-' }}</td>
            <td>
                {% set statusColors = {
                    'pending': 'warning',
                    'in_progress': 'info',
                    'approved': 'success',
                    'rejected': 'danger',
                    'cancelled': 'secondary'
                } %}
                <span class="badge bg-{{ statusColors[instance.status] ?? 'secondary' }}">
                    {{ ('workflow.status.' ~ instance.status)|trans({}, 'workflows') }}
                </span>
            </td>
            <td>{{ instance.initiatedBy ? (instance.initiatedBy.firstName ~ ' ' ~ instance.initiatedBy.lastName) : '-' }}</td>
            <td>
                {% if instance.dueDate %}
                    {{ instance.dueDate|date('d.m.Y') }}
                    {% if instance.dueDate < date() and instance.status not in ['approved', 'rejected', 'cancelled'] %}
                        <span class="badge bg-danger ms-1">
                            {{ 'workflow.badge.overdue'|trans({}, 'workflows') }}
                        </span>
                    {% endif %}
                {% else %}
                    <span class="text-muted">-</span>
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('app_workflow_instance_show', {id: instance.id}) }}" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye" aria-hidden="true"></i> {{ 'common.view'|trans({}, 'messages') }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center text-muted p-4">
                {{ 'workflow.message.no_instances'|trans({}, 'workflows') }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
{% endblock %}

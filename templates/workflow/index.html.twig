{% extends 'base.html.twig' %}
{% trans_default_domain 'workflows' %}

{% block title %}{{ 'workflow.title.list'|trans({}, 'messages') }} - Little ISMS Helper{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}

<div class="page-header">
    <div>
        <h1>{{ 'workflow.title.list'|trans({}, 'messages') }}</h1>
        <p class="text-muted">{{ 'workflow.description.overview'|trans({}, 'messages') }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_workflow_definitions') }}" class="btn btn-secondary">
            üìã {{ 'workflow.action.definitions'|trans({}, 'messages') }}
        </a>
        <a href="{{ path('app_workflow_new') }}" class="btn btn-primary">
            ‚ûï {{ 'workflow.action.create'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.total'|trans({}, 'messages'), instances|length, null, null, null, null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.active'|trans({}, 'messages'), instances|filter(i => i.status == 'active')|length, null, null, 'info', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.pending'|trans({}, 'messages'), instances|filter(i => i.status == 'pending')|length, null, null, 'warning', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.overdue'|trans({}, 'messages'), instances|filter(i => i.overdue)|length, null, null, 'danger', null) }}
    </div>
</div>

{# Quick Links #}
<div class="module-grid mb-4">
    <div class="card">
        <div class="fs-2-mb-sm">‚è≥</div>
        <h2>{{ 'workflow.section.pending'|trans({}, 'messages') }}</h2>
        <p class="text-muted-mt-xs">
            {{ 'workflow.description.pending'|trans({}, 'messages') }}
        </p>
        <div class="mt-2">
            <strong class="fs-4">{{ instances|filter(i => i.status == 'pending')|length }}</strong>
        </div>
        <div class="mt-2">
            <a href="{{ path('app_workflow_pending') }}" class="btn btn-sm">{{ 'common.view'|trans({}, 'messages') }}</a>
        </div>
    </div>

    <div class="card">
        <div class="fs-2-mb-sm">üîÑ</div>
        <h2>{{ 'workflow.section.active'|trans({}, 'messages') }}</h2>
        <p class="text-muted-mt-xs">
            {{ 'workflow.description.active'|trans({}, 'messages') }}
        </p>
        <div class="mt-2">
            <strong class="fs-4">{{ instances|filter(i => i.status == 'active')|length }}</strong>
        </div>
        <div class="mt-2">
            <a href="{{ path('app_workflow_active') }}" class="btn btn-sm">{{ 'common.view'|trans({}, 'messages') }}</a>
        </div>
    </div>

    <div class="card">
        <div class="fs-2-mb-sm">‚ö†Ô∏è</div>
        <h3>{{ 'workflow.section.overdue'|trans({}, 'messages') }}</h3>
        <p class="text-muted-mt-xs">
            {{ 'workflow.description.overdue'|trans({}, 'messages') }}
        </p>
        <div class="mt-2">
            <strong class="fs-15-danger">{{ instances|filter(i => i.overdue)|length }}</strong>
        </div>
        <div class="mt-2">
            <a href="{{ path('app_workflow_overdue') }}" class="btn btn-sm btn-danger">{{ 'common.view'|trans({}, 'messages') }}</a>
        </div>
    </div>
</div>

{# Workflow Instances Table #}
<h2>{{ 'workflow.section.recent_instances'|trans({}, 'messages') }}</h2>

{% embed '_components/_table.html.twig' with {
    'wrapperClass': 'table-container',
    'noMargin': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'workflow.field.name'|trans({}, 'messages') }}</th>
            <th scope="col">{{ 'workflow.field.definition'|trans({}, 'messages') }}</th>
            <th scope="col">{{ 'workflow.field.current_step'|trans({}, 'messages') }}</th>
            <th scope="col">{{ 'workflow.field.status'|trans({}, 'messages') }}</th>
            <th scope="col">{{ 'workflow.field.assignee'|trans({}, 'messages') }}</th>
            <th scope="col">{{ 'workflow.field.due_date'|trans({}, 'messages') }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for instance in instances|slice(0, 20) %}
        <tr>
            <td><strong>{{ instance.name }}</strong></td>
            <td>
                <span class="badge bg-info">{{ instance.definition ? instance.definition.name : '-' }}</span>
            </td>
            <td>{{ instance.currentStep ? instance.currentStep.name : '-' }}</td>
            <td>
                {% set statusColors = {
                    'pending': 'warning',
                    'active': 'info',
                    'completed': 'success',
                    'cancelled': 'secondary'
                } %}
                <span class="badge badge-{{ statusColors[instance.status] ?? 'secondary' }}">
                    {{ ('workflow.status.' ~ instance.status)|trans }}
                </span>
            </td>
            <td>{{ instance.assignee ? instance.assignee.fullName : '-' }}</td>
            <td>
                {% if instance.dueDate %}
                    {{ instance.dueDate|date('d.m.Y') }}
                    {% if instance.overdue %}
                        <span class="badge bg-danger ml-xs">
                            {{ 'workflow.badge.overdue'|trans({}, 'messages') }}
                        </span>
                    {% endif %}
                {% else %}
                    <span class="text-muted">-</span>
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('app_workflow_instance_show', {id: instance.id}) }}" class="btn btn-sm">
                    üëÅ {{ 'common.view'|trans({}, 'messages') }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center-p-xl-muted">
                {{ 'workflow.message.no_instances'|trans({}, 'messages') }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
{% endblock %}

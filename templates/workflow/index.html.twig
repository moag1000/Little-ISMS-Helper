{% extends 'base.html.twig' %}
{% trans_default_domain 'workflows' %}

{% block title %}{{ 'workflow.title.list'|trans({}, 'workflows') }} - Little ISMS Helper{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}
{% import '_macros/workflow.html.twig' as workflow_macros %}

<div class="container-fluid py-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.workflows'|trans({}, 'nav') }
        ]
    } %}
</div>

<div class="page-header">
    <div>
        <h1>{{ 'workflow.title.list'|trans({}, 'workflows') }}</h1>
        <p class="text-muted">{{ 'workflow.description.overview'|trans({}, 'workflows') }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_workflow_definitions') }}" class="btn btn-secondary">
            <i class="bi bi-list-check" aria-hidden="true"></i> {{ 'workflow.action.definitions'|trans({}, 'workflows') }}
        </a>
        <a href="{{ path('app_workflow_pending') }}" class="btn btn-primary">
            <i class="bi bi-hourglass-split" aria-hidden="true"></i> {{ 'workflow.action.pending'|trans({}, 'workflows') }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.total'|trans({}, 'workflows'), statistics.total, null, null, null, null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.in_progress'|trans({}, 'workflows'), statistics.in_progress, null, null, 'info', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.pending'|trans({}, 'workflows'), statistics.pending, null, null, 'warning', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.approved'|trans({}, 'workflows'), statistics.approved, null, null, 'success', null) }}
    </div>
</div>

{# Quick Links #}
<div class="module-grid mb-4">
    {% embed '_components/_card.html.twig' %}
        {% block card_body %}
            <div class="fs-2-mb-sm"><i class="bi bi-hourglass-split" aria-hidden="true"></i></div>
            <h2>{{ 'workflow.section.pending'|trans({}, 'workflows') }}</h2>
            <p class="text-muted-mt-xs">
                {{ 'workflow.description.pending'|trans({}, 'workflows') }}
            </p>
            <div class="mt-2">
                <strong class="fs-4">{{ statistics.pending }}</strong>
            </div>
            <div class="mt-2">
                <a href="{{ path('app_workflow_pending') }}" class="btn btn-sm">{{ 'common.view'|trans({}, 'messages') }}</a>
            </div>
        {% endblock %}
    {% endembed %}

    {% embed '_components/_card.html.twig' %}
        {% block card_body %}
            <div class="fs-2-mb-sm"><i class="bi bi-arrow-clockwise" aria-hidden="true"></i></div>
            <h2>{{ 'workflow.section.in_progress'|trans({}, 'workflows') }}</h2>
            <p class="text-muted-mt-xs">
                {{ 'workflow.description.in_progress'|trans({}, 'workflows') }}
            </p>
            <div class="mt-2">
                <strong class="fs-4">{{ statistics.in_progress }}</strong>
            </div>
            <div class="mt-2">
                <a href="{{ path('app_workflow_active') }}" class="btn btn-sm">{{ 'common.view'|trans({}, 'messages') }}</a>
            </div>
        {% endblock %}
    {% endembed %}

    {% embed '_components/_card.html.twig' %}
        {% block card_body %}
            <div class="fs-2-mb-sm"><i class="bi bi-exclamation-triangle" aria-hidden="true"></i></div>
            <h2>{{ 'workflow.section.overdue'|trans({}, 'workflows') }}</h2>
            <p class="text-muted-mt-xs">
                {{ 'workflow.description.overdue'|trans({}, 'workflows') }}
            </p>
            <div class="mt-2">
                <strong class="fs-15-danger">{{ instances|filter(i => i.overdue)|length }}</strong>
            </div>
            <div class="mt-2">
                <a href="{{ path('app_workflow_overdue') }}" class="btn btn-sm btn-danger">{{ 'common.view'|trans({}, 'messages') }}</a>
            </div>
        {% endblock %}
    {% endembed %}
</div>

{# Workflow Instances Table #}
<h2>{{ 'workflow.section.recent_instances'|trans({}, 'workflows') }}</h2>

{% embed '_components/_table.html.twig' with {
    'wrapperClass': 'table-container',
    'noMargin': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'workflow.field.entity'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.workflow'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.current_step'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.status'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.initiated_by'|trans({}, 'workflows') }}</th>
            <th scope="col">{{ 'workflow.field.due_date'|trans({}, 'workflows') }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for instance in instances|slice(0, 20) %}
        <tr>
            <td><strong>{{ instance.entityType|split('\\')|last }} #{{ instance.entityId }}</strong></td>
            <td>
                {% include '_components/_badge.html.twig' with { variant: 'info', content: instance.workflow ? instance.workflow.name : '-' } %}
            </td>
            <td>{{ instance.currentStep ? instance.currentStep.name : '-' }}</td>
            <td>
                {% set statusColors = {
                    'pending': 'warning',
                    'in_progress': 'info',
                    'approved': 'success',
                    'rejected': 'danger',
                    'cancelled': 'secondary'
                } %}
                {% include '_components/_badge.html.twig' with { variant: statusColors[instance.status] ?? 'secondary', content: ('workflow.status.' ~ instance.status)|trans({}, 'workflows') } %}
                {% if instance.status == 'in_progress' and hasEligibleApprovers[instance.id] is defined and not hasEligibleApprovers[instance.id] %}
                    {% include '_components/_badge.html.twig' with { variant: 'danger', class: 'ms-1', title: 'workflow.warning.no_eligible_approvers'|trans({}, 'workflows'), icon: 'bi-person-exclamation' } %}
                {% endif %}
            </td>
            <td>{{ instance.initiatedBy ? (instance.initiatedBy.firstName ~ ' ' ~ instance.initiatedBy.lastName) : '-' }}</td>
            <td>
                {% if instance.dueDate %}
                    {{ instance.dueDate|date('d.m.Y') }}
                    {% if instance.dueDate < date() and instance.status not in ['approved', 'rejected', 'cancelled'] %}
                        {% include '_components/_badge.html.twig' with { variant: 'danger', class: 'ms-1', content: 'workflow.badge.overdue'|trans({}, 'workflows') } %}
                    {% endif %}
                {% else %}
                    <span class="text-muted">-</span>
                {% endif %}
            </td>
            <td class="text-center">
                <div class="btn-group" role="group">
                    {% if instance.status in ['pending', 'in_progress'] and (userCanApprove[instance.id] ?? false) %}
                        <button type="button"
                                class="btn btn-sm btn-success"
                                data-bs-toggle="modal"
                                data-bs-target="#approveWorkflow{{ instance.id }}"
                                title="{{ 'workflow.widget.action.approve'|trans({}, 'workflows') }}">
                            <i class="bi bi-check-lg" aria-hidden="true"></i>
                        </button>
                        <button type="button"
                                class="btn btn-sm btn-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#rejectWorkflow{{ instance.id }}"
                                title="{{ 'workflow.widget.action.reject'|trans({}, 'workflows') }}">
                            <i class="bi bi-x-lg" aria-hidden="true"></i>
                        </button>
                    {% endif %}
                    <a href="{{ path('app_workflow_instance_show', {id: instance.id}) }}"
                       class="btn btn-sm btn-outline-primary"
                       title="{{ 'common.view'|trans({}, 'messages') }}">
                        <i class="bi bi-eye" aria-hidden="true"></i>
                    </a>
                </div>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center text-muted p-4">
                {{ 'workflow.message.no_instances'|trans({}, 'workflows') }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}

{# Modals for Approve/Reject Actions #}
{% for instance in instances|slice(0, 20) %}
    {% if instance.status in ['pending', 'in_progress'] and (userCanApprove[instance.id] ?? false) %}
        {# Approve Modal #}
        <div class="modal fade" id="approveWorkflow{{ instance.id }}" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form method="post" action="{{ path('app_workflow_instance_approve', {id: instance.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ instance.id) }}">
                        <div class="modal-header">
                            <h2 class="modal-title h5">
                                <i class="bi bi-check-circle" aria-hidden="true"></i>
                                {{ 'workflow.widget.action.approve'|trans({}, 'workflows') }}
                            </h2>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>{{ 'workflow.widget.confirm.approve'|trans({workflow: instance.workflow.name}, 'workflows') }}</p>
                            <div class="alert alert-info mb-3">
                                <strong>{{ 'workflow.field.entity'|trans({}, 'workflows') }}:</strong>
                                {{ instance.entityType|split('\\')|last }} #{{ instance.entityId }}
                            </div>
                            <div class="mb-3">
                                <label class="form-label">
                                    {{ 'workflow.widget.field.comments'|trans({}, 'workflows') }}
                                    <span class="text-muted">({{ 'common.optional'|trans({}, 'messages') }})</span>
                                </label>
                                <textarea class="form-control" name="comments" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                {{ 'workflow.action.cancel'|trans({}, 'workflows') }}
                            </button>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg" aria-hidden="true"></i>
                                {{ 'workflow.widget.action.approve'|trans({}, 'workflows') }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        {# Reject Modal #}
        <div class="modal fade" id="rejectWorkflow{{ instance.id }}" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <form method="post" action="{{ path('app_workflow_instance_reject', {id: instance.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ instance.id) }}">
                        <div class="modal-header bg-danger text-white">
                            <h2 class="modal-title h5">
                                <i class="bi bi-x-circle" aria-hidden="true"></i>
                                {{ 'workflow.widget.action.reject'|trans({}, 'workflows') }}
                            </h2>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>{{ 'workflow.widget.confirm.reject'|trans({workflow: instance.workflow.name}, 'workflows') }}</p>
                            <div class="alert alert-warning mb-3">
                                <strong>{{ 'workflow.field.entity'|trans({}, 'workflows') }}:</strong>
                                {{ instance.entityType|split('\\')|last }} #{{ instance.entityId }}
                            </div>
                            <div class="mb-3">
                                <label class="form-label">
                                    {{ 'workflow.widget.field.reason'|trans({}, 'workflows') }}
                                    <span class="text-danger">*</span>
                                </label>
                                <textarea class="form-control" name="comments" rows="4" required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                {{ 'workflow.action.cancel'|trans({}, 'workflows') }}
                            </button>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-x-lg" aria-hidden="true"></i>
                                {{ 'workflow.widget.action.reject'|trans({}, 'workflows') }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}
{% endfor %}

{% endblock %}

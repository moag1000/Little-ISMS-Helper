{% extends 'base.html.twig' %}

{% block title %}{{ 'workflow.title.overdue'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}

<div class="page-header">
    <div>
        <h1>{{ 'workflow.title.overdue'|trans }}</h1>
        <p class="text-muted">{{ 'workflow.description.overdue_detail'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_workflow_index') }}" class="btn btn-secondary">
            ‚Üê {{ 'common.back'|trans }}
        </a>
    </div>
</div>

{# Alert Banner #}
{% if overdueInstances|length > 0 %}
<div class="info-box mb-4 alert-danger-border">
    <p><strong>‚ö†Ô∏è {{ 'workflow.warning.overdue_count'|trans({'%count%': overdueInstances|length}) }}</strong></p>
    <p class="mt-xs">{{ 'workflow.warning.overdue_message'|trans }}</p>
</div>
{% endif %}

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.overdue'|trans, overdueInstances|length, null, null, 'danger', 'border-danger') }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.my_overdue'|trans, overdueInstances|filter(i => i.assignee and i.assignee.id == app.user.id)|length, null, null, 'warning', null) }}
    </div>
    <div class="col-auto">
        {% set totalDaysOverdue = 0 %}
        {% for instance in overdueInstances %}
            {% set daysOverdue = ('now'|date('U') - instance.dueDate.timestamp) / 86400 %}
            {% set totalDaysOverdue = totalDaysOverdue + daysOverdue %}
        {% endfor %}
        {{ cards.kpi_card('workflow.stats.overdue_days_avg'|trans, overdueInstances|length > 0 ? (totalDaysOverdue / overdueInstances|length)|round : 0, null, null, 'info', null) }}
    </div>
    <div class="col-auto">
        {% set criticalOverdue = 0 %}
        {% for instance in overdueInstances %}
            {% set daysOverdue = ('now'|date('U') - instance.dueDate.timestamp) / 86400 %}
            {% if daysOverdue > 7 %}
                {% set criticalOverdue = criticalOverdue + 1 %}
            {% endif %}
        {% endfor %}
        {{ cards.kpi_card('workflow.stats.critical_overdue'|trans, criticalOverdue, null, null, 'danger', null) }}
    </div>
</div>

{# Overdue Workflows Table #}
{% embed '_components/_table.html.twig' with {
    'class': 'table-container',
    'noMargin': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'workflow.field.name'|trans }}</th>
            <th scope="col">{{ 'workflow.field.definition'|trans }}</th>
            <th scope="col">{{ 'workflow.field.current_step'|trans }}</th>
            <th scope="col">{{ 'workflow.field.assignee'|trans }}</th>
            <th scope="col">{{ 'workflow.field.due_date'|trans }}</th>
            <th scope="col" class="text-center">{{ 'workflow.field.days_overdue'|trans }}</th>
            <th scope="col">{{ 'workflow.field.priority'|trans }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for instance in overdueInstances %}
        {% set daysOverdue = ('now'|date('U') - instance.dueDate.timestamp) / 86400 %}
        <tr class="{% if daysOverdue > 7 %}table-danger{% else %}table-warning{% endif %}">
            <td>
                <strong>{{ instance.name }}</strong>
                {% if daysOverdue > 7 %}
                    <span class="badge bg-danger ml-xs">
                        {{ 'workflow.badge.critical'|trans }}
                    </span>
                {% endif %}
            </td>
            <td>
                <span class="badge bg-info">{{ instance.definition ? instance.definition.name : '-' }}</span>
            </td>
            <td>
                {{ instance.currentStep ? instance.currentStep.name : '-' }}
                <br><small class="text-muted">
                    {{ ('workflow.status.' ~ instance.status)|trans }}
                </small>
            </td>
            <td>
                {% if instance.assignee %}
                    {{ instance.assignee.fullName }}
                    {% if instance.assignee.id == app.user.id %}
                        <span class="badge bg-success ml-xs">
                            {{ 'workflow.badge.my_task'|trans }}
                        </span>
                    {% endif %}
                {% else %}
                    <span class="text-muted">{{ 'workflow.message.unassigned'|trans }}</span>
                {% endif %}
            </td>
            <td>
                {{ instance.dueDate|date('d.m.Y H:i') }}
            </td>
            <td class="text-center">
                <span class="badge bg-danger fw-bold">
                    {{ daysOverdue|round }} {{ 'workflow.days'|trans }}
                </span>
            </td>
            <td>
                {% set priorityColors = {
                    'low': 'secondary',
                    'medium': 'info',
                    'high': 'warning',
                    'critical': 'danger'
                } %}
                <span class="badge badge-{{ priorityColors[instance.priority] ?? 'secondary' }}">
                    {{ ('workflow.priority.' ~ instance.priority)|trans }}
                </span>
            </td>
            <td class="text-center">
                <a href="{{ path('app_workflow_instance_show', {id: instance.id}) }}" class="btn btn-sm">
                    üëÅ {{ 'common.view'|trans }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="8" class="text-center-p-xl-muted">
                <div class="fs-2-mb-sm">‚úÖ</div>
                <p><strong>{{ 'workflow.message.no_overdue'|trans }}</strong></p>
                <p class="text-muted-mt-xs">
                    {{ 'workflow.message.no_overdue_desc'|trans }}
                </p>
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'workflow.title.definitions'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="page-header">
    <div>
        <h1>{{ 'workflow.title.definitions'|trans }}</h1>
        <p class="text-muted">{{ 'workflow.description.definitions'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_workflow_index') }}" class="btn btn-secondary">
            ‚Üê {{ 'common.back'|trans }}
        </a>
        <a href="{{ path('app_workflow_definition_new') }}" class="btn btn-primary">
            ‚ûï {{ 'workflow.action.create_definition'|trans }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="kpi-card">
        <div class="icon">üìã</div>
        <div class="label">{{ 'workflow.stats.total_definitions'|trans }}</div>
        <div>
            <span class="value">{{ workflows|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">‚úÖ</div>
        <div class="label">{{ 'workflow.stats.active_definitions'|trans }}</div>
        <div>
            <span class="value">{{ workflows|filter(w => w.isActive)|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">üîÑ</div>
        <div class="label">{{ 'workflow.stats.avg_steps'|trans }}</div>
        <div>
            {% set totalSteps = 0 %}
            {% for workflow in workflows %}
                {% set totalSteps = totalSteps + workflow.steps|length %}
            {% endfor %}
            <span class="value">{{ workflows|length > 0 ? (totalSteps / workflows|length)|round : 0 }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">üìä</div>
        <div class="label">{{ 'workflow.stats.entity_types'|trans }}</div>
        <div>
            <span class="value">{{ workflows|map(w => w.entityType)|unique|length }}</span>
        </div>
    </div>
</div>

{# Definitions Table #}
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>{{ 'workflow.field.definition_name'|trans }}</th>
                <th>{{ 'workflow.field.description'|trans }}</th>
                <th class="text-center">{{ 'workflow.field.steps'|trans }}</th>
                <th class="text-center">{{ 'workflow.field.instances'|trans }}</th>
                <th class="text-center">{{ 'workflow.field.active'|trans }}</th>
                <th class="text-center">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for workflow in workflows %}
            <tr>
                <td>
                    <strong>{{ workflow.name }}</strong>
                    <br><small class="text-muted-color">{{ workflow.entityType }}</small>
                </td>
                <td>
                    <small class="text-muted-color">
                        {{ workflow.description|default('-') }}
                    </small>
                </td>
                <td class="text-center">
                    <span class="badge badge-info">{{ workflow.steps|length }}</span>
                </td>
                <td class="text-center">
                    <span class="badge badge-secondary">‚Äî</span>
                </td>
                <td class="text-center">
                    {% if workflow.isActive %}
                        <span class="badge badge-success">‚úì</span>
                    {% else %}
                        <span class="badge badge-secondary">‚úó</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <a href="{{ path('app_workflow_definition_show', {id: workflow.id}) }}" class="btn btn-sm mr-025">
                        üëÅ {{ 'common.view'|trans }}
                    </a>
                    <a href="{{ path('app_workflow_definition_edit', {id: workflow.id}) }}" class="btn btn-sm btn-secondary">
                        ‚úèÔ∏è {{ 'common.edit'|trans }}
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6" class="text-center-p-xl-muted">
                    {{ 'workflow.message.no_definitions'|trans }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

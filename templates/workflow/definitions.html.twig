{% extends 'base.html.twig' %}
{% trans_default_domain 'workflows' %}

{% block title %}{{ 'workflow.title.definitions'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}

<div class="page-header">
    <div>
        <h1>{{ 'workflow.title.definitions'|trans }}</h1>
        <p class="text-muted">{{ 'workflow.description.definitions'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_workflow_index') }}" class="btn btn-secondary">
            ‚Üê {{ 'common.back'|trans({}, 'messages') }}
        </a>
        <a href="{{ path('app_workflow_definition_new') }}" class="btn btn-primary">
            ‚ûï {{ 'workflow.action.create_definition'|trans }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.total_definitions'|trans, workflows|length, null, null, 'primary', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('workflow.stats.active_definitions'|trans, workflows|filter(w => w.isActive)|length, null, null, 'success', null) }}
    </div>
    <div class="col-auto">
        {% set totalSteps = 0 %}
        {% for workflow in workflows %}
            {% set totalSteps = totalSteps + workflow.steps|length %}
        {% endfor %}
        {{ cards.kpi_card('workflow.stats.avg_steps'|trans, workflows|length > 0 ? (totalSteps / workflows|length)|round : 0, null, null, 'info', null) }}
    </div>
    <div class="col-auto">
        {% set entityTypes = [] %}
        {% for w in workflows %}
            {% if w.entityType not in entityTypes %}
                {% set entityTypes = entityTypes|merge([w.entityType]) %}
            {% endif %}
        {% endfor %}
        {{ cards.kpi_card('workflow.stats.entity_types'|trans, entityTypes|length, null, null, 'secondary', null) }}
    </div>
</div>

{# Definitions Table #}
{% embed '_components/_table.html.twig' with {
    'class': 'table-container',
    'noMargin': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'workflow.field.definition_name'|trans }}</th>
            <th scope="col">{{ 'workflow.field.description'|trans }}</th>
            <th scope="col" class="text-center">{{ 'workflow.field.steps'|trans }}</th>
            <th scope="col" class="text-center">{{ 'workflow.field.instances'|trans }}</th>
            <th scope="col" class="text-center">{{ 'workflow.field.active'|trans }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for workflow in workflows %}
        <tr>
            <td>
                <strong>{{ workflow.name }}</strong>
                <br><small class="text-muted-color">{{ workflow.entityType }}</small>
            </td>
            <td>
                <small class="text-muted-color">
                    {{ workflow.description|default('-') }}
                </small>
            </td>
            <td class="text-center">
                <span class="badge bg-info">{{ workflow.steps|length }}</span>
            </td>
            <td class="text-center">
                <span class="badge bg-secondary">‚Äî</span>
            </td>
            <td class="text-center">
                {% if workflow.isActive %}
                    <span class="badge bg-success">‚úì</span>
                {% else %}
                    <span class="badge bg-secondary">‚úó</span>
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('app_workflow_definition_show', {id: workflow.id}) }}" class="btn btn-sm mr-025">
                    üëÅ {{ 'common.view'|trans({}, 'messages') }}
                </a>
                <a href="{{ path('app_workflow_definition_edit', {id: workflow.id}) }}" class="btn btn-sm btn-secondary">
                    ‚úèÔ∏è {{ 'common.edit'|trans({}, 'messages') }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6" class="text-center-p-xl-muted">
                {{ 'workflow.message.no_definitions'|trans }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'risk_appetite' %}

{% block title %}{{ 'risk_appetite.new'|trans }} - {{ 'app.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
<div class="page-header">
    <div>
        <h1><i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'risk_appetite.new'|trans }}</h1>
        <p class="text-muted">{{ 'risk_appetite.new_description'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_risk_appetite_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{{ form_start(form) }}

{# Risk Definition #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-bar-chart" aria-hidden="true"></i>
        {{ 'risk_appetite.section.definition'|trans }}
    </legend>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.category,
                'label': form.category.vars.label|default('risk_appetite.field.category'|trans),
                'help': 'risk_appetite.help.category_empty'|trans,
                'required': true
            } %}
        </div>
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.maxAcceptableRisk,
                'label': form.maxAcceptableRisk.vars.label|default('risk_appetite.field.max_acceptable_risk'|trans)
            } %}
        </div>
        <div class="col-12">
            {% include '_components/_form_field.html.twig' with {
                'field': form.description,
                'label': form.description.vars.label|default('risk_appetite.field.description'|trans)
            } %}
        </div>
    </div>
</fieldset>

{# Approval Information #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-check-circle" aria-hidden="true"></i>
        {{ 'risk_appetite.section.approval'|trans }}
    </legend>

    <div class="row">
        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.isActive,
                'label': form.isActive.vars.label|default('risk_appetite.field.is_active'|trans)
            } %}
        </div>
        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.approvedBy,
                'label': form.approvedBy.vars.label|default('risk_appetite.field.approved_by'|trans)
            } %}
        </div>
        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.approvedAt,
                'label': form.approvedAt.vars.label|default('risk_appetite.field.approved_at'|trans)
            } %}
        </div>
    </div>
</fieldset>

<div class="alert alert-info">
    <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'risk_appetite.info.iso27005'|trans }}
</div>

<div class="form-actions">
    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'common.create'|trans({}, 'messages') }}
    </button>
    <a href="{{ path('app_risk_appetite_index') }}" class="btn btn-secondary">
        {{ 'common.cancel'|trans({}, 'messages') }}
    </a>
</div>

{{ form_end(form) }}

<style>
.page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-xl);
}

.button-group {
    display: flex;
    gap: var(--spacing-sm);
}

.form-actions {
    margin-top: var(--spacing-lg);
    display: flex;
    gap: var(--spacing-sm);
}
</style>
{% endblock %}

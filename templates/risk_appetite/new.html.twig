{% extends 'base.html.twig' %}
{% trans_default_domain 'risk_appetite' %}

{% block title %}{{ 'risk_appetite.new'|trans({}, 'risk_appetite')}}{% endblock %}

{% block body %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.risk_appetite'|trans({}, 'nav'), url: path('app_risk_appetite_index') },
            { label: 'risk_appetite.new'|trans({}, 'risk_appetite')}
        ]
    } %}

    <div class="page-header">
        <h1>{{ 'risk_appetite.new'|trans({}, 'risk_appetite')}}</h1>
        <a href="{{ path('app_risk_appetite_index') }}" class="btn btn-secondary">{{ 'common.back_to_list'|trans({}, 'messages') }}</a>
    </div>

    {% embed '_components/_card.html.twig' %}
        {% block card_body %}
            {{ form_start(form) }}
                {% include '_components/_auto_form.html.twig' with {
                    'form': form,
                    'sections': {
                        'definition': {
                            'label': 'risk_appetite.section.definition'|trans({}, 'risk_appetite'),
                            'fields': ['category', 'maxAcceptableRisk', 'description']
                        },
                        'approval': {
                            'label': 'risk_appetite.section.approval'|trans({}, 'risk_appetite'),
                            'fields': ['isActive', 'approvedBy', 'approvedAt']
                        }
                    },
                    'col_widths': {
                        'category': 6,
                        'maxAcceptableRisk': 6,
                        'description': 12,
                        'isActive': 4,
                        'approvedBy': 4,
                        'approvedAt': 4
                    },
                    'help_texts': {
                        'category': 'risk_appetite.help.category'|trans({}, 'risk_appetite'),
                        'maxAcceptableRisk': 'risk_appetite.help.max_acceptable_risk'|trans({}, 'risk_appetite'),
                        'description': 'risk_appetite.help.description'|trans({}, 'risk_appetite'),
                        'isActive': 'risk_appetite.help.is_active'|trans({}, 'risk_appetite'),
                        'approvedBy': 'risk_appetite.help.approved_by'|trans({}, 'risk_appetite'),
                        'approvedAt': 'risk_appetite.help.approved_at'|trans({}, 'risk_appetite')}
                } %}

                <div class="alert alert-info mt-4">
                    {{ 'risk_appetite.info.iso27005'|trans({}, 'risk_appetite')}}
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_risk_appetite_index') }}" class="btn btn-secondary">
                        {{ 'common.cancel'|trans({}, 'messages') }}
                    </a>
                    <button type="submit" class="btn btn-primary">
                        {{ 'common.create'|trans({}, 'messages') }}
                    </button>
                </div>
            {{ form_end(form) }}
        {% endblock %}
    {% endembed %}
</div>
{% endblock %}

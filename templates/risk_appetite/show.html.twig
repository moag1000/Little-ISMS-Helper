{% extends 'base.html.twig' %}
{% trans_default_domain 'risk_appetite' %}

{% block title %}{{ appetite.displayName }} - {{ 'risk_appetite.title'|trans({}, 'risk_appetite') }}{% endblock %}

{% block body %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.risks'|trans({}, 'nav'), url: path('app_risk_index') },
            { label: 'nav.risk_appetite'|trans({}, 'nav'), url: path('app_risk_appetite_index') },
            { label: appetite.displayName }
        ]
    } %}
</div>

<div class="page-header">
    <div>
        <h1>
            <i class="bi bi-speedometer2" aria-hidden="true"></i>
            {% if appetite.isGlobal() %}
                <i class="bi bi-globe" aria-hidden="true"></i> {{ 'risk_appetite.category.global'|trans({}, 'risk_appetite') }}
            {% else %}
                {{ appetite.category }} {{ 'risk_appetite.title_singular'|trans({}, 'risk_appetite') }}
            {% endif %}
        </h1>
        <p class="text-muted">
            {{ 'risk_appetite.show.subtitle'|trans({}, 'risk_appetite') }}
            {% if appetite.isActive() %}
                {% include '_components/_badge.html.twig' with { variant: 'success', content: 'risk_appetite.status.active'|trans({}, 'risk_appetite'), class: 'ms-2' } %}
            {% else %}
                {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'risk_appetite.status.inactive'|trans({}, 'risk_appetite'), class: 'ms-2' } %}
            {% endif %}
            {% if appetite.isApproved() %}
                {% include '_components/_badge.html.twig' with { variant: 'info', content: 'risk_appetite.approved'|trans({}, 'risk_appetite'), class: 'ms-2' } %}
            {% endif %}
        </p>
    </div>
    <div class="button-group">
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_risk_appetite_edit', {id: appetite.id}) }}" class="btn btn-primary">
            <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'common.edit'|trans({}, 'messages') }}
        </a>
        {% endif %}
        <a href="{{ path('app_risk_appetite_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{# Key Metrics #}
<div class="row mb-4">
    <div class="col-md-3">
        <div class="info-card">
            <div class="info-label">{{ 'risk_appetite.field.max_acceptable_risk'|trans({}, 'risk_appetite') }}</div>
            <div class="info-value">
                {% include '_components/_badge.html.twig' with {
                    variant: appetite.maxAcceptableRisk <= 6 ? 'success' : (appetite.maxAcceptableRisk <= 12 ? 'warning' : 'danger'),
                    content: appetite.maxAcceptableRisk,
                    class: 'fs-3'
                } %}
            </div>
            <small class="text-muted">{{ 'risk_appetite.scale'|trans({}, 'risk_appetite') }}: 1-25</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="info-card {{ risksWithinAppetite|length > 0 ? 'bg-success text-white' : '' }}">
            <div class="info-label">{{ 'risk_appetite.risks_within'|trans({}, 'risk_appetite') }}</div>
            <div class="info-value">{{ risksWithinAppetite|length }}</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="info-card {{ risksExceedingAppetite|length > 0 ? 'bg-danger text-white' : '' }}">
            <div class="info-label">{{ 'risk_appetite.risks_exceeding'|trans({}, 'risk_appetite') }}</div>
            <div class="info-value">{{ risksExceedingAppetite|length }}</div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="info-card">
            <div class="info-label">{{ 'risk_appetite.acceptance_rate'|trans({}, 'risk_appetite') }}</div>
            <div class="info-value">
                {% set totalRisks = risksWithinAppetite|length + risksExceedingAppetite|length %}
                {% if totalRisks > 0 %}
                    {{ ((risksWithinAppetite|length / totalRisks) * 100)|number_format(0) }}%
                {% else %}
                    N/A
                {% endif %}
            </div>
        </div>
    </div>
</div>

{# Appetite Details #}
{% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
    {% block card_header %}
        <div class="card-header">
            <h2><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'risk_appetite.section.details'|trans({}, 'risk_appetite') }}</h2>
        </div>
    {% endblock %}
    {% block card_body %}
        <div class="row">
            <div class="col-md-6">
                <div class="detail-item">
                    <strong>{{ 'risk_appetite.field.category'|trans({}, 'risk_appetite') }}:</strong>
                    {% if appetite.isGlobal() %}
                        {% include '_components/_badge.html.twig' with { variant: 'primary', content: 'risk_appetite.category.global'|trans({}, 'risk_appetite') } %}
                    {% else %}
                        {{ appetite.category }}
                    {% endif %}
                </div>

                <div class="detail-item">
                    <strong>{{ 'risk_appetite.field.approved_by'|trans({}, 'risk_appetite') }}:</strong>
                    {% if appetite.approvedBy %}
                        {{ appetite.approvedBy.fullName }} ({{ appetite.approvedBy.email }})
                    {% else %}
                        <span class="text-warning">{{ 'common.not_approved'|trans({}, 'messages') }}</span>
                    {% endif %}
                </div>
            </div>

            <div class="col-md-6">
                <div class="detail-item">
                    <strong>{{ 'risk_appetite.field.approved_at'|trans({}, 'risk_appetite') }}:</strong>
                    {% if appetite.approvedAt %}
                        {{ appetite.approvedAt|date('Y-m-d H:i:s') }}
                    {% else %}
                        <span class="text-warning">{{ 'common.not_approved'|trans({}, 'messages') }}</span>
                    {% endif %}
                </div>

                <div class="detail-item">
                    <strong>{{ 'risk_appetite.field.created_at'|trans({}, 'risk_appetite') }}:</strong>
                    {{ appetite.createdAt|date('Y-m-d H:i:s') }}
                </div>
            </div>
        </div>

        <hr>

        <div class="detail-item">
            <strong>{{ 'risk_appetite.field.description'|trans({}, 'risk_appetite') }}:</strong>
            <div class="mt-2">{{ appetite.description|nl2br }}</div>
        </div>
    {% endblock %}
{% endembed %}

{# Risks Exceeding Appetite #}
{% if risksExceedingAppetite|length > 0 %}
{% embed '_components/_card.html.twig' with { 'class': 'border-danger mb-4' } %}
    {% block card_header %}
        <div class="card-header bg-danger text-white">
            <h2><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'risk_appetite.risks_exceeding_title'|trans({}, 'risk_appetite') }} ({{ risksExceedingAppetite|length }})</h2>
        </div>
    {% endblock %}
    {% block card_body %}
        <p>{{ 'risk_appetite.risks_exceeding_description'|trans({}, 'risk_appetite') }}</p>
        {% embed '_components/_table.html.twig' with {
            'class': 'table-sm',
            'noMargin': true,
            'responsive': true
        } %}
            {% block table_head %}
                <tr>
                    <th scope="col">{{ 'risk.field.title'|trans({}, 'risk') }}</th>
                    <th scope="col" class="text-center">{{ 'risk.field.score'|trans({}, 'risk') }}</th>
                    <th scope="col" class="text-center">{{ 'risk_appetite.exceeds_by'|trans({}, 'risk_appetite') }}</th>
                    <th scope="col">{{ 'risk.field.treatment_strategy'|trans({}, 'risk') }}</th>
                    <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
                </tr>
            {% endblock %}
            {% block table_body %}
                {% for risk in risksExceedingAppetite %}
                <tr>
                    <td>{{ risk.title }}</td>
                    <td class="text-center">
                        {% include '_components/_badge.html.twig' with { variant: 'danger', content: risk.riskScore } %}
                    </td>
                    <td class="text-center">
                        <strong class="text-danger">+{{ risk.riskScore - appetite.maxAcceptableRisk }}</strong>
                    </td>
                    <td>
                        {% if risk.treatmentStrategy %}
                            {% include '_components/_badge.html.twig' with { variant: 'secondary', content: risk.treatmentStrategy } %}
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td class="text-center">
                        <a href="{{ path('app_risk_show', {id: risk.id}) }}" class="btn btn-sm btn-outline-primary" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                            <i class="bi bi-eye" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %}
{% endif %}

{# Risks Within Appetite #}
{% if risksWithinAppetite|length > 0 %}
{% embed '_components/_card.html.twig' with { 'class': 'border-success mb-4' } %}
    {% block card_header %}
        <div class="card-header bg-success text-white">
            <h2><i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'risk_appetite.risks_within_title'|trans({}, 'risk_appetite') }} ({{ risksWithinAppetite|length }})</h2>
        </div>
    {% endblock %}
    {% block card_body %}
        <p>{{ 'risk_appetite.risks_within_description'|trans({}, 'risk_appetite') }}</p>
        {% embed '_components/_table.html.twig' with {
            'class': 'table-sm',
            'noMargin': true,
            'responsive': true
        } %}
            {% block table_head %}
                <tr>
                    <th scope="col">{{ 'risk.field.title'|trans({}, 'risk') }}</th>
                    <th scope="col" class="text-center">{{ 'risk.field.score'|trans({}, 'risk') }}</th>
                    <th scope="col" class="text-center">{{ 'risk_appetite.appetite_percentage'|trans({}, 'risk_appetite') }}</th>
                    <th scope="col">{{ 'risk.field.status'|trans({}, 'risk') }}</th>
                    <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
                </tr>
            {% endblock %}
            {% block table_body %}
                {% for risk in risksWithinAppetite|slice(0, 10) %}
                <tr>
                    <td>{{ risk.title }}</td>
                    <td class="text-center">
                        {% include '_components/_badge.html.twig' with {
                            variant: risk.riskScore < 4 ? 'success' : (risk.riskScore < 8 ? 'info' : 'warning'),
                            content: risk.riskScore
                        } %}
                    </td>
                    <td class="text-center">
                        {% set percentage = appetite.getAppetitePercentage(risk.riskScore) %}
                        <div class="progress" style="height: 20px; min-width: 100px;">
                            <div class="progress-bar bg-{{ percentage >= 80 ? 'warning' : 'success' }}"
                                 role="progressbar"
                                 style="width: {{ percentage }}%"
                                 aria-valuenow="{{ percentage }}"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                {{ percentage|number_format(0) }}%
                            </div>
                        </div>
                    </td>
                    <td>
                        {% include '_components/_badge.html.twig' with { variant: 'secondary', content: risk.status } %}
                    </td>
                    <td class="text-center">
                        <a href="{{ path('app_risk_show', {id: risk.id}) }}" class="btn btn-sm btn-outline-primary" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                            <i class="bi bi-eye" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
                {% if risksWithinAppetite|length > 10 %}
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        {{ 'risk_appetite.and_more_risks'|trans({'%count%': risksWithinAppetite|length - 10}, 'risk_appetite') }}
                    </td>
                </tr>
                {% endif %}
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %}
{% endif %}

{# Audit Log History #}
{% if auditLogs is defined and auditLogs|length > 0 %}
{% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
    {% block card_header %}
        <div class="card-header">
            <h2><i class="bi bi-clock-history" aria-hidden="true"></i> {{ 'risk_appetite.section.history'|trans({}, 'risk_appetite') }} ({{ totalAuditLogs }} {{ 'audit_log.entries'|trans({}, 'audit_log') }})</h2>
        </div>
    {% endblock %}
    {% block card_body %}
        <div class="audit-log-list">
            {% for log in auditLogs %}
            <div class="audit-log-entry">
                <div class="audit-log-header">
                    {% include '_components/_badge.html.twig' with {
                        variant: log.action == 'create' ? 'success' : (log.action == 'update' ? 'info' : 'danger'),
                        content: log.action|upper
                    } %}
                    <span class="text-muted">
                        {{ log.userName|default('System') }}
                        &bull; {{ log.createdAt|date('Y-m-d H:i:s') }}
                    </span>
                </div>
                {% if log.action == 'update' %}
                    {% set oldValues = log.oldValuesArray %}
                    {% set newValues = log.newValuesArray %}
                    {% if oldValues and newValues %}
                        <div class="audit-log-changes">
                            {% for field, newValue in newValues %}
                                {% if oldValues[field] is defined and oldValues[field] != newValue %}
                                    <div class="change-item">
                                        <strong>{{ field }}:</strong>
                                        <span class="text-danger">{{ oldValues[field] }}</span>
                                        &rarr;
                                        <span class="text-success">{{ newValue }}</span>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% if totalAuditLogs > 10 %}
        <div class="text-center mt-3">
            <small class="text-muted">{{ 'audit_log.showing_recent'|trans({'%count%': 10, '%total%': totalAuditLogs}, 'audit') }}</small>
        </div>
        {% endif %}
    {% endblock %}
{% endembed %}
{% endif %}

{# Delete Section - Admin Only #}
{% if is_granted('ROLE_ADMIN') %}
{% embed '_components/_card.html.twig' with { 'class': 'border-danger' } %}
    {% block card_header %}
        <div class="card-header bg-danger text-white">
            <h2><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'common.danger_zone'|trans({}, 'messages') }}</h2>
        </div>
    {% endblock %}
    {% block card_body %}
        <p>{{ 'risk_appetite.delete.warning'|trans({}, 'risk_appetite') }}</p>
        <form method="post" action="{{ path('app_risk_appetite_delete', {id: appetite.id}) }}"
              data-controller="ui-actions"
              data-action="submit->ui-actions#confirm"
              data-ui-actions-message-param="{{ 'risk_appetite.delete.confirm'|trans({}, 'risk_appetite') }}">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ appetite.id) }}">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash" aria-hidden="true"></i> {{ 'common.delete'|trans({}, 'messages') }}
            </button>
        </form>
    {% endblock %}
{% endembed %}
{% endif %}

<style>
.page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-xl);
}

.button-group {
    display: flex;
    gap: var(--spacing-sm);
}

.info-card {
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: var(--spacing-lg);
    text-align: center;
    height: 100%;
}

.info-label {
    color: var(--color-text-light);
    font-size: 0.875rem;
    margin-bottom: var(--spacing-sm);
}

.info-value {
    font-size: 1.25rem;
    font-weight: bold;
}

.detail-item {
    margin-bottom: var(--spacing-md);
}

.audit-log-entry {
    border-left: 3px solid var(--color-border);
    padding-left: var(--spacing-md);
    margin-bottom: var(--spacing-md);
}

.audit-log-header {
    margin-bottom: var(--spacing-xs);
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
}

.audit-log-changes {
    font-size: 0.875rem;
    margin-top: var(--spacing-xs);
}

.change-item {
    margin-bottom: var(--spacing-xs);
}

.mb-4 {
    margin-bottom: var(--spacing-xl);
}
</style>
{% endblock %}

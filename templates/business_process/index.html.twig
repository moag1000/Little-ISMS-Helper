{% extends 'base.html.twig' %}
{% trans_default_domain 'business_process' %}
{% import '_macros/inheritance_badge.html.twig' as inheritance %}
{% import '_macros/cards.html.twig' as cards %}

{% block title %}{{ 'business_process.index.title'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.bcm'|trans({}, 'nav'), url: path('app_bcm_index') },
            { label: 'nav.business_processes'|trans({}, 'nav') }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ 'business_process.index.page_title'|trans }}</h1>
        <a href="{{ path('app_business_process_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'business_process.index.new_process'|trans }}
        </a>
    </div>

    {# Notifications Container for Turbo Streams #}
    <div id="notifications" class="mb-3"></div>

    {# View Filter #}
    {% if currentTenant %}
    {% embed '_components/_card.html.twig' with {
        'class': 'mb-3'
    } %}
        {% block card_body %}
            <form method="get" action="{{ path('app_business_process_index') }}" class="d-flex align-items-center gap-2">
                <label for="view-filter" class="mb-0 fw-bold">
                    <i class="bi bi-eye" aria-hidden="true"></i> {{ 'common.view'|trans({}, 'messages') }}:
                </label>
                <select class="form-select form-select-sm" style="width: auto;" id="view-filter" name="view" data-controller="ui-actions" data-action="change->ui-actions#autoSubmit">
                    <option value="own" {{ inheritanceInfo.currentView == 'own' ? 'selected' : '' }}>
                        {{ 'corporate.view.own_only'|trans({}, 'tenant') }}
                    </option>
                    {% if inheritanceInfo.hasParent %}
                    <option value="inherited" {{ inheritanceInfo.currentView == 'inherited' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_inherited'|trans({}, 'tenant') }}
                    </option>
                    {% endif %}
                    {% if inheritanceInfo.hasSubsidiaries %}
                    <option value="subsidiaries" {{ inheritanceInfo.currentView == 'subsidiaries' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_subsidiaries'|trans({}, 'tenant') }}
                    </option>
                    {% endif %}
                </select>
                <noscript>
                    <button type="submit" class="btn btn-sm btn-secondary">{{ 'common.apply'|trans({}, 'messages') }}</button>
                </noscript>
            </form>
        {% endblock %}
    {% endembed %}
    {% endif %}

    {# Statistics Cards with Turbo Frame #}
    <turbo-frame id="bcm-stats" src="{{ path('app_business_process_stats_api') }}" loading="lazy">
        <div class="row mb-4">
            <div class="col-md-3">
                {% if currentTenant %}
                    {% set subtitle = 'corporate.stats.breakdown'|trans({'%own%': detailedStats.own, '%inherited%': detailedStats.inherited, '%subsidiaries%': detailedStats.subsidiaries}, 'tenant') %}
                    {{ cards.kpi_card('business_process.index.stats.total'|trans, detailedStats.total, subtitle, null, null, null) }}
                {% else %}
                    {{ cards.kpi_card('business_process.index.stats.total'|trans, detailedStats.total, 'business_process.index.stats.total_subtitle'|trans, null, null, null) }}
                {% endif %}
            </div>
            <div class="col-md-3">
                {{ cards.kpi_card('business_process.index.stats.critical'|trans, stats.critical, 'business_process.index.stats.critical_subtitle'|trans, null, 'danger', 'border-danger') }}
            </div>
            <div class="col-md-3">
                {{ cards.kpi_card('business_process.index.stats.avg_rto'|trans, stats.avg_rto ~ 'business_process.index.stats.rto_unit'|trans, 'business_process.index.stats.rto_subtitle'|trans, null, 'info', null) }}
            </div>
            <div class="col-md-3">
                {{ cards.kpi_card('business_process.index.stats.with_risks'|trans, stats.processes_with_risks, 'business_process.index.stats.with_risks_subtitle'|trans, null, 'warning', null) }}
            </div>
        </div>
    </turbo-frame>

    {# Process List with Turbo Frame #}
    <turbo-frame id="business-processes-list">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0">{{ 'business_process.index.table.title'|trans }}</h3>
            </div>
            <div class="card-body">
                {% if business_processes|length > 0 %}
                    {% embed '_components/_table.html.twig' %}
                        {% import '_macros/inheritance_badge.html.twig' as inheritance %}
                        {% block table_head %}
                            <tr>
                                <th scope="col">{{ 'business_process.index.table.name'|trans }}</th>
                                <th scope="col">{{ 'business_process.index.table.owner'|trans }}</th>
                                <th scope="col">{{ 'business_process.index.table.criticality'|trans }}</th>
                                <th scope="col">{{ 'business_process.index.table.rto'|trans }}</th>
                                <th scope="col">{{ 'business_process.index.table.rpo'|trans }}</th>
                                <th scope="col">{{ 'business_process.index.table.mtpd'|trans }}</th>
                                <th scope="col">{{ 'business_process.index.table.impact_score'|trans }}</th>
                                <th scope="col">{{ 'business_process.index.table.actions'|trans }}</th>
                            </tr>
                        {% endblock %}
                        {% block table_body_attrs %}id="business-processes-table-body"{% endblock %}
                        {% block table_body %}
                            {% import '_macros/inheritance_badge.html.twig' as inheritance %}
                            {% for process in business_processes %}
                                <tr id="business-process-{{ process.id }}">
                                    <td>
                                        <a href="{{ path('app_business_process_show', {'id': process.id}) }}" data-turbo-frame="_top">
                                            {{ process.name }}
                                        </a>
                                        {{ inheritance.small_badge(process, currentTenant) }}
                                    </td>
                                    <td>{{ process.processOwner }}</td>
                                    <td>
                                        {% set criticality_class = {
                                            'critical': 'danger',
                                            'high': 'warning',
                                            'medium': 'info',
                                            'low': 'secondary'
                                        } %}
                                        <span class="badge bg-{{ criticality_class[process.criticality] ?? 'secondary' }}">
                                            {{ process.criticality|capitalize }}
                                        </span>
                                    </td>
                                    <td>{{ process.rto }}h</td>
                                    <td>{{ process.rpo }}h</td>
                                    <td>{{ process.mtpd }}h</td>
                                    <td>
                                        {% set score = process.businessImpactScore %}
                                        <span class="{{ badge_score(score) }}">
                                            {{ score }}/5
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('app_business_process_show', {'id': process.id}) }}"
                                               class="btn btn-outline-primary" title="{{ 'common.view'|trans({}, 'messages') }}" data-turbo-frame="_top" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                                <i class="bi bi-eye" aria-hidden="true"></i>
                                            </a>
                                            <a href="{{ path('app_business_process_edit', {'id': process.id}) }}"
                                               class="btn btn-outline-secondary" title="{{ 'common.edit'|trans({}, 'messages') }}" data-turbo-frame="_top" aria-label="{{ 'common.edit'|trans({}, 'messages') }}">
                                                <i class="bi bi-pencil" aria-hidden="true"></i>
                                            </a>
                                            <a href="{{ path('app_business_process_bia', {'id': process.id}) }}"
                                               class="btn btn-outline-info" title="{{ 'bcm.action.view_bia'|trans({}, 'bcm') }}" data-turbo-frame="_top" aria-label="{{ 'bcm.action.view_bia'|trans({}, 'bcm') }}">
                                                <i class="bi bi-graph-up" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}
                {% else %}
                    {% include '_components/_empty_state.html.twig' with {
                        icon: 'bi-diagram-3',
                        title: 'business_process.empty.title'|trans({}, 'business_process'),
                        description: 'business_process.empty.description'|trans({}, 'business_process'),
                        action: { label: 'business_process.action.create'|trans({}, 'business_process'), url: path('app_business_process_new'), icon: 'bi-plus-circle' }
                    } %}
                {% endif %}
            </div>
        </div>
    </turbo-frame>
</div>

{# Note: Loading indicator is now handled via CSS variable or JavaScript for i18n #}
<style>
turbo-frame[busy] {
    opacity: 0.6;
    pointer-events: none;
}
</style>
{% endblock %}

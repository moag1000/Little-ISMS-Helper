{% extends 'base.html.twig' %}
{% import '_macros/inheritance_badge.html.twig' as inheritance %}
{% import '_macros/cards.html.twig' as cards %}

{% block title %}Business Continuity Management{% endblock %}

{% block body %}
<div class="container-fluid">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.bcm'|trans({}, 'nav'), url: path('app_bcm_index') },
            { label: 'nav.business_processes'|trans({}, 'nav') }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Business Continuity Management (BCM)</h1>
        <a href="{{ path('app_business_process_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle" aria-hidden="true"></i> Neuer Geschäftsprozess
        </a>
    </div>

    {# Notifications Container for Turbo Streams #}
    <div id="notifications" class="mb-3"></div>

    {# View Filter #}
    {% if currentTenant %}
    {% embed '_components/_card.html.twig' with {
        'class': 'mb-3'
    } %}
        {% block card_body %}
            <form method="get" action="{{ path('app_business_process_index') }}" class="d-flex align-items-center gap-2">
                <label for="view-filter" class="mb-0 fw-bold">
                    <i class="bi bi-eye" aria-hidden="true"></i> {{ 'common.view'|trans({}, 'messages') }}:
                </label>
                <select class="form-select form-select-sm" style="width: auto;" id="view-filter" name="view" onchange="this.form.submit()">
                    <option value="own" {{ inheritanceInfo.currentView == 'own' ? 'selected' : '' }}>
                        {{ 'corporate.view.own_only'|trans({}, 'tenant') }}
                    </option>
                    {% if inheritanceInfo.hasParent %}
                    <option value="inherited" {{ inheritanceInfo.currentView == 'inherited' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_inherited'|trans({}, 'tenant') }}
                    </option>
                    {% endif %}
                    {% if inheritanceInfo.hasSubsidiaries %}
                    <option value="subsidiaries" {{ inheritanceInfo.currentView == 'subsidiaries' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_subsidiaries'|trans({}, 'tenant') }}
                    </option>
                    {% endif %}
                </select>
                <noscript>
                    <button type="submit" class="btn btn-sm btn-secondary">{{ 'common.apply'|trans({}, 'messages') }}</button>
                </noscript>
            </form>
        {% endblock %}
    {% endembed %}
    {% endif %}

    {# Statistics Cards with Turbo Frame #}
    <turbo-frame id="bcm-stats" src="{{ path('app_business_process_stats_api') }}" loading="lazy">
        <div class="row mb-4">
            <div class="col-md-3">
                {% if currentTenant %}
                    {% set subtitle = 'corporate.stats.breakdown'|trans({'%own%': detailedStats.own, '%inherited%': detailedStats.inherited, '%subsidiaries%': detailedStats.subsidiaries}, 'tenant') %}
                    {{ cards.kpi_card('Gesamt', detailedStats.total, subtitle, null, null, null) }}
                {% else %}
                    {{ cards.kpi_card('Gesamt', detailedStats.total, 'Geschäftsprozesse', null, null, null) }}
                {% endif %}
            </div>
            <div class="col-md-3">
                {{ cards.kpi_card('Kritisch', stats.critical, 'Höchste Priorität', null, 'danger', 'border-danger') }}
            </div>
            <div class="col-md-3">
                {{ cards.kpi_card('Ø RTO', stats.avg_rto ~ 'h', 'Recovery Time Objective', null, 'info', null) }}
            </div>
            <div class="col-md-3">
                {{ cards.kpi_card('Mit Risiken', stats.processes_with_risks, 'Aktive Risiken', null, 'warning', null) }}
            </div>
        </div>
    </turbo-frame>

    {# Process List with Turbo Frame #}
    <turbo-frame id="business-processes-list">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">Geschäftsprozesse</h2>
            </div>
            <div class="card-body">
                {% if business_processes|length > 0 %}
                    {% embed '_components/_table.html.twig' %}
                        {% import '_macros/inheritance_badge.html.twig' as inheritance %}
                        {% block table_head %}
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Verantwortlicher</th>
                                <th scope="col">Kritikalität</th>
                                <th scope="col">RTO</th>
                                <th scope="col">RPO</th>
                                <th scope="col">MTPD</th>
                                <th scope="col">Impact Score</th>
                                <th scope="col">Aktionen</th>
                            </tr>
                        {% endblock %}
                        {% block table_body_attrs %}id="business-processes-table-body"{% endblock %}
                        {% block table_body %}
                            {% import '_macros/inheritance_badge.html.twig' as inheritance %}
                            {% for process in business_processes %}
                                <tr id="business-process-{{ process.id }}">
                                    <td>
                                        <a href="{{ path('app_business_process_show', {'id': process.id}) }}" data-turbo-frame="_top">
                                            {{ process.name }}
                                        </a>
                                        {{ inheritance.small_badge(process, currentTenant) }}
                                    </td>
                                    <td>{{ process.processOwner }}</td>
                                    <td>
                                        {% set criticality_class = {
                                            'critical': 'danger',
                                            'high': 'warning',
                                            'medium': 'info',
                                            'low': 'secondary'
                                        } %}
                                        <span class="badge bg-{{ criticality_class[process.criticality] ?? 'secondary' }}">
                                            {{ process.criticality|capitalize }}
                                        </span>
                                    </td>
                                    <td>{{ process.rto }}h</td>
                                    <td>{{ process.rpo }}h</td>
                                    <td>{{ process.mtpd }}h</td>
                                    <td>
                                        {% set score = process.businessImpactScore %}
                                        <span class="{{ badge_score(score) }}">
                                            {{ score }}/5
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('app_business_process_show', {'id': process.id}) }}"
                                               class="btn btn-outline-primary" title="{{ 'common.view'|trans({}, 'messages') }}" data-turbo-frame="_top" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                                <i class="bi bi-eye" aria-hidden="true"></i>
                                            </a>
                                            <a href="{{ path('app_business_process_edit', {'id': process.id}) }}"
                                               class="btn btn-outline-secondary" title="{{ 'common.edit'|trans({}, 'messages') }}" data-turbo-frame="_top" aria-label="{{ 'common.edit'|trans({}, 'messages') }}">
                                                <i class="bi bi-pencil" aria-hidden="true"></i>
                                            </a>
                                            <a href="{{ path('app_business_process_bia', {'id': process.id}) }}"
                                               class="btn btn-outline-info" title="{{ 'bcm.action.view_bia'|trans({}, 'bcm') }}" data-turbo-frame="_top" aria-label="{{ 'bcm.action.view_bia'|trans({}, 'bcm') }}">
                                                <i class="bi bi-graph-up" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}
                {% else %}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle" aria-hidden="true"></i>
                        Noch keine Geschäftsprozesse vorhanden. 
                        <a href="{{ path('app_business_process_new') }}" class="alert-link">Erstellen Sie den ersten Prozess</a>.
                    </div>
                {% endif %}
            </div>
        </div>
    </turbo-frame>
</div>

<style>
turbo-frame[busy] {
    opacity: 0.6;
    pointer-events: none;
}

turbo-frame::after {
    content: "Lädt...";
    display: none;
}

turbo-frame[busy]::after {
    display: block;
    text-align: center;
    padding: 1rem;
}
</style>
{% endblock %}

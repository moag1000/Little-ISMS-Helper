{% extends 'base.html.twig' %}
{% import '_macros/inheritance_badge.html.twig' as inheritance %}

{% block title %}Business Continuity Management{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Business Continuity Management (BCM)</h1>
        <a href="{{ path('app_business_process_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Neuer Geschäftsprozess
        </a>
    </div>

    {# Notifications Container for Turbo Streams #}
    <div id="notifications" class="mb-3"></div>

    {# View Filter #}
    {% if currentTenant %}
    <div class="card mb-3">
        <div class="card-body py-2">
            <form method="get" action="{{ path('app_business_process_index') }}" class="d-flex align-items-center gap-2">
                <label for="view-filter" class="mb-0 fw-bold">
                    <i class="bi bi-eye"></i> {{ 'common.view'|trans }}:
                </label>
                <select class="form-select form-select-sm" style="width: auto;" id="view-filter" name="view" onchange="this.form.submit()">
                    <option value="own" {{ inheritanceInfo.currentView == 'own' ? 'selected' : '' }}>
                        {{ 'corporate.view.own_only'|trans }}
                    </option>
                    {% if inheritanceInfo.hasParent %}
                    <option value="inherited" {{ inheritanceInfo.currentView == 'inherited' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_inherited'|trans }}
                    </option>
                    {% endif %}
                    {% if inheritanceInfo.hasSubsidiaries %}
                    <option value="subsidiaries" {{ inheritanceInfo.currentView == 'subsidiaries' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_subsidiaries'|trans }}
                    </option>
                    {% endif %}
                </select>
                <noscript>
                    <button type="submit" class="btn btn-sm btn-secondary">{{ 'common.apply'|trans }}</button>
                </noscript>
            </form>
        </div>
    </div>
    {% endif %}

    {# Statistics Cards with Turbo Frame #}
    <turbo-frame id="bcm-stats" src="{{ path('app_business_process_stats_api') }}" loading="lazy">
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Gesamt</h5>
                        <p class="display-6">
                            <span id="bcm-total-count">{{ detailedStats.total }}</span>
                        </p>
                        {% if currentTenant %}
                            <small style="font-size: 11px; color: #6c757d; opacity: 0.85; display: block; margin-top: 0.5rem;">
                                {{ 'corporate.stats.breakdown'|trans({'%own%': detailedStats.own, '%inherited%': detailedStats.inherited, '%subsidiaries%': detailedStats.subsidiaries}) }}
                            </small>
                        {% endif %}
                        <small class="text-muted">Geschäftsprozesse</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-danger">
                    <div class="card-body">
                        <h5 class="card-title">Kritisch</h5>
                        <p class="display-6 text-danger">
                            <span id="bcm-critical-count">{{ stats.critical }}</span>
                        </p>
                        <small class="text-muted">Höchste Priorität</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ø RTO</h5>
                        <p class="display-6">{{ stats.avg_rto }}h</p>
                        <small class="text-muted">Recovery Time Objective</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mit Risiken</h5>
                        <p class="display-6">{{ stats.processes_with_risks }}</p>
                        <small class="text-muted">Aktive Risiken</small>
                    </div>
                </div>
            </div>
        </div>
    </turbo-frame>

    {# Process List with Turbo Frame #}
    <turbo-frame id="business-processes-list">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Geschäftsprozesse</h5>
            </div>
            <div class="card-body">
                {% if business_processes|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Verantwortlicher</th>
                                    <th>Kritikalität</th>
                                    <th>RTO</th>
                                    <th>RPO</th>
                                    <th>MTPD</th>
                                    <th>Impact Score</th>
                                    <th>Aktionen</th>
                                </tr>
                            </thead>
                            <tbody id="business-processes-table-body">
                                {% for process in business_processes %}
                                    <tr id="business-process-{{ process.id }}">
                                        <td>
                                            <a href="{{ path('app_business_process_show', {'id': process.id}) }}" data-turbo-frame="_top">
                                                {{ process.name }}
                                            </a>
                                            {{ inheritance.small_badge(process, currentTenant) }}
                                        </td>
                                        <td>{{ process.processOwner }}</td>
                                        <td>
                                            {% set criticality_class = {
                                                'critical': 'danger',
                                                'high': 'warning',
                                                'medium': 'info',
                                                'low': 'secondary'
                                            } %}
                                            <span class="badge bg-{{ criticality_class[process.criticality] ?? 'secondary' }}">
                                                {{ process.criticality|capitalize }}
                                            </span>
                                        </td>
                                        <td>{{ process.rto }}h</td>
                                        <td>{{ process.rpo }}h</td>
                                        <td>{{ process.mtpd }}h</td>
                                        <td>
                                            {% set score = process.businessImpactScore %}
                                            <span class="badge bg-{{ score >= 4 ? 'danger' : (score >= 3 ? 'warning' : 'success') }}">
                                                {{ score }}/5
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="{{ path('app_business_process_show', {'id': process.id}) }}" 
                                                   class="btn btn-outline-primary" title="Ansehen" data-turbo-frame="_top">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('app_business_process_edit', {'id': process.id}) }}" 
                                                   class="btn btn-outline-secondary" title="Bearbeiten" data-turbo-frame="_top">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="{{ path('app_business_process_bia', {'id': process.id}) }}" 
                                                   class="btn btn-outline-info" title="BIA" data-turbo-frame="_top">
                                                    <i class="bi bi-graph-up"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        Noch keine Geschäftsprozesse vorhanden. 
                        <a href="{{ path('app_business_process_new') }}" class="alert-link">Erstellen Sie den ersten Prozess</a>.
                    </div>
                {% endif %}
            </div>
        </div>
    </turbo-frame>
</div>

<style>
turbo-frame[busy] {
    opacity: 0.6;
    pointer-events: none;
}

turbo-frame::after {
    content: "Lädt...";
    display: none;
}

turbo-frame[busy]::after {
    display: block;
    text-align: center;
    padding: 1rem;
}
</style>
{% endblock %}

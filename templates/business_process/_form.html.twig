{#
    Business Process Form Partial (Accessible)
    Used by both new.html.twig and edit.html.twig

    WCAG 2.1 AA Compliant Form with:
    - Proper ARIA attributes
    - Error handling
    - Help texts
    - Required field indicators
#}

{# Basic Information Section #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-info-circle" aria-hidden="true"></i>
        {{ 'business_process.section.basic_info'|trans({}, 'messages')|default('Grundinformationen') }}
    </legend>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.name,
                'label': 'business_process.field.name'|trans({}, 'messages')|default('Name'),
                'help': 'business_process.help.name'|trans({}, 'messages')|default('Eindeutiger Name des Geschäftsprozesses'),
                'required': true
            } %}
        </div>

        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.processOwner,
                'label': 'business_process.field.process_owner'|trans({}, 'messages')|default('Process Owner'),
                'help': 'business_process.help.process_owner'|trans({}, 'messages')|default('Verantwortliche Person für diesen Prozess')
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.description,
                'label': 'business_process.field.description'|trans({}, 'messages')|default('Beschreibung'),
                'help': 'business_process.help.description'|trans({}, 'messages')|default('Detaillierte Beschreibung des Prozesses')
            } %}
        </div>

        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.criticality,
                'label': 'business_process.field.criticality'|trans({}, 'messages')|default('Kritikalität'),
                'help': 'business_process.help.criticality'|trans({}, 'messages')|default('Wie kritisch ist dieser Prozess für das Unternehmen?'),
                'required': true
            } %}
        </div>
    </div>
</fieldset>


{% extends 'base.html.twig' %}
{% trans_default_domain 'context' %}

{% block title %}{{ 'context.edit.title'|trans({}, 'context') }} - {{ 'app.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'context_management.title'|trans({}, 'context'), url: path('app_context_index'), icon: 'bi-building' },
            { label: context.organizationName, url: path('app_context_index') },
            { label: 'common.edit'|trans({}, 'messages') }
        ]
    } %}

    {% include '_components/_page_header.html.twig' with {
        title: 'context.edit.title'|trans({}, 'context'),
        subtitle: 'context.info.subtitle'|trans({}, 'context'),
        icon: 'bi-building',
        actions: [
            { label: 'common.back'|trans({}, 'messages'), url: path('app_context_index'), variant: 'secondary', icon: 'bi-arrow-left' }
        ]
    } %}

    {% if tenant is defined and tenant %}
        <div class="alert alert-secondary mb-4">
            <i class="bi bi-info-circle" aria-hidden="true"></i>
            <strong>{{ 'tenant.isms_context.linked_to'|trans({}, 'tenant', 'tenant') }}:</strong>
            {{ tenant.name }} ({{ tenant.code }})
        </div>
    {% endif %}

    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {% include '_components/_auto_form.html.twig' with {
                        'form': form,
                        'sections': {
                            'organization': {
                                'label': '<i class="bi bi-building" aria-hidden="true"></i> ' ~ 'context.section.organization'|trans({}, 'context'),
                                'fields': ['organizationName']
                            },
                            'scope': {
                                'label': '<i class="bi bi-diagram-3" aria-hidden="true"></i> ' ~ 'context.section.scope'|trans({}, 'context'),
                                'fields': ['ismsScope', 'scopeExclusions']
                            },
                            'context_analysis': {
                                'label': '<i class="bi bi-search" aria-hidden="true"></i> ' ~ 'context.section.context_analysis'|trans({}, 'context'),
                                'fields': ['externalIssues', 'internalIssues']
                            },
                            'stakeholders': {
                                'label': '<i class="bi bi-people" aria-hidden="true"></i> ' ~ 'context.section.stakeholders'|trans({}, 'context'),
                                'fields': ['interestedParties', 'interestedPartiesRequirements']
                            },
                            'compliance': {
                                'label': '<i class="bi bi-shield-check" aria-hidden="true"></i> ' ~ 'context.section.compliance'|trans({}, 'context'),
                                'fields': ['legalRequirements', 'regulatoryRequirements', 'contractualObligations']
                            },
                            'policy': {
                                'label': '<i class="bi bi-file-earmark-ruled" aria-hidden="true"></i> ' ~ 'context.section.policy'|trans({}, 'context'),
                                'fields': ['ismsPolicy', 'rolesAndResponsibilities']
                            },
                            'review': {
                                'label': '<i class="bi bi-calendar-check" aria-hidden="true"></i> ' ~ 'context.section.review'|trans({}, 'context'),
                                'fields': ['lastReviewDate', 'nextReviewDate']
                            }
                        },
                        'col_widths': {
                            'organizationName': 12,
                            'ismsScope': 12,
                            'scopeExclusions': 12,
                            'externalIssues': 6,
                            'internalIssues': 6,
                            'interestedParties': 12,
                            'interestedPartiesRequirements': 12,
                            'legalRequirements': 12,
                            'regulatoryRequirements': 12,
                            'contractualObligations': 12,
                            'ismsPolicy': 12,
                            'rolesAndResponsibilities': 12,
                            'lastReviewDate': 6,
                            'nextReviewDate': 6
                        }
                    } %}

                    {# Form Actions #}
                    <div class="form-actions d-flex gap-2 justify-content-between pt-3 border-top">
                        <a href="{{ path('app_context_index') }}" class="btn btn-secondary"><i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'common.cancel'|trans({}, 'messages') }}</a>
                        <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save'|trans({}, 'messages') }}</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

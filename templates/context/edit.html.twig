{% extends 'base.html.twig' %}

{% block title %}Edit ISMS Context - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-building"></i> Edit ISMS Context</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-info mb-4">
                <strong>ISO 27001 Clause 4:</strong> Understanding the organization and its context
            </div>

            {{ form_start(form) }}
            {{ form_widget(form) }}

            <div class="d-flex justify-content-between pt-3 border-top mt-4">
                <a href="{{ path('app_context_index') }}" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary btn-lg">Save Context</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

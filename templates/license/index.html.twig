{% extends 'base.html.twig' %}

{% block title %}Lizenzinformationen{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'Reports', url: path('app_reports_overview') },
            { label: 'Lizenzen' }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'Lizenzinformationen',
        subtitle: 'Third-Party Software Attributions & Compliance',
        icon: 'bi-file-text'
    } %}

    <div class="row">
        <div class="col-lg-3 mb-4">
            {# Navigation Sidebar #}
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header">
                        <h2 class="h5 mb-0">
                            <i class="bi bi-list-ul me-2" aria-hidden="true"></i>Navigation
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_licenses') }}" class="list-group-item list-group-item-action active">
                        <i class="bi bi-file-earmark-text me-2" aria-hidden="true"></i>NOTICE
                    </a>
                    <a href="{{ path('app_licenses_report') }}" class="list-group-item list-group-item-action">
                        <i class="bi bi-file-earmark-bar-graph me-2" aria-hidden="true"></i>Detaillierter Bericht
                    </a>
                    <a href="{{ path('app_licenses_summary') }}" class="list-group-item list-group-item-action">
                        <i class="bi bi-bar-chart me-2" aria-hidden="true"></i>Zusammenfassung
                    </a>
                </div>
                <div class="h6 mb-2 fw-semibold mt-3">Projekt</div>
                <p class="small mb-2"><strong>{{ project_name }}</strong></p>
                <p class="small text-muted mb-0">Lizenz: {{ project_license }}</p>
                {% endblock %}
            {% endembed %}

            {# Quick Actions #}
            {% embed '_components/_card.html.twig' with {class: 'mt-3'} %}
                {% block card_header %}
                    <div class="card-header">
                        <h2 class="h5 mb-0">
                            <i class="bi bi-tools me-2" aria-hidden="true"></i>Aktionen
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <div class="d-grid gap-2">
                        <button data-controller="ui-actions" data-action="ui-actions#print" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-printer me-1" aria-hidden="true"></i>Drucken
                        </button>
                        <a href="{{ asset('NOTICE.md') }}" download class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-download me-1" aria-hidden="true"></i>NOTICE.md
                        </a>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>

        <div class="col-lg-9">
            {# Compliance Status Alert #}
            <div class="alert alert-success mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="bi bi-check-circle-fill fs-3 me-3" aria-hidden="true"></i>
                    </div>
                    <div>
                        <strong class="d-block mb-1"><i class="bi bi-check-circle text-success" aria-hidden="true"></i> Lizenzkonform für kommerzielle Nutzung</strong>
                        <p class="mb-0">
                            Alle verwendeten Third-Party-Komponenten sind für kommerzielle Nutzung freigegeben.
                            Bitte beachten Sie die Attributions- und Lizenzvorgaben.
                        </p>
                    </div>
                </div>
            </div>

            {# NOTICE Content #}
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="h5 mb-0">
                                <i class="bi bi-file-earmark-text me-2" aria-hidden="true"></i>NOTICE - Third-Party Software Attributions
                            </h2>
                            <div class="btn-group btn-group-sm" role="group" data-controller="ui-actions">
                                <button type="button" class="btn btn-outline-secondary" data-action="ui-actions#setFontSize" data-ui-actions-size-param="14px" data-ui-actions-target-param="#license-content">
                                    <i class="bi bi-zoom-out" aria-hidden="true"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" data-action="ui-actions#setFontSize" data-ui-actions-size-param="16px" data-ui-actions-target-param="#license-content">
                                    <i class="bi bi-zoom-in" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <div id="license-content" class="markdown-content" style="font-size: 14px;">
                        {{ notice_content|raw|nl2br }}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
</div>

<style>
.markdown-content {
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.markdown-content h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid #e9ecef;
    padding-bottom: 0.5rem;
}

.markdown-content h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    border-bottom: 1px solid #e9ecef;
    padding-bottom: 0.25rem;
}

.markdown-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
}

.markdown-content h4 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-top: 0.75rem;
    margin-bottom: 0.5rem;
}

.markdown-content p {
    margin-bottom: 1rem;
}

.markdown-content code {
    background-color: #f8f9fa;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
}

.markdown-content pre {
    background-color: #f8f9fa;
    padding: 1rem;
    border-radius: 5px;
    overflow-x: auto;
}

.markdown-content table {
    width: 100%;
    margin-bottom: 1rem;
    border-collapse: collapse;
}

.markdown-content table th,
.markdown-content table td {
    padding: 0.75rem;
    border: 1px solid #dee2e6;
}

.markdown-content table th {
    background-color: #f8f9fa;
    font-weight: 600;
}

.markdown-content ul,
.markdown-content ol {
    margin-bottom: 1rem;
    padding-left: 2rem;
}

.markdown-content blockquote {
    border-left: 4px solid #0d6efd;
    padding-left: 1rem;
    margin-left: 0;
    color: #6c757d;
    font-style: italic;
}

.markdown-content hr {
    margin: 2rem 0;
    border: 0;
    border-top: 2px solid #e9ecef;
}

@media print {
    .breadcrumb,
    .page-header-actions,
    .card:not(.card:has(.markdown-content)),
    .btn,
    .alert {
        display: none !important;
    }
}
</style>
{% endblock %}

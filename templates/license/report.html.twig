{% extends 'base.html.twig' %}

{% block title %}Lizenzbericht - Detailliert{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'Reports', url: path('app_reports_overview') },
            { label: 'Lizenzen', url: path('app_licenses') },
            { label: 'Detaillierter Bericht' }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'Detaillierter Lizenzbericht',
        subtitle: 'Vollständige Compliance-Analyse aller Dependencies',
        icon: 'bi-file-earmark-bar-graph'
    } %}

    <div class="row">
        <div class="col-lg-3 mb-4">
            {# Navigation Sidebar #}
            <div class="card">
                <div class="card-header">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-list-ul me-2" aria-hidden="true"></i>Navigation
                    </h2>
                </div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_licenses') }}" class="list-group-item list-group-item-action">
                        <i class="bi bi-file-earmark-text me-2" aria-hidden="true"></i>NOTICE
                    </a>
                    <a href="{{ path('app_licenses_report') }}" class="list-group-item list-group-item-action active">
                        <i class="bi bi-file-earmark-bar-graph me-2" aria-hidden="true"></i>Detaillierter Bericht
                    </a>
                    <a href="{{ path('app_licenses_summary') }}" class="list-group-item list-group-item-action">
                        <i class="bi bi-bar-chart me-2" aria-hidden="true"></i>Zusammenfassung
                    </a>
                </div>
            </div>

            {# Quick Actions #}
            <div class="card mt-3">
                <div class="card-header">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-tools me-2" aria-hidden="true"></i>Aktionen
                    </h2>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button data-controller="ui-actions" data-action="ui-actions#print" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-printer me-1" aria-hidden="true"></i>Drucken
                        </button>
                        <a href="{{ asset('docs/reports/license-report.md') }}" download class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-download me-1" aria-hidden="true"></i>Report.md
                        </a>
                        <button class="btn btn-outline-warning btn-sm"
                                data-controller="report-regenerate"
                                data-action="click->report-regenerate#regenerate"
                                data-report-regenerate-url-value="{{ path('app_license_report_generate') }}"
                                data-report-regenerate-loading-text-value="{{ 'common.generating_reports'|trans({}, 'messages') }}"
                                data-report-regenerate-success-text-value="{{ 'common.report_regenerated'|trans({}, 'messages') }}">
                            <i class="bi bi-arrow-clockwise me-1" aria-hidden="true"></i>{{ 'common.regenerate'|trans({}, 'messages') }}
                        </button>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                            Bericht lokal mit <code>./license-report.sh</code> aktualisieren
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            {# Report Content #}
            <div class="card">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">
                            <i class="bi bi-file-earmark-bar-graph me-2" aria-hidden="true"></i>Vollständiger Compliance-Report
                        </h2>
                        <div class="btn-group btn-group-sm" role="group" data-controller="ui-actions">
                            <button type="button" class="btn btn-outline-secondary" data-action="ui-actions#setFontSize" data-ui-actions-size-param="13px" data-ui-actions-target-param="#report-content">
                                <i class="bi bi-zoom-out" aria-hidden="true"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" data-action="ui-actions#setFontSize" data-ui-actions-size-param="14px" data-ui-actions-target-param="#report-content">
                                <i class="bi bi-zoom-in" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div id="report-content" class="markdown-content p-4" style="font-size: 13px; max-height: 80vh; overflow-y: auto;">
                        {{ report_content|raw|nl2br }}
                    </div>
                </div>
            </div>

            {# Legend #}
            <div class="card mt-3">
                <div class="card-header"><h2 class="h5 mb-0">
                        <i class="bi bi-question-circle me-2" aria-hidden="true"></i>Legende
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <span class="badge bg-success me-2"<><i class="bi bi-check-circle" aria-hidden="true"></i> Erlaubt</span>
                            <small>Permissive Lizenzen (MIT, BSD, Apache-2.0)</small>
                        </div>
                        <div class="col-md-6 mb-2">
                            <span class="badge bg-warning me-2"<><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> Eingeschränkt</span>
                            <small>Weak copyleft (MPL-2.0, EPL, CC-BY)</small>
                        </div>
                        <div class="col-md-6 mb-2">
                            <span class="badge bg-info me-2"<><i class="bi bi-arrow-repeat" aria-hidden="true"></i> Copyleft</span>
                            <small>Strong copyleft (GPL/LGPL/AGPL)</small>
                        </div>
                        <div class="col-md-6 mb-2">
                            <span class="badge bg-danger me-2"<><i class="bi bi-x-circle" aria-hidden="true"></i> Nicht erlaubt</span>
                            <small>Non-commercial licenses</small>
                        </div>
                        <div class="col-md-6 mb-2">
                            <span class="badge bg-secondary me-2">❓ Unbekannt</span>
                            <small>Manuelle Prüfung erforderlich</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.markdown-content {
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.markdown-content h1 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid #e9ecef;
    padding-bottom: 0.5rem;
}

.markdown-content h2 {
    font-size: 1.4rem;
    font-weight: 600;
    margin-top: 1.25rem;
    margin-bottom: 0.75rem;
    border-bottom: 1px solid #e9ecef;
    padding-bottom: 0.25rem;
}

.markdown-content h3 {
    font-size: 1.15rem;
    font-weight: 600;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
}

.markdown-content p {
    margin-bottom: 0.75rem;
}

.markdown-content code {
    background-color: #f8f9fa;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.85em;
}

.markdown-content pre {
    background-color: #f8f9fa;
    padding: 0.75rem;
    border-radius: 5px;
    overflow-x: auto;
    font-size: 0.85em;
}

.markdown-content table {
    width: 100%;
    margin-bottom: 1rem;
    border-collapse: collapse;
    font-size: 0.9em;
}

.markdown-content table th,
.markdown-content table td {
    padding: 0.5rem;
    border: 1px solid #dee2e6;
}

.markdown-content table th {
    background-color: #f8f9fa;
    font-weight: 600;
}

.markdown-content ul,
.markdown-content ol {
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
}

.markdown-content blockquote {
    border-left: 4px solid #0d6efd;
    padding-left: 1rem;
    margin-left: 0;
    color: #6c757d;
    font-style: italic;
}

.markdown-content details {
    margin-bottom: 1rem;
    border: 1px solid #dee2e6;
    border-radius: 0.25rem;
    padding: 0.5rem;
}

.markdown-content details summary {
    cursor: pointer;
    font-weight: 600;
    padding: 0.5rem;
    background-color: #f8f9fa;
    border-radius: 0.25rem;
}

.markdown-content details summary:hover {
    background-color: #e9ecef;
}

@media print {
    .breadcrumb,
    .page-header-actions,
    .card:not(.card:has(.markdown-content)),
    .btn {
        display: none !important;
    }

    #report-content {
        max-height: none !important;
        overflow-y: visible !important;
    }
}
</style>
{% endblock %}

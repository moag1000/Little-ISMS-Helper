{% extends 'base.html.twig' %}

{% block title %}{{ incident.title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>{{ incident.title }}</h1>
        <div class="actions">
            <a href="{{ path('app_incident_edit', {id: incident.id}) }}" class="btn btn-primary">Edit</a>
            {% if incident.requiresNis2Reporting %}
                <a href="{{ path('app_incident_nis2_report', {id: incident.id}) }}" class="btn btn-success" data-turbo="false" title="{{ 'incident.action.download_nis2_report'|trans|default('Download NIS2 Report') }}">
                    <i class="bi bi-file-earmark-pdf"></i> NIS2 Report (PDF)
                </a>
            {% endif %}
            <a href="{{ path('app_incident_index') }}" class="btn btn-secondary">Back to List</a>
            {% if is_granted('ROLE_ADMIN') %}
                <form method="post" action="{{ path('app_incident_delete', {id: incident.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this incident?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ incident.id) }}">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            {% endif %}
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>Incident #{{ incident.incidentNumber }}</h2>
            <div class="badges">
                <span class="badge badge-{{ incident.severity }}">{{ incident.severity|upper }}</span>
                <span class="badge badge-status-{{ incident.status }}">{{ incident.status|upper|replace({'_': ' '}) }}</span>
                {% if incident.requiresNis2Reporting %}
                    {% set nis2Status = incident.nis2ComplianceStatus %}
                    <span class="badge badge-nis2-{{ nis2Status }}">
                        <i class="bi bi-shield-check"></i>
                        {{ ('incident.nis2_compliance.' ~ nis2Status)|trans }}
                    </span>
                {% endif %}
            </div>
        </div>
        <div class="card-content">
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="label">Category:</span>
                    <span class="value">{{ incident.category|upper|replace({'_': ' '}) }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Detected:</span>
                    <span class="value">{{ incident.detectedAt ? incident.detectedAt|date('d.m.Y H:i') : 'N/A' }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Reported By:</span>
                    <span class="value">{{ incident.reportedBy ?? 'N/A' }}</span>
                </div>
                {% if incident.occurredAt %}
                <div class="detail-item">
                    <span class="label">Occurred:</span>
                    <span class="value">{{ incident.occurredAt|date('d.m.Y H:i') }}</span>
                </div>
                {% endif %}
            </div>

            {# NIS2 Article 23 Reporting Timeline #}
            {% if incident.requiresNis2Reporting and incident.detectedAt %}
                <div class="detail-section nis2-timeline-section">
                    <h3>
                        <i class="bi bi-clock-history"></i>
                        {{ 'incident.nis2_timeline.title'|trans }}
                    </h3>
                    <p class="text-muted">{{ 'incident.nis2_timeline.description'|trans }}</p>

                    <div class="timeline-container">
                        {# Stage 1: Early Warning (24h) #}
                        <div class="timeline-stage {% if incident.earlyWarningReportedAt %}completed{% elseif incident.isEarlyWarningOverdue %}overdue{% else %}pending{% endif %}">
                            <div class="timeline-icon">
                                {% if incident.earlyWarningReportedAt %}
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                {% elseif incident.isEarlyWarningOverdue %}
                                    <i class="bi bi-exclamation-triangle-fill text-danger"></i>
                                {% else %}
                                    <i class="bi bi-clock-fill text-warning"></i>
                                {% endif %}
                            </div>
                            <div class="timeline-content">
                                <h4>{{ 'incident.timeline.early_warning'|trans }}</h4>
                                <p class="timeline-deadline">
                                    <strong>{{ 'incident.timeline.deadline'|trans }}:</strong>
                                    {{ incident.earlyWarningDeadline|date('d.m.Y H:i') }}
                                </p>
                                {% if incident.earlyWarningReportedAt %}
                                    <div class="timeline-completed">
                                        <i class="bi bi-check-circle"></i>
                                        {{ 'incident.timeline.reported_at'|trans }}:
                                        <strong>{{ incident.earlyWarningReportedAt|date('d.m.Y H:i') }}</strong>
                                    </div>
                                {% elseif incident.isEarlyWarningOverdue %}
                                    <div class="timeline-overdue">
                                        <i class="bi bi-exclamation-triangle"></i>
                                        {{ 'incident.timeline.overdue'|trans }}
                                    </div>
                                {% else %}
                                    <div class="timeline-countdown">
                                        {% set hoursRemaining = incident.hoursUntilEarlyWarningDeadline %}
                                        <i class="bi bi-hourglass-split"></i>
                                        {{ 'incident.timeline.hours_remaining'|trans({'%hours%': hoursRemaining}) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        {# Stage 2: Detailed Notification (72h) #}
                        <div class="timeline-stage {% if incident.detailedNotificationReportedAt %}completed{% elseif incident.isDetailedNotificationOverdue %}overdue{% else %}pending{% endif %}">
                            <div class="timeline-icon">
                                {% if incident.detailedNotificationReportedAt %}
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                {% elseif incident.isDetailedNotificationOverdue %}
                                    <i class="bi bi-exclamation-triangle-fill text-danger"></i>
                                {% else %}
                                    <i class="bi bi-clock-fill text-secondary"></i>
                                {% endif %}
                            </div>
                            <div class="timeline-content">
                                <h4>{{ 'incident.timeline.detailed_notification'|trans }}</h4>
                                <p class="timeline-deadline">
                                    <strong>{{ 'incident.timeline.deadline'|trans }}:</strong>
                                    {{ incident.detailedNotificationDeadline|date('d.m.Y H:i') }}
                                </p>
                                {% if incident.detailedNotificationReportedAt %}
                                    <div class="timeline-completed">
                                        <i class="bi bi-check-circle"></i>
                                        {{ 'incident.timeline.reported_at'|trans }}:
                                        <strong>{{ incident.detailedNotificationReportedAt|date('d.m.Y H:i') }}</strong>
                                    </div>
                                {% elseif incident.isDetailedNotificationOverdue %}
                                    <div class="timeline-overdue">
                                        <i class="bi bi-exclamation-triangle"></i>
                                        {{ 'incident.timeline.overdue'|trans }}
                                    </div>
                                {% else %}
                                    <div class="timeline-countdown">
                                        {% set hoursRemaining = incident.hoursUntilDetailedNotificationDeadline %}
                                        <i class="bi bi-hourglass-split"></i>
                                        {{ 'incident.timeline.hours_remaining'|trans({'%hours%': hoursRemaining}) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        {# Stage 3: Final Report (1 month) #}
                        <div class="timeline-stage {% if incident.finalReportSubmittedAt %}completed{% elseif incident.isFinalReportOverdue %}overdue{% else %}pending{% endif %}">
                            <div class="timeline-icon">
                                {% if incident.finalReportSubmittedAt %}
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                {% elseif incident.isFinalReportOverdue %}
                                    <i class="bi bi-exclamation-triangle-fill text-danger"></i>
                                {% else %}
                                    <i class="bi bi-clock-fill text-secondary"></i>
                                {% endif %}
                            </div>
                            <div class="timeline-content">
                                <h4>{{ 'incident.timeline.final_report'|trans }}</h4>
                                <p class="timeline-deadline">
                                    <strong>{{ 'incident.timeline.deadline'|trans }}:</strong>
                                    {{ incident.finalReportDeadline|date('d.m.Y H:i') }}
                                </p>
                                {% if incident.finalReportSubmittedAt %}
                                    <div class="timeline-completed">
                                        <i class="bi bi-check-circle"></i>
                                        {{ 'incident.timeline.reported_at'|trans }}:
                                        <strong>{{ incident.finalReportSubmittedAt|date('d.m.Y H:i') }}</strong>
                                    </div>
                                {% elseif incident.isFinalReportOverdue %}
                                    <div class="timeline-overdue">
                                        <i class="bi bi-exclamation-triangle"></i>
                                        {{ 'incident.timeline.overdue'|trans }}
                                    </div>
                                {% else %}
                                    <div class="timeline-countdown">
                                        {% set daysRemaining = incident.daysUntilFinalReportDeadline %}
                                        <i class="bi bi-hourglass-split"></i>
                                        {{ 'incident.timeline.days_remaining'|trans({'%days%': daysRemaining}) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {# NIS2 Impact Assessment #}
                    <div class="nis2-impact-grid">
                        {% if incident.nis2Category %}
                            <div class="impact-item">
                                <span class="label">{{ 'incident.field.nis2_category'|trans }}:</span>
                                <span class="value">{{ ('incident.nis2_category.' ~ incident.nis2Category)|trans }}</span>
                            </div>
                        {% endif %}
                        <div class="impact-item">
                            <span class="label">{{ 'incident.field.cross_border_impact'|trans }}:</span>
                            <span class="value">
                                {% if incident.isCrossBorderImpact %}
                                    <span class="badge bg-danger">{{ 'common.yes'|trans }}</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ 'common.no'|trans }}</span>
                                {% endif %}
                            </span>
                        </div>
                        {% if incident.affectedUsersCount %}
                            <div class="impact-item">
                                <span class="label">{{ 'incident.field.affected_users_count'|trans }}:</span>
                                <span class="value"><strong>{{ incident.affectedUsersCount|number_format }}</strong></span>
                            </div>
                        {% endif %}
                        {% if incident.estimatedFinancialImpact %}
                            <div class="impact-item">
                                <span class="label">{{ 'incident.field.estimated_financial_impact'|trans }}:</span>
                                <span class="value"><strong>{{ incident.estimatedFinancialImpact|number_format(2) }} EUR</strong></span>
                            </div>
                        {% endif %}
                        {% if incident.nationalAuthorityNotified %}
                            <div class="impact-item">
                                <span class="label">{{ 'incident.field.national_authority_notified'|trans }}:</span>
                                <span class="value">{{ incident.nationalAuthorityNotified }}</span>
                            </div>
                        {% endif %}
                        {% if incident.authorityReferenceNumber %}
                            <div class="impact-item">
                                <span class="label">{{ 'incident.field.authority_reference_number'|trans }}:</span>
                                <span class="value"><code>{{ incident.authorityReferenceNumber }}</code></span>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            {% if incident.description %}
                <div class="detail-section">
                    <h3>Description</h3>
                    <p>{{ incident.description }}</p>
                </div>
            {% endif %}

            {% if incident.affectedSystems %}
                <div class="detail-section">
                    <h3>Affected Systems</h3>
                    <p>{{ incident.affectedSystems }}</p>
                </div>
            {% endif %}

            {% if incident.rootCause %}
                <div class="detail-section">
                    <h3>Root Cause Analysis</h3>
                    <p>{{ incident.rootCause }}</p>
                </div>
            {% endif %}

            {% if incident.correctiveActions %}
                <div class="detail-section">
                    <h3>Corrective Actions</h3>
                    <p>{{ incident.correctiveActions }}</p>
                </div>
            {% endif %}

            {% if incident.lessonsLearned %}
                <div class="detail-section">
                    <h3>Lessons Learned</h3>
                    <p>{{ incident.lessonsLearned }}</p>
                </div>
            {% endif %}

            {% if incident.closedDate %}
                <div class="detail-section">
                    <h3>Closure</h3>
                    <p>Closed on: <strong>{{ incident.closedDate|date('d.m.Y H:i') }}</strong></p>
                </div>
            {% endif %}

            {# Audit Log History #}
            {% if auditLogs is defined and auditLogs|length > 0 %}
                <div class="detail-section">
                    <h3><i class="bi bi-clock-history"></i> {{ 'incident.section.history'|trans|default('Incident History') }} ({{ totalAuditLogs }} {{ 'audit_log.entries'|trans|default('entries') }})</h3>
                    <div class="audit-log-list">
                        {% for log in auditLogs %}
                        <div class="audit-log-entry">
                            <div class="audit-log-header">
                                <span class="badge bg-{{ log.action == 'create' ? 'success' : (log.action == 'update' ? 'info' : 'danger') }}">
                                    {{ log.action|upper }}
                                </span>
                                <span class="text-muted">
                                    {{ log.performedBy ? log.performedBy.fullName : 'System' }}
                                    &bull; {{ log.createdAt|date('Y-m-d H:i:s') }}
                                </span>
                            </div>
                            {% if log.action == 'update' %}
                                {% set oldValues = log.oldValuesArray %}
                                {% set newValues = log.newValuesArray %}
                                {% if oldValues and newValues %}
                                    <div class="audit-log-changes">
                                        {% for field, newValue in newValues %}
                                            {% if oldValues[field] is defined and oldValues[field] != newValue %}
                                                <div class="change-item">
                                                    <strong>{{ field }}:</strong>
                                                    <span class="text-danger">{{ oldValues[field] }}</span>
                                                    &rarr;
                                                    <span class="text-success">{{ newValue }}</span>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                    {% if totalAuditLogs > 10 %}
                    <div class="text-center mt-3">
                        <small class="text-muted">{{ 'audit_log.showing_recent'|trans({'%count%': 10, '%total%': totalAuditLogs})|default('Showing 10 most recent of ' ~ totalAuditLogs ~ ' total entries') }}</small>
                    </div>
                    {% endif %}
                </div>
            {% endif %}

            {# Data Reuse: Affected Assets #}
            {% if incident.affectedAssets is defined and incident.affectedAssets|length > 0 %}
                <div class="detail-section">
                    <h3>üè¢ Affected Assets ({{ incident.affectedAssets|length }})</h3>
                    <div class="data-reuse-list">
                        {% for asset in incident.affectedAssets %}
                            <div class="data-reuse-item">
                                <strong>{{ asset.name }}</strong>
                                <span class="badge badge-info">{{ asset.assetType }}</span>
                                <small>CIA: {{ asset.confidentialityValue }}/{{ asset.integrityValue }}/{{ asset.availabilityValue }}</small>
                                {% if asset.monetaryValue %}
                                    <small class="text-danger">Value: ‚Ç¨{{ asset.monetaryValue }}</small>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Data Reuse: Realized Risks #}
            {% if incident.realizedRisks is defined and incident.realizedRisks|length > 0 %}
                <div class="detail-section">
                    <h3>‚ö†Ô∏è Realized Risks ({{ incident.realizedRisks|length }})</h3>
                    <div class="alert alert-warning">
                        <strong>Risk Realization:</strong> This incident realized {{ incident.realizedRisks|length }} identified risk(s).
                        Consider reviewing risk probability assessments.
                    </div>
                    <div class="data-reuse-list">
                        {% for risk in incident.realizedRisks %}
                            <div class="data-reuse-item">
                                <strong>{{ risk.title }}</strong>
                                <span class="badge badge-risk-{{ risk.inherentRiskLevel >= 16 ? 'high' : (risk.inherentRiskLevel >= 9 ? 'medium' : 'low') }}">
                                    Risk Level: {{ risk.inherentRiskLevel }}
                                </span>
                                <small>Probability: {{ risk.probability }}/5</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Data Reuse: Related Controls #}
            {% if incident.relatedControls is defined and incident.relatedControls|length > 0 %}
                <div class="detail-section">
                    <h3>üõ°Ô∏è Related Controls ({{ incident.relatedControls|length }})</h3>
                    <p class="text-muted">Controls that should prevent/detect this type of incident:</p>
                    <div class="data-reuse-list">
                        {% for control in incident.relatedControls %}
                            <div class="data-reuse-item">
                                <strong>{{ control.controlId }}</strong>: {{ control.name }}
                                <span class="badge badge-{{ control.implementationStatus == 'implemented' ? 'success' : (control.implementationStatus == 'in_progress' ? 'warning' : 'danger') }}">
                                    {{ control.implementationStatus|upper }}
                                </span>
                                {% if control.implementationStatus != 'implemented' %}
                                    <small class="text-warning">‚ö†Ô∏è Control not fully implemented</small>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.badges {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
}
.badge-status-reported { background: #3b82f6; }
.badge-status-in_investigation { background: #f59e0b; }
.badge-status-in_resolution { background: #8b5cf6; }
.badge-status-resolved { background: #10b981; }
.badge-status-closed { background: #6b7280; }

/* NIS2 Compliance Status Badges */
.badge-nis2-not_applicable { background: #6b7280; }
.badge-nis2-compliant { background: #10b981; }
.badge-nis2-overdue { background: #dc2626; animation: pulse 2s infinite; }
.badge-nis2-awaiting_early_warning { background: #f59e0b; }
.badge-nis2-awaiting_detailed { background: #3b82f6; }
.badge-nis2-awaiting_final { background: #8b5cf6; }

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
}

/* NIS2 Timeline Section */
.nis2-timeline-section {
    background: linear-gradient(135deg, #f8fafc 0%, #e0f2fe 100%);
    border-left: 4px solid #3b82f6;
    padding: 1.5rem;
    margin: 1.5rem 0;
    border-radius: 8px;
}

.nis2-timeline-section h3 {
    color: #1e40af;
    margin-bottom: 0.5rem;
}

.nis2-timeline-section .text-muted {
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
}

.timeline-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 1.5rem 0;
}

.timeline-stage {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: white;
    border-radius: 8px;
    border: 2px solid #e5e7eb;
    transition: all 0.3s ease;
}

.timeline-stage.completed {
    border-color: #10b981;
    background: #f0fdf4;
}

.timeline-stage.overdue {
    border-color: #dc2626;
    background: #fef2f2;
    box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
}

.timeline-stage.pending {
    border-color: #3b82f6;
    background: #eff6ff;
}

.timeline-icon {
    font-size: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 3rem;
}

.timeline-content {
    flex: 1;
}

.timeline-content h4 {
    margin: 0 0 0.5rem 0;
    color: #1f2937;
    font-size: 1.1rem;
}

.timeline-deadline {
    font-size: 0.9rem;
    color: #6b7280;
    margin: 0.5rem 0;
}

.timeline-completed {
    padding: 0.5rem;
    background: #dcfce7;
    border-radius: 4px;
    color: #166534;
    font-weight: 500;
}

.timeline-overdue {
    padding: 0.5rem;
    background: #fee2e2;
    border-radius: 4px;
    color: #991b1b;
    font-weight: 600;
    animation: pulse 2s infinite;
}

.timeline-countdown {
    padding: 0.5rem;
    background: #fef3c7;
    border-radius: 4px;
    color: #92400e;
    font-weight: 500;
}

/* NIS2 Impact Grid */
.nis2-impact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 2px solid #e5e7eb;
}

.impact-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.impact-item .label {
    font-size: 0.85rem;
    color: #6b7280;
    font-weight: 500;
}

.impact-item .value {
    font-size: 1rem;
    color: #1f2937;
}

.impact-item code {
    background: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    color: #1f2937;
}

/* Data Reuse Sections */
.data-reuse-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 1rem;
}
.data-reuse-item {
    padding: 0.75rem;
    background: #f9fafb;
    border-left: 3px solid #3b82f6;
    border-radius: 4px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
}
.alert {
    padding: 1rem;
    border-radius: 4px;
    margin: 1rem 0;
}
.alert-warning {
    background: #fef3c7;
    border-left: 4px solid #f59e0b;
    color: #92400e;
}
.badge-risk-high {
    background: #ef4444;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
}
.badge-risk-medium {
    background: #f59e0b;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
}
.badge-risk-low {
    background: #10b981;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
}

/* Audit Log Styles */
.audit-log-list {
    margin-top: 1rem;
}

.audit-log-entry {
    border-left: 3px solid #e5e7eb;
    padding-left: 1rem;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #f3f4f6;
}

.audit-log-entry:last-child {
    border-bottom: none;
}

.audit-log-header {
    margin-bottom: 0.5rem;
    display: flex;
    gap: 0.5rem;
    align-items: center;
    flex-wrap: wrap;
}

.audit-log-changes {
    font-size: 0.875rem;
    margin-top: 0.5rem;
    padding-left: 1rem;
}

.change-item {
    margin-bottom: 0.25rem;
}

.change-item strong {
    color: #374151;
}

.text-danger {
    color: #dc2626;
}

.text-success {
    color: #10b981;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .timeline-stage {
        flex-direction: column;
    }

    .timeline-icon {
        align-self: flex-start;
    }

    .nis2-impact-grid {
        grid-template-columns: 1fr;
    }
}
</style>
{% endblock %}

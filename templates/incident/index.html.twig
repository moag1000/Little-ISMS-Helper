{% extends 'base.html.twig' %}
{% trans_default_domain 'incident' %}

{% block title %}{{ 'incident.header.title'|trans({}, 'incident') }} - {{ 'app.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
{# Breadcrumb Navigation #}
{% include '_components/_breadcrumb.html.twig' with {
    breadcrumbs: [
        { label: 'incident.breadcrumb'|trans({}, 'incident') }
    ]
} %}

{# Page Header with Actions #}
{% include '_components/_page_header.html.twig' with {
    title: 'incident.header.title'|trans({}, 'incident'),
    subtitle: 'incident.header.subtitle'|trans({}, 'incident'),
    icon: 'bi-bug',
    actions: [
        { label: 'incident.header.action.report'|trans({}, 'incident'), url: path('app_incident_new'), variant: 'danger', icon: 'bi-exclamation-circle' }
    ]
} %}

{# KPI Cards Grid #}
<div class="kpi-grid kpi-grid-responsive">
    {% include '_components/_kpi_card.html.twig' with {
        icon: 'bi-bug',
        label: 'incident.kpi.total'|trans({}, 'incident'),
        value: allIncidents|length,
        variant: 'primary'
    } %}

    {% include '_components/_kpi_card.html.twig' with {
        icon: 'bi-exclamation-circle',
        label: 'incident.kpi.open'|trans({}, 'incident'),
        value: openIncidents|length,
        variant: openIncidents|length > 0 ? 'danger' : 'success',
        link: '#filter-open'
    } %}

    {% set criticalIncidents = allIncidents|filter(i => i.severity == 'critical')|length %}
    {% include '_components/_kpi_card.html.twig' with {
        icon: 'bi-shield-fill-exclamation',
        label: 'incident.kpi.critical'|trans({}, 'incident'),
        value: criticalIncidents,
        variant: 'warning'
    } %}

    {% set avgResolutionDays = allIncidents|filter(i => i.status == 'resolved')|length > 0
        ? ((allIncidents|filter(i => i.status == 'resolved')|reduce((carry, i) => carry + (i.resolvedAt ? (i.resolvedAt.diff(i.occurredAt).days) : 0), 0)) / (allIncidents|filter(i => i.status == 'resolved')|length))|round(1)
        : 0 %}
    {% include '_components/_kpi_card.html.twig' with {
        icon: 'bi-clock-history',
        label: 'incident.kpi.avg_resolution'|trans({}, 'incident'),
        value: avgResolutionDays,
        unit: 'incident.kpi.unit.days'|trans({}, 'incident'),
        variant: 'info'
    } %}
</div>

{# Status Overview #}
<div class="card mb-4">
    <div class="card-header">
        <h3 class="mb-0"><i class="bi bi-kanban" aria-hidden="true"></i> {{ 'incident_management.title'|trans({}, 'incident') }}</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {% set statuses = {
                'open': { label: 'incident.status.open'|trans({}, 'incident'), icon: 'bi-circle', color: 'danger' },
                'in_progress': { label: 'incident.status.in_progress'|trans({}, 'incident'), icon: 'bi-arrow-repeat', color: 'warning' },
                'resolved': { label: 'incident.status.resolved'|trans({}, 'incident'), icon: 'bi-check-circle', color: 'success' },
                'closed': { label: 'incident.status.closed'|trans({}, 'incident'), icon: 'bi-check-circle-fill', color: 'secondary' }
            } %}
            {% for status, data in statuses %}
                {% set count = allIncidents|filter(i => i.status == status)|length %}
                <div class="col-md-3 mb-3">
                    <div class="status-card status-{{ status }}">
                        <div class="status-icon text-{{ data.color }}" aria-hidden="true">
                            <i class="bi {{ data.icon }}" aria-hidden="true"></i>
                        </div>
                        <div class="status-info">
                            <div class="status-label">{{ data.label }}</div>
                            <div class="status-count">{{ count }}</div>
                            {% if allIncidents|length > 0 %}
                                <div class="progress mt-2 progress-h-6">
                                    <div class="progress-bar bg-{{ data.color }}"
                                         style="width: {{ (count / allIncidents|length * 100)|round }}%"></div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{# Severity Distribution #}
<div class="card mb-4">
    <div class="card-header">
        <h3 class="mb-0"><i class="bi bi-speedometer" aria-hidden="true"></i> {{ 'incident.severity_distribution.title'|trans({}, 'incident') }}</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {% set severities = {
                'critical': { label: 'incident.severity.critical'|trans({}, 'incident'), icon: 'ðŸ”´', color: 'danger' },
                'high': { label: 'incident.severity.high'|trans({}, 'incident'), icon: 'ðŸŸ ', color: 'warning' },
                'medium': { label: 'incident.severity.medium'|trans({}, 'incident'), icon: 'ðŸŸ¡', color: 'info' },
                'low': { label: 'incident.severity.low'|trans({}, 'incident'), icon: 'ðŸŸ¢', color: 'success' }
            } %}
            {% for severity, data in severities %}
                {% set count = allIncidents|filter(i => i.severity == severity)|length %}
                <div class="col-md-3 mb-3">
                    <div class="severity-badge severity-{{ severity }}">
                        <div class="severity-icon">{{ data.icon }}</div>
                        <div class="severity-label">{{ data.label }}</div>
                        <div class="severity-count">{{ count }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{# Incidents Table or Empty State #}
{% if allIncidents|length == 0 %}
    {% include '_components/_empty_state.html.twig' with {
        icon: 'bi-shield-check',
        title: 'incident.empty.title'|trans({}, 'incident'),
        description: 'incident.empty.description'|trans({}, 'incident'),
        action: { label: 'incident.header.action.report'|trans({}, 'incident'), url: path('app_incident_new'), icon: 'bi-exclamation-circle' }
    } %}
{% else %}
<div class="card" data-controller="bulk-actions" data-bulk-actions-endpoint-value="/incident">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="bi bi-list" aria-hidden="true"></i> {{ 'incident.list.all_incidents'|trans({'%count%': allIncidents|length}, 'incident') }}</h3>
        <div class="d-flex gap-2">
            <select class="form-select form-select-sm w-150px" id="incident-status-filter">
                <option value="">{{ 'incident.filter.all_status'|trans({}, 'incident') }}</option>
                <option value="reported">{{ 'incident.status.reported'|trans({}, 'incident') }}</option>
                <option value="in_investigation">{{ 'incident.status.in_investigation'|trans({}, 'incident') }}</option>
                <option value="in_resolution">{{ 'incident.status.in_resolution'|trans({}, 'incident') }}</option>
                <option value="resolved">{{ 'incident.status.resolved'|trans({}, 'incident') }}</option>
                <option value="closed">{{ 'incident.status.closed'|trans({}, 'incident') }}</option>
            </select>
            <select class="form-select form-select-sm w-150px" id="incident-severity-filter">
                <option value="">{{ 'incident.filter.all_severity'|trans({}, 'incident') }}</option>
                <option value="critical">{{ 'incident.severity.critical'|trans({}, 'incident') }}</option>
                <option value="high">{{ 'incident.severity.high'|trans({}, 'incident') }}</option>
                <option value="medium">{{ 'incident.severity.medium'|trans({}, 'incident') }}</option>
                <option value="low">{{ 'incident.severity.low'|trans({}, 'incident') }}</option>
            </select>
            <label for="incident-search" class="visually-hidden">{{ 'common.search'|trans({}, 'messages') }}</label>
            <input type="search"
                   class="form-control form-control-sm w-200px"
                   id="incident-search"
                   placeholder="{{ 'common.search'|trans({}, 'messages') }}...">
        </div>
    </div>
    {% embed '_components/_table.html.twig' with {
        'class': 'table-hover mb-0',
        'noMargin': true,
        'responsive': true
    } %}
        {% block table_head %}
            <tr>
                <th scope="col" class="w-40px">
                    <input type="checkbox"
                           class="form-check-input"
                           data-action="bulk-actions#selectAll"
                           data-bulk-actions-target="selectAllCheckbox"
                           aria-label="{{ 'common.select_all'|trans({}, 'messages') }}">
                </th>
                <th scope="col">{{ 'incident.field.title'|trans({}, 'incident') }}</th>
                <th scope="col">{{ 'incident.field.category'|trans({}, 'incident') }}</th>
                <th scope="col" class="text-center">{{ 'incident.field.severity'|trans({}, 'incident') }}</th>
                <th scope="col">{{ 'incident.field.status'|trans({}, 'incident') }}</th>
                <th scope="col">{{ 'incident.field.detected_at'|trans({}, 'incident') }}</th>
                <th scope="col" class="text-center">{{ 'incident.field.affected_assets'|trans({}, 'incident') }}</th>
                <th scope="col" class="text-center">{{ 'incident.field.data_breach_occurred'|trans({}, 'incident') }}</th>
                <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
            </tr>
        {% endblock %}
        {% block table_body %}
            {% for incident in allIncidents %}
            <tr data-incident-id="{{ incident.id }}"
                data-incident-status="{{ incident.status }}"
                data-incident-severity="{{ incident.severity }}">
                <td>
                    <input type="checkbox"
                           class="form-check-input"
                           data-bulk-actions-target="item"
                           data-action="bulk-actions#selectItem"
                           value="{{ incident.id }}">
                </td>
                <td>
                    <strong>{{ incident.title }}</strong>
                    {% if incident.description %}
                    <br><small class="text-muted">{{ incident.description|length > 60 ? incident.description|slice(0, 60) ~ '...' : incident.description }}</small>
                    {% endif %}
                    {% if incident.status == 'reported' %}
                        <span class="badge bg-danger ms-2">{{ 'common.new'|trans({}, 'messages') }}</span>
                    {% endif %}
                </td>
                <td>
                    {% if incident.category %}
                        <span class="badge bg-secondary">{{ ('incident.category.' ~ incident.category)|trans({}, 'incident') }}</span>
                    {% else %}
                        <span class="text-muted">-</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    {% set severityColors = {
                        'critical': 'danger',
                        'high': 'warning',
                        'medium': 'info',
                        'low': 'success'
                    } %}
                    <span class="badge bg-{{ severityColors[incident.severity] ?? 'secondary' }}">
                        {{ ('incident.severity.' ~ incident.severity)|trans({}, 'incident') }}
                    </span>
                </td>
                <td>
                    {% set statusIcons = {
                        'reported': 'bi-circle text-danger',
                        'in_investigation': 'bi-search text-warning',
                        'in_resolution': 'bi-arrow-repeat text-info',
                        'resolved': 'bi-check-circle text-success',
                        'closed': 'bi-check-circle-fill text-secondary'
                    } %}
                    <i class="bi {{ statusIcons[incident.status] ?? 'bi-circle' }}" aria-hidden="true"></i>
                    {{ ('incident.status.' ~ incident.status)|trans({}, 'incident') }}
                </td>
                <td>
                    {{ incident.detectedAt|date('d.m.Y H:i') }}
                    {% if incident.detectedAt %}
                        {% set daysSince = (date().diff(incident.detectedAt).days) %}
                        {% if daysSince == 0 %}
                            <br><small class="text-muted">{{ 'common.today'|trans({}, 'messages') }}</small>
                        {% elseif daysSince == 1 %}
                            <br><small class="text-muted">{{ 'common.yesterday'|trans({}, 'messages') }}</small>
                        {% else %}
                            <br><small class="text-muted">{{ 'common.days_ago'|trans({'%days%': daysSince}, 'messages') }}</small>
                        {% endif %}
                    {% endif %}
                </td>
                <td class="text-center">
                    {% if incident.affectedAssets|length > 0 %}
                        <a href="{{ path('app_incident_show', {id: incident.id}) }}#affected-assets" class="badge bg-warning text-dark" title="{{ 'incident.field.affected_assets'|trans({}, 'incident') }}">
                            {{ incident.affectedAssets|length }}
                        </a>
                    {% else %}
                        <span class="text-muted">0</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    {% if incident.dataBreachOccurred %}
                        <span class="badge bg-danger" title="{{ 'incident.field.data_breach_occurred'|trans({}, 'incident') }}">
                            <i class="bi bi-shield-exclamation" aria-hidden="true"></i> {{ 'common.yes'|trans({}, 'messages') }}
                        </span>
                    {% else %}
                        <span class="text-muted">{{ 'common.no'|trans({}, 'messages') }}</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                        <a href="{{ path('app_incident_show', {id: incident.id}) }}"
                           class="btn btn-outline-primary"
                           data-turbo-action="advance"
                           title="{{ 'common.view'|trans({}, 'messages') }}" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                            <i class="bi bi-eye" aria-hidden="true"></i>
                        </a>
                        {% if is_granted('ROLE_USER') and incident.status != 'closed' %}
                        <a href="{{ path('app_incident_edit', {id: incident.id}) }}"
                           class="btn btn-outline-secondary"
                           data-turbo-action="advance"
                           title="{{ 'common.edit'|trans({}, 'messages') }}" aria-label="{{ 'common.edit'|trans({}, 'messages') }}">
                            <i class="bi bi-pencil" aria-hidden="true"></i>
                        </a>
                        {% endif %}
                    </div>
                </td>
            </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    {# Bulk Action Bar #}
    {% include '_components/_bulk_action_bar.html.twig' with {
        actions: ['export', 'delete']
    } %}
</div>
{% endif %}

<style>
/* Status Cards */
.status-card {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background: white;
    border-radius: var(--border-radius);
    border: 2px solid var(--color-border);
    transition: all 0.2s;
}

.status-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.status-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    background: var(--color-bg);
    border-radius: 50%;
}

.status-info {
    flex: 1;
}

.status-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 4px;
}

.status-count {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-primary);
}

/* Severity Badges */
.severity-badge {
    text-align: center;
    padding: var(--spacing-lg);
    background: white;
    border-radius: var(--border-radius);
    border: 2px solid;
    transition: all 0.2s;
}

.severity-badge.severity-critical { border-color: var(--color-danger); }
.severity-badge.severity-high { border-color: var(--color-warning); }
.severity-badge.severity-medium { border-color: var(--color-info); }
.severity-badge.severity-low { border-color: var(--color-success); }

.severity-badge:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-md);
}

.severity-icon {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-xs);
}

.severity-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 4px;
}

.severity-count {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
}
</style>

{# Search & Filter functionality #}
<script>
// Search
document.getElementById('incident-search')?.addEventListener('input', function(e) {
    const query = e.target.value.toLowerCase();
    filterIncidents();
});

// Status filter
document.getElementById('incident-status-filter')?.addEventListener('change', function(e) {
    filterIncidents();
});

// Severity filter
document.getElementById('incident-severity-filter')?.addEventListener('change', function(e) {
    filterIncidents();
});

function filterIncidents() {
    const query = document.getElementById('incident-search')?.value.toLowerCase() || '';
    const status = document.getElementById('incident-status-filter')?.value || '';
    const severity = document.getElementById('incident-severity-filter')?.value || '';
    const rows = document.querySelectorAll('tbody tr[data-incident-id]');

    rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        const rowStatus = row.dataset.incidentStatus;
        const rowSeverity = row.dataset.incidentSeverity;

        const matchesSearch = !query || text.includes(query);
        const matchesStatus = !status || rowStatus === status;
        const matchesSeverity = !severity || rowSeverity === severity;

        row.style.display = (matchesSearch && matchesStatus && matchesSeverity) ? '' : 'none';
    });
}
</script>

{% endblock %}

{#
    Risk Form Partial (Accessible)
    Used by both new.html.twig and edit.html.twig
    WCAG 2.1 AA Compliant
#}

{# Basic Information #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-info-circle" aria-hidden="true"></i>
        {{ 'risk.section.basic_info'|trans|default('Grundinformationen') }}
    </legend>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.title,
                'label': 'risk.field.title'|trans|default('Titel'),
                'help': 'risk.help.title'|trans|default('Kurzer, prägnanter Titel des Risikos'),
                'required': true
            } %}
        </div>

        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.asset,
                'label': 'risk.field.asset'|trans|default('Betroffenes Asset'),
                'help': 'risk.help.asset'|trans|default('Asset, das von diesem Risiko betroffen ist')
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {% include '_components/_form_field.html.twig' with {
                'field': form.description,
                'label': 'risk.field.description'|trans|default('Beschreibung'),
                'help': 'risk.help.description'|trans|default('Detaillierte Beschreibung des Risikos und seiner potenziellen Auswirkungen')
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.threat,
                'label': 'risk.field.threat'|trans|default('Bedrohung'),
                'help': 'risk.help.threat'|trans|default('Welche Bedrohung könnte dieses Risiko auslösen?')
            } %}
        </div>

        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.vulnerability,
                'label': 'risk.field.vulnerability'|trans|default('Verwundbarkeit'),
                'help': 'risk.help.vulnerability'|trans|default('Welche Schwachstelle könnte ausgenutzt werden?')
            } %}
        </div>
    </div>
</fieldset>

{# GDPR/DSGVO Data Protection Fields (Priority 2.2) #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-shield-lock" aria-hidden="true"></i>
        {{ 'risk.section.gdpr_assessment'|trans|default('DSGVO/GDPR Datenschutz-Bewertung') }}
    </legend>

    <div class="alert alert-info" role="status">
        <i class="bi bi-info-circle" aria-hidden="true"></i>
        {{ 'risk.help.gdpr_section'|trans|default('Bewerten Sie, ob dieses Risiko personenbezogene Daten betrifft (DSGVO Art. 32)') }}
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.involvesPersonalData,
                'label': 'risk.field.involves_personal_data'|trans|default('Betrifft personenbezogene Daten'),
                'help': 'risk.help.involves_personal_data'|trans|default('Aktivieren Sie dies, wenn das Risiko die Verarbeitung personenbezogener Daten betrifft')
            } %}
        </div>

        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.involvesSpecialCategoryData,
                'label': 'risk.field.involves_special_category_data'|trans|default('Betrifft besondere Kategorien'),
                'help': 'risk.help.involves_special_category_data'|trans|default('Besondere Kategorien gemäß Art. 9 DSGVO')
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.legalBasis,
                'label': 'risk.field.legal_basis'|trans|default('Rechtsgrundlage'),
                'help': 'risk.help.legal_basis'|trans|default('Rechtsgrundlage für die Datenverarbeitung gemäß DSGVO Art. 6')
            } %}
        </div>

        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.processingScale,
                'label': 'risk.field.processing_scale'|trans|default('Umfang der Verarbeitung'),
                'help': 'risk.help.processing_scale'|trans|default('Umfang der Datenverarbeitung')
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.requiresDPIA,
                'label': 'risk.field.requires_dpia'|trans|default('DSFA erforderlich'),
                'help': 'risk.help.requires_dpia'|trans|default('Datenschutz-Folgenabschätzung erforderlich')
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {% include '_components/_form_field.html.twig' with {
                'field': form.dataSubjectImpact,
                'label': 'risk.field.data_subject_impact'|trans|default('Auswirkungen auf betroffene Personen'),
                'help': 'risk.help.data_subject_impact'|trans|default('Beschreiben Sie die Auswirkungen auf Rechte und Freiheiten')
            } %}
        </div>
    </div>
</fieldset>

{# Inherent Risk (Brutto-Risiko) #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-exclamation-diamond" aria-hidden="true"></i>
        {{ 'risk.section.inherent_risk'|trans|default('Brutto-Risiko (ohne Controls)') }}
    </legend>

    <div class="alert alert-info" role="status">
        <i class="bi bi-info-circle" aria-hidden="true"></i>
        {{ 'risk.help.inherent'|trans|default('Bewertung des Risikos ohne bestehende Sicherheitsmaßnahmen') }}
    </div>

    {# Risk Assessment Guidance Helper (Priority 2.3) #}
    <div class="card border-primary mb-3">
        <div class="card-header bg-primary-subtle">
            <h6 class="mb-0">
                <button class="btn btn-link text-decoration-none p-0 w-100 text-start"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#riskAssessmentGuidance"
                        aria-expanded="false"
                        aria-controls="riskAssessmentGuidance">
                    <i class="bi bi-question-circle-fill text-primary" aria-hidden="true"></i>
                    {{ 'risk.guidance.title'|trans }}
                    <i class="bi bi-chevron-down float-end" aria-hidden="true"></i>
                </button>
            </h6>
        </div>
        <div class="collapse" id="riskAssessmentGuidance">
            <div class="card-body">
                <p class="text-muted mb-3">
                    {{ 'risk.guidance.intro'|trans }}
                </p>

                {# Probability Scale #}
                <h6 class="fw-bold mb-2">
                    <i class="bi bi-graph-up" aria-hidden="true"></i>
                    {{ 'risk.guidance.probability_title'|trans }}
                </h6>
                <div class="table-responsive mb-4">
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 25%;">{{ 'risk.guidance.scale'|trans }}</th>
                                <th>{{ 'risk.guidance.description'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>1 - {{ 'risk.guidance.probability.very_unlikely'|trans }}</strong></td>
                                <td>{{ 'risk.guidance.probability.very_unlikely_desc'|trans }}</td>
                            </tr>
                            <tr>
                                <td><strong>2 - {{ 'risk.guidance.probability.unlikely'|trans }}</strong></td>
                                <td>{{ 'risk.guidance.probability.unlikely_desc'|trans }}</td>
                            </tr>
                            <tr>
                                <td><strong>3 - {{ 'risk.guidance.probability.possible'|trans }}</strong></td>
                                <td>{{ 'risk.guidance.probability.possible_desc'|trans }}</td>
                            </tr>
                            <tr>
                                <td><strong>4 - {{ 'risk.guidance.probability.likely'|trans }}</strong></td>
                                <td>{{ 'risk.guidance.probability.likely_desc'|trans }}</td>
                            </tr>
                            <tr>
                                <td><strong>5 - {{ 'risk.guidance.probability.very_likely'|trans }}</strong></td>
                                <td>{{ 'risk.guidance.probability.very_likely_desc'|trans }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                {# Impact Scale #}
                <h6 class="fw-bold mb-2">
                    <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                    {{ 'risk.guidance.impact_title'|trans }}
                </h6>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 25%;">{{ 'risk.guidance.scale'|trans }}</th>
                                <th>{{ 'risk.guidance.description'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>1 - {{ 'risk.guidance.impact.negligible'|trans }}</strong></td>
                                <td>{{ 'risk.guidance.impact.negligible_desc'|trans }}</td>
                            </tr>
                            <tr>
                                <td><strong>2 - {{ 'risk.guidance.impact.minor'|trans }}</strong></td>
                                <td>{{ 'risk.guidance.impact.minor_desc'|trans }}</td>
                            </tr>
                            <tr>
                                <td><strong>3 - {{ 'risk.guidance.impact.moderate'|trans }}</strong></td>
                                <td>{{ 'risk.guidance.impact.moderate_desc'|trans }}</td>
                            </tr>
                            <tr>
                                <td><strong>4 - {{ 'risk.guidance.impact.major'|trans }}</strong></td>
                                <td>{{ 'risk.guidance.impact.major_desc'|trans }}</td>
                            </tr>
                            <tr>
                                <td><strong>5 - {{ 'risk.guidance.impact.catastrophic'|trans }}</strong></td>
                                <td>{{ 'risk.guidance.impact.catastrophic_desc'|trans }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-warning mt-3 mb-0" role="status">
                    <small>
                        <i class="bi bi-lightbulb" aria-hidden="true"></i>
                        {{ 'risk.guidance.tip'|trans }}
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.probability,
                'label': 'risk.field.probability'|trans|default('Eintrittswahrscheinlichkeit'),
                'help': 'risk.help.probability'|trans|default('Wie wahrscheinlich ist das Eintreten? (1=sehr unwahrscheinlich, 5=sehr wahrscheinlich)'),
                'required': true
            } %}
        </div>

        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.impact,
                'label': 'risk.field.impact'|trans|default('Schadensausmaß'),
                'help': 'risk.help.impact'|trans|default('Wie hoch wäre der Schaden? (1=minimal, 5=katastrophal)'),
                'required': true
            } %}
        </div>
    </div>
</fieldset>


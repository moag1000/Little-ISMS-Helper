{% extends 'base.html.twig' %}

{% block title %}{{ risk.title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>{{ risk.title }}</h1>
        <div class="actions">
            <a href="{{ path('app_risk_edit', {id: risk.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('app_risk_index') }}" class="btn btn-secondary">Back to List</a>
            {% if is_granted('ROLE_ADMIN') %}
                <form method="post" action="{{ path('app_risk_delete', {id: risk.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this risk?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ risk.id) }}">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            {% endif %}
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>Risk Details</h2>
            <span class="badge badge-{{ risk.inherentRiskLevel }}">{{ risk.inherentRiskLevel|upper }}</span>
        </div>
        <div class="card-content">
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="label">Category:</span>
                    <span class="value">{{ risk.category|capitalize }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Status:</span>
                    <span class="value">{{ risk.status|upper|replace({'_': ' '}) }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Identified:</span>
                    <span class="value">{{ risk.identifiedDate|date('d.m.Y') }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Identified By:</span>
                    <span class="value">{{ risk.identifiedBy ?? 'N/A' }}</span>
                </div>
            </div>

            {% if risk.description %}
                <div class="detail-section">
                    <h3>Description</h3>
                    <p>{{ risk.description }}</p>
                </div>
            {% endif %}

            <div class="risk-assessment-grid">
                <div class="assessment-card">
                    <h3>Inherent Risk</h3>
                    <div class="risk-matrix-mini">
                        <div class="risk-score risk-level-{{ risk.inherentRiskLevel }}">
                            {{ risk.inherentRiskScore }}
                        </div>
                        <div class="risk-components">
                            <div>Probability: {{ risk.inherentProbability }}/5</div>
                            <div>Impact: {{ risk.inherentImpact }}/5</div>
                        </div>
                    </div>
                    <p class="risk-level-text">Level: <strong>{{ risk.inherentRiskLevel|upper }}</strong></p>
                </div>

                {% if risk.residualProbability and risk.residualImpact %}
                <div class="assessment-card">
                    <h3>Residual Risk</h3>
                    <div class="risk-matrix-mini">
                        <div class="risk-score risk-level-{{ risk.residualRiskLevel }}">
                            {{ risk.residualRiskScore }}
                        </div>
                        <div class="risk-components">
                            <div>Probability: {{ risk.residualProbability }}/5</div>
                            <div>Impact: {{ risk.residualImpact }}/5</div>
                        </div>
                    </div>
                    <p class="risk-level-text">Level: <strong>{{ risk.residualRiskLevel|upper }}</strong></p>
                </div>
                {% endif %}
            </div>

            <div class="detail-section">
                <h3>Treatment Strategy</h3>
                <p><strong>{{ risk.treatmentStrategy|upper|replace({'_': ' '}) }}</strong></p>

                {% if risk.reviewDate %}
                    <p>Next Review: {{ risk.reviewDate|date('d.m.Y') }}</p>
                {% endif %}
            </div>

            {# Data Reuse: Risk Owner #}
            {% if risk.riskOwner is defined and risk.riskOwner %}
                <div class="detail-section">
                    <h3>Risk Owner</h3>
                    <p><strong>{{ risk.riskOwner.fullName }}</strong> ({{ risk.riskOwner.email }})</p>
                </div>
            {% endif %}

            {# Data Reuse: Mitigating Controls #}
            {% if risk.controls is defined and risk.controls|length > 0 %}
                <div class="detail-section">
                    <h3>Mitigating Controls ({{ risk.controls|length }})</h3>
                    <div class="controls-list">
                        {% for control in risk.controls %}
                            <div class="control-item">
                                <strong>{{ control.controlId }}</strong>: {{ control.name }}
                                <span class="badge badge-{{ control.implementationStatus }}">
                                    {{ control.implementationStatus|upper }}
                                </span>
                                <small>({{ control.implementationPercentage }}%)</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Data Reuse: Realized Risks (Incidents) #}
            {% if risk.incidents is defined and risk.incidents|length > 0 %}
                <div class="detail-section">
                    <h3>Realization History ({{ risk.incidents|length }} incidents)</h3>
                    <div class="alert alert-warning">
                        <strong>âš  This risk has been realized {{ risk.incidents|length }} time(s).</strong>
                        Consider reviewing probability assessment.
                    </div>
                    <div class="incidents-list">
                        {% for incident in risk.incidents %}
                            <div class="incident-item">
                                <strong>{{ incident.title }}</strong>
                                <span class="badge badge-severity-{{ incident.severity }}">
                                    {{ incident.severity|upper }}
                                </span>
                                <small>{{ incident.detectedAt|date('Y-m-d') }}</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Data Reuse: Asset Information #}
            {% if risk.asset is defined and risk.asset %}
                <div class="detail-section">
                    <h3>Affected Asset</h3>
                    <div class="asset-info">
                        <strong>{{ risk.asset.name }}</strong>
                        <p>Type: {{ risk.asset.assetType }}</p>
                        {% if risk.asset.monetaryValue %}
                            <p>Monetary Value: â‚¬{{ risk.asset.monetaryValue }}</p>
                            <div class="alert alert-info">
                                <small>ðŸ’¡ Impact calculation can be derived from asset monetary value</small>
                            </div>
                        {% endif %}
                        {% if risk.asset.dataClassification %}
                            <p>Classification:
                                <span class="badge badge-classification-{{ risk.asset.dataClassification }}">
                                    {{ risk.asset.dataClassification|upper }}
                                </span>
                            </p>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.risk-assessment-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
}
.assessment-card {
    background: #f9fafb;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
}
.risk-matrix-mini {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 1rem 0;
}
.risk-score {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: bold;
    border-radius: 8px;
    color: white;
}
.risk-level-low { background: #10b981; }
.risk-level-medium { background: #f59e0b; }
.risk-level-high { background: #f97316; }
.risk-level-critical { background: #dc2626; }
.risk-components { font-size: 0.9rem; color: #666; }
.risk-level-text { margin-top: 1rem; font-size: 1.1rem; }
/* Data Reuse Styles */
.controls-list, .incidents-list { display: flex; flex-direction: column; gap: 0.5rem; margin-top: 1rem; }
.control-item, .incident-item {
    padding: 0.75rem;
    background: #f9fafb;
    border-left: 3px solid #3b82f6;
    border-radius: 4px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}
.alert { padding: 1rem; border-radius: 4px; margin: 1rem 0; }
.alert-warning { background: #fef3c7; border-left: 4px solid #f59e0b; color: #92400e; }
.alert-info { background: #dbeafe; border-left: 4px solid #3b82f6; color: #1e40af; }
.asset-info { padding: 1rem; background: #f9fafb; border-radius: 4px; }
.badge-severity-critical { background: #7f1d1d; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-severity-high { background: #ef4444; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-severity-medium { background: #f59e0b; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-severity-low { background: #10b981; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-public { background: #10b981; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-internal { background: #3b82f6; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-confidential { background: #f59e0b; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-restricted { background: #ef4444; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
</style>
{% endblock %}

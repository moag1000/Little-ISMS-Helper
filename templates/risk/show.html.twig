{% extends 'base.html.twig' %}
{% trans_default_domain 'risk' %}

{% block title %}{{ risk.title }}{% endblock %}

{% block body %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.risks'|trans({}, 'nav'), url: path('app_risk_index') },
            { label: risk.title }
        ]
    } %}

    <div class="page-header">
        <h1>
            {{ risk.title }}
            {% if isInherited is defined and isInherited %}
                <span class="badge bg-info ms-2">
                    <i class="bi bi-building" aria-hidden="true"></i> {{ 'corporate.inherited'|trans({}, 'tenant') }}
                </span>
            {% endif %}
        </h1>
        <div class="actions">
            {% if canEdit is defined and canEdit %}
                <a href="{{ path('app_risk_edit', {id: risk.id}) }}" class="btn btn-primary"><i class="bi bi-pencil" aria-hidden="true"></i> {{ 'action.edit'|trans({}, 'messages') }}</a>
            {% else %}
                <button class="btn btn-primary" disabled title="{{ 'corporate.inheritance.cannot_edit_inherited'|trans({}, 'tenant') }}">
                    <i class="bi bi-lock" aria-hidden="true"></i> {{ 'action.edit'|trans({}, 'messages') }}
                </button>
            {% endif %}
            <a href="{{ path('app_risk_index') }}" class="btn btn-secondary">{{ 'action.back_to_list'|trans({}, 'messages') }}</a>
            {% if is_granted('ROLE_ADMIN') and (canEdit is not defined or canEdit) %}
                <form method="post" action="{{ path('app_risk_delete', {id: risk.id}) }}" class="d-inline" onsubmit="return confirm('{{ 'risk.delete.confirm_message'|trans({}, 'risk') }}');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ risk.id) }}">
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash" aria-hidden="true"></i> {{ 'action.delete'|trans({}, 'messages') }}</button>
                </form>
            {% endif %}
        </div>
    </div>

    {% if isInherited is defined and isInherited %}
        <div class="alert alert-info mb-3">
            <div class="d-flex align-items-start">
                <i class="bi bi-info-circle-fill me-2 mt-1" aria-hidden="true"></i>
                <div>
                    <strong>{{ 'corporate.inheritance.view_only_title'|trans({}, 'tenant') }}</strong>
                    <p class="mb-0">{{ 'corporate.inheritance.risk_inherited_message'|trans({}, 'tenant') }}</p>
                </div>
            </div>
        </div>
    {% endif %}

    {# ISO 27001 compliant thresholds: 20/12/6 #}
    {% set riskClass = risk.inherentRiskLevel >= 20 ? 'critical' : (risk.inherentRiskLevel >= 12 ? 'high' : (risk.inherentRiskLevel >= 6 ? 'medium' : 'low')) %}

    <div class="card">
        <div class="card-header">
            <h2>{{ 'risk.section.details'|trans({}, 'risk') }}</h2>
            <span class="{{ badge_risk(riskClass) }}">
                {{ riskClass|upper }} ({{ risk.inherentRiskLevel }})
            </span>
        </div>
        <div class="card-body">
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="label">{{ 'risk.field.status'|trans({}, 'risk') }}:</span>
                    <span class="value">{{ risk.status|upper|replace({'_': ' '}) }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'risk.field.created'|trans({}, 'risk') }}:</span>
                    <span class="value">{{ risk.createdAt|date('d.m.Y') }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'risk.field.last_review'|trans({}, 'risk') }}:</span>
                    <span class="value">{{ risk.reviewDate ? risk.reviewDate|date('d.m.Y') : ('risk.not_reviewed'|trans({}, 'risk')) }}</span>
                </div>
            </div>

            {% if risk.description %}
                <div class="detail-section">
                    <h2>{{ 'risk.section.description'|trans({}, 'risk') }}</h2>
                    <p>{{ risk.description }}</p>
                </div>
            {% endif %}

            <div class="risk-assessment-grid">
                <div class="assessment-card">
                    <h2>{{ 'risk.assessment.inherent_risk'|trans({}, 'risk') }}</h2>
                    <div class="risk-matrix-mini risk-level-{{ riskClass }}">
                        <div class="risk-score">
                            {{ risk.inherentRiskLevel }}
                        </div>
                        <div class="risk-components">
                            <div>{{ 'risk.assessment.probability'|trans({}, 'risk') }}: {{ risk.probability }}/5</div>
                            <div>{{ 'risk.assessment.impact'|trans({}, 'risk') }}: {{ risk.impact }}/5</div>
                        </div>
                    </div>
                    <p class="risk-level-text">{{ 'risk.assessment.level'|trans({}, 'risk') }}: <strong>{{ riskClass|upper }} ({{ 'risk.assessment.score'|trans({}, 'risk') }}: {{ risk.inherentRiskLevel }})</strong></p>
                </div>

                {% if risk.residualProbability and risk.residualImpact %}
                {# ISO 27001 compliant thresholds: 20/12/6 #}
                {% set residualClass = risk.residualRiskLevel >= 20 ? 'critical' : (risk.residualRiskLevel >= 12 ? 'high' : (risk.residualRiskLevel >= 6 ? 'medium' : 'low')) %}
                <div class="assessment-card">
                    <h3>{{ 'risk.assessment.residual_risk'|trans({}, 'risk') }}</h3>
                    <div class="risk-matrix-mini risk-level-{{ residualClass }}">
                        <div class="risk-score">
                            {{ risk.residualRiskLevel }}
                        </div>
                        <div class="risk-components">
                            <div>{{ 'risk.assessment.probability'|trans({}, 'risk') }}: {{ risk.residualProbability }}/5</div>
                            <div>{{ 'risk.assessment.impact'|trans({}, 'risk') }}: {{ risk.residualImpact }}/5</div>
                        </div>
                    </div>
                    <p class="risk-level-text">{{ 'risk.assessment.level'|trans({}, 'risk') }}: <strong>{{ residualClass|upper }} ({{ 'risk.assessment.score'|trans({}, 'risk') }}: {{ risk.residualRiskLevel }})</strong></p>
                </div>
                {% endif %}
            </div>

            <div class="detail-section">
                <h3>{{ 'risk.section.treatment_strategy'|trans({}, 'risk') }}</h3>
                <p><strong>{{ risk.treatmentStrategy|upper|replace({'_': ' '}) }}</strong></p>

                {% if risk.reviewDate %}
                    <p>{{ 'risk.field.next_review'|trans({}, 'risk') }}: {{ risk.reviewDate|date('d.m.Y') }}</p>
                {% endif %}
            </div>

            {# Data Reuse: Risk Owner #}
            {% if risk.riskOwner is defined and risk.riskOwner %}
                <div class="detail-section">
                    <h3>{{ 'risk.section.risk_owner'|trans({}, 'risk') }}</h3>
                    <p><strong>{{ risk.riskOwner.fullName }}</strong> ({{ risk.riskOwner.email }})</p>
                </div>
            {% endif %}

            {# Data Reuse: Mitigating Controls #}
            {% if risk.controls is defined and risk.controls|length > 0 %}
                <div class="detail-section">
                    <h3>{{ 'risk.section.mitigating_controls'|trans({}, 'risk') }} ({{ risk.controls|length }})</h3>
                    <div class="controls-list">
                        {% for control in risk.controls %}
                            <div class="control-item">
                                <strong>{{ control.controlId }}</strong>: {{ control.name }}
                                <span class="{{ badge_status(control.implementationStatus) }}">
                                    {{ control.implementationStatus|upper }}
                                </span>
                                <small>({{ control.implementationPercentage }}%)</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Data Reuse: Realized Risks (Incidents) #}
            {% if risk.incidents is defined and risk.incidents|length > 0 %}
                <div class="detail-section">
                    <h3>{{ 'risk.section.realization_history'|trans({}, 'risk') }} ({{ risk.incidents|length }} {{ 'risk.incidents'|trans({}, 'risk') }})</h3>
                    <div class="alert alert-warning">
                        <strong><i class="bi bi-exclamation-triangle text-warning" aria-hidden="true"></i> {{ 'risk.realization.warning'|trans({'%count%': risk.incidents|length}, 'risk') }}</strong>
                        {{ 'risk.realization.review_suggestion'|trans({}, 'risk') }}
                    </div>
                    <div class="incidents-list">
                        {% for incident in risk.incidents %}
                            <div class="incident-item">
                                <strong>{{ incident.title }}</strong>
                                <span class="{{ badge_severity(incident.severity) }}">
                                    {{ incident.severity|upper }}
                                </span>
                                <small>{{ incident.detectedAt|date('Y-m-d') }}</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Risk Subject: Asset, Person, Location, or Supplier #}
            {% if risk.asset or risk.person or risk.location or risk.supplier %}
                <div class="detail-section">
                    <h3>
                        <i class="bi bi-bullseye" aria-hidden="true"></i>
                        {{ 'risk.section.risk_subject'|trans({}, 'risk') }}
                        <span class="badge bg-secondary ms-2">{{ risk.riskSubjectType|upper }}</span>
                    </h3>

                    {% if risk.asset %}
                        <div class="subject-info card mb-3">
                            <div class="card-header bg-primary text-white">
                                <i class="bi bi-cpu" aria-hidden="true"></i> {{ 'asset.title'|trans({}, 'asset') }}
                            </div>
                            <div class="card-body">
                                <h5>{{ risk.asset.name }}</h5>
                                <p><strong>{{ 'asset.field.type'|trans({}, 'asset') }}:</strong> {{ risk.asset.assetType }}</p>
                                {% if risk.asset.monetaryValue %}
                                    <p><strong>{{ 'asset.field.monetary_value'|trans({}, 'asset') }}:</strong> â‚¬{{ risk.asset.monetaryValue|number_format(2, ',', '.') }}</p>
                                    <div class="alert alert-info mb-0">
                                        <i class="bi bi-lightbulb" aria-hidden="true"></i>
                                        <small>{{ 'risk.subject.asset.monetary_value_hint'|trans({}, 'risk') }}</small>
                                    </div>
                                {% endif %}
                                {% if risk.asset.dataClassification %}
                                    <p><strong>{{ 'asset.field.classification'|trans({}, 'asset') }}:</strong>
                                        <span class="{{ badge_classification(risk.asset.dataClassification) }}">
                                            {{ risk.asset.dataClassification|upper }}
                                        </span>
                                    </p>
                                {% endif %}
                                <a href="{{ path('app_asset_show', {id: risk.asset.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-box-arrow-up-right" aria-hidden="true"></i> {{ 'asset.action.view_details'|trans({}, 'asset') }}
                                </a>
                            </div>
                        </div>
                    {% endif %}

                    {% if risk.person %}
                        <div class="subject-info card mb-3">
                            <div class="card-header bg-info text-white">
                                <i class="bi bi-person" aria-hidden="true"></i> {{ 'person.title'|trans({}, 'messages') }}
                            </div>
                            <div class="card-body">
                                <h5>{{ risk.person.fullName }}</h5>
                                {% if risk.person.email %}
                                    <p><strong>{{ 'person.field.email'|trans({}, 'messages') }}:</strong> <a href="mailto:{{ risk.person.email }}">{{ risk.person.email }}</a></p>
                                {% endif %}
                                {% if risk.person.department %}
                                    <p><strong>{{ 'person.field.department'|trans({}, 'messages') }}:</strong> {{ risk.person.department }}</p>
                                {% endif %}
                                <a href="{{ path('app_person_show', {id: risk.person.id}) }}" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-box-arrow-up-right" aria-hidden="true"></i> {{ 'person.action.view_details'|trans({}, 'messages') }}
                                </a>
                            </div>
                        </div>
                    {% endif %}

                    {% if risk.location %}
                        <div class="subject-info card mb-3">
                            <div class="card-header bg-warning text-dark">
                                <i class="bi bi-geo-alt" aria-hidden="true"></i> {{ 'location.title'|trans({}, 'locations') }}
                            </div>
                            <div class="card-body">
                                <h5>{{ risk.location.name }}</h5>
                                {% if risk.location.address %}
                                    <p><strong>{{ 'location.field.address'|trans({}, 'locations') }}:</strong> {{ risk.location.address }}</p>
                                {% endif %}
                                {% if risk.location.city and risk.location.country %}
                                    <p><strong>{{ 'risk.subject.location.city_country'|trans({}, 'risk') }}:</strong> {{ risk.location.city }}, {{ risk.location.country }}</p>
                                {% endif %}
                                <a href="{{ path('app_location_show', {id: risk.location.id}) }}" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-box-arrow-up-right" aria-hidden="true"></i> {{ 'location.action.view_details'|trans({}, 'locations') }}
                                </a>
                            </div>
                        </div>
                    {% endif %}

                    {% if risk.supplier %}
                        <div class="subject-info card mb-3">
                            <div class="card-header bg-success text-white">
                                <i class="bi bi-truck" aria-hidden="true"></i> {{ 'supplier.title'|trans({}, 'suppliers') }}
                            </div>
                            <div class="card-body">
                                <h5>{{ risk.supplier.name }}</h5>
                                {% if risk.supplier.contactEmail %}
                                    <p><strong>{{ 'supplier.field.contact'|trans({}, 'suppliers') }}:</strong> <a href="mailto:{{ risk.supplier.contactEmail }}">{{ risk.supplier.contactEmail }}</a></p>
                                {% endif %}
                                {% if risk.supplier.riskLevel %}
                                    <p><strong>{{ 'supplier.field.risk_level'|trans({}, 'suppliers') }}:</strong>
                                        <span class="{{ badge_risk(risk.supplier.riskLevel) }}">
                                            {{ risk.supplier.riskLevel|upper }}
                                        </span>
                                    </p>
                                {% endif %}
                                <a href="{{ path('app_supplier_show', {id: risk.supplier.id}) }}" class="btn btn-sm btn-outline-success">
                                    <i class="bi bi-box-arrow-up-right" aria-hidden="true"></i> {{ 'supplier.action.view_details'|trans({}, 'suppliers') }}
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endif %}

            {# Risk History: Audit Log #}
            {% if auditLogs is defined and auditLogs|length > 0 %}
                <div class="detail-section">
                    <h3>{{ 'risk.section.history'|trans({}, 'risk') }} ({{ totalAuditLogs }} {{ 'audit_log.entries'|trans({}, 'audit_log') }})</h3>
                    <div class="audit-log-list">
                        {% for log in auditLogs %}
                            <div class="audit-log-item">
                                <div class="audit-log-header">
                                    <span class="{{ badge_action(log.action) }}">
                                        {{ log.action|upper }}
                                    </span>
                                    <small class="text-muted">{{ log.createdAt|date('Y-m-d H:i:s') }}</small>
                                </div>
                                <div class="audit-log-details">
                                    <strong>{{ log.userName }}</strong>
                                    {% set oldValues = log.oldValuesArray %}
                                    {% set newValues = log.newValuesArray %}
                                    {% if newValues %}
                                        <div class="audit-log-changes">
                                            {% for field, newValue in newValues %}
                                                <div class="change-item">
                                                    <span class="field-name">{{ field }}:</span>
                                                    {% if oldValues and oldValues[field] is defined %}
                                                        <span class="old-value">{{ oldValues[field] }}</span>
                                                        <i class="bi bi-arrow-right" aria-hidden="true"></i>
                                                    {% endif %}
                                                    <span class="new-value">{{ newValue }}</span>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {% if totalAuditLogs > 10 %}
                        <div class="text-center mt-3">
                            <a href="{{ path('app_audit_log_index', {entity: 'Risk', entityId: risk.id}) }}" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-clock-history" aria-hidden="true"></i> {{ 'action.view_all'|trans({}, 'messages') }} ({{ totalAuditLogs }})
                            </a>
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.risk-assessment-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
}
.assessment-card {
    background: #f9fafb;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
}
.risk-matrix-mini {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 1rem 0;
}
.risk-score {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: bold;
    border-radius: 8px;
    color: #1f2937;
}
.risk-level-low { background: #d1fae5; }
.risk-level-medium { background: #fef3c7; }
.risk-level-high { background: #fed7aa; }
.risk-level-critical { background: #fecaca; }
.risk-components { font-size: 0.9rem; }
.risk-level-text { margin-top: 1rem; font-size: 1.1rem; }
/* Data Reuse Styles */
.controls-list, .incidents-list { display: flex; flex-direction: column; gap: 0.5rem; margin-top: 1rem; }
.control-item, .incident-item {
    padding: 0.75rem;
    background: #f9fafb;
    border-left: 3px solid #3b82f6;
    border-radius: 4px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}
.alert { padding: 1rem; border-radius: 4px; margin: 1rem 0; }
.alert-warning { background: #fef3c7; border-left: 4px solid #f59e0b; color: #92400e; }
.alert-info { background: #dbeafe; border-left: 4px solid #3b82f6; color: #1e40af; }
.asset-info { padding: 1rem; background: #f9fafb; border-radius: 4px; }
.badge-severity-critical { background: #7f1d1d; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-severity-high { background: #ef4444; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-severity-medium { background: #f59e0b; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-severity-low { background: #10b981; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-public { background: #10b981; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-internal { background: #3b82f6; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-confidential { background: #f59e0b; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-restricted { background: #ef4444; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
/* Audit Log Styles */
.audit-log-list { display: flex; flex-direction: column; gap: 0.75rem; margin-top: 1rem; }
.audit-log-item {
    padding: 1rem;
    background: #f9fafb;
    border-left: 3px solid #6366f1;
    border-radius: 4px;
}
.audit-log-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
}
.audit-log-details { margin-top: 0.5rem; }
.audit-log-changes {
    margin-top: 0.5rem;
    padding-left: 1rem;
    font-size: 0.875rem;
}
.change-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0.25rem 0;
}
.field-name { font-weight: bold; color: #6b7280; }
.old-value {
    text-decoration: line-through;
    color: #ef4444;
}
.new-value {
    color: #10b981;
    font-weight: 500;
}
/* Badge action styles now handled by BadgeExtension helper functions */

/* Dark Mode Support */
@media (prefers-color-scheme: dark) {
    .assessment-card {
        background: #1f2937;
        border-color: #374151;
    }
    .risk-score {
        color: #1f2937;
    }
    .risk-components {
        color: #9ca3af;
    }
    .control-item, .incident-item {
        background: #1f2937;
        border-left-color: #60a5fa;
    }
    .asset-info {
        background: #1f2937;
    }
    .audit-log-item {
        background: #1f2937;
        border-left-color: #818cf8;
    }
    .alert-warning {
        background: #451a03;
        border-left-color: #f59e0b;
        color: #fbbf24;
    }
    .alert-info {
        background: #1e3a8a;
        border-left-color: #3b82f6;
        color: #93c5fd;
    }
    .field-name {
        color: #9ca3af;
    }
}

[data-bs-theme="dark"] .assessment-card {
    background: #1f2937;
    border-color: #374151;
}
[data-bs-theme="dark"] .risk-score {
    color: #1f2937;
}
[data-bs-theme="dark"] .risk-components {
    color: #9ca3af;
}
[data-bs-theme="dark"] .control-item,
[data-bs-theme="dark"] .incident-item {
    background: #1f2937;
    border-left-color: #60a5fa;
}
[data-bs-theme="dark"] .asset-info {
    background: #1f2937;
}
[data-bs-theme="dark"] .audit-log-item {
    background: #1f2937;
    border-left-color: #818cf8;
}
[data-bs-theme="dark"] .alert-warning {
    background: #451a03;
    border-left-color: #f59e0b;
    color: #fbbf24;
}
[data-bs-theme="dark"] .alert-info {
    background: #1e3a8a;
    border-left-color: #3b82f6;
    color: #93c5fd;
}
[data-bs-theme="dark"] .field-name {
    color: #9ca3af;
}
</style>
{% endblock %}

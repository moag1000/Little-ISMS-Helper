<form method="post" action="{{ path('app_risk_delete', {id: risk.id}) }}" onsubmit="return confirm('{{ 'risk.confirm.delete'|trans({}, 'risk') }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ risk.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash" aria-hidden="true"></i>
        {{ 'common.delete'|trans({}, 'messages') }}
    </button>
</form>

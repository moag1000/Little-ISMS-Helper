{% extends 'base.html.twig' %}

{% block title %}Risk Assessment Matrix{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>Risk Assessment Matrix</h1>
        <a href="{{ path('app_risk_index') }}" class="btn btn-secondary">Back to Risks</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>5x5 Risk Matrix</h2>
            <p>Visual representation of risks based on probability and impact</p>
        </div>

        <div class="card-content"
             data-controller="riskmatrix"
             data-riskmatrix-risks-value="{{ risks|json_encode|e('html_attr') }}">

            <div class="risk-matrix-container">
                <div class="matrix-wrapper">
                    <div class="y-label-vertical">Impact</div>

                    <div class="y-axis-labels">
                        {% for i in 5..1 %}
                            <div class="axis-label">{{ i }}</div>
                        {% endfor %}
                    </div>

                    <div>
                        <div class="risk-matrix">
                            {% for impact in 5..1 %}
                                {% for probability in 1..5 %}
                                    {% set score = probability * impact %}
                                    {% set level = score >= 15 ? 'critical' : (score >= 8 ? 'high' : (score >= 4 ? 'medium' : 'low')) %}
                                    <div class="matrix-cell risk-{{ level }}"
                                         data-probability="{{ probability }}"
                                         data-impact="{{ impact }}"
                                         title="Probability: {{ probability }}, Impact: {{ impact }}, Score: {{ score }}">
                                        <span class="cell-score">{{ score }}</span>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>

                        <div class="x-axis-labels">
                            {% for i in 1..5 %}
                                <div class="axis-label">{{ i }}</div>
                            {% endfor %}
                        </div>

                        <div class="x-label-horizontal">Probability</div>
                    </div>
                </div>
            </div>

            <div class="matrix-legend">
                <h3>Risk Levels</h3>
                <div class="legend-items">
                    <div class="legend-item">
                        <span class="legend-color risk-critical"></span>
                        <span>Critical (15-25)</span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color risk-high"></span>
                        <span>High (8-14)</span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color risk-medium"></span>
                        <span>Medium (4-7)</span>
                    </div>
                    <div class="legend-item">
                        <span class="legend-color risk-low"></span>
                        <span>Low (1-3)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.risk-matrix-container {
    padding: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
}

.matrix-wrapper {
    display: flex;
    gap: 0.5rem;
    align-items: center;
}

.y-label-vertical {
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    font-weight: bold;
    font-size: 18px;
    color: #374151;
    margin-right: 0.5rem;
}

.x-label-horizontal {
    text-align: center;
    font-weight: bold;
    font-size: 18px;
    color: #374151;
    margin-top: 0.5rem;
    width: 100%;
}

.y-axis-labels {
    display: flex;
    flex-direction: column;
    gap: 2px;
    padding-top: 2px;
}

.x-axis-labels {
    display: flex;
    gap: 2px;
    justify-content: center;
    margin-top: 0.5rem;
}

.axis-label {
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 16px;
    color: #4b5563;
}

.x-axis-labels .axis-label {
    height: auto;
    padding: 0.5rem;
}

.risk-matrix {
    display: grid;
    grid-template-columns: repeat(5, 100px);
    grid-template-rows: repeat(5, 100px);
    gap: 2px;
    background: #e5e7eb;
    padding: 2px;
}

.matrix-cell {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    border: 1px solid #d1d5db;
    cursor: pointer;
    transition: transform 0.2s;
}

.matrix-cell:hover {
    transform: scale(1.05);
    z-index: 10;
}

.cell-score {
    font-size: 12px;
    color: #666;
    position: absolute;
    top: 2px;
    left: 4px;
}

.risk-low { background-color: #d1fae5; }
.risk-medium { background-color: #fef3c7; }
.risk-high { background-color: #fed7aa; }
.risk-critical { background-color: #fecaca; }

.risk-item {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin: 2px;
    cursor: pointer;
    transition: transform 0.2s;
    border: 1px solid rgba(0,0,0,0.2);
}

.risk-item:hover {
    transform: scale(1.5);
    z-index: 100;
}

.matrix-legend {
    margin-top: 2rem;
    padding: 1rem;
    background: #f9fafb;
    border-radius: 8px;
}

.legend-items {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-top: 1rem;
    justify-content: center;
}

.legend-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.legend-color {
    width: 24px;
    height: 24px;
    border-radius: 4px;
    border: 1px solid #d1d5db;
}
</style>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Risk Assessment Matrix{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>Risk Assessment Matrix</h1>
        <a href="{{ path('app_risk_index') }}" class="btn btn-secondary">Back to Risks</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>5x5 Risk Matrix</h2>
            <p>Visual representation of risks based on probability and impact</p>
        </div>

        <div class="card-content"
             data-controller="riskmatrix"
             data-riskmatrix-risks-value="{{ risks|json_encode|e('html_attr') }}">

            <div class="risk-matrix-container">
                <div class="matrix-wrapper">
                    <div class="y-label-vertical">Impact</div>

                    <div class="y-axis-labels">
                        {% for i in 5..1 %}
                            <div class="axis-label">{{ i }}</div>
                        {% endfor %}
                    </div>

                    <div>
                        <div class="risk-matrix">
                            {% for impact in 5..1 %}
                                {% for probability in 1..5 %}
                                    {% set score = probability * impact %}
                                    {# ISO 27001 compliant thresholds: 20/12/6 #}
                                    {% set level = score >= 20 ? 'critical' : (score >= 12 ? 'high' : (score >= 6 ? 'medium' : 'low')) %}
                                    <div class="matrix-cell risk-{{ level }}"
                                         data-probability="{{ probability }}"
                                         data-impact="{{ impact }}"
                                         title="Probability: {{ probability }}, Impact: {{ impact }}, Score: {{ score }}">
                                        <span class="cell-score">{{ score }}</span>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>

                        <div class="x-axis-labels">
                            {% for i in 1..5 %}
                                <div class="axis-label">{{ i }}</div>
                            {% endfor %}
                        </div>

                        <div class="x-label-horizontal">Probability</div>
                    </div>
                </div>
            </div>

            <div class="matrix-legend">
                <h2>Risk Levels</h2>
                <div class="legend-items" style="display: flex; flex-direction: row; flex-wrap: wrap; gap: 1rem; justify-content: center; align-items: center; margin-top: 1rem;">
                    <div class="legend-item" style="display: flex; flex-direction: row; align-items: center; gap: 0.625rem; padding: 0.5rem 1rem; background: var(--bg-primary); border: 1px solid var(--border-color); border-radius: 6px; white-space: nowrap; position: relative;">
                        <span class="legend-color risk-critical" style="width: 20px; height: 20px; display: inline-block; flex-shrink: 0;"></span>
                        <span style="display: inline-block;">Critical (20-25)</span>
                    </div>
                    <div class="legend-item" style="display: flex; flex-direction: row; align-items: center; gap: 0.625rem; padding: 0.5rem 1rem; background: var(--bg-primary); border: 1px solid var(--border-color); border-radius: 6px; white-space: nowrap; position: relative;">
                        <span class="legend-color risk-high" style="width: 20px; height: 20px; display: inline-block; flex-shrink: 0;"></span>
                        <span style="display: inline-block;">High (12-19)</span>
                    </div>
                    <div class="legend-item" style="display: flex; flex-direction: row; align-items: center; gap: 0.625rem; padding: 0.5rem 1rem; background: var(--bg-primary); border: 1px solid var(--border-color); border-radius: 6px; white-space: nowrap; position: relative;">
                        <span class="legend-color risk-medium" style="width: 20px; height: 20px; display: inline-block; flex-shrink: 0;"></span>
                        <span style="display: inline-block;">Medium (6-11)</span>
                    </div>
                    <div class="legend-item" style="display: flex; flex-direction: row; align-items: center; gap: 0.625rem; padding: 0.5rem 1rem; background: var(--bg-primary); border: 1px solid var(--border-color); border-radius: 6px; white-space: nowrap; position: relative;">
                        <span class="legend-color risk-low" style="width: 20px; height: 20px; display: inline-block; flex-shrink: 0;"></span>
                        <span style="display: inline-block;">Low (1-5)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.risk-matrix-container {
    padding: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
}

.matrix-wrapper {
    display: flex;
    gap: 0.5rem;
    align-items: center;
}

.y-label-vertical {
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    font-weight: bold;
    font-size: 18px;
    color: var(--text-primary);
    margin-right: 0.5rem;
}

.x-label-horizontal {
    text-align: center;
    font-weight: bold;
    font-size: 18px;
    color: var(--text-primary);
    margin-top: 0.5rem;
    width: 100%;
}

.y-axis-labels {
    display: flex;
    flex-direction: column;
    gap: 2px;
    margin-right: 0.75rem;
}

.x-axis-labels {
    display: flex;
    gap: 2px;
    justify-content: center;
    margin-top: 0.75rem;
}

.axis-label {
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 14px;
    color: var(--color-text-muted);
}

.x-axis-labels .axis-label {
    height: auto;
    padding: 0.5rem;
}

.risk-matrix {
    display: grid;
    grid-template-columns: repeat(5, 100px);
    grid-template-rows: repeat(5, 100px);
    gap: 2px;
    background: var(--border-color);
    padding: 2px;
}

.matrix-cell {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    cursor: pointer;
    transition: transform 0.2s;
}

.matrix-cell:hover {
    transform: scale(1.05);
    z-index: 10;
}

.cell-score {
    font-size: 12px;
    color: #666;
    position: absolute;
    top: 2px;
    left: 4px;
}

.risk-low { background-color: #d1fae5; }
.risk-medium { background-color: #fef3c7; }
.risk-high { background-color: #fed7aa; }
.risk-critical { background-color: #fecaca; }

/* Legend color boxes */
.legend-color.risk-low { background-color: #d1fae5 !important; }
.legend-color.risk-medium { background-color: #fef3c7 !important; }
.legend-color.risk-high { background-color: #fed7aa !important; }
.legend-color.risk-critical { background-color: #fecaca !important; }

.risk-item {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin: 2px;
    cursor: pointer;
    transition: transform 0.2s;
    border: 1px solid rgba(0,0,0,0.2);
}

.risk-item:hover {
    transform: scale(1.5);
    z-index: 100;
}

.matrix-legend {
    margin-top: 2rem;
    padding: 1rem;
    background: var(--bg-secondary);
    border-radius: 8px;
    width: 100%;
}

.matrix-legend .legend-items {
    display: flex !important;
    flex-direction: row !important;
    flex-wrap: wrap !important;
    gap: 1rem !important;
    row-gap: 0.75rem !important;
    margin-top: 1rem !important;
    justify-content: center !important;
    align-items: center !important;
}

.matrix-legend .legend-item {
    display: flex !important;
    flex-direction: row !important;
    align-items: center !important;
    gap: 0.625rem !important;
    padding: 0.5rem 1rem !important;
    background: var(--bg-primary) !important;
    border: 1px solid var(--border-color) !important;
    border-radius: 6px !important;
    font-size: 0.875rem !important;
    font-weight: 500 !important;
    white-space: nowrap !important;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05) !important;
    position: relative !important;
    margin: 0 !important;
    flex: 0 0 auto !important;
    min-width: fit-content !important;
}

.matrix-legend .legend-color {
    width: 20px !important;
    height: 20px !important;
    border-radius: 3px !important;
    border: 1px solid rgba(0, 0, 0, 0.1) !important;
    flex-shrink: 0 !important;
    flex-grow: 0 !important;
    display: inline-block !important;
    position: static !important;
}

.matrix-legend .legend-item > span:not(.legend-color) {
    display: inline-block !important;
    position: static !important;
    flex-shrink: 0 !important;
}
</style>
{% endblock %}

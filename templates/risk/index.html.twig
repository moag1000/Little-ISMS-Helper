{% extends 'base.html.twig' %}

{% block title %}{{ 'risk_management.title'|trans }} - {{ 'app.title'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'risk_management.title'|trans }}</h1>

<p style="color: #666; margin-bottom: 2rem;">
    {{ 'risk_management.description'|trans }}
</p>

<div class="warning-box">
    <strong>{{ 'risk_management.high_risks'|trans }}:</strong> {{ highRisks|length }} {{ 'risk_management.risk_value_threshold'|trans }}
</div>

<div class="info-box" style="margin-top: 1rem;">
    <h3>{{ 'common.overview'|trans }}</h3>
    <p><strong>{{ 'risk_management.total_identified'|trans }}:</strong> {{ risks|length }}</p>
</div>
{% endblock %}

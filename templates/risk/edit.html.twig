{% extends 'base.html.twig' %}

{% block title %}{{ 'risk.edit'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_risk_index') }}"><i class="bi bi-exclamation-triangle"></i> {{ 'nav.risks'|trans }}</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_risk_show', {id: risk.id}) }}">{{ risk.name }}</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'risk.edit'|trans }}</li>
        </ol>
    </nav>

    <div class="page-header">
        <h1><i class="bi bi-pencil"></i> {{ 'risk.edit'|trans }}: {{ risk.name }}</h1>
        <a href="{{ path('app_risk_show', {id: risk.id}) }}" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> {{ 'common.back'|trans }}</a>
    </div>

    <div class="card">
        <div class="card-content">
            {{ form_start(form) }}
                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.category) }}
                        {{ form_widget(form.category) }}
                        {{ form_errors(form.category) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(form.identifiedDate) }}
                        {{ form_widget(form.identifiedDate) }}
                        {{ form_errors(form.identifiedDate) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.identifiedBy) }}
                        {{ form_widget(form.identifiedBy) }}
                        {{ form_errors(form.identifiedBy) }}
                    </div>
                </div>

                <h3><i class="bi bi-exclamation-diamond"></i> {{ 'risk.inherent_assessment'|trans }}</h3>
                <p class="text-muted small">{{ 'risk.inherent_help'|trans }}</p>
                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(form.inherentProbability) }}
                        {{ form_widget(form.inherentProbability) }}
                        {{ form_errors(form.inherentProbability) }}
                        <small class="help-text">{{ 'risk.probability_help'|trans }}</small>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.inherentImpact) }}
                        {{ form_widget(form.inherentImpact) }}
                        {{ form_errors(form.inherentImpact) }}
                        <small class="help-text">{{ 'risk.impact_help'|trans }}</small>
                    </div>
                </div>

                <h3><i class="bi bi-shield-check"></i> {{ 'risk.residual_assessment'|trans }}</h3>
                <p class="text-muted small">{{ 'risk.residual_help'|trans }}</p>
                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(form.residualProbability) }}
                        {{ form_widget(form.residualProbability) }}
                        {{ form_errors(form.residualProbability) }}
                        <small class="help-text">{{ 'risk.probability_help'|trans }}</small>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.residualImpact) }}
                        {{ form_widget(form.residualImpact) }}
                        {{ form_errors(form.residualImpact) }}
                        <small class="help-text">{{ 'risk.impact_help'|trans }}</small>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        {{ form_label(form.treatmentStrategy) }}
                        {{ form_widget(form.treatmentStrategy) }}
                        {{ form_errors(form.treatmentStrategy) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.status) }}
                        {{ form_widget(form.status) }}
                        {{ form_errors(form.status) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.reviewDate) }}
                        {{ form_widget(form.reviewDate) }}
                        {{ form_errors(form.reviewDate) }}
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> {{ 'risk.update'|trans }}</button>
                    <a href="{{ path('app_risk_show', {id: risk.id}) }}" class="btn btn-secondary"><i class="bi bi-x-circle"></i> {{ 'common.cancel'|trans }}</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

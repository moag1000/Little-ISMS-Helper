{% extends 'base.html.twig' %}

{% block title %}{{ 'risk.edit'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
{# Breadcrumb Navigation #}
{% include '_components/_breadcrumb.html.twig' with {
    breadcrumbs: [
        { label: 'nav.risks'|trans({}, 'nav'), url: path('app_risk_index'), icon: 'bi-exclamation-triangle' },
        { label: risk.title, url: path('app_risk_show', {id: risk.id}) },
        { label: 'risk.edit'|trans }
    ]
} %}

{# Page Header #}
{% include '_components/_page_header.html.twig' with {
    title: 'risk.edit'|trans ~ ': ' ~ risk.title,
    icon: 'bi-pencil',
    actions: [
        { label: 'common.back'|trans, url: path('app_risk_show', {id: risk.id}), variant: 'secondary', icon: 'bi-arrow-left' }
    ]
} %}

<div class="card">
    <div class="card-body">
        {{ form_start(form) }}
            {% include 'risk/_form.html.twig' with {
                'button_label': 'risk.update'|trans,
                'button_icon': 'bi-check-circle'
            } %}
        {{ form_end(form) }}
    </div>
</div>

{# Delete Danger Zone #}
<div class="card border-danger mt-4">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">
            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
            {{ 'common.danger_zone'|trans }}
        </h5>
    </div>
    <div class="card-body">
        <p class="text-muted">
            {{ 'risk.delete_warning'|trans|default('Das Löschen dieses Risikos kann nicht rückgängig gemacht werden.') }}
        </p>
        {{ include('risk/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

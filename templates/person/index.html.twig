{% extends 'base.html.twig' %}
{% trans_default_domain 'people' %}

{% block title %}{{ 'person.title.list'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
{% import '_macros/cards.html.twig' as cards %}

<div class="page-header">
    <div>
        <h1>{{ 'person.title.list'|trans }}</h1>
        <p class="text-muted">{{ 'person.description.overview'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_person_new') }}" class="btn btn-primary">
            âž• {{ 'person.action.create'|trans }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('person.stats.total'|trans, persons|length, null, null, null, null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('person.stats.employees'|trans, persons|filter(p => p.personType == 'employee')|length, null, null, 'success', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('person.stats.contractors'|trans, persons|filter(p => p.personType == 'contractor')|length, null, null, 'info', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('person.stats.with_badge'|trans, persons|filter(p => p.badgeId)|length, null, null, 'warning', null) }}
    </div>
</div>

{# Persons Table #}
{% embed '_components/_table.html.twig' with {
    'wrapperClass': 'table-container'
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'person.field.name'|trans }}</th>
            <th scope="col">{{ 'person.field.type'|trans }}</th>
            <th scope="col">{{ 'person.field.badge_id'|trans }}</th>
            <th scope="col">{{ 'person.field.company'|trans }}</th>
            <th scope="col">{{ 'person.field.email'|trans }}</th>
            <th scope="col">{{ 'person.field.department'|trans }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for person in persons %}
        <tr>
            <td>
                <strong>{{ person.fullName }}</strong>
                {% if person.jobTitle %}
                    <br><small class="text-muted-color">{{ person.jobTitle }}</small>
                {% endif %}
            </td>
            <td>
                {% set typeColors = {
                    'employee': 'success',
                    'contractor': 'info',
                    'visitor': 'warning',
                    'vendor': 'info',
                    'auditor': 'danger',
                    'consultant': 'info'
                } %}
                <span class="badge badge-{{ typeColors[person.personType] ?? 'secondary' }}">
                    {{ ('person.type.' ~ person.personType)|trans }}
                </span>
            </td>
            <td>
                {% if person.badgeId %}
                    <code>{{ person.badgeId }}</code>
                {% else %}
                    <span class="text-muted-color">-</span>
                {% endif %}
            </td>
            <td>{{ person.company ?? '-' }}</td>
            <td>
                {% if person.email %}
                    <a href="mailto:{{ person.email }}">{{ person.email }}</a>
                {% else %}
                    <span class="text-muted-color">-</span>
                {% endif %}
            </td>
            <td>{{ person.department ?? '-' }}</td>
            <td class="text-center">
                <div class="btn-group btn-group-sm" role="group" aria-label="{{ 'person.actions.label'|trans }}">
                    <a href="{{ path('app_person_show', {id: person.id}) }}" class="btn btn-outline-primary" aria-label="{{ 'common.view'|trans({}, 'messages') }} {{ person.fullName }}">
                        <i class="bi bi-eye" aria-hidden="true"></i>
                    </a>
                    <a href="{{ path('app_person_edit', {id: person.id}) }}" class="btn btn-outline-secondary" aria-label="{{ 'common.edit'|trans({}, 'messages') }} {{ person.fullName }}">
                        <i class="bi bi-pencil" aria-hidden="true"></i>
                    </a>
                </div>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center-p-xl-muted">
                {{ 'person.message.no_persons'|trans }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'scheduled_reports' %}

{% block title %}{{ 'scheduled_report.new.title'|trans({}, 'scheduled_reports') }} - {{ 'app.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.reports'|trans({}, 'nav'), path: 'app_reports_index' },
            { label: 'scheduled_report.title'|trans({}, 'scheduled_reports'), path: 'app_scheduled_report_index' },
            { label: 'scheduled_report.new.title'|trans({}, 'scheduled_reports') }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">
            <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'scheduled_report.new.title'|trans({}, 'scheduled_reports') }}
        </h1>
    </div>

    {# Info Alert #}
    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle" aria-hidden="true"></i>
        {{ 'scheduled_report.info.create_hint'|trans({}, 'scheduled_reports') }}
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="h5 mb-0">
                <i class="bi bi-gear"></i> {{ 'scheduled_report.form.configuration'|trans({}, 'scheduled_reports') }}
            </h3>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="row">
                {# Basic Info #}
                <div class="col-md-6 mb-3">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(form.reportType) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 mb-3">
                    {{ form_row(form.description) }}
                </div>
            </div>

            <hr>

            <h4 class="h6 mb-3">
                <i class="bi bi-calendar-event"></i> {{ 'scheduled_report.form.schedule_settings'|trans({}, 'scheduled_reports') }}
            </h4>

            <div class="row">
                <div class="col-md-4 mb-3">
                    {{ form_row(form.schedule) }}
                </div>
                <div class="col-md-4 mb-3" id="dayOfWeekGroup" style="display: none;">
                    {{ form_row(form.dayOfWeek) }}
                </div>
                <div class="col-md-4 mb-3" id="dayOfMonthGroup" style="display: none;">
                    {{ form_row(form.dayOfMonth) }}
                </div>
                <div class="col-md-4 mb-3">
                    {{ form_row(form.preferredTime) }}
                </div>
            </div>

            <hr>

            <h4 class="h6 mb-3">
                <i class="bi bi-file-earmark"></i> {{ 'scheduled_report.form.output_settings'|trans({}, 'scheduled_reports') }}
            </h4>

            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_row(form.format) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(form.locale) }}
                </div>
            </div>

            <hr>

            <h4 class="h6 mb-3">
                <i class="bi bi-envelope"></i> {{ 'scheduled_report.form.delivery_settings'|trans({}, 'scheduled_reports') }}
            </h4>

            <div class="row">
                <div class="col-md-12 mb-3">
                    {{ form_row(form.recipientsText) }}
                </div>
            </div>

            <hr>

            <div class="d-flex justify-content-between">
                <a href="{{ path('app_scheduled_report_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> {{ 'scheduled_report.action.cancel'|trans({}, 'scheduled_reports') }}
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> {{ 'scheduled_report.action.create'|trans({}, 'scheduled_reports') }}
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('turbo:load', function() {
    const scheduleSelect = document.getElementById('scheduled_report_schedule');
    const dayOfWeekGroup = document.getElementById('dayOfWeekGroup');
    const dayOfMonthGroup = document.getElementById('dayOfMonthGroup');

    function updateScheduleFields() {
        if (!scheduleSelect) return;

        const schedule = scheduleSelect.value;

        if (dayOfWeekGroup) {
            dayOfWeekGroup.style.display = schedule === 'weekly' ? 'block' : 'none';
        }
        if (dayOfMonthGroup) {
            dayOfMonthGroup.style.display = schedule === 'monthly' ? 'block' : 'none';
        }
    }

    if (scheduleSelect) {
        scheduleSelect.addEventListener('change', updateScheduleFields);
        updateScheduleFields();
    }
});
</script>
{% endblock %}

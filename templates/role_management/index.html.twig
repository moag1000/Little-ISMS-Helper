{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'role_management.title.list'|trans }} - Little ISMS Helper{% endblock %}

{% block admin_content %}
{% import '_macros/cards.html.twig' as cards %}

<div class="page-header">
    <div>
        <h1>{{ 'role_management.title.list'|trans }}</h1>
        <p class="text-muted">{{ 'role_management.description.overview'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('role_management_new') }}" class="btn btn-primary">
            ‚ûï {{ 'role_management.action.create'|trans }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('role_management.stats.total'|trans, roles|length, null, null, null, null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('role_management.stats.system_roles'|trans, roles|filter(r => r.systemRole)|length, null, null, 'info', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('role_management.stats.with_users'|trans, roles|filter(r => r.users|length > 0)|length, null, null, 'success', null) }}
    </div>
    <div class="col-auto">
        {% set totalPerms = 0 %}
        {% for role in roles %}
            {% set totalPerms = totalPerms + role.permissions|length %}
        {% endfor %}
        {{ cards.kpi_card('role_management.stats.avg_permissions'|trans, roles|length > 0 ? (totalPerms / roles|length)|round : 0, null, null, 'warning', null) }}
    </div>
</div>

{# Roles Table #}
{% embed '_components/_table.html.twig' with {
    'wrapperClass': 'table-container'
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'role_management.field.name'|trans }}</th>
            <th scope="col">{{ 'role_management.field.description'|trans }}</th>
            <th scope="col" class="text-center">{{ 'role_management.field.permissions'|trans }}</th>
            <th scope="col" class="text-center">{{ 'role_management.field.users'|trans }}</th>
            <th scope="col" class="text-center">{{ 'role_management.field.type'|trans }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for role in roles %}
        <tr>
            <td>
                <strong>{{ role.name }}</strong>
                {% if role.systemRole %}
                    <span class="badge bg-info ml-xs">
                        {{ 'role_management.badge.system'|trans }}
                    </span>
                {% endif %}
            </td>
            <td>
                <small class="text-muted-color">
                    {{ role.description|default('-') }}
                </small>
            </td>
            <td class="text-center">
                <span class="badge bg-secondary">{{ role.permissions|length }}</span>
            </td>
            <td class="text-center">
                <span class="badge bg-info">{{ role.users|length }}</span>
            </td>
            <td class="text-center">
                {% if role.systemRole %}
                    <span class="badge bg-info">{{ 'role_management.type.system'|trans }}</span>
                {% else %}
                    <span class="badge bg-secondary">{{ 'role_management.type.custom'|trans }}</span>
                {% endif %}
            </td>
            <td class="text-center">
                <div class="btn-group btn-group-sm">
                    <a href="{{ path('role_management_show', {id: role.id}) }}" class="btn btn-outline-primary">
                        üëÅ {{ 'common.view'|trans }}
                    </a>
                    <a href="{{ path('role_management_edit', {id: role.id}) }}" class="btn btn-outline-secondary">
                        ‚úèÔ∏è {{ 'common.edit'|trans }}
                    </a>
                </div>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6" class="text-center-p-xl-muted">
                {{ 'role_management.message.no_roles'|trans }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
{% endblock admin_content %}

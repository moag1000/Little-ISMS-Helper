{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'role_management.title.list'|trans }} - Little ISMS Helper{% endblock %}

{% block admin_content %}
<div class="page-header">
    <div>
        <h1>{{ 'role_management.title.list'|trans }}</h1>
        <p class="text-muted">{{ 'role_management.description.overview'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('role_management_new') }}" class="btn btn-primary">
            â• {{ 'role_management.action.create'|trans }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="kpi-card">
        <div class="icon">ğŸ”</div>
        <div class="label">{{ 'role_management.stats.total'|trans }}</div>
        <div>
            <span class="value">{{ roles|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">âš™ï¸</div>
        <div class="label">{{ 'role_management.stats.system_roles'|trans }}</div>
        <div>
            <span class="value">{{ roles|filter(r => r.systemRole)|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">ğŸ‘¥</div>
        <div class="label">{{ 'role_management.stats.with_users'|trans }}</div>
        <div>
            <span class="value">{{ roles|filter(r => r.users|length > 0)|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">ğŸ”‘</div>
        <div class="label">{{ 'role_management.stats.avg_permissions'|trans }}</div>
        <div>
            {% set totalPerms = 0 %}
            {% for role in roles %}
                {% set totalPerms = totalPerms + role.permissions|length %}
            {% endfor %}
            <span class="value">{{ roles|length > 0 ? (totalPerms / roles|length)|round : 0 }}</span>
        </div>
    </div>
</div>

{# Roles Table #}
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th scope="col">{{ 'role_management.field.name'|trans }}</th>
                <th scope="col">{{ 'role_management.field.description'|trans }}</th>
                <th scope="col" class="text-center">{{ 'role_management.field.permissions'|trans }}</th>
                <th scope="col" class="text-center">{{ 'role_management.field.users'|trans }}</th>
                <th scope="col" class="text-center">{{ 'role_management.field.type'|trans }}</th>
                <th scope="col" class="text-center">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for role in roles %}
            <tr>
                <td>
                    <strong>{{ role.name }}</strong>
                    {% if role.systemRole %}
                        <span class="badge badge-info ml-xs">
                            {{ 'role_management.badge.system'|trans }}
                        </span>
                    {% endif %}
                </td>
                <td>
                    <small class="text-muted-color">
                        {{ role.description|default('-') }}
                    </small>
                </td>
                <td class="text-center">
                    <span class="badge badge-secondary">{{ role.permissions|length }}</span>
                </td>
                <td class="text-center">
                    <span class="badge badge-info">{{ role.users|length }}</span>
                </td>
                <td class="text-center">
                    {% if role.systemRole %}
                        <span class="badge badge-info">{{ 'role_management.type.system'|trans }}</span>
                    {% else %}
                        <span class="badge badge-secondary">{{ 'role_management.type.custom'|trans }}</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <a href="{{ path('role_management_show', {id: role.id}) }}" class="btn btn-sm mr-025">
                        ğŸ‘ {{ 'common.view'|trans }}
                    </a>
                    <a href="{{ path('role_management_edit', {id: role.id}) }}" class="btn btn-sm btn-secondary">
                        âœï¸ {{ 'common.edit'|trans }}
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6" class="text-center-p-xl-muted">
                    {{ 'role_management.message.no_roles'|trans }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock admin_content %}

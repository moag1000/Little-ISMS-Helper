{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'role.compare.title'|trans }}{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-diagram-3"></i> {{ 'role.compare.title'|trans }}</h1>
        <a href="{{ path('role_management_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Zurück
        </a>
    </div>

    {# Role Selection #}
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> {{ 'role.compare.select_roles'|trans }}
            </h5>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-10">
                        <label class="form-label">Rollen zum Vergleichen auswählen (max. 5):</label>
                        <select name="roles[]" class="form-select" multiple size="8" required>
                            {% for role in all_roles %}
                                <option value="{{ role.id }}"
                                        {{ role.id in selected_role_ids ? 'selected' : '' }}>
                                    {{ role.name }}
                                    {% if role.isSystemRole %}(System){% endif %}
                                </option>
                            {% endfor %}
                        </select>
                        <div class="form-text">
                            Halten Sie Strg/Cmd gedrückt, um mehrere Rollen auszuwählen.
                        </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-arrow-repeat"></i> Vergleichen
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {% if roles|length > 0 %}
        {# Comparison Matrix #}
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-table"></i> {{ 'role.compare.permission_matrix'|trans }}
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-0">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th scope="col" style="width: 30%">Berechtigung</th>
                                {% for role in roles %}
                                    <th scope="col" class="text-center" style="width: {{ 70 / roles|length }}%">
                                        <div>{{ role.name }}</div>
                                        {% if role.isSystemRole %}
                                            <span class="badge bg-warning text-dark">System</span>
                                        {% endif %}
                                    </th>
                                {% endfor %}
                            </tr>
                        </thead>
                        <tbody>
                            {% set current_category = null %}
                            {% for permission_id, data in comparison_matrix %}
                                {% if current_category != data.category %}
                                    {% set current_category = data.category %}
                                    <tr class="table-secondary">
                                        <td colspan="{{ roles|length + 1 }}" class="fw-bold">
                                            <i class="bi bi-folder"></i> {{ data.category|title }}
                                        </td>
                                    </tr>
                                {% endif %}
                                <tr>
                                    <td>
                                        <code>{{ data.permission.name }}</code>
                                        <br>
                                        <small class="text-muted">{{ data.permission.description }}</small>
                                    </td>
                                    {% for role in roles %}
                                        {% set has_permission = data.roles[role.id] ?? false %}
                                        <td class="text-center {{ has_permission ? 'table-success' : 'table-light' }}">
                                            {% if has_permission %}
                                                <i class="bi bi-check-circle-fill text-success fs-4"></i>
                                            {% else %}
                                                <i class="bi bi-x-circle text-muted fs-4"></i>
                                            {% endif %}
                                        </td>
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Legend #}
        <div class="card mt-4">
            <div class="card-body">
                <h6>Legende:</h6>
                <div class="d-flex gap-4">
                    <div>
                        <i class="bi bi-check-circle-fill text-success"></i>
                        {{ 'role.compare.has_permission'|trans }}
                    </div>
                    <div>
                        <i class="bi bi-x-circle text-muted"></i>
                        {{ 'role.compare.no_permission'|trans }}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            Bitte wählen Sie mindestens eine Rolle zum Vergleichen aus.
        </div>
    {% endif %}
</div>

<style>
.sticky-top {
    position: sticky;
    top: 0;
    z-index: 10;
    background-color: #f8f9fa;
}
</style>
{% endblock admin_content %}

{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'role.compare.title'|trans({}, 'role_management') }}{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-diagram-3" aria-hidden="true"></i> {{ 'role.compare.title'|trans({}, 'role_management') }}</h1>
        <a href="{{ path('role_management_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> Zurück
        </a>
    </div>

    {# Role Selection #}
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-funnel" aria-hidden="true"></i> {{ 'role.compare.select_roles'|trans({}, 'role_management') }}
            </h3>
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-10">
                        <label class="form-label" for="role-select">Rollen zum Vergleichen auswählen (max. 5):</label>
                        <select name="roles[]" id="role-select" class="form-select" multiple size="8" required>
                            {% for role in all_roles %}
                                <option value="{{ role.id }}"
                                        {{ role.id in selected_role_ids ? 'selected' : '' }}>
                                    {{ role.name }}
                                    {% if role.isSystemRole %}(System){% endif %}
                                </option>
                            {% endfor %}
                        </select>
                        <div class="form-text">
                            Halten Sie Strg/Cmd gedrückt, um mehrere Rollen auszuwählen.
                        </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-arrow-repeat" aria-hidden="true"></i> Vergleichen
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {% if roles|length > 0 %}
        {# Comparison Matrix #}
        <div class="card">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0">
                    <i class="bi bi-table" aria-hidden="true"></i> {{ 'role.compare.permission_matrix'|trans({}, 'role_management') }}
                </h3>
            </div>
            <div class="card-body p-0">
                {% embed '_components/_table.html.twig' with {
                    'class': 'table-bordered table-hover mb-0',
                    'theadClass': 'sticky-top',
                    'noMargin': true,
                    'responsive': true
                } %}
                    {% block table_head %}
                        <tr>
                            <th scope="col" style="width: 30%">Berechtigung</th>
                            {% for role in roles %}
                                <th scope="col" class="text-center" style="width: {{ 70 / roles|length }}%">
                                    <div>{{ role.name }}</div>
                                    {% if role.isSystemRole %}
                                        <span class="badge bg-warning text-dark">System</span>
                                    {% endif %}
                                </th>
                            {% endfor %}
                        </tr>
                    {% endblock %}
                    {% block table_body %}
                        {% set current_category = null %}
                        {% for permission_id, data in comparison_matrix %}
                            {% if current_category != data.category %}
                                {% set current_category = data.category %}
                                <tr class="table-secondary">
                                    <td colspan="{{ roles|length + 1 }}" class="fw-bold">
                                        <i class="bi bi-folder" aria-hidden="true"></i> {{ data.category|title }}
                                    </td>
                                </tr>
                            {% endif %}
                            <tr>
                                <td>
                                    <code>{{ data.permission.name }}</code>
                                    <br>
                                    <small class="text-muted">{{ data.permission.description }}</small>
                                </td>
                                {% for role in roles %}
                                    {% set has_permission = data.roles[role.id] ?? false %}
                                    <td class="text-center {{ has_permission ? 'table-success' : 'table-light' }}">
                                        {% if has_permission %}
                                            <i class="bi bi-check-circle-fill text-success fs-4" aria-hidden="true"></i>
                                        {% else %}
                                            <i class="bi bi-x-circle text-muted fs-4" aria-hidden="true"></i>
                                        {% endif %}
                                    </td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            </div>
        </div>

        {# Legend #}
        <div class="card mt-4">
            <div class="card-body">
                <h4>Legende:</h4>
                <div class="d-flex gap-4">
                    <div>
                        <i class="bi bi-check-circle-fill text-success" aria-hidden="true"></i>
                        {{ 'role.compare.has_permission'|trans({}, 'role_management') }}
                    </div>
                    <div>
                        <i class="bi bi-x-circle text-muted" aria-hidden="true"></i>
                        {{ 'role.compare.no_permission'|trans({}, 'role_management') }}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle" aria-hidden="true"></i>
            Bitte wählen Sie mindestens eine Rolle zum Vergleichen aus.
        </div>
    {% endif %}
</div>

{# Sticky header styles now in app.css - Dark mode compatible #}
{% endblock admin_content %}

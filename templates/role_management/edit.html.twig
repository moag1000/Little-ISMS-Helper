{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'role_management' %}

{% block title %}{{ 'role_management.title.edit'|trans }} - {{ role.name }} - Little ISMS Helper{% endblock %}

{% block admin_content %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.admin'|trans({}, 'nav'), url: path('admin_dashboard') },
            { label: 'nav.roles'|trans({}, 'nav'), url: path('role_management_index') },
            { label: role.name, url: path('role_management_show', {id: role.id}) },
            { label: 'role_management.title.edit'|trans }
        ]
    } %}
</div>

<div class="page-header">
    <div>
        <h1>{{ 'role_management.title.edit'|trans }}: {{ role.name }}</h1>
    </div>
    <div class="button-group">
        <a href="{{ path('role_management_show', {id: role.id}) }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form method="post" action="{{ path('role_management_edit', {id: role.id}) }}">
            <h2 class="h5 mb-3">{{ 'role_management.section.basic_info'|trans }}</h2>

            <div class="mb-3">
                <label for="name" class="form-label">{{ 'role_management.field.name'|trans }}</label>
                <input type="text" class="form-control" id="name" name="name"
                       value="{{ role.name }}" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">{{ 'role_management.field.description'|trans }}</label>
                <textarea class="form-control" id="description" name="description" rows="3">{{ role.description }}</textarea>
            </div>

            {% if not role.systemRole %}
            <div class="mb-3">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="isSystemRole" name="isSystemRole" value="1"
                           {{ role.systemRole ? 'checked' : '' }}>
                    <label class="form-check-label" for="isSystemRole">{{ 'role_management.field.system_role'|trans }}</label>
                </div>
                <small class="text-muted">{{ 'role_management.help.system_role'|trans }}</small>
            </div>
            {% else %}
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>{{ 'role_management.warning.system_role'|trans }}</strong>
                <p class="mb-0 mt-1">{{ 'role_management.warning.system_role_desc'|trans }}</p>
            </div>
            {% endif %}

            <h2 class="h5 mb-3 mt-4">{{ 'role_management.section.permissions'|trans }}</h2>

            <div class="mb-3">
                <label class="form-label">{{ 'role_management.field.permissions'|trans }}</label>
                <small class="text-muted d-block mb-2">{{ 'role_management.help.permissions'|trans }}</small>

                {% set rolePermissionIds = [] %}
                {% for perm in role.permissions %}
                    {% set rolePermissionIds = rolePermissionIds|merge([perm.id]) %}
                {% endfor %}

                {% for category, categoryPermissions in permissions %}
                <div class="card mb-2">
                    <div class="card-header py-2">
                        <strong>{{ category }}</strong>
                    </div>
                    <div class="card-body py-2">
                        <div class="row">
                            {% for permission in categoryPermissions %}
                            <div class="col-md-4 col-lg-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input"
                                           id="permission_{{ permission.id }}"
                                           name="permissions[]"
                                           value="{{ permission.id }}"
                                           {{ permission.id in rolePermissionIds ? 'checked' : '' }}>
                                    <label class="form-check-label" for="permission_{{ permission.id }}">
                                        {{ permission.name }}
                                    </label>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-lg"></i> {{ 'common.save'|trans({}, 'messages') }}
                </button>
                <a href="{{ path('role_management_show', {id: role.id}) }}" class="btn btn-secondary">
                    <i class="bi bi-x-lg"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                </a>
            </div>
        </form>
    </div>
</div>
{% endblock admin_content %}

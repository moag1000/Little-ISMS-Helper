{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'role_management' %}

{% block title %}{{ 'role_management.title.edit'|trans({}, 'role_management')}} - {{ role.name }} - Little ISMS Helper{% endblock %}

{% block admin_content %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.admin'|trans({}, 'nav'), url: path('admin_dashboard') },
            { label: 'nav.roles'|trans({}, 'nav'), url: path('role_management_index') },
            { label: role.name, url: path('role_management_show', {id: role.id}) },
            { label: 'role_management.title.edit'|trans({}, 'role_management')}
        ]
    } %}
</div>

<div class="page-header">
    <div>
        <h1>{{ 'role_management.title.edit'|trans({}, 'role_management')}}: {{ role.name }}</h1>
    </div>
    <div class="button-group">
        <a href="{{ path('role_management_show', {id: role.id}) }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'action': path('role_management_edit', {id: role.id})}) }}

            {% if role.systemRole %}
            <div class="alert alert-warning mb-4">
                <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                <strong>{{ 'role_management.warning.system_role'|trans({}, 'role_management')}}</strong>
                <p class="mb-0 mt-1">{{ 'role_management.warning.system_role_desc'|trans({}, 'role_management')}}</p>
            </div>
            {% endif %}

            {% include '_components/_auto_form.html.twig' with {
                'form': form,
                'sections': {
                    'basic_info': {
                        'label': 'role_management.section.basic_info'|trans({}, 'role_management'),
                        'fields': ['name', 'description'] ~ (not role.systemRole ? ['isSystemRole'] : [])
                    },
                    'permissions': {
                        'label': 'role_management.section.permissions'|trans({}, 'role_management'),
                        'fields': ['permissions']
                    }
                },
                'translation_domain': 'role_management'
            } %}

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-lg" aria-hidden="true"></i> {{ 'common.save'|trans({}, 'messages') }}
                </button>
                <a href="{{ path('role_management_show', {id: role.id}) }}" class="btn btn-secondary">
                    <i class="bi bi-x-lg" aria-hidden="true"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                </a>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock admin_content %}

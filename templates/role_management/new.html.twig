{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'role_management.title.create'|trans }} - Little ISMS Helper{% endblock %}

{% block admin_content %}
<div class="page-header">
    <div>
        <h1>{{ 'role_management.title.create'|trans }}</h1>
    </div>
    <div class="button-group">
        <a href="{{ path('role_management_index') }}" class="btn btn-secondary">
            ‚Üê {{ 'common.back_to_list'|trans }}
        </a>
    </div>
</div>

<div class="card">
    {{ form_start(form) }}

    <h3>{{ 'role_management.section.basic_info'|trans }}</h3>

    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'role_management.placeholder.name'|trans}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'role_management.placeholder.description'|trans}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group">
        {{ form_label(form.active) }}
        <div class="mt-xs">
            {{ form_widget(form.active) }}
        </div>
        {{ form_errors(form.active) }}
        <small class="small-muted-block">
            {{ 'role_management.help.active'|trans }}
        </small>
    </div>

    <h2 class="h3-mt-lg">{{ 'role_management.section.permissions'|trans }}</h2>

    <div class="form-group">
        {{ form_label(form.permissions) }}
        {{ form_widget(form.permissions, {'attr': {'class': 'form-control', 'size': 10}}) }}
        {{ form_errors(form.permissions) }}
        <small class="small-muted-block">
            {{ 'role_management.help.permissions'|trans }}
        </small>
    </div>

    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-success">
            üíæ {{ 'common.create'|trans }}
        </button>
        <a href="{{ path('role_management_index') }}" class="btn btn-secondary">
            ‚ùå {{ 'common.cancel'|trans }}
        </a>
    </div>

    {{ form_end(form) }}
</div>
{% endblock admin_content %}

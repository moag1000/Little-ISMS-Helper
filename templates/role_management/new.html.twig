{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'role_management' %}

{% block title %}{{ 'role_management.title.create'|trans({}, 'role_management')}} - Little ISMS Helper{% endblock %}

{% block admin_content %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.admin'|trans({}, 'nav'), url: path('admin_dashboard') },
            { label: 'nav.roles'|trans({}, 'nav'), url: path('role_management_index') },
            { label: 'role_management.title.create'|trans({}, 'role_management')}
        ]
    } %}
</div>

<div class="page-header">
    <div>
        <h1>{{ 'role_management.title.create'|trans({}, 'role_management')}}</h1>
    </div>
    <div class="button-group">
        <a href="{{ path('role_management_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> {{ 'common.back_to_list'|trans({}, 'messages') }}
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'action': path('role_management_new')}) }}

            {% include '_components/_auto_form.html.twig' with {
                'form': form,
                'sections': {
                    'basic_info': {
                        'label': 'role_management.section.basic_info'|trans({}, 'role_management'),
                        'fields': ['name', 'description', 'isSystemRole']
                    },
                    'permissions': {
                        'label': 'role_management.section.permissions'|trans({}, 'role_management'),
                        'fields': ['permissions']
                    }
                },
                'translation_domain': 'role_management'
            } %}

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-lg"></i> {{ 'common.create'|trans({}, 'messages') }}
                </button>
                <a href="{{ path('role_management_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-lg"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                </a>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock admin_content %}

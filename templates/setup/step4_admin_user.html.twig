{% extends 'base.html.twig' %}

{% block title %}{{ 'setup.admin.title'|trans({}, 'messages') }} - Deployment Wizard{% endblock %}

{% block head %}
    {{ parent() }}
    {# Disable Turbo cache to ensure CSRF tokens are always fresh #}
    <meta name="turbo-cache-control" content="no-cache">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Progress Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h4 class="mb-0">{{ 'setup.progress.title'|trans({}, 'messages') }}</h4>
                        <small class="text-muted">{{ 'setup.progress.step'|trans({'%current%': 4, '%total%': 11}, 'messages') }}</small>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-person-shield me-2" aria-hidden="true"></i>
                        {{ 'setup.admin.header'|trans({}, 'messages') }}
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        {{ 'setup.admin.description'|trans({}, 'messages') }}
                    </p>

                    {# Admin User Form #}
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <div class="row">
                        <div class="col-md-6">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.firstName,
                                'label': 'setup.admin.first_name'|trans({}, 'messages'),
                                'required': true
                            } %}
                        </div>
                        <div class="col-md-6">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.lastName,
                                'label': 'setup.admin.last_name'|trans({}, 'messages'),
                                'required': true
                            } %}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.email,
                                'label': 'setup.admin.email'|trans({}, 'messages'),
                                'help': 'setup.admin.email_help'|trans({}, 'messages'),
                                'required': true
                            } %}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.password.first,
                                'label': 'setup.admin.password'|trans({}, 'messages'),
                                'required': true
                            } %}
                        </div>
                        <div class="col-md-6">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.password.second,
                                'label': 'setup.admin.password_confirm'|trans({}, 'messages'),
                                'required': true
                            } %}
                        </div>
                    </div>

                    {# Password Requirements Info #}
                    <div class="alert alert-info">
                        <i class="bi bi-shield me-2" aria-hidden="true"></i>
                        <strong>{{ 'setup.admin.password_requirements.title'|trans({}, 'messages') }}</strong>
                        <ul class="mb-0 mt-2">
                            <li>{{ 'setup.admin.password_requirements.length'|trans({}, 'messages') }}</li>
                            <li>{{ 'setup.admin.password_requirements.uppercase'|trans({}, 'messages') }}</li>
                            <li>{{ 'setup.admin.password_requirements.lowercase'|trans({}, 'messages') }}</li>
                            <li>{{ 'setup.admin.password_requirements.number'|trans({}, 'messages') }}</li>
                        </ul>
                    </div>

                    {# Security Note #}
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                        <strong>{{ 'setup.admin.security_note.title'|trans({}, 'messages') }}</strong>
                        <p class="mb-0">{{ 'setup.admin.security_note.message'|trans({}, 'messages') }}</p>
                    </div>

                    {# Navigation #}
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('setup_step3_restore_backup') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>
                            {{ 'setup.navigation.back'|trans({}, 'messages') }}
                        </a>

                        <button type="submit" class="btn btn-primary">
                            {{ 'setup.navigation.next'|trans({}, 'messages') }}
                            <i class="bi bi-arrow-right ms-2" aria-hidden="true"></i>
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Information Card #}
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle text-info me-2" aria-hidden="true"></i>
                        {{ 'setup.admin.next_steps.title'|trans({}, 'messages') }}
                    </h5>
                    <p class="text-muted mb-0">
                        {{ 'setup.admin.next_steps.description'|trans({}, 'messages') }}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'setup.organisation.title'|trans({}, 'messages') }} - Deployment Wizard{% endblock %}

{% block head %}
    {{ parent() }}
    {# Disable Turbo cache to ensure CSRF tokens are always fresh #}
    <meta name="turbo-cache-control" content="no-cache">
{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'common.close'|trans({}, 'messages') }}"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Progress Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h4 class="mb-0">{{ 'setup.progress.title'|trans({}, 'messages') }}</h4>
                        <small class="text-muted">{{ 'setup.progress.step'|trans({'%current%': 6, '%total%': 11}, 'messages') }}</small>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-building me-2" aria-hidden="true"></i>
                        {{ 'setup.organisation.header'|trans({}, 'messages') }}
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        {{ 'setup.organisation.description'|trans({}, 'messages') }}
                    </p>

                    {# Organisation Info Form #}
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <div class="row">
                        <div class="col-md-12">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.name,
                                'label': 'setup.organisation.name'|trans({}, 'messages'),
                                'required': true
                            } %}
                        </div>
                    </div>

                    {# Multi-Industry Selection for Corporate Structures #}
                    <div class="alert alert-light mb-2">
                        <i class="bi bi-diagram-3 me-2 text-primary" aria-hidden="true"></i>
                        <small>{{ 'setup.organisation.industries_help'|trans({}, 'messages') }}</small>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.industries,
                                'label': 'setup.organisation.industries'|trans({}, 'messages')
                            } %}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.employee_count,
                                'label': 'setup.organisation.employee_count'|trans({}, 'messages')
                            } %}
                        </div>
                        <div class="col-md-6">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.country,
                                'label': 'setup.organisation.country'|trans({}, 'messages')
                            } %}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.description,
                                'label': 'setup.organisation.description'|trans({}, 'messages')
                            } %}
                        </div>
                    </div>

                    {# Information Box #}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                        <strong>{{ 'setup.organisation.usage.title'|trans({}, 'messages') }}</strong>
                        <p class="mb-0">{{ 'setup.organisation.usage.message'|trans({}, 'messages') }}</p>
                    </div>

                    {# Navigation #}
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('setup_step5_email_config') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>
                            {{ 'setup.navigation.back'|trans({}, 'messages') }}
                        </a>

                        <button type="submit" class="btn btn-primary">
                            {{ 'setup.navigation.next'|trans({}, 'messages') }}
                            <i class="bi bi-arrow-right ms-2" aria-hidden="true"></i>
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Compliance Information Card #}
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-shield text-info me-2" aria-hidden="true"></i>
                        {{ 'setup.organisation.compliance_info.title'|trans({}, 'messages') }}
                    </h5>
                    <p class="text-muted mb-2">
                        {{ 'setup.organisation.compliance_info.description'|trans({}, 'messages') }}
                    </p>
                    <ul class="text-muted mb-0">
                        <li>{{ 'setup.organisation.compliance_info.scope'|trans({}, 'messages') }}</li>
                        <li>{{ 'setup.organisation.compliance_info.reporting'|trans({}, 'messages') }}</li>
                        <li>{{ 'setup.organisation.compliance_info.recommendations'|trans({}, 'messages') }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'setup.organisation.title'|trans }} - Deployment Wizard{% endblock %}

{% block head %}
    {{ parent() }}
    {# Disable Turbo cache to ensure CSRF tokens are always fresh #}
    <meta name="turbo-cache-control" content="no-cache">
{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Progress Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0">{{ 'setup.progress.title'|trans }}</h6>
                        <small class="text-muted">{{ 'setup.progress.step'|trans({'%current%': 4, '%total%': 10}) }}</small>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-building me-2"></i>
                        {{ 'setup.organisation.header'|trans }}
                    </h2>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        {{ 'setup.organisation.description'|trans }}
                    </p>

                    {# Organisation Info Form #}
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_row(form.name) }}
                    </div>

                    {# Multi-Industry Selection for Corporate Structures #}
                    <div class="mb-3">
                        <div class="alert alert-light mb-2">
                            <i class="fas fa-sitemap me-2 text-primary"></i>
                            <small>{{ 'setup.organisation.industries_help'|trans }}</small>
                        </div>
                        {{ form_row(form.industries) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.employee_count) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.country) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>

                    {# Information Box #}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>{{ 'setup.organisation.usage.title'|trans }}</strong>
                        <p class="mb-0">{{ 'setup.organisation.usage.message'|trans }}</p>
                    </div>

                    {# Navigation #}
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('setup_step3_email_config') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            {{ 'setup.navigation.back'|trans }}
                        </a>

                        <button type="submit" class="btn btn-primary">
                            {{ 'setup.navigation.next'|trans }}
                            <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Compliance Information Card #}
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-shield-alt text-info me-2"></i>
                        {{ 'setup.organisation.compliance_info.title'|trans }}
                    </h5>
                    <p class="text-muted mb-2">
                        {{ 'setup.organisation.compliance_info.description'|trans }}
                    </p>
                    <ul class="text-muted mb-0">
                        <li>{{ 'setup.organisation.compliance_info.scope'|trans }}</li>
                        <li>{{ 'setup.organisation.compliance_info.reporting'|trans }}</li>
                        <li>{{ 'setup.organisation.compliance_info.recommendations'|trans }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

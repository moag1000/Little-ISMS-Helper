{% extends 'base.html.twig' %}

{% block title %}{{ 'setup.welcome.title'|trans({}, 'setup') }} - Deployment Wizard{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|trans }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'setup.common.close'|trans({}, 'setup') }}"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="mb-0">
                        <i class="bi bi-magic me-2" aria-hidden="true"></i>
                        {{ 'setup.welcome.header'|trans({}, 'setup') }}
                    </h1>
                </div>
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <i class="bi bi-shield text-primary" aria-hidden="true" style="font-size: 4rem;"></i>
                        <h2 class="mt-3">{{ 'setup.welcome.greeting'|trans({}, 'setup') }}</h2>
                        <p class="lead text-muted">
                            {{ 'setup.welcome.description'|trans({}, 'setup') }}
                        </p>
                    </div>

                    <div class="row g-4 mb-5">
                        <div class="col-md-6">
                            <div class="card h-100 border-primary">
                                <div class="card-body">
                                    <i class="bi bi-list-check text-primary  mb-3" aria-hidden="true"></i>
                                    <p class="h5 mb-3">{{ 'setup.welcome.steps.title'|trans({}, 'setup') }}</p>
                                    <ul class="list-unstyled">
                                        <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.welcome.steps.database'|trans({}, 'setup') }}</li>
                                        <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.welcome.steps.admin'|trans({}, 'setup') }}</li>
                                        <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.welcome.steps.requirements'|trans({}, 'setup') }}</li>
                                        <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.welcome.steps.modules'|trans({}, 'setup') }}</li>
                                        <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.welcome.steps.migrations'|trans({}, 'setup') }}</li>
                                        <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.welcome.steps.base_data'|trans({}, 'setup') }}</li>
                                        <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.welcome.steps.sample_data'|trans({}, 'setup') }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-info">
                                <div class="card-body">
                                    <i class="bi bi-clock text-info  mb-3" aria-hidden="true"></i>
                                    <p class="h5 mb-3">{{ 'setup.welcome.requirements.title'|trans({}, 'setup') }}</p>
                                    <ul class="list-unstyled">
                                        <li><i class="bi bi-hourglass-split text-info me-2" aria-hidden="true"></i>{{ 'setup.welcome.requirements.duration'|trans({}, 'setup') }}</li>
                                        <li><i class="bi bi-database text-info me-2" aria-hidden="true"></i>{{ 'setup.welcome.requirements.database'|trans({}, 'setup') }}</li>
                                        <li><i class="bi bi-server text-info me-2" aria-hidden="true"></i>{{ 'setup.welcome.requirements.php'|trans({}, 'setup') }}</li>
                                        <li><i class="bi bi-folder text-info me-2" aria-hidden="true"></i>{{ 'setup.welcome.requirements.permissions'|trans({}, 'setup') }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <p class="h5 mb-3">
                                <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                                {{ 'setup.welcome.info.title'|trans({}, 'setup') }}
                            </p>
                            <p class="text-muted mb-2">
                                {{ 'setup.welcome.info.description'|trans({}, 'setup') }}
                            </p>
                            <ul class="mb-0">
                                <li>{{ 'setup.welcome.info.point1'|trans({}, 'setup') }}</li>
                                <li>{{ 'setup.welcome.info.point2'|trans({}, 'setup') }}</li>
                                <li>{{ 'setup.welcome.info.point3'|trans({}, 'setup') }}</li>
                            </ul>
                        </div>
                    </div>

                    <div class="d-grid">
                        <a href="{{ path('setup_step1_requirements') }}" class="btn btn-lg btn-primary">
                            <i class="bi bi-play me-2" aria-hidden="true"></i>
                            {{ 'setup.welcome.start_button'|trans({}, 'setup') }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

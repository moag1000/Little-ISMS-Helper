{% extends 'base.html.twig' %}

{% block title %}{{ 'setup.welcome.title'|trans }} - Deployment Wizard{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Flash Messages - Permanent Turbo Frame to persist across redirects #}
            <turbo-frame id="flash-messages" data-turbo-permanent>
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message|trans }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
            </turbo-frame>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="mb-0">
                        <i class="fas fa-magic me-2"></i>
                        {{ 'setup.welcome.header'|trans }}
                    </h1>
                </div>
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <i class="fas fa-shield-alt text-primary" style="font-size: 4rem;"></i>
                        <h2 class="mt-3">{{ 'setup.welcome.greeting'|trans }}</h2>
                        <p class="lead text-muted">
                            {{ 'setup.welcome.description'|trans }}
                        </p>
                    </div>

                    <div class="row g-4 mb-5">
                        <div class="col-md-6">
                            <div class="card h-100 border-primary">
                                <div class="card-body">
                                    <i class="fas fa-list-check text-primary fa-2x mb-3"></i>
                                    <h5>{{ 'setup.welcome.steps.title'|trans }}</h5>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-check text-success me-2"></i>{{ 'setup.welcome.steps.database'|trans }}</li>
                                        <li><i class="fas fa-check text-success me-2"></i>{{ 'setup.welcome.steps.admin'|trans }}</li>
                                        <li><i class="fas fa-check text-success me-2"></i>{{ 'setup.welcome.steps.requirements'|trans }}</li>
                                        <li><i class="fas fa-check text-success me-2"></i>{{ 'setup.welcome.steps.modules'|trans }}</li>
                                        <li><i class="fas fa-check text-success me-2"></i>{{ 'setup.welcome.steps.migrations'|trans }}</li>
                                        <li><i class="fas fa-check text-success me-2"></i>{{ 'setup.welcome.steps.base_data'|trans }}</li>
                                        <li><i class="fas fa-check text-success me-2"></i>{{ 'setup.welcome.steps.sample_data'|trans }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-info">
                                <div class="card-body">
                                    <i class="fas fa-clock text-info fa-2x mb-3"></i>
                                    <h5>{{ 'setup.welcome.requirements.title'|trans }}</h5>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-hourglass-half text-info me-2"></i>{{ 'setup.welcome.requirements.duration'|trans }}</li>
                                        <li><i class="fas fa-database text-info me-2"></i>{{ 'setup.welcome.requirements.database'|trans }}</li>
                                        <li><i class="fas fa-server text-info me-2"></i>{{ 'setup.welcome.requirements.php'|trans }}</li>
                                        <li><i class="fas fa-folder text-info me-2"></i>{{ 'setup.welcome.requirements.permissions'|trans }}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-info-circle me-2"></i>
                                {{ 'setup.welcome.info.title'|trans }}
                            </h5>
                            <p class="text-muted mb-2">
                                {{ 'setup.welcome.info.description'|trans }}
                            </p>
                            <ul class="mb-0">
                                <li>{{ 'setup.welcome.info.point1'|trans }}</li>
                                <li>{{ 'setup.welcome.info.point2'|trans }}</li>
                                <li>{{ 'setup.welcome.info.point3'|trans }}</li>
                            </ul>
                        </div>
                    </div>

                    <div class="d-grid">
                        <a href="{{ path('setup_step1_database_config') }}" class="btn btn-lg btn-primary">
                            <i class="fas fa-play me-2"></i>
                            {{ 'setup.welcome.start_button'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Deployment Wizard - Little ISMS Helper{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="mb-0">
                        <i class="bi bi-magic me-2" aria-hidden="true"></i>
                        Little ISMS Helper - Deployment Wizard
                    </h1>
                </div>
                <div class="card-body p-5">
                    {% if setup_complete %}
                        <div class="alert alert-success" role="alert">
                            <i class="bi bi-check-circle me-2" aria-hidden="true"></i>
                            <strong>{{ 'setup.already_complete.title'|trans({}, 'setup') }}</strong>
                            <p class="mb-0 mt-2">
                                {{ 'setup.already_complete.description'|trans({}, 'setup') }}
                            </p>
                        </div>

                        <div class="d-grid gap-3 mt-4">
                            <a href="{{ path('app_dashboard', {'_locale': app.request.locale}) }}" class="btn btn-lg btn-primary">
                                <i class="bi bi-house me-2" aria-hidden="true"></i>
                                {{ 'setup.go_to_dashboard'|trans({}, 'setup') }}
                            </a>
                            <a href="{{ path('module_management_index', {'_locale': app.request.locale}) }}" class="btn btn-lg btn-outline-primary">
                                <i class="bi bi-puzzle me-2" aria-hidden="true"></i>
                                {{ 'setup.manage_modules'|trans({}, 'setup') }}
                            </a>
                            {% if app.environment == 'dev' %}
                                <a href="{{ path('setup_wizard_reset') }}" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-arrow-clockwise me-2" aria-hidden="true"></i>
                                    {{ 'setup.reset_development'|trans({}, 'setup') }}
                                </a>
                            {% endif %}
                        </div>
                    {% else %}
                        <div class="text-center mb-5">
                            <i class="bi bi-shield text-primary" aria-hidden="true" style="font-size: 4rem;"></i>
                            <h2 class="mt-3">{{ 'setup.welcome_title'|trans({}, 'setup') }}</h2>
                            <p class="lead text-muted">
                                {{ 'setup.welcome_subtitle'|trans({}, 'setup') }}
                            </p>
                        </div>

                        <div class="row g-4 mb-5">
                            <div class="col-md-6">
                                <div class="card h-100 border-primary">
                                    <div class="card-body">
                                        <i class="bi bi-check-circle text-primary  mb-3" aria-hidden="true"></i>
                                        <p class="h5 mb-3">{{ 'setup.what_will_be_setup'|trans({}, 'setup') }}</p>
                                        <ul class="list-unstyled">
                                            <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.checklist.check_requirements'|trans({}, 'setup') }}</li>
                                            <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.checklist.select_modules'|trans({}, 'setup') }}</li>
                                            <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.checklist.init_database'|trans({}, 'setup') }}</li>
                                            <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.checklist.import_base_data'|trans({}, 'setup') }}</li>
                                            <li><i class="bi bi-check text-success me-2" aria-hidden="true"></i>{{ 'setup.checklist.load_sample_data'|trans({}, 'setup') }}</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card h-100 border-info">
                                    <div class="card-body">
                                        <i class="bi bi-clock text-info  mb-3" aria-hidden="true"></i>
                                        <p class="h5 mb-3">{{ 'setup.duration_requirements.title'|trans({}, 'setup') }}</p>
                                        <ul class="list-unstyled">
                                            <li><i class="bi bi-hourglass-split text-info me-2" aria-hidden="true"></i>{{ 'setup.duration_requirements.duration'|trans({}, 'setup') }}</li>
                                            <li><i class="bi bi-database text-info me-2" aria-hidden="true"></i>{{ 'setup.duration_requirements.database_access'|trans({}, 'setup') }}</li>
                                            <li><i class="bi bi-server text-info me-2" aria-hidden="true"></i>{{ 'setup.duration_requirements.php_extensions'|trans({}, 'setup') }}</li>
                                            <li><i class="bi bi-folder text-info me-2" aria-hidden="true"></i>{{ 'setup.duration_requirements.write_permissions'|trans({}, 'setup') }}</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <p class="h5 mb-3">
                                    <i class="bi bi-puzzle me-2" aria-hidden="true"></i>
                                    {{ 'setup.available_modules'|trans({}, 'setup') }}
                                </p>
                                <p class="text-muted mb-3">
                                    {{ 'setup.modules_selection_hint'|trans({}, 'setup') }}
                                </p>
                                <div class="row g-2">
                                    <div class="col-md-4">
                                        <small><i class="bi bi-shield-check-check text-primary me-1" aria-hidden="true"></i> {{ 'setup.module_core_isms'|trans({}, 'setup') }}</small>
                                    </div>
                                    <div class="col-md-4">
                                        <small><i class="bi bi-database text-muted me-1" aria-hidden="true"></i> {{ 'setup.module_asset_management'|trans({}, 'setup') }}</small>
                                    </div>
                                    <div class="col-md-4">
                                        <small><i class="bi bi-exclamation-triangle text-muted me-1" aria-hidden="true"></i> {{ 'setup.module_risk_management'|trans({}, 'setup') }}</small>
                                    </div>
                                    <div class="col-md-4">
                                        <small><i class="bi bi-list-check text-muted me-1" aria-hidden="true"></i> {{ 'setup.module_controls'|trans({}, 'setup') }}</small>
                                    </div>
                                    <div class="col-md-4">
                                        <small><i class="bi bi-bell text-muted me-1" aria-hidden="true"></i> {{ 'setup.module_incident'|trans({}, 'setup') }}</small>
                                    </div>
                                    <div class="col-md-4">
                                        <small><i class="bi bi-clipboard-check text-muted me-1" aria-hidden="true"></i> {{ 'setup.module_audit'|trans({}, 'setup') }}</small>
                                    </div>
                                    <div class="col-md-4">
                                        <small><i class="bi bi-arrow-clockwise text-muted me-1" aria-hidden="true"></i> {{ 'setup.module_bcm'|trans({}, 'setup') }}</small>
                                    </div>
                                    <div class="col-md-4">
                                        <small><i class="bi bi-balance text-muted me-1" aria-hidden="true"></i> {{ 'setup.module_compliance'|trans({}, 'setup') }}</small>
                                    </div>
                                    <div class="col-md-4">
                                        <small><i class="bi bi-mortarboard text-muted me-1" aria-hidden="true"></i> {{ 'setup.module_training'|trans({}, 'setup') }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <a href="{{ path('setup_step0_welcome') }}" class="btn btn-lg btn-primary">
                                <i class="bi bi-play me-2" aria-hidden="true"></i>
                                {{ 'setup.start_setup'|trans({}, 'setup') }}
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

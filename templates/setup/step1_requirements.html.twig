{% extends 'base.html.twig' %}

{% block title %}Schritt 1: System-Anforderungen - Deployment Wizard{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Progress Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0">Setup-Fortschritt</h6>
                        <small class="text-muted">Schritt 1 von 6</small>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 16%;" aria-valuenow="16" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i>
                        Schritt 1: System-Anforderungen pr체fen
                    </h2>
                </div>
                <div class="card-body p-4">
                    {# Overall Status #}
                    <div class="alert {{ results.overall.can_proceed ? 'alert-success' : 'alert-danger' }} mb-4" role="alert">
                        <h5>
                            <i class="fas fa-{{ results.overall.can_proceed ? 'check-circle' : 'exclamation-circle' }} me-2"></i>
                            {{ results.overall.message }}
                        </h5>
                        <div class="mt-2">
                            <span class="badge bg-success">{{ results.overall.success }} erfolgreich</span>
                            {% if results.overall.warnings > 0 %}
                                <span class="badge bg-warning">{{ results.overall.warnings }} Warnungen</span>
                            {% endif %}
                            {% if results.overall.critical_errors > 0 %}
                                <span class="badge bg-danger">{{ results.overall.critical_errors }} kritische Fehler</span>
                            {% endif %}
                        </div>
                    </div>

                    {# Individual Checks #}
                    <h5 class="mb-3">Detaillierte Pr체fungen:</h5>

                    {# PHP Version #}
                    <div class="card mb-3 border-{{ results.php.status == 'success' ? 'success' : 'danger' }}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">
                                        <i class="fas fa-{{ results.php.status == 'success' ? 'check-circle text-success' : 'times-circle text-danger' }} me-2"></i>
                                        PHP-Version
                                    </h6>
                                    <p class="mb-0 text-muted">{{ results.php.message }}</p>
                                </div>
                                <div class="text-end">
                                    <div class="badge bg-{{ results.php.status == 'success' ? 'success' : 'danger' }}">
                                        {{ results.php.current }}
                                    </div>
                                    <small class="d-block text-muted">Erforderlich: {{ results.php.required }}</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# PHP Extensions #}
                    <div class="card mb-3 border-{{ results.extensions.status == 'success' ? 'success' : 'danger' }}">
                        <div class="card-body">
                            <h6 class="mb-2">
                                <i class="fas fa-{{ results.extensions.status == 'success' ? 'check-circle text-success' : 'times-circle text-danger' }} me-2"></i>
                                PHP-Extensions
                            </h6>
                            <p class="mb-2 text-muted">{{ results.extensions.message }}</p>
                            {% if results.extensions.missing|length > 0 %}
                                <div class="alert alert-danger mb-0">
                                    <strong>Fehlende Extensions:</strong>
                                    <ul class="mb-0 mt-2">
                                        {% for ext in results.extensions.missing %}
                                            <li><code>{{ ext }}</code></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% else %}
                                <div class="text-muted small">
                                    {% for ext in results.extensions.loaded %}
                                        <span class="badge bg-success me-1">{{ ext }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    {# Database #}
                    <div class="card mb-3 border-{{ results.database.status == 'success' ? 'success' : (results.database.status == 'warning' ? 'warning' : 'danger') }}">
                        <div class="card-body">
                            <h6 class="mb-1">
                                <i class="fas fa-database me-2 text-{{ results.database.status == 'success' ? 'success' : (results.database.status == 'warning' ? 'warning' : 'danger') }}"></i>
                                Datenbank
                            </h6>
                            <p class="mb-0 text-muted">{{ results.database.message }}</p>
                        </div>
                    </div>

                    {# Permissions #}
                    <div class="card mb-3 border-{{ results.permissions.status == 'success' ? 'success' : 'danger' }}">
                        <div class="card-body">
                            <h6 class="mb-2">
                                <i class="fas fa-{{ results.permissions.status == 'success' ? 'check-circle text-success' : 'times-circle text-danger' }} me-2"></i>
                                Verzeichnis-Berechtigungen
                            </h6>
                            <p class="mb-2 text-muted">{{ results.permissions.message }}</p>
                            {% if results.permissions.not_writable|length > 0 %}
                                <div class="alert alert-danger mb-0">
                                    <strong>Nicht beschreibbare Verzeichnisse:</strong>
                                    <ul class="mb-0 mt-2">
                                        {% for dir in results.permissions.not_writable %}
                                            <li><code>{{ dir }}</code></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    {# Memory & Execution Time #}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-3 border-{{ results.memory.status == 'success' ? 'success' : 'warning' }}">
                                <div class="card-body">
                                    <h6 class="mb-1">
                                        <i class="fas fa-memory me-2 text-{{ results.memory.status == 'success' ? 'success' : 'warning' }}"></i>
                                        Memory Limit
                                    </h6>
                                    <p class="mb-0 text-muted">{{ results.memory.current }}</p>
                                    <small class="text-muted">Empfohlen: {{ results.memory.required }}</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-3 border-{{ results.execution_time.status == 'success' ? 'success' : 'warning' }}">
                                <div class="card-body">
                                    <h6 class="mb-1">
                                        <i class="fas fa-clock me-2 text-{{ results.execution_time.status == 'success' ? 'success' : 'warning' }}"></i>
                                        Max Execution Time
                                    </h6>
                                    <p class="mb-0 text-muted">{{ results.execution_time.current }}s</p>
                                    <small class="text-muted">Empfohlen: {{ results.execution_time.required }}s</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Symfony Version #}
                    <div class="card mb-3 border-{{ results.symfony.status == 'success' ? 'success' : 'danger' }}">
                        <div class="card-body">
                            <h6 class="mb-1">
                                <i class="fas fa-{{ results.symfony.status == 'success' ? 'check-circle text-success' : 'times-circle text-danger' }} me-2"></i>
                                Symfony Version
                            </h6>
                            <p class="mb-0 text-muted">{{ results.symfony.message }}</p>
                        </div>
                    </div>

                    {# Navigation #}
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('setup_wizard_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Zur체ck
                        </a>

                        {% if can_proceed %}
                            <a href="{{ path('setup_step2_modules') }}" class="btn btn-primary">
                                Weiter zu Schritt 2: Module ausw채hlen
                                <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        {% else %}
                            <button type="button" class="btn btn-secondary" disabled>
                                Bitte Fehler beheben
                            </button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

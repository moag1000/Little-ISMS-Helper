{% extends 'base.html.twig' %}

{% block title %}{{ 'setup.step9.title'|trans({}, 'setup') }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Progress Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h4 class="mb-0">{{ 'setup.progress.title'|trans({}, 'setup') }}</h4>
                        <small class="text-muted">{{ 'setup.progress.step_of'|trans({'%current%': 9, '%total%': 11}, 'setup') }}</small>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 82%;" aria-valuenow="82" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0">
                        <i class="bi bi-file-earmark-import me-2" aria-hidden="true"></i>
                        {{ 'setup.step9.header'|trans({}, 'setup') }}
                    </h1>
                </div>
                <div class="card-body p-4">
                    <p class="lead mb-4">
                        {{ 'setup.step9.description'|trans({}, 'setup') }}
                    </p>

                    {# Base Data List #}
                    <h2 class="h5 mb-3">
                        <i class="bi bi-list-check me-2" aria-hidden="true"></i>
                        {{ 'setup.step9.data_to_import'|trans({}, 'setup') }}
                    </h2>

                    {% for data in base_data %}
                        <div class="card mb-3 border-primary">
                            <div class="card-body">
                                <div class="d-flex align-items-start">
                                    <div class="flex-shrink-0 me-3">
                                        <i class="bi bi-check-circle text-primary " aria-hidden="true"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <p class="h6 mb-1">{{ data.name }}</p>
                                        <p class="text-muted mb-2">{{ data.description }}</p>
                                        {% if data.command is defined %}
                                            <small class="text-muted">
                                                <i class="bi bi-terminal me-1" aria-hidden="true"></i>
                                                {{ 'setup.step9.command'|trans({}, 'setup') }}: <code>{{ data.command }}</code>
                                            </small>
                                        {% endif %}
                                        {% if data.required_modules is defined %}
                                            <div class="mt-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-puzzle me-1" aria-hidden="true"></i>
                                                    {{ 'setup.step9.modules'|trans({}, 'setup') }}:
                                                    {% for module in data.required_modules %}
                                                        <span class="badge bg-secondary">{{ module }}</span>
                                                    {% endfor %}
                                                </small>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    <div class="alert alert-info mt-4" role="alert">
                        <p class="h5 mb-2">
                            <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                            {{ 'setup.step9.note.title'|trans({}, 'setup') }}
                        </p>
                        <p class="mb-0">
                            {{ 'setup.step9.note.message'|trans({}, 'setup') }}
                        </p>
                    </div>

                    {# Import Action #}
                    <form method="post" action="{{ path('setup_step9_base_data_import') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('setup_base_data') }}">
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('setup_step8_compliance_frameworks') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>
                                {{ 'setup.navigation.back'|trans({}, 'setup') }}
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-download me-2" aria-hidden="true"></i>
                                {{ 'setup.step9.import_button'|trans({}, 'setup') }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

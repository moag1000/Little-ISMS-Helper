{% extends 'base.html.twig' %}

{% block title %}{{ 'setup.email.title'|trans }} - Deployment Wizard{% endblock %}

{% block head %}
    {{ parent() }}
    {# Disable Turbo cache to ensure CSRF tokens are always fresh #}
    <meta name="turbo-cache-control" content="no-cache">
{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Progress Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="mb-0">{{ 'setup.progress.title'|trans }}</h6>
                        <small class="text-muted">{{ 'setup.progress.step'|trans({'%current%': 3, '%total%': 10}) }}</small>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-envelope me-2"></i>
                        {{ 'setup.email.header'|trans }}
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>{{ 'setup.email.optional.title'|trans }}</strong>
                        <p class="mb-0">{{ 'setup.email.optional.message'|trans }}</p>
                    </div>

                    {# Email Configuration Form #}
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_row(form.transport) }}
                    </div>

                    <div id="smtp-config" class="smtp-config-fields">
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                {{ form_row(form.host) }}
                            </div>
                            <div class="col-md-4 mb-3">
                                {{ form_row(form.port) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.encryption) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.username) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.password) }}
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h5 class="mb-3">{{ 'setup.email.sender_info'|trans }}</h5>

                    <div class="mb-3">
                        {{ form_row(form.from_address) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.from_name) }}
                    </div>

                    {# Navigation #}
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('setup_step2_admin_user') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            {{ 'setup.navigation.back'|trans }}
                        </a>

                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary">
                                {{ 'setup.navigation.next'|trans }}
                                <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}

                    {# Skip Option #}
                    <div class="text-center mt-3">
                        <form method="post" action="{{ path('setup_step3_email_config_skip') }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('setup_email_skip') }}">
                            <button type="submit" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-forward me-1"></i>
                                {{ 'setup.email.skip_button'|trans }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            {# Information Card #}
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-lightbulb text-info me-2"></i>
                        {{ 'setup.email.info.title'|trans }}
                    </h5>
                    <p class="text-muted mb-2">
                        {{ 'setup.email.info.description'|trans }}
                    </p>
                    <ul class="text-muted mb-0">
                        <li>{{ 'setup.email.info.notifications'|trans }}</li>
                        <li>{{ 'setup.email.info.reminders'|trans }}</li>
                        <li>{{ 'setup.email.info.reports'|trans }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Toggle SMTP fields based on transport selection
document.addEventListener('DOMContentLoaded', function() {
    const transportSelect = document.querySelector('select[name="email_configuration[transport]"]');
    const smtpConfig = document.getElementById('smtp-config');

    function toggleSmtpFields() {
        if (transportSelect && smtpConfig) {
            smtpConfig.style.display = (transportSelect.value === 'smtp') ? 'block' : 'none';
        }
    }

    if (transportSelect) {
        transportSelect.addEventListener('change', toggleSmtpFields);
        toggleSmtpFields(); // Initial state
    }
});
</script>
{% endblock %}

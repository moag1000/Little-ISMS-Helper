{% extends 'base.html.twig' %}

{% block title %}{{ 'setup.email.title'|trans({}, 'messages') }} - Deployment Wizard{% endblock %}

{% block head %}
    {{ parent() }}
    {# Disable Turbo cache to ensure CSRF tokens are always fresh #}
    <meta name="turbo-cache-control" content="no-cache">
{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'common.close'|trans({}, 'messages') }}"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Progress Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h4 class="mb-0">{{ 'setup.progress.title'|trans({}, 'messages') }}</h4>
                        <small class="text-muted">{{ 'setup.progress.step'|trans({'%current%': 5, '%total%': 11}, 'messages') }}</small>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-envelope me-2" aria-hidden="true"></i>
                        {{ 'setup.email.header'|trans({}, 'messages') }}
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                        <strong>{{ 'setup.email.optional.title'|trans({}, 'messages') }}</strong>
                        <p class="mb-0">{{ 'setup.email.optional.message'|trans({}, 'messages') }}</p>
                    </div>

                    {# Email Configuration Form #}
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <div class="row">
                        <div class="col-md-12">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.transport,
                                'label': 'setup.email.transport'|trans({}, 'messages')
                            } %}
                        </div>
                    </div>

                    <div id="smtp-config" class="smtp-config-fields">
                        <div class="row">
                            <div class="col-md-8">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.host,
                                    'label': 'setup.email.host'|trans({}, 'messages')
                                } %}
                            </div>
                            <div class="col-md-4">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.port,
                                    'label': 'setup.email.port'|trans({}, 'messages')
                                } %}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.encryption,
                                    'label': 'setup.email.encryption'|trans({}, 'messages')
                                } %}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.username,
                                    'label': 'setup.email.username'|trans({}, 'messages')
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.password,
                                    'label': 'setup.email.password'|trans({}, 'messages')
                                } %}
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h5 class="mb-3">{{ 'setup.email.sender_info'|trans({}, 'messages') }}</h5>

                    <div class="row">
                        <div class="col-md-12">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.from_address,
                                'label': 'setup.email.from_address'|trans({}, 'messages'),
                                'required': true
                            } %}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            {% include '_components/_form_field.html.twig' with {
                                'field': form.from_name,
                                'label': 'setup.email.from_name'|trans({}, 'messages')
                            } %}
                        </div>
                    </div>

                    {# Navigation #}
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('setup_step4_admin_user') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>
                            {{ 'setup.navigation.back'|trans({}, 'messages') }}
                        </a>

                        <div class="btn-group" role="group" aria-label="{{ 'common.actions'|trans({}, 'messages') }}">
                            <button type="submit" class="btn btn-primary">
                                {{ 'setup.navigation.next'|trans({}, 'messages') }}
                                <i class="bi bi-arrow-right ms-2" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>

                    {{ form_end(form) }}

                    {# Skip Option #}
                    <div class="text-center mt-3">
                        <form method="post" action="{{ path('setup_step5_email_config_skip') }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('setup_email_skip') }}">
                            <button type="submit" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-skip-forward me-1" aria-hidden="true"></i>
                                {{ 'setup.email.skip_button'|trans({}, 'messages') }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            {# Information Card #}
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-lightbulb text-info me-2" aria-hidden="true"></i>
                        {{ 'setup.email.info.title'|trans({}, 'messages') }}
                    </h5>
                    <p class="text-muted mb-2">
                        {{ 'setup.email.info.description'|trans({}, 'messages') }}
                    </p>
                    <ul class="text-muted mb-0">
                        <li>{{ 'setup.email.info.notifications'|trans({}, 'messages') }}</li>
                        <li>{{ 'setup.email.info.reminders'|trans({}, 'messages') }}</li>
                        <li>{{ 'setup.email.info.reports'|trans({}, 'messages') }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Toggle SMTP fields based on transport selection
document.addEventListener('DOMContentLoaded', function() {
    const transportSelect = document.querySelector('select[name="email_configuration[transport]"]');
    const smtpConfig = document.getElementById('smtp-config');

    function toggleSmtpFields() {
        if (transportSelect && smtpConfig) {
            smtpConfig.style.display = (transportSelect.value === 'smtp') ? 'block' : 'none';
        }
    }

    if (transportSelect) {
        transportSelect.addEventListener('change', toggleSmtpFields);
        toggleSmtpFields(); // Initial state
    }
});
</script>
{% endblock %}

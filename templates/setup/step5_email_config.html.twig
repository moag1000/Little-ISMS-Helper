{% extends 'base.html.twig' %}

{% block title %}{{ 'setup.email.title'|trans({}, 'setup') }} - Deployment Wizard{% endblock %}

{% block head %}
    {{ parent() }}
    {# Disable Turbo cache to ensure CSRF tokens are always fresh #}
    <meta name="turbo-cache-control" content="no-cache">
{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'setup.common.close'|trans({}, 'setup') }}"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Progress Bar #}
            {% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
                {% block card_body %}
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h4 class="mb-0">{{ 'setup.progress.title'|trans({}, 'setup') }}</h4>
                        <small class="text-muted">{{ 'setup.progress.step_of'|trans({'%current%': 5, '%total%': 11}, 'setup') }}</small>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                {% endblock %}
            {% endembed %}

            {% embed '_components/_card.html.twig' with { 'class': 'shadow-lg' } %}
                {% block card_header %}
                    <div class="card-header bg-primary text-white">
                        <h1 class="h3 mb-0">
                            <i class="bi bi-envelope me-2" aria-hidden="true"></i>
                            {{ 'setup.email.header'|trans({}, 'setup') }}
                        </h1>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <div class="p-4">
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                            <strong>{{ 'setup.email.optional.title'|trans({}, 'setup') }}</strong>
                            <p class="mb-0">{{ 'setup.email.optional.message'|trans({}, 'setup') }}</p>
                        </div>

                        {# Email Configuration Form #}
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.transport,
                                    'label': 'setup.email.transport'|trans({}, 'setup')
                                } %}
                            </div>
                        </div>

                        <div id="smtp-config" class="smtp-config-fields">
                            <div class="row">
                                <div class="col-md-8">
                                    {% include '_components/_form_field.html.twig' with {
                                        'field': form.host,
                                        'label': 'setup.email.host'|trans({}, 'setup')
                                    } %}
                                </div>
                                <div class="col-md-4">
                                    {% include '_components/_form_field.html.twig' with {
                                        'field': form.port,
                                        'label': 'setup.email.port'|trans({}, 'setup')
                                    } %}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    {% include '_components/_form_field.html.twig' with {
                                        'field': form.encryption,
                                        'label': 'setup.email.encryption'|trans({}, 'setup')
                                    } %}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    {% include '_components/_form_field.html.twig' with {
                                        'field': form.username,
                                        'label': 'setup.email.username'|trans({}, 'setup')
                                    } %}
                                </div>
                                <div class="col-md-6">
                                    {% include '_components/_form_field.html.twig' with {
                                        'field': form.password,
                                        'label': 'setup.email.password'|trans({}, 'setup')
                                    } %}
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <h2 class="h5 mb-3">{{ 'setup.email.sender_info'|trans({}, 'setup') }}</h2>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.from_address,
                                    'label': 'setup.email.from_address'|trans({}, 'setup'),
                                    'required': true
                                } %}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.from_name,
                                    'label': 'setup.email.from_name'|trans({}, 'setup')
                                } %}
                            </div>
                        </div>

                        {# Navigation #}
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('setup_step4_admin_user') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>
                                {{ 'setup.navigation.back'|trans({}, 'setup') }}
                            </a>

                            <div class="btn-group" role="group" aria-label="{{ 'setup.common.actions'|trans({}, 'setup') }}">
                                <button type="submit" class="btn btn-primary">
                                    {{ 'setup.navigation.next'|trans({}, 'setup') }}
                                    <i class="bi bi-arrow-right ms-2" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>

                        {{ form_end(form) }}

                        {# Skip Option #}
                        <div class="text-center mt-3">
                            <form method="post" action="{{ path('setup_step5_email_config_skip') }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('setup_email_skip') }}">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-skip-forward me-1" aria-hidden="true"></i>
                                    {{ 'setup.email.skip_button'|trans({}, 'setup') }}
                                </button>
                            </form>
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}

            {# Information Card #}
            {% embed '_components/_card.html.twig' with { 'class': 'mt-4 border-info' } %}
                {% block card_body %}
                    <p class="h5 mb-3">
                        <i class="bi bi-lightbulb text-info me-2" aria-hidden="true"></i>
                        {{ 'setup.email.info.title'|trans({}, 'setup') }}
                    </p>
                    <p class="text-muted mb-2">
                        {{ 'setup.email.info.description'|trans({}, 'setup') }}
                    </p>
                    <ul class="text-muted mb-0">
                        <li>{{ 'setup.email.info.notifications'|trans({}, 'setup') }}</li>
                        <li>{{ 'setup.email.info.reminders'|trans({}, 'setup') }}</li>
                        <li>{{ 'setup.email.info.reports'|trans({}, 'setup') }}</li>
                    </ul>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
</div>

<script>
// Toggle SMTP fields based on transport selection
document.addEventListener('DOMContentLoaded', function() {
    const transportSelect = document.querySelector('select[name="email_configuration[transport]"]');
    const smtpConfig = document.getElementById('smtp-config');

    function toggleSmtpFields() {
        if (transportSelect && smtpConfig) {
            smtpConfig.style.display = (transportSelect.value === 'smtp') ? 'block' : 'none';
        }
    }

    if (transportSelect) {
        transportSelect.addEventListener('change', toggleSmtpFields);
        toggleSmtpFields(); // Initial state
    }
});
</script>
{% endblock %}

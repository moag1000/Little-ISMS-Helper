{% extends 'base.html.twig' %}

{% block title %}{{ 'setup.compliance.title'|trans({}, 'messages') }} - Deployment Wizard{% endblock %}

{% block head %}
    {{ parent() }}
    {# Disable Turbo cache to ensure CSRF tokens are always fresh #}
    <meta name="turbo-cache-control" content="no-cache">
{% endblock %}


{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Progress Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h4 class="mb-0">{{ 'setup.progress.title'|trans({}, 'messages') }}</h5>
                        <small class="text-muted">{{ 'setup.progress.step'|trans({'%current%': 8, '%total%': 11}, 'messages') }}</small>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-balance me-2"></i>
                        {{ 'setup.compliance.header'|trans({}, 'messages') }}
                    </h2>
                </div>
                <div class="card-body p-4">
                    <p class="lead mb-4">
                        {{ 'setup.compliance.description'|trans({}, 'messages') }}
                    </p>

                    {# Recommended Frameworks Alert #}
                    {% if recommended_frameworks is not empty %}
                        <div class="alert alert-success">
                            <i class="bi bi-lightbulb me-2"></i>
                            <strong>{{ 'setup.compliance.recommended.title'|trans({}, 'messages') }}</strong>
                            <p class="mb-2">{{ 'setup.compliance.recommended.description'|trans({}, 'messages') }}</p>
                            <div class="d-flex flex-wrap gap-2">
                                {% for code in recommended_frameworks %}
                                    {% for framework in available_frameworks|filter(f => f.code == code) %}
                                        <span class="badge bg-success">
                                            {{ framework.icon }} {{ framework.name }}
                                        </span>
                                    {% endfor %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# ISO 27001 Mandatory Notice #}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>{{ 'setup.compliance.mandatory.title'|trans({}, 'messages') }}</strong>
                        <p class="mb-0">{{ 'setup.compliance.mandatory.message'|trans({}, 'messages') }}</p>
                    </div>

                    {# Critical Infrastructure Notice for NIS2 #}
                    {% if 'NIS2' in recommended_frameworks and (app.session.get('setup_organisation_employee_count', '1-10') in ['1-10', '11-50']) %}
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>{{ 'setup.compliance.critical_infrastructure.title'|trans({}, 'messages') }}</strong>
                            <p class="mb-0">{{ 'setup.compliance.critical_infrastructure.message'|trans({}, 'messages') }}</p>
                        </div>
                    {% endif %}

                    {# Compliance Framework Selection Form #}
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <h5 class="mb-3">{{ 'setup.compliance.select_frameworks'|trans({}, 'messages') }}</h5>

                    <div class="row">
                        {% for child in form.frameworks %}
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 {% if loop.index0 in recommended_frameworks or 'ISO27001' in child.vars.value %}border-success{% else %}border-secondary{% endif %}">
                                    <div class="card-body">
                                        <div class="form-check">
                                            {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(child, null, {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                                        </div>

                                        {# Find matching framework for description #}
                                        {% set framework_code = child.vars.value %}
                                        {% for framework in available_frameworks|filter(f => f.code == framework_code) %}
                                            <small class="text-muted d-block mt-2">
                                                {{ framework.description }}
                                            </small>

                                            {# Show recommended badge #}
                                            {% if framework_code in recommended_frameworks %}
                                                <span class="badge bg-success mt-2">
                                                    <i class="bi bi-star me-1"></i>
                                                    {{ 'setup.compliance.recommended_badge'|trans({}, 'messages') }}
                                                </span>
                                            {% endif %}

                                            {# Show mandatory badge for ISO 27001 #}
                                            {% if framework_code == 'ISO27001' %}
                                                <span class="badge bg-primary mt-2">
                                                    <i class="bi bi-lock me-1"></i>
                                                    {{ 'setup.compliance.mandatory_badge'|trans({}, 'messages') }}
                                                </span>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    {# Information Box #}
                    <div class="alert alert-warning mt-4">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>{{ 'setup.compliance.note.title'|trans({}, 'messages') }}</strong>
                        <p class="mb-0">{{ 'setup.compliance.note.message'|trans({}, 'messages') }}</p>
                    </div>

                    {# Navigation #}
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('setup_step7_modules') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>
                            {{ 'setup.navigation.back'|trans({}, 'messages') }}
                        </a>

                        <button type="submit" class="btn btn-primary">
                            {{ 'setup.navigation.next'|trans({}, 'messages') }}
                            <i class="bi bi-arrow-right ms-2"></i>
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Framework Details Card #}
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-book text-info me-2"></i>
                        {{ 'setup.compliance.details.title'|trans({}, 'messages') }}
                    </h5>
                    <div class="row">
                        {% for framework in available_frameworks %}
                            <div class="col-md-6 mb-3">
                                <h4>{{ framework.icon }} {{ framework.name }}</h5>
                                <p class="text-muted small mb-0">{{ framework.description }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'setup' %}

{% block title %}{{ 'setup.step7.title'|trans({}, 'setup') }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            {# Progress Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h4 class="mb-0">{{ 'setup.progress.title'|trans({}, 'setup') }}</h4>
                        <small class="text-muted">{{ 'setup.progress.step_of'|trans({'%current%': 7, '%total%': 11}, 'setup') }}</small>
                    </div>
                    <div class="progress" style="height: 10px;">
                        <div class="progress-bar" role="progressbar" style="width: 64%;" aria-valuenow="64" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3 mb-0">
                        <i class="bi bi-puzzle me-2" aria-hidden="true"></i>
                        {{ 'setup.step7.header'|trans({}, 'setup') }}
                    </h1>
                </div>
                <div class="card-body p-4">
                    <p class="lead mb-4">
                        {{ 'setup.step7.intro'|trans({}, 'setup') }}
                    </p>

                    {% if recommended_modules is defined and recommended_modules|length > 0 %}
                    <div class="alert alert-info mb-4">
                        <p class="h5 mb-2">
                            <i class="bi bi-lightbulb me-2" aria-hidden="true"></i>
                            {{ 'setup.step7.recommendations.title'|trans({}, 'setup') }}
                        </p>
                        <p class="mb-0">
                            {{ 'setup.step7.recommendations.description'|trans({}, 'setup')|raw }}
                        </p>
                    </div>
                    {% endif %}

                    <form method="post" action="{{ path('setup_step7_modules_save') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('setup_modules') }}">

                        {# Required Modules #}
                        <h2 class="h5 mb-3">
                            <i class="bi bi-star text-warning me-2" aria-hidden="true"></i>
                            {{ 'setup.step7.required_modules'|trans({}, 'setup') }}
                        </h2>

                        {% for key, module in all_modules %}
                            {% if module.required %}
                            <div class="card mb-3 border-primary bg-light">
                                <div class="card-body">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="modules[]" value="{{ key }}" id="module_{{ key }}" checked disabled>
                                        <input type="hidden" name="modules[]" value="{{ key }}">
                                        <label class="form-check-label w-100" for="module_{{ key }}">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <p class="h6 mb-1">
                                                        <i class="bi bi-{{ module.icon }} me-2" aria-hidden="true"></i>
                                                        {{ module.name }}
                                                        <span class="badge bg-warning text-dark ms-2">{{ 'setup.step7.badge.required'|trans({}, 'setup') }}</span>
                                                    </p>
                                                    <p class="text-muted mb-1">{{ module.description }}</p>
                                                    <small class="text-muted">
                                                        <strong>{{ 'setup.step7.entities'|trans({}, 'setup') }}</strong>
                                                        {% for entity in module.entities %}
                                                            <span class="badge bg-secondary">{{ entity }}</span>
                                                        {% endfor %}
                                                    </small>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        {% endfor %}

                        {# Optional Modules #}
                        <h2 class="h5 mb-3 mt-4">
                            <i class="bi bi-toggle-on text-info me-2" aria-hidden="true"></i>
                            {{ 'setup.step7.optional_modules'|trans({}, 'setup') }}
                        </h2>

                        <div id="optional-modules">
                            {% for key, module in optional_modules %}
                                <div class="card mb-3 module-card {% if recommended_modules is defined and key in recommended_modules %}border-info{% endif %}" data-module="{{ key }}" data-dependencies="{{ module.dependencies|json_encode }}">
                                    <div class="card-body">
                                        <div class="form-check">
                                            <input class="form-check-input module-checkbox" type="checkbox" name="modules[]" value="{{ key }}" id="module_{{ key }}"
                                                {{ key in selected_modules ? 'checked' : '' }}>
                                            <label class="form-check-label w-100" for="module_{{ key }}">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <p class="h6 mb-1">
                                                            <i class="bi bi-{{ module.icon }} me-2" aria-hidden="true"></i>
                                                            {{ module.name }}
                                                            {% if recommended_modules is defined and key in recommended_modules %}
                                                                <span class="badge bg-info ms-2">{{ 'setup.step7.badge.recommended'|trans({}, 'setup') }}</span>
                                                            {% endif %}
                                                        </p>
                                                        <p class="text-muted mb-1">{{ module.description }}</p>
                                                        <small class="text-muted">
                                                            <strong>{{ 'setup.step7.entities'|trans({}, 'setup') }}</strong>
                                                            {% for entity in module.entities %}
                                                                <span class="badge bg-secondary">{{ entity }}</span>
                                                            {% endfor %}
                                                        </small>
                                                        {% if module.dependencies|length > 0 %}
                                                            <div class="mt-2">
                                                                <small class="text-warning">
                                                                    <i class="bi bi-link me-1" aria-hidden="true"></i>
                                                                    <strong>{{ 'setup.step7.dependencies'|trans({}, 'setup') }}</strong>
                                                                    {% for dep in module.dependencies %}
                                                                        <span class="badge bg-warning text-dark">{{ all_modules[dep].name }}</span>
                                                                    {% endfor %}
                                                                </small>
                                                            </div>
                                                        {% endif %}
                                                        {% if dependency_graph[key].dependents|length > 0 %}
                                                            <div class="mt-1">
                                                                <small class="text-info">
                                                                    <i class="bi bi-arrow-right me-1" aria-hidden="true"></i>
                                                                    <strong>{{ 'setup.step7.required_by'|trans({}, 'setup') }}</strong>
                                                                    {% for dep in dependency_graph[key].dependents %}
                                                                        <span class="badge bg-info">{{ all_modules[dep].name }}</span>
                                                                    {% endfor %}
                                                                </small>
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        {# Summary #}
                        <div class="card bg-light mt-4 mb-4">
                            <div class="card-body">
                                <p class="h5 mb-2">
                                    <i class="bi bi-pie-chart me-2" aria-hidden="true"></i>
                                    {{ 'setup.step7.summary.title'|trans({}, 'setup') }}
                                </p>
                                <div id="module-summary">
                                    <p class="mb-0">
                                        {{ 'setup.step7.summary.selected'|trans({'%selected%': '<span id="selected-count">0</span>', '%total%': all_modules|length}, 'setup')|raw }}
                                    </p>
                                </div>
                            </div>
                        </div>

                        {# Navigation #}
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('setup_step6_organisation_info') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>
                                {{ 'setup.common.back'|trans({}, 'setup') }}
                            </a>
                            <button type="submit" class="btn btn-primary">
                                {{ 'setup.next_step'|trans({'%step%': 8, '%name%': 'setup.steps.compliance_frameworks'|trans({}, 'setup')}, 'messages') }}
                                <i class="bi bi-arrow-right ms-2" aria-hidden="true"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
(function() {
    // Run on both DOMContentLoaded and turbo:load for Turbo compatibility
    function initModuleSelection() {
        const checkboxes = document.querySelectorAll('.module-checkbox');
        const selectedCount = document.getElementById('selected-count');
        if (!selectedCount) return; // Not on this page

        const requiredCount = {{ required_modules|length }};

        // Build dependency map from data attributes
        const dependencyMap = {};
        const dependentsMap = {};

        document.querySelectorAll('.module-card').forEach(card => {
            const moduleKey = card.dataset.module;
            const deps = JSON.parse(card.dataset.dependencies || '[]');
            dependencyMap[moduleKey] = deps;

            // Build reverse map (who depends on this module)
            deps.forEach(dep => {
                if (!dependentsMap[dep]) {
                    dependentsMap[dep] = [];
                }
                dependentsMap[dep].push(moduleKey);
            });
        });

        function updateCount() {
            const checked = document.querySelectorAll('.module-checkbox:checked').length;
            selectedCount.textContent = checked + requiredCount;
        }

        function selectDependencies(moduleKey) {
            const deps = dependencyMap[moduleKey] || [];
            deps.forEach(dep => {
                const depCheckbox = document.getElementById('module_' + dep);
                if (depCheckbox && !depCheckbox.checked) {
                    depCheckbox.checked = true;
                    // Recursively select dependencies of dependencies
                    selectDependencies(dep);
                    // Visual feedback
                    const card = depCheckbox.closest('.module-card');
                    if (card) {
                        card.classList.add('border-success');
                        setTimeout(() => card.classList.remove('border-success'), 1000);
                    }
                }
            });
        }

        function deselectDependents(moduleKey) {
            const dependents = dependentsMap[moduleKey] || [];
            dependents.forEach(dep => {
                const depCheckbox = document.getElementById('module_' + dep);
                if (depCheckbox && depCheckbox.checked) {
                    depCheckbox.checked = false;
                    // Recursively deselect modules that depend on this one
                    deselectDependents(dep);
                    // Visual feedback
                    const card = depCheckbox.closest('.module-card');
                    if (card) {
                        card.classList.add('border-warning');
                        setTimeout(() => card.classList.remove('border-warning'), 1000);
                    }
                }
            });
        }

        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const moduleKey = this.value;

                if (this.checked) {
                    // When checking a module, also check its dependencies
                    selectDependencies(moduleKey);
                } else {
                    // When unchecking a module, also uncheck modules that depend on it
                    deselectDependents(moduleKey);
                }

                updateCount();
            });
        });

        // Initial count
        updateCount();
    }

    // Run on DOMContentLoaded
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initModuleSelection);
    } else {
        initModuleSelection();
    }

    // Also run on Turbo navigation
    document.addEventListener('turbo:load', initModuleSelection);
})();
</script>
{% endblock %}

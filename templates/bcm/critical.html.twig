{% extends 'base.html.twig' %}

{% block title %}{{ 'bcm.title.critical'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="page-header">
    <div>
        <h1>{{ 'bcm.title.critical'|trans }}</h1>
        <p class="text-muted">{{ 'bcm.description.critical'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_asset_bcm_insights') }}" class="btn btn-secondary">
            üìä {{ 'bcm.action.view_insights'|trans }}
        </a>
        <a href="{{ path('app_bcm_export_critical') }}" class="btn btn-success" data-turbo="false">
            üì• {{ 'bcm.action.export'|trans }}
        </a>
    </div>
</div>

{# Alert Banner #}
{% if criticalAssets|length > 0 %}
<div class="info-box mb-4 bg-danger-light-border-left-danger">
    <p><strong>üî¥ {{ 'bcm.warning.critical_assets_count'|trans({'%count%': criticalAssets|length}) }}</strong></p>
    <p class="mt-xs">{{ 'bcm.warning.critical_message'|trans }}</p>
</div>
{% endif %}

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="kpi-card border-left-danger">
        <div class="icon">üî¥</div>
        <div class="label">{{ 'bcm.stats.critical_assets'|trans }}</div>
        <div>
            <span class="value text-danger">{{ criticalAssets|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">üéØ</div>
        <div class="label">{{ 'bcm.stats.critical_processes'|trans }}</div>
        <div>
            <span class="value">{{ criticalProcesses|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">‚è±Ô∏è</div>
        <div class="label">{{ 'bcm.stats.avg_rto'|trans }}</div>
        <div>
            <span class="value">{{ avgRTO|round(1) }}</span>
            <span class="unit">h</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">‚ö†Ô∏è</div>
        <div class="label">{{ 'bcm.stats.missing_recovery_plans'|trans }}</div>
        <div>
            <span class="value">{{ assetsWithoutRecoveryPlan }}</span>
        </div>
    </div>
</div>

{# Business Criticality Overview #}
<h2>{{ 'bcm.section.criticality_overview'|trans }}</h2>

<div class="module-grid mb-4">
    <div class="card border-left-danger">
        <div class="fs-2-mb-sm">üî¥</div>
        <h2>{{ 'bcm.criticality.critical'|trans }}</h2>
        <p class="text-muted-mt-xs-mb-md">
            {{ 'bcm.description.critical_level'|trans }}
        </p>

        <div class="stats-grid grid-col-1">
            <div class="stat-item">
                <strong class="fs-15-danger">{{ criticalityGroups.critical|length }}</strong>
                <span>{{ 'bcm.field.assets'|trans }}</span>
            </div>
            <div class="stat-item">
                <strong>{{ avgRTOByCriticality.critical ?? 0 }}h</strong>
                <span>{{ 'bcm.field.avg_rto'|trans }}</span>
            </div>
        </div>
    </div>

    <div class="card border-left-warning">
        <div class="fs-2-mb-sm">üü°</div>
        <h3>{{ 'bcm.criticality.high'|trans }}</h3>
        <p class="text-muted-mt-xs-mb-md">
            {{ 'bcm.description.high_level'|trans }}
        </p>

        <div class="stats-grid grid-col-1">
            <div class="stat-item">
                <strong class="fs-15-warning">{{ criticalityGroups.high|length }}</strong>
                <span>{{ 'bcm.field.assets'|trans }}</span>
            </div>
            <div class="stat-item">
                <strong>{{ avgRTOByCriticality.high ?? 0 }}h</strong>
                <span>{{ 'bcm.field.avg_rto'|trans }}</span>
            </div>
        </div>
    </div>

    <div class="card border-left-info">
        <div class="fs-2-mb-sm">üîµ</div>
        <h3>{{ 'bcm.criticality.medium'|trans }}</h3>
        <p class="text-muted-mt-xs-mb-md">
            {{ 'bcm.description.medium_level'|trans }}
        </p>

        <div class="stats-grid grid-col-1">
            <div class="stat-item">
                <strong class="fs-15-info">{{ criticalityGroups.medium|length }}</strong>
                <span>{{ 'bcm.field.assets'|trans }}</span>
            </div>
            <div class="stat-item">
                <strong>{{ avgRTOByCriticality.medium ?? 0 }}h</strong>
                <span>{{ 'bcm.field.avg_rto'|trans }}</span>
            </div>
        </div>
    </div>
</div>

{# Critical Assets Table #}
<h2>{{ 'bcm.section.critical_assets_list'|trans }}</h2>

{% embed '_components/_table.html.twig' with {
    'class': 'table-container',
    'noMargin': true,
    'responsive': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'bcm.field.asset_name'|trans }}</th>
            <th scope="col">{{ 'bcm.field.type'|trans }}</th>
            <th scope="col">{{ 'bcm.field.criticality'|trans }}</th>
            <th scope="col">{{ 'bcm.field.rto'|trans }}</th>
            <th scope="col">{{ 'bcm.field.rpo'|trans }}</th>
            <th scope="col">{{ 'bcm.field.recovery_plan'|trans }}</th>
            <th scope="col">{{ 'bcm.field.last_tested'|trans }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for asset in criticalAssets %}
        <tr {% if not asset.hasRecoveryPlan %}class="bg-warning-light"{% endif %}>
            <td>
                <strong>{{ asset.name }}</strong>
                {% if not asset.hasRecoveryPlan %}
                    <br><span class="badge bg-warning mt-xs">
                        {{ 'bcm.badge.no_recovery_plan'|trans }}
                    </span>
                {% endif %}
            </td>
            <td>
                <span class="badge bg-info">{{ ('bcm.type.' ~ asset.type)|trans }}</span>
            </td>
            <td>
                <span class="{{ badge_severity(asset.criticality) }}">
                    {{ ('bcm.criticality.' ~ asset.criticality)|trans }}
                </span>
            </td>
            <td>
                <strong>{{ asset.rto }}h</strong>
                {% if asset.rto <= 1 %}
                    <span class="badge bg-danger ml-xs">
                        {{ 'bcm.badge.immediate'|trans }}
                    </span>
                {% endif %}
            </td>
            <td>
                <strong>{{ asset.rpo }}h</strong>
            </td>
            <td>
                {% if asset.hasRecoveryPlan %}
                    <span class="badge bg-success">‚úì {{ 'bcm.badge.exists'|trans }}</span>
                {% else %}
                    <span class="badge bg-danger">‚úó {{ 'bcm.badge.missing'|trans }}</span>
                {% endif %}
            </td>
            <td>
                {% if asset.lastTestedDate %}
                    {{ asset.lastTestedDate|date('d.m.Y') }}
                    {% set daysSinceTest = (date().timestamp - asset.lastTestedDate.timestamp) / 86400 %}
                    {% if daysSinceTest > 180 %}
                        <br><span class="badge bg-warning mt-xs">
                            {{ 'bcm.badge.test_overdue'|trans }}
                        </span>
                    {% endif %}
                {% else %}
                    <span class="text-muted">{{ 'bcm.message.never_tested'|trans }}</span>
                {% endif %}
            </td>
            <td class="text-center">
                <a href="{{ path('app_asset_show', {id: asset.id}) }}" class="btn btn-sm mr-sm">
                    üëÅ {{ 'common.view'|trans }}
                </a>
                <a href="{{ path('app_bcm_recovery_plan', {assetId: asset.id}) }}" class="btn btn-sm btn-secondary">
                    üìã {{ 'bcm.action.plan'|trans }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="8" class="text-center-p-xl">
                <div class="fs-2-mb-sm">‚úÖ</div>
                <p><strong>{{ 'bcm.message.no_critical_assets'|trans }}</strong></p>
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}

{# Critical Business Processes #}
<h2 class="mt-4">{{ 'bcm.section.critical_processes'|trans }}</h2>

{% embed '_components/_table.html.twig' with {
    'class': 'table-container',
    'noMargin': true,
    'responsive': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'bcm.field.process_name'|trans }}</th>
            <th scope="col">{{ 'bcm.field.department'|trans }}</th>
            <th scope="col" class="text-center">{{ 'bcm.field.dependent_assets'|trans }}</th>
            <th scope="col">{{ 'bcm.field.mtd'|trans }}</th>
            <th scope="col">{{ 'bcm.field.impact_of_loss'|trans }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for process in criticalProcesses %}
        <tr>
            <td>
                <strong>{{ process.name }}</strong>
                <br><small class="text-muted">{{ process.description|default('') }}</small>
            </td>
            <td>{{ process.department|default('-') }}</td>
            <td class="text-center">
                <span class="badge bg-info">{{ process.dependentAssets|length }}</span>
            </td>
            <td>
                <strong>{{ process.mtd }}h</strong>
                <br><small class="text-muted">
                    {{ 'bcm.field.maximum_tolerable_downtime'|trans }}
                </small>
            </td>
            <td>
                <span class="badge bg-danger">{{ ('bcm.impact.' ~ process.impactLevel)|trans }}</span>
            </td>
            <td class="text-center">
                <a href="{{ path('app_bcm_process_show', {id: process.id}) }}" class="btn btn-sm">
                    üëÅ {{ 'common.view'|trans }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6" class="text-center-p-xl">
                {{ 'bcm.message.no_critical_processes'|trans }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}

{# Action Items #}
{% if actionItems|length > 0 %}
<div class="card mt-4">
    <h2>{{ 'bcm.section.action_items'|trans }}</h2>
    <p class="text-muted-mt-sm-mb-md">
        {{ 'bcm.description.action_items'|trans }}
    </p>

    <ul class="list-unstyled">
        {% for item in actionItems %}
        <li class="list-item-action">
            <div>
                <strong>{{ item.title }}</strong>
                <br><small class="text-muted">{{ item.description }}</small>
            </div>
            <div>
                <span class="{{ badge_priority(item.priority) }}">
                    {{ ('bcm.priority.' ~ item.priority)|trans }}
                </span>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>
{% endif %}
{% endblock %}

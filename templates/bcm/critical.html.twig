{% extends 'base.html.twig' %}

{% block title %}{{ 'bcm.title.critical'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="page-header">
    <div>
        <h1>{{ 'bcm.title.critical'|trans }}</h1>
        <p class="text-muted">{{ 'bcm.description.critical'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_asset_bcm_insights') }}" class="btn btn-secondary">
            üìä {{ 'bcm.action.view_insights'|trans }}
        </a>
        <a href="{{ path('app_bcm_export_critical') }}" class="btn btn-success">
            üì• {{ 'bcm.action.export'|trans }}
        </a>
    </div>
</div>

{# Alert Banner #}
{% if criticalAssets|length > 0 %}
<div class="info-box mb-4" style="background: var(--color-danger-light); border-left: 4px solid var(--color-danger);">
    <p><strong>üî¥ {{ 'bcm.warning.critical_assets_count'|trans({'%count%': criticalAssets|length}) }}</strong></p>
    <p style="margin-top: var(--spacing-xs);">{{ 'bcm.warning.critical_message'|trans }}</p>
</div>
{% endif %}

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="kpi-card" style="border-left: 4px solid var(--color-danger);">
        <div class="icon">üî¥</div>
        <div class="label">{{ 'bcm.stats.critical_assets'|trans }}</div>
        <div>
            <span class="value" style="color: var(--color-danger);">{{ criticalAssets|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">üéØ</div>
        <div class="label">{{ 'bcm.stats.critical_processes'|trans }}</div>
        <div>
            <span class="value">{{ criticalProcesses|length }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">‚è±Ô∏è</div>
        <div class="label">{{ 'bcm.stats.avg_rto'|trans }}</div>
        <div>
            <span class="value">{{ avgRTO|round(1) }}</span>
            <span class="unit">h</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">‚ö†Ô∏è</div>
        <div class="label">{{ 'bcm.stats.missing_recovery_plans'|trans }}</div>
        <div>
            <span class="value">{{ assetsWithoutRecoveryPlan }}</span>
        </div>
    </div>
</div>

{# Business Criticality Overview #}
<h2>{{ 'bcm.section.criticality_overview'|trans }}</h2>

<div class="module-grid mb-4">
    <div class="card" style="border-left: 4px solid var(--color-danger);">
        <div style="font-size: 2rem; margin-bottom: var(--spacing-sm);">üî¥</div>
        <h3>{{ 'bcm.criticality.critical'|trans }}</h3>
        <p style="color: var(--color-text-muted); margin-top: var(--spacing-xs); margin-bottom: var(--spacing-md);">
            {{ 'bcm.description.critical_level'|trans }}
        </p>

        <div class="stats-grid" style="grid-template-columns: 1fr;">
            <div class="stat-item">
                <strong style="font-size: 1.5rem; color: var(--color-danger);">{{ criticalityGroups.critical|length }}</strong>
                <span>{{ 'bcm.field.assets'|trans }}</span>
            </div>
            <div class="stat-item">
                <strong>{{ avgRTOByCriticality.critical ?? 0 }}h</strong>
                <span>{{ 'bcm.field.avg_rto'|trans }}</span>
            </div>
        </div>
    </div>

    <div class="card" style="border-left: 4px solid var(--color-warning);">
        <div style="font-size: 2rem; margin-bottom: var(--spacing-sm);">üü°</div>
        <h3>{{ 'bcm.criticality.high'|trans }}</h3>
        <p style="color: var(--color-text-muted); margin-top: var(--spacing-xs); margin-bottom: var(--spacing-md);">
            {{ 'bcm.description.high_level'|trans }}
        </p>

        <div class="stats-grid" style="grid-template-columns: 1fr;">
            <div class="stat-item">
                <strong style="font-size: 1.5rem; color: var(--color-warning);">{{ criticalityGroups.high|length }}</strong>
                <span>{{ 'bcm.field.assets'|trans }}</span>
            </div>
            <div class="stat-item">
                <strong>{{ avgRTOByCriticality.high ?? 0 }}h</strong>
                <span>{{ 'bcm.field.avg_rto'|trans }}</span>
            </div>
        </div>
    </div>

    <div class="card" style="border-left: 4px solid var(--color-info);">
        <div style="font-size: 2rem; margin-bottom: var(--spacing-sm);">üîµ</div>
        <h3>{{ 'bcm.criticality.medium'|trans }}</h3>
        <p style="color: var(--color-text-muted); margin-top: var(--spacing-xs); margin-bottom: var(--spacing-md);">
            {{ 'bcm.description.medium_level'|trans }}
        </p>

        <div class="stats-grid" style="grid-template-columns: 1fr;">
            <div class="stat-item">
                <strong style="font-size: 1.5rem; color: var(--color-info);">{{ criticalityGroups.medium|length }}</strong>
                <span>{{ 'bcm.field.assets'|trans }}</span>
            </div>
            <div class="stat-item">
                <strong>{{ avgRTOByCriticality.medium ?? 0 }}h</strong>
                <span>{{ 'bcm.field.avg_rto'|trans }}</span>
            </div>
        </div>
    </div>
</div>

{# Critical Assets Table #}
<h2>{{ 'bcm.section.critical_assets_list'|trans }}</h2>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>{{ 'bcm.field.asset_name'|trans }}</th>
                <th>{{ 'bcm.field.type'|trans }}</th>
                <th>{{ 'bcm.field.criticality'|trans }}</th>
                <th>{{ 'bcm.field.rto'|trans }}</th>
                <th>{{ 'bcm.field.rpo'|trans }}</th>
                <th>{{ 'bcm.field.recovery_plan'|trans }}</th>
                <th>{{ 'bcm.field.last_tested'|trans }}</th>
                <th style="text-align: center;">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for asset in criticalAssets %}
            <tr {% if not asset.hasRecoveryPlan %}style="background-color: var(--color-warning-light);"{% endif %}>
                <td>
                    <strong>{{ asset.name }}</strong>
                    {% if not asset.hasRecoveryPlan %}
                        <br><span class="badge badge-warning" style="margin-top: var(--spacing-xs);">
                            {{ 'bcm.badge.no_recovery_plan'|trans }}
                        </span>
                    {% endif %}
                </td>
                <td>
                    <span class="badge badge-info">{{ ('bcm.type.' ~ asset.type)|trans }}</span>
                </td>
                <td>
                    {% set criticalityColors = {
                        'critical': 'danger',
                        'high': 'warning',
                        'medium': 'info',
                        'low': 'secondary'
                    } %}
                    <span class="badge badge-{{ criticalityColors[asset.criticality] ?? 'secondary' }}">
                        {{ ('bcm.criticality.' ~ asset.criticality)|trans }}
                    </span>
                </td>
                <td>
                    <strong>{{ asset.rto }}h</strong>
                    {% if asset.rto <= 1 %}
                        <span class="badge badge-danger" style="margin-left: var(--spacing-xs);">
                            {{ 'bcm.badge.immediate'|trans }}
                        </span>
                    {% endif %}
                </td>
                <td>
                    <strong>{{ asset.rpo }}h</strong>
                </td>
                <td>
                    {% if asset.hasRecoveryPlan %}
                        <span class="badge badge-success">‚úì {{ 'bcm.badge.exists'|trans }}</span>
                    {% else %}
                        <span class="badge badge-danger">‚úó {{ 'bcm.badge.missing'|trans }}</span>
                    {% endif %}
                </td>
                <td>
                    {% if asset.lastTestedDate %}
                        {{ asset.lastTestedDate|date('d.m.Y') }}
                        {% set daysSinceTest = (date().timestamp - asset.lastTestedDate.timestamp) / 86400 %}
                        {% if daysSinceTest > 180 %}
                            <br><span class="badge badge-warning" style="margin-top: var(--spacing-xs);">
                                {{ 'bcm.badge.test_overdue'|trans }}
                            </span>
                        {% endif %}
                    {% else %}
                        <span style="color: var(--color-text-muted);">{{ 'bcm.message.never_tested'|trans }}</span>
                    {% endif %}
                </td>
                <td style="text-align: center;">
                    <a href="{{ path('app_asset_show', {id: asset.id}) }}" class="btn btn-sm" style="margin-right: 0.25rem;">
                        üëÅ {{ 'common.view'|trans }}
                    </a>
                    <a href="{{ path('app_bcm_recovery_plan', {assetId: asset.id}) }}" class="btn btn-sm btn-secondary">
                        üìã {{ 'bcm.action.plan'|trans }}
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8" style="text-align: center; padding: var(--spacing-xl); color: var(--color-text-muted);">
                    <div style="font-size: 2rem; margin-bottom: var(--spacing-sm);">‚úÖ</div>
                    <p><strong>{{ 'bcm.message.no_critical_assets'|trans }}</strong></p>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Critical Business Processes #}
<h2 class="mt-4">{{ 'bcm.section.critical_processes'|trans }}</h2>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>{{ 'bcm.field.process_name'|trans }}</th>
                <th>{{ 'bcm.field.department'|trans }}</th>
                <th style="text-align: center;">{{ 'bcm.field.dependent_assets'|trans }}</th>
                <th>{{ 'bcm.field.mtd'|trans }}</th>
                <th>{{ 'bcm.field.impact_of_loss'|trans }}</th>
                <th style="text-align: center;">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for process in criticalProcesses %}
            <tr>
                <td>
                    <strong>{{ process.name }}</strong>
                    <br><small style="color: var(--color-text-muted);">{{ process.description|default('') }}</small>
                </td>
                <td>{{ process.department|default('-') }}</td>
                <td style="text-align: center;">
                    <span class="badge badge-info">{{ process.dependentAssets|length }}</span>
                </td>
                <td>
                    <strong>{{ process.mtd }}h</strong>
                    <br><small style="color: var(--color-text-muted);">
                        {{ 'bcm.field.maximum_tolerable_downtime'|trans }}
                    </small>
                </td>
                <td>
                    <span class="badge badge-danger">{{ ('bcm.impact.' ~ process.impactLevel)|trans }}</span>
                </td>
                <td style="text-align: center;">
                    <a href="{{ path('app_bcm_process_show', {id: process.id}) }}" class="btn btn-sm">
                        üëÅ {{ 'common.view'|trans }}
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6" style="text-align: center; padding: var(--spacing-xl); color: var(--color-text-muted);">
                    {{ 'bcm.message.no_critical_processes'|trans }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Action Items #}
{% if actionItems|length > 0 %}
<div class="card mt-4">
    <h2>{{ 'bcm.section.action_items'|trans }}</h2>
    <p style="color: var(--color-text-muted); margin-top: var(--spacing-sm); margin-bottom: var(--spacing-md);">
        {{ 'bcm.description.action_items'|trans }}
    </p>

    <ul style="list-style: none; padding: 0;">
        {% for item in actionItems %}
        <li style="padding: var(--spacing-md); border-bottom: 1px solid var(--color-border); display: flex; justify-content: space-between; align-items: center;">
            <div>
                <strong>{{ item.title }}</strong>
                <br><small style="color: var(--color-text-muted);">{{ item.description }}</small>
            </div>
            <div>
                {% set priorityColors = {
                    'critical': 'danger',
                    'high': 'warning',
                    'medium': 'info',
                    'low': 'secondary'
                } %}
                <span class="badge badge-{{ priorityColors[item.priority] ?? 'secondary' }}">
                    {{ ('bcm.priority.' ~ item.priority)|trans }}
                </span>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>
{% endif %}
{% endblock %}

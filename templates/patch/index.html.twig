{% extends 'base.html.twig' %}
{% trans_default_domain 'patches' %}
{% import '_macros/inheritance_badge.html.twig' as inheritance %}
{% import '_macros/cards.html.twig' as cards %}

{% block title %}{{ 'patch.title'|trans({}, 'patches') }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.patches'|trans({}, 'nav') }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-patch-check" aria-hidden="true"></i> {{ 'patch.title'|trans({}, 'patches') }}</h1>
        <a href="{{ path('app_patch_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'patch.new'|trans({}, 'patches') }}
        </a>
    </div>

    {# View Filter #}
    {% if currentTenant %}
    {% embed '_components/_card.html.twig' with {
        'class': 'mb-3'
    } %}
        {% block card_body %}
            <form method="get" action="{{ path('app_patch_index') }}" class="d-flex align-items-center gap-2">
                <label for="view-filter" class="mb-0 fw-bold">
                    <i class="bi bi-eye" aria-hidden="true"></i> {{ 'common.view'|trans({}, 'messages') }}:
                </label>
                <select class="form-select form-select-sm" style="width: auto;" id="view-filter" name="view" data-controller="ui-actions" data-action="change->ui-actions#autoSubmit">
                    <option value="own" {{ inheritanceInfo.currentView == 'own' ? 'selected' : '' }}>
                        {{ 'corporate.view.own_only'|trans({}, 'messages') }}
                    </option>
                    {% if inheritanceInfo.hasParent %}
                    <option value="inherited" {{ inheritanceInfo.currentView == 'inherited' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_inherited'|trans({}, 'messages') }}
                    </option>
                    {% endif %}
                    {% if inheritanceInfo.hasSubsidiaries %}
                    <option value="subsidiaries" {{ inheritanceInfo.currentView == 'subsidiaries' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_subsidiaries'|trans({}, 'messages') }}
                    </option>
                    {% endif %}
                </select>
                <noscript>
                    <button type="submit" class="btn btn-sm btn-secondary">{{ 'common.apply'|trans({}, 'messages') }}</button>
                </noscript>
            </form>
        {% endblock %}
    {% endembed %}
    {% endif %}

    <div class="row mb-4">
        <div class="col-md-4">
            {{ cards.kpi_card('patch.kpi.pending'|trans({}, 'patches'), pending_count, null, null, 'warning', null) }}
        </div>
        <div class="col-md-4">
            {{ cards.kpi_card('patch.kpi.deployed'|trans({}, 'patches'), deployment_stats.deployed ?? 0, null, null, 'success', 'border-success') }}
        </div>
        <div class="col-md-4">
            {% if currentTenant %}
                {% set subtitle = 'corporate.stats.breakdown'|trans({'%own%': detailedStats.own, '%inherited%': detailedStats.inherited, '%subsidiaries%': detailedStats.subsidiaries}, 'tenant') %}
                {{ cards.kpi_card('patch.kpi.total'|trans({}, 'patches'), detailedStats.total, subtitle, null, null, null) }}
            {% else %}
                {{ cards.kpi_card('patch.kpi.total'|trans({}, 'patches'), detailedStats.total, null, null, null, null) }}
            {% endif %}
        </div>
    </div>

    {% if patches|length == 0 %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'patch.empty'|trans({}, 'patches') }}
        </div>
    {% else %}
        {% embed '_components/_card.html.twig' %}
            {% block card_body %}
                {% embed '_components/_table.html.twig' with {
                    'noMargin': true
                } %}
                    {% import '_macros/inheritance_badge.html.twig' as inheritance %}
                    {% block table_head %}
                        <tr>
                            <th scope="col">{{ 'patch.field.patch_id'|trans({}, 'patches') }}</th>
                            <th scope="col">{{ 'patch.field.title'|trans({}, 'patches') }}</th>
                            <th scope="col">{{ 'patch.field.patch_type'|trans({}, 'patches') }}</th>
                            <th scope="col">{{ 'patch.field.status'|trans({}, 'patches') }}</th>
                            <th scope="col">{{ 'common.actions'|trans({}, 'messages') }}</th>
                        </tr>
                    {% endblock %}
                    {% block table_body %}
                        {% import '_macros/inheritance_badge.html.twig' as inheritance %}
                        {% for patch in patches %}
                            <tr>
                                <td><code>{{ patch.patchId }}</code></td>
                                <td>
                                    <strong>{{ patch.title }}</strong>
                                    {{ inheritance.small_badge(patch, currentTenant) }}
                                </td>
                                <td>{% include '_components/_badge.html.twig' with { variant: 'secondary', content: ('patch.type.' ~ patch.patchType)|trans({}, 'patches') } %}</td>
                                <td>{% include '_components/_badge.html.twig' with { variant: 'info', content: ('patch.status.' ~ patch.status)|trans({}, 'patches') } %}</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group" aria-label="{{ 'common.actions'|trans({}, 'messages') }}">
                                        <a href="{{ path('app_patch_show', {id: patch.id}) }}" class="btn btn-outline-primary" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                            <i class="bi bi-eye" aria-hidden="true"></i>
                                        </a>
                                        <a href="{{ path('app_patch_edit', {id: patch.id}) }}" class="btn btn-outline-secondary" aria-label="{{ 'common.edit'|trans({}, 'messages') }}">
                                            <i class="bi bi-pencil" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            {% endblock %}
        {% endembed %}
    {% endif %}
</div>
{% endblock %}

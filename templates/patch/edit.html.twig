{% extends 'base.html.twig' %}
{% trans_default_domain 'patches' %}
{% block title %}{{ 'patch.edit'|trans }} - {{ parent() }}{% endblock %}
{% block body %}
<div class="container py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">{{ 'patch.edit'|trans }}</h4>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="d-flex justify-content-between pt-3 border-top">
                    <a href="{{ path('app_patch_show', {id: patch.id}) }}" class="btn btn-outline-secondary">{{ 'common.back'|trans({}, 'messages') }}</a>
                    <button type="submit" class="btn btn-primary">{{ 'common.save'|trans({}, 'messages') }}</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

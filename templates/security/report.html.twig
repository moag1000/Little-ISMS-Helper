{% extends 'base.html.twig' %}
{% trans_default_domain 'security_reports' %}

{% block title %}{{ report_title }} - {{ 'app.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'reports.overview'|trans({}, 'reports'), url: path('app_reports_overview') },
            { label: 'security_reports.page.title'|trans({}, 'security_reports'), url: path('app_security_report') },
            { label: 'OWASP ' ~ report_version }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: report_title,
        subtitle: 'security_reports.page.subtitle'|trans({}, 'security_reports'),
        icon: 'bi-shield-lock'
    } %}

    <div class="row">
        <div class="col-lg-3 mb-4">
            {# Navigation Sidebar #}
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header">
                        <h2 class="card-title mb-0">
                            <i class="bi bi-list-ul me-2" aria-hidden="true"></i>{{ 'security_reports.nav.title'|trans({}, 'security_reports') }}
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <div class="list-group list-group-flush">
                        <a href="{{ path('app_security_report') }}" class="list-group-item list-group-item-action">
                            <i class="bi bi-shield-check me-2" aria-hidden="true"></i>{{ 'security_reports.nav.overview'|trans({}, 'security_reports') }}
                        </a>
                        <a href="{{ path('app_security_report_2025') }}" class="list-group-item list-group-item-action {% if report_version == '2025 RC1' %}active{% endif %}">
                            <i class="bi bi-file-earmark-bar-graph me-2" aria-hidden="true"></i>{{ 'security_reports.nav.owasp_2025'|trans({}, 'security_reports') }}
                        </a>
                        <a href="{{ path('app_security_report_2021') }}" class="list-group-item list-group-item-action {% if report_version == '2021' %}active{% endif %}">
                            <i class="bi bi-file-earmark-bar-graph me-2" aria-hidden="true"></i>{{ 'security_reports.nav.owasp_2021'|trans({}, 'security_reports') }}
                        </a>
                        <a href="{{ path('app_reports_overview') }}" class="list-group-item list-group-item-action">
                            <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>{{ 'security_reports.nav.all_reports'|trans({}, 'security_reports') }}
                        </a>
                    </div>
                {% endblock %}
            {% endembed %}

            {# Quick Actions #}
            {% embed '_components/_card.html.twig' with { 'class': 'mt-3' } %}
                {% block card_header %}
                    <div class="card-header">
                        <h2 class="card-title mb-0">
                            <i class="bi bi-tools me-2" aria-hidden="true"></i>{{ 'security_reports.action.title'|trans({}, 'security_reports') }}
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <div class="d-grid gap-2">
                        <button data-controller="ui-actions" data-action="ui-actions#print" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-printer me-1" aria-hidden="true"></i>{{ 'security_reports.action.print'|trans({}, 'security_reports') }}
                        </button>
                        <a href="{{ asset('docs/reports/security-audit-owasp-' ~ (report_version == '2025 RC1' ? '2025-rc1' : '2021') ~ '.md') }}" download class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-download me-1" aria-hidden="true"></i>{{ 'security_reports.action.download_md'|trans({}, 'security_reports') }}
                        </a>
                        <button class="btn btn-outline-warning btn-sm"
                                data-controller="report-regenerate"
                                data-action="click->report-regenerate#regenerate"
                                data-report-regenerate-url-value="{{ path('app_security_report_generate') }}"
                                data-report-regenerate-loading-text-value="{{ 'common.generating_reports'|trans({}, 'messages') }}"
                                data-report-regenerate-success-text-value="{{ 'common.report_regenerated'|trans({}, 'messages') }}">
                            <i class="bi bi-arrow-clockwise me-1" aria-hidden="true"></i>{{ 'security_reports.action.regenerate'|trans({}, 'security_reports') }}
                        </button>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                            {{ 'security_reports.info.regenerate_hint'|trans({}, 'security_reports')|raw }}
                        </small>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>

        <div class="col-lg-9">
            {# Report Content #}
            {% embed '_components/_card.html.twig' with { 'noPadding': true } %}
                {% block card_header %}
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="card-title mb-0">
                                <i class="bi bi-file-earmark-bar-graph me-2" aria-hidden="true"></i>{{ 'security_reports.card.full_report'|trans({}, 'security_reports') }}
                            </h2>
                            <div class="btn-group btn-group-sm" role="group" data-controller="ui-actions">
                                <button type="button" class="btn btn-outline-secondary" data-action="ui-actions#setFontSize" data-ui-actions-size-param="13px" data-ui-actions-target-param="#report-content">
                                    <i class="bi bi-zoom-out" aria-hidden="true"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" data-action="ui-actions#setFontSize" data-ui-actions-size-param="14px" data-ui-actions-target-param="#report-content">
                                    <i class="bi bi-zoom-in" aria-hidden="true"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <div id="report-content" class="markdown-content p-4" style="font-size: 13px; max-height: 80vh; overflow-y: auto;">
                        {{ report_content|raw|nl2br }}
                    </div>
                {% endblock %}
            {% endembed %}

            {# Legend #}
            {% embed '_components/_card.html.twig' with { 'class': 'mt-3' } %}
                {% block card_header %}
                    <div class="card-header"><h2 class="card-title mb-0">
                            <i class="bi bi-question-circle me-2" aria-hidden="true"></i>{{ 'security_reports.legend.title'|trans({}, 'security_reports') }}
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            {% include '_components/_badge.html.twig' with { variant: 'danger', class: 'me-2', content: 'security_reports.severity.p0'|trans({}, 'security_reports') } %}
                            <small>{{ 'security_reports.severity_desc.p0'|trans({}, 'security_reports') }}</small>
                        </div>
                        <div class="col-md-4 mb-2">
                            {% include '_components/_badge.html.twig' with { variant: 'warning', class: 'me-2', content: 'security_reports.severity.p1'|trans({}, 'security_reports') } %}
                            <small>{{ 'security_reports.severity_desc.p1'|trans({}, 'security_reports') }}</small>
                        </div>
                        <div class="col-md-4 mb-2">
                            {% include '_components/_badge.html.twig' with { variant: 'info', class: 'me-2', content: 'security_reports.severity.p2'|trans({}, 'security_reports') } %}
                            <small>{{ 'security_reports.severity_desc.p2'|trans({}, 'security_reports') }}</small>
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
</div>

<style>
.markdown-content {
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.markdown-content h1 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid #e9ecef;
    padding-bottom: 0.5rem;
}

.markdown-content h2 {
    font-size: 1.4rem;
    font-weight: 600;
    margin-top: 1.25rem;
    margin-bottom: 0.75rem;
    border-bottom: 1px solid #e9ecef;
    padding-bottom: 0.25rem;
}

.markdown-content h3 {
    font-size: 1.15rem;
    font-weight: 600;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
}

.markdown-content h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-top: 0.75rem;
    margin-bottom: 0.5rem;
}

.markdown-content p {
    margin-bottom: 0.75rem;
}

.markdown-content code {
    background-color: #f8f9fa;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.85em;
}

.markdown-content pre {
    background-color: #f8f9fa;
    padding: 0.75rem;
    border-radius: 5px;
    overflow-x: auto;
    font-size: 0.85em;
}

.markdown-content table {
    width: 100%;
    margin-bottom: 1rem;
    border-collapse: collapse;
    font-size: 0.9em;
}

.markdown-content table th,
.markdown-content table td {
    padding: 0.5rem;
    border: 1px solid #dee2e6;
}

.markdown-content table th {
    background-color: #f8f9fa;
    font-weight: 600;
}

.markdown-content ul,
.markdown-content ol {
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
}

.markdown-content blockquote {
    border-left: 4px solid #0d6efd;
    padding-left: 1rem;
    margin-left: 0;
    color: #6c757d;
    font-style: italic;
}

.markdown-content hr {
    margin: 1.5rem 0;
    border: 0;
    border-top: 2px solid #e9ecef;
}

@media print {
    .breadcrumb,
    .page-header-actions,
    .card:not(.card:has(.markdown-content)),
    .btn {
        display: none !important;
    }

    #report-content {
        max-height: none !important;
        overflow-y: visible !important;
    }
}
</style>

{% endblock %}

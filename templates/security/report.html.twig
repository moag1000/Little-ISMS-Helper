{% extends 'base.html.twig' %}
{% trans_default_domain 'security_reports' %}

{% block title %}{{ report_title }} - {{ 'app.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'reports.overview'|trans({}, 'messages')|default('Reports'), url: path('app_reports_overview') },
            { label: 'security_reports.page.title'|trans({}, 'messages'), url: path('app_security_report') },
            { label: 'OWASP ' ~ report_version }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: report_title,
        subtitle: 'security_reports.page.subtitle'|trans({}, 'messages'),
        icon: 'bi-shield-lock'
    } %}

    <div class="row">
        <div class="col-lg-3 mb-4">
            {# Navigation Sidebar #}
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi-list-ul me-2"></i>{{ 'security_reports.nav.title'|trans({}, 'messages') }}
                    </h3>
                </div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_security_report') }}" class="list-group-item list-group-item-action">
                        <i class="bi-shield-check me-2"></i>{{ 'security_reports.nav.overview'|trans({}, 'messages') }}
                    </a>
                    <a href="{{ path('app_security_report_2025') }}" class="list-group-item list-group-item-action {% if report_version == '2025 RC1' %}active{% endif %}">
                        <i class="bi-file-earmark-bar-graph me-2"></i>{{ 'security_reports.nav.owasp_2025'|trans({}, 'messages') }}
                    </a>
                    <a href="{{ path('app_security_report_2021') }}" class="list-group-item list-group-item-action {% if report_version == '2021' %}active{% endif %}">
                        <i class="bi-file-earmark-bar-graph me-2"></i>{{ 'security_reports.nav.owasp_2021'|trans({}, 'messages') }}
                    </a>
                    <a href="{{ path('app_reports_overview') }}" class="list-group-item list-group-item-action">
                        <i class="bi-arrow-left me-2"></i>{{ 'security_reports.nav.all_reports'|trans({}, 'messages') }}
                    </a>
                </div>
            </div>

            {# Quick Actions #}
            <div class="card mt-3">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi-tools me-2"></i>{{ 'security_reports.action.title'|trans({}, 'messages') }}
                    </h3>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button onclick="window.print()" class="btn btn-outline-primary btn-sm">
                            <i class="bi-printer me-1"></i>{{ 'security_reports.action.print'|trans({}, 'messages') }}
                        </button>
                        <a href="{{ asset('docs/reports/security-audit-owasp-' ~ (report_version == '2025 RC1' ? '2025-rc1' : '2021') ~ '.md') }}" download class="btn btn-outline-secondary btn-sm">
                            <i class="bi-download me-1"></i>{{ 'security_reports.action.download_md'|trans({}, 'messages') }}
                        </a>
                        <button onclick="regenerateReport()" class="btn btn-outline-warning btn-sm">
                            <i class="bi-arrow-clockwise me-1"></i>{{ 'security_reports.action.regenerate'|trans({}, 'messages') }}
                        </button>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi-info-circle me-1"></i>
                            {{ 'security_reports.info.regenerate_hint'|trans({}, 'messages')|raw }}
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            {# Report Content #}
            <div class="card">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">
                            <i class="bi-file-earmark-bar-graph me-2"></i>{{ 'security_reports.card.full_report'|trans({}, 'messages') }}
                        </h3>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('report-content').style.fontSize='13px'">
                                <i class="bi bi-zoom-out"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="document.getElementById('report-content').style.fontSize='14px'">
                                <i class="bi bi-zoom-in"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div id="report-content" class="markdown-content p-4" style="font-size: 13px; max-height: 80vh; overflow-y: auto;">
                        {{ report_content|raw|nl2br }}
                    </div>
                </div>
            </div>

            {# Legend #}
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi-question-circle me-2"></i>{{ 'security_reports.legend.title'|trans({}, 'messages') }}
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <span class="badge bg-danger me-2">{{ 'security_reports.severity.p0'|trans({}, 'messages') }}</span>
                            <small>{{ 'security_reports.severity_desc.p0'|trans({}, 'messages') }}</small>
                        </div>
                        <div class="col-md-4 mb-2">
                            <span class="badge bg-warning me-2">{{ 'security_reports.severity.p1'|trans({}, 'messages') }}</span>
                            <small>{{ 'security_reports.severity_desc.p1'|trans({}, 'messages') }}</small>
                        </div>
                        <div class="col-md-4 mb-2">
                            <span class="badge bg-info me-2">{{ 'security_reports.severity.p2'|trans({}, 'messages') }}</span>
                            <small>{{ 'security_reports.severity_desc.p2'|trans({}, 'messages') }}</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.markdown-content {
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.markdown-content h1 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid #e9ecef;
    padding-bottom: 0.5rem;
}

.markdown-content h2 {
    font-size: 1.4rem;
    font-weight: 600;
    margin-top: 1.25rem;
    margin-bottom: 0.75rem;
    border-bottom: 1px solid #e9ecef;
    padding-bottom: 0.25rem;
}

.markdown-content h3 {
    font-size: 1.15rem;
    font-weight: 600;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
}

.markdown-content h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-top: 0.75rem;
    margin-bottom: 0.5rem;
}

.markdown-content p {
    margin-bottom: 0.75rem;
}

.markdown-content code {
    background-color: #f8f9fa;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.85em;
}

.markdown-content pre {
    background-color: #f8f9fa;
    padding: 0.75rem;
    border-radius: 5px;
    overflow-x: auto;
    font-size: 0.85em;
}

.markdown-content table {
    width: 100%;
    margin-bottom: 1rem;
    border-collapse: collapse;
    font-size: 0.9em;
}

.markdown-content table th,
.markdown-content table td {
    padding: 0.5rem;
    border: 1px solid #dee2e6;
}

.markdown-content table th {
    background-color: #f8f9fa;
    font-weight: 600;
}

.markdown-content ul,
.markdown-content ol {
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
}

.markdown-content blockquote {
    border-left: 4px solid #0d6efd;
    padding-left: 1rem;
    margin-left: 0;
    color: #6c757d;
    font-style: italic;
}

.markdown-content hr {
    margin: 1.5rem 0;
    border: 0;
    border-top: 2px solid #e9ecef;
}

@media print {
    .breadcrumb,
    .page-header-actions,
    .card:not(.card:has(.markdown-content)),
    .btn {
        display: none !important;
    }

    #report-content {
        max-height: none !important;
        overflow-y: visible !important;
    }
}
</style>

<script>
async function regenerateReport() {
    const button = event.target.closest('button');
    const originalText = button.innerHTML;

    // Disable button and show loading state
    button.disabled = true;
    button.innerHTML = '<i class="bi-arrow-clockwise spinner-border spinner-border-sm me-1"></i>Generiere Reports...';

    try {
        const response = await fetch('{{ path('app_security_report_generate') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        });

        const data = await response.json();

        if (data.success) {
            // Show success message
            showToast('success', 'Security Reports erfolgreich generiert!');

            // Reload page after short delay
            setTimeout(() => {
                window.location.reload();
            }, 1500);
        } else {
            showToast('error', data.message || 'Fehler beim Generieren der Reports');
            button.disabled = false;
            button.innerHTML = originalText;
        }
    } catch (error) {
        console.error('Error generating reports:', error);
        showToast('error', 'Netzwerkfehler beim Generieren der Reports');
        button.disabled = false;
        button.innerHTML = originalText;
    }
}

function showToast(type, message) {
    // Create toast element
    const toast = document.createElement('div');
    toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed top-0 end-0 m-3`;
    toast.style.zIndex = '9999';
    toast.innerHTML = `
        <i class="bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
        ${message}
    `;

    document.body.appendChild(toast);

    // Remove after 5 seconds
    setTimeout(() => {
        toast.remove();
    }, 5000);
}
</script>
{% endblock %}

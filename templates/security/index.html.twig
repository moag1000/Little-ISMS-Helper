{% extends 'base.html.twig' %}

{% block title %}Security Reports{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'Über', url: path('app_reports_overview') },
            { label: 'Security Reports' }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'Security Audit Reports',
        subtitle: 'OWASP Top 10 Compliance Analysis',
        icon: 'bi-shield-lock'
    } %}

    <div class="row">
        <div class="col-lg-3 mb-4">
            {# Navigation Sidebar #}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi-list-ul me-2"></i>Navigation
                    </h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_security_report') }}" class="list-group-item list-group-item-action active">
                        <i class="bi-shield-check me-2"></i>Übersicht
                    </a>
                    <a href="{{ path('app_security_report_2025') }}" class="list-group-item list-group-item-action {% if not stats.owasp_2025.exists %}disabled{% endif %}">
                        <i class="bi-file-earmark-bar-graph me-2"></i>OWASP 2025 RC1
                    </a>
                    <a href="{{ path('app_security_report_2021') }}" class="list-group-item list-group-item-action {% if not stats.owasp_2021.exists %}disabled{% endif %}">
                        <i class="bi-file-earmark-bar-graph me-2"></i>OWASP 2021
                    </a>
                    <a href="{{ path('app_reports_overview') }}" class="list-group-item list-group-item-action">
                        <i class="bi-arrow-left me-2"></i>Alle Reports
                    </a>
                </div>
            </div>

            {# Quick Actions #}
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi-tools me-2"></i>Aktionen
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button onclick="regenerateReport()" class="btn btn-outline-warning btn-sm">
                            <i class="bi-arrow-clockwise me-1"></i>Reports neu generieren
                        </button>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi-info-circle me-1"></i>
                            Führen Sie <code>php scripts/generate-security-audit.php</code> aus, um die Reports zu aktualisieren
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            {# OWASP 2025 RC1 Report Card #}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi-shield-lock me-2"></i>OWASP Top 10:2025 RC1 (Primary)
                    </h5>
                </div>
                <div class="card-body">
                    {% if stats.owasp_2025.exists %}
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h2 class="mb-0 {% if stats.owasp_2025.score >= 9.0 %}text-success{% elseif stats.owasp_2025.score >= 8.0 %}text-primary{% elseif stats.owasp_2025.score >= 7.0 %}text-warning{% else %}text-danger{% endif %}">
                                        {{ stats.owasp_2025.score }}/10
                                    </h2>
                                    <small class="text-muted">Gesamtscore</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="mb-0">
                                        <span class="badge {% if stats.owasp_2025.status == 'EXCELLENT' %}bg-success{% elseif stats.owasp_2025.status == 'GUT' %}bg-primary{% elseif stats.owasp_2025.status == 'BEFRIEDIGEND' %}bg-warning{% else %}bg-danger{% endif %}">
                                            {{ stats.owasp_2025.status }}
                                        </span>
                                    </h3>
                                    <small class="text-muted">Status</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-around">
                                    <div class="text-center">
                                        <h4 class="mb-0 {% if stats.owasp_2025.critical_count > 0 %}text-danger{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2025.critical_count }}
                                        </h4>
                                        <small class="text-muted">P0-URGENT</small>
                                    </div>
                                    <div class="text-center">
                                        <h4 class="mb-0 {% if stats.owasp_2025.high_count > 0 %}text-warning{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2025.high_count }}
                                        </h4>
                                        <small class="text-muted">P1-HIGH</small>
                                    </div>
                                    <div class="text-center">
                                        <h4 class="mb-0 text-info">
                                            {{ stats.owasp_2025.medium_count }}
                                        </h4>
                                        <small class="text-muted">P2-MEDIUM</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi-calendar me-1"></i>Generiert am: {{ stats.owasp_2025.generated_at }}
                            </small>
                            <a href="{{ path('app_security_report_2025') }}" class="btn btn-primary btn-sm">
                                <i class="bi-file-earmark-text me-1"></i>Report anzeigen
                            </a>
                        </div>
                    {% else %}
                        <div class="alert alert-warning mb-0">
                            <i class="bi-exclamation-triangle me-2"></i>
                            OWASP 2025 RC1 Report wurde noch nicht generiert. Bitte führen Sie das Generierungsskript aus.
                        </div>
                    {% endif %}
                </div>
            </div>

            {# OWASP 2021 Report Card #}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi-shield-check me-2"></i>OWASP Top 10:2021 (Legacy)
                    </h5>
                </div>
                <div class="card-body">
                    {% if stats.owasp_2021.exists %}
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h2 class="mb-0 {% if stats.owasp_2021.score >= 9.0 %}text-success{% elseif stats.owasp_2021.score >= 8.0 %}text-primary{% elseif stats.owasp_2021.score >= 7.0 %}text-warning{% else %}text-danger{% endif %}">
                                        {{ stats.owasp_2021.score }}/10
                                    </h2>
                                    <small class="text-muted">Gesamtscore</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="mb-0">
                                        <span class="badge {% if stats.owasp_2021.status == 'EXCELLENT' %}bg-success{% elseif stats.owasp_2021.status == 'GUT' %}bg-primary{% elseif stats.owasp_2021.status == 'BEFRIEDIGEND' %}bg-warning{% else %}bg-danger{% endif %}">
                                            {{ stats.owasp_2021.status }}
                                        </span>
                                    </h3>
                                    <small class="text-muted">Status</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-around">
                                    <div class="text-center">
                                        <h4 class="mb-0 {% if stats.owasp_2021.critical_count > 0 %}text-danger{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2021.critical_count }}
                                        </h4>
                                        <small class="text-muted">P0-URGENT</small>
                                    </div>
                                    <div class="text-center">
                                        <h4 class="mb-0 {% if stats.owasp_2021.high_count > 0 %}text-warning{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2021.high_count }}
                                        </h4>
                                        <small class="text-muted">P1-HIGH</small>
                                    </div>
                                    <div class="text-center">
                                        <h4 class="mb-0 text-info">
                                            {{ stats.owasp_2021.medium_count }}
                                        </h4>
                                        <small class="text-muted">P2-MEDIUM</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi-calendar me-1"></i>Generiert am: {{ stats.owasp_2021.generated_at }}
                            </small>
                            <a href="{{ path('app_security_report_2021') }}" class="btn btn-primary btn-sm">
                                <i class="bi-file-earmark-text me-1"></i>Report anzeigen
                            </a>
                        </div>
                    {% else %}
                        <div class="alert alert-warning mb-0">
                            <i class="bi-exclamation-triangle me-2"></i>
                            OWASP 2021 Report wurde noch nicht generiert. Bitte führen Sie das Generierungsskript aus.
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Information Card #}
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi-info-circle me-2"></i>Über diese Reports
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        Die Security Audit Reports basieren auf den <strong>OWASP Top 10</strong> Security Risks und analysieren die Anwendung automatisch auf potenzielle Sicherheitslücken.
                    </p>
                    <ul class="mb-0">
                        <li><strong>OWASP 2025 RC1:</strong> Neueste Version mit aktualisierten Kategorien (z.B. "Mishandling of Exceptional Conditions")</li>
                        <li><strong>OWASP 2021:</strong> Stabile Version für Compliance-Nachweise</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function regenerateReport() {
    alert('Bitte führen Sie "php scripts/generate-security-audit.php" im Terminal aus, um die Reports neu zu generieren.');
}
</script>
{% endblock %}

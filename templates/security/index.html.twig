{% extends 'base.html.twig' %}
{% trans_default_domain 'security_reports' %}

{% block title %}{{ 'security_reports.page.title'|trans({}, 'reports') }} - {{ 'app.title'|trans({}, 'security_reports') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'reports.overview'|trans({}, 'reports'), url: path('app_reports_overview') },
            { label: 'security_reports.page.title'|trans({}, 'security_reports') }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'security_reports.page.title'|trans({}, 'security_reports'),
        subtitle: 'security_reports.page.subtitle'|trans({}, 'security_reports'),
        icon: 'bi-shield-lock'
    } %}

    <div class="row">
        <div class="col-lg-3 mb-4">
            {# Navigation Sidebar #}
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-list-ul me-2" aria-hidden="true"></i>{{ 'security_reports.nav.title'|trans({}, 'security_reports') }}
                    </h2>
                </div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_security_report') }}" class="list-group-item list-group-item-action active">
                        <i class="bi bi-shield-check me-2" aria-hidden="true"></i>{{ 'security_reports.nav.overview'|trans({}, 'security_reports') }}
                    </a>
                    <a href="{{ path('app_security_report_2025') }}" class="list-group-item list-group-item-action {% if not stats.owasp_2025.exists %}disabled{% endif %}">
                        <i class="bi bi-file-earmark-bar-graph me-2" aria-hidden="true"></i>{{ 'security_reports.nav.owasp_2025'|trans({}, 'security_reports') }}
                    </a>
                    <a href="{{ path('app_security_report_2021') }}" class="list-group-item list-group-item-action {% if not stats.owasp_2021.exists %}disabled{% endif %}">
                        <i class="bi bi-file-earmark-bar-graph me-2" aria-hidden="true"></i>{{ 'security_reports.nav.owasp_2021'|trans({}, 'security_reports') }}
                    </a>
                    <a href="{{ path('app_reports_overview') }}" class="list-group-item list-group-item-action">
                        <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>{{ 'security_reports.nav.all_reports'|trans({}, 'security_reports') }}
                    </a>
                </div>
            </div>

            {# Quick Actions #}
            <div class="card mt-3">
                <div class="card-header">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-tools me-2" aria-hidden="true"></i>{{ 'security_reports.action.title'|trans({}, 'security_reports') }}
                    </h2>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-warning btn-sm"
                                data-controller="report-regenerate"
                                data-action="click->report-regenerate#regenerate"
                                data-report-regenerate-url-value="{{ path('app_security_report_generate') }}"
                                data-report-regenerate-loading-text-value="{{ 'common.generating_reports'|trans({}, 'messages') }}"
                                data-report-regenerate-success-text-value="{{ 'common.report_regenerated'|trans({}, 'messages') }}">
                            <i class="bi bi-arrow-clockwise me-1" aria-hidden="true"></i>{{ 'security_reports.action.regenerate'|trans({}, 'security_reports') }}
                        </button>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                            {{ 'security_reports.info.regenerate_hint'|trans({}, 'security_reports')|raw }}
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            {# OWASP 2025 RC1 Report Card #}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-shield-lock me-2" aria-hidden="true"></i>{{ 'security_reports.card.owasp_2025_title'|trans({}, 'security_reports') }}
                    </h2>
                </div>
                <div class="card-body">
                    {% if stats.owasp_2025.exists %}
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <div class="h2 mb-0 {% if stats.owasp_2025.score >= 9.0 %}text-success{% elseif stats.owasp_2025.score >= 8.0 %}text-primary{% elseif stats.owasp_2025.score >= 7.0 %}text-warning{% else %}text-danger{% endif %}">
                                        {{ stats.owasp_2025.score }}/10
                                    </div>
                                    <small class="text-muted">{{ 'security_reports.label.overall_score'|trans({}, 'security_reports') }}</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <div class="h3 mb-0">
                                        <span class="badge {% if stats.owasp_2025.status == 'EXCELLENT' %}bg-success{% elseif stats.owasp_2025.status == 'GUT' %}bg-primary{% elseif stats.owasp_2025.status == 'BEFRIEDIGEND' %}bg-warning{% else %}bg-danger{% endif %}">
                                            {{ stats.owasp_2025.status }}
                                        </span>
                                    </div>
                                    <small class="text-muted">{{ 'security_reports.label.status'|trans({}, 'security_reports') }}</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-around">
                                    <div class="text-center">
                                        <div class="h4 mb-0 {% if stats.owasp_2025.critical_count > 0 %}text-danger{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2025.critical_count }}
                                        </div>
                                        <small class="text-muted">{{ 'security_reports.severity.p0'|trans({}, 'security_reports') }}</small>
                                    </div>
                                    <div class="text-center">
                                        <div class="h4 mb-0 {% if stats.owasp_2025.high_count > 0 %}text-warning{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2025.high_count }}
                                        </div>
                                        <small class="text-muted">{{ 'security_reports.severity.p1'|trans({}, 'security_reports') }}</small>
                                    </div>
                                    <div class="text-center">
                                        <div class="h4 mb-0 text-info">
                                            {{ stats.owasp_2025.medium_count }}
                                        </div>
                                        <small class="text-muted">{{ 'security_reports.severity.p2'|trans({}, 'security_reports') }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1" aria-hidden="true"></i>{{ 'security_reports.label.generated_at'|trans({}, 'security_reports') }}: {{ stats.owasp_2025.generated_at }}
                            </small>
                            <a href="{{ path('app_security_report_2025') }}" class="btn btn-primary btn-sm">
                                <i class="bi bi-file-earmark-text me-1" aria-hidden="true"></i>{{ 'security_reports.label.view_report'|trans({}, 'security_reports') }}
                            </a>
                            </div>
                    {% else %}
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                            {{ 'security_reports.info.regenerate_hint'|trans({}, 'security_reports')|raw }}
                        </div>
                    {% endif %}
                </div>
            </div>

            {# OWASP 2021 Report Card #}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-shield-check me-2" aria-hidden="true"></i>{{ 'security_reports.nav.owasp_2021'|trans({}, 'security_reports') }} (Legacy)
                    </h2>
                </div>
                <div class="card-body">
                    {% if stats.owasp_2021.exists %}
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <div class="h2 mb-0 {% if stats.owasp_2021.score >= 9.0 %}text-success{% elseif stats.owasp_2021.score >= 8.0 %}text-primary{% elseif stats.owasp_2021.score >= 7.0 %}text-warning{% else %}text-danger{% endif %}">
                                        {{ stats.owasp_2021.score }}/10
                                    </div>
                                    <small class="text-muted">{{ 'security_reports.label.overall_score'|trans({}, 'security_reports') }}</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <div class="h3 mb-0">
                                        <span class="badge {% if stats.owasp_2021.status == 'EXCELLENT' %}bg-success{% elseif stats.owasp_2021.status == 'GUT' %}bg-primary{% elseif stats.owasp_2021.status == 'BEFRIEDIGEND' %}bg-warning{% else %}bg-danger{% endif %}">
                                            {{ stats.owasp_2021.status }}
                                        </span>
                                    </div>
                                    <small class="text-muted">{{ 'security_reports.label.status'|trans({}, 'security_reports') }}</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-around">
                                    <div class="text-center">
                                        <div class="h4 mb-0 {% if stats.owasp_2021.critical_count > 0 %}text-danger{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2021.critical_count }}
                                        </div>
                                        <small class="text-muted">{{ 'security_reports.severity.p0'|trans({}, 'security_reports') }}</small>
                                    </div>
                                    <div class="text-center">
                                        <div class="h4 mb-0 {% if stats.owasp_2021.high_count > 0 %}text-warning{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2021.high_count }}
                                        </div>
                                        <small class="text-muted">{{ 'security_reports.severity.p1'|trans({}, 'security_reports') }}</small>
                                    </div>
                                    <div class="text-center">
                                        <div class="h4 mb-0 text-info">
                                            {{ stats.owasp_2021.medium_count }}
                                        </div>
                                        <small class="text-muted">{{ 'security_reports.severity.p2'|trans({}, 'security_reports') }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-calendar me-1" aria-hidden="true"></i>{{ 'security_reports.label.generated_at'|trans({}, 'security_reports') }}: {{ stats.owasp_2021.generated_at }}
                            </small>
                            <a href="{{ path('app_security_report_2021') }}" class="btn btn-primary btn-sm">
                                <i class="bi bi-file-earmark-text me-1" aria-hidden="true"></i>{{ 'security_reports.label.view_report'|trans({}, 'security_reports') }}
                            </a>
                        </div>
                    {% else %}
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                            {{ 'security_reports.info.regenerate_hint'|trans({}, 'security_reports')|raw }}
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Information Card #}
            <div class="card">
                <div class="card-header"><h2 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2" aria-hidden="true"></i>Über diese Reports
                    </h2>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        Die Security Audit Reports basieren auf den <strong>OWASP Top 10</strong> Security Risks und analysieren die Anwendung automatisch auf potenzielle Sicherheitslücken.
                    </p>
                    <ul class="mb-0">
                        <li><strong>OWASP 2025 RC1:</strong> Neueste Version mit aktualisierten Kategorien (z.B. "Mishandling of Exceptional Conditions")</li>
                        <li><strong>OWASP 2021:</strong> Stabile Version für Compliance-Nachweise</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

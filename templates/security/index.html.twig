{% extends 'base.html.twig' %}
{% trans_default_domain 'security_reports' %}

{% block title %}{{ 'security_reports.page.title'|trans({}, 'messages') }} - {{ 'app.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    {# Breadcrumb Navigation #}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'reports.overview'|trans({}, 'messages')|default('Reports'), url: path('app_reports_overview') },
            { label: 'security_reports.page.title'|trans({}, 'messages') }
        ]
    } %}

    {# Page Header #}
    {% include '_components/_page_header.html.twig' with {
        title: 'security_reports.page.title'|trans({}, 'messages'),
        subtitle: 'security_reports.page.subtitle'|trans({}, 'messages'),
        icon: 'bi-shield-lock'
    } %}

    <div class="row">
        <div class="col-lg-3 mb-4">
            {# Navigation Sidebar #}
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi-list-ul me-2"></i>{{ 'security_reports.nav.title'|trans({}, 'messages') }}
                    </h3>
                </div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_security_report') }}" class="list-group-item list-group-item-action active">
                        <i class="bi-shield-check me-2"></i>{{ 'security_reports.nav.overview'|trans({}, 'messages') }}
                    </a>
                    <a href="{{ path('app_security_report_2025') }}" class="list-group-item list-group-item-action {% if not stats.owasp_2025.exists %}disabled{% endif %}">
                        <i class="bi-file-earmark-bar-graph me-2"></i>{{ 'security_reports.nav.owasp_2025'|trans({}, 'messages') }}
                    </a>
                    <a href="{{ path('app_security_report_2021') }}" class="list-group-item list-group-item-action {% if not stats.owasp_2021.exists %}disabled{% endif %}">
                        <i class="bi-file-earmark-bar-graph me-2"></i>{{ 'security_reports.nav.owasp_2021'|trans({}, 'messages') }}
                    </a>
                    <a href="{{ path('app_reports_overview') }}" class="list-group-item list-group-item-action">
                        <i class="bi-arrow-left me-2"></i>{{ 'security_reports.nav.all_reports'|trans({}, 'messages') }}
                    </a>
                </div>
            </div>

            {# Quick Actions #}
            <div class="card mt-3">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi-tools me-2"></i>{{ 'security_reports.action.title'|trans({}, 'messages') }}
                    </h3>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button onclick="regenerateReport()" class="btn btn-outline-warning btn-sm">
                            <i class="bi-arrow-clockwise me-1"></i>{{ 'security_reports.action.regenerate'|trans({}, 'messages') }}
                        </button>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi-info-circle me-1"></i>
                            {{ 'security_reports.info.regenerate_hint'|trans({}, 'messages')|raw }}
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            {# OWASP 2025 RC1 Report Card #}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h3 class="card-title mb-0">
                        <i class="bi-shield-lock me-2"></i>{{ 'security_reports.card.owasp_2025_title'|trans({}, 'messages') }}
                    </h3>
                </div>
                <div class="card-body">
                    {% if stats.owasp_2025.exists %}
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h2 class="mb-0 {% if stats.owasp_2025.score >= 9.0 %}text-success{% elseif stats.owasp_2025.score >= 8.0 %}text-primary{% elseif stats.owasp_2025.score >= 7.0 %}text-warning{% else %}text-danger{% endif %}">
                                        {{ stats.owasp_2025.score }}/10
                                    </h2>
                                    <small class="text-muted">{{ 'security_reports.label.overall_score'|trans({}, 'messages') }}</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="mb-0">
                                        <span class="badge {% if stats.owasp_2025.status == 'EXCELLENT' %}bg-success{% elseif stats.owasp_2025.status == 'GUT' %}bg-primary{% elseif stats.owasp_2025.status == 'BEFRIEDIGEND' %}bg-warning{% else %}bg-danger{% endif %}">
                                            {{ stats.owasp_2025.status }}
                                        </span>
                                    </h3>
                                    <small class="text-muted">{{ 'security_reports.label.status'|trans({}, 'messages') }}</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-around">
                                    <div class="text-center">
                                        <h4 class="mb-0 {% if stats.owasp_2025.critical_count > 0 %}text-danger{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2025.critical_count }}
                                        </h4>
                                        <small class="text-muted">{{ 'security_reports.severity.p0'|trans({}, 'messages') }}</small>
                                    </div>
                                    <div class="text-center">
                                        <h4 class="mb-0 {% if stats.owasp_2025.high_count > 0 %}text-warning{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2025.high_count }}
                                        </h4>
                                        <small class="text-muted">{{ 'security_reports.severity.p1'|trans({}, 'messages') }}</small>
                                    </div>
                                    <div class="text-center">
                                        <h4 class="mb-0 text-info">
                                            {{ stats.owasp_2025.medium_count }}
                                        </h4>
                                        <small class="text-muted">{{ 'security_reports.severity.p2'|trans({}, 'messages') }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi-calendar me-1"></i>{{ 'security_reports.label.generated_at'|trans({}, 'messages') }}: {{ stats.owasp_2025.generated_at }}
                            </small>
                            <a href="{{ path('app_security_report_2025') }}" class="btn btn-primary btn-sm">
                                <i class="bi-file-earmark-text me-1"></i>{{ 'security_reports.label.view_report'|trans({}, 'messages') }}
                            </a>
                            </div>
                    {% else %}
                        <div class="alert alert-warning mb-0">
                            <i class="bi-exclamation-triangle me-2"></i>
                            {{ 'security_reports.info.regenerate_hint'|trans({}, 'messages')|raw }}
                        </div>
                    {% endif %}
                </div>
            </div>

            {# OWASP 2021 Report Card #}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h3 class="card-title mb-0">
                        <i class="bi-shield-check me-2"></i>{{ 'security_reports.nav.owasp_2021'|trans({}, 'messages') }} (Legacy)
                    </h3>
                </div>
                <div class="card-body">
                    {% if stats.owasp_2021.exists %}
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h2 class="mb-0 {% if stats.owasp_2021.score >= 9.0 %}text-success{% elseif stats.owasp_2021.score >= 8.0 %}text-primary{% elseif stats.owasp_2021.score >= 7.0 %}text-warning{% else %}text-danger{% endif %}">
                                        {{ stats.owasp_2021.score }}/10
                                    </h2>
                                    <small class="text-muted">{{ 'security_reports.label.overall_score'|trans({}, 'messages') }}</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="mb-0">
                                        <span class="badge {% if stats.owasp_2021.status == 'EXCELLENT' %}bg-success{% elseif stats.owasp_2021.status == 'GUT' %}bg-primary{% elseif stats.owasp_2021.status == 'BEFRIEDIGEND' %}bg-warning{% else %}bg-danger{% endif %}">
                                            {{ stats.owasp_2021.status }}
                                        </span>
                                    </h3>
                                    <small class="text-muted">{{ 'security_reports.label.status'|trans({}, 'messages') }}</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-around">
                                    <div class="text-center">
                                        <h4 class="mb-0 {% if stats.owasp_2021.critical_count > 0 %}text-danger{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2021.critical_count }}
                                        </h4>
                                        <small class="text-muted">{{ 'security_reports.severity.p0'|trans({}, 'messages') }}</small>
                                    </div>
                                    <div class="text-center">
                                        <h4 class="mb-0 {% if stats.owasp_2021.high_count > 0 %}text-warning{% else %}text-success{% endif %}">
                                            {{ stats.owasp_2021.high_count }}
                                        </h4>
                                        <small class="text-muted">{{ 'security_reports.severity.p1'|trans({}, 'messages') }}</small>
                                    </div>
                                    <div class="text-center">
                                        <h4 class="mb-0 text-info">
                                            {{ stats.owasp_2021.medium_count }}
                                        </h4>
                                        <small class="text-muted">{{ 'security_reports.severity.p2'|trans({}, 'messages') }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi-calendar me-1"></i>{{ 'security_reports.label.generated_at'|trans({}, 'messages') }}: {{ stats.owasp_2021.generated_at }}
                            </small>
                            <a href="{{ path('app_security_report_2021') }}" class="btn btn-primary btn-sm">
                                <i class="bi-file-earmark-text me-1"></i>{{ 'security_reports.label.view_report'|trans({}, 'messages') }}
                            </a>
                        </div>
                    {% else %}
                        <div class="alert alert-warning mb-0">
                            <i class="bi-exclamation-triangle me-2"></i>
                            {{ 'security_reports.info.regenerate_hint'|trans({}, 'messages')|raw }}
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Information Card #}
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="bi-info-circle me-2"></i>Über diese Reports
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        Die Security Audit Reports basieren auf den <strong>OWASP Top 10</strong> Security Risks und analysieren die Anwendung automatisch auf potenzielle Sicherheitslücken.
                    </p>
                    <ul class="mb-0">
                        <li><strong>OWASP 2025 RC1:</strong> Neueste Version mit aktualisierten Kategorien (z.B. "Mishandling of Exceptional Conditions")</li>
                        <li><strong>OWASP 2021:</strong> Stabile Version für Compliance-Nachweise</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
async function regenerateReport() {
    const button = event.target.closest('button');
    const originalText = button.innerHTML;

    // Disable button and show loading state
    button.disabled = true;
    button.innerHTML = '<i class="bi-arrow-clockwise spinner-border spinner-border-sm me-1"></i>Generiere Reports...';

    try {
        const response = await fetch('{{ path('app_security_report_generate') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        });

        const data = await response.json();

        if (data.success) {
            // Show success message
            showToast('success', 'Security Reports erfolgreich generiert!');

            // Reload page after short delay
            setTimeout(() => {
                window.location.reload();
            }, 1500);
        } else {
            showToast('error', data.message || 'Fehler beim Generieren der Reports');
            button.disabled = false;
            button.innerHTML = originalText;
        }
    } catch (error) {
        console.error('Error generating reports:', error);
        showToast('error', 'Netzwerkfehler beim Generieren der Reports');
        button.disabled = false;
        button.innerHTML = originalText;
    }
}

function showToast(type, message) {
    // Create toast element
    const toast = document.createElement('div');
    toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} position-fixed top-0 end-0 m-3`;
    toast.style.zIndex = '9999';
    toast.innerHTML = `
        <i class="bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
        ${message}
    `;

    document.body.appendChild(toast);

    // Remove after 5 seconds
    setTimeout(() => {
        toast.remove();
    }, 5000);
}
</script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ supplier.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>{{ supplier.name }}</h1>
        <div class="actions">
            <a href="{{ path('app_supplier_edit', {id: supplier.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('app_supplier_index') }}" class="btn btn-secondary">Back to List</a>
            {% if is_granted('ROLE_ADMIN') %}
                <form method="post" action="{{ path('app_supplier_delete', {id: supplier.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this supplier?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier.id) }}">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            {% endif %}
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>Supplier Details</h2>
            <div>
                <span class="badge badge-{{ supplier.criticality }}">{{ supplier.criticality|upper }}</span>
                <span class="badge badge-{{ supplier.status }}">{{ supplier.status }}</span>
            </div>
        </div>
        <div class="card-content">
            {% set riskScore = supplier.calculateRiskScore() %}
            <div class="alert {{ riskScore > 70 ? 'alert-danger' : (riskScore > 50 ? 'alert-warning' : 'alert-info') }}">
                <strong>Risk Score: {{ riskScore }}</strong>
                - {{ riskScore > 70 ? 'Critical Risk - Immediate Action Required' : (riskScore > 50 ? 'High Risk - Review Required' : 'Acceptable Risk Level') }}
            </div>

            <div class="detail-grid">
                <div class="detail-item">
                    <span class="label">Service Provided:</span>
                    <span class="value">{{ supplier.serviceProvided }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Criticality:</span>
                    <span class="value">{{ supplier.criticality|upper }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Status:</span>
                    <span class="value">{{ supplier.status }}</span>
                </div>
            </div>

            {% if supplier.description %}
                <div class="detail-section">
                    <h3>Description</h3>
                    <p>{{ supplier.description }}</p>
                </div>
            {% endif %}

            <div class="detail-section">
                <h3>Contact Information</h3>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">Contact Person:</span>
                        <span class="value">{{ supplier.contactPerson ?? 'N/A' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Email:</span>
                        <span class="value">{{ supplier.email ?? 'N/A' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Phone:</span>
                        <span class="value">{{ supplier.phone ?? 'N/A' }}</span>
                    </div>
                </div>
                {% if supplier.address %}
                    <div class="detail-item">
                        <span class="label">Address:</span>
                        <span class="value">{{ supplier.address }}</span>
                    </div>
                {% endif %}
            </div>

            <div class="detail-section">
                <h3>Security Assessment</h3>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">Security Score:</span>
                        <span class="value">{{ supplier.securityScore ?? 'Not assessed' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Last Assessment:</span>
                        <span class="value">{{ supplier.lastSecurityAssessment ? supplier.lastSecurityAssessment|date('Y-m-d') : 'Never' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Next Assessment:</span>
                        <span class="value {{ supplier.isAssessmentOverdue() ? 'text-danger' : '' }}">
                            {{ supplier.nextAssessmentDate ? supplier.nextAssessmentDate|date('Y-m-d') : 'Not scheduled' }}
                            {{ supplier.isAssessmentOverdue() ? '⚠️ OVERDUE' : '' }}
                        </span>
                    </div>
                </div>

                {% if supplier.assessmentFindings %}
                    <div class="detail-item">
                        <span class="label">Assessment Findings:</span>
                        <span class="value">{{ supplier.assessmentFindings }}</span>
                    </div>
                {% endif %}

                {% if supplier.nonConformities %}
                    <div class="alert alert-warning">
                        <strong>Non-Conformities:</strong>
                        <p>{{ supplier.nonConformities }}</p>
                    </div>
                {% endif %}
            </div>

            <div class="detail-section">
                <h3>Certifications & Compliance</h3>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">ISO 27001 Certified:</span>
                        <span class="value">{{ supplier.hasISO27001 ? '✅ Yes' : '❌ No' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">ISO 22301 Certified:</span>
                        <span class="value">{{ supplier.hasISO22301 ? '✅ Yes' : '❌ No' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Data Processing Agreement:</span>
                        <span class="value">{{ supplier.hasDPA ? '✅ Signed' : '❌ Not signed' }}</span>
                    </div>
                    {% if supplier.dpaSignedDate %}
                    <div class="detail-item">
                        <span class="label">DPA Signed Date:</span>
                        <span class="value">{{ supplier.dpaSignedDate|date('Y-m-d') }}</span>
                    </div>
                    {% endif %}
                </div>
                {% if supplier.certifications %}
                    <div class="detail-item">
                        <span class="label">Other Certifications:</span>
                        <span class="value">{{ supplier.certifications }}</span>
                    </div>
                {% endif %}
            </div>

            <div class="detail-section">
                <h3>Contract Information</h3>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">Contract Start:</span>
                        <span class="value">{{ supplier.contractStartDate ? supplier.contractStartDate|date('Y-m-d') : 'N/A' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Contract End:</span>
                        <span class="value">{{ supplier.contractEndDate ? supplier.contractEndDate|date('Y-m-d') : 'N/A' }}</span>
                    </div>
                </div>
                {% if supplier.securityRequirements %}
                    <div class="detail-item">
                        <span class="label">Security Requirements:</span>
                        <span class="value">{{ supplier.securityRequirements }}</span>
                    </div>
                {% endif %}
            </div>

            {% if supplier.relatedAssets|length > 0 %}
            <div class="detail-section">
                <h3>Related Assets ({{ supplier.relatedAssets|length }})</h3>
                <ul>
                    {% for asset in supplier.relatedAssets %}
                    <li><a href="{{ path('app_asset_show', {id: asset.id}) }}">{{ asset.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            {% if supplier.relatedRisks|length > 0 %}
            <div class="detail-section">
                <h3>Related Risks ({{ supplier.relatedRisks|length }})</h3>
                <ul>
                    {% for risk in supplier.relatedRisks %}
                    <li><a href="{{ path('app_risk_show', {id: risk.id}) }}">{{ risk.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            <div class="detail-section">
                <p class="text-muted">
                    Created: {{ supplier.createdAt|date('Y-m-d H:i') }}
                    {% if supplier.updatedAt %}
                        | Last updated: {{ supplier.updatedAt|date('Y-m-d H:i') }}
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
</div>

<style>
.text-danger { color: #dc2626; font-weight: bold; }
.text-muted { color: #6b7280; font-size: 0.875rem; }
</style>
{% endblock %}

{% extends 'base.html.twig' %}
{% import '_macros/inheritance_badge.html.twig' as inheritance %}

{% block title %}{{ 'supplier.title'|trans }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>{{ 'supplier.page.title'|trans }}</h1>
        <a href="{{ path('app_supplier_new') }}" class="btn btn-primary">{{ 'supplier.action.add_new'|trans }}</a>
    </div>

    {% if currentTenant %}
    <div class="card mb-3">
        <div class="card-body py-2">
            <form method="get" action="{{ path('app_supplier_index') }}" class="d-flex align-items-center gap-2">
                <label for="view-filter" class="mb-0 fw-bold">
                    <i class="bi bi-eye" aria-hidden="true"></i> {{ 'common.view'|trans }}:
                </label>
                <select class="form-select form-select-sm" style="width: auto;" id="view-filter" name="view" onchange="this.form.submit()">
                    <option value="own" {{ inheritanceInfo.currentView == 'own' ? 'selected' : '' }}>
                        {{ 'corporate.view.own_only'|trans }}
                    </option>
                    {% if inheritanceInfo.hasParent %}
                    <option value="inherited" {{ inheritanceInfo.currentView == 'inherited' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_inherited'|trans }}
                    </option>
                    {% endif %}
                    {% if inheritanceInfo.hasSubsidiaries %}
                    <option value="subsidiaries" {{ inheritanceInfo.currentView == 'subsidiaries' ? 'selected' : '' }}>
                        {{ 'corporate.view.including_subsidiaries'|trans }}
                    </option>
                    {% endif %}
                </select>
                <noscript>
                    <button type="submit" class="btn btn-sm btn-secondary">{{ 'common.apply'|trans }}</button>
                </noscript>
            </form>
        </div>
    </div>
    {% endif %}

    {% if statistics %}
    <div class="info-box">
        <h2>{{ 'supplier.statistics.title'|trans }}</h2>
        <div class="stats-grid">
            <div class="stat-item">
                <span class="stat-label">{{ 'supplier.statistics.total'|trans }}</span>
                <span class="stat-value">{{ detailedStats.total }}</span>
                {% if currentTenant %}
                    <small style="font-size: 11px; color: #6c757d; opacity: 0.85; display: block; margin-top: 0.25rem;">
                        {{ 'corporate.stats.breakdown'|trans({'%own%': detailedStats.own, '%inherited%': detailedStats.inherited, '%subsidiaries%': detailedStats.subsidiaries}) }}
                    </small>
                {% endif %}
            </div>
            <div class="stat-item">
                <span class="stat-label">{{ 'supplier.statistics.critical'|trans }}</span>
                <span class="stat-value critical">{{ statistics.critical }}</span>
            </div>
            <div class="stat-item">
                <span class="stat-label">{{ 'supplier.statistics.overdue_assessments'|trans }}</span>
                <span class="stat-value warning">{{ statistics.overdue_assessments }}</span>
            </div>
            <div class="stat-item">
                <span class="stat-label">{{ 'supplier.statistics.non_compliant'|trans }}</span>
                <span class="stat-value danger">{{ statistics.non_compliant }}</span>
            </div>
        </div>
    </div>
    {% endif %}

    {% if overdueAssessments|length > 0 %}
    <div class="alert alert-warning">
        <h4>‚ö†Ô∏è {{ 'supplier.alert.overdue_assessments'|trans }}</h4>
        <ul>
            {% for supplier in overdueAssessments %}
            <li>
                <a href="{{ path('app_supplier_show', {id: supplier.id}) }}">{{ supplier.name }}</a>
                - {{ 'supplier.next_assessment'|trans }}: {{ supplier.nextAssessmentDate ? supplier.nextAssessmentDate|date('Y-m-d') : ('supplier.not_scheduled'|trans) }}
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

    {% if nonCompliant|length > 0 %}
    <div class="alert alert-danger">
        <h4>üö® {{ 'supplier.alert.non_compliant'|trans }}</h4>
        <ul>
            {% for supplier in nonCompliant %}
            <li>
                <a href="{{ path('app_supplier_show', {id: supplier.id}) }}">{{ supplier.name }}</a>
                - {{ 'supplier.risk_score'|trans }}: {{ supplier.calculateRiskScore() }}
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

    <div class="card" data-controller="bulk-actions" data-bulk-actions-endpoint-value="/supplier">
        <div class="card-header">
            <h2>{{ 'supplier.list.title'|trans({'count': suppliers|length}) }}</h2>
        </div>
        <div class="card-content">
            {% if suppliers|length > 0 %}
            {% embed '_components/_table.html.twig' with {
                'wrapperClass': 'card-content',
                'noMargin': true
            } %}
                {% block table_head %}
                    <tr>
                        <th scope="col" class="w-40px">
                            <input type="checkbox"
                                   class="form-check-input"
                                   data-action="bulk-actions#selectAll"
                                   data-bulk-actions-target="selectAllCheckbox"
                                   aria-label="{{ 'common.select_all'|trans }}">
                        </th>
                        <th scope="col">{{ 'supplier.table.name'|trans }}</th>
                        <th scope="col">{{ 'supplier.table.service_provided'|trans }}</th>
                        <th scope="col">{{ 'supplier.table.criticality'|trans }}</th>
                        <th scope="col">{{ 'supplier.table.status'|trans }}</th>
                        <th scope="col">{{ 'supplier.table.risk_score'|trans }}</th>
                        <th scope="col">{{ 'supplier.table.iso27001'|trans }}</th>
                        <th scope="col">{{ 'supplier.table.actions'|trans }}</th>
                    </tr>
                {% endblock %}
                {% block table_body %}
                    {% for supplier in suppliers %}
                    <tr data-supplier-id="{{ supplier.id }}">
                        <td>
                            <input type="checkbox"
                                   class="form-check-input"
                                   data-bulk-actions-target="item"
                                   data-action="bulk-actions#selectItem"
                                   value="{{ supplier.id }}"
                                   aria-label="{{ 'common.select'|trans }} {{ supplier.name }}">
                        </td>
                        <td>
                            <a href="{{ path('app_supplier_show', {id: supplier.id}) }}">{{ supplier.name }}</a>
                            {{ inheritance.small_badge(supplier, currentTenant) }}
                        </td>
                        <td>{{ supplier.serviceProvided|slice(0, 50) }}...</td>
                        <td><span class="badge badge-{{ supplier.criticality }}">{{ supplier.criticality|upper }}</span></td>
                        <td><span class="badge badge-{{ supplier.status }}">{{ supplier.status }}</span></td>
                        <td>
                            {% set riskScore = supplier.calculateRiskScore() %}
                            <span class="badge badge-{{ riskScore > 70 ? 'critical' : (riskScore > 50 ? 'high' : (riskScore > 30 ? 'medium' : 'low')) }}">
                                {{ riskScore }}
                            </span>
                        </td>
                        <td>{{ supplier.hasISO27001 ? '‚úì' : '‚úó' }}</td>
                        <td>
                            <a href="{{ path('app_supplier_show', {id: supplier.id}) }}" class="btn btn-sm btn-secondary">{{ 'supplier.action.view'|trans }}</a>
                            <a href="{{ path('app_supplier_edit', {id: supplier.id}) }}" class="btn btn-sm btn-primary">{{ 'supplier.action.edit'|trans }}</a>
                        </td>
                    </tr>
                    {% endfor %}
                {% endblock %}
            {% endembed %}
            {% else %}
            <p>{{ 'supplier.empty.message'|trans }} <a href="{{ path('app_supplier_new') }}">{{ 'supplier.empty.add_first'|trans }}</a>.</p>
            {% endif %}
        </div>

        {# Bulk Action Bar #}
        {% if suppliers|length > 0 %}
        {% include '_components/_bulk_action_bar.html.twig' with {
            actions: ['export', 'delete']
        } %}
        {% endif %}
    </div>
</div>

<style>
.stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-top: 1rem; }
.stat-item { display: flex; flex-direction: column; padding: 1rem; background: #f9fafb; border-radius: 4px; }
.stat-label { font-size: 0.875rem; color: #6b7280; }
.stat-value { font-size: 1.5rem; font-weight: bold; color: #111827; }
.stat-value.critical { color: #dc2626; }
.stat-value.warning { color: #f59e0b; }
.stat-value.danger { color: #dc2626; }
</style>
{% endblock %}

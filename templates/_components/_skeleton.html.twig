{#
  Skeleton Loader Component
  Shows placeholder content during loading

  Usage:
  {% include '_components/_skeleton.html.twig' with {
      type: 'kpi-grid',
      count: 4
  } %}

  Types: 'kpi-grid', 'table', 'list', 'card', 'form'
#}

{% set type = type|default('card') %}
{% set count = count|default(3) %}

<div class="skeleton-container">
    {% if type == 'kpi-grid' %}
        <div class="skeleton-grid">
            {% for i in 1..count %}
                <div class="skeleton-kpi-card">
                    <div class="skeleton skeleton-kpi-icon"></div>
                    <div class="skeleton-kpi-content">
                        <div class="skeleton skeleton-text skeleton-small w-70"></div>
                        <div class="skeleton skeleton-heading w-50-h-32"></div>
                        <div class="skeleton skeleton-small w-40"></div>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% elseif type == 'table' %}
        <div class="skeleton-card">
            <div class="skeleton skeleton-heading mb-24px"></div>
            <div class="skeleton-table">
                {% for i in 1..count %}
                    <div class="skeleton-table-row">
                        <div class="skeleton-table-cell">
                            <div class="skeleton skeleton-text"></div>
                        </div>
                        <div class="skeleton-table-cell">
                            <div class="skeleton skeleton-badge"></div>
                        </div>
                        <div class="skeleton-table-cell">
                            <div class="skeleton skeleton-text w-60"></div>
                        </div>
                        <div class="skeleton-table-cell">
                            <div class="skeleton skeleton-button w-80px"></div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    {% elseif type == 'list' %}
        <div class="skeleton-card">
            <ul class="skeleton-list">
                {% for i in 1..count %}
                    <li class="skeleton-list-item">
                        <div class="skeleton skeleton-avatar"></div>
                        <div class="flex-1">
                            <div class="skeleton skeleton-text w-70"></div>
                            <div class="skeleton skeleton-small w-50"></div>
                        </div>
                        <div class="skeleton skeleton-badge"></div>
                    </li>
                {% endfor %}
            </ul>
        </div>

    {% elseif type == 'card' %}
        {% for i in 1..count %}
            <div class="skeleton-card mb-lg">
                <div class="skeleton skeleton-heading"></div>
                <div class="skeleton skeleton-text"></div>
                <div class="skeleton skeleton-text"></div>
                <div class="skeleton skeleton-text w-80"></div>
                <div class="mt-md">
                    <div class="skeleton skeleton-button"></div>
                </div>
            </div>
        {% endfor %}

    {% elseif type == 'form' %}
        <div class="skeleton-card">
            {% for i in 1..count %}
                <div class="mb-lg">
                    <div class="skeleton skeleton-small w-30-mb-8"></div>
                    <div class="skeleton skeleton-text-lg w-100-h-40"></div>
                </div>
            {% endfor %}
            <div class="mt-xl">
                <div class="skeleton skeleton-button"></div>
            </div>
        </div>

    {% endif %}
</div>

{% extends 'base.html.twig' %}

{% block title %}{{ 'management_review.edit'|trans }} - {{ review.title }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_management_review_index') }}" data-turbo-action="advance">
                    <i class="bi bi-clipboard2-check"></i> {{ 'management_review.title'|trans }}
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_management_review_show', {id: review.id}) }}" data-turbo-action="advance">
                    {{ review.title }}
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'common.edit'|trans }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> {{ 'management_review.edit'|trans }}: {{ review.title }}
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4" role="alert">
                        <h6 class="alert-heading">
                            <i class="bi bi-info-circle-fill"></i> {{ 'management_review.iso_requirement'|trans }}
                        </h6>
                        <p class="mb-0 small">
                            {{ 'management_review.iso_clause_93_info'|trans }}
                        </p>
                    </div>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {# Basic Information #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-info-square"></i> {{ 'management_review.section.basic_info'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8 mb-3">
                                    {{ form_row(form.title) }}
                                </div>
                                <div class="col-md-4 mb-3">
                                    {{ form_row(form.reviewDate) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.participants) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.status) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Inputs to the Review (Clause 9.3.2) #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-inbox"></i> {{ 'management_review.section.inputs'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.changesRelevantToISMS) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.feedbackFromInterestedParties) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.auditResults) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.performanceEvaluation) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Status of Previous Actions #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-arrow-clockwise"></i> {{ 'management_review.section.followup'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.previousReviewActions) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.nonConformitiesStatus) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.correctiveActionsStatus) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Outputs from the Review (Clause 9.3.3) #}
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-send"></i> {{ 'management_review.section.outputs'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.opportunitiesForImprovement) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.resourceNeeds) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.decisions) }}
                                </div>
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.actionItems) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <div>
                            <a href="{{ path('app_management_review_show', {id: review.id}) }}"
                               class="btn btn-outline-secondary"
                               data-turbo-action="advance">
                                <i class="bi bi-arrow-left"></i> {{ 'common.back'|trans }}
                            </a>
                            <a href="{{ path('app_management_review_index') }}"
                               class="btn btn-outline-secondary"
                               data-turbo-action="advance">
                                <i class="bi bi-list"></i> {{ 'common.to_list'|trans }}
                            </a>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> {{ 'common.save_changes'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Metadata Card #}
            <div class="card shadow mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> {{ 'common.metadata'|trans }}</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">{{ 'common.created_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ review.createdAt|date('d.m.Y H:i') }}</dd>

                        <dt class="col-sm-3 text-muted">{{ 'common.updated_at'|trans }}</dt>
                        <dd class="col-sm-9">{{ review.updatedAt ? review.updatedAt|date('d.m.Y H:i') : '-' }}</dd>

                        <dt class="col-sm-3 text-muted">{{ 'common.id'|trans }}</dt>
                        <dd class="col-sm-9"><code>{{ review.id }}</code></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'management_review' %}

{% block title %}{{ 'management_review.edit'|trans({}, 'management_review') }} - {{ review.title }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_management_review_index') }}" data-turbo-action="advance">
                    <i class="bi bi-clipboard2-check" aria-hidden="true"></i> {{ 'management_review.title'|trans({}, 'management_review') }}
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_management_review_show', {id: review.id}) }}" data-turbo-action="advance">
                    {{ review.title }}
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'common.edit'|trans({}, 'messages') }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white"><h5 class="mb-0">
                        <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'management_review.edit'|trans({}, 'management_review') }}: {{ review.title }}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4" role="alert">
                        <h4 class="alert-heading">
                            <i class="bi bi-info-circle-fill" aria-hidden="true"></i> {{ 'management_review.iso_requirement'|trans({}, 'management_review') }}
                        </h5>
                        <p class="mb-0 small">
                            {{ 'management_review.iso_clause_93_info'|trans({}, 'management_review') }}
                        </p>
                    </div>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {% include '_components/_auto_form.html.twig' with {
                        'form': form,
                        'sections': {
                            'basic_info': {
                                'label': 'management_review.section.basic_info'|trans({}, 'management_review'),
                                'fields': ['title', 'reviewDate', 'participants', 'status']
                            },
                            'inputs': {
                                'label': 'management_review.section.inputs'|trans({}, 'management_review'),
                                'fields': ['changesRelevantToISMS', 'feedbackFromInterestedParties', 'auditResults', 'performanceEvaluation']
                            },
                            'followup': {
                                'label': 'management_review.section.followup'|trans({}, 'management_review'),
                                'fields': ['previousReviewActions', 'nonConformitiesStatus', 'correctiveActionsStatus']
                            },
                            'outputs': {
                                'label': 'management_review.section.outputs'|trans({}, 'management_review'),
                                'fields': ['opportunitiesForImprovement', 'resourceNeeds', 'decisions', 'actionItems']
                            }
                        },
                        'col_widths': {
                            'title': 8,
                            'reviewDate': 4,
                            'status': 6
                        }
                    } %}

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <div>
                            <a href="{{ path('app_management_review_show', {id: review.id}) }}"
                               class="btn btn-outline-secondary"
                               data-turbo-action="advance">
                                <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                            </a>
                            <a href="{{ path('app_management_review_index') }}"
                               class="btn btn-outline-secondary"
                               data-turbo-action="advance">
                                <i class="bi bi-list" aria-hidden="true"></i> {{ 'common.to_list'|trans({}, 'messages') }}
                            </a>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save_changes'|trans({}, 'messages') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Metadata Card #}
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h3 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'common.metadata'|trans({}, 'messages') }}</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">{{ 'common.created_at'|trans({}, 'messages') }}</dt>
                        <dd class="col-sm-9">{{ review.createdAt|date('d.m.Y H:i') }}</dd>

                        <dt class="col-sm-3 text-muted">{{ 'common.updated_at'|trans({}, 'messages') }}</dt>
                        <dd class="col-sm-9">{{ review.updatedAt ? review.updatedAt|date('d.m.Y H:i') : '-' }}</dd>

                        <dt class="col-sm-3 text-muted">{{ 'common.id'|trans({}, 'messages') }}</dt>
                        <dd class="col-sm-9"><code>{{ review.id }}</code></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

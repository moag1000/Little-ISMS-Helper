{% extends 'base.html.twig' %}

{% block title %}{{ 'management_review.new'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_management_review_index') }}" data-turbo-action="advance">
                            <i class="bi bi-clipboard2-check" aria-hidden="true"></i> {{ 'management_review.title'|trans }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'management_review.new'|trans }}</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'management_review.new'|trans }}
                </h1>
                <a href="{{ path('app_management_review_index') }}" class="btn btn-outline-secondary" data-turbo-action="advance">
                    <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans }}
                </a>
            </div>

            <div class="alert alert-info mb-4" role="alert">
                <h4 class="alert-heading h6">
                    <i class="bi bi-info-circle-fill" aria-hidden="true"></i> {{ 'management_review.iso_requirement'|trans }}
                </h4>
                <p class="mb-0 small">
                    {{ 'management_review.iso_clause_93_info'|trans }}
                </p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">{{ 'management_review.new'|trans }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {# Basic Information #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-info-square" aria-hidden="true"></i>
                            {{ 'management_review.section.basic_info'|trans }}
                        </legend>

                        <div class="row">
                            <div class="col-md-8">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.title,
                                    'label': form.title.vars.label|default('management_review.field.title'|trans),
                                    'required': true
                                } %}
                            </div>
                            <div class="col-md-4">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.reviewDate,
                                    'label': form.reviewDate.vars.label|default('management_review.field.review_date'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.participants,
                                    'label': form.participants.vars.label|default('management_review.field.participants'|trans)
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.status,
                                    'label': form.status.vars.label|default('management_review.field.status'|trans)
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Inputs to the Review (Clause 9.3.2) #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-inbox" aria-hidden="true"></i>
                            {{ 'management_review.section.inputs'|trans }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.changesRelevantToISMS,
                                    'label': form.changesRelevantToISMS.vars.label|default('management_review.field.changes_relevant_to_isms'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.feedbackFromInterestedParties,
                                    'label': form.feedbackFromInterestedParties.vars.label|default('management_review.field.feedback_from_interested_parties'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.auditResults,
                                    'label': form.auditResults.vars.label|default('management_review.field.audit_results'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.performanceEvaluation,
                                    'label': form.performanceEvaluation.vars.label|default('management_review.field.performance_evaluation'|trans)
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Status of Previous Actions #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-arrow-clockwise" aria-hidden="true"></i>
                            {{ 'management_review.section.followup'|trans }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.previousReviewActions,
                                    'label': form.previousReviewActions.vars.label|default('management_review.field.previous_review_actions'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.nonConformitiesStatus,
                                    'label': form.nonConformitiesStatus.vars.label|default('management_review.field.non_conformities_status'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.correctiveActionsStatus,
                                    'label': form.correctiveActionsStatus.vars.label|default('management_review.field.corrective_actions_status'|trans)
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Outputs from the Review (Clause 9.3.3) #}
                    <fieldset class="mb-4">
                        <legend class="h5 mb-3">
                            <i class="bi bi-send" aria-hidden="true"></i>
                            {{ 'management_review.section.outputs'|trans }}
                        </legend>

                        <div class="row">
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.opportunitiesForImprovement,
                                    'label': form.opportunitiesForImprovement.vars.label|default('management_review.field.opportunities_for_improvement'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.resourceNeeds,
                                    'label': form.resourceNeeds.vars.label|default('management_review.field.resource_needs'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.decisions,
                                    'label': form.decisions.vars.label|default('management_review.field.decisions'|trans)
                                } %}
                            </div>
                            <div class="col-md-12">
                                {% include '_components/_form_field.html.twig' with {
                                    'field': form.actionItems,
                                    'label': form.actionItems.vars.label|default('management_review.field.action_items'|trans)
                                } %}
                            </div>
                        </div>
                    </fieldset>

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a href="{{ path('app_management_review_index') }}"
                           class="btn btn-outline-secondary"
                           data-turbo-action="advance">
                            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans }}
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'management_review.create'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

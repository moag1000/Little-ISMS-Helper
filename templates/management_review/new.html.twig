{% extends 'base.html.twig' %}
{% trans_default_domain 'management_review' %}

{% block title %}{{ 'management_review.new'|trans({}, 'management_review') }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_management_review_index') }}" data-turbo-action="advance">
                            <i class="bi bi-clipboard2-check" aria-hidden="true"></i> {{ 'management_review.title'|trans({}, 'management_review') }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'management_review.new'|trans({}, 'management_review') }}</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'management_review.new'|trans({}, 'management_review') }}
                </h1>
                <a href="{{ path('app_management_review_index') }}" class="btn btn-outline-secondary" data-turbo-action="advance">
                    <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                </a>
            </div>

            <div class="alert alert-info mb-4" role="alert">
                <h4 class="alert-heading h6">
                    <i class="bi bi-info-circle-fill" aria-hidden="true"></i> {{ 'management_review.iso_requirement'|trans({}, 'management_review') }}
                </h5>
                <p class="mb-0 small">
                    {{ 'management_review.iso_clause_93_info'|trans({}, 'management_review') }}
                </p>
            </div>

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">{{ 'management_review.new'|trans({}, 'management_review') }}</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    {% include '_components/_auto_form.html.twig' with {
                        'form': form,
                        'sections': {
                            'basic_info': {
                                'label': 'management_review.section.basic_info'|trans({}, 'management_review'),
                                'fields': ['title', 'reviewDate', 'participants', 'status']
                            },
                            'inputs': {
                                'label': 'management_review.section.inputs'|trans({}, 'management_review'),
                                'fields': ['changesRelevantToISMS', 'feedbackFromInterestedParties', 'auditResults', 'performanceEvaluation']
                            },
                            'followup': {
                                'label': 'management_review.section.followup'|trans({}, 'management_review'),
                                'fields': ['previousReviewActions', 'nonConformitiesStatus', 'correctiveActionsStatus']
                            },
                            'outputs': {
                                'label': 'management_review.section.outputs'|trans({}, 'management_review'),
                                'fields': ['opportunitiesForImprovement', 'resourceNeeds', 'decisions', 'actionItems']
                            }
                        },
                        'col_widths': {
                            'title': 8,
                            'reviewDate': 4,
                            'status': 6
                        }
                    } %}

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a href="{{ path('app_management_review_index') }}"
                           class="btn btn-outline-secondary"
                           data-turbo-action="advance">
                            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save" aria-hidden="true"></i> {{ 'management_review.create'|trans({}, 'management_review') }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

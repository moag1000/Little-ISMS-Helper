{% extends 'base.html.twig' %}
{% trans_default_domain 'management_review' %}

{% block title %}{{ 'management_review.title'|trans({}, 'management_review') }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.management_reviews'|trans({}, 'nav') }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-clipboard2-check" aria-hidden="true"></i> {{ 'management_review.title'|trans({}, 'management_review') }}
        </h1>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_management_review_new') }}" class="btn btn-primary" data-turbo-action="advance">
            <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'management_review.new'|trans({}, 'management_review') }}
        </a>
        {% endif %}
    </div>

    {# ISO 27001 Clause Information #}
    <div class="alert alert-info mb-4" role="alert">
        <h2 class="alert-heading h6">
            <i class="bi bi-info-circle-fill" aria-hidden="true"></i> {{ 'management_review.iso_requirement'|trans({}, 'management_review') }}
        </h2>
        <p class="mb-0 small">
            {{ 'management_review.iso_clause_info'|trans({}, 'management_review') }}
        </p>
    </div>

    {# Statistics Cards #}
    <turbo-frame id="review-stats">
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'primary' } %}
                    {% block card_body %}
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-collection text-primary icon-2rem" aria-hidden="true"></i>
                            </div>
                            <div class="ms-3">
                                <div class="text-muted small mb-1">{{ 'management_review.statistics.total'|trans({}, 'management_review') }}</div>
                                <div class="fs-2 fw-bold">{{ statistics.total }}</div>
                            </div>
                        </div>
                    {% endblock %}
                {% endembed %}
            </div>

            <div class="col-md-3 mb-3">
                {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'warning' } %}
                    {% block card_body %}
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-hourglass-split text-warning icon-2rem" aria-hidden="true"></i>
                            </div>
                            <div class="ms-3">
                                <div class="text-muted small mb-1">{{ 'management_review.statistics.planned'|trans({}, 'management_review') }}</div>
                                <div class="fs-2 fw-bold">{{ statistics.planned }}</div>
                            </div>
                        </div>
                    {% endblock %}
                {% endembed %}
            </div>

            <div class="col-md-3 mb-3">
                {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'success' } %}
                    {% block card_body %}
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-check-circle text-success icon-2rem" aria-hidden="true"></i>
                            </div>
                            <div class="ms-3">
                                <div class="text-muted small mb-1">{{ 'management_review.statistics.completed'|trans({}, 'management_review') }}</div>
                                <div class="fs-2 fw-bold">{{ statistics.completed }}</div>
                            </div>
                        </div>
                    {% endblock %}
                {% endembed %}
            </div>

            <div class="col-md-3 mb-3">
                {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'info' } %}
                    {% block card_body %}
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-calendar-event text-info icon-2rem" aria-hidden="true"></i>
                            </div>
                            <div class="ms-3">
                                <div class="text-muted small mb-1">{{ 'management_review.statistics.this_year'|trans({}, 'management_review') }}</div>
                                <div class="fs-2 fw-bold">{{ statistics.this_year }}</div>
                            </div>
                        </div>
                    {% endblock %}
                {% endembed %}
            </div>
        </div>
    </turbo-frame>

    {# Management Reviews List #}
    {% embed '_components/_card.html.twig' %}
        {% block card_header %}
            <div class="card-header bg-primary text-white">
                <h2 class="h5 mb-0"><i class="bi bi-list" aria-hidden="true"></i> {{ 'management_review.all_reviews'|trans({}, 'management_review') }}</h2>
            </div>
        {% endblock %}
        {% block card_body %}
            {% if reviews|length == 0 %}
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'management_review.no_reviews'|trans({}, 'management_review') }}
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_management_review_new') }}" class="alert-link" data-turbo-action="advance">
                    {{ 'management_review.create_first'|trans({}, 'management_review') }}
                </a>
                {% endif %}
            </div>
            {% else %}
            {% embed '_components/_table.html.twig' with {
                'class': 'table-hover table-striped',
                'noMargin': true
            } %}
                {% block table_head %}
                    <tr>
                        <th scope="col">{{ 'management_review.title'|trans({}, 'management_review') }}</th>
                        <th scope="col">{{ 'management_review.field.review_date'|trans({}, 'management_review') }}</th>
                        <th scope="col">{{ 'management_review.field.status'|trans({}, 'management_review') }}</th>
                        <th scope="col">{{ 'management_review.field.participants'|trans({}, 'management_review') }}</th>
                        <th scope="col">{{ 'common.actions'|trans({}, 'messages') }}</th>
                    </tr>
                {% endblock %}
                {% block table_body %}
                    {% for review in reviews %}
                    <tr>
                        <td>
                            <strong>{{ review.title }}</strong>
                        </td>
                        <td>{{ review.reviewDate|date('d.m.Y') }}</td>
                        <td>
                            {% set statusClass = {
                                'planned': 'warning',
                                'in_progress': 'info',
                                'completed': 'success',
                                'cancelled': 'danger'
                            } %}
                            {% include '_components/_badge.html.twig' with { variant: statusClass[review.status] ?? 'secondary', content: ('management_review.status.' ~ review.status)|trans({}, 'management_review') } %}
                        </td>
                        <td>
                            {% if review.participants|length > 0 %}
                            <i class="bi bi-people" aria-hidden="true"></i>
                            {% include '_components/_badge.html.twig' with { variant: 'primary', content: review.participants|length } %}
                            {% else %}
                            <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="{{ path('app_management_review_show', {id: review.id}) }}"
                                   class="btn btn-outline-primary"
                                   data-turbo-action="advance"
                                   title="{{ 'common.view'|trans({}, 'messages') }}" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                    <i class="bi bi-eye" aria-hidden="true"></i>
                                </a>
                                {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_management_review_edit', {id: review.id}) }}"
                                   class="btn btn-outline-secondary"
                                   data-turbo-action="advance"
                                   title="{{ 'common.edit'|trans({}, 'messages') }}" aria-label="{{ 'common.edit'|trans({}, 'messages') }}">
                                    <i class="bi bi-pencil" aria-hidden="true"></i>
                                </a>
                                <button type="button"
                                        class="btn btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal{{ review.id }}"
                                        title="{{ 'common.delete'|trans({}, 'messages') }}" aria-label="{{ 'common.delete'|trans({}, 'messages') }}">
                                    <i class="bi bi-trash" aria-hidden="true"></i>
                                </button>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                {% endblock %}
            {% endembed %}
            {% endif %}
        {% endblock %}
    {% endembed %}
</div>

{# Delete Modals #}
{% for review in reviews %}
<div class="modal fade" id="deleteModal{{ review.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ review.id }}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h3 class="modal-title h5" id="deleteModalLabel{{ review.id }}">
                    <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'management_review.confirm_delete'|trans({}, 'management_review') }}
                </h3>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="{{ 'common.close'|trans({}, 'messages') }}"></button>
            </div>
            <div class="modal-body">
                <p>{{ 'management_review.delete_warning'|trans({'%title%': review.title}, 'management_review') }}</p>
                <p class="text-muted"><small>{{ 'common.action_irreversible'|trans({}, 'messages') }}</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    {{ 'common.cancel'|trans({}, 'messages') }}
                </button>
                <form method="post" action="{{ path('app_management_review_delete', {id: review.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash" aria-hidden="true"></i> {{ 'common.delete'|trans({}, 'messages') }}
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endfor %}
{% endblock %}

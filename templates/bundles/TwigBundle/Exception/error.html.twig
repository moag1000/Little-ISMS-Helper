{% extends 'base.html.twig' %}

{# Security: Generic error page for all other errors (prevents information disclosure) #}

{% block title %}{{ 'error.generic.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-template">
                <h1 class="display-1">{{ 'error.generic.heading'|trans({}, 'messages') }}</h1>
                <h2>{{ 'error.generic.subheading'|trans({}, 'messages') }}</h2>
                <div class="error-details mt-4">
                    <p class="lead">{{ 'error.generic.message'|trans({}, 'messages') }}</p>
                    <p>{{ 'error.generic.help'|trans({}, 'messages') }}</p>
                </div>
                <div class="error-actions mt-4">
                    <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                        <i class="bi bi-house" aria-hidden="true"></i> {{ 'error.action.homepage'|trans({}, 'messages') }}
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'error.action.back'|trans({}, 'messages') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-template {
        padding: 40px 15px;
        text-align: center;
    }
    .error-template h1 {
        font-size: 8em;
        color: #dc3545;
    }
</style>
{% endblock %}

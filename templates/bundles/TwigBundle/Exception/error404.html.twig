{% extends 'base.html.twig' %}

{# Security: Custom 404 Not Found error page (prevents information disclosure) #}

{% block title %}{{ 'error.404.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-template">
                <h1 class="display-1">404</h1>
                <h2>{{ 'error.404.heading'|trans({}, 'messages') }}</h2>
                <div class="error-details mt-4">
                    <p class="lead">{{ 'error.404.message'|trans({}, 'messages') }}</p>
                </div>
                <div class="error-actions mt-4">
                    <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">
                        <i class="bi bi-house"></i> {{ 'error.action.homepage'|trans({}, 'messages') }}
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> {{ 'error.action.back'|trans({}, 'messages') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-template {
        padding: 40px 15px;
        text-align: center;
    }
    .error-template h1 {
        font-size: 10em;
        color: #6c757d;
    }
</style>
{% endblock %}

{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'entity_history.title'|trans({}, 'messages') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'entity_history.subtitle'|trans({}, 'messages') }}</p>
{% endblock %}

{% block admin_content %}
<p>
    <a href="{{ path('app_audit_log_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back_to_overview'|trans({}, 'messages') }}
    </a>
</p>

<div class="info-box">
    <h2>{{ entityType }} #{{ entityId }}</h2>
    <p><strong>{{ 'entity_history.entry_count'|trans({}, 'messages') }}</strong> {{ auditLogs|length }}</p>
</div>

{% if auditLogs|length > 0 %}
<div class="mt-4">
    <h2>{{ 'entity_history.section'|trans({}, 'messages') }}</h2>

    <div class="mt-3">
    {% embed '_components/_table.html.twig' with {
        'noMargin': true,
        'responsive': true
    } %}
        {% block table_head %}
            <tr>
                <th scope="col" class="table-cell text-left">{{ 'audit_log.field.timestamp'|trans({}, 'audit_log') }}</th>
                <th scope="col" class="table-cell text-left">{{ 'audit_log.field.action'|trans({}, 'audit_log') }}</th>
                <th scope="col" class="table-cell text-left">{{ 'audit_log.field.user'|trans({}, 'audit_log') }}</th>
                <th scope="col" class="table-cell text-left">{{ 'audit_log.field.description'|trans({}, 'audit_log') }}</th>
                <th scope="col" class="table-cell text-left">{{ 'common.details'|trans({}, 'messages') }}</th>
            </tr>
        {% endblock %}
        {% block table_body %}
            {% for log in auditLogs %}
            <tr>
                <td class="table-cell small">
                    {{ log.createdAt|date('d.m.Y H:i:s') }}
                </td>
                <td class="table-cell">
                    <span class="badge badge-{{ log.action }}">{{ log.action|capitalize }}</span>
                </td>
                <td class="table-cell">
                    <a href="{{ path('app_audit_log_user', {userName: log.userName}) }}"
                       class="link-primary">
                        {{ log.userName }}
                    </a>
                </td>
                <td class="table-cell small">
                    {{ log.description|default('-') }}
                </td>
                <td class="table-cell">
                    <a href="{{ path('app_audit_log_detail', {id: log.id}) }}"
                       class="link-primary">
                        {{ 'entity_history.show_details'|trans({}, 'messages') }}
                    </a>
                </td>
            </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
    </div>
</div>
{% else %}
<div class="info-box mt-4">
    <p>{{ 'entity_history.no_entries'|trans({}, 'messages') }}</p>
</div>
{% endif %}

{% endblock %}

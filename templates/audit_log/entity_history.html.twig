{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'entity_history.title'|trans }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'entity_history.subtitle'|trans|default('Verlauf einer Entit√§t') }}</p>
{% endblock %}

{% block admin_content %}
<p>
    <a href="{{ path('app_audit_log_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back_to_overview'|trans }}
    </a>
</p>

<div class="info-box">
    <h3>{{ entityType }} #{{ entityId }}</h3>
    <p><strong>{{ 'entity_history.entry_count'|trans }}</strong> {{ auditLogs|length }}</p>
</div>

{% if auditLogs|length > 0 %}
<div style="margin-top: 2rem;">
    <h2>{{ 'entity_history.section'|trans }}</h2>

    <table class="table" style="width: 100%; border-collapse: collapse; margin-top: 1rem;">
        <thead>
            <tr style="background: #f0f0f0;">
                <th scope="col" class="table-cell text-left">{{ 'audit_log.field.timestamp'|trans }}</th>
                <th scope="col" class="table-cell text-left">{{ 'audit_log.field.action'|trans }}</th>
                <th scope="col" class="table-cell text-left">{{ 'audit_log.field.user'|trans }}</th>
                <th scope="col" class="table-cell text-left">{{ 'audit_log.field.description'|trans }}</th>
                <th scope="col" class="table-cell text-left">{{ 'common.details'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for log in auditLogs %}
            <tr>
                <td class="table-cell text-sm">
                    {{ log.createdAt|date('d.m.Y H:i:s') }}
                </td>
                <td class="table-cell">
                    <span class="badge badge-{{ log.action }}">{{ log.action|capitalize }}</span>
                </td>
                <td class="table-cell">
                    <a href="{{ path('app_audit_log_user', {userName: log.userName}) }}"
                       class="link-primary">
                        {{ log.userName }}
                    </a>
                </td>
                <td class="table-cell text-sm">
                    {{ log.description|default('-') }}
                </td>
                <td class="table-cell">
                    <a href="{{ path('app_audit_log_detail', {id: log.id}) }}"
                       class="link-primary">
                        {{ 'entity_history.show_details'|trans }}
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% else %}
<div class="info-box" style="margin-top: 2rem;">
    <p>{{ 'entity_history.no_entries'|trans }}</p>
</div>
{% endif %}

{% endblock %}

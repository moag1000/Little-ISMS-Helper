{% extends 'base.html.twig' %}

{% block title %}{{ 'entity_history.title'|trans }} - {{ 'app.title'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'entity_history.title'|trans }}</h1>

<p>
    <a href="{{ path('app_audit_log_index') }}" class="link-primary">Â« {{ 'common.back_to_overview'|trans }}</a>
</p>

<div class="info-box">
    <h3>{{ entityType }} #{{ entityId }}</h3>
    <p><strong>{{ 'entity_history.entry_count'|trans }}</strong> {{ auditLogs|length }}</p>
</div>

{% if auditLogs|length > 0 %}
<div style="margin-top: 2rem;">
    <h2>{{ 'entity_history.section'|trans }}</h2>

    <table class="table" style="width: 100%; border-collapse: collapse; margin-top: 1rem;">
        <thead>
            <tr style="background: #f0f0f0;">
                <th class="table-cell text-left">{{ 'audit_log.field.timestamp'|trans }}</th>
                <th class="table-cell text-left">{{ 'audit_log.field.action'|trans }}</th>
                <th class="table-cell text-left">{{ 'audit_log.field.user'|trans }}</th>
                <th class="table-cell text-left">{{ 'audit_log.field.description'|trans }}</th>
                <th class="table-cell text-left">{{ 'common.details'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for log in auditLogs %}
            <tr>
                <td class="table-cell text-sm">
                    {{ log.createdAt|date('d.m.Y H:i:s') }}
                </td>
                <td class="table-cell">
                    <span class="badge badge-{{ log.action }}">{{ log.action|capitalize }}</span>
                </td>
                <td class="table-cell">
                    <a href="{{ path('app_audit_log_user', {userName: log.userName}) }}"
                       class="link-primary">
                        {{ log.userName }}
                    </a>
                </td>
                <td class="table-cell text-sm">
                    {{ log.description|default('-') }}
                </td>
                <td class="table-cell">
                    <a href="{{ path('app_audit_log_detail', {id: log.id}) }}"
                       class="link-primary">
                        {{ 'entity_history.show_details'|trans }}
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% else %}
<div class="info-box" style="margin-top: 2rem;">
    <p>{{ 'entity_history.no_entries'|trans }}</p>
</div>
{% endif %}

<style>
.badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    font-size: 0.85rem;
    font-weight: 500;
}
.badge-create { background: #28a745; color: white; }
.badge-update { background: #ffc107; color: #000; }
.badge-delete { background: #dc3545; color: white; }
.badge-view { background: #17a2b8; color: white; }
.badge-export { background: #6c757d; color: white; }
.badge-import { background: #6f42c1; color: white; }
</style>

{% endblock %}

{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Audit Log - Revisionssicheres Protokoll{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">Vollständige Protokollierung aller Aktivitäten im ISMS zur Sicherstellung der Revisionssicherheit</p>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .pagination a {
            padding: 0.5rem 1rem;
            background: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            margin: 0 0.25rem;
            transition: all 0.3s ease;
        }
        .pagination a:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

        /* Dark Mode Pagination */
        [data-theme="dark"] .pagination a {
            background: #06b6d4;
            box-shadow: 0 0 8px rgba(6, 182, 212, 0.3);
        }
        [data-theme="dark"] .pagination a:hover {
            background: #0891b2;
            box-shadow: 0 0 12px rgba(6, 182, 212, 0.5);
        }
    </style>
{% endblock %}

{% block admin_content %}

<div class="info-box">
    <h3>Statistik</h3>
    <p><strong>Gesamt Protokolleinträge:</strong> {{ totalLogs }}</p>
    <p><strong>Letzte 24 Stunden:</strong> {{ recentActivity|length }} Aktivitäten</p>

    {% if actionStats|length > 0 %}
    <p><strong>Aktionen:</strong></p>
    <ul>
        {% for stat in actionStats %}
        <li>{{ stat.action|capitalize }}: {{ stat.count }}</li>
        {% endfor %}
    </ul>
    {% endif %}

    {% if entityTypeStats|length > 0 %}
    <p><strong>Entitätstypen:</strong></p>
    <ul>
        {% for stat in entityTypeStats %}
        <li>{{ stat.entityType }}: {{ stat.count }}</li>
        {% endfor %}
    </ul>
    {% endif %}
</div>

{# Skip link for filters section - WCAG 2.4.1 #}
<a href="#filter-section" class="skip-link">{{ 'accessibility.skip_to_filters'|trans }}</a>

<div class="filter-container" id="filter-section" tabindex="-1">
    <h3>Filter</h3>
    <form method="get" action="{{ path('app_audit_log_index') }}" role="search" aria-label="Filter">
        <div class="d-grid grid-responsive-200 gap-1 mb-md">
            <div>
                <label for="entityType">Entitätstyp:</label>
                <select name="entityType" id="entityType" class="form-control">
                    <option value="">Alle</option>
                    {% for entityType in entityTypes %}
                    <option value="{{ entityType }}" {% if filters.entityType|default('') == entityType %}selected{% endif %}>
                        {{ entityType }}
                    </option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="action">Aktion:</label>
                <select name="action" id="action" class="form-control">
                    <option value="">Alle</option>
                    {% for action in actions %}
                    <option value="{{ action }}" {% if filters.action|default('') == action %}selected{% endif %}>
                        {{ action|capitalize }}
                    </option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="userName">Benutzer:</label>
                <input type="text" name="userName" id="userName" value="{{ filters.userName ?? '' }}" class="form-control">
            </div>

            <div>
                <label for="dateFrom">Von Datum:</label>
                <input type="date" name="dateFrom" id="dateFrom" value="{{ filters.dateFrom ?? '' }}" class="form-control">
            </div>

            <div>
                <label for="dateTo">Bis Datum:</label>
                <input type="date" name="dateTo" id="dateTo" value="{{ filters.dateTo ?? '' }}" class="form-control">
            </div>
        </div>

        <div class="d-flex gap-1">
            <button type="submit" class="btn btn-primary">Filtern</button>
            <a href="{{ path('app_audit_log_index') }}" class="btn">Filter zurücksetzen</a>
            <a href="{{ path('app_audit_log_statistics') }}" class="btn">Statistiken</a>
        </div>
    </form>
</div>

{% if auditLogs|length > 0 %}
<div class="mt-2">
    <h2>Protokolleinträge</h2>

    {# Tab Navigation #}
    <ul class="nav nav-tabs mt-md" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active"
                    data-bs-toggle="tab"
                    data-bs-target="#table-view"
                    type="button"
                    role="tab">
                <i class="bi bi-table"></i> Tabelle
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link"
                    data-bs-toggle="tab"
                    data-bs-target="#timeline-view"
                    type="button"
                    role="tab">
                <i class="bi bi-clock-history"></i> Timeline
            </button>
        </li>
    </ul>

    {# Tab Content #}
    <div class="tab-content mt-md">
        {# Table View #}
        <div class="tab-pane fade show active" id="table-view" role="tabpanel">
            <table class="table table-full">
                <thead>
                    <tr>
                        <th scope="col" class="table-cell text-left">Zeitstempel</th>
                        <th scope="col" class="table-cell text-left">Aktion</th>
                        <th scope="col" class="table-cell text-left">Entität</th>
                        <th scope="col" class="table-cell text-left">Benutzer</th>
                        <th scope="col" class="table-cell text-left">Beschreibung</th>
                        <th scope="col" class="table-cell text-left">Details</th>
                    </tr>
                </thead>
                <tbody>
                    {% for log in auditLogs %}
                    <tr>
                        <td class="table-cell text-sm">
                            {{ log.createdAt|date('d.m.Y H:i:s') }}
                        </td>
                        <td class="table-cell">
                            <span class="badge badge-{{ log.action }}">{{ log.action|capitalize }}</span>
                        </td>
                        <td class="table-cell">
                            {{ log.entityType }}
                            {% if log.entityId %}
                                <a href="{{ path('app_audit_log_entity', {entityType: log.entityType, entityId: log.entityId}) }}"
                                   class="link-primary">
                                    (#{{ log.entityId }})
                                </a>
                            {% endif %}
                        </td>
                        <td class="table-cell">
                            <a href="{{ path('app_audit_log_user', {userName: log.userName}) }}"
                               class="link-primary">
                                {{ log.userName }}
                            </a>
                        </td>
                        <td class="table-cell text-sm">
                            {{ log.description|default('-') }}
                        </td>
                        <td class="table-cell">
                            <a href="{{ path('app_audit_log_detail', {id: log.id}) }}"
                               class="link-primary">
                                Details anzeigen
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {# Timeline View #}
        <div class="tab-pane fade" id="timeline-view" role="tabpanel">
            {% include '_components/_audit_timeline.html.twig' with {
                auditLogs: auditLogs
            } %}
        </div>
    </div>

    {% if totalPages > 1 %}
    <div class="mt-2 text-center">
        <div class="pagination">
            {% if currentPage > 1 %}
                <a href="{{ path('app_audit_log_index', filters|merge({page: currentPage - 1})) }}">« Zurück</a>
            {% endif %}

            <span class="mx-1rem">Seite {{ currentPage }} von {{ totalPages }}</span>

            {% if currentPage < totalPages %}
                <a href="{{ path('app_audit_log_index', filters|merge({page: currentPage + 1})) }}">Weiter »</a>
            {% endif %}
        </div>
    </div>
    {% endif %}
</div>
{% else %}
<div class="info-box mt-2">
    <p>Keine Protokolleinträge gefunden.</p>
</div>
{% endif %}
{% endblock %}

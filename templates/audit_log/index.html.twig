{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'audit_log' %}

{% block admin_title %}{{ 'audit_log.page.title'|trans({}, 'audits') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'audit_log.page.subtitle'|trans({}, 'audits') }}</p>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .pagination a {
            padding: 0.5rem 1rem;
            background: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            margin: 0 0.25rem;
            transition: all 0.3s ease;
        }
        .pagination a:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

        /* Dark Mode Pagination */
        [data-theme="dark"] .pagination a {
            background: #06b6d4;
            box-shadow: 0 0 8px rgba(6, 182, 212, 0.3);
        }
        [data-theme="dark"] .pagination a:hover {
            background: #0891b2;
            box-shadow: 0 0 12px rgba(6, 182, 212, 0.5);
        }
    </style>
{% endblock %}

{% block admin_content %}

<div class="info-box">
    <h3>{{ 'audit_log.section.statistics'|trans({}, 'audits') }}</h3>
    <p><strong>{{ 'audit_log.stats.total_logs'|trans({}, 'audits') }}:</strong> {{ totalLogs }}</p>
    <p><strong>{{ 'audit_log.stats.last_24h'|trans({}, 'audits') }}:</strong> {{ recentActivity|length }} {{ 'common.activities'|trans({}, 'messages') }}</p>

    {% if actionStats|length > 0 %}
    <p><strong>{{ 'audit_log.stats.actions'|trans({}, 'audits') }}:</strong></p>
    <ul>
        {% for stat in actionStats %}
        <li>{{ stat.action|capitalize }}: {{ stat.count }}</li>
        {% endfor %}
    </ul>
    {% endif %}

    {% if entityTypeStats|length > 0 %}
    <p><strong>{{ 'audit_log.stats.entity_types'|trans({}, 'audits') }}:</strong></p>
    <ul>
        {% for stat in entityTypeStats %}
        <li>{{ stat.entityType }}: {{ stat.count }}</li>
        {% endfor %}
    </ul>
    {% endif %}
</div>

{# Skip link for filters section - WCAG 2.4.1 #}
<a href="#filter-section" class="skip-link">{{ 'accessibility.skip_to_filters'|trans({}, 'messages') }}</a>

<div class="filter-container" id="filter-section" tabindex="-1">
    <h3>{{ 'audit_log.section.filters'|trans({}, 'audits') }}</h3>
    <form method="get" action="{{ path('app_audit_log_index') }}" role="search" aria-label="{{ 'audit_log.section.filters'|trans({}, 'audits') }}">
        <div class="d-grid grid-responsive-200 gap-1 mb-md">
            <div>
                <label for="entityType">{{ 'audit_log.filter.entity_type'|trans({}, 'audits') }}:</label>
                <select name="entityType" id="entityType" class="form-control">
                    <option value="">{{ 'common.all'|trans({}, 'messages') }}</option>
                    {% for entityType in entityTypes %}
                    <option value="{{ entityType }}" {% if filters.entityType|default('') == entityType %}selected{% endif %}>
                        {{ entityType }}
                    </option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="action">{{ 'audit_log.filter.action'|trans({}, 'audits') }}:</label>
                <select name="action" id="action" class="form-control">
                    <option value="">{{ 'common.all'|trans({}, 'messages') }}</option>
                    {% for action in actions %}
                    <option value="{{ action }}" {% if filters.action|default('') == action %}selected{% endif %}>
                        {{ action|capitalize }}
                    </option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="userName">{{ 'audit_log.filter.user'|trans({}, 'audits') }}:</label>
                <input type="text" name="userName" id="userName" value="{{ filters.userName ?? '' }}" class="form-control">
            </div>

            <div>
                <label for="dateFrom">{{ 'audit_log.filter.date_from'|trans({}, 'audits') }}:</label>
                <input type="date" name="dateFrom" id="dateFrom" value="{{ filters.dateFrom ?? '' }}" class="form-control">
            </div>

            <div>
                <label for="dateTo">{{ 'audit_log.filter.date_to'|trans({}, 'audits') }}:</label>
                <input type="date" name="dateTo" id="dateTo" value="{{ filters.dateTo ?? '' }}" class="form-control">
            </div>
        </div>

        <div class="d-flex gap-1">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-funnel"></i> {{ 'audit_log.filter.apply'|trans({}, 'audits') }}
            </button>
            <a href="{{ path('app_audit_log_index') }}" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> {{ 'audit_log.filter.reset'|trans({}, 'audits') }}
            </a>
            <a href="{{ path('app_audit_log_statistics') }}" class="btn btn-outline-primary">
                <i class="bi bi-graph-up"></i> {{ 'audit_log.filter.statistics'|trans({}, 'audits') }}
            </a>
        </div>
    </form>
</div>

{% if auditLogs|length > 0 %}
<div class="mt-2">
    <h2>{{ 'audit_log.section.entries'|trans({}, 'audits') }}</h2>

    {# Tab Navigation #}
    <ul class="nav nav-tabs mt-md" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active"
                    data-bs-toggle="tab"
                    data-bs-target="#table-view"
                    type="button"
                    role="tab">
                <i class="bi bi-table"></i> {{ 'audit_log.section.table'|trans({}, 'audits') }}
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link"
                    data-bs-toggle="tab"
                    data-bs-target="#timeline-view"
                    type="button"
                    role="tab">
                <i class="bi bi-clock-history"></i> {{ 'audit_log.section.timeline'|trans({}, 'audits') }}
            </button>
        </li>
    </ul>

    {# Tab Content #}
    <div class="tab-content mt-md">
        {# Table View #}
        <div class="tab-pane fade show active" id="table-view" role="tabpanel">
            {% embed '_components/_table.html.twig' with {
                'class': 'table-full'
            } %}
                {% block table_head %}
                    <tr>
                        <th scope="col" class="table-cell text-left">{{ 'audit_log.table.timestamp'|trans({}, 'audits') }}</th>
                        <th scope="col" class="table-cell text-left">{{ 'audit_log.table.action'|trans({}, 'audits') }}</th>
                        <th scope="col" class="table-cell text-left">{{ 'audit_log.table.entity'|trans({}, 'audits') }}</th>
                        <th scope="col" class="table-cell text-left">{{ 'audit_log.table.user'|trans({}, 'audits') }}</th>
                        <th scope="col" class="table-cell text-left">{{ 'audit_log.table.description'|trans({}, 'audits') }}</th>
                        <th scope="col" class="table-cell text-left">{{ 'audit_log.table.details'|trans({}, 'audits') }}</th>
                    </tr>
                {% endblock %}
                {% block table_body %}
                    {% for log in auditLogs %}
                    <tr>
                        <td class="table-cell text-sm">
                            {{ log.createdAt|date('d.m.Y H:i:s') }}
                        </td>
                        <td class="table-cell">
                            <span class="badge badge-{{ log.action }}">{{ log.action|capitalize }}</span>
                        </td>
                        <td class="table-cell">
                            {{ log.entityType }}
                            {% if log.entityId %}
                                <a href="{{ path('app_audit_log_entity', {entityType: log.entityType, entityId: log.entityId}) }}"
                                   class="link-primary">
                                    (#{{ log.entityId }})
                                </a>
                            {% endif %}
                        </td>
                        <td class="table-cell">
                            <a href="{{ path('app_audit_log_user', {userName: log.userName}) }}"
                               class="link-primary">
                                {{ log.userName }}
                            </a>
                        </td>
                        <td class="table-cell text-sm">
                            {{ log.description|default('-') }}
                        </td>
                        <td class="table-cell">
                            <a href="{{ path('app_audit_log_detail', {id: log.id}) }}"
                               class="link-primary">
                                {{ 'audit_log.table.view_details'|trans({}, 'audits') }}
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                {% endblock %}
            {% endembed %}
        </div>

        {# Timeline View #}
        <div class="tab-pane fade" id="timeline-view" role="tabpanel">
            {% include '_components/_audit_timeline.html.twig' with {
                auditLogs: auditLogs
            } %}
        </div>
    </div>

    {% if totalPages > 1 %}
    <div class="mt-2 text-center">
        <div class="pagination">
            {% if currentPage > 1 %}
                <a href="{{ path('app_audit_log_index', filters|merge({page: currentPage - 1})) }}">{{ 'audit_log.pagination.prev'|trans({}, 'audits') }}</a>
            {% endif %}

            <span class="mx-1rem">{{ 'audit_log.pagination.page_counter'|trans({'%current%': currentPage, '%total%': totalPages}, 'audits') }}</span>

            {% if currentPage < totalPages %}
                <a href="{{ path('app_audit_log_index', filters|merge({page: currentPage + 1})) }}">{{ 'audit_log.pagination.next'|trans({}, 'audits') }}</a>
            {% endif %}
        </div>
    </div>
    {% endif %}
</div>
{% else %}
<div class="alert alert-info mt-2" role="status">
    {{ 'audit_log.message.no_entries'|trans({}, 'audits') }}
</div>
{% endif %}
{% endblock %}

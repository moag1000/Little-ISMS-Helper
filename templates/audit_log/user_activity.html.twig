{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Benutzeraktivität{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">Aktivitätsverlauf eines Benutzers</p>
{% endblock %}


{% block admin_content %}
<p>
    <a href="{{ path('app_audit_log_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back_to_overview'|trans({}, 'messages') }}
    </a>
</p>

<div class="info-box">
    <h2>Benutzer: {{ userName }}</h2>
    <p><strong>Anzahl Aktivitäten:</strong> {{ auditLogs|length }}</p>
</div>

{% if auditLogs|length > 0 %}
<div class="mt-4">
    <h2>Aktivitätsverlauf</h2>

    <div class="mt-3">
    {% embed '_components/_table.html.twig' with {
        'noMargin': true,
        'responsive': true,
        'theadClass': 'table-light'
    } %}
        {% block table_head %}
            <tr>
                <th scope="col" class="table-cell text-left">Zeitstempel</th>
                <th scope="col" class="table-cell text-left">Aktion</th>
                <th scope="col" class="table-cell text-left">Entität</th>
                <th scope="col" class="table-cell text-left">Beschreibung</th>
                <th scope="col" class="table-cell text-left">Details</th>
            </tr>
        {% endblock %}
        {% block table_body %}
            {% for log in auditLogs %}
            <tr>
                <td class="table-cell small">
                    {{ log.createdAt|date('d.m.Y H:i:s') }}
                </td>
                <td class="table-cell">
                    <span class="badge badge-{{ log.action }}">{{ log.action|capitalize }}</span>
                </td>
                <td class="table-cell">
                    {{ log.entityType }}
                    {% if log.entityId %}
                        <a href="{{ path('app_audit_log_entity', {entityType: log.entityType, entityId: log.entityId}) }}"
                           class="link-primary">
                            (#{{ log.entityId }})
                        </a>
                    {% endif %}
                </td>
                <td class="table-cell small">
                    {{ log.description|default('-') }}
                </td>
                <td class="table-cell">
                    <a href="{{ path('app_audit_log_detail', {id: log.id}) }}"
                       class="link-primary">
                        Details anzeigen
                    </a>
                </td>
            </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}
    </div>
</div>
{% else %}
<div class="info-box mt-4">
    <p>Keine Aktivitäten für diesen Benutzer gefunden.</p>
</div>
{% endif %}

{% endblock %}

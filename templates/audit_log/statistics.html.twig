{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Audit Log Statistiken{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">Statistische Auswertung der Protokolleinträge</p>
{% endblock %}

{% block admin_content %}
<p>
    <a href="{{ path('app_audit_log_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left" aria-hidden="true"></i> Zurück zur Übersicht
    </a>
</p>

<div class="info-box">
    <h3>Gesamtstatistik</h3>
    <p><strong>Gesamt Protokolleinträge:</strong> {{ totalLogs }}</p>
</div>

<div class="grid-2-col-gap-mt">
    <div class="info-box">
        <h3>Aktionen</h3>
        {% if actionStats|length > 0 %}
        <table class="table-stats">
            <thead>
                <tr class="tr-header">
                    <th scope="col" class="th-stats-left">Aktion</th>
                    <th scope="col" class="td-stats-right">Anzahl</th>
                    <th scope="col" class="td-stats-right">Anteil</th>
                </tr>
            </thead>
            <tbody>
                {% for stat in actionStats %}
                <tr>
                    <td class="td-stats">
                        <span class="badge badge-{{ stat.action }}">{{ stat.action|capitalize }}</span>
                    </td>
                    <td class="td-stats-right">
                        {{ stat.count }}
                    </td>
                    <td class="td-stats-right">
                        {{ ((stat.count / totalLogs) * 100)|number_format(1) }}%
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <p>Keine Daten verfügbar</p>
        {% endif %}
    </div>

    <div class="info-box">
        <h3>Entitätstypen</h3>
        {% if entityTypeStats|length > 0 %}
        <table class="table-stats">
            <thead>
                <tr class="tr-header">
                    <th scope="col" class="th-stats-left">Entitätstyp</th>
                    <th scope="col" class="td-stats-right">Anzahl</th>
                    <th scope="col" class="td-stats-right">Anteil</th>
                </tr>
            </thead>
            <tbody>
                {% for stat in entityTypeStats %}
                <tr>
                    <td class="td-stats">
                        {{ stat.entityType }}
                    </td>
                    <td class="td-stats-right">
                        {{ stat.count }}
                    </td>
                    <td class="td-stats-right">
                        {{ ((stat.count / totalLogs) * 100)|number_format(1) }}%
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <p>Keine Daten verfügbar</p>
        {% endif %}
    </div>
</div>

<div class="info-box mt-2">
    <h3>Aktivität der letzten 30 Tage</h3>
    {% if activityByDay|length > 0 %}
    <div class="chart-container">
        <svg viewBox="0 0 900 300" class="w-h-100">
            {% set maxValue = max(activityByDay) %}
            {% set barWidth = 900 / activityByDay|length %}
            {% set i = 0 %}
            {% for date, count in activityByDay %}
                {% set barHeight = maxValue > 0 ? (count / maxValue * 250) : 0 %}
                {% set x = i * barWidth %}
                {% set y = 250 - barHeight %}

                <rect x="{{ x + 2 }}" y="{{ y }}" width="{{ barWidth - 4 }}" height="{{ barHeight }}"
                      fill="#007bff" opacity="0.8">
                    <title>{{ date }}: {{ count }} Einträge</title>
                </rect>

                {% if i % 5 == 0 %}
                    <text x="{{ x + barWidth/2 }}" y="280" text-anchor="middle" font-size="10" fill="#666">
                        {{ date|slice(5) }}
                    </text>
                {% endif %}

                {% set i = i + 1 %}
            {% endfor %}

            <line x1="0" y1="250" x2="900" y2="250" stroke="#ccc" stroke-width="1"/>
        </svg>
    </div>
    {% else %}
    <p>Keine Daten verfügbar</p>
    {% endif %}
</div>

{% endblock %}

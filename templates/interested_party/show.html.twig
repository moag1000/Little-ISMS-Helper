{% extends 'base.html.twig' %}
{% trans_default_domain 'interested_parties' %}

{% block title %}{{ 'interested_party.page.show_title'|trans({}, 'interested_parties') }}: {{ interested_party.name }}{% endblock %}

{% block body %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.interested_parties'|trans({}, 'nav'), url: path('app_interested_party_index') },
            { label: interested_party.name }
        ]
    } %}

    <div class="page-header">
        <h1>{{ interested_party.name }}</h1>
        <div class="actions">
            <a href="{{ path('app_interested_party_edit', {id: interested_party.id}) }}" class="btn btn-primary"><i class="bi bi-pencil" aria-hidden="true"></i> {{ 'common.edit'|trans({}, 'messages') }}</a>
            <a href="{{ path('app_interested_party_index') }}" class="btn btn-secondary">{{ 'common.back_to_list'|trans({}, 'messages') }}</a>
            {% if is_granted('ROLE_ADMIN') %}
                <form method="post" action="{{ path('app_interested_party_delete', {id: interested_party.id}) }}" style="display:inline;"
                      data-controller="ui-actions"
                      data-action="submit->ui-actions#confirm"
                      data-ui-actions-message-param="{{ 'interested_party.confirm.delete'|trans({}, 'interested_parties') }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ interested_party.id) }}">
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash" aria-hidden="true"></i> {{ 'common.delete'|trans({}, 'messages') }}</button>
                </form>
            {% endif %}
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>{{ 'interested_party.page.show_title'|trans({}, 'interested_parties') }}</h2>
            <div>
                <span class="badge badge-{{ interested_party.partyType }}">{{ interested_party.partyType }}</span>
                <span class="badge badge-{{ interested_party.importance }}">{{ interested_party.importance|upper }}</span>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <strong>{{ 'interested_party.engagement_score'|trans({}, 'interested_parties') }}: {{ interested_party.getEngagementScore() }}</strong>
            </div>

            {% if interested_party.description %}
            <div class="detail-section">
                <h3>{{ 'interested_party.field.description'|trans({}, 'interested_parties') }}</h3>
                <p>{{ interested_party.description }}</p>
            </div>
            {% endif %}

            <div class="detail-section">
                <h3>{{ 'interested_party.section.contact_info'|trans({}, 'interested_parties') }}</h3>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">{{ 'interested_party.field.contact_person'|trans({}, 'interested_parties') }}:</span>
                        <span class="value">{{ interested_party.contactPerson ?? 'common.not_available'|trans({}, 'messages') }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">{{ 'interested_party.field.email'|trans({}, 'interested_parties') }}:</span>
                        <span class="value">{{ interested_party.email ?? 'common.not_available'|trans({}, 'messages') }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">{{ 'interested_party.field.phone'|trans({}, 'interested_parties') }}:</span>
                        <span class="value">{{ interested_party.phone ?? 'common.not_available'|trans({}, 'messages') }}</span>
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <h3>{{ 'interested_party.section.requirements'|trans({}, 'interested_parties') }}</h3>
                <p>{{ interested_party.requirements }}</p>
                {% if interested_party.howAddressed %}
                <div class="fw-bold mt-3">{{ 'interested_party.field.how_addressed'|trans({}, 'interested_parties') }}</div>
                <p>{{ interested_party.howAddressed }}</p>
                {% endif %}
            </div>

            <div class="detail-section">
                <h3>{{ 'interested_party.section.communication'|trans({}, 'interested_parties') }}</h3>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">{{ 'interested_party.field.communication_frequency'|trans({}, 'interested_parties') }}:</span>
                        <span class="value">{{ interested_party.communicationFrequency ?? 'common.not_available'|trans({}, 'messages') }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">{{ 'interested_party.field.communication_method'|trans({}, 'interested_parties') }}:</span>
                        <span class="value">{{ interested_party.communicationMethod ?? 'common.not_available'|trans({}, 'messages') }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">{{ 'interested_party.field.last_communication'|trans({}, 'interested_parties') }}:</span>
                        <span class="value">{{ interested_party.lastCommunication ? interested_party.lastCommunication|date('Y-m-d') : 'interested_party.never'|trans({}, 'interested_parties') }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">{{ 'interested_party.field.next_communication'|trans({}, 'interested_parties') }}:</span>
                        <span class="value {{ interested_party.isCommunicationOverdue() ? 'text-danger' : '' }}">
                            {{ interested_party.nextCommunication ? interested_party.nextCommunication|date('Y-m-d') : 'interested_party.not_scheduled'|trans({}, 'interested_parties') }}
                            {{ interested_party.isCommunicationOverdue() ? '<i class="bi bi-exclamation-triangle" aria-hidden="true"></i> ' ~ ('interested_party.badge.overdue'|trans({}, 'interested_parties')) : '' }}
                        </span>
                    </div>
                </div>
            </div>

            {% if interested_party.feedback %}
            <div class="detail-section">
                <h3>{{ 'interested_party.section.feedback'|trans({}, 'interested_parties') }}</h3>
                <p>{{ interested_party.feedback }}</p>
            </div>
            {% endif %}

            {% if interested_party.satisfactionLevel %}
            <div class="detail-section">
                <h3>{{ 'interested_party.field.satisfaction_level'|trans({}, 'interested_parties') }}</h3>
                <div class="value-bar">
                    <div class="bar" style="width: {{ (interested_party.satisfactionLevel / 5 * 100) }}%"></div>
                </div>
                <span>{{ interested_party.satisfactionLevel }}/5</span>
            </div>
            {% endif %}

            {% if interested_party.issues %}
            <div class="alert alert-warning">
                <strong>{{ 'interested_party.field.issues'|trans({}, 'interested_parties') }}:</strong>
                <p>{{ interested_party.issues }}</p>
            </div>
            {% endif %}

            <div class="detail-section">
                <p class="text-muted">
                    {{ 'common.created_at'|trans({}, 'messages') }}: {{ interested_party.createdAt|date('Y-m-d H:i') }}
                    {% if interested_party.updatedAt %}| {{ 'common.updated_at'|trans({}, 'messages') }}: {{ interested_party.updatedAt|date('Y-m-d H:i') }}{% endif %}
                </p>
            </div>
        </div>
    </div>
</div>

<style>
.text-danger { color: #dc2626; font-weight: bold; }
.text-muted { color: #6b7280; font-size: 0.875rem; }
.value-bar { height: 24px; background: #e5e7eb; border-radius: 4px; overflow: hidden; margin: 0.5rem 0; }
.value-bar .bar { height: 100%; background: linear-gradient(90deg, #10b981, #059669); }
</style>
{% endblock %}

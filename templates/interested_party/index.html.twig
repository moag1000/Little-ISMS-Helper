{% extends 'base.html.twig' %}
{% trans_default_domain 'interested_parties' %}

{% block title %}{{ 'interested_party.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>{{ 'interested_party.page.title'|trans({}, 'messages') }}</h1>
        <a href="{{ path('app_interested_party_new') }}" class="btn btn-primary">{{ 'interested_party.action.add_new'|trans({}, 'messages') }}</a>
    </div>

    <p class="text-muted mb-4">
        {{ 'interested_party.iso_reference'|trans({}, 'messages') }}
    </p>

    {% if overdue_communications|length > 0 %}
    <div class="alert alert-warning">
        <h2>âš ï¸ {{ 'interested_party.alert.overdue_communications'|trans({}, 'messages') }}</h2>
        <ul>
            {% for party in overdue_communications %}
            <li>
                <a href="{{ path('app_interested_party_show', {id: party.id}) }}">{{ party.name }}</a>
                ({{ party.partyType }}) - {{ 'interested_party.next_communication'|trans({}, 'messages') }}: {{ party.nextCommunication|date('Y-m-d') }}
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

    {% if high_importance|length > 0 %}
    <div class="info-box">
        <h2>{{ 'interested_party.high_importance.title'|trans({}, 'messages') }}</h3>
        <ul>
            {% for party in high_importance %}
            <li>
                <a href="{{ path('app_interested_party_show', {id: party.id}) }}">{{ party.name }}</a>
                ({{ party.partyType }}) - {{ 'interested_party.engagement_score'|trans({}, 'messages') }}: {{ party.getEngagementScore() }}
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

    <div class="card">
        <div class="card-header">
            <h2>{{ 'interested_party.list.title'|trans({'count': interested_parties|length}, 'interested_parties') }}</h2>
        </div>
        <div class="card-content">
            {% if interested_parties|length > 0 %}
            {% embed '_components/_table.html.twig' with {
                'wrapperClass': 'card-content',
                'noMargin': true
            } %}
                {% block table_head %}
                    <tr>
                        <th scope="col">{{ 'interested_party.table.name'|trans({}, 'messages') }}</th>
                        <th scope="col">{{ 'interested_party.table.type'|trans({}, 'messages') }}</th>
                        <th scope="col">{{ 'interested_party.table.importance'|trans({}, 'messages') }}</th>
                        <th scope="col">{{ 'interested_party.table.engagement_score'|trans({}, 'messages') }}</th>
                        <th scope="col">{{ 'interested_party.table.last_communication'|trans({}, 'messages') }}</th>
                        <th scope="col">{{ 'interested_party.table.actions'|trans({}, 'messages') }}</th>
                    </tr>
                {% endblock %}
                {% block table_body %}
                    {% for party in interested_parties %}
                    <tr>
                        <td><a href="{{ path('app_interested_party_show', {id: party.id}) }}">{{ party.name }}</a></td>
                        <td><span class="badge bg-info">{{ party.partyType }}</span></td>
                        <td><span class="badge badge-{{ party.importance }}">{{ party.importance|upper }}</span></td>
                        <td>{{ party.getEngagementScore() }}</td>
                        <td>{{ party.lastCommunication ? party.lastCommunication|date('Y-m-d') : ('interested_party.never'|trans({}, 'messages')) }}</td>
                        <td>
                            <a href="{{ path('app_interested_party_show', {id: party.id}) }}" class="btn btn-sm btn-secondary">{{ 'interested_party.action.view'|trans({}, 'messages') }}</a>
                            <a href="{{ path('app_interested_party_edit', {id: party.id}) }}" class="btn btn-sm btn-primary">{{ 'interested_party.action.edit'|trans({}, 'messages') }}</a>
                        </td>
                    </tr>
                    {% endfor %}
                {% endblock %}
            {% endembed %}
            {% else %}
            <p>{{ 'interested_party.empty.message'|trans({}, 'messages') }} <a href="{{ path('app_interested_party_new') }}">{{ 'interested_party.empty.add_first'|trans({}, 'messages') }}</a>.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

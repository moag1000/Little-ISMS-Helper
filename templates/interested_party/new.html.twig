{% extends 'base.html.twig' %}
{% trans_default_domain 'interested_parties' %}

{% block title %}{{ 'interested_party.page.new_title'|trans }}{% endblock %}

{% block body %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.interested_parties'|trans({}, 'nav'), url: path('app_interested_party_index') },
            { label: 'interested_party.page.new_title'|trans }
        ]
    } %}

    <div class="page-header">
        <h1>{{ 'interested_party.page.new_title'|trans }}</h1>
        <a href="{{ path('app_interested_party_index') }}" class="btn btn-secondary">{{ 'common.back_to_list'|trans({}, 'messages') }}</a>
    </div>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                {% include '_components/_auto_form.html.twig' with {
                    'form': form,
                    'sections': {
                        'basic_info': {
                            'label': 'interested_party.section.basic_info'|trans,
                            'fields': ['name', 'partyType', 'importance', 'description']
                        },
                        'contact_info': {
                            'label': 'interested_party.section.contact_info'|trans,
                            'fields': ['contactPerson', 'email', 'phone']
                        },
                        'requirements': {
                            'label': 'interested_party.section.requirements'|trans,
                            'fields': ['requirements', 'howAddressed']
                        },
                        'communication': {
                            'label': 'interested_party.section.communication'|trans,
                            'fields': ['communicationFrequency', 'communicationMethod', 'lastCommunication', 'nextCommunication']
                        },
                        'feedback': {
                            'label': 'interested_party.section.feedback'|trans,
                            'fields': ['feedback', 'satisfactionLevel', 'issues']
                        }
                    },
                    'col_widths': {
                        'name': 4,
                        'partyType': 4,
                        'importance': 4,
                        'description': 12,
                        'contactPerson': 4,
                        'email': 4,
                        'phone': 4,
                        'requirements': 12,
                        'howAddressed': 12,
                        'communicationFrequency': 6,
                        'communicationMethod': 6,
                        'lastCommunication': 6,
                        'nextCommunication': 6,
                        'feedback': 12,
                        'satisfactionLevel': 6,
                        'issues': 6
                    }
                } %}

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_interested_party_index') }}" class="btn btn-secondary">
                        {{ 'common.cancel'|trans({}, 'messages') }}
                    </a>
                    <button type="submit" class="btn btn-primary">
                        {{ 'interested_party.action.create'|trans }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

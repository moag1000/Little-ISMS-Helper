{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'session.list'|trans({}, 'session') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'session.subtitle'|trans({}, 'session') }}</p>
{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item active" aria-current="page">{{ 'admin.nav.sessions'|trans({}, 'admin') }}</li>
{% endblock %}

{% block admin_content %}
    {# Statistics Cards #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">{{ 'session.statistics.total'|trans({}, 'session') }}</h5>
                    <p class="display-6 text-primary">{{ statistics.total_active }}</p>
                    <small>{{ 'session.statistics.active_sessions'|trans({}, 'session') }}</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">{{ 'session.statistics.today'|trans({}, 'session') }}</h5>
                    <p class="display-6 text-success">{{ statistics.total_last_24h }}</p>
                    <small>{{ 'session.statistics.last_24h'|trans({}, 'session') }}</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">{{ 'session.statistics.unique_users'|trans({}, 'session') }}</h5>
                    <p class="display-6 text-info">{{ statistics.unique_users }}</p>
                    <small>{{ 'session.statistics.active_users'|trans({}, 'session') }}</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">{{ 'session.statistics.limit_per_user'|trans({}, 'session') }}</h5>
                    <p class="display-6 text-warning">{{ statistics.max_concurrent }}</p>
                    <small>{{ 'session.statistics.max_concurrent'|trans({}, 'session') }}</small>
                </div>
            </div>
        </div>
    </div>

    {# User Filter #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-auto">
                    <label for="email" class="col-form-label">{{ 'session.filter.by_user'|trans({}, 'session') }}</label>
                </div>
                <div class="col-md-4">
                    <input type="text"
                           name="email"
                           id="email"
                           class="form-control"
                           placeholder="{{ 'session.filter.email_placeholder'|trans({}, 'session') }}"
                           value="{{ search_email ?? '' }}">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search" aria-hidden="true"></i> {{ 'common.filter'|trans({}, 'messages') }}
                    </button>
                    {% if search_email %}
                        <a href="{{ path('session_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x" aria-hidden="true"></i> {{ 'common.reset'|trans({}, 'messages') }}
                        </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>

    {# Active Sessions Table #}
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-list-ul" aria-hidden="true"></i> {{ 'session.active_sessions'|trans({}, 'session') }}
            </h3>
        </div>
        <div class="card-body">
            {% if sessions|length > 0 %}
            {% embed '_components/_table.html.twig' with {
                'class': 'table-hover',
                'noMargin': true
            } %}
                {% block table_head %}
                    <tr>
                        <th scope="col">{{ 'session.user_name'|trans({}, 'session') }}</th>
                        <th scope="col">{{ 'session.ip_address'|trans({}, 'session') }}</th>
                        <th scope="col">{{ 'session.user_agent'|trans({}, 'session') }}</th>
                        <th scope="col">{{ 'session.last_activity'|trans({}, 'session') }}</th>
                        <th scope="col">{{ 'session.session_start'|trans({}, 'session') }}</th>
                        <th scope="col">{{ 'session.duration'|trans({}, 'session') }}</th>
                        <th scope="col" class="text-end">{{ 'common.actions'|trans({}, 'messages') }}</th>
                    </tr>
                {% endblock %}
                {% block table_body %}
                    {% for session in sessions %}
                        <tr>
                            <td>
                                <i class="bi bi-person" aria-hidden="true"></i>
                                <strong>{{ session.user.firstName }} {{ session.user.lastName }}</strong>
                                <br>
                                <small class="text-muted">{{ session.user.email }}</small>
                            </td>
                            <td>
                                <code>{{ session.ipAddress ?? 'N/A' }}</code>
                            </td>
                            <td>
                                <small class="text-muted" title="{{ session.userAgent }}">
                                    {% if session.userAgent %}
                                        {% if 'Chrome' in session.userAgent %}
                                            <i class="bi bi-browser-chrome" aria-hidden="true"></i> Chrome
                                        {% elseif 'Firefox' in session.userAgent %}
                                            <i class="bi bi-browser-firefox" aria-hidden="true"></i> Firefox
                                        {% elseif 'Safari' in session.userAgent %}
                                            <i class="bi bi-browser-safari" aria-hidden="true"></i> Safari
                                        {% elseif 'Edge' in session.userAgent %}
                                            <i class="bi bi-browser-edge" aria-hidden="true"></i> Edge
                                        {% else %}
                                            <i class="bi bi-globe" aria-hidden="true"></i> {{ session.userAgent|slice(0, 20) }}...
                                        {% endif %}
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </small>
                            </td>
                            <td>
                                {% set minutes_ago = 'now'|date('U') - session.lastActivityAt.timestamp %}
                                {% set minutes = (minutes_ago / 60)|round %}
                                {% if minutes < 1 %}
                                    <span class="badge bg-success">{{ 'session.status.active_now'|trans({}, 'session') }}</span>
                                {% elseif minutes < 5 %}
                                    <span class="badge bg-info">{{ 'session.status.minutes_ago'|trans({'%minutes%': minutes}, 'session') }}</span>
                                {% elseif minutes < 60 %}
                                    <span class="text-muted">{{ 'session.status.minutes_ago'|trans({'%minutes%': minutes}, 'session') }}</span>
                                {% else %}
                                    <span class="text-muted">{{ session.lastActivityAt|date('d.m.Y H:i') }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <small class="text-muted">{{ session.createdAt|date('d.m.Y H:i') }}</small>
                            </td>
                            <td>
                                <span class="badge bg-secondary">{{ session.formattedDuration }}</span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group" aria-label="{{ 'common.actions'|trans({}, 'messages') }}">
                                    <a href="{{ path('session_show', {userName: session.user.email}) }}"
                                       class="btn btn-outline-primary"
                                       title="{{ 'common.view_details'|trans({}, 'messages') }}" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                        <i class="bi bi-eye" aria-hidden="true"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('session_terminate_single', {sessionId: session.sessionId}) }}"
                                          style="display: inline;"
                                          data-controller="ui-actions"
                                          data-action="submit->ui-actions#confirm"
                                          data-ui-actions-message-param="{{ 'session.confirm.terminate'|trans({}, 'session') }}">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('terminate_single_' ~ session.sessionId) }}">
                                        <button type="submit"
                                                class="btn btn-outline-danger"
                                                title="{{ 'session.action.terminate'|trans({}, 'session') }}"
                                                aria-label="{{ 'common.close'|trans({}, 'messages') }}">
                                            <i class="bi bi-x-circle" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% endblock %}
            {% endembed %}
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle" aria-hidden="true"></i>
                    {{ 'session.no_sessions_found'|trans({}, 'session') }}
                </div>
            {% endif %}
        </div>
    </div>

    {# Info Box #}
    <div class="alert alert-success mt-4">
        <i class="bi bi-check-circle" aria-hidden="true"></i>
        {{ 'session.info_box'|trans({'%max_concurrent%': statistics.max_concurrent}, 'session') }}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'session.list'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-clock-history"></i> {{ 'session.list'|trans }}</h1>
    </div>

    {# Statistics Cards #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">{{ 'session.statistics.total'|trans }}</h5>
                    <p class="display-6 text-primary">{{ statistics.total_active }}</p>
                    <small>Aktive Sitzungen</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">{{ 'session.statistics.today'|trans }}</h5>
                    <p class="display-6 text-success">{{ statistics.total_last_24h }}</p>
                    <small>Letzte 24h</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Eindeutige Benutzer</h5>
                    <p class="display-6 text-info">{{ statistics.unique_users }}</p>
                    <small>Aktive Benutzer</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h5 class="card-title text-muted">Limit pro Benutzer</h5>
                    <p class="display-6 text-warning">{{ statistics.max_concurrent }}</p>
                    <small>Max. gleichzeitig</small>
                </div>
            </div>
        </div>
    </div>

    {# User Filter #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-auto">
                    <label for="email" class="col-form-label">Benutzer filtern:</label>
                </div>
                <div class="col-md-4">
                    <input type="text"
                           name="email"
                           id="email"
                           class="form-control"
                           placeholder="E-Mail-Adresse..."
                           value="{{ search_email ?? '' }}">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Filtern
                    </button>
                    {% if search_email %}
                        <a href="{{ path('session_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x"></i> Zurücksetzen
                        </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>

    {# Active Sessions Table #}
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Aktive Sitzungen
            </h5>
        </div>
        <div class="card-body">
            {% if sessions|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>{{ 'session.user_name'|trans }}</th>
                                <th>{{ 'session.ip_address'|trans }}</th>
                                <th>User Agent</th>
                                <th>{{ 'session.last_activity'|trans }}</th>
                                <th>{{ 'session.session_start'|trans }}</th>
                                <th>Dauer</th>
                                <th class="text-end">Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for session in sessions %}
                                <tr>
                                    <td>
                                        <i class="bi bi-person"></i>
                                        <strong>{{ session.user.firstName }} {{ session.user.lastName }}</strong>
                                        <br>
                                        <small class="text-muted">{{ session.user.email }}</small>
                                    </td>
                                    <td>
                                        <code>{{ session.ipAddress ?? 'N/A' }}</code>
                                    </td>
                                    <td>
                                        <small class="text-muted" title="{{ session.userAgent }}">
                                            {% if session.userAgent %}
                                                {% if 'Chrome' in session.userAgent %}
                                                    <i class="bi bi-browser-chrome"></i> Chrome
                                                {% elseif 'Firefox' in session.userAgent %}
                                                    <i class="bi bi-browser-firefox"></i> Firefox
                                                {% elseif 'Safari' in session.userAgent %}
                                                    <i class="bi bi-browser-safari"></i> Safari
                                                {% elseif 'Edge' in session.userAgent %}
                                                    <i class="bi bi-browser-edge"></i> Edge
                                                {% else %}
                                                    <i class="bi bi-globe"></i> {{ session.userAgent|slice(0, 20) }}...
                                                {% endif %}
                                            {% else %}
                                                N/A
                                            {% endif %}
                                        </small>
                                    </td>
                                    <td>
                                        {% set minutes_ago = 'now'|date('U') - session.lastActivityAt.timestamp %}
                                        {% set minutes = (minutes_ago / 60)|round %}
                                        {% if minutes < 1 %}
                                            <span class="badge bg-success">Jetzt aktiv</span>
                                        {% elseif minutes < 5 %}
                                            <span class="badge bg-info">vor {{ minutes }} Min.</span>
                                        {% elseif minutes < 60 %}
                                            <span class="text-muted">vor {{ minutes }} Min.</span>
                                        {% else %}
                                            <span class="text-muted">{{ session.lastActivityAt|date('d.m.Y H:i') }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small class="text-muted">{{ session.createdAt|date('d.m.Y H:i') }}</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">{{ session.formattedDuration }}</span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('session_show', {userName: session.user.email}) }}"
                                               class="btn btn-outline-primary"
                                               title="Details anzeigen">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <form method="post"
                                                  action="{{ path('session_terminate_single', {sessionId: session.sessionId}) }}"
                                                  style="display: inline;">
                                                <input type="hidden" name="_token"
                                                       value="{{ csrf_token('terminate_single_' ~ session.sessionId) }}">
                                                <button type="submit"
                                                        class="btn btn-outline-danger"
                                                        title="Session beenden"
                                                        onclick="return confirm('Möchten Sie diese Sitzung wirklich beenden?')">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    Keine aktiven Sitzungen im gewählten Zeitraum gefunden.
                </div>
            {% endif %}
        </div>
    </div>

    {# Info Box #}
    <div class="alert alert-success mt-4">
        <i class="bi bi-check-circle"></i>
        <strong>Session Management:</strong> Aktive Sitzungen werden in der Datenbank getrackt.
        Administratoren können Sitzungen einzeln oder für alle Benutzer beenden.
        Maximale gleichzeitige Sitzungen pro Benutzer: {{ statistics.max_concurrent }}
    </div>
</div>
{% endblock %}

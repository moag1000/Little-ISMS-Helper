{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ user_name }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'session.user_activity'|trans({}, 'session') }}</p>
{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('session_index') }}">{{ 'admin.nav.sessions'|trans({}, 'admin') }}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ user_name }}</li>
{% endblock %}

{% block admin_content %}
    <div class="mb-3">
        <a href="{{ path('session_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>

    {# Session Overview #}
    <div class="row mb-4">
        <div class="col-md-4">
            {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'primary' } %}
                {% block card_body %}
                    <div class="text-center">
                        <div class="card-title text-muted fw-semibold">Aktivitäten (7 Tage)</div>
                        <p class="display-6 text-primary">{{ total_activities }}</p>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-4">
            {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'info' } %}
                {% block card_body %}
                    <div class="text-center">
                        <div class="card-title text-muted fw-semibold">{{ 'session.unique_ips'|trans({}, 'session') }}</div>
                        <p class="display-6 text-info">{{ ip_addresses|length }}</p>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-4">
            {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'success' } %}
                {% block card_body %}
                    <div class="text-center">
                        <div class="card-title text-muted fw-semibold">{{ 'session.unique_devices'|trans({}, 'session') }}</div>
                        <p class="display-6 text-success">{{ user_agents|length }}</p>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    {# IP Addresses #}
    {% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
        {% block card_header %}
            <div class="card-header bg-info text-white">
                <h2 class="mb-0">
                    <i class="bi bi-geo-alt" aria-hidden="true"></i> IP-Adressen
                </h2>
            </div>
        {% endblock %}
        {% block card_body %}
            {% for ip in ip_addresses %}
                <code class="me-2">{{ ip }}</code>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    {# Activity Timeline #}
    {% embed '_components/_card.html.twig' %}
        {% block card_header %}
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">
                    <i class="bi bi-clock-history" aria-hidden="true"></i> {{ 'session.activity_timeline'|trans({}, 'session') }}
                </h2>
            </div>
        {% endblock %}
        {% block card_body %}
            {% if activity_timeline|length > 0 %}
                {% for date, daily_activities in activity_timeline|reverse %}
                    <div class="mb-4">
                        <div class="text-muted fw-semibold">
                            <i class="bi bi-calendar" aria-hidden="true"></i>
                            {{ date|date('d.m.Y') }}
                            {% include '_components/_badge.html.twig' with { variant: 'secondary', content: daily_activities|length } %}
                        </div>
                        <ul class="list-group">
                            {% for activity in daily_activities %}
                                <li class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div>
                                            {% include '_components/_badge.html.twig' with { variant: 'primary', content: activity.action } %}
                                            {% if activity.entityType %}
                                                <span class="text-muted">
                                                    {{ activity.entityType }}
                                                    {% if activity.entityId %}#{{ activity.entityId }}{% endif %}
                                                </span>
                                            {% endif %}
                                            {% if activity.description %}
                                                <p class="mb-1 mt-2 text-muted small">{{ activity.description }}</p>
                                            {% endif %}
                                        </div>
                                        <small class="text-muted">{{ activity.createdAt|date('H:i:s') }}</small>
                                    </div>
                                    {% if activity.ipAddress %}
                                        <small class="text-muted">
                                            <i class="bi bi-geo-alt" aria-hidden="true"></i> {{ activity.ipAddress }}
                                        </small>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle" aria-hidden="true"></i>
                    Keine Aktivitäten in den letzten 7 Tagen gefunden.
                </div>
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ tenant.name }}{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('tenant_management_index') }}">{{ 'tenant.title'|trans }}</a></li>
    <li class="breadcrumb-item active">{{ tenant.code }}</li>
{% endblock %}

{% block admin_content %}
    {# Tenant Header #}
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="d-flex align-items-start">
            {% if tenant.logoPath %}
                <img src="{{ asset(tenant.logoPath) }}"
                     alt="{{ tenant.name }}"
                     class="rounded me-3"
                     style="width: 80px; height: 80px; object-fit: contain; border: 1px solid #dee2e6;">
            {% else %}
                <div class="bg-light rounded d-flex align-items-center justify-content-center me-3"
                     style="width: 80px; height: 80px; border: 1px solid #dee2e6;">
                    <i class="bi bi-building text-muted fs-2" aria-hidden="true"></i>
                </div>
            {% endif %}
            <div>
                <h2>{{ tenant.name }}</h2>
                <p class="text-muted mb-2">
                    <code class="text-primary">{{ tenant.code }}</code>
                    {% if tenant.isActive %}
                        <span class="badge bg-success ms-2">
                            <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'tenant.status.active'|trans }}
                        </span>
                    {% else %}
                        <span class="badge bg-secondary ms-2">
                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'tenant.status.inactive'|trans }}
                        </span>
                    {% endif %}
                </p>
                {% if tenant.description %}
                    <p>{{ tenant.description }}</p>
                {% endif %}
            </div>
        </div>
        <div class="btn-group">
            <a href="{{ path('tenant_management_edit', {id: tenant.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'common.edit'|trans }}
            </a>
            <a href="{{ path('tenant_management_organisation_context', {id: tenant.id}) }}" class="btn btn-info">
                <i class="bi bi-building-gear" aria-hidden="true"></i> {{ 'tenant.organisation_context.title'|trans }}
            </a>
            <form method="post" action="{{ path('tenant_management_toggle', {id: tenant.id}) }}" class="d-inline">
                <button type="submit"
                        class="btn btn-{% if tenant.isActive %}warning{% else %}success{% endif %}"
                        onclick="return confirm('{{ 'tenant.confirm.toggle'|trans }}');">
                    <i class="bi bi-{% if tenant.isActive %}pause{% else %}play{% endif %}-circle" aria-hidden="true"></i>
                    {{ (tenant.isActive ? 'tenant.action.deactivate' : 'tenant.action.activate')|trans }}
                </button>
            </form>
        </div>
    </div>

    {# Statistics Cards #}
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-people text-primary fs-3" aria-hidden="true"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">{{ 'tenant.stats.total_users'|trans }}</h6>
                            <h3 class="mb-0">{{ userCount }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-person-check text-success fs-3" aria-hidden="true"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">{{ 'tenant.stats.active_users'|trans }}</h6>
                            <h3 class="mb-0">{{ activeUsers }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-secondary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-person-x text-secondary fs-3" aria-hidden="true"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">{{ 'tenant.stats.inactive_users'|trans }}</h6>
                            <h3 class="mb-0">{{ inactiveUsers }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Tab Navigation #}
    <ul class="nav nav-tabs mb-4" id="tenantTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab">
                <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'tenant.tabs.details'|trans }}
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="isms-context-tab" data-bs-toggle="tab" data-bs-target="#isms-context" type="button" role="tab">
                <i class="bi bi-building-gear" aria-hidden="true"></i> {{ 'tenant.tabs.isms_context'|trans }}
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab">
                <i class="bi bi-people" aria-hidden="true"></i> {{ 'tenant.tabs.users'|trans }}
                <span class="badge bg-primary ms-1">{{ userCount }}</span>
            </button>
        </li>
    </ul>

    {# Tab Content #}
    <div class="tab-content" id="tenantTabsContent">
        {# Details Tab #}
        <div class="tab-pane fade show active" id="details" role="tabpanel">
    <div class="row">
        {# Tenant Information #}
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-info-circle text-primary" aria-hidden="true"></i>
                        {{ 'tenant.section.information'|trans }}
                    </h5>
                </div>
                <div class="card-body">
                    {% embed '_components/_table.html.twig' with {
                        'class': 'table-sm',
                        'noMargin': true
                    } %}
                        {% block table_body %}
                            <tr>
                                <th scope="row" style="width: 40%;">{{ 'tenant.field.logo'|trans }}</th>
                                <td>
                                    {% if tenant.logoPath %}
                                        <img src="{{ asset(tenant.logoPath) }}"
                                             alt="{{ tenant.name }}"
                                             class="rounded"
                                             style="width: 60px; height: 60px; object-fit: contain;">
                                    {% else %}
                                        <span class="text-muted">{{ 'tenant.no_logo'|trans }}</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row" style="width: 40%;">{{ 'tenant.field.code'|trans }}</th>
                                <td><code class="text-primary">{{ tenant.code }}</code></td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'tenant.field.name'|trans }}</th>
                                <td>{{ tenant.name }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'tenant.field.azure_tenant_id'|trans }}</th>
                                <td>
                                    {% if tenant.azureTenantId %}
                                        <code class="text-muted small">{{ tenant.azureTenantId }}</code>
                                    {% else %}
                                        <span class="text-muted">â€”</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'tenant.field.status'|trans }}</th>
                                <td>
                                    {% if tenant.isActive %}
                                        <span class="badge bg-success">{{ 'tenant.status.active'|trans }}</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ 'tenant.status.inactive'|trans }}</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'tenant.field.created'|trans }}</th>
                                <td>{{ tenant.createdAt|date('d.m.Y H:i') }}</td>
                            </tr>
                            {% if tenant.updatedAt %}
                                <tr>
                                    <th scope="row">{{ 'tenant.field.updated'|trans }}</th>
                                    <td>{{ tenant.updatedAt|date('d.m.Y H:i') }}</td>
                                </tr>
                            {% endif %}
                        {% endblock %}
                    {% endembed %}
                </div>

                    {# Corporate Structure Information #}
                    {% if tenant.isPartOfCorporateStructure %}
                        <hr>
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-diagram-3" aria-hidden="true"></i> {{ 'corporate.section.structure'|trans }}
                        </h6>
                        {% embed '_components/_table.html.twig' with {
                            'class': 'table-sm',
                            'noMargin': true
                        } %}
                            {% block table_body %}
                                {% if tenant.parent %}
                                    <tr>
                                        <th scope="row" style="width: 40%;">{{ 'corporate.field.parent'|trans }}</th>
                                        <td>
                                            <a href="{{ path('tenant_management_show', {id: tenant.parent.id}) }}">
                                                {{ tenant.parent.name }}
                                            </a>
                                            <code class="text-muted ms-2">{{ tenant.parent.code }}</code>
                                        </td>
                                    </tr>
                                    {% if defaultGovernance %}
                                        <tr>
                                            <th scope="row">{{ 'corporate.field.governance_model'|trans }}</th>
                                            <td>
                                                <span class="badge bg-{{ defaultGovernance.governanceModel.value == 'hierarchical' ? 'primary' : (defaultGovernance.governanceModel.value == 'shared' ? 'warning' : 'secondary') }}">
                                                    {{ defaultGovernance.governanceModel.label }}
                                                </span>
                                                <br><small class="text-muted">{{ defaultGovernance.governanceModel.description }}</small>
                                            </td>
                                        </tr>
                                    {% endif %}
                                    <tr>
                                        <th scope="row">{{ 'corporate.field.hierarchy_depth'|trans }}</th>
                                        <td>{{ 'corporate.level'|trans({'%level%': tenant.hierarchyDepth}) }}</td>
                                    </tr>
                                {% endif %}
                                {% if tenant.isCorporateParent %}
                                    <tr>
                                        <th scope="row">{{ 'corporate.field.subsidiaries'|trans }}</th>
                                        <td>
                                            <span class="badge bg-info">{{ tenant.subsidiaries|length }}</span>
                                            {% if tenant.subsidiaries|length > 0 %}
                                                <ul class="mt-2 mb-0">
                                                    {% for subsidiary in tenant.subsidiaries %}
                                                        <li>
                                                            <a href="{{ path('tenant_management_show', {id: subsidiary.id}) }}">
                                                                {{ subsidiary.name }}
                                                            </a>
                                                            <code class="text-muted">{{ subsidiary.code }}</code>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endblock %}
                        {% endembed %}</div>
                        <div class="d-grid">
                            <a href="{{ path('tenant_management_corporate_structure') }}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-diagram-3" aria-hidden="true"></i> {{ 'corporate.action.view_structure'|trans }}
                            </a>
                        </div>

                        {# ISMS Context Inheritance #}
                        <hr>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="text-muted mb-0">
                                <i class="bi bi-building-gear" aria-hidden="true"></i> {{ 'corporate.inheritance.title'|trans }}
                            </h6>
                            {% if tenant.isCorporateParent %}
                                <button type="button" class="btn btn-sm btn-primary" onclick="propagateContext()">
                                    <i class="bi bi-arrow-down-circle" aria-hidden="true"></i> {{ 'corporate.inheritance.propagate'|trans }}
                                </button>
                            {% endif %}
                        </div>
                        <div id="effectiveContextContainer">
                            <div class="text-center text-muted py-3">
                                <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                {{ 'common.loading'|trans }}
                            </div>
                        </div>

                        {# Granular Governance Rules - only for subsidiaries #}
                        {% if tenant.parent %}
                            <hr>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="text-muted mb-0">
                                    <i class="bi bi-gear" aria-hidden="true"></i> {{ 'corporate.granular.title'|trans }}
                                </h6>
                                <button type="button" class="btn btn-sm btn-success" onclick="showAddGovernanceRuleModal()">
                                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'corporate.granular.add_rule'|trans }}
                                </button>
                            </div>
                            <div id="governanceRulesContainer">
                                <div class="text-center text-muted py-3">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    {{ 'common.loading'|trans }}
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}

                    {% if tenant.settings %}
                        <hr>
                        <h6 class="text-muted mb-2">{{ 'tenant.field.settings'|trans }}</h6>
                        <pre class="bg-light p-3 rounded small"><code>{{ tenant.settings|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE')) }}</code></pre>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
        </div>
        {# End Details Tab #}

        {# ISMS Context Tab #}
        <div class="tab-pane fade" id="isms-context" role="tabpanel">
            <div id="ismsContextContainer">
                <div class="text-center text-muted py-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">{{ 'common.loading'|trans }}</p>
                </div>
            </div>
        </div>
        {# End ISMS Context Tab #}

        {# Users Tab #}
        <div class="tab-pane fade" id="users" role="tabpanel">
    <div class="row">
        {# Users List #}
        <div class="col-lg-12 mb-4">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">
                            <i class="bi bi-people text-primary" aria-hidden="true"></i>
                            {{ 'tenant.section.users'|trans }}
                            <span class="badge bg-primary ms-2">{{ userCount }}</span>
                        </h5>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#manageUsersModal">
                            <i class="bi bi-person-plus" aria-hidden="true"></i> {{ 'tenant.users.manage'|trans }}
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    {% if userCount == 0 %}
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-people" style="font-size: 3rem;" aria-hidden="true"></i>
                            <p class="mt-2">{{ 'tenant.users.empty'|trans }}</p>
                        </div>
                    {% else %}
                        <div class="list-group list-group-flush">
                            {% for user in tenant.users|slice(0, 10) %}
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>{{ user.email }}</strong>
                                            {% if user.firstName or user.lastName %}
                                                <br><small class="text-muted">{{ user.firstName }} {{ user.lastName }}</small>
                                            {% endif %}
                                        </div>
                                        <div>
                                            {% if user.isActive %}
                                                <span class="badge bg-success">{{ 'common.active'|trans }}</span>
                                            {% else %}
                                                <span class="badge bg-secondary">{{ 'common.inactive'|trans }}</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        {% if userCount > 10 %}
                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    {{ 'tenant.users.showing'|trans({'%count%': 10, '%total%': userCount}) }}
                                </small>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
        </div>
        {# End Users Tab #}
    </div>
    {# End Tab Content #}

    {# Danger Zone - Outside tabs, always visible #}
    {% if userCount == 0 %}
        <div class="card border-danger mt-4">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                    {{ 'tenant.section.danger_zone'|trans }}
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-1">{{ 'tenant.action.delete'|trans }}</h4>
                        <p class="text-muted small mb-0">{{ 'tenant.delete.warning'|trans }}</p>
                    </div>
                    <form method="post" action="{{ path('tenant_management_delete', {id: tenant.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_tenant_' ~ tenant.id) }}">
                        <button type="submit"
                                class="btn btn-danger"
                                onclick="return confirm('{{ 'tenant.confirm.delete'|trans }}');">
                            <i class="bi bi-trash" aria-hidden="true"></i> {{ 'tenant.action.delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {% endif %}

    {# Manage Users Modal #}
    <div class="modal fade" id="manageUsersModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-people" aria-hidden="true"></i> {{ 'tenant.users.manage_title'|trans }}
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    {# Add User Section #}
                    <div class="mb-4">
                        <h4 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-person-plus" aria-hidden="true"></i> {{ 'tenant.users.add_user'|trans }}
                        </h6>
                        <form method="post" action="{{ path('tenant_management_add_user', {id: tenant.id}) }}" id="addUserForm">
                            <input type="hidden" name="_token" value="{{ csrf_token('add_user_' ~ tenant.id) }}">
                            <div class="input-group">
                                <input type="email"
                                       class="form-control"
                                       name="user_email"
                                       placeholder="{{ 'tenant.users.enter_email'|trans }}"
                                       required>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'tenant.users.add'|trans }}
                                </button>
                            </div>
                            <small class="form-text text-muted">
                                {{ 'tenant.users.add_help'|trans }}
                            </small>
                        </form>
                    </div>

                    {# Current Users List #}
                    <div>
                        <h4 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-people-fill" aria-hidden="true"></i> {{ 'tenant.users.current_users'|trans }} ({{ userCount }})
                        </h6>
                        {% if userCount == 0 %}
                            <div class="text-center text-muted py-3">
                                <i class="bi bi-people" style="font-size: 2rem;" aria-hidden="true"></i>
                                <p class="mt-2 mb-0">{{ 'tenant.users.empty'|trans }}</p>
                            </div>
                        {% else %}
                            <div class="list-group list-group-flush" style="max-height: 400px; overflow-y: auto;">
                                {% for user in tenant.users %}
                                    <div class="list-group-item px-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="flex-grow-1">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <i class="bi bi-person-circle fs-3 text-muted" aria-hidden="true"></i>
                                                    </div>
                                                    <div>
                                                        <strong>{{ user.email }}</strong>
                                                        {% if user.firstName or user.lastName %}
                                                            <br><small class="text-muted">{{ user.firstName }} {{ user.lastName }}</small>
                                                        {% endif %}
                                                        <br>
                                                        <small class="text-muted">
                                                            {{ 'common.roles'|trans }}: {{ user.roles|join(', ') }}
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex align-items-center gap-2">
                                                {% if user.isActive %}
                                                    <span class="badge bg-success">{{ 'common.active'|trans }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">{{ 'common.inactive'|trans }}</span>
                                                {% endif %}
                                                <form method="post" action="{{ path('tenant_management_remove_user', {id: tenant.id, userId: user.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('remove_user_' ~ tenant.id ~ '_' ~ user.id) }}">
                                                    <button type="submit"
                                                            class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('{{ 'tenant.users.confirm_remove'|trans({'%email%': user.email}) }}');" aria-label="{{ 'common.deactivate'|trans }}">
                                                        <i class="bi bi-person-dash" aria-hidden="true"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'common.close'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>

    {# Governance Rule Modal #}
    {% if tenant.parent %}
    <div class="modal fade" id="governanceRuleModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ 'corporate.granular.modal.title'|trans }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label" for="ruleScope">{{ 'corporate.granular.field.scope'|trans }}</label>
                        <select class="form-select" id="ruleScope" required>
                            <option value="control">{{ 'corporate.granular.scope.control'|trans }}</option>
                            <option value="isms_context">{{ 'corporate.granular.scope.isms_context'|trans }}</option>
                            <option value="risk">{{ 'corporate.granular.scope.risk'|trans }}</option>
                            <option value="asset">{{ 'corporate.granular.scope.asset'|trans }}</option>
                            <option value="process">{{ 'corporate.granular.scope.process'|trans }}</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="ruleScopeId">{{ 'corporate.granular.field.scope_id'|trans }}</label>
                        <input type="text" class="form-control" id="ruleScopeId" placeholder="z.B. A.5.1">
                        <small class="form-text text-muted">{{ 'corporate.granular.help.scope_id'|trans }}</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="ruleGovernance">{{ 'corporate.field.governance_model'|trans }}</label>
                        <select class="form-select" id="ruleGovernance" required>
                            <option value="hierarchical">{{ 'governance.hierarchical'|trans }}</option>
                            <option value="shared">{{ 'governance.shared'|trans }}</option>
                            <option value="independent">{{ 'governance.independent'|trans }}</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'common.cancel'|trans }}</button>
                    <button type="button" class="btn btn-primary" onclick="saveGovernanceRule()">{{ 'common.save'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if tenant.isPartOfCorporateStructure %}
    <script>
        const tenantId = {{ tenant.id }};

        // Load effective ISMS context
        function loadEffectiveContext() {
            fetch(`/api/corporate-structure/effective-context/${tenantId}`)
                .then(r => r.json())
                .then(data => {
                    const container = document.getElementById('effectiveContextContainer');
                    if (data.error) {
                        container.innerHTML = '<div class="alert alert-warning small mb-0"><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'corporate.inheritance.no_context'|trans }}</div>';
                        return;
                    }

                    let html = '<div class="card border-info">';
                    html += '<div class="card-body p-3">';
                    html += '<p class="mb-2"><strong>{{ 'corporate.inheritance.organization'|trans }}:</strong> ' + data.context.organizationName + '</p>';

                    if (data.context.isInherited) {
                        html += '<div class="alert alert-info small mb-0">';
                        html += '<i class="bi bi-arrow-up-right" aria-hidden="true"></i> ';
                        html += '{{ 'corporate.inheritance.inherited_from'|trans }}: ';
                        html += '<a href="{{ path('tenant_management_show', {id: '__ID__'}) }}" class="alert-link">' + data.context.inheritedFrom.name + '</a>';
                        html = html.replace('__ID__', data.context.inheritedFrom.id);
                        html += '</div>';
                    } else {
                        html += '<div class="alert alert-success small mb-0">';
                        html += '<i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'corporate.inheritance.own_context'|trans }}';
                        html += '</div>';
                    }

                    html += '</div></div>';
                    container.innerHTML = html;
                })
                .catch(err => {
                    console.error('Error loading effective context:', err);
                    document.getElementById('effectiveContextContainer').innerHTML =
                        '<div class="alert alert-danger small mb-0">{{ 'corporate.inheritance.load_error'|trans }}</div>';
                });
        }

        // Propagate context changes to subsidiaries
        function propagateContext() {
            if (!confirm('{{ 'corporate.inheritance.confirm_propagate'|trans }}')) {
                return;
            }

            fetch(`/api/corporate-structure/propagate-context/${tenantId}`, {
                method: 'POST'
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    loadEffectiveContext();
                } else {
                    alert('{{ 'corporate.inheritance.propagate_error'|trans }}');
                }
            })
            .catch(err => {
                console.error('Error propagating context:', err);
                alert('{{ 'corporate.inheritance.propagate_error'|trans }}');
            });
        }

        {% if tenant.parent %}
        function loadGovernanceRules() {
            fetch(`/api/corporate-structure/${tenantId}/governance`)
                .then(r => r.json())
                .then(data => {
                    const container = document.getElementById('governanceRulesContainer');
                    if (data.rules.length === 0) {
                        container.innerHTML = '<p class="text-muted small">{{ 'corporate.granular.no_rules'|trans }}</p>';
                        return;
                    }
                    let html = '<div class="list-group list-group-flush">';
                    data.rules.forEach(rule => {
                        const badgeColor = rule.governanceModel === 'hierarchical' ? 'primary' : (rule.governanceModel === 'shared' ? 'warning' : 'secondary');
                        const scopeIdParam = rule.scopeId ? `'${rule.scopeId}'` : 'null';
                        html += `<div class="list-group-item d-flex justify-content-between align-items-center">
                            <div><strong>${rule.scope}</strong>${rule.scopeId ? ': ' + rule.scopeId : ''}<br>
                            <span class="badge bg-${badgeColor}">${rule.governanceLabel}</span></div>
                            <button class="btn btn-sm btn-danger" aria-label="{{ 'common.delete'|trans }}" onclick="deleteRule(${rule.id}, '${rule.scope}', ${scopeIdParam})"><i class="bi bi-trash" aria-hidden="true"></i></button>
                        </div>`;
                    });
                    html += '</div>';
                    container.innerHTML = html;
                })
                .catch(err => {
                    console.error('Error loading governance rules:', err);
                    document.getElementById('governanceRulesContainer').innerHTML =
                        '<div class="alert alert-danger small mb-0">{{ 'corporate.granular.flash.error'|trans }}</div>';
                });
        }

        function showAddGovernanceRuleModal() {
            const modal = new bootstrap.Modal(document.getElementById('governanceRuleModal'));
            modal.show();
        }

        function saveGovernanceRule() {
            const scope = document.getElementById('ruleScope').value;
            const scopeId = document.getElementById('ruleScopeId').value || null;
            const governanceModel = document.getElementById('ruleGovernance').value;

            fetch(`/api/corporate-structure/${tenantId}/governance/${scope}`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({scopeId, governanceModel})
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    bootstrap.Modal.getInstance(document.getElementById('governanceRuleModal')).hide();
                    loadGovernanceRules();
                } else {
                    alert('{{ 'corporate.granular.flash.error'|trans }}');
                }
            })
            .catch(err => {
                console.error('Error saving governance rule:', err);
                alert('{{ 'corporate.granular.flash.error'|trans }}');
            });
        }

        function deleteRule(ruleId, scope, scopeId) {
            if (!confirm('{{ 'corporate.granular.confirm.delete'|trans }}')) {
                return;
            }

            const url = scopeId
                ? `/api/corporate-structure/${tenantId}/governance/${scope}/${scopeId}`
                : `/api/corporate-structure/${tenantId}/governance/${scope}/null`;

            fetch(url, {
                method: 'DELETE'
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    loadGovernanceRules();
                } else {
                    alert('{{ 'corporate.granular.flash.error'|trans }}');
                }
            })
            .catch(err => {
                console.error('Error deleting governance rule:', err);
                alert('{{ 'corporate.granular.flash.error'|trans }}');
            });
        }
        {% endif %}

        // Load data on page load
        function initTenantShow() {
            if (window.tenantShowInitialized) return;
            window.tenantShowInitialized = true;

            loadEffectiveContext();
            {% if tenant.parent %}
            loadGovernanceRules();
            {% endif %}
        }

        // Turbo-compatible initialization
        document.addEventListener('turbo:load', function() {
            window.tenantShowInitialized = false;
            initTenantShow();
        });

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initTenantShow);
        } else {
            initTenantShow();
        }
    </script>
    {% endif %}

    <script>
        // Load ISMS Context when tab is activated
        function initIsmsContextTab() {
            if (window.ismsContextTabInitialized) return;
            window.ismsContextTabInitialized = true;

            const ismsContextTab = document.getElementById('isms-context-tab');
            let ismsContextLoaded = false;

            if (ismsContextTab) {
                ismsContextTab.addEventListener('shown.bs.tab', function() {
                    if (!ismsContextLoaded) {
                        loadISMSContext();
                        ismsContextLoaded = true;
                    }
                });
            }
        }

        // Initialize tab listener on both Turbo navigation and direct load
        document.addEventListener('turbo:load', function() {
            window.ismsContextTabInitialized = false;
            initIsmsContextTab();
        });

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initIsmsContextTab);
        } else {
            initIsmsContextTab();
        }

        // XSS protection: escape HTML entities
        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Convert newlines to <br> after escaping
        function nl2br(text) {
            return escapeHtml(text).replace(/\n/g, '<br>');
        }

        function loadISMSContext() {
            const container = document.getElementById('ismsContextContainer');

            fetch(`{{ path('api_tenant_isms_context', {id: tenant.id}) }}`)
                .then(response => {
                    if (!response.ok && response.status !== 200) {
                        // Handle HTTP errors (500, 404, etc.)
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.error) {
                        container.innerHTML = `
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle" aria-hidden="true"></i>
                                <strong>{{ 'tenant.isms_context.not_configured'|trans }}</strong><br>
                                <p class="mb-0 mt-2">{{ 'tenant.isms_context.configure_prompt'|trans }}</p>
                                <a href="${escapeHtml(data.editUrl) || '{{ path('app_context_edit') }}'}" class="btn btn-primary mt-3">
                                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'tenant.isms_context.configure_now'|trans }}
                                </a>
                            </div>
                        `;
                        return;
                    }

                    const context = data.context;
                    const inheritanceInfo = data.inheritanceInfo || {};
                    const completeness = data.completeness || 0;
                    const canEdit = data.canEdit !== false;

                    let html = '';

                    // Corporate Inheritance Alert
                    if (inheritanceInfo.isInherited) {
                        const parentId = parseInt(inheritanceInfo.inheritedFrom?.id) || 0;
                        const parentName = escapeHtml(inheritanceInfo.inheritedFrom?.name || 'Parent');
                        html += `
                            <div class="alert alert-warning mb-4">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-diagram-3 me-2 mt-1" aria-hidden="true"></i>
                                    <div>
                                        <strong>{{ 'corporate.inheritance.isms_context_inherited'|trans }}</strong><br>
                                        <span class="small">
                                            {{ 'corporate.inheritance.from'|trans }}:
                                            <a href="{{ path('tenant_management_show', {id: '__PARENT_ID__'}) }}" class="alert-link">
                                                ${parentName}
                                            </a>
                                        </span><br>
                                        <span class="small text-muted">{{ 'corporate.inheritance.edit_at_parent'|trans }}</span>
                                    </div>
                                </div>
                            </div>
                        `.replace('__PARENT_ID__', parentId);
                    }

                    // Completeness Card - completeness is already a number, safe to use directly
                    const safeCompleteness = parseInt(completeness) || 0;
                    html += `
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-2">{{ 'context.kpi.completeness'|trans }}</h6>
                                        <h2 class="mb-0">${safeCompleteness}%</h2>
                                    </div>
                                    <div>
                                        ${canEdit ?
                                            `<a href="${escapeHtml(data.editUrl) || '{{ path('app_context_edit') }}'}" class="btn btn-primary">
                                                <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'common.edit'|trans }}
                                            </a>` :
                                            `<button class="btn btn-secondary" disabled title="{{ 'corporate.inheritance.cannot_edit_inherited'|trans }}">
                                                <i class="bi bi-lock" aria-hidden="true"></i> {{ 'common.edit'|trans }}
                                            </button>`
                                        }
                                    </div>
                                </div>
                                <div class="progress mt-2" style="height: 8px;">
                                    <div class="progress-bar ${safeCompleteness >= 80 ? 'bg-success' : safeCompleteness >= 50 ? 'bg-warning' : 'bg-danger'}"
                                         style="width: ${safeCompleteness}%"></div>
                                </div>
                            </div>
                        </div>
                    `;

                    // ISMS Context Details
                    html += '<div class="row">';

                    const fields = [
                        { key: 'organizationName', label: '{{ 'context.field.organization_name'|trans }}', icon: 'building' },
                        { key: 'ismsScope', label: '{{ 'context.field.isms_scope'|trans }}', icon: 'bullseye', multiline: true },
                        { key: 'scopeExclusions', label: '{{ 'context.field.scope_exclusions'|trans }}', icon: 'x-circle', multiline: true },
                        { key: 'externalIssues', label: '{{ 'context.field.external_issues'|trans }}', icon: 'globe', multiline: true },
                        { key: 'internalIssues', label: '{{ 'context.field.internal_issues'|trans }}', icon: 'house', multiline: true },
                        { key: 'interestedParties', label: '{{ 'context.field.interested_parties'|trans }}', icon: 'people', multiline: true },
                        { key: 'legalRequirements', label: '{{ 'context.field.legal_requirements'|trans }}', icon: 'file-text', multiline: true },
                        { key: 'ismsPolicy', label: '{{ 'context.field.isms_policy'|trans }}', icon: 'shield-check', multiline: true },
                        { key: 'rolesAndResponsibilities', label: '{{ 'context.field.roles_and_responsibilities'|trans }}', icon: 'person-badge', multiline: true }
                    ];

                    fields.forEach((field, index) => {
                        const value = context[field.key];
                        if (value) {
                            const displayValue = field.multiline && value.length > 200 ?
                                value.substring(0, 200) + '...' : value;

                            html += `
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="text-muted mb-2">
                                                <i class="bi bi-${escapeHtml(field.icon)}" aria-hidden="true"></i> ${escapeHtml(field.label)}
                                            </h6>
                                            <p class="mb-0">${nl2br(displayValue)}</p>
                                        </div>
                                    </div>
                                </div>
                            `;
                        }
                    });

                    html += '</div>';

                    // Link to full context view
                    html += `
                        <div class="text-center mt-4">
                            <a href="{{ path('app_context_index') }}" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-right-circle" aria-hidden="true"></i> {{ 'tenant.isms_context.view_full'|trans }}
                            </a>
                        </div>
                    `;

                    container.innerHTML = html;
                })
                .catch(error => {
                    console.error('Error loading ISMS context:', error);
                    let errorMessage = '{{ 'tenant.isms_context.load_error'|trans }}';

                    // Provide more specific error info for debugging
                    if (error.message) {
                        errorMessage += '<br><small class="text-muted">' + escapeHtml(error.message) + '</small>';
                    }

                    container.innerHTML = `
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                            ${errorMessage}
                            <br><br>
                            <button class="btn btn-sm btn-outline-danger" onclick="loadISMSContext()">
                                <i class="bi bi-arrow-clockwise" aria-hidden="true"></i> {{ 'common.retry'|trans|default('Erneut versuchen') }}
                            </button>
                        </div>
                    `;
                });
        }
    </script>
{% endblock %}

{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ tenant.name }}{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('tenant_management_index') }}">{{ 'tenant.title'|trans({}, 'tenant') }}</a></li>
    <li class="breadcrumb-item active">{{ tenant.code }}</li>
{% endblock %}

{% block admin_content %}
    {# Tenant Header #}
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="d-flex align-items-start">
            {% if tenant.logoPath %}
                <img src="{{ asset(tenant.logoPath) }}"
                     alt="{{ tenant.name }}"
                     class="rounded me-3"
                     style="width: 80px; height: 80px; object-fit: contain; border: 1px solid #dee2e6;">
            {% else %}
                <div class="bg-light rounded d-flex align-items-center justify-content-center me-3"
                     style="width: 80px; height: 80px; border: 1px solid #dee2e6;">
                    <i class="bi bi-building text-muted fs-2" aria-hidden="true"></i>
                </div>
            {% endif %}
            <div>
                <p class="text-muted mb-2">
                    <code class="text-primary">{{ tenant.code }}</code>
                    {% if tenant.isActive %}
                        {% include '_components/_badge.html.twig' with { variant: 'success', icon: 'bi-check-circle', class: 'ms-2', content: 'tenant.status.active'|trans({}, 'tenant') } %}
                    {% else %}
                        {% include '_components/_badge.html.twig' with { variant: 'secondary', icon: 'bi-x-circle', class: 'ms-2', content: 'tenant.status.inactive'|trans({}, 'tenant') } %}
                    {% endif %}
                </p>
                {% if tenant.description %}
                    <p>{{ tenant.description }}</p>
                {% endif %}
            </div>
        </div>
        <div class="btn-group" role="group" aria-label="{{ 'common.actions'|trans({}, 'messages') }}">
            <a href="{{ path('tenant_management_edit', {id: tenant.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'common.edit'|trans({}, 'messages') }}
            </a>
            <a href="{{ path('tenant_management_organisation_context', {id: tenant.id}) }}" class="btn btn-info">
                <i class="bi bi-building-gear" aria-hidden="true"></i> {{ 'tenant.organisation_context.title'|trans({}, 'tenant') }}
            </a>
            <form method="post" action="{{ path('tenant_management_toggle', {id: tenant.id}) }}" class="d-inline"
                  data-controller="ui-actions"
                  data-action="submit->ui-actions#confirm"
                  data-ui-actions-message-param="{{ 'tenant.confirm.toggle'|trans({}, 'tenant') }}">
                <button type="submit"
                        class="btn btn-{% if tenant.isActive %}warning{% else %}success{% endif %}">
                    <i class="bi bi-{% if tenant.isActive %}pause{% else %}play{% endif %}-circle" aria-hidden="true"></i>
                    {{ (tenant.isActive ? 'tenant.action.deactivate' : 'tenant.action.activate')|trans({}, 'tenant') }}
                </button>
            </form>
        </div>
    </div>

    {# Statistics Cards #}
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            {% embed '_components/_card.html.twig' %}
                {% block card_body %}
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-people text-primary fs-3" aria-hidden="true"></i>
                        </div>
                        <div>
                            <div class="text-muted mb-1 small fw-semibold">{{ 'tenant.stats.total_users'|trans({}, 'tenant') }}</div>
                            <div class="fs-2 fw-bold">{{ userCount }}</div>
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-4">
            {% embed '_components/_card.html.twig' %}
                {% block card_body %}
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-person-check text-success fs-3" aria-hidden="true"></i>
                        </div>
                        <div>
                            <div class="text-muted mb-1 small fw-semibold">{{ 'tenant.stats.active_users'|trans({}, 'tenant') }}</div>
                            <div class="fs-2 fw-bold">{{ activeUsers }}</div>
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-4">
            {% embed '_components/_card.html.twig' %}
                {% block card_body %}
                    <div class="d-flex align-items-center">
                        <div class="bg-secondary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-person-x text-secondary fs-3" aria-hidden="true"></i>
                        </div>
                        <div>
                            <div class="text-muted mb-1 small fw-semibold">{{ 'tenant.stats.inactive_users'|trans({}, 'tenant') }}</div>
                            <div class="fs-2 fw-bold">{{ inactiveUsers }}</div>
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    {# Tab Navigation #}
    <ul class="nav nav-tabs mb-4" id="tenantTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab">
                <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'tenant.tabs.details'|trans({}, 'tenant') }}
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="isms-context-tab" data-bs-toggle="tab" data-bs-target="#isms-context" type="button" role="tab">
                <i class="bi bi-building-gear" aria-hidden="true"></i> {{ 'tenant.tabs.isms_context'|trans({}, 'tenant') }}
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab">
                <i class="bi bi-people" aria-hidden="true"></i> {{ 'tenant.tabs.users'|trans({}, 'tenant') }}
                {% include '_components/_badge.html.twig' with { variant: 'primary', class: 'ms-1', content: userCount } %}
            </button>
        </li>
    </ul>

    {# Tab Content #}
    <div class="tab-content" id="tenantTabsContent">
        {# Details Tab #}
        <div class="tab-pane fade show active" id="details" role="tabpanel">
    <div class="row">
        {# Tenant Information #}
        <div class="col-lg-6 mb-4">
            {% embed '_components/_card.html.twig' with {class: 'h-100'} %}
                {% block card_header %}
                    <div class="card-header bg-white">
                        <h2 class="card-title mb-0 h5">
                            <i class="bi bi-info-circle text-primary" aria-hidden="true"></i>
                            {{ 'tenant.section.information'|trans({}, 'tenant') }}
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    {% embed '_components/_table.html.twig' with {
                        'class': 'table-sm',
                        'noMargin': true
                    } %}
                        {% block table_body %}
                            <tr>
                                <th scope="row" style="width: 40%;">{{ 'tenant.field.logo'|trans({}, 'tenant') }}</th>
                                <td>
                                    {% if tenant.logoPath %}
                                        <img src="{{ asset(tenant.logoPath) }}"
                                             alt="{{ tenant.name }}"
                                             class="rounded"
                                             style="width: 60px; height: 60px; object-fit: contain;">
                                    {% else %}
                                        <span class="text-muted">{{ 'tenant.no_logo'|trans({}, 'tenant') }}</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row" style="width: 40%;">{{ 'tenant.field.code'|trans({}, 'tenant') }}</th>
                                <td><code class="text-primary">{{ tenant.code }}</code></td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'tenant.field.name'|trans({}, 'tenant') }}</th>
                                <td>{{ tenant.name }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'tenant.field.azure_tenant_id'|trans({}, 'tenant') }}</th>
                                <td>
                                    {% if tenant.azureTenantId %}
                                        <code class="text-muted small">{{ tenant.azureTenantId }}</code>
                                    {% else %}
                                        <span class="text-muted">â€”</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'tenant.field.status'|trans({}, 'tenant') }}</th>
                                <td>
                                    {% if tenant.isActive %}
                                        {% include '_components/_badge.html.twig' with { variant: 'success', content: 'tenant.status.active'|trans({}, 'tenant') } %}
                                    {% else %}
                                        {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'tenant.status.inactive'|trans({}, 'tenant') } %}
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'tenant.field.created'|trans({}, 'tenant') }}</th>
                                <td>{{ tenant.createdAt|date('d.m.Y H:i') }}</td>
                            </tr>
                            {% if tenant.updatedAt %}
                                <tr>
                                    <th scope="row">{{ 'tenant.field.updated'|trans({}, 'tenant') }}</th>
                                    <td>{{ tenant.updatedAt|date('d.m.Y H:i') }}</td>
                                </tr>
                            {% endif %}
                        {% endblock %}
                    {% endembed %}
                </div>

                    {# Corporate Structure Information #}
                    {% if tenant.isPartOfCorporateStructure %}
                        <hr>
                        <h3 class="text-muted mb-3 h6">
                            <i class="bi bi-diagram-3" aria-hidden="true"></i> {{ 'corporate.section.structure'|trans({}, 'tenant') }}
                        </h3>
                        {% embed '_components/_table.html.twig' with {
                            'class': 'table-sm',
                            'noMargin': true
                        } %}
                            {% block table_body %}
                                {% if tenant.parent %}
                                    <tr>
                                        <th scope="row" style="width: 40%;">{{ 'corporate.field.parent'|trans({}, 'tenant') }}</th>
                                        <td>
                                            <a href="{{ path('tenant_management_show', {id: tenant.parent.id}) }}">
                                                {{ tenant.parent.name }}
                                            </a>
                                            <code class="text-muted ms-2">{{ tenant.parent.code }}</code>
                                        </td>
                                    </tr>
                                    {% if defaultGovernance %}
                                        <tr>
                                            <th scope="row">{{ 'corporate.field.governance_model'|trans({}, 'tenant') }}</th>
                                            <td>
                                                <span class="badge bg-{{ defaultGovernance.governanceModel.value == 'hierarchical' ? 'primary' : (defaultGovernance.governanceModel.value == 'shared' ? 'warning' : 'secondary') }}">
                                                    {{ defaultGovernance.governanceModel.label }}
                                                </span>
                                                <br><small class="text-muted">{{ defaultGovernance.governanceModel.description }}</small>
                                            </td>
                                        </tr>
                                    {% endif %}
                                    <tr>
                                        <th scope="row">{{ 'corporate.field.hierarchy_depth'|trans({}, 'tenant') }}</th>
                                        <td>{{ 'corporate.level'|trans({'%level%': tenant.hierarchyDepth}, 'tenant') }}</td>
                                    </tr>
                                {% endif %}
                                {% if tenant.isCorporateParent %}
                                    <tr>
                                        <th scope="row">{{ 'corporate.field.subsidiaries'|trans({}, 'tenant') }}</th>
                                        <td>
                                            {% include '_components/_badge.html.twig' with { variant: 'info', content: tenant.subsidiaries|length } %}
                                            {% if tenant.subsidiaries|length > 0 %}
                                                <ul class="mt-2 mb-0">
                                                    {% for subsidiary in tenant.subsidiaries %}
                                                        <li>
                                                            <a href="{{ path('tenant_management_show', {id: subsidiary.id}) }}">
                                                                {{ subsidiary.name }}
                                                            </a>
                                                            <code class="text-muted">{{ subsidiary.code }}</code>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endblock %}
                        {% endembed %}</div>
                        <div class="d-grid">
                            <a href="{{ path('tenant_management_corporate_structure') }}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-diagram-3" aria-hidden="true"></i> {{ 'corporate.action.view_structure'|trans({}, 'tenant') }}
                            </a>
                        </div>

                        {# ISMS Context Inheritance #}
                        <hr>
                        <div data-controller="tenant-governance"
                             data-tenant-governance-tenant-id-value="{{ tenant.id }}"
                             data-tenant-governance-has-parent-value="{{ tenant.parent ? 'true' : 'false' }}"
                             data-tenant-governance-no-context-text-value="{{ 'corporate.inheritance.no_context'|trans({}, 'tenant') }}"
                             data-tenant-governance-inherited-from-text-value="{{ 'corporate.inheritance.inherited_from'|trans({}, 'tenant') }}"
                             data-tenant-governance-own-context-text-value="{{ 'corporate.inheritance.own_context'|trans({}, 'tenant') }}"
                             data-tenant-governance-load-error-text-value="{{ 'corporate.inheritance.load_error'|trans({}, 'tenant') }}"
                             data-tenant-governance-confirm-propagate-text-value="{{ 'corporate.inheritance.confirm_propagate'|trans({}, 'tenant') }}"
                             data-tenant-governance-propagate-error-text-value="{{ 'corporate.inheritance.propagate_error'|trans({}, 'tenant') }}"
                             data-tenant-governance-no-rules-text-value="{{ 'corporate.granular.no_rules'|trans({}, 'tenant') }}"
                             data-tenant-governance-save-error-text-value="{{ 'corporate.granular.flash.error'|trans({}, 'tenant') }}"
                             data-tenant-governance-confirm-delete-text-value="{{ 'corporate.granular.confirm.delete'|trans({}, 'tenant') }}"
                             data-tenant-governance-delete-error-text-value="{{ 'corporate.granular.flash.error'|trans({}, 'tenant') }}"
                             data-tenant-governance-organization-label-value="{{ 'corporate.inheritance.organization'|trans({}, 'tenant') }}">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="text-muted mb-0 h6">
                                <i class="bi bi-building-gear" aria-hidden="true"></i> {{ 'corporate.inheritance.title'|trans({}, 'tenant') }}
                            </h3>
                            {% if tenant.isCorporateParent %}
                                <button type="button" class="btn btn-sm btn-primary"
                                        data-action="click->tenant-governance#propagateContext">
                                    <i class="bi bi-arrow-down-circle" aria-hidden="true"></i> {{ 'corporate.inheritance.propagate'|trans({}, 'tenant') }}
                                </button>
                            {% endif %}
                        </div>
                        <div id="effectiveContextContainer" data-tenant-governance-target="effectiveContextContainer">
                            <div class="text-center text-muted py-3">
                                <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                {{ 'common.loading'|trans({}, 'messages') }}
                            </div>
                        </div>

                        {# Granular Governance Rules - only for subsidiaries #}
                        {% if tenant.parent %}
                            <hr>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h3 class="text-muted mb-0 h6">
                                    <i class="bi bi-gear" aria-hidden="true"></i> {{ 'corporate.granular.title'|trans({}, 'tenant') }}
                                </h3>
                                <button type="button" class="btn btn-sm btn-success"
                                        data-action="click->tenant-governance#showAddRuleModal">
                                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'corporate.granular.add_rule'|trans({}, 'tenant') }}
                                </button>
                            </div>
                            <div id="governanceRulesContainer" data-tenant-governance-target="governanceRulesContainer">
                                <div class="text-center text-muted py-3">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    {{ 'common.loading'|trans({}, 'messages') }}
                                </div>
                            </div>
                        {% endif %}
                        {# Governance Rule Modal - inside controller for Stimulus access #}
                        {% if tenant.parent %}
                        <div class="modal fade" id="governanceRuleModal" tabindex="-1" data-tenant-governance-target="ruleModal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h2 class="modal-title h5">{{ 'corporate.granular.modal.title'|trans({}, 'tenant') }}</h2>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label" for="ruleScope">{{ 'corporate.granular.field.scope'|trans({}, 'tenant') }}</label>
                                            <select class="form-select" id="ruleScope" data-tenant-governance-target="ruleScope" required>
                                                <option value="control">{{ 'corporate.granular.scope.control'|trans({}, 'tenant') }}</option>
                                                <option value="isms_context">{{ 'corporate.granular.scope.isms_context'|trans({}, 'tenant') }}</option>
                                                <option value="risk">{{ 'corporate.granular.scope.risk'|trans({}, 'tenant') }}</option>
                                                <option value="asset">{{ 'corporate.granular.scope.asset'|trans({}, 'tenant') }}</option>
                                                <option value="process">{{ 'corporate.granular.scope.process'|trans({}, 'tenant') }}</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="ruleScopeId">{{ 'corporate.granular.field.scope_id'|trans({}, 'tenant') }}</label>
                                            <input type="text" class="form-control" id="ruleScopeId" data-tenant-governance-target="ruleScopeId" placeholder="z.B. A.5.1">
                                            <small class="form-text text-muted">{{ 'corporate.granular.help.scope_id'|trans({}, 'tenant') }}</small>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="ruleGovernance">{{ 'corporate.field.governance_model'|trans({}, 'tenant') }}</label>
                                            <select class="form-select" id="ruleGovernance" data-tenant-governance-target="ruleGovernance" required>
                                                <option value="hierarchical">{{ 'governance.hierarchical'|trans({}, 'messages') }}</option>
                                                <option value="shared">{{ 'governance.shared'|trans({}, 'messages') }}</option>
                                                <option value="independent">{{ 'governance.independent'|trans({}, 'messages') }}</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'common.cancel'|trans({}, 'messages') }}</button>
                                        <button type="button" class="btn btn-primary"
                                                data-action="click->tenant-governance#saveGovernanceRule">{{ 'common.save'|trans({}, 'messages') }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                        </div>{# End tenant-governance controller #}
                    {% endif %}

                    {% if tenant.settings %}
                        <hr>
                        <h3 class="text-muted mb-2 h6">{{ 'tenant.field.settings'|trans({}, 'tenant') }}</h3>
                        <pre class="bg-light p-3 rounded small"><code>{{ tenant.settings|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE')) }}</code></pre>
                    {% endif %}
                {% endblock %}
            {% endembed %}
        </div>
    </div>
        {# End Details Tab #}

        {# ISMS Context Tab #}
        <div class="tab-pane fade" id="isms-context" role="tabpanel">
            <div id="ismsContextContainer">
                <div class="text-center text-muted py-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">{{ 'common.loading'|trans({}, 'messages') }}</p>
                </div>
            </div>
        </div>
        {# End ISMS Context Tab #}

        {# Users Tab #}
        <div class="tab-pane fade" id="users" role="tabpanel">
    <div class="row">
        {# Users List #}
        <div class="col-lg-12 mb-4">
            {% embed '_components/_card.html.twig' with {class: 'h-100'} %}
                {% block card_header %}
                    <div class="card-header bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="card-title mb-0 h5">
                                <i class="bi bi-people text-primary" aria-hidden="true"></i>
                                {{ 'tenant.section.users'|trans({}, 'tenant') }}
                                {% include '_components/_badge.html.twig' with { variant: 'primary', class: 'ms-2', content: userCount } %}
                            </h2>
                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#manageUsersModal">
                                <i class="bi bi-person-plus" aria-hidden="true"></i> {{ 'tenant.users.manage'|trans({}, 'tenant') }}
                            </button>
                        </div>
                    </div>
                {% endblock %}
                {% block card_body %}
                    {% if userCount == 0 %}
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-people" style="font-size: 3rem;" aria-hidden="true"></i>
                            <p class="mt-2">{{ 'tenant.users.empty'|trans({}, 'tenant') }}</p>
                        </div>
                    {% else %}
                        <div class="list-group list-group-flush">
                            {% for user in tenant.users|slice(0, 10) %}
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>{{ user.email }}</strong>
                                            {% if user.firstName or user.lastName %}
                                                <br><small class="text-muted">{{ user.firstName }} {{ user.lastName }}</small>
                                            {% endif %}
                                        </div>
                                        <div>
                                            {% if user.isActive %}
                                                {% include '_components/_badge.html.twig' with { variant: 'success', content: 'common.active'|trans({}, 'messages') } %}
                                            {% else %}
                                                {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'common.inactive'|trans({}, 'messages') } %}
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        {% if userCount > 10 %}
                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    {{ 'tenant.users.showing'|trans({'%count%': 10, '%total%': userCount}, 'tenant') }}
                                </small>
                            </div>
                        {% endif %}
                    {% endif %}
                {% endblock %}
            {% endembed %}
        </div>
    </div>
        </div>
        {# End Users Tab #}
    {# End Tab Content #}

    {# Danger Zone - Outside tabs, always visible #}
    {% if userCount == 0 %}
        {% embed '_components/_card.html.twig' with {borderColor: 'danger', class: 'mt-4'} %}
            {% block card_header %}
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0 h5">
                        <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                        {{ 'tenant.section.danger_zone'|trans({}, 'tenant') }}
                    </h2>
                </div>
            {% endblock %}
            {% block card_body %}
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="mb-1 h6">{{ 'tenant.action.delete'|trans({}, 'tenant') }}</h3>
                        <p class="text-muted small mb-0">{{ 'tenant.delete.warning'|trans({}, 'tenant') }}</p>
                    </div>
                    <form method="post" action="{{ path('tenant_management_delete', {id: tenant.id}) }}" class="d-inline"
                          data-controller="ui-actions"
                          data-action="submit->ui-actions#confirm"
                          data-ui-actions-message-param="{{ 'tenant.confirm.delete'|trans({}, 'tenant') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_tenant_' ~ tenant.id) }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash" aria-hidden="true"></i> {{ 'tenant.action.delete'|trans({}, 'tenant') }}
                        </button>
                    </form>
                </div>
            {% endblock %}
        {% endembed %}
    {% endif %}

    {# Manage Users Modal #}
    <div class="modal fade" id="manageUsersModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title h5">
                        <i class="bi bi-people" aria-hidden="true"></i> {{ 'tenant.users.manage_title'|trans({}, 'tenant') }}
                    </h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                </div>
                <div class="modal-body">
                    {# Add User Section #}
                    <div class="mb-4">
                        <h3 class="border-bottom pb-2 mb-3 h6">
                            <i class="bi bi-person-plus" aria-hidden="true"></i> {{ 'tenant.users.add_user'|trans({}, 'tenant') }}
                        </h3>
                        <form method="post" action="{{ path('tenant_management_add_user', {id: tenant.id}) }}" id="addUserForm">
                            <input type="hidden" name="_token" value="{{ csrf_token('add_user_' ~ tenant.id) }}">
                            <div class="input-group">
                                <input type="email"
                                       class="form-control"
                                       name="user_email"
                                       placeholder="{{ 'tenant.users.enter_email'|trans({}, 'tenant') }}"
                                       required>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'tenant.users.add'|trans({}, 'tenant') }}
                                </button>
                            </div>
                            <small class="form-text text-muted">
                                {{ 'tenant.users.add_help'|trans({}, 'tenant') }}
                            </small>
                        </form>
                    </div>

                    {# Current Users List #}
                    <div>
                        <h3 class="border-bottom pb-2 mb-3 h6">
                            <i class="bi bi-people-fill" aria-hidden="true"></i> {{ 'tenant.users.current_users'|trans({}, 'tenant') }} ({{ userCount }})
                        </h3>
                        {% if userCount == 0 %}
                            <div class="text-center text-muted py-3">
                                <i class="bi bi-people" style="font-size: 2rem;" aria-hidden="true"></i>
                                <p class="mt-2 mb-0">{{ 'tenant.users.empty'|trans({}, 'tenant') }}</p>
                            </div>
                        {% else %}
                            <div class="list-group list-group-flush" style="max-height: 400px; overflow-y: auto;">
                                {% for user in tenant.users %}
                                    <div class="list-group-item px-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="flex-grow-1">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <i class="bi bi-person-circle fs-3 text-muted" aria-hidden="true"></i>
                                                    </div>
                                                    <div>
                                                        <strong>{{ user.email }}</strong>
                                                        {% if user.firstName or user.lastName %}
                                                            <br><small class="text-muted">{{ user.firstName }} {{ user.lastName }}</small>
                                                        {% endif %}
                                                        <br>
                                                        <small class="text-muted">
                                                            {{ 'common.roles'|trans({}, 'messages') }}: {{ user.roles|join(', ') }}
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-flex align-items-center gap-2">
                                                {% if user.isActive %}
                                                    {% include '_components/_badge.html.twig' with { variant: 'success', content: 'common.active'|trans({}, 'messages') } %}
                                                {% else %}
                                                    {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'common.inactive'|trans({}, 'messages') } %}
                                                {% endif %}
                                                <form method="post" action="{{ path('tenant_management_remove_user', {id: tenant.id, userId: user.id}) }}" class="d-inline"
                                                      data-controller="ui-actions"
                                                      data-action="submit->ui-actions#confirm"
                                                      data-ui-actions-message-param="{{ 'tenant.users.confirm_remove'|trans({'%email%': user.email}, 'tenant') }}">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('remove_user_' ~ tenant.id ~ '_' ~ user.id) }}">
                                                    <button type="submit"
                                                            class="btn btn-sm btn-outline-danger"
                                                            aria-label="{{ 'common.deactivate'|trans({}, 'messages') }}">
                                                        <i class="bi bi-person-dash" aria-hidden="true"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'common.close'|trans({}, 'messages') }}
                    </button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Corporate structure governance is now handled by Stimulus controller: tenant-governance_controller.js #}

    <script>
        // Load ISMS Context when tab is activated
        function initIsmsContextTab() {
            if (window.ismsContextTabInitialized) return;
            window.ismsContextTabInitialized = true;

            const ismsContextTab = document.getElementById('isms-context-tab');
            let ismsContextLoaded = false;

            if (ismsContextTab) {
                ismsContextTab.addEventListener('shown.bs.tab', function() {
                    if (!ismsContextLoaded) {
                        loadISMSContext();
                        ismsContextLoaded = true;
                    }
                });
            }
        }

        // Initialize tab listener on both Turbo navigation and direct load
        document.addEventListener('turbo:load', function() {
            window.ismsContextTabInitialized = false;
            initIsmsContextTab();
        });

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initIsmsContextTab);
        } else {
            initIsmsContextTab();
        }

        // XSS protection: escape HTML entities
        function escapeHtml(text) {
            if (!text) return '';
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Convert newlines to <br> after escaping
        function nl2br(text) {
            return escapeHtml(text).replace(/\n/g, '<br>');
        }

        function loadISMSContext() {
            const container = document.getElementById('ismsContextContainer');

            fetch(`{{ path('api_tenant_isms_context', {id: tenant.id}) }}`)
                .then(response => {
                    if (!response.ok && response.status !== 200) {
                        // Handle HTTP errors (500, 404, etc.)
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.error) {
                        container.innerHTML = `
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle" aria-hidden="true"></i>
                                <strong>{{ 'tenant.isms_context.not_configured'|trans({}, 'tenant') }}</strong><br>
                                <p class="mb-0 mt-2">{{ 'tenant.isms_context.configure_prompt'|trans({}, 'tenant') }}</p>
                                <a href="${escapeHtml(data.editUrl) || '{{ path('app_context_edit') }}'}" class="btn btn-primary mt-3">
                                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'tenant.isms_context.configure_now'|trans({}, 'tenant') }}
                                </a>
                            </div>
                        `;
                        return;
                    }

                    const context = data.context;
                    const inheritanceInfo = data.inheritanceInfo || {};
                    const completeness = data.completeness || 0;
                    const canEdit = data.canEdit !== false;

                    let html = '';

                    // Corporate Inheritance Alert
                    if (inheritanceInfo.isInherited) {
                        const parentId = parseInt(inheritanceInfo.inheritedFrom?.id) || 0;
                        const parentName = escapeHtml(inheritanceInfo.inheritedFrom?.name || 'Parent');
                        html += `
                            <div class="alert alert-warning mb-4">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-diagram-3 me-2 mt-1" aria-hidden="true"></i>
                                    <div>
                                        <strong>{{ 'corporate.inheritance.isms_context_inherited'|trans({}, 'tenant') }}</strong><br>
                                        <span class="small">
                                            {{ 'corporate.inheritance.from'|trans({}, 'tenant') }}:
                                            <a href="{{ path('tenant_management_show', {id: '__PARENT_ID__'}) }}" class="alert-link">
                                                ${parentName}
                                            </a>
                                        </span><br>
                                        <span class="small text-muted">{{ 'corporate.inheritance.edit_at_parent'|trans({}, 'tenant') }}</span>
                                    </div>
                                </div>
                            </div>
                        `.replace('__PARENT_ID__', parentId);
                    }

                    // Completeness Card - completeness is already a number, safe to use directly
                    const safeCompleteness = parseInt(completeness) || 0;
                    html += `
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-muted mb-2 small fw-semibold">{{ 'context.kpi.completeness'|trans({}, 'context') }}</div>
                                        <div class="fs-2 fw-bold">${safeCompleteness}%</div>
                                    </div>
                                    <div>
                                        ${canEdit ?
                                            `<a href="${escapeHtml(data.editUrl) || '{{ path('app_context_edit') }}'}" class="btn btn-primary">
                                                <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'common.edit'|trans({}, 'messages') }}
                                            </a>` :
                                            `<button class="btn btn-secondary" disabled title="{{ 'corporate.inheritance.cannot_edit_inherited'|trans({}, 'tenant') }}">
                                                <i class="bi bi-lock" aria-hidden="true"></i> {{ 'common.edit'|trans({}, 'messages') }}
                                            </button>`
                                        }
                                    </div>
                                </div>
                                <div class="progress mt-2" style="height: 8px;">
                                    <div class="progress-bar ${safeCompleteness >= 80 ? 'bg-success' : safeCompleteness >= 50 ? 'bg-warning' : 'bg-danger'}"
                                         style="width: ${safeCompleteness}%"></div>
                                </div>
                            </div>
                        </div>
                    `;

                    // ISMS Context Details
                    html += '<div class="row">';

                    const fields = [
                        { key: 'organizationName', label: '{{ 'context.field.organization_name'|trans({}, 'context') }}', icon: 'building' },
                        { key: 'ismsScope', label: '{{ 'context.field.isms_scope'|trans({}, 'context') }}', icon: 'bullseye', multiline: true },
                        { key: 'scopeExclusions', label: '{{ 'context.field.scope_exclusions'|trans({}, 'context') }}', icon: 'x-circle', multiline: true },
                        { key: 'externalIssues', label: '{{ 'context.field.external_issues'|trans({}, 'context') }}', icon: 'globe', multiline: true },
                        { key: 'internalIssues', label: '{{ 'context.field.internal_issues'|trans({}, 'context') }}', icon: 'house', multiline: true },
                        { key: 'interestedParties', label: '{{ 'context.field.interested_parties'|trans({}, 'context') }}', icon: 'people', multiline: true },
                        { key: 'legalRequirements', label: '{{ 'context.field.legal_requirements'|trans({}, 'context') }}', icon: 'file-text', multiline: true },
                        { key: 'ismsPolicy', label: '{{ 'context.field.isms_policy'|trans({}, 'context') }}', icon: 'shield-check', multiline: true },
                        { key: 'rolesAndResponsibilities', label: '{{ 'context.field.roles_and_responsibilities'|trans({}, 'context') }}', icon: 'person-badge', multiline: true }
                    ];

                    fields.forEach((field, index) => {
                        const value = context[field.key];
                        if (value) {
                            const displayValue = field.multiline && value.length > 200 ?
                                value.substring(0, 200) + '...' : value;

                            html += `
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="text-muted mb-2 small fw-semibold">
                                                <i class="bi bi-${escapeHtml(field.icon)}" aria-hidden="true"></i> ${escapeHtml(field.label)}
                                            </div>
                                            <p class="mb-0">${nl2br(displayValue)}</p>
                                        </div>
                                    </div>
                                </div>
                            `;
                        }
                    });

                    html += '</div>';

                    // Link to full context view
                    html += `
                        <div class="text-center mt-4">
                            <a href="{{ path('app_context_index') }}" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-right-circle" aria-hidden="true"></i> {{ 'tenant.isms_context.view_full'|trans({}, 'tenant') }}
                            </a>
                        </div>
                    `;

                    container.innerHTML = html;
                })
                .catch(error => {
                    console.error('Error loading ISMS context:', error);
                    let errorMessage = '{{ 'tenant.isms_context.load_error'|trans({}, 'tenant') }}';

                    // Provide more specific error info for debugging
                    if (error.message) {
                        errorMessage += '<br><small class="text-muted">' + escapeHtml(error.message) + '</small>';
                    }

                    container.innerHTML = `
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                            ${errorMessage}
                            <br><br>
                            <button class="btn btn-sm btn-outline-danger" id="retryIsmsContextBtn">
                                <i class="bi bi-arrow-clockwise" aria-hidden="true"></i> {{ 'common.retry'|trans({}, 'messages') }}
                            </button>
                        </div>
                    `;
                    // Add event listener for retry button
                    document.getElementById('retryIsmsContextBtn')?.addEventListener('click', loadISMSContext);
                });
        }
    </script>
{% endblock %}

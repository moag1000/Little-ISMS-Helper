{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'tenant.title'|trans({}, 'tenant') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'tenant.subtitle'|trans({}, 'tenant') }}</p>
{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item active">{{ 'tenant.title'|trans({}, 'tenant') }}</li>
{% endblock %}

{% block admin_content %}
    {# Statistics Cards #}
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            {% embed '_components/_card.html.twig' %}
                {% block card_body %}
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-building text-primary fs-3" aria-hidden="true"></i>
                        </div>
                        <div>
                            <div class="text-muted mb-1 small fw-semibold">{{ 'tenant.stats.total'|trans({}, 'tenant') }}</div>
                            <h2 class="mb-0 h3">{{ totalCount }}</h2>
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-4">
            {% embed '_components/_card.html.twig' %}
                {% block card_body %}
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-check-circle text-success fs-3" aria-hidden="true"></i>
                        </div>
                        <div>
                            <div class="text-muted mb-1 small fw-semibold">{{ 'tenant.stats.active'|trans({}, 'tenant') }}</div>
                            <h2 class="mb-0 h3">{{ activeCount }}</h2>
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-4">
            {% embed '_components/_card.html.twig' %}
                {% block card_body %}
                    <div class="d-flex align-items-center">
                        <div class="bg-secondary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-x-circle text-secondary fs-3" aria-hidden="true"></i>
                        </div>
                        <div>
                            <div class="text-muted mb-1 small fw-semibold">{{ 'tenant.stats.inactive'|trans({}, 'tenant') }}</div>
                            <h2 class="mb-0 h3">{{ inactiveCount }}</h2>
                        </div>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    {# Toolbar #}
    {% embed '_components/_card.html.twig' with {class: 'mb-4'} %}
        {% block card_body %}
            <div class="d-flex justify-content-between align-items-center">
                {# Filters #}
                <div class="btn-group btn-group-sm" role="group">
                    <a href="{{ path('tenant_management_index', {filter: 'all'}) }}"
                       class="btn btn-sm btn-outline-primary {% if filter == 'all' %}active{% endif %}">
                        <i class="bi bi-list" aria-hidden="true"></i> {{ 'tenant.filter.all'|trans({}, 'tenant') }}
                    </a>
                    <a href="{{ path('tenant_management_index', {filter: 'active'}) }}"
                       class="btn btn-sm btn-outline-success {% if filter == 'active' %}active{% endif %}">
                        <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'tenant.filter.active'|trans({}, 'tenant') }}
                    </a>
                    <a href="{{ path('tenant_management_index', {filter: 'inactive'}) }}"
                       class="btn btn-sm btn-outline-secondary {% if filter == 'inactive' %}active{% endif %}">
                        <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'tenant.filter.inactive'|trans({}, 'tenant') }}
                    </a>
                </div>

                {# Create Button #}
                <a href="{{ path('tenant_management_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'tenant.action.create'|trans({}, 'tenant') }}
                </a>
            </div>
        {% endblock %}
    {% endembed %}

    {# Tenant Table #}
    {% embed '_components/_card.html.twig' %}
        {% block card_body %}
            {% if tenants is empty %}
                <div class="text-center py-5">
                    <i class="bi bi-building text-muted" style="font-size: 4rem;" aria-hidden="true"></i>
                    <p class="text-muted mt-3">{{ 'tenant.empty'|trans({}, 'tenant') }}</p>
                    <a href="{{ path('tenant_management_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'tenant.action.create_first'|trans({}, 'tenant') }}
                    </a>
                </div>
            {% else %}
                {% embed '_components/_table.html.twig' with {
                    'class': 'align-middle',
                    'noMargin': true
                } %}
                    {% block table_head %}
                        <tr>
                            <th scope="col" style="width: 60px;">{{ 'tenant.field.logo'|trans({}, 'tenant') }}</th>
                            <th scope="col">{{ 'tenant.field.code'|trans({}, 'tenant') }}</th>
                            <th scope="col">{{ 'tenant.field.name'|trans({}, 'tenant') }}</th>
                            <th scope="col">{{ 'tenant.field.users'|trans({}, 'tenant') }}</th>
                            <th scope="col">{{ 'tenant.field.azure_tenant_id'|trans({}, 'tenant') }}</th>
                            <th scope="col">{{ 'tenant.field.status'|trans({}, 'tenant') }}</th>
                            <th scope="col">{{ 'tenant.field.created'|trans({}, 'tenant') }}</th>
                            <th scope="col" class="text-end">{{ 'common.actions'|trans({}, 'messages') }}</th>
                        </tr>
                    {% endblock %}
                    {% block table_body %}
                        {% for item in tenants %}
                            {% set tenant = item.tenant %}
                            <tr>
                                <td>
                                    {% if tenant.logoPath %}
                                        <img src="{{ asset(tenant.logoPath) }}"
                                             alt="{{ tenant.name }}"
                                             class="rounded"
                                             style="width: 40px; height: 40px; object-fit: contain;">
                                    {% else %}
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                             style="width: 40px; height: 40px;">
                                            <i class="bi bi-building text-muted" aria-hidden="true"></i>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>
                                    <code class="text-primary">{{ tenant.code }}</code>
                                </td>
                                <td>
                                    <strong>{{ tenant.name }}</strong>
                                    {% if tenant.description %}
                                        <br><small class="text-muted">{{ tenant.description|u.truncate(50, '...') }}</small>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        <i class="bi bi-people" aria-hidden="true"></i> {{ item.userCount }}
                                    </span>
                                </td>
                                <td>
                                    {% if tenant.azureTenantId %}
                                        <small class="font-monospace text-muted">{{ tenant.azureTenantId|u.truncate(20, '...') }}</small>
                                    {% else %}
                                        <span class="text-muted">â€”</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if tenant.isActive %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'tenant.status.active'|trans({}, 'tenant') }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'tenant.status.inactive'|trans({}, 'tenant') }}
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <small class="text-muted">{{ tenant.createdAt|date('d.m.Y') }}</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('tenant_management_show', {id: tenant.id}) }}"
                                           class="btn btn-outline-primary"
                                           title="{{ 'common.view'|trans({}, 'messages') }}" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                            <i class="bi bi-eye" aria-hidden="true"></i>
                                        </a>
                                        <a href="{{ path('tenant_management_edit', {id: tenant.id}) }}"
                                           class="btn btn-outline-secondary"
                                           title="{{ 'common.edit'|trans({}, 'messages') }}" aria-label="{{ 'common.edit'|trans({}, 'messages') }}">
                                            <i class="bi bi-pencil" aria-hidden="true"></i>
                                        </a>
                                        <form method="post" action="{{ path('tenant_management_toggle', {id: tenant.id}) }}" class="d-inline"
                                              data-controller="ui-actions"
                                              data-action="submit->ui-actions#confirm"
                                              data-ui-actions-message-param="{{ 'tenant.confirm.toggle'|trans({}, 'tenant') }}">
                                            <button type="submit"
                                                    class="btn btn-outline-{% if tenant.isActive %}warning{% else %}success{% endif %}"
                                                    title="{{ (tenant.isActive ? 'tenant.action.deactivate' : 'tenant.action.activate')|trans({}, 'tenant') }}"
                                                    aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                                <i class="bi bi-{% if tenant.isActive %}pause{% else %}play{% endif %}-circle" aria-hidden="true"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            {% endif %}
        {% endblock %}
    {% endembed %}

    {# Info Box #}
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle" aria-hidden="true"></i>
        <strong>{{ 'tenant.info.title'|trans({}, 'tenant') }}</strong><br>
        {{ 'tenant.info.text'|trans({}, 'tenant') }}
    </div>
{% endblock %}

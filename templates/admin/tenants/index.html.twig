{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'tenant.title'|trans }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'tenant.subtitle'|trans }}</p>
{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item active">{{ 'tenant.title'|trans }}</li>
{% endblock %}

{% block admin_content %}
    {# Statistics Cards #}
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-building text-primary fs-3"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">{{ 'tenant.stats.total'|trans }}</h6>
                            <h3 class="mb-0">{{ totalCount }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-check-circle text-success fs-3"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">{{ 'tenant.stats.active'|trans }}</h6>
                            <h3 class="mb-0">{{ activeCount }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-secondary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-x-circle text-secondary fs-3"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">{{ 'tenant.stats.inactive'|trans }}</h6>
                            <h3 class="mb-0">{{ inactiveCount }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Toolbar #}
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                {# Filters #}
                <div class="btn-group" role="group">
                    <a href="{{ path('tenant_management_index', {filter: 'all'}) }}"
                       class="btn btn-sm btn-outline-primary {% if filter == 'all' %}active{% endif %}">
                        <i class="bi bi-list"></i> {{ 'tenant.filter.all'|trans }}
                    </a>
                    <a href="{{ path('tenant_management_index', {filter: 'active'}) }}"
                       class="btn btn-sm btn-outline-success {% if filter == 'active' %}active{% endif %}">
                        <i class="bi bi-check-circle"></i> {{ 'tenant.filter.active'|trans }}
                    </a>
                    <a href="{{ path('tenant_management_index', {filter: 'inactive'}) }}"
                       class="btn btn-sm btn-outline-secondary {% if filter == 'inactive' %}active{% endif %}">
                        <i class="bi bi-x-circle"></i> {{ 'tenant.filter.inactive'|trans }}
                    </a>
                </div>

                {# Create Button #}
                <a href="{{ path('tenant_management_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> {{ 'tenant.action.create'|trans }}
                </a>
            </div>
        </div>
    </div>

    {# Tenant Table #}
    <div class="card">
        <div class="card-body">
            {% if tenants is empty %}
                <div class="text-center py-5">
                    <i class="bi bi-building text-muted" style="font-size: 4rem;"></i>
                    <p class="text-muted mt-3">{{ 'tenant.empty'|trans }}</p>
                    <a href="{{ path('tenant_management_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> {{ 'tenant.action.create_first'|trans }}
                    </a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th style="width: 60px;">{{ 'tenant.field.logo'|trans }}</th>
                                <th>{{ 'tenant.field.code'|trans }}</th>
                                <th>{{ 'tenant.field.name'|trans }}</th>
                                <th>{{ 'tenant.field.users'|trans }}</th>
                                <th>{{ 'tenant.field.azure_tenant_id'|trans }}</th>
                                <th>{{ 'tenant.field.status'|trans }}</th>
                                <th>{{ 'tenant.field.created'|trans }}</th>
                                <th class="text-end">{{ 'common.actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in tenants %}
                                {% set tenant = item.tenant %}
                                <tr>
                                    <td>
                                        {% if tenant.logoPath %}
                                            <img src="{{ asset(tenant.logoPath) }}"
                                                 alt="{{ tenant.name }}"
                                                 class="rounded"
                                                 style="width: 40px; height: 40px; object-fit: contain;">
                                        {% else %}
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                 style="width: 40px; height: 40px;">
                                                <i class="bi bi-building text-muted"></i>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <code class="text-primary">{{ tenant.code }}</code>
                                    </td>
                                    <td>
                                        <strong>{{ tenant.name }}</strong>
                                        {% if tenant.description %}
                                            <br><small class="text-muted">{{ tenant.description|u.truncate(50, '...') }}</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="bi bi-people"></i> {{ item.userCount }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if tenant.azureTenantId %}
                                            <small class="font-monospace text-muted">{{ tenant.azureTenantId|u.truncate(20, '...') }}</small>
                                        {% else %}
                                            <span class="text-muted">â€”</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if tenant.isActive %}
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> {{ 'tenant.status.active'|trans }}
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> {{ 'tenant.status.inactive'|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small class="text-muted">{{ tenant.createdAt|date('d.m.Y') }}</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('tenant_management_show', {id: tenant.id}) }}"
                                               class="btn btn-outline-primary"
                                               title="{{ 'common.view'|trans }}">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('tenant_management_edit', {id: tenant.id}) }}"
                                               class="btn btn-outline-secondary"
                                               title="{{ 'common.edit'|trans }}">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" action="{{ path('tenant_management_toggle', {id: tenant.id}) }}" class="d-inline">
                                                <button type="submit"
                                                        class="btn btn-outline-{% if tenant.isActive %}warning{% else %}success{% endif %}"
                                                        title="{{ (tenant.isActive ? 'tenant.action.deactivate' : 'tenant.action.activate')|trans }}"
                                                        onclick="return confirm('{{ 'tenant.confirm.toggle'|trans }}');">
                                                    <i class="bi bi-{% if tenant.isActive %}pause{% else %}play{% endif %}-circle"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>

    {# Info Box #}
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i>
        <strong>{{ 'tenant.info.title'|trans }}</strong><br>
        {{ 'tenant.info.text'|trans }}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'admin' %}

{% block title %}{{ 'admin.title'|trans({}, 'admin') }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Override base layout for admin portal */
        /* Using :has() for modern browsers with fallback */
        body:has(.admin-wrapper) .container,
        body .admin-wrapper ~ * .container,
        .admin-layout .container {
            max-width: 100%;
            margin: 0;
            padding: 0;
        }

        body:has(.admin-wrapper) .content,
        body .admin-wrapper ~ * .content,
        .admin-layout .content {
            background: transparent;
            padding: 0;
            box-shadow: none;
            animation: none;
        }

        /* Admin-specific layout - match .content from base.html.twig */
        .admin-wrapper {
            background: white;
            padding: var(--spacing-xl);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
        }

        [data-theme="dark"] .admin-wrapper {
            background: var(--bg-elevated);
            color: var(--text-primary);
        }

        /* Hide admin sidebar - using mega menu instead */
        .admin-sidebar {
            display: none;
        }

        .admin-sidebar nav {
            padding: 0;
        }

        .admin-sidebar .sidebar-section {
            margin-bottom: 1rem;
        }

        .admin-sidebar .sidebar-section-title {
            padding: 0.5rem 1rem;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            color: #06b6d4;
            letter-spacing: 0.5px;
            text-shadow: 0 0 5px rgba(6, 182, 212, 0.3);
            border-left: 2px solid rgba(6, 182, 212, 0.3);
        }

        .admin-sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .admin-sidebar ul li {
            margin: 0;
        }

        .admin-sidebar ul li a {
            display: flex;
            align-items: center;
            padding: 0.625rem 1rem;
            color: #495057;
            text-decoration: none;
            transition: all 0.2s;
            font-size: 0.9rem;
        }

        .admin-sidebar ul li a:hover {
            background: linear-gradient(90deg,
                        rgba(6, 182, 212, 0.1),
                        rgba(236, 72, 153, 0.05));
            color: #06b6d4;
            border-left: 3px solid #06b6d4;
            padding-left: calc(1rem - 3px);
            box-shadow: inset 0 0 10px rgba(6, 182, 212, 0.1);
        }

        .admin-sidebar ul li a.active {
            background: linear-gradient(135deg, #06b6d4, #8b5cf6);
            color: white;
            font-weight: 500;
            border-left: 3px solid #ec4899;
            padding-left: calc(1rem - 3px);
            box-shadow: 0 0 15px rgba(6, 182, 212, 0.3),
                        inset 0 0 10px rgba(255, 255, 255, 0.1);
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
        }

        .admin-sidebar ul li a i {
            margin-right: 0.5rem;
            font-size: 1rem;
            width: 18px;
            text-align: center;
        }

        .admin-sidebar ul li a .badge {
            margin-left: auto;
        }

        /* admin-content no longer used - sidebar removed */

        .admin-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #dee2e6;
        }

        .admin-header h1 {
            font-size: 1.75rem;
            font-weight: 600;
            margin: 0 0 0.5rem 0;
            color: #212529;
        }

        .admin-header p {
            color: #6c757d;
            margin: 0;
        }

        .admin-breadcrumb {
            background: transparent;
            padding: 0;
            margin-bottom: 1rem;
            font-size: 0.875rem;
        }

        .admin-breadcrumb .breadcrumb-item a {
            color: #6c757d;
            text-decoration: none;
        }

        .admin-breadcrumb .breadcrumb-item a:hover {
            color: #0d6efd;
        }

        .admin-breadcrumb .breadcrumb-item.active {
            color: #212529;
        }

        /* Dark mode support */
        [data-theme="dark"] .admin-sidebar {
            background: linear-gradient(180deg, var(--bg-elevated) 0%, var(--bg-secondary) 100%);
            box-shadow: inset -2px 0 10px rgba(6, 182, 212, 0.1);
        }

        [data-theme="dark"] .admin-sidebar ul li a {
            color: var(--text-primary);
        }

        [data-theme="dark"] .admin-sidebar ul li a:hover {
            background: linear-gradient(90deg,
                        rgba(6, 182, 212, 0.2),
                        rgba(236, 72, 153, 0.1));
            color: var(--color-primary);
            box-shadow: inset 0 0 10px rgba(6, 182, 212, 0.2);
        }

        [data-theme="dark"] .admin-sidebar ul li a.active {
            background: linear-gradient(135deg, #06b6d4, #8b5cf6);
            color: white;
            box-shadow: 0 0 15px rgba(6, 182, 212, 0.4),
                        inset 0 0 10px rgba(255, 255, 255, 0.1);
        }

        [data-theme="dark"] .admin-sidebar .sidebar-section-title {
            color: var(--text-muted);
        }

        [data-theme="dark"] .admin-header {
            border-bottom-color: var(--border-color);
        }

        [data-theme="dark"] .admin-header h1 {
            color: var(--text-primary);
        }

        [data-theme="dark"] .admin-header p {
            color: var(--text-secondary);
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .admin-wrapper {
                flex-direction: column;
            }

            .admin-sidebar {
                width: 100%;
                height: auto;
                position: relative;
                border-right: none;
                border-bottom: 1px solid #dee2e6;
                padding: 0.75rem 0;
            }

            .admin-sidebar .sidebar-section {
                margin-bottom: 0.5rem;
            }

            .admin-content {
                padding: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    {# Breadcrumb Navigation #}
    {% block breadcrumb %}
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb admin-breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">{{ 'admin.breadcrumb.home'|trans({}, 'admin') }}</a></li>
                        {% block breadcrumb_items %}{% endblock %}
                    </ol>
                </nav>
            {% endblock %}

            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|trans }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'common.close'|trans({}, 'messages') }}"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Page Header #}
            {% block admin_header %}
                <div class="admin-header">
                    <h1>{% block admin_title %}{{ 'admin.title'|trans({}, 'admin') }}{% endblock %}</h1>
                    {% block admin_subtitle %}{% endblock %}
                </div>
            {% endblock %}

    {# Main Content #}
    {% block admin_content %}
        {# Content from child templates #}
    {% endblock %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.title'|trans }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Override base layout for admin portal */
        /* Using :has() for modern browsers with fallback */
        body:has(.admin-wrapper) .container,
        body .admin-wrapper ~ * .container,
        .admin-layout .container {
            max-width: 100%;
            margin: 0;
            padding: 0;
        }

        body:has(.admin-wrapper) .content,
        body .admin-wrapper ~ * .content,
        .admin-layout .content {
            background: transparent;
            padding: 0;
            box-shadow: none;
            animation: none;
        }

        /* Admin-specific layout */
        .admin-wrapper {
            display: flex;
            min-height: calc(100vh - 200px);
            background: var(--color-bg);
        }

        [data-theme="dark"] .admin-wrapper {
            background: var(--bg-primary);
        }

        .admin-sidebar {
            width: 240px;
            background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
            border-right: 2px solid transparent;
            border-image: linear-gradient(180deg,
                          rgba(6, 182, 212, 0.3),
                          rgba(236, 72, 153, 0.2),
                          rgba(139, 92, 246, 0.15)) 1;
            padding: 1rem 0;
            position: sticky;
            top: 0;
            height: calc(100vh - 200px);
            overflow-y: auto;
            box-shadow: inset -2px 0 10px rgba(6, 182, 212, 0.05);
        }

        .admin-sidebar nav {
            padding: 0;
        }

        .admin-sidebar .sidebar-section {
            margin-bottom: 1rem;
        }

        .admin-sidebar .sidebar-section-title {
            padding: 0.5rem 1rem;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            color: #06b6d4;
            letter-spacing: 0.5px;
            text-shadow: 0 0 5px rgba(6, 182, 212, 0.3);
            border-left: 2px solid rgba(6, 182, 212, 0.3);
        }

        .admin-sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .admin-sidebar ul li {
            margin: 0;
        }

        .admin-sidebar ul li a {
            display: flex;
            align-items: center;
            padding: 0.625rem 1rem;
            color: #495057;
            text-decoration: none;
            transition: all 0.2s;
            font-size: 0.9rem;
        }

        .admin-sidebar ul li a:hover {
            background: linear-gradient(90deg,
                        rgba(6, 182, 212, 0.1),
                        rgba(236, 72, 153, 0.05));
            color: #06b6d4;
            border-left: 3px solid #06b6d4;
            padding-left: calc(1rem - 3px);
            box-shadow: inset 0 0 10px rgba(6, 182, 212, 0.1);
        }

        .admin-sidebar ul li a.active {
            background: linear-gradient(135deg, #06b6d4, #8b5cf6);
            color: white;
            font-weight: 500;
            border-left: 3px solid #ec4899;
            padding-left: calc(1rem - 3px);
            box-shadow: 0 0 15px rgba(6, 182, 212, 0.3),
                        inset 0 0 10px rgba(255, 255, 255, 0.1);
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
        }

        .admin-sidebar ul li a i {
            margin-right: 0.5rem;
            font-size: 1rem;
            width: 18px;
            text-align: center;
        }

        .admin-sidebar ul li a .badge {
            margin-left: auto;
        }

        .admin-content {
            flex: 1;
            padding: 1.5rem;
            max-width: 100%;
            background: white;
            overflow-x: auto;
        }

        [data-theme="dark"] .admin-content {
            background: var(--bg-secondary);
        }

        .admin-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #dee2e6;
        }

        .admin-header h1 {
            font-size: 1.75rem;
            font-weight: 600;
            margin: 0 0 0.5rem 0;
            color: #212529;
        }

        .admin-header p {
            color: #6c757d;
            margin: 0;
        }

        .admin-breadcrumb {
            background: transparent;
            padding: 0;
            margin-bottom: 1rem;
            font-size: 0.875rem;
        }

        .admin-breadcrumb .breadcrumb-item a {
            color: #6c757d;
            text-decoration: none;
        }

        .admin-breadcrumb .breadcrumb-item a:hover {
            color: #0d6efd;
        }

        .admin-breadcrumb .breadcrumb-item.active {
            color: #212529;
        }

        /* Dark mode support */
        [data-theme="dark"] .admin-sidebar {
            background: linear-gradient(180deg, var(--bg-elevated) 0%, var(--bg-secondary) 100%);
            box-shadow: inset -2px 0 10px rgba(6, 182, 212, 0.1);
        }

        [data-theme="dark"] .admin-sidebar ul li a {
            color: var(--text-primary);
        }

        [data-theme="dark"] .admin-sidebar ul li a:hover {
            background: linear-gradient(90deg,
                        rgba(6, 182, 212, 0.2),
                        rgba(236, 72, 153, 0.1));
            color: var(--color-primary);
            box-shadow: inset 0 0 10px rgba(6, 182, 212, 0.2);
        }

        [data-theme="dark"] .admin-sidebar ul li a.active {
            background: linear-gradient(135deg, #06b6d4, #8b5cf6);
            color: white;
            box-shadow: 0 0 15px rgba(6, 182, 212, 0.4),
                        inset 0 0 10px rgba(255, 255, 255, 0.1);
        }

        [data-theme="dark"] .admin-sidebar .sidebar-section-title {
            color: var(--text-muted);
        }

        [data-theme="dark"] .admin-header {
            border-bottom-color: var(--border-color);
        }

        [data-theme="dark"] .admin-header h1 {
            color: var(--text-primary);
        }

        [data-theme="dark"] .admin-header p {
            color: var(--text-secondary);
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .admin-wrapper {
                flex-direction: column;
            }

            .admin-sidebar {
                width: 100%;
                height: auto;
                position: relative;
                border-right: none;
                border-bottom: 1px solid #dee2e6;
                padding: 0.75rem 0;
            }

            .admin-sidebar .sidebar-section {
                margin-bottom: 0.5rem;
            }

            .admin-content {
                padding: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="admin-wrapper">
        {# Admin Sidebar Navigation #}
        <aside class="admin-sidebar" role="complementary" aria-label="Admin navigation">
            <nav role="navigation">
                {# Admin Dashboard #}
                <div class="sidebar-section">
                    <ul>
                        <li>
                            <a href="{{ path('admin_dashboard') }}"
                               class="{% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
                                <i class="bi bi-speedometer2"></i> {{ 'admin.nav.dashboard'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>

                {# User & Access Management #}
                <div class="sidebar-section">
                    <div class="sidebar-section-title">{{ 'admin.section.user_access'|trans }}</div>
                    <ul>
                        <li>
                            <a href="{{ path('tenant_management_index') }}"
                               class="{% if app.request.get('_route') starts with 'tenant_management_' and app.request.get('_route') != 'tenant_management_corporate_structure' %}active{% endif %}">
                                <i class="bi bi-building"></i> {{ 'admin.nav.tenants'|trans }}
                            </a>
                        </li>
                        {% if is_multi_tenant_environment %}
                            <li>
                                <a href="{{ path('tenant_management_corporate_structure') }}"
                                   class="{% if app.request.get('_route') == 'tenant_management_corporate_structure' %}active{% endif %}">
                                    <i class="bi bi-diagram-3"></i> {{ 'admin.nav.corporate_structure'|trans }}
                                </a>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ path('user_management_index') }}"
                               class="{% if app.request.get('_route') starts with 'user_management_' %}active{% endif %}">
                                <i class="bi bi-people"></i> {{ 'admin.nav.users'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('role_management_index') }}"
                               class="{% if app.request.get('_route') starts with 'role_management_' %}active{% endif %}">
                                <i class="bi bi-shield-lock"></i> {{ 'admin.nav.roles'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('permission_index') }}"
                               class="{% if app.request.get('_route') starts with 'permission_' %}active{% endif %}">
                                <i class="bi bi-key"></i> {{ 'admin.nav.permissions'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('session_index') }}"
                               class="{% if app.request.get('_route') starts with 'session_' %}active{% endif %}">
                                <i class="bi bi-clock-history"></i> {{ 'admin.nav.sessions'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('admin_mfa_index') }}"
                               class="{% if app.request.get('_route') starts with 'admin_mfa_' %}active{% endif %}">
                                <i class="bi bi-shield-check"></i> {{ 'admin.nav.mfa'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>

                {# System Configuration #}
                <div class="sidebar-section">
                    <div class="sidebar-section-title">{{ 'admin.section.system_config'|trans }}</div>
                    <ul>
                        <li>
                            <a href="{{ path('admin_settings_index') }}"
                               class="{% if app.request.get('_route') starts with 'admin_settings_' %}active{% endif %}">
                                <i class="bi bi-gear"></i> {{ 'admin.nav.settings'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>

                {# Modules & Features #}
                <div class="sidebar-section">
                    <div class="sidebar-section-title">{{ 'admin.section.modules'|trans }}</div>
                    <ul>
                        <li>
                            <a href="{{ path('admin_modules_index') }}"
                               class="{% if app.request.get('_route') starts with 'admin_modules_' %}active{% endif %}">
                                <i class="bi bi-puzzle"></i> {{ 'admin.nav.module_management'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('admin_compliance_index') }}"
                               class="{% if app.request.get('_route') starts with 'admin_compliance_' %}active{% endif %}">
                                <i class="bi bi-check-circle"></i> {{ 'admin.nav.compliance_management'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>

                {# Monitoring & Logs #}
                <div class="sidebar-section">
                    <div class="sidebar-section-title">{{ 'admin.section.monitoring'|trans }}</div>
                    <ul>
                        <li>
                            <a href="{{ path('monitoring_health') }}"
                               class="{% if app.request.get('_route') starts with 'monitoring_' %}active{% endif %}">
                                <i class="bi bi-heart-pulse"></i> {{ 'admin.nav.system_health'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('app_audit_log_index') }}"
                               class="{% if app.request.get('_route') starts with 'app_audit_log_' %}active{% endif %}">
                                <i class="bi bi-journal-text"></i> {{ 'admin.nav.audit_log'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>

                {# Data Management #}
                <div class="sidebar-section">
                    <div class="sidebar-section-title">{{ 'admin.section.data_management'|trans }}</div>
                    <ul>
                        <li>
                            <a href="{{ path('data_backup_index') }}"
                               class="{% if app.request.get('_route') starts with 'data_backup' %}active{% endif %}">
                                <i class="bi bi-hdd"></i> {{ 'admin.nav.backup'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('data_export_index') }}"
                               class="{% if app.request.get('_route') starts with 'data_export' %}active{% endif %}">
                                <i class="bi bi-download"></i> {{ 'admin.nav.export'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('data_import_index') }}"
                               class="{% if app.request.get('_route') starts with 'data_import' %}active{% endif %}">
                                <i class="bi bi-upload"></i> {{ 'admin.nav.import'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>

                {# Licensing #}
                <div class="sidebar-section">
                    <div class="sidebar-section-title">{{ 'admin.section.licensing'|trans }}</div>
                    <ul>
                        <li>
                            <a href="{{ path('admin_licensing_index') }}"
                               class="{% if app.request.get('_route') starts with 'admin_licensing' %}active{% endif %}">
                                <i class="bi bi-file-text"></i> {{ 'admin.nav.license_management'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>

                {# Back to Application #}
                <div class="sidebar-section">
                    <div class="sidebar-section-title">{{ 'admin.section.navigation'|trans }}</div>
                    <ul>
                        <li>
                            <a href="{{ path('app_dashboard') }}">
                                <i class="bi bi-arrow-left"></i> {{ 'admin.nav.back_to_app'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </aside>

        {# Admin Content Area #}
        <main class="admin-content">
            {# Breadcrumb Navigation #}
            {% block breadcrumb %}
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb admin-breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">{{ 'admin.breadcrumb.home'|trans }}</a></li>
                        {% block breadcrumb_items %}{% endblock %}
                    </ol>
                </nav>
            {% endblock %}

            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message|trans }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Page Header #}
            {% block admin_header %}
                <div class="admin-header">
                    <h1>{% block admin_title %}{{ 'admin.title'|trans }}{% endblock %}</h1>
                    {% block admin_subtitle %}{% endblock %}
                </div>
            {% endblock %}

            {# Main Content #}
            {% block admin_content %}
                {# Content from child templates #}
            {% endblock %}
        </main>
    </div>
{% endblock %}

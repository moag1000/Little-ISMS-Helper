{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'admin.modules.dependency_graph'|trans({}, 'admin') }} - {{ 'admin.panel.title'|trans({}, 'admin') }}{% endblock %}

{% block admin_title %}
    <i class="bi bi-diagram-3 me-2" aria-hidden="true"></i>
    Modul-Abhängigkeiten
{% endblock %}

{% block admin_subtitle %}
    <p class="lead text-muted">
        Visualisierung der Modul-Abhängigkeiten
    </p>
{% endblock %}

{% block admin_content %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <a href="{{ path('admin_modules_index') }}" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>
                {{ 'common.back_to_overview'|trans({}, 'messages') }}
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header">
                        <h2 class="mb-0">Abhängigkeits-Graph</h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    {% embed '_components/_table.html.twig' with {
                        'class': 'table-hover',
                        'noMargin': true,
                        'responsive': true
                    } %}
                        {% block table_head %}
                            <tr>
                                <th scope="col">Modul</th>
                                <th scope="col">Status</th>
                                <th scope="col">Typ</th>
                                <th scope="col">Benötigt</th>
                                <th scope="col">Benötigt von</th>
                            </tr>
                        {% endblock %}
                        {% block table_body %}
                            {% for key, graph in dependency_graph %}
                                <tr class="{{ key in active_modules ? 'table-success' : '' }}">
                                    <td>
                                        <strong>{{ graph.name }}</strong>
                                    </td>
                                    <td>
                                        {% if key in active_modules %}
                                            {% include '_components/_badge.html.twig' with { variant: 'success', content: 'Aktiv' } %}
                                        {% else %}
                                            {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'Inaktiv' } %}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if graph.required %}
                                            {% include '_components/_badge.html.twig' with { variant: 'warning', content: 'Erforderlich' } %}
                                        {% else %}
                                            {% include '_components/_badge.html.twig' with { variant: 'info', content: 'Optional' } %}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if graph.dependencies|length > 0 %}
                                            {% for dep in graph.dependencies %}
                                                {% include '_components/_badge.html.twig' with { variant: 'warning', content: dependency_graph[dep].name, class: 'me-1' } %}
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if graph.dependents|length > 0 %}
                                            {% for dep in graph.dependents %}
                                                {% include '_components/_badge.html.twig' with { variant: 'info', content: dependency_graph[dep].name, class: 'me-1' } %}
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}
                {% endblock %}
            {% endembed %}
        </div>

        <div class="col-lg-4">
            {% embed '_components/_card.html.twig' with { 'class': 'mb-3' } %}
                {% block card_header %}
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">Legende</h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <dl class="mb-0">
                        <dt>{% include '_components/_badge.html.twig' with { variant: 'success', content: 'Aktiv' } %}</dt>
                        <dd>Modul ist derzeit aktiviert</dd>

                        <dt>{% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'Inaktiv' } %}</dt>
                        <dd>Modul ist derzeit deaktiviert</dd>

                        <dt>{% include '_components/_badge.html.twig' with { variant: 'warning', content: 'Erforderlich' } %}</dt>
                        <dd>Modul ist Pflicht und kann nicht deaktiviert werden</dd>

                        <dt>{% include '_components/_badge.html.twig' with { variant: 'info', content: 'Optional' } %}</dt>
                        <dd>Modul kann aktiviert/deaktiviert werden</dd>

                        <dt>Benötigt</dt>
                        <dd>Module, die vorher aktiviert sein müssen</dd>

                        <dt>Benötigt von</dt>
                        <dd>Module, die dieses Modul benötigen</dd>
                    </dl>
                {% endblock %}
            {% endembed %}

            {% embed '_components/_card.html.twig' with { 'class': 'border-info' } %}
                {% block card_header %}
                    <div class="card-header bg-info text-white">
                        <h2 class="mb-0">
                            <i class="bi bi-lightbulb me-2" aria-hidden="true"></i>
                            Hinweise
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <ul class="mb-0 small">
                        <li>{{ 'admin.modules.hint.auto_dependencies'|trans({}, 'admin') }}</li>
                        <li>{{ 'admin.modules.hint.activate_required'|trans({}, 'admin') }}</li>
                        <li>{{ 'admin.modules.hint.deactivate_dependency'|trans({}, 'admin') }}</li>
                        <li>{{ 'admin.modules.hint.required_always_active'|trans({}, 'admin') }}</li>
                    </ul>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
</div>
{% endblock admin_content %}

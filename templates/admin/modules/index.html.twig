{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'admin.modules.title'|trans({}, 'admin') }} - {{ 'admin.panel.title'|trans({}, 'admin') }}{% endblock %}

{% block admin_title %}<i class="bi bi-puzzle" aria-hidden="true"></i> {{ 'admin.modules.title'|trans({}, 'admin') }}{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.admin'|trans({}, 'nav'), url: path('admin_dashboard') },
            { label: 'admin.modules.title'|trans({}, 'admin') }
        ]
    } %}

    <div class="d-flex justify-content-end align-items-center mb-4">
        <a href="{{ path('admin_modules_graph') }}" class="btn btn-outline-primary">
            <i class="bi bi-diagram-3" aria-hidden="true"></i> {{ 'admin.modules.dependency_graph'|trans({}, 'admin') }}
        </a>
    </div>

    {# Statistics #}
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            {% embed '_components/_card.html.twig' with {borderColor: 'primary'} %}
                {% block card_body %}
                    <div class="text-center">
                        <h2 class="text-muted mb-1 fs-6">{{ 'admin.modules.stats.total'|trans({}, 'admin') }}</h2>
                        <div class="fs-2 fw-bold mb-0">{{ statistics.total_modules }}</div>
                        <i class="bi bi-box fs-3 text-primary opacity-25" aria-hidden="true"></i>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-3">
            {% embed '_components/_card.html.twig' with {borderColor: 'success'} %}
                {% block card_body %}
                    <div class="text-center">
                        <h2 class="text-muted mb-1 fs-6">{{ 'admin.modules.stats.active'|trans({}, 'admin') }}</h2>
                        <div class="fs-2 fw-bold mb-0 text-success">{{ statistics.active_modules }}</div>
                        <i class="bi bi-check-circle fs-3 text-success opacity-25" aria-hidden="true"></i>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-3">
            {% embed '_components/_card.html.twig' with {borderColor: 'secondary'} %}
                {% block card_body %}
                    <div class="text-center">
                        <h2 class="text-muted mb-1 fs-6">{{ 'admin.modules.stats.inactive'|trans({}, 'admin') }}</h2>
                        <div class="fs-2 fw-bold mb-0 text-secondary">{{ statistics.inactive_modules }}</div>
                        <i class="bi bi-x-circle fs-3 text-secondary opacity-25" aria-hidden="true"></i>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-3">
            {% embed '_components/_card.html.twig' with {borderColor: 'warning'} %}
                {% block card_body %}
                    <div class="text-center">
                        <h2 class="text-muted mb-1 fs-6">{{ 'admin.modules.stats.required'|trans({}, 'admin') }}</h2>
                        <div class="fs-2 fw-bold mb-0 text-warning">{{ statistics.required_modules }}</div>
                        <i class="bi bi-star fs-3 text-warning opacity-25" aria-hidden="true"></i>
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    {# Active Modules #}
    {% embed '_components/_card.html.twig' with {class: 'mb-4'} %}
        {% block card_header %}
            <div class="card-header bg-success text-white">
                <h2 class="mb-0">
                    <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'admin.modules.active_modules'|trans({}, 'admin') }} ({{ active_modules|length }})
                </h2>
            </div>
        {% endblock %}
        {% block card_body %}
            {% if active_modules|length > 0 %}
                <div class="row g-3">
                    {% for key, module in all_modules %}
                        {% if key in active_modules %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 border-success">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h3 class="mb-0">
                                            <i class="bi bi-{{ module.icon }} text-{{ module.required ? 'warning' : 'success' }}" aria-hidden="true"></i>
                                            {{ module.name }}
                                        </h3>
                                        {% include '_components/_badge.html.twig' with { variant: 'success', content: 'admin.modules.status.active'|trans({}, 'admin') } %}
                                    </div>
                                    <p class="text-muted small">{{ module.description }}</p>

                                    {% if dependency_graph[key].dependencies|length > 0 %}
                                        <div class="mb-2">
                                            <small class="text-warning">
                                                <i class="bi bi-link-45deg" aria-hidden="true"></i>
                                                <strong>{{ 'admin.modules.dependencies'|trans({}, 'admin') }}:</strong>
                                            </small><br>
                                            {% for dep in dependency_graph[key].dependencies %}
                                                {% include '_components/_badge.html.twig' with { variant: 'warning', content: all_modules[dep].name, class: 'me-1 mb-1' } %}
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                    {% if dependency_graph[key].dependents|length > 0 %}
                                        <div class="mb-2">
                                            <small class="text-info">
                                                <i class="bi bi-arrow-right" aria-hidden="true"></i>
                                                <strong>{{ 'admin.modules.required_by'|trans({}, 'admin') }}:</strong>
                                            </small><br>
                                            {% for dep in dependency_graph[key].dependents %}
                                                {% include '_components/_badge.html.twig' with { variant: 'info', content: all_modules[dep].name, class: 'me-1 mb-1' } %}
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                    <div class="d-grid gap-2 mt-3">
                                        <a href="{{ path('admin_modules_details', {moduleKey: key}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'admin.modules.details'|trans({}, 'admin') }}
                                        </a>
                                        {% if not module.required %}
                                            <form method="post" action="{{ path('admin_modules_deactivate', {moduleKey: key}) }}"
                                                  data-controller="ui-actions"
                                                  data-action="submit->ui-actions#confirm"
                                                  data-ui-actions-message-param="{{ 'admin.modules.confirm_deactivate'|trans({'%name%': module.name}, 'admin') }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                    <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'admin.modules.deactivate'|trans({}, 'admin') }}
                                                </button>
                                            </form>
                                        {% else %}
                                            <button type="button" class="btn btn-sm btn-secondary" disabled>
                                                <i class="bi bi-lock" aria-hidden="true"></i> {{ 'admin.modules.required'|trans({}, 'admin') }}
                                            </button>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted text-center py-4">{{ 'admin.modules.no_active'|trans({}, 'admin') }}</p>
            {% endif %}
        {% endblock %}
    {% endembed %}

    {# Inactive Modules #}
    {% set inactive_modules = [] %}
    {% for key, module in all_modules %}
        {% if key not in active_modules %}
            {% set inactive_modules = inactive_modules|merge([{key: key, module: module}]) %}
        {% endif %}
    {% endfor %}

    {% if inactive_modules|length > 0 %}
        {% embed '_components/_card.html.twig' %}
            {% block card_header %}
                <div class="card-header bg-secondary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'admin.modules.inactive_modules'|trans({}, 'admin') }} ({{ inactive_modules|length }})
                    </h2>
                </div>
            {% endblock %}
            {% block card_body %}
                <div class="row g-3">
                    {% for item in inactive_modules %}
                        {% set key = item.key %}
                        {% set module = item.module %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 border-secondary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h3 class="mb-0 text-muted">
                                            <i class="bi bi-{{ module.icon }}" aria-hidden="true"></i>
                                            {{ module.name }}
                                        </h3>
                                        {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'admin.modules.status.inactive'|trans({}, 'admin') } %}
                                    </div>
                                    <p class="text-muted small">{{ module.description }}</p>

                                    {% if dependency_graph[key].dependencies|length > 0 %}
                                        <div class="mb-2">
                                            <small class="text-warning">
                                                <i class="bi bi-link-45deg" aria-hidden="true"></i>
                                                <strong>{{ 'admin.modules.dependencies'|trans({}, 'admin') }}:</strong>
                                            </small><br>
                                            {% for dep in dependency_graph[key].dependencies %}
                                                {% include '_components/_badge.html.twig' with { variant: 'warning', content: all_modules[dep].name, class: 'me-1 mb-1' } %}
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                    <div class="d-grid gap-2 mt-3">
                                        <a href="{{ path('admin_modules_details', {moduleKey: key}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'admin.modules.details'|trans({}, 'admin') }}
                                        </a>
                                        <form method="post" action="{{ path('admin_modules_activate', {moduleKey: key}) }}">
                                            <button type="submit" class="btn btn-sm btn-success w-100">
                                                <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'admin.modules.activate'|trans({}, 'admin') }}
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endblock %}
        {% endembed %}
    {% endif %}
</div>
{% endblock admin_content %}

{% extends 'admin/layout.html.twig' %}

{% block title %}{{ module.name }} - {{ 'admin.modules.details'|trans({}, 'admin') }}{% endblock %}

{% block admin_title %}
    <i class="bi bi-{{ module.icon }} me-2" aria-hidden="true"></i>
    {{ module.name }}
{% endblock %}

{% block admin_content %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <a href="{{ path('admin_modules_index') }}" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>
                {{ 'common.back_to_overview'|trans({}, 'messages') }}
            </a>

            <div class="d-flex justify-content-end align-items-center">
                <div>
                    {% if is_active %}
                        {% include '_components/_badge.html.twig' with { variant: 'success', content: 'Aktiv', class: 'fs-5' } %}
                    {% else %}
                        {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'Inaktiv', class: 'fs-5' } %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            {# Module Info #}
            <div class="card mb-4">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                        Modul-Informationen
                    </h2>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Beschreibung</dt>
                        <dd class="col-sm-9">{{ module.description }}</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            {% if module.required %}
                                {% include '_components/_badge.html.twig' with { variant: 'warning', content: 'Erforderlich' } %}
                            {% else %}
                                {% include '_components/_badge.html.twig' with { variant: 'info', content: 'Optional' } %}
                            {% endif %}
                            {% if is_active %}
                                {% include '_components/_badge.html.twig' with { variant: 'success', content: 'Aktiv' } %}
                            {% else %}
                                {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'Inaktiv' } %}
                            {% endif %}
                        </dd>

                        <dt class="col-sm-3">Entities</dt>
                        <dd class="col-sm-9">
                            {% for entity in module.entities %}
                                {% include '_components/_badge.html.twig' with { variant: 'secondary', content: entity, class: 'me-1' } %}
                            {% endfor %}
                        </dd>

                        <dt class="col-sm-3">Routen</dt>
                        <dd class="col-sm-9">
                            {% for route in module.routes %}
                                <code class="me-2">{{ route }}</code>
                            {% endfor %}
                        </dd>
                    </dl>
                </div>
            </div>

            {# Dependencies #}
            {% if graph.dependencies|length > 0 or graph.dependents|length > 0 %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="mb-0">
                            <i class="bi bi-diagram-3 me-2" aria-hidden="true"></i>
                            Abhängigkeiten
                        </h2>
                    </div>
                    <div class="card-body">
                        {% if graph.dependencies|length > 0 %}
                            <h3 class="mb-2">
                                <i class="bi bi-link text-warning me-2" aria-hidden="true"></i>
                                Benötigt folgende Module:
                            </h3>
                            <div class="mb-4">
                                {% for dep in graph.dependencies %}
                                    {% include '_components/_badge.html.twig' with { variant: 'warning', content: dep, class: 'fs-6 me-2 mb-2' } %}
                                {% endfor %}
                            </div>
                        {% endif %}

                        {% if graph.dependents|length > 0 %}
                            <h3 class="mb-2">
                                <i class="bi bi-arrow-right text-info me-2" aria-hidden="true"></i>
                                Wird benötigt von:
                            </h3>
                            <div>
                                {% for dep in graph.dependents %}
                                    {% include '_components/_badge.html.twig' with { variant: 'info', content: dep, class: 'fs-6 me-2 mb-2' } %}
                                {% endfor %}
                            </div>
                        {% endif %}

                        {% if graph.dependencies|length == 0 and graph.dependents|length == 0 %}
                            <p class="text-muted mb-0">
                                <i class="bi bi-check-circle text-success me-2" aria-hidden="true"></i>
                                Dieses Modul hat keine Abhängigkeiten.
                            </p>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            {# Sample Data #}
            {% if sample_data|length > 0 and is_active %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h2 class="mb-0">
                            <i class="bi bi-file-earmark-code me-2" aria-hidden="true"></i>
                            Verfügbare Beispiel-Daten
                        </h2>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ path('admin_modules_import_data', {moduleKey: module_key}) }}">
                            {% for key, data in sample_data %}
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="checkbox" name="samples[{{ key }}]" value="1" id="sample_{{ key }}">
                                    <label class="form-check-label" for="sample_{{ key }}">
                                        <strong>{{ data.name }}</strong>
                                        <br>
                                        <small class="text-muted">{{ data.description }}</small>
                                    </label>
                                </div>
                            {% endfor %}
                            <button type="submit" class="btn btn-primary mt-3">
                                <i class="bi bi-download me-2" aria-hidden="true"></i>
                                Ausgewählte Daten importieren
                            </button>
                        </form>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            {# Actions #}
            <div class="card mb-4 border-primary">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-gears me-2" aria-hidden="true"></i>
                        Aktionen
                    </h2>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        {% if is_active %}
                            {% if not module.required %}
                                <form method="post" action="{{ path('admin_modules_deactivate', {moduleKey: module_key}) }}"
                                      data-controller="ui-actions"
                                      data-action="submit->ui-actions#confirm"
                                      data-ui-actions-message-param="Modul {{ module.name }} wirklich deaktivieren?">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-x me-2" aria-hidden="true"></i>
                                        Modul deaktivieren
                                    </button>
                                </form>
                            {% else %}
                                <button type="button" class="btn btn-secondary" disabled>
                                    <i class="bi bi-lock me-2" aria-hidden="true"></i>
                                    Modul ist erforderlich
                                </button>
                            {% endif %}

                            <a href="{{ path('admin_modules_export', {moduleKey: module_key}) }}" class="btn btn-outline-primary">
                                <i class="bi bi-file-earmark-export me-2" aria-hidden="true"></i>
                                Daten exportieren
                            </a>
                        {% else %}
                            <form method="post" action="{{ path('admin_modules_activate', {moduleKey: module_key}) }}">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check me-2" aria-hidden="true"></i>
                                    Modul aktivieren
                                </button>
                            </form>
                        {% endif %}

                        <a href="{{ path('admin_modules_graph') }}" class="btn btn-outline-info">
                            <i class="bi bi-diagram-3 me-2" aria-hidden="true"></i>
                            Dependency-Graph
                        </a>
                    </div>
                </div>
            </div>

            {# Quick Info #}
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-lightbulb me-2" aria-hidden="true"></i>
                        Hinweise
                    </h2>
                </div>
                <div class="card-body">
                    <ul class="mb-0 small">
                        {% if module.required %}
                            <li>Dieses Modul ist erforderlich und kann nicht deaktiviert werden</li>
                        {% endif %}
                        {% if graph.dependents|length > 0 %}
                            <li>Andere Module hängen von diesem Modul ab</li>
                        {% endif %}
                        <li>Beim Deaktivieren werden keine Daten gelöscht</li>
                        <li>Sie können das Modul jederzeit wieder aktivieren</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock admin_content %}

{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'admin'%}
{% block admin_title %}{{ 'admin.settings.security.title'|trans({}, 'admin') }}{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('admin_settings_index') }}">{{ 'admin.settings.title'|trans({}, 'admin') }}</a></li>
    <li class="breadcrumb-item active">{{ 'admin.settings.security.title'|trans({}, 'admin') }}</li>
{% endblock %}

{% block admin_content %}
    <div class="row">
        <div class="col-lg-8">
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header bg-white">
                        <h2 class="card-title mb-0">
                            <i class="bi bi-shield-lock-fill text-danger" aria-hidden="true"></i>
                            {{ 'admin.settings.security.title'|trans({}, 'admin') }}
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    {{ form_start(form) }}
                        {% include '_components/_auto_form.html.twig' with {
                            'form': form,
                            'sections': {
                                'session_settings': {
                                    'label': 'admin.settings.security.session_settings'|trans({}, 'admin'),
                                    'fields': ['session_lifetime', 'remember_me_lifetime']
                                },
                                'password_policy': {
                                    'label': 'admin.settings.security.password_settings'|trans({}, 'admin'),
                                    'fields': ['password_min_length']
                                },
                                '2fa_settings': {
                                    'label': 'admin.settings.security.2fa_settings'|trans({}, 'admin'),
                                    'fields': ['require_2fa']
                                },
                                'login_protection': {
                                    'label': 'admin.settings.security.auth_settings'|trans({}, 'admin'),
                                    'fields': ['max_login_attempts', 'lockout_duration']
                                }
                            },
                            'col_widths': {
                                'session_lifetime': 12,
                                'remember_me_lifetime': 12,
                                'password_min_length': 12,
                                'require_2fa': 12,
                                'max_login_attempts': 12,
                                'lockout_duration': 12
                            },
                            'translation_domain': 'admin'
                        } %}

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('admin_settings_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save'|trans({}, 'messages') }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                {% endblock %}
            {% endembed %}
        </div>

        <div class="col-lg-4">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                <strong>{{ 'common.warning'|trans({}, 'messages') }}</strong><br>
                {{ 'admin.settings.security.warning'|trans({}, 'admin') }}
            </div>
        </div>
    </div>
{% endblock %}

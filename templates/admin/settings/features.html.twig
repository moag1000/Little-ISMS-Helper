{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'admin.settings.features.title'|trans({}, 'admin') }}{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('admin_settings_index') }}">{{ 'admin.settings.title'|trans({}, 'admin') }}</a></li>
    <li class="breadcrumb-item active">{{ 'admin.settings.features.title'|trans({}, 'admin') }}</li>
{% endblock %}

{% block admin_content %}
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-toggles2 text-success" aria-hidden="true"></i>
                        {{ 'admin.settings.features.title'|trans({}, 'admin') }}
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <p class="text-muted">{{ 'admin.settings.features.intro'|trans({}, 'admin') }}</p>

                        <div class="list-group list-group-flush">
                            {# Dark Mode #}
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1">
                                            <i class="bi bi-moon-stars" aria-hidden="true"></i>
                                            {{ 'admin.settings.features.dark_mode'|trans({}, 'admin') }}
                                            <span class="badge bg-success ms-2">Recommended</span>
                                        </h5>
                                        <p class="mb-0 small text-muted">
                                            {{ 'admin.settings.features.dark_mode_help'|trans({}, 'admin') }}
                                        </p>
                                        <div class="alert alert-info alert-sm mt-2 mb-0">
                                            <i class="bi bi-info-circle" aria-hidden="true"></i>
                                            <strong>Best Practice:</strong> Dark mode reduces eye strain during extended work sessions and saves energy on OLED screens.
                                        </div>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" name="enable_dark_mode" id="enable_dark_mode" value="1"
                                               {% if settings.enable_dark_mode %}checked{% endif %}>
                                    </div>
                                </div>
                            </div>

                            {# Global Search #}
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1">
                                            <i class="bi bi-search" aria-hidden="true"></i>
                                            {{ 'admin.settings.features.global_search'|trans({}, 'admin') }}
                                        </h5>
                                        <p class="mb-0 small text-muted">{{ 'admin.settings.features.global_search_help'|trans({}, 'admin') }}</p>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" name="enable_global_search" id="enable_global_search" value="1"
                                               {% if settings.enable_global_search %}checked{% endif %}>
                                    </div>
                                </div>
                            </div>

                            {# Quick View #}
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1">
                                            <i class="bi bi-eye-fill" aria-hidden="true"></i>
                                            {{ 'admin.settings.features.quick_view'|trans({}, 'admin') }}
                                        </h5>
                                        <p class="mb-0 small text-muted">{{ 'admin.settings.features.quick_view_help'|trans({}, 'admin') }}</p>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" name="enable_quick_view" id="enable_quick_view" value="1"
                                               {% if settings.enable_quick_view %}checked{% endif %}>
                                    </div>
                                </div>
                            </div>

                            {# Notifications #}
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1">
                                            <i class="bi bi-bell-fill" aria-hidden="true"></i>
                                            {{ 'admin.settings.features.notifications'|trans({}, 'admin') }}
                                        </h5>
                                        <p class="mb-0 small text-muted">{{ 'admin.settings.features.notifications_help'|trans({}, 'admin') }}</p>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" name="enable_notifications" id="enable_notifications" value="1"
                                               {% if settings.enable_notifications %}checked{% endif %}>
                                    </div>
                                </div>
                            </div>

                            {# Audit Log #}
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h4 class="mb-1">
                                            <i class="bi bi-journal-text" aria-hidden="true"></i>
                                            {{ 'admin.settings.features.audit_log'|trans({}, 'admin') }}
                                            <span class="badge bg-danger ms-2">Required for ISO 27001</span>
                                        </h5>
                                        <p class="mb-0 small text-muted">
                                            {{ 'admin.settings.features.audit_log_help'|trans({}, 'admin') }}
                                        </p>
                                        <div class="alert alert-warning alert-sm mt-2 mb-0">
                                            <i class="bi bi-shield-exclamation" aria-hidden="true"></i>
                                            <strong>Compliance:</strong> ISO 27001 A.12.4.1 requires event logging for security monitoring and incident investigation.
                                            Disabling this feature may violate compliance requirements.
                                        </div>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" name="enable_audit_log" id="enable_audit_log" value="1"
                                               {% if settings.enable_audit_log %}checked{% endif %}>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('admin_settings_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save'|trans({}, 'messages') }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-white"><h5 class="card-title mb-0">{{ 'admin.settings.info'|trans({}, 'admin') }}</h5>
                </div>
                <div class="card-body">
                    <p class="small">{{ 'admin.settings.features.info_text'|trans({}, 'admin') }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .alert-sm {
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
            border-radius: 0.375rem;
        }
        .alert-sm strong {
            font-weight: 600;
        }
        .alert-sm .bi {
            margin-right: 0.25rem;
        }
        .list-group-item {
            border-left: none;
            border-right: none;
        }
        .list-group-item:first-child {
            border-top: none;
        }
        .badge {
            font-size: 0.7rem;
            font-weight: 500;
            padding: 0.25rem 0.5rem;
        }
    </style>
{% endblock %}

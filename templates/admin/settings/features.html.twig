{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'admin'%}
{% block admin_title %}{{ 'admin.settings.features.title'|trans({}, 'admin') }}{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('admin_settings_index') }}">{{ 'admin.settings.title'|trans({}, 'admin') }}</a></li>
    <li class="breadcrumb-item active">{{ 'admin.settings.features.title'|trans({}, 'admin') }}</li>
{% endblock %}

{% block admin_content %}
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-toggles2 text-success" aria-hidden="true"></i>
                        {{ 'admin.settings.features.title'|trans({}, 'admin') }}
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <p class="text-muted mb-4">{{ 'admin.settings.features.intro'|trans({}, 'admin') }}</p>

                        {% include '_components/_auto_form.html.twig' with {
                            'form': form,
                            'sections': {
                                'feature_toggles': {
                                    'label': 'admin.settings.features.feature_toggles'|trans({}, 'admin'),
                                    'fields': ['enable_dark_mode', 'enable_global_search', 'enable_quick_view', 'enable_notifications', 'enable_audit_log']
                                }
                            },
                            'col_widths': {
                                'enable_dark_mode': 12,
                                'enable_global_search': 12,
                                'enable_quick_view': 12,
                                'enable_notifications': 12,
                                'enable_audit_log': 12
                            },
                            'translation_domain': 'admin'
                        } %}

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('admin_settings_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save'|trans({}, 'messages') }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-white"><h5 class="card-title mb-0">{{ 'admin.settings.info'|trans({}, 'admin') }}</h5>
                </div>
                <div class="card-body">
                    <p class="small">{{ 'admin.settings.features.info_text'|trans({}, 'admin') }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

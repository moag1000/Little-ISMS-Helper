{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'admin'%}
{% block admin_title %}{{ 'admin.settings.application.title'|trans({}, 'admin') }}{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('admin_settings_index') }}">{{ 'admin.settings.title'|trans({}, 'admin') }}</a></li>
    <li class="breadcrumb-item active">{{ 'admin.settings.application.title'|trans({}, 'admin') }}</li>
{% endblock %}

{% block admin_content %}
    <div class="row">
        <div class="col-lg-8">
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header bg-white">
                        <h2 class="card-title mb-0">
                            <i class="bi bi-gear-fill text-primary" aria-hidden="true"></i>
                            {{ 'admin.settings.application.title'|trans({}, 'admin') }}
                        </h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    {{ form_start(form) }}
                        {% include '_components/_auto_form.html.twig' with {
                            'form': form,
                            'sections': {
                                'locale_settings': {
                                    'label': 'admin.settings.application.locale_settings'|trans({}, 'admin'),
                                    'fields': ['default_locale', 'supported_locales']
                                },
                                'display_settings': {
                                    'label': 'admin.settings.application.display_settings'|trans({}, 'admin'),
                                    'fields': ['items_per_page', 'timezone', 'date_format', 'datetime_format']
                                }
                            },
                            'col_widths': {
                                'default_locale': 12,
                                'supported_locales': 12,
                                'items_per_page': 12,
                                'timezone': 12,
                                'date_format': 12,
                                'datetime_format': 12
                            },
                            'translation_domain': 'admin'
                        } %}

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('admin_settings_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save" aria-hidden="true"></i> {{ 'common.save'|trans({}, 'messages') }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                {% endblock %}
            {% endembed %}
        </div>

        <div class="col-lg-4">
            {% embed '_components/_card.html.twig' %}
                {% block card_header %}
                    <div class="card-header bg-white">
                        <h2 class="card-title mb-0">{{ 'admin.settings.help'|trans({}, 'admin') }}</h2>
                    </div>
                {% endblock %}
                {% block card_body %}
                    <p class="small">{{ 'admin.settings.application.help_text'|trans({}, 'admin') }}</p>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}

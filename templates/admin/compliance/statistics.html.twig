{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.compliance.statistics'|trans }} - {{ 'admin.panel.title'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-graph-up"></i> {{ 'admin.compliance.statistics'|trans }}</h1>
        <a href="{{ path('admin_compliance_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> {{ 'common.back'|trans }}
        </a>
    </div>

    {# Overall Statistics #}
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-1">{{ 'admin.compliance.total_available'|trans }}</h6>
                    <h2 class="mb-0">{{ statistics.total_available }}</h2>
                    <i class="bi bi-box fs-3 text-primary opacity-25"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-1">{{ 'admin.compliance.loaded'|trans }}</h6>
                    <h2 class="mb-0 text-success">{{ statistics.total_loaded }}</h2>
                    <i class="bi bi-check-circle fs-3 text-success opacity-25"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-secondary">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-1">{{ 'admin.compliance.not_loaded'|trans }}</h6>
                    <h2 class="mb-0 text-secondary">{{ statistics.total_not_loaded }}</h2>
                    <i class="bi bi-x-circle fs-3 text-secondary opacity-25"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-1">{{ 'admin.compliance.mandatory_missing'|trans }}</h6>
                    <h2 class="mb-0 text-danger">{{ statistics.mandatory_not_loaded }}</h2>
                    <i class="bi bi-exclamation-triangle fs-3 text-danger opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    {# Compliance per Framework #}
    {% if compliance_data|length > 0 %}
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-bar-chart"></i> {{ 'admin.compliance.compliance_overview'|trans }}
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>{{ 'admin.compliance.framework'|trans }}</th>
                                <th class="text-center">{{ 'admin.compliance.total_requirements'|trans }}</th>
                                <th class="text-center">{{ 'admin.compliance.assessed'|trans }}</th>
                                <th class="text-center">{{ 'admin.compliance.compliant'|trans }}</th>
                                <th class="text-center">{{ 'admin.compliance.compliance_rate'|trans }}</th>
                                <th class="text-center">{{ 'admin.compliance.progress'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for data in compliance_data %}
                                <tr>
                                    <td>
                                        <strong>{{ data.framework.name }}</strong><br>
                                        <small class="text-muted">{{ data.framework.code }}</small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">{{ data.total_requirements }}</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">{{ data.assessed_requirements }}</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-success">{{ data.compliant_requirements }}</span>
                                    </td>
                                    <td class="text-center">
                                        <strong class="{% if data.compliance_percentage >= 75 %}text-success{% elseif data.compliance_percentage >= 50 %}text-warning{% else %}text-danger{% endif %}">
                                            {{ data.compliance_percentage }}%
                                        </strong>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar {% if data.compliance_percentage >= 75 %}bg-success{% elseif data.compliance_percentage >= 50 %}bg-warning{% else %}bg-danger{% endif %}"
                                                 role="progressbar"
                                                 style="width: {{ data.compliance_percentage }}%"
                                                 aria-valuenow="{{ data.compliance_percentage }}"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100">
                                                {{ data.compliance_percentage }}%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            {{ 'admin.compliance.no_frameworks_loaded'|trans }}
        </div>
    {% endif %}
</div>
{% endblock %}

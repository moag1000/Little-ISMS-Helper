{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ permission.name }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'permission.show'|trans({}, 'messages') }}</p>
{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item"><a href="{{ path('permission_index') }}">{{ 'admin.nav.permissions'|trans({}, 'admin') }}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ permission.name }}</li>
{% endblock %}

{% block admin_content %}
    <div class="mb-3">
        <a href="{{ path('permission_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>

    {# Permission Details #}
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">
                <i class="bi bi-info-circle" aria-hidden="true"></i> Berechtigungsdetails
            </h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3"><strong>Name:</strong></div>
                <div class="col-md-9"><code>{{ permission.name }}</code></div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"><strong>{{ 'permission.category'|trans({}, 'messages') }}:</strong></div>
                <div class="col-md-9">
                    <span class="badge bg-primary">{{ permission.category|title }}</span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"><strong>{{ 'permission.action'|trans({}, 'messages') }}:</strong></div>
                <div class="col-md-9">
                    <span class="badge bg-info">{{ permission.action|title }}</span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"><strong>{{ 'permission.description'|trans({}, 'messages') }}:</strong></div>
                <div class="col-md-9">{{ permission.description }}</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3"><strong>Typ:</strong></div>
                <div class="col-md-9">
                    {% if permission.isSystemPermission %}
                        <span class="badge bg-success">System-Berechtigung</span>
                    {% else %}
                        <span class="badge bg-secondary">Benutzerdefiniert</span>
                    {% endif %}
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"><strong>Erstellt am:</strong></div>
                <div class="col-md-9">{{ permission.createdAt|date('d.m.Y H:i') }}</div>
            </div>
        </div>
    </div>

    {# Roles using this permission #}
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h2 class="mb-0">
                <i class="bi bi-people-fill" aria-hidden="true"></i> {{ 'permission.roles_using'|trans({}, 'messages') }}
                <span class="badge bg-light text-dark">{{ roles|length }}</span>
            </h2>
        </div>
        <div class="card-body">
            {% if roles|length > 0 %}
                {% embed '_components/_table.html.twig' with {
                    'class': 'table-hover',
                    'noMargin': true,
                    'responsive': true
                } %}
                    {% block table_head %}
                        <tr>
                            <th scope="col">Rollenname</th>
                            <th scope="col">Beschreibung</th>
                            <th scope="col">Benutzer</th>
                            <th scope="col" class="text-end">Aktion</th>
                        </tr>
                    {% endblock %}
                    {% block table_body %}
                        {% for role in roles %}
                            <tr>
                                <td>
                                    <strong>{{ role.name }}</strong>
                                    {% if role.isSystemRole %}
                                        <span class="badge bg-warning text-dark">System</span>
                                    {% endif %}
                                </td>
                                <td>{{ role.description }}</td>
                                <td>
                                    <span class="badge bg-secondary">{{ role.users|length }}</span>
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('role_management_show', {id: role.id}) }}"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye" aria-hidden="true"></i> Details
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endblock %}
                {% endembed %}

                <div class="alert alert-info mt-3">
                    <i class="bi bi-info-circle" aria-hidden="true"></i>
                    <strong>{{ 'permission.affected_users'|trans({}, 'messages') }}:</strong>
                    Diese Berechtigung betrifft insgesamt {{ affected_users_count }} Benutzer Ã¼ber {{ roles|length }} Rolle(n).
                </div>
            {% else %}
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                    Diese Berechtigung wird derzeit von keiner Rolle verwendet.
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

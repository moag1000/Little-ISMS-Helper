{% extends 'base.html.twig' %}
{% trans_default_domain 'risk_treatment_plan' %}

{% block title %}{{ plan.title }} - {{ 'risk_treatment_plan.title'|trans({}, 'risk_treatment_plan') }}{% endblock %}

{% block body %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.risks'|trans({}, 'nav'), url: path('app_risk_index') },
            { label: 'nav.treatment_plans'|trans({}, 'nav'), url: path('app_risk_treatment_plan_index') },
            { label: plan.title }
        ]
    } %}
</div>

<div class="page-header">
    <div>
        <h1><i class="bi bi-clipboard-check" aria-hidden="true"></i> {{ plan.title }}</h1>
        <p class="text-muted">
            {{ 'risk_treatment_plan.show.subtitle'|trans({}, 'risk_treatment_plan') }}
            {% if plan.isOverdue() %}
                {% include '_components/_badge.html.twig' with { variant: 'danger', icon: 'bi-exclamation-triangle', class: 'ms-2', content: 'risk_treatment_plan.overdue'|trans({}, 'risk_treatment_plan') } %}
            {% endif %}
        </p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_risk_treatment_plan_edit', {id: plan.id}) }}" class="btn btn-primary">
            <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'common.edit'|trans({}, 'messages') }}
        </a>
        <a href="{{ path('app_risk_treatment_plan_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{# Status Cards #}
<div class="row mb-4">
    <div class="col-md-3">
        <div class="info-card">
            <div class="info-label">{{ 'risk_treatment_plan.field.status'|trans({}, 'risk_treatment_plan') }}</div>
            <div class="info-value">
                {% set status_variant = plan.status == 'completed' ? 'success' : (plan.status == 'in_progress' ? 'primary' : (plan.status == 'cancelled' ? 'secondary' : (plan.status == 'on_hold' ? 'warning' : 'info'))) %}
                {% include '_components/_badge.html.twig' with { variant: status_variant, class: 'fs-6', content: ('risk_treatment_plan.status.' ~ plan.status)|trans({}, 'risk_treatment_plan') } %}
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="info-card">
            <div class="info-label">{{ 'risk_treatment_plan.field.priority'|trans({}, 'risk_treatment_plan') }}</div>
            <div class="info-value">
                {% set priority_variant = plan.priority == 'critical' ? 'danger' : (plan.priority == 'high' ? 'warning' : (plan.priority == 'medium' ? 'info' : 'secondary')) %}
                {% include '_components/_badge.html.twig' with { variant: priority_variant, class: 'fs-6', content: ('risk_treatment_plan.priority.' ~ plan.priority)|trans({}, 'risk_treatment_plan')|upper } %}
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="info-card">
            <div class="info-label">{{ 'risk_treatment_plan.field.completion'|trans({}, 'risk_treatment_plan') }}</div>
            <div class="info-value">
                <div class="progress" style="height: 30px;">
                    <div class="progress-bar bg-{{ plan.completionPercentage >= 75 ? 'success' : (plan.completionPercentage >= 50 ? 'info' : (plan.completionPercentage >= 25 ? 'warning' : 'danger')) }}"
                         role="progressbar"
                         style="width: {{ plan.completionPercentage }}%"
                         aria-valuenow="{{ plan.completionPercentage }}"
                         aria-valuemin="0"
                         aria-valuemax="100">
                        <strong>{{ plan.completionPercentage }}%</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="info-card {{ plan.isOverdue() ? 'bg-danger text-white' : '' }}">
            <div class="info-label">{{ 'risk_treatment_plan.days_until_target'|trans({}, 'risk_treatment_plan') }}</div>
            <div class="info-value">
                {% set daysUntil = plan.daysUntilTarget %}
                {% if daysUntil < 0 %}
                    <span class="text-danger fw-bold">{{ daysUntil|abs }} {{ 'risk_treatment_plan.days_overdue'|trans({}, 'risk_treatment_plan') }}</span>
                {% elseif daysUntil == 0 %}
                    <span class="text-warning fw-bold">{{ 'risk_treatment_plan.due_today'|trans({}, 'risk_treatment_plan') }}</span>
                {% else %}
                    {{ daysUntil }} {{ 'risk_treatment_plan.days_remaining'|trans({}, 'risk_treatment_plan') }}
                {% endif %}
            </div>
        </div>
    </div>
</div>

{# Main Details #}
{% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
    {% block card_header %}
        <div class="card-header">
            <h2><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'risk_treatment_plan.section.details'|trans({}, 'risk_treatment_plan') }}</h2>
        </div>
    {% endblock %}
    {% block card_body %}
        <div class="row">
            <div class="col-md-6">
                <div class="detail-item">
                    <strong>{{ 'risk_treatment_plan.field.risk'|trans({}, 'risk_treatment_plan') }}:</strong>
                    {% if plan.risk %}
                        <a href="{{ path('app_risk_show', {id: plan.risk.id}) }}">{{ plan.risk.title }}</a>
                        {% include '_components/_badge.html.twig' with { variant: 'danger', class: 'ms-2', content: 'Score: ' ~ plan.risk.riskScore } %}
                    {% else %}
                        <span class="text-muted">-</span>
                    {% endif %}
                </div>

                <div class="detail-item">
                    <strong>{{ 'risk_treatment_plan.field.responsible_person'|trans({}, 'risk_treatment_plan') }}:</strong>
                    {% if plan.responsiblePerson %}
                        {{ plan.responsiblePerson.fullName }} ({{ plan.responsiblePerson.email }})
                    {% else %}
                        <span class="text-muted">{{ 'common.not_assigned'|trans({}, 'messages') }}</span>
                    {% endif %}
                </div>

                <div class="detail-item">
                    <strong>{{ 'risk_treatment_plan.field.budget'|trans({}, 'risk_treatment_plan') }}:</strong>
                    {% if plan.budget %}
                        {{ plan.budget|number_format(2, '.', ',') }} â‚¬
                    {% else %}
                        <span class="text-muted">{{ 'common.not_set'|trans({}, 'messages') }}</span>
                    {% endif %}
                </div>
            </div>

            <div class="col-md-6">
                <div class="detail-item">
                    <strong>{{ 'risk_treatment_plan.field.start_date'|trans({}, 'risk_treatment_plan') }}:</strong>
                    {% if plan.startDate %}
                        {{ plan.startDate|date('Y-m-d') }}
                    {% else %}
                        <span class="text-muted">{{ 'common.not_started'|trans({}, 'messages') }}</span>
                    {% endif %}
                </div>

                <div class="detail-item">
                    <strong>{{ 'risk_treatment_plan.field.target_completion_date'|trans({}, 'risk_treatment_plan') }}:</strong>
                    {{ plan.targetCompletionDate|date('Y-m-d') }}
                </div>

                <div class="detail-item">
                    <strong>{{ 'risk_treatment_plan.field.actual_completion_date'|trans({}, 'risk_treatment_plan') }}:</strong>
                    {% if plan.actualCompletionDate %}
                        {{ plan.actualCompletionDate|date('Y-m-d') }}
                    {% else %}
                        <span class="text-muted">{{ 'common.not_completed'|trans({}, 'messages') }}</span>
                    {% endif %}
                </div>
            </div>
        </div>

        <hr>

        <div class="detail-item">
            <strong>{{ 'risk_treatment_plan.field.description'|trans({}, 'risk_treatment_plan') }}:</strong>
            <div class="mt-2">{{ plan.description|nl2br }}</div>
        </div>

        {% if plan.implementationNotes %}
        <hr>
        <div class="detail-item">
            <strong>{{ 'risk_treatment_plan.field.implementation_notes'|trans({}, 'risk_treatment_plan') }}:</strong>
            <div class="mt-2">{{ plan.implementationNotes|nl2br }}</div>
        </div>
        {% endif %}
    {% endblock %}
{% endembed %}

{# Linked Controls #}
{% if plan.controls|length > 0 %}
{% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
    {% block card_header %}
        <div class="card-header">
            <h2><i class="bi bi-shield-check" aria-hidden="true"></i> {{ 'risk_treatment_plan.section.controls'|trans({}, 'risk_treatment_plan') }} ({{ plan.controls|length }})</h2>
        </div>
    {% endblock %}
    {% block card_body %}
        {% embed '_components/_table.html.twig' with {
            'class': 'table-sm',
            'responsive': true,
            'noMargin': true
        } %}
            {% block table_head %}
                <tr>
                    <th scope="col">{{ 'control.field.control_id'|trans({}, 'control') }}</th>
                    <th scope="col">{{ 'control.field.title'|trans({}, 'control') }}</th>
                    <th scope="col">{{ 'control.field.status'|trans({}, 'control') }}</th>
                </tr>
            {% endblock %}
            {% block table_body %}
                {% for control in plan.controls %}
                <tr>
                    <td>
                        <a href="{{ path('app_soa_show', {id: control.id}) }}">{{ control.controlId }}</a>
                    </td>
                    <td>{{ control.title }}</td>
                    <td>
                        {% set ctrl_variant = control.implementationStatus == 'implemented' ? 'success' : (control.implementationStatus == 'in_progress' ? 'warning' : (control.implementationStatus == 'not_started' ? 'secondary' : 'dark')) %}
                        {% include '_components/_badge.html.twig' with { variant: ctrl_variant, content: ('control.status.' ~ control.implementationStatus)|trans({}, 'control') } %}
                    </td>
                </tr>
                {% endfor %}
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %}
{% endif %}

{# Audit Log History #}
{% if auditLogs is defined and auditLogs|length > 0 %}
{% embed '_components/_card.html.twig' with { 'class': 'mb-4' } %}
    {% block card_header %}
        <div class="card-header">
            <h2><i class="bi bi-clock-history" aria-hidden="true"></i> {{ 'risk_treatment_plan.section.history'|trans({}, 'risk_treatment_plan') }} ({{ totalAuditLogs }} {{ 'audit_log.entries'|trans({}, 'audit_log') }})</h2>
        </div>
    {% endblock %}
    {% block card_body %}
        <div class="audit-log-list">
            {% for log in auditLogs %}
            <div class="audit-log-entry">
                <div class="audit-log-header">
                    {% include '_components/_badge.html.twig' with { variant: log.action == 'create' ? 'success' : (log.action == 'update' ? 'info' : 'danger'), content: log.action|upper } %}
                    <span class="text-muted">
                        {{ log.userName|default('System') }}
                        &bull; {{ log.createdAt|date('Y-m-d H:i:s') }}
                    </span>
                </div>
                {% if log.action == 'update' %}
                    {% set oldValues = log.oldValuesArray %}
                    {% set newValues = log.newValuesArray %}
                    {% if oldValues and newValues %}
                        <div class="audit-log-changes">
                            {% for field, newValue in newValues %}
                                {% if oldValues[field] is defined and oldValues[field] != newValue %}
                                    <div class="change-item">
                                        <strong>{{ field }}:</strong>
                                        <span class="text-danger">{{ oldValues[field] }}</span>
                                        &rarr;
                                        <span class="text-success">{{ newValue }}</span>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% if totalAuditLogs > 10 %}
        <div class="text-center mt-3">
            <small class="text-muted">{{ 'audit_log.showing_recent'|trans({'%count%': 10, '%total%': totalAuditLogs}, 'audit_log') }}</small>
        </div>
        {% endif %}
    {% endblock %}
{% endembed %}
{% endif %}

{# Delete Section - Admin Only #}
{% if is_granted('ROLE_ADMIN') %}
{% embed '_components/_card.html.twig' with { 'class': 'border-danger' } %}
    {% block card_header %}
        <div class="card-header bg-danger text-white">
            <h2><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'common.danger_zone'|trans({}, 'messages') }}</h2>
        </div>
    {% endblock %}
    {% block card_body %}
        <p>{{ 'risk_treatment_plan.delete.warning'|trans({}, 'risk_treatment_plan') }}</p>
        <form method="post" action="{{ path('app_risk_treatment_plan_delete', {id: plan.id}) }}"
              data-controller="ui-actions"
              data-action="submit->ui-actions#confirm"
              data-ui-actions-message-param="{{ 'risk_treatment_plan.delete.confirm'|trans({}, 'risk_treatment_plan') }}">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plan.id) }}">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash" aria-hidden="true"></i> {{ 'common.delete'|trans({}, 'messages') }}
            </button>
        </form>
    {% endblock %}
{% endembed %}
{% endif %}

<style>
.page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-xl);
}

.button-group {
    display: flex;
    gap: var(--spacing-sm);
}

.info-card {
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: var(--spacing-lg);
    text-align: center;
    height: 100%;
}

.info-label {
    color: var(--color-text-light);
    font-size: 0.875rem;
    margin-bottom: var(--spacing-sm);
}

.info-value {
    font-size: 1.25rem;
    font-weight: bold;
}

.detail-item {
    margin-bottom: var(--spacing-md);
}

.audit-log-entry {
    border-left: 3px solid var(--color-border);
    padding-left: var(--spacing-md);
    margin-bottom: var(--spacing-md);
}

.audit-log-header {
    margin-bottom: var(--spacing-xs);
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
}

.audit-log-changes {
    font-size: 0.875rem;
    margin-top: var(--spacing-xs);
}

.change-item {
    margin-bottom: var(--spacing-xs);
}

.mb-4 {
    margin-bottom: var(--spacing-xl);
}
</style>
{% endblock %}

{% extends 'base.html.twig' %}
{% trans_default_domain 'risk_treatment_plan' %}

{% block title %}{{ 'risk_treatment_plan.new'|trans({}, 'risk_treatment_plan') }} - {{ 'app.title'|trans({}, 'messages') }}{% endblock %}

{% block body %}
<div class="page-header">
    <div>
        <h1><i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'risk_treatment_plan.new'|trans({}, 'risk_treatment_plan') }}</h1>
        <p class="text-muted">{{ 'risk_treatment_plan.new_description'|trans({}, 'risk_treatment_plan') }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_risk_treatment_plan_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{{ form_start(form) }}

{# Basic Information #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-info-square" aria-hidden="true"></i>
        {{ 'risk_treatment_plan.section.basic_info'|trans({}, 'risk_treatment_plan') }}
    </legend>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.risk,
                'label': 'risk_treatment_plan.field.risk'|trans({}, 'risk_treatment_plan'),
                'required': true,
                'domain': 'risk_treatment_plan'
            } %}
        </div>
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.title,
                'label': 'risk_treatment_plan.field.title'|trans({}, 'risk_treatment_plan'),
                'required': true,
                'domain': 'risk_treatment_plan'
            } %}
        </div>
        <div class="col-12">
            {% include '_components/_form_field.html.twig' with {
                'field': form.description,
                'label': 'risk_treatment_plan.field.description'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
    </div>
</fieldset>

{# Status & Progress #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-graph-up" aria-hidden="true"></i>
        {{ 'risk_treatment_plan.section.status_progress'|trans({}, 'risk_treatment_plan') }}
    </legend>

    <div class="row">
        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.status,
                'label': 'risk_treatment_plan.field.status'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.priority,
                'label': 'risk_treatment_plan.field.priority'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.completionPercentage,
                'label': 'risk_treatment_plan.field.completion_percentage'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
    </div>
</fieldset>

{# Timeline #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-calendar-range" aria-hidden="true"></i>
        {{ 'risk_treatment_plan.section.timeline'|trans({}, 'risk_treatment_plan') }}
    </legend>

    <div class="row">
        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.startDate,
                'label': 'risk_treatment_plan.field.start_date'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.targetCompletionDate,
                'label': 'risk_treatment_plan.field.target_completion_date'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.actualCompletionDate,
                'label': 'risk_treatment_plan.field.actual_completion_date'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
    </div>
</fieldset>

{# Responsibility & Resources #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-person-badge" aria-hidden="true"></i>
        {{ 'risk_treatment_plan.section.responsibility_resources'|trans({}, 'risk_treatment_plan') }}
    </legend>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.responsiblePerson,
                'label': 'risk_treatment_plan.field.responsible_person'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.budget,
                'label': 'risk_treatment_plan.field.budget'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
    </div>
</fieldset>

{# Controls & Implementation #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-shield-check" aria-hidden="true"></i>
        {{ 'risk_treatment_plan.section.controls_implementation'|trans({}, 'risk_treatment_plan') }}
    </legend>

    <div class="row">
        <div class="col-12">
            {% include '_components/_form_field.html.twig' with {
                'field': form.controls,
                'label': 'risk_treatment_plan.field.controls'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
        <div class="col-12">
            {% include '_components/_form_field.html.twig' with {
                'field': form.implementationNotes,
                'label': 'risk_treatment_plan.field.implementation_notes'|trans({}, 'risk_treatment_plan'),
                'domain': 'risk_treatment_plan'
            } %}
        </div>
    </div>
</fieldset>

<div class="form-actions">
    <button type="submit" class="btn btn-primary">
        <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'common.create'|trans({}, 'messages') }}
    </button>
    <a href="{{ path('app_risk_treatment_plan_index') }}" class="btn btn-secondary">
        {{ 'common.cancel'|trans({}, 'messages') }}
    </a>
</div>

{{ form_end(form) }}

<style>
.page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-xl);
}

.button-group {
    display: flex;
    gap: var(--spacing-sm);
}

.form-actions {
    margin-top: var(--spacing-lg);
    display: flex;
    gap: var(--spacing-sm);
}
</style>
{% endblock %}

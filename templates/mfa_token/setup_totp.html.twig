{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'mfa_token.setup_totp.title'|trans({}, 'mfa') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'mfa_token.setup_totp.subtitle'|trans({}, 'mfa') }}</p>
{% endblock %}

{% block admin_content %}
    <div class="mb-4">
        <a href="{{ path('admin_mfa_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-qr-code" aria-hidden="true"></i> {{ 'mfa_token.setup_totp.step1'|trans({}, 'mfa') }}</h3>
                </div>
                <div class="card-body">
                    <p class="lead">{{ 'mfa_token.setup_totp.scan_instructions'|trans({}, 'mfa') }}</p>

                    <div class="text-center mb-4">
                        <img src="data:image/png;base64,{{ qr_code }}"
                             alt="QR Code"
                             class="border rounded p-3 bg-light"
                             style="max-width: 300px;">
                    </div>

                    <div class="alert alert-info" data-controller="mfa-setup">
                        <h4><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'mfa_token.setup_totp.manual_entry'|trans({}, 'mfa') }}</h4>
                        <p class="mb-2">{{ 'mfa_token.setup_totp.manual_instructions'|trans({}, 'mfa') }}</p>
                        <label for="secret-key" class="form-label">{{ 'mfa.setup.secret_key'|trans({}, 'mfa') }}</label>
                        <div class="input-group">
                            <input type="text"
                                   class="form-control font-monospace"
                                   value="{{ secret }}"
                                   id="secret-key"
                                   readonly
                                   aria-label="{{ 'mfa.setup.secret_key'|trans({}, 'mfa') }}">
                            <button class="btn btn-outline-secondary"
                                    type="button"
                                    data-action="mfa-setup#copySecret"
                                    data-mfa-setup-copy-target-param="secret-key"
                                    data-mfa-setup-copied-text-value="{{ 'common.copied'|trans({}, 'messages') }}">
                                <i class="bi bi-clipboard" aria-hidden="true"></i> {{ 'common.copy'|trans({}, 'messages') }}
                            </button>
                        </div>
                    </div>

                    <div class="alert alert-secondary">
                        <strong><i class="bi bi-person" aria-hidden="true"></i> {{ 'mfa_token.field.user'|trans({}, 'mfa') }}:</strong> {{ user.email }}<br>
                        <strong><i class="bi bi-phone" aria-hidden="true"></i> {{ 'mfa_token.field.device_name'|trans({}, 'mfa') }}:</strong> {{ mfa_token.deviceName }}
                    </div>
                </div>
            </div>

            <div class="card mb-4"
                 data-controller="mfa-setup"
                 data-mfa-setup-verify-url-value="{{ path('admin_mfa_verify', {id: mfa_token.id}) }}"
                 data-mfa-setup-success-redirect-value="{{ path('admin_mfa_show', {id: mfa_token.id}) }}"
                 data-mfa-setup-verifying-text-value="{{ 'common.verifying'|trans({}, 'messages') }}..."
                 data-mfa-setup-verify-button-text-value="{{ 'mfa_token.setup_totp.verify_button'|trans({}, 'mfa') }}"
                 data-mfa-setup-error-text-value="{{ 'common.error'|trans({}, 'messages') }}">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'mfa_token.setup_totp.step2'|trans({}, 'mfa') }}</h3>
                </div>
                <div class="card-body">
                    <p class="lead">{{ 'mfa_token.setup_totp.verify_instructions'|trans({}, 'mfa') }}</p>

                    <form data-action="submit->mfa-setup#verify">
                        <div class="mb-3">
                            <label for="verification-code" class="form-label">
                                {{ 'mfa_token.field.verification_code'|trans({}, 'mfa') }}
                            </label>
                            <input type="text"
                                   class="form-control form-control-lg text-center font-monospace"
                                   id="verification-code"
                                   name="code"
                                   maxlength="6"
                                   pattern="[0-9]{6}"
                                   placeholder="123456"
                                   required
                                   autocomplete="off"
                                   autofocus
                                   data-mfa-setup-target="codeInput">
                            <div class="form-text">{{ 'mfa_token.setup_totp.code_help'|trans({}, 'mfa') }}</div>
                        </div>

                        <div data-mfa-setup-target="feedback"></div>

                        <button type="submit" class="btn btn-success btn-lg w-100" data-mfa-setup-target="submitButton">
                            <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'mfa_token.setup_totp.verify_button'|trans({}, 'mfa') }}
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-warning"
                 data-controller="backup-codes"
                 data-backup-codes-codes-value="{{ backup_codes|json_encode }}"
                 data-backup-codes-user-email-value="{{ user.email }}"
                 data-backup-codes-device-name-value="{{ mfa_token.deviceName }}"
                 data-backup-codes-title-text-value="{{ 'mfa_token.backup_codes.title'|trans({}, 'mfa') }}"
                 data-backup-codes-user-label-value="{{ 'mfa_token.field.user'|trans({}, 'mfa') }}"
                 data-backup-codes-device-label-value="{{ 'mfa_token.field.device_name'|trans({}, 'mfa') }}"
                 data-backup-codes-generated-label-value="{{ 'common.date'|trans({}, 'messages') }}"
                 data-backup-codes-warning-title-value="{{ 'mfa_token.backup_codes.warning'|trans({}, 'mfa') }}"
                 data-backup-codes-warning-text-value="{{ 'mfa_token.backup_codes.warning_text'|trans({}, 'mfa') }}"
                 data-backup-codes-codes-label-value="{{ 'mfa_token.backup_codes.codes'|trans({}, 'mfa') }}"
                 data-backup-codes-copied-text-value="{{ 'common.copied'|trans({}, 'messages') }}">
                <div class="card-header bg-warning">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'mfa_token.backup_codes.title'|trans({}, 'mfa') }}</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <strong><i class="bi bi-shield-exclamation" aria-hidden="true"></i> {{ 'mfa_token.backup_codes.warning'|trans({}, 'mfa') }}</strong>
                        <p class="mb-0 small">{{ 'mfa_token.backup_codes.warning_text'|trans({}, 'mfa') }}</p>
                    </div>

                    <p class="small">{{ 'mfa_token.backup_codes.description'|trans({}, 'mfa') }}</p>

                    <div class="bg-light p-3 rounded border font-monospace small" style="max-height: 300px; overflow-y: auto;">
                        {% for code in backup_codes %}
                            <div class="py-1">
                                <i class="bi bi-key-fill text-warning" aria-hidden="true"></i> {{ code }}
                            </div>
                        {% endfor %}
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <button type="button"
                                class="btn btn-outline-primary btn-sm"
                                data-action="backup-codes#copy">
                            <i class="bi bi-clipboard" aria-hidden="true"></i> {{ 'mfa_token.backup_codes.copy_all'|trans({}, 'mfa') }}
                        </button>
                        <button type="button"
                                class="btn btn-outline-secondary btn-sm"
                                data-action="backup-codes#print">
                            <i class="bi bi-printer" aria-hidden="true"></i> {{ 'mfa_token.backup_codes.print'|trans({}, 'mfa') }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'mfa_token.edit'|trans({}, 'mfa') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'mfa_token.edit.subtitle'|trans({}, 'mfa') }}</p>
{% endblock %}

{% block admin_content %}
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.admin'|trans({}, 'nav'), url: path('admin_dashboard') },
            { label: 'nav.mfa'|trans({}, 'nav'), url: path('admin_mfa_index') },
            { label: mfa_token.name, url: path('admin_mfa_show', {id: mfa_token.id}) },
            { label: 'common.edit'|trans({}, 'messages') }
        ]
    } %}

    <div class="card">
        <div class="card-header bg-primary text-white"><h2 class="mb-0 h5">{{ 'mfa_token.edit'|trans({}, 'mfa') }}</h2>
        </div>
        <div class="card-body">
            {{ form_start(form) }}

            {% include '_components/_auto_form.html.twig' with {
                'form': form,
                'sections': {
                    'basic_info': {
                        'label': 'mfa_token.section.basic_info'|trans({}, 'mfa'),
                        'fields': ['user', 'tokenType', 'deviceName', 'phoneNumber']
                    },
                    'settings': {
                        'label': 'mfa_token.section.settings'|trans({}, 'mfa'),
                        'fields': ['isActive', 'isPrimary', 'expiresAt']
                    }
                },
                'col_widths': {
                    'user': 12,
                    'tokenType': 6,
                    'deviceName': 6,
                    'phoneNumber': 12,
                    'isActive': 6,
                    'isPrimary': 6,
                    'expiresAt': 12
                }
            } %}

            <div class="d-flex justify-content-between pt-3 border-top">
                <a href="{{ path('admin_mfa_show', {id: mfa_token.id}) }}" class="btn btn-outline-secondary">
                    {{ 'common.back'|trans({}, 'messages') }}
                </a>
                <button type="submit" class="btn btn-primary">
                    {{ 'common.save'|trans({}, 'messages') }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}
{% block title %}{{ 'mfa_token.title'|trans }} - {{ parent() }}{% endblock %}
{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-shield-lock"></i> {{ 'mfa_token.title'|trans }}</h1>
        <a href="{{ path('admin_mfa_new') }}" class="btn btn-primary"><i class="bi bi-plus-circle"></i> {{ 'mfa_token.new'|trans }}</a>
    </div>
    <div class="row mb-4">
        <div class="col-md-4"><div class="card"><div class="card-body text-center"><h3>{{ active_count }}</h3><p class="mb-0">{{ 'mfa_token.kpi.active'|trans }}</p></div></div></div>
        <div class="col-md-4"><div class="card"><div class="card-body text-center"><h3>{{ totp_count }}</h3><p class="mb-0">TOTP</p></div></div></div>
        <div class="col-md-4"><div class="card"><div class="card-body text-center"><h3>{{ webauthn_count }}</h3><p class="mb-0">WebAuthn</p></div></div></div>
    </div>
    {% if mfa_tokens|length == 0 %}
        <div class="alert alert-info">{{ 'mfa_token.empty'|trans }}</div>
    {% else %}
        <div class="card"><div class="table-responsive"><table class="table table-hover mb-0">
            <thead><tr><th>{{ 'mfa_token.field.user'|trans }}</th><th>{{ 'mfa_token.field.token_type'|trans }}</th><th>{{ 'mfa_token.field.device_name'|trans }}</th><th>{{ 'common.actions'|trans }}</th></tr></thead>
            <tbody>
                {% for token in mfa_tokens %}
                    <tr>
                        <td>{{ token.user.email }}</td>
                        <td><span class="badge bg-primary">{{ ('mfa_token.type.' ~ token.tokenType)|trans }}</span></td>
                        <td>{{ token.deviceName ?? 'N/A' }}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('admin_mfa_show', {id: token.id}) }}" class="btn btn-outline-primary"><i class="bi bi-eye"></i></a>
                                <a href="{{ path('admin_mfa_edit', {id: token.id}) }}" class="btn btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table></div></div>
    {% endif %}
</div>
{% endblock %}

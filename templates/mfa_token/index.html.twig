{% extends 'admin/layout.html.twig' %}

{% block admin_title %}{{ 'mfa_token.title'|trans({}, 'mfa') }}{% endblock %}
{% block admin_subtitle %}
    <p class="text-muted">{{ 'mfa_token.subtitle'|trans({}, 'mfa')|default('Verwaltung der Multi-Faktor-Authentifizierung f√ºr alle Benutzer') }}</p>
{% endblock %}

{% block admin_content %}
    {# Statistics Cards #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h3 class="text-success">{{ active_count }}</h3>
                    <p class="mb-0"><i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'mfa_token.kpi.active'|trans({}, 'mfa') }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="text-primary">{{ totp_count }}</h3>
                    <p class="mb-0"><i class="bi bi-phone" aria-hidden="true"></i> TOTP</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="text-info">{{ webauthn_count }}</h3>
                    <p class="mb-0"><i class="bi bi-key" aria-hidden="true"></i> WebAuthn</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="text-secondary">{{ tokens_by_user|length }}</h3>
                    <p class="mb-0"><i class="bi bi-people" aria-hidden="true"></i> {{ 'mfa_token.kpi.users'|trans({}, 'mfa') }}</p>
                </div>
            </div>
        </div>
    </div>

    {# Users with MFA Tokens #}
    {% if tokens_by_user|length == 0 %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'mfa_token.empty'|trans({}, 'mfa') }}
        </div>
    {% else %}
        {% for user_id, user_data in tokens_by_user %}
            <div class="card mb-3">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="bi bi-person-circle" aria-hidden="true"></i>
                            {{ user_data.user.firstName }} {{ user_data.user.lastName }}
                            <span class="text-muted">{{ user_data.user.email }}</span>
                        </h5>
                        <div class="btn-group">
                            <a href="{{ path('admin_mfa_setup_totp', {id: user_data.user.id}) }}"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-plus-circle" aria-hidden="true"></i> {{ 'mfa_token.setup_new'|trans({}, 'mfa') }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {% embed '_components/_table.html.twig' with {
                        'class': 'table-sm',
                        'theadClass': 'table-light',
                        'noMargin': true
                    } %}
                        {% block table_head %}
                            <tr>
                                <th scope="col" style="width: 50px;">{{ 'mfa_token.field.status'|trans({}, 'mfa') }}</th>
                                <th scope="col">{{ 'mfa_token.field.token_type'|trans({}, 'mfa') }}</th>
                                <th scope="col">{{ 'mfa_token.field.device_name'|trans({}, 'mfa') }}</th>
                                <th scope="col">{{ 'mfa_token.field.enrolled_at'|trans({}, 'mfa') }}</th>
                                <th scope="col">{{ 'mfa_token.field.last_used'|trans({}, 'mfa') }}</th>
                                <th scope="col">{{ 'mfa_token.field.usage_count'|trans({}, 'mfa') }}</th>
                                <th scope="col" style="width: 150px;">{{ 'common.actions'|trans({}, 'messages') }}</th>
                            </tr>
                        {% endblock %}
                        {% block table_body %}
                            {% for token in user_data.tokens %}
                                <tr class="{{ token.isActive ? '' : 'table-secondary' }}">
                                    <td>
                                        {% if token.isActive %}
                                            <span class="badge bg-success" title="{{ 'mfa_token.status.active'|trans({}, 'mfa') }}">
                                                <i class="bi bi-check-circle" aria-hidden="true"></i>
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary" title="{{ 'mfa_token.status.inactive'|trans({}, 'mfa') }}">
                                                <i class="bi bi-dash-circle" aria-hidden="true"></i>
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">
                                            {% if token.tokenType == 'totp' %}
                                                <i class="bi bi-phone" aria-hidden="true"></i>
                                            {% elseif token.tokenType == 'webauthn' %}
                                                <i class="bi bi-key" aria-hidden="true"></i>
                                            {% endif %}
                                            {{ ('mfa_token.type.' ~ token.tokenType)|trans }}
                                        </span>
                                    </td>
                                    <td>
                                        <i class="bi bi-{{ token.tokenType == 'totp' ? 'phone' : 'key' }}" aria-hidden="true"></i>
                                        {{ token.deviceName ?? 'N/A' }}
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar" aria-hidden="true"></i>
                                            {{ token.enrolledAt|date('Y-m-d H:i') }}
                                        </small>
                                    </td>
                                    <td>
                                        {% if token.lastUsedAt %}
                                            <small class="text-muted">
                                                <i class="bi bi-clock" aria-hidden="true"></i>
                                                {{ token.lastUsedAt|date('Y-m-d H:i') }}
                                            </small>
                                        {% else %}
                                            <span class="text-muted">{{ 'mfa_token.never_used'|trans({}, 'mfa') }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ token.usageCount }}</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('admin_mfa_show', {id: token.id}) }}"
                                               class="btn btn-outline-primary"
                                               title="{{ 'common.view'|trans({}, 'messages') }}" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                                <i class="bi bi-eye" aria-hidden="true"></i>
                                            </a>
                                            {% if token.isActive %}
                                                <form method="post"
                                                      action="{{ path('admin_mfa_disable', {id: token.id}) }}"
                                                      style="display: inline;"
                                                      onsubmit="return confirm('{{ 'mfa_token.confirm_disable'|trans({}, 'mfa') }}');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('disable_' ~ token.id) }}">
                                                    <button type="submit"
                                                            class="btn btn-outline-warning"
                                                            title="{{ 'mfa_token.action.disable'|trans({}, 'mfa') }}" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                                        <i class="bi bi-pause-circle" aria-hidden="true"></i>
                                                    </button>
                                                </form>
                                            {% endif %}
                                            <form method="post"
                                                  action="{{ path('admin_mfa_delete', {id: token.id}) }}"
                                                  style="display: inline;"
                                                  onsubmit="return confirm('{{ 'mfa_token.confirm_delete'|trans({}, 'mfa') }}');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete_' ~ token.id) }}">
                                                <button type="submit"
                                                        class="btn btn-outline-danger"
                                                        title="{{ 'common.delete'|trans({}, 'messages') }}" aria-label="{{ 'common.delete'|trans({}, 'messages') }}">
                                                    <i class="bi bi-trash" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}
                </div>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}

                {% block table_body %}
                    {% for plan in bc_plans %}
                    <tr>
                        <td><a href="{{ path('app_bc_plan_show', {id: plan.id}) }}">{{ plan.name }}</a></td>
                        <td>{{ plan.businessProcess ? plan.businessProcess.name : '-' }}</td>
                        <td>{{ plan.planOwner }}</td>
                        <td><span class="badge badge-{{ plan.status }}">{{ plan.status }}</span></td>
                        <td>
                            {% set readiness = plan.getReadinessScore() %}
                            <span class="badge badge-{{ readiness >= 80 ? 'success' : (readiness >= 60 ? 'warning' : 'danger') }}">
                                {{ readiness }}%
                            </span>
                        </td>
                        <td>{{ plan.lastTested ? plan.lastTested|date('Y-m-d') : ('bc_plans.message.never'|trans) }}</td>
                        <td>
                            <a href="{{ path('app_bc_plan_show', {id: plan.id}) }}" class="btn btn-sm btn-secondary">{{ 'common.view'|trans({}, 'messages') }}</a>
                            <a href="{{ path('app_bc_plan_edit', {id: plan.id}) }}" class="btn btn-sm btn-primary">{{ 'common.edit'|trans({}, 'messages') }}</a>
                        </td>
                    </tr>
                {% endblock %}
            {% endembed %}
            {% else %}
            <p>{{ 'bc_plans.message.no_plans'|trans }} <a href="{{ path('app_bc_plan_new') }}">{{ 'bc_plans.message.create_first'|trans }}</a>.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

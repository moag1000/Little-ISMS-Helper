<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
        .container { max-width: 600px; margin: 0 auto; padding: 20px; }
        .header { background: #2563eb; color: white; padding: 20px; text-align: center; }
        .content { background: #f9fafb; padding: 20px; margin: 20px 0; }
        .field { margin: 10px 0; }
        .label { font-weight: bold; color: #666; }
        .value { color: #000; }
        .action-required { background: #dbeafe; border: 1px solid #2563eb; padding: 15px; margin: 15px 0; border-radius: 4px; color: #1e40af; }
        .info { background: #f3f4f6; border-left: 4px solid #3b82f6; padding: 10px; margin: 15px 0; }
        .footer { text-align: center; color: #666; font-size: 12px; padding: 20px; }
        .btn { display: inline-block; background: #2563eb; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; margin-top: 10px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>ðŸ”” {{ 'emails.workflow.approval_required'|trans({}, 'emails') }}</h1>
        </div>

        <div class="content">
            <p>{{ 'emails.common.dear'|trans({}, 'emails') }} {{ recipient.firstName }},</p>

            <div class="action-required">
                <strong>âœ… {{ 'emails.workflow.approval_needed'|trans({}, 'emails') }}</strong>
            </div>

            <div class="field">
                <span class="label">{{ 'emails.workflow.workflow_field'|trans({}, 'emails') }}:</span>
                <span class="value">{{ instance.workflow.name }}</span>
            </div>

            <div class="field">
                <span class="label">{{ 'emails.workflow.current_step'|trans({}, 'emails') }}:</span>
                <span class="value">{{ step.name }}</span>
            </div>

            <div class="field">
                <span class="label">{{ 'emails.workflow.related_entity'|trans({}, 'emails') }}:</span>
                <span class="value">{{ instance.entityType }} (ID: {{ instance.entityId }})</span>
            </div>

            <div class="field">
                <span class="label">{{ 'emails.workflow.step_type'|trans({}, 'emails') }}:</span>
                <span class="value">{{ step.stepType|upper }}</span>
            </div>

            {% if step.daysToComplete %}
            <div class="field">
                <span class="label">{{ 'emails.workflow.time_to_complete'|trans({}, 'emails') }}:</span>
                <span class="value">{{ step.daysToComplete }} {{ 'emails.workflow.days'|trans({}, 'emails') }}</span>
            </div>
            {% endif %}

            {% if instance.dueDate %}
            <div class="field">
                <span class="label">{{ 'emails.workflow.due_date'|trans({}, 'emails') }}:</span>
                <span class="value">{{ instance.dueDate|date('d.m.Y') }}</span>
            </div>
            {% endif %}

            {% if instance.initiatedBy %}
            <div class="field">
                <span class="label">{{ 'emails.workflow.initiated_by'|trans({}, 'emails') }}:</span>
                <span class="value">{{ instance.initiatedBy.firstName }} {{ instance.initiatedBy.lastName }}</span>
            </div>
            {% endif %}

            <div class="field">
                <span class="label">{{ 'emails.workflow.started'|trans({}, 'emails') }}:</span>
                <span class="value">{{ instance.startedAt|date('d.m.Y H:i') }}</span>
            </div>

            <div class="info">
                <strong>{{ 'emails.workflow.next_steps'|trans({}, 'emails') }}:</strong> {{ 'emails.workflow.next_steps_text'|trans({}, 'emails') }}
            </div>
        </div>

        <div class="footer">
            <p>{{ 'emails.common.automated_notification'|trans({}, 'emails') }}</p>
            <p>{{ 'emails.workflow.login_process'|trans({}, 'emails') }}</p>
        </div>
    </div>
</body>
</html>

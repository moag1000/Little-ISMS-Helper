{% extends 'base.html.twig' %}
{% trans_default_domain 'objective' %}

{% block title %}{{ 'objective.title.edit'|trans }}: {{ objective.title }}{% endblock %}

{% block body %}
<div class="container">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.objectives'|trans({}, 'nav'), url: path('app_objective_index') },
            { label: objective.title, url: path('app_objective_show', {id: objective.id}) },
            { label: 'common.edit'|trans({}, 'messages') }
        ]
    } %}

    <div class="page-header">
        <h1>{{ 'objective.title.edit'|trans }}: {{ objective.title }}</h1>
        <a href="{{ path('app_objective_show', {id: objective.id}) }}" class="btn btn-secondary">{{ 'common.back'|trans({}, 'messages') }}</a>
    </div>

    <div class="card">
        <div class="card-content">
            {{ form_start(form) }}
                {% include '_components/_auto_form.html.twig' with {
                    'form': form,
                    'sections': {
                        'basic_info': {
                            'label': 'objective.section.basic_info'|trans,
                            'fields': ['title', 'category', 'description']
                        },
                        'measurement': {
                            'label': 'objective.section.measurement'|trans,
                            'fields': ['measurableIndicators', 'targetValue', 'currentValue', 'unit']
                        },
                        'responsibility': {
                            'label': 'objective.section.responsibility'|trans,
                            'fields': ['responsiblePerson', 'targetDate']
                        },
                        'status_progress': {
                            'label': 'objective.section.status_progress'|trans,
                            'fields': ['status', 'progressNotes']
                        }
                    },
                    'col_widths': {
                        'title': 8,
                        'category': 4,
                        'description': 12,
                        'measurableIndicators': 12,
                        'targetValue': 4,
                        'currentValue': 4,
                        'unit': 4,
                        'responsiblePerson': 6,
                        'targetDate': 6,
                        'status': 12,
                        'progressNotes': 12
                    },
                    'help_texts': {
                        'targetDate': 'objective.help.target_date'|trans
                    }
                } %}

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_objective_show', {id: objective.id}) }}" class="btn btn-secondary">
                        {{ 'common.cancel'|trans({}, 'messages') }}
                    </a>
                    <button type="submit" class="btn btn-primary">
                        {{ 'common.save_changes'|trans({}, 'messages') }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ objective.title }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_objective_index') }}">ISMS Objectives</a></li>
            <li class="breadcrumb-item active">{{ objective.title }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between">
                    <h4 class="mb-0">{{ objective.title }}</h4>
                    <span class="badge bg-{{ objective.status == 'achieved' ? 'success' : 'info' }} fs-6">{{ objective.status }}</span>
                </div>
                <div class="card-body">
                    <p class="lead">{{ objective.description }}</p>
                    
                    <div class="row mb-3">
                        <div class="col-md-6"><h6 class="text-muted">Category</h6><p>{{ objective.category }}</p></div>
                        <div class="col-md-6"><h6 class="text-muted">Responsible</h6><p>{{ objective.responsiblePerson }}</p></div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6"><h6 class="text-muted">Target Date</h6><p>{{ objective.targetDate|date('d.m.Y') }}</p></div>
                        <div class="col-md-6"><h6 class="text-muted">Achieved Date</h6><p>{{ objective.achievedDate ? objective.achievedDate|date('d.m.Y') : '-' }}</p></div>
                    </div>

                    {% if objective.measurableIndicators %}
                    <h6 class="text-muted">Measurable Indicators</h6>
                    <p>{{ objective.measurableIndicators|nl2br }}</p>
                    {% endif %}

                    <h6 class="text-muted">Progress</h6>
                    <div class="progress mb-2" style="height: 30px;">
                        <div class="progress-bar {% if objective.progressPercentage >= 75 %}bg-success{% elseif objective.progressPercentage >= 50 %}bg-warning{% else %}bg-danger{% endif %}"
                             style="width: {{ objective.progressPercentage }}%">
                            {{ objective.progressPercentage }}%
                        </div>
                    </div>
                    <p><strong>Current:</strong> {{ objective.currentValue }} {{ objective.unit }} / <strong>Target:</strong> {{ objective.targetValue }} {{ objective.unit }}</p>

                    {% if objective.progressNotes %}
                    <h6 class="text-muted mt-3">Progress Notes</h6>
                    <div class="alert alert-info">{{ objective.progressNotes|nl2br }}</div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-light"><h5 class="mb-0">Actions</h5></div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_objective_edit', {id: objective.id}) }}" class="btn btn-primary">Edit</a>
                        {% endif %}
                        <a href="{{ path('app_objective_index') }}" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-light"><h5 class="mb-0">Metadata</h5></div>
                <div class="card-body">
                    <dl class="row mb-0 small">
                        <dt class="col-sm-5">Created</dt><dd class="col-sm-7">{{ objective.createdAt|date('d.m.Y H:i') }}</dd>
                        <dt class="col-sm-5">Updated</dt><dd class="col-sm-7">{{ objective.updatedAt ? objective.updatedAt|date('d.m.Y H:i') : '-' }}</dd>
                        <dt class="col-sm-5">ID</dt><dd class="col-sm-7"><code>{{ objective.id }}</code></dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

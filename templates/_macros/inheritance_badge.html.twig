{#
    Macro for displaying inheritance status badge

    Usage:
        {% import '_macros/inheritance_badge.html.twig' as inheritance %}
        {{ inheritance.badge(item, currentTenant) }}

    Parameters:
        - item: The entity to check (must have getTenant() method)
        - currentTenant: The current user's tenant
#}

{% macro badge(item, currentTenant) %}
    {% if item.tenant is defined and currentTenant is not null and item.tenant.id != currentTenant.id %}
        {% include '_components/_badge.html.twig' with {
            variant: 'info',
            icon: 'bi-building',
            title: 'corporate.inheritance.inherited_from'|trans({}, 'tenant') ~ ': ' ~ item.tenant.name,
            content: 'corporate.inherited'|trans({}, 'tenant')
        } %}
    {% endif %}
{% endmacro %}

{% macro small_badge(item, currentTenant) %}
    {% if item.tenant is defined and currentTenant is not null and item.tenant.id != currentTenant.id %}
        {% include '_components/_badge.html.twig' with {
            variant: 'info',
            size: 'sm',
            icon: 'bi-building',
            title: 'corporate.inheritance.inherited_from'|trans({}, 'tenant') ~ ': ' ~ item.tenant.name
        } %}
    {% endif %}
{% endmacro %}

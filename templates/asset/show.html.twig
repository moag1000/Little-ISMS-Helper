{% extends 'base.html.twig' %}
{% trans_default_domain 'assets' %}

{% block title %}{{ asset.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>
            {{ asset.name }}
            {% if isInherited is defined and isInherited %}
                <span class="badge bg-info ms-2">
                    <i class="bi bi-building" aria-hidden="true"></i> {{ 'corporate.inherited'|trans({}, 'messages') }}
                </span>
            {% endif %}
        </h1>
        <div class="actions">
            {% if canEdit is defined and canEdit %}
                <a href="{{ path('app_asset_edit', {id: asset.id}) }}" class="btn btn-primary">{{ 'common.edit'|trans({}, 'messages') }}</a>
            {% else %}
                <button class="btn btn-primary" disabled title="{{ 'corporate.inheritance.cannot_edit_inherited'|trans({}, 'messages') }}">
                    <i class="bi bi-lock" aria-hidden="true"></i> {{ 'common.edit'|trans({}, 'messages') }}
                </button>
            {% endif %}
            <a href="{{ path('app_asset_bcm_insights', {id: asset.id}) }}" class="btn btn-secondary">{{ 'asset.action.bcm_insights'|trans({}, 'asset') }}</a>
            <a href="{{ path('app_asset_index') }}" class="btn btn-secondary">{{ 'common.back_to_list'|trans({}, 'messages') }}</a>
            {% if is_granted('ROLE_ADMIN') and (canEdit is not defined or canEdit) %}
                <form method="post" action="{{ path('app_asset_delete', {id: asset.id}) }}" style="display:inline;" onsubmit="return confirm('{{ 'asset.confirm.delete'|trans({}, 'asset') }}');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ asset.id) }}">
                    <button type="submit" class="btn btn-danger">{{ 'common.delete'|trans({}, 'messages') }}</button>
                </form>
            {% endif %}
        </div>
    </div>

    {% if isInherited is defined and isInherited %}
        <div class="alert alert-info mb-3">
            <div class="d-flex align-items-start">
                <i class="bi bi-info-circle-fill me-2 mt-1" aria-hidden="true"></i>
                <div>
                    <strong>{{ 'corporate.inheritance.view_only_title'|trans({}, 'messages') }}</strong>
                    <p class="mb-0">{{ 'corporate.inheritance.asset_inherited_message'|trans({}, 'messages') }}</p>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="card">
        <div class="card-header">
            <h2>{{ 'asset.details.title'|trans({}, 'asset') }}</h2>
            <span class="{{ badge_status(asset.status) }}">{{ asset.status|upper }}</span>
        </div>
        <div class="card-content">
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="label">{{ 'asset.label.type'|trans({}, 'asset') }}</span>
                    <span class="value">{{ asset.assetType }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'asset.label.owner'|trans({}, 'asset') }}</span>
                    <span class="value">{{ asset.owner }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'asset.label.location'|trans({}, 'asset') }}</span>
                    <span class="value">{{ asset.location }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'asset.label.status'|trans({}, 'asset') }}</span>
                    <span class="value">{{ asset.status|upper }}</span>
                </div>
            </div>

            {% if asset.description %}
                <div class="detail-section">
                    <h2>{{ 'common.description'|trans({}, 'messages') }}</h2>
                    <p>{{ asset.description }}</p>
                </div>
            {% endif %}

            <div class="detail-section">
                <h2>{{ 'asset.section.valuation'|trans({}, 'asset') }}</h2>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">{{ 'asset.label.acquisition_value'|trans({}, 'asset') }}</span>
                        <span class="value">{{ asset.acquisitionValue ? asset.acquisitionValue ~ ' EUR' : 'N/A' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">{{ 'asset.label.current_value'|trans({}, 'asset') }}</span>
                        <span class="value">{{ asset.currentValue ? asset.currentValue ~ ' EUR' : 'N/A' }}</span>
                    </div>
                    {% if asset.monetaryValue %}
                        <div class="detail-item">
                            <span class="label">{{ 'asset.label.monetary_value'|trans({}, 'asset') }}</span>
                            <span class="value">{{ asset.monetaryValue ~ ' EUR' }}</span>
                        </div>
                    {% endif %}
                    <div class="detail-item">
                        <span class="label">{{ 'asset.label.total_value'|trans({}, 'asset') }}</span>
                        <span class="value">{{ asset.totalValue ~ ' EUR' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">{{ 'asset.label.risks'|trans({}, 'asset') }}</span>
                        <span class="value">
                            {% if asset.risks|length > 0 %}
                                <a href="#related-risks" class="{{ badge_score(asset.risks|length, 5, 3) }}">
                                    {{ asset.risks|length }}
                                </a>
                            {% else %}
                                <span class="text-muted">0</span>
                            {% endif %}
                        </span>
                    </div>
                </div>
            </div>

            {% if asset.dataClassification or asset.returnDate %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.compliance'|trans({}, 'asset') }}</h3>
                    <div class="detail-grid">
                        {% if asset.dataClassification %}
                            <div class="detail-item">
                                <span class="label">{{ 'asset.label.data_classification'|trans({}, 'asset') }}</span>
                                <span class="value">
                                    <span class="{{ badge_classification(asset.dataClassification) }}">
                                        {{ ('asset.classification.' ~ asset.dataClassification)|trans|upper }}
                                    </span>
                                </span>
                            </div>
                        {% endif %}
                        {% if asset.returnDate %}
                            <div class="detail-item">
                                <span class="label">{{ 'asset.label.return_date'|trans({}, 'asset') }}</span>
                                <span class="value">{{ asset.returnDate|date('Y-m-d') }}</span>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            <div class="detail-section">
                <h3>{{ 'asset.section.cia_triad'|trans({}, 'asset') }}</h3>
                <div class="cia-values">
                    <div class="cia-item">
                        <span class="label">{{ 'asset.label.confidentiality'|trans({}, 'asset') }}</span>
                        <div class="value-bar">
                            <div class="bar" style="width: {{ (asset.confidentialityValue / 5 * 100) }}%"></div>
                        </div>
                        <span class="value">{{ asset.confidentialityValue }}/5</span>
                    </div>
                    <div class="cia-item">
                        <span class="label">{{ 'asset.label.integrity'|trans({}, 'asset') }}</span>
                        <div class="value-bar">
                            <div class="bar" style="width: {{ (asset.integrityValue / 5 * 100) }}%"></div>
                        </div>
                        <span class="value">{{ asset.integrityValue }}/5</span>
                    </div>
                    <div class="cia-item">
                        <span class="label">{{ 'asset.label.availability'|trans({}, 'asset') }}</span>
                        <div class="value-bar">
                            <div class="bar" style="width: {{ (asset.availabilityValue / 5 * 100) }}%"></div>
                        </div>
                        <span class="value">{{ asset.availabilityValue }}/5</span>
                    </div>
                </div>
            </div>

            {% if asset.handlingInstructions %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.handling_instructions'|trans({}, 'asset') }}</h3>
                    <div class="instruction-box">
                        {{ asset.handlingInstructions|nl2br }}
                    </div>
                </div>
            {% endif %}

            {% if asset.acceptableUsePolicy %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.acceptable_use_policy'|trans({}, 'asset') }}</h3>
                    <div class="policy-box">
                        {{ asset.acceptableUsePolicy|nl2br }}
                    </div>
                </div>
            {% endif %}

            {% if analysis %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.protection_analysis'|trans({}, 'asset') }}</h3>
                    <p>{{ analysis.availability.recommendation }}</p>
                </div>
            {% endif %}

            {# Data Reuse: Protecting Controls #}
            {% if asset.protectingControls is defined and asset.protectingControls|length > 0 %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.protecting_controls'|trans({}, 'asset') }} ({{ asset.protectingControls|length }})</h3>
                    <div class="controls-list">
                        {% for control in asset.protectingControls %}
                            <div class="control-item">
                                <strong>{{ control.controlId }}</strong>: {{ control.name }}
                                <span class="{{ badge_status(control.implementationStatus) }}">
                                    {{ control.implementationStatus|upper }}
                                </span>
                                <small>({{ control.implementationPercentage }}%)</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Data Reuse: Related Risks #}
            {% if asset.risks is defined and asset.risks|length > 0 %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.related_risks'|trans({}, 'asset') }} ({{ asset.risks|length }})</h3>
                    <div class="risks-list">
                        {% for risk in asset.risks %}
                            <div class="risk-item">
                                <strong>{{ risk.title }}</strong>
                                <span class="{{ badge_score(risk.inherentRiskLevel, 16, 9) }}">
                                    Risk Level: {{ risk.inherentRiskLevel }}
                                </span>
                                <small>Status: {{ risk.status|upper }}</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Data Reuse: Related Incidents #}
            {% if asset.incidents is defined and asset.incidents|length > 0 %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.related_incidents'|trans({}, 'asset') }} ({{ asset.incidents|length }})</h3>
                    <div class="incidents-list">
                        {% for incident in asset.incidents %}
                            <div class="incident-item">
                                <strong>{{ incident.title }}</strong>
                                <span class="{{ badge_severity(incident.severity) }}">
                                    {{ incident.severity|upper }}
                                </span>
                                <small>{{ incident.detectedAt|date('Y-m-d') }}</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Asset History: Audit Log #}
            {% if auditLogs is defined and auditLogs|length > 0 %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.history'|trans({}, 'asset') }} ({{ totalAuditLogs }} {{ 'audit_log.entries'|trans({}, 'audit_log') }})</h3>
                    <div class="audit-log-list">
                        {% for log in auditLogs %}
                            <div class="audit-log-item">
                                <div class="audit-log-header">
                                    <span class="{{ badge_action(log.action) }}">
                                        {{ log.action|upper }}
                                    </span>
                                    <small class="text-muted">{{ log.createdAt|date('Y-m-d H:i:s') }}</small>
                                </div>
                                <div class="audit-log-details">
                                    <strong>{{ log.userName }}</strong>
                                    {% set oldValues = log.oldValuesArray %}
                                    {% set newValues = log.newValuesArray %}
                                    {% if newValues %}
                                        <div class="audit-log-changes">
                                            {% for field, newValue in newValues %}
                                                <div class="change-item">
                                                    <span class="field-name">{{ field }}:</span>
                                                    {% if oldValues and oldValues[field] is defined %}
                                                        <span class="old-value">{{ oldValues[field] }}</span>
                                                        <i class="bi bi-arrow-right" aria-hidden="true"></i>
                                                    {% endif %}
                                                    <span class="new-value">{{ newValue }}</span>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {% if totalAuditLogs > 10 %}
                        <div class="text-center mt-3">
                            <a href="{{ path('app_audit_log_index', {entity: 'Asset', entityId: asset.id}) }}" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-clock-history" aria-hidden="true"></i> {{ 'audit_log.view_all'|trans({}, 'audit_log') }} ({{ totalAuditLogs }})
                            </a>
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.cia-values { display: flex; flex-direction: column; gap: 1rem; }
.cia-item { display: flex; align-items: center; gap: 1rem; }
.cia-item .label { width: 150px; font-weight: bold; }
.value-bar { flex: 1; height: 24px; background: #e5e7eb; border-radius: 4px; overflow: hidden; }
.value-bar .bar { height: 100%; background: linear-gradient(90deg, #10b981, #059669); }
.cia-item .value { width: 50px; text-align: right; }
.instruction-box, .policy-box {
    padding: 1rem;
    background: #f9fafb;
    border-left: 3px solid #3b82f6;
    border-radius: 4px;
    white-space: pre-wrap;
}
.badge-classification-public { background: #10b981; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-internal { background: #3b82f6; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-confidential { background: #f59e0b; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-restricted { background: #ef4444; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
/* Data Reuse Sections */
.controls-list, .risks-list, .incidents-list { display: flex; flex-direction: column; gap: 0.5rem; }
.control-item, .risk-item, .incident-item {
    padding: 0.75rem;
    background: #f9fafb;
    border-left: 3px solid #3b82f6;
    border-radius: 4px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}
/* Badge styles now handled by BadgeExtension helper functions */
/* Audit Log Styles */
.audit-log-list { display: flex; flex-direction: column; gap: 0.75rem; }
.audit-log-item {
    padding: 1rem;
    background: #f9fafb;
    border-left: 3px solid #6366f1;
    border-radius: 4px;
}
.audit-log-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
}
.audit-log-details { margin-top: 0.5rem; }
.audit-log-changes {
    margin-top: 0.5rem;
    padding-left: 1rem;
    font-size: 0.875rem;
}
.change-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0.25rem 0;
}
.field-name { font-weight: bold; color: #6b7280; }
.old-value {
    text-decoration: line-through;
    color: #ef4444;
}
.new-value {
    color: #10b981;
    font-weight: 500;
}
.badge-action-insert { background: #10b981; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-action-update { background: #3b82f6; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-action-delete { background: #ef4444; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
</style>
{% endblock %}

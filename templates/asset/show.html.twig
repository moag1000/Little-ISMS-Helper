{% extends 'base.html.twig' %}

{% block title %}{{ asset.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>{{ asset.name }}</h1>
        <div class="actions">
            <a href="{{ path('app_asset_edit', {id: asset.id}) }}" class="btn btn-primary">{{ 'common.edit'|trans }}</a>
            <a href="{{ path('app_asset_bcm_insights', {id: asset.id}) }}" class="btn btn-secondary">{{ 'asset.action.bcm_insights'|trans }}</a>
            <a href="{{ path('app_asset_index') }}" class="btn btn-secondary">{{ 'common.back_to_list'|trans }}</a>
            {% if is_granted('ROLE_ADMIN') %}
                <form method="post" action="{{ path('app_asset_delete', {id: asset.id}) }}" style="display:inline;" onsubmit="return confirm('{{ 'asset.confirm.delete'|trans }}');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ asset.id) }}">
                    <button type="submit" class="btn btn-danger">{{ 'common.delete'|trans }}</button>
                </form>
            {% endif %}
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>{{ 'asset.details.title'|trans }}</h2>
            <span class="badge badge-{{ asset.status }}">{{ asset.status|upper }}</span>
        </div>
        <div class="card-content">
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="label">{{ 'asset.label.type'|trans }}</span>
                    <span class="value">{{ asset.assetType }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'asset.label.owner'|trans }}</span>
                    <span class="value">{{ asset.owner }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'asset.label.location'|trans }}</span>
                    <span class="value">{{ asset.location }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">{{ 'asset.label.status'|trans }}</span>
                    <span class="value">{{ asset.status|upper }}</span>
                </div>
            </div>

            {% if asset.description %}
                <div class="detail-section">
                    <h3>{{ 'common.description'|trans }}</h3>
                    <p>{{ asset.description }}</p>
                </div>
            {% endif %}

            <div class="detail-section">
                <h3>{{ 'asset.section.valuation'|trans }}</h3>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">{{ 'asset.label.acquisition_value'|trans }}</span>
                        <span class="value">{{ asset.acquisitionValue ? asset.acquisitionValue ~ ' EUR' : 'N/A' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">{{ 'asset.label.current_value'|trans }}</span>
                        <span class="value">{{ asset.currentValue ? asset.currentValue ~ ' EUR' : 'N/A' }}</span>
                    </div>
                    {% if asset.monetaryValue %}
                        <div class="detail-item">
                            <span class="label">{{ 'asset.label.monetary_value'|trans }}</span>
                            <span class="value">{{ asset.monetaryValue ~ ' EUR' }}</span>
                        </div>
                    {% endif %}
                    <div class="detail-item">
                        <span class="label">{{ 'asset.label.total_value'|trans }}</span>
                        <span class="value">{{ asset.totalValue ~ ' EUR' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">{{ 'asset.label.risk_score'|trans }}</span>
                        <span class="value">{{ asset.riskScore }}</span>
                    </div>
                </div>
            </div>

            {% if asset.dataClassification or asset.returnDate %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.compliance'|trans }}</h3>
                    <div class="detail-grid">
                        {% if asset.dataClassification %}
                            <div class="detail-item">
                                <span class="label">{{ 'asset.label.data_classification'|trans }}</span>
                                <span class="value">
                                    <span class="badge badge-classification-{{ asset.dataClassification }}">
                                        {{ ('asset.classification.' ~ asset.dataClassification)|trans|upper }}
                                    </span>
                                </span>
                            </div>
                        {% endif %}
                        {% if asset.returnDate %}
                            <div class="detail-item">
                                <span class="label">{{ 'asset.label.return_date'|trans }}</span>
                                <span class="value">{{ asset.returnDate|date('Y-m-d') }}</span>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            <div class="detail-section">
                <h3>{{ 'asset.section.cia_triad'|trans }}</h3>
                <div class="cia-values">
                    <div class="cia-item">
                        <span class="label">{{ 'asset.label.confidentiality'|trans }}</span>
                        <div class="value-bar">
                            <div class="bar" style="width: {{ (asset.confidentialityValue / 5 * 100) }}%"></div>
                        </div>
                        <span class="value">{{ asset.confidentialityValue }}/5</span>
                    </div>
                    <div class="cia-item">
                        <span class="label">{{ 'asset.label.integrity'|trans }}</span>
                        <div class="value-bar">
                            <div class="bar" style="width: {{ (asset.integrityValue / 5 * 100) }}%"></div>
                        </div>
                        <span class="value">{{ asset.integrityValue }}/5</span>
                    </div>
                    <div class="cia-item">
                        <span class="label">{{ 'asset.label.availability'|trans }}</span>
                        <div class="value-bar">
                            <div class="bar" style="width: {{ (asset.availabilityValue / 5 * 100) }}%"></div>
                        </div>
                        <span class="value">{{ asset.availabilityValue }}/5</span>
                    </div>
                </div>
            </div>

            {% if asset.handlingInstructions %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.handling_instructions'|trans }}</h3>
                    <div class="instruction-box">
                        {{ asset.handlingInstructions|nl2br }}
                    </div>
                </div>
            {% endif %}

            {% if asset.acceptableUsePolicy %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.acceptable_use_policy'|trans }}</h3>
                    <div class="policy-box">
                        {{ asset.acceptableUsePolicy|nl2br }}
                    </div>
                </div>
            {% endif %}

            {% if analysis %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.protection_analysis'|trans }}</h3>
                    <p>{{ analysis.availability.recommendation }}</p>
                </div>
            {% endif %}

            {# Data Reuse: Protecting Controls #}
            {% if asset.protectingControls is defined and asset.protectingControls|length > 0 %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.protecting_controls'|trans }} ({{ asset.protectingControls|length }})</h3>
                    <div class="controls-list">
                        {% for control in asset.protectingControls %}
                            <div class="control-item">
                                <strong>{{ control.controlId }}</strong>: {{ control.name }}
                                <span class="badge badge-{{ control.implementationStatus }}">
                                    {{ control.implementationStatus|upper }}
                                </span>
                                <small>({{ control.implementationPercentage }}%)</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Data Reuse: Related Risks #}
            {% if asset.risks is defined and asset.risks|length > 0 %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.related_risks'|trans }} ({{ asset.risks|length }})</h3>
                    <div class="risks-list">
                        {% for risk in asset.risks %}
                            <div class="risk-item">
                                <strong>{{ risk.title }}</strong>
                                <span class="badge badge-risk-{{ risk.inherentRiskLevel >= 16 ? 'high' : (risk.inherentRiskLevel >= 9 ? 'medium' : 'low') }}">
                                    Risk Level: {{ risk.inherentRiskLevel }}
                                </span>
                                <small>Status: {{ risk.status|upper }}</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {# Data Reuse: Related Incidents #}
            {% if asset.incidents is defined and asset.incidents|length > 0 %}
                <div class="detail-section">
                    <h3>{{ 'asset.section.related_incidents'|trans }} ({{ asset.incidents|length }})</h3>
                    <div class="incidents-list">
                        {% for incident in asset.incidents %}
                            <div class="incident-item">
                                <strong>{{ incident.title }}</strong>
                                <span class="badge badge-severity-{{ incident.severity }}">
                                    {{ incident.severity|upper }}
                                </span>
                                <small>{{ incident.detectedAt|date('Y-m-d') }}</small>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.cia-values { display: flex; flex-direction: column; gap: 1rem; }
.cia-item { display: flex; align-items: center; gap: 1rem; }
.cia-item .label { width: 150px; font-weight: bold; }
.value-bar { flex: 1; height: 24px; background: #e5e7eb; border-radius: 4px; overflow: hidden; }
.value-bar .bar { height: 100%; background: linear-gradient(90deg, #10b981, #059669); }
.cia-item .value { width: 50px; text-align: right; }
.instruction-box, .policy-box {
    padding: 1rem;
    background: #f9fafb;
    border-left: 3px solid #3b82f6;
    border-radius: 4px;
    white-space: pre-wrap;
}
.badge-classification-public { background: #10b981; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-internal { background: #3b82f6; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-confidential { background: #f59e0b; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-classification-restricted { background: #ef4444; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
/* Data Reuse Sections */
.controls-list, .risks-list, .incidents-list { display: flex; flex-direction: column; gap: 0.5rem; }
.control-item, .risk-item, .incident-item {
    padding: 0.75rem;
    background: #f9fafb;
    border-left: 3px solid #3b82f6;
    border-radius: 4px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}
.badge-risk-high { background: #ef4444; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-risk-medium { background: #f59e0b; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-risk-low { background: #10b981; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-severity-critical { background: #7f1d1d; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-severity-high { background: #ef4444; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-severity-medium { background: #f59e0b; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
.badge-severity-low { background: #10b981; color: white; padding: 0.25rem 0.5rem; border-radius: 4px; }
</style>
{% endblock %}

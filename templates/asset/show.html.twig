{% extends 'base.html.twig' %}

{% block title %}{{ asset.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>{{ asset.name }}</h1>
        <div class="actions">
            <a href="{{ path('app_asset_edit', {id: asset.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('app_asset_bcm_insights', {id: asset.id}) }}" class="btn btn-secondary">BCM Insights</a>
            <a href="{{ path('app_asset_index') }}" class="btn btn-secondary">Back to List</a>
            {% if is_granted('ROLE_ADMIN') %}
                <form method="post" action="{{ path('app_asset_delete', {id: asset.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this asset?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ asset.id) }}">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            {% endif %}
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>Asset Details</h2>
            <span class="badge badge-{{ asset.status }}">{{ asset.status|upper }}</span>
        </div>
        <div class="card-content">
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="label">Type:</span>
                    <span class="value">{{ asset.assetType }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Owner:</span>
                    <span class="value">{{ asset.owner }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Location:</span>
                    <span class="value">{{ asset.location }}</span>
                </div>
                <div class="detail-item">
                    <span class="label">Status:</span>
                    <span class="value">{{ asset.status|upper }}</span>
                </div>
            </div>

            {% if asset.description %}
                <div class="detail-section">
                    <h3>Description</h3>
                    <p>{{ asset.description }}</p>
                </div>
            {% endif %}

            <div class="detail-section">
                <h3>Valuation</h3>
                <div class="detail-grid">
                    <div class="detail-item">
                        <span class="label">Acquisition Value:</span>
                        <span class="value">{{ asset.acquisitionValue ? asset.acquisitionValue ~ ' EUR' : 'N/A' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Current Value:</span>
                        <span class="value">{{ asset.currentValue ? asset.currentValue ~ ' EUR' : 'N/A' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Total Value:</span>
                        <span class="value">{{ asset.totalValue ~ ' EUR' }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Risk Score:</span>
                        <span class="value">{{ asset.riskScore }}</span>
                    </div>
                </div>
            </div>

            <div class="detail-section">
                <h3>CIA Triad</h3>
                <div class="cia-values">
                    <div class="cia-item">
                        <span class="label">Confidentiality</span>
                        <div class="value-bar">
                            <div class="bar" style="width: {{ (asset.confidentialityValue / 5 * 100) }}%"></div>
                        </div>
                        <span class="value">{{ asset.confidentialityValue }}/5</span>
                    </div>
                    <div class="cia-item">
                        <span class="label">Integrity</span>
                        <div class="value-bar">
                            <div class="bar" style="width: {{ (asset.integrityValue / 5 * 100) }}%"></div>
                        </div>
                        <span class="value">{{ asset.integrityValue }}/5</span>
                    </div>
                    <div class="cia-item">
                        <span class="label">Availability</span>
                        <div class="value-bar">
                            <div class="bar" style="width: {{ (asset.availabilityValue / 5 * 100) }}%"></div>
                        </div>
                        <span class="value">{{ asset.availabilityValue }}/5</span>
                    </div>
                </div>
            </div>

            {% if analysis %}
                <div class="detail-section">
                    <h3>Protection Requirements Analysis</h3>
                    <p>{{ analysis.availability.recommendation }}</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.cia-values { display: flex; flex-direction: column; gap: 1rem; }
.cia-item { display: flex; align-items: center; gap: 1rem; }
.cia-item .label { width: 150px; font-weight: bold; }
.value-bar { flex: 1; height: 24px; background: #e5e7eb; border-radius: 4px; overflow: hidden; }
.value-bar .bar { height: 100%; background: linear-gradient(90deg, #10b981, #059669); }
.cia-item .value { width: 50px; text-align: right; }
</style>
{% endblock %}

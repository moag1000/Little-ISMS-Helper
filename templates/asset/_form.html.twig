{#
    Asset Form Partial (Accessible)
    Used by both new.html.twig and edit.html.twig

    WCAG 2.1 AA Compliant Form with:
    - Proper ARIA attributes
    - Error handling
    - Help texts
    - Required field indicators
#}

{% trans_default_domain 'assets' %}

{# Basic Information Section #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-info-circle" aria-hidden="true"></i>
        {{ 'asset.section.basic_info'|trans({}, 'asset') }}
    </legend>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.name,
                'label': 'asset.field.name'|trans({}, 'asset'),
                'help': 'asset.help.name'|trans({}, 'asset'),
                'required': true
            } %}
        </div>

        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.assetType,
                'label': 'asset.field.type'|trans({}, 'asset'),
                'help': 'asset.help.type'|trans({}, 'asset'),
                'required': true
            } %}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            {% include '_components/_form_field.html.twig' with {
                'field': form.description,
                'label': 'asset.field.description'|trans({}, 'asset'),
                'help': 'asset.help.description'|trans({}, 'asset')
            } %}
        </div>
    </div>
</fieldset>

{# Assignment Section #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-person-badge" aria-hidden="true"></i>
        {{ 'asset.section.assignment'|trans({}, 'asset') }}
    </legend>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.owner,
                'label': 'asset.field.owner'|trans({}, 'asset'),
                'help': 'asset.help.owner'|trans({}, 'asset')
            } %}
        </div>

        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.location,
                'label': 'asset.field.location'|trans({}, 'asset'),
                'help': 'asset.help.location'|trans({}, 'asset')
            } %}
        </div>
    </div>
</fieldset>

{# Financial Information Section #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-currency-dollar" aria-hidden="true"></i>
        {{ 'asset.section.financial'|trans({}, 'asset') }}
    </legend>

    <div class="row">
        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.acquisitionValue,
                'label': 'asset.field.acquisition_value'|trans({}, 'asset'),
                'help': 'asset.help.acquisition_value'|trans({}, 'asset')
            } %}
        </div>

        <div class="col-md-6">
            {% include '_components/_form_field.html.twig' with {
                'field': form.currentValue,
                'label': 'asset.field.current_value'|trans({}, 'asset'),
                'help': 'asset.help.current_value'|trans({}, 'asset')
            } %}
        </div>
    </div>
</fieldset>

{# CIA Values Section (Information Security) #}
<fieldset class="mb-4">
    <legend class="h5 mb-3">
        <i class="bi bi-shield-lock" aria-hidden="true"></i>
        {{ 'asset.section.cia_values'|trans({}, 'asset') }}
    </legend>

    <div class="alert alert-info" role="status">
        <i class="bi bi-info-circle" aria-hidden="true"></i>
        {{ 'asset.cia_help'|trans({}, 'asset') }}
    </div>

    <div class="row">
        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.confidentialityValue,
                'label': 'asset.field.confidentiality'|trans({}, 'asset'),
                'help': 'asset.help.confidentiality'|trans({}, 'asset')
            } %}
        </div>

        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.integrityValue,
                'label': 'asset.field.integrity'|trans({}, 'asset'),
                'help': 'asset.help.integrity'|trans({}, 'asset')
            } %}
        </div>

        <div class="col-md-4">
            {% include '_components/_form_field.html.twig' with {
                'field': form.availabilityValue,
                'label': 'asset.field.availability'|trans({}, 'asset'),
                'help': 'asset.help.availability'|trans({}, 'asset')
            } %}
        </div>
    </div>
</fieldset>

{# Form Actions #}
<div class="form-actions d-flex gap-2 justify-content-end">
    <a href="{{ path('app_asset_index') }}"
       class="btn btn-secondary">
        <i class="bi bi-x-circle" aria-hidden="true"></i>
        {{ 'common.cancel'|trans({}, 'messages') }}
    </a>

    <button type="submit" class="btn btn-primary">
        <i class="{{ button_icon|default('bi-save') }}" aria-hidden="true"></i>
        {{ button_label|default('common.save'|trans({}, 'messages')) }}
    </button>
</div>

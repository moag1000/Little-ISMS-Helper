        <div class="mt-2">
            <strong class="fs-15-warning">{{ assetsByImpact.high|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'asset.description.high_impact'|trans({}, 'assets') }}
        </p>
        <div class="mt-2">
            <small><strong>{{ 'asset.field.avg_rto'|trans({}, 'assets') }}:</strong> {{ avgRTOByCriticality.high }}h</small>
        </div>
    </div>

    <div class="card border-left-info">
        <div class="fs-2-mb-sm">ğŸ”µ</div>
        <h3>{{ 'asset.impact.medium'|trans({}, 'assets') }}</h3>
        <div class="mt-2">
            <strong class="fs-15-info">{{ assetsByImpact.medium|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'asset.description.medium_impact'|trans({}, 'assets') }}
        </p>
        <div class="mt-2">
            <small><strong>{{ 'asset.field.avg_rto'|trans({}, 'assets') }}:</strong> {{ avgRTOByCriticality.medium }}h</small>
        </div>
    </div>

    <div class="card border-left-secondary">
        <div class="fs-2-mb-sm">âšª</div>
        <h3>{{ 'asset.impact.low'|trans({}, 'assets') }}</h3>
        <div class="mt-2">
            <strong class="fs-15">{{ assetsByImpact.low|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'asset.description.low_impact'|trans({}, 'assets') }}
        </p>
        <div class="mt-2">
            <small><strong>{{ 'asset.field.avg_rto'|trans({}, 'assets') }}:</strong> {{ avgRTOByCriticality.low }}h</small>
        </div>
    </div>
</div>

{# Recovery Time Objectives (RTO) Analysis #}
<h2>{{ 'asset.section.rto_analysis'|trans({}, 'assets') }}</h2>

<div class="card mb-4">
    <p class="text-muted-mb-md">
        {{ 'asset.description.rto_analysis'|trans({}, 'assets') }}
    </p>

    {% embed '_components/_table.html.twig' with {
        'noMargin': true,
        'responsive': true
    } %}
        {% block table_head %}
            <tr>
                <th scope="col">{{ 'asset.field.rto_category'|trans({}, 'assets') }}</th>
                <th scope="col" class="text-center">{{ 'asset.field.asset_count'|trans({}, 'assets') }}</th>
                <th scope="col">{{ 'asset.field.examples'|trans({}, 'assets') }}</th>
            </tr>
        {% endblock %}
        {% block table_body %}
            <tr>
                <td>
                    <strong>{{ 'asset.rto.immediate'|trans({}, 'assets') }}</strong>
                    <br><small class="text-muted">&lt; 1h</small>
                </td>
                <td class="text-center">
                    <span class="badge bg-danger">{{ rtoCategories.immediate|length }}</span>
                </td>
                <td>
                    {% for asset in rtoCategories.immediate|slice(0, 3) %}
                        <span class="badge bg-secondary mr-xs">{{ asset.name }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <td>
                    <strong>{{ 'asset.rto.urgent'|trans({}, 'assets') }}</strong>
                    <br><small class="text-muted">1-4h</small>
                </td>
                <td class="text-center">
                    <span class="badge bg-warning">{{ rtoCategories.urgent|length }}</span>
                </td>
                <td>
                    {% for asset in rtoCategories.urgent|slice(0, 3) %}
                        <span class="badge bg-secondary mr-xs">{{ asset.name }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <td>
                    <strong>{{ 'asset.rto.standard'|trans({}, 'assets') }}</strong>
                    <br><small class="text-muted">4-24h</small>
                </td>
                <td class="text-center">
                    <span class="badge bg-info">{{ rtoCategories.standard|length }}</span>
                </td>
                <td>
                    {% for asset in rtoCategories.standard|slice(0, 3) %}
                        <span class="badge bg-secondary mr-xs">{{ asset.name }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <td>
                    <strong>{{ 'asset.rto.flexible'|trans({}, 'assets') }}</strong>
                    <br><small class="text-muted">&gt; 24h</small>
                </td>
                <td class="text-center">
                    <span class="badge bg-secondary">{{ rtoCategories.flexible|length }}</span>
                </td>
                <td>
                    {% for asset in rtoCategories.flexible|slice(0, 3) %}
                        <span class="badge bg-secondary mr-xs">{{ asset.name }}</span>
                    {% endfor %}
                </td>
            </tr>
        {% endblock %}
    {% endembed %}
</div>

{# Critical Assets Details #}
<h2>{{ 'asset.section.critical_assets'|trans({}, 'assets') }}</h2>

{% embed '_components/_table.html.twig' with {
    'noMargin': true,
    'responsive': true
} %}
    {% block table_head %}
        <tr>
            <th scope="col">{{ 'asset.field.asset_name'|trans({}, 'assets') }}</th>
            <th scope="col">{{ 'asset.field.type'|trans({}, 'assets') }}</th>
            <th scope="col">{{ 'asset.field.business_criticality'|trans({}, 'assets') }}</th>
            <th scope="col">{{ 'asset.field.rto'|trans({}, 'assets') }}</th>
            <th scope="col">{{ 'asset.field.rpo'|trans({}, 'assets') }}</th>
            <th scope="col">{{ 'asset.field.recovery_strategy'|trans({}, 'assets') }}</th>
            <th scope="col" class="text-center">{{ 'common.actions'|trans({}, 'messages') }}</th>
        </tr>
    {% endblock %}
    {% block table_body %}
        {% for asset in criticalAssetsList %}
        <tr>
            <td>
                <strong>{{ asset.name }}</strong>
                {% if asset.isBusinessCritical %}
                    <span class="badge bg-danger ml-xs">
                        {{ 'asset.badge.business_critical'|trans({}, 'assets') }}
                    </span>
                {% endif %}
            </td>
            <td>
                <span class="badge bg-info">{{ ('asset.type.' ~ asset.type)|trans }}</span>
            </td>
            <td>
                {% set criticalityColors = {
                    'critical': 'danger',
                    'high': 'warning',
                    'medium': 'info',
                    'low': 'secondary'
                } %}
                <span class="badge badge-{{ criticalityColors[asset.businessCriticality] ?? 'secondary' }}">
                    {{ ('asset.criticality.' ~ asset.businessCriticality)|trans }}
                </span>
            </td>
            <td>
                <strong>{{ asset.rto }}h</strong>
            </td>
            <td>
                <strong>{{ asset.rpo }}h</strong>
            </td>
            <td>
                <small class="text-muted">
                    {{ asset.recoveryStrategy|default('-') }}
                </small>
            </td>
            <td class="text-center">
                <a href="{{ path('app_asset_show', {id: asset.id}) }}" class="btn btn-sm">
                    ğŸ‘ {{ 'common.view'|trans({}, 'messages') }}
                </a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="7" class="text-center-p-xl">
                {{ 'asset.message.no_critical_assets'|trans({}, 'assets') }}
            </td>
        </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}

{# Dependency Map #}
<div class="card mt-4">
    <h2>{{ 'asset.section.dependency_insights'|trans({}, 'assets') }}</h2>
    <p class="text-muted-mt-sm-mb-md">
        {{ 'asset.description.dependencies'|trans({}, 'assets') }}
    </p>

    <div class="stats-grid grid-auto-fit-250">
        <div class="stat-item">
            <strong>{{ assetsWithDependencies }}</strong>
            <span>{{ 'asset.stats.with_dependencies'|trans({}, 'assets') }}</span>
        </div>
        <div class="stat-item">
            <strong>{{ avgDependencies|round(1) }}</strong>
            <span>{{ 'asset.stats.avg_dependencies'|trans({}, 'assets') }}</span>
        </div>
        <div class="stat-item">
            <strong>{{ singlePointsOfFailure }}</strong>
            <span>{{ 'asset.stats.single_points_failure'|trans({}, 'assets') }}</span>
        </div>
    </div>
</div>
{% endblock %}

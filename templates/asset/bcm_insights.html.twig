{% extends 'base.html.twig' %}
{% import '_macros/cards.html.twig' as cards %}

{% block title %}{{ 'asset.title.bcm_insights'|trans({}, 'assets') }} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="page-header">
    <div>
        <h1>{{ 'asset.title.bcm_insights'|trans({}, 'assets') }}</h1>
        <p class="text-muted">{{ 'asset.description.bcm_insights'|trans({}, 'assets') }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_bcm_critical') }}" class="btn btn-secondary">
            ğŸ”´ {{ 'asset.action.view_critical'|trans({}, 'assets') }}
        </a>
        <a href="{{ path('app_asset_index') }}" class="btn btn-secondary">
            â† {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="col-auto">
        {{ cards.kpi_card('asset.stats.total_assets'|trans({}, 'assets'), totalAssets, null, null, null, null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('asset.stats.critical_assets'|trans({}, 'assets'), criticalAssets, null, null, 'danger', 'border-danger') }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('asset.stats.high_risk_assets'|trans({}, 'assets'), highRiskAssets, null, null, 'warning', null) }}
    </div>
    <div class="col-auto">
        {{ cards.kpi_card('asset.stats.avg_rto'|trans({}, 'assets'), avgRTO ~ 'h', null, null, null, null) }}
    </div>
</div>


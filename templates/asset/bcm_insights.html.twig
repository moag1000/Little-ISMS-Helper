{% extends 'base.html.twig' %}

{% block title %}{{ 'asset.title.bcm_insights'|trans }} - Little ISMS Helper{% endblock %}

{% block body %}
<div class="page-header">
    <div>
        <h1>{{ 'asset.title.bcm_insights'|trans }}</h1>
        <p class="text-muted">{{ 'asset.description.bcm_insights'|trans }}</p>
    </div>
    <div class="button-group">
        <a href="{{ path('app_bcm_critical') }}" class="btn btn-secondary">
            üî¥ {{ 'asset.action.view_critical'|trans }}
        </a>
        <a href="{{ path('app_asset_index') }}" class="btn btn-secondary">
            ‚Üê {{ 'common.back'|trans }}
        </a>
    </div>
</div>

{# Statistics Cards #}
<div class="kpi-grid">
    <div class="kpi-card">
        <div class="icon">üíº</div>
        <div class="label">{{ 'asset.stats.total_assets'|trans }}</div>
        <div>
            <span class="value">{{ totalAssets }}</span>
        </div>
    </div>

    <div class="kpi-card border-left-danger">
        <div class="icon">üî¥</div>
        <div class="label">{{ 'asset.stats.critical_assets'|trans }}</div>
        <div>
            <span class="value text-danger">{{ criticalAssets }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">‚ö†Ô∏è</div>
        <div class="label">{{ 'asset.stats.high_risk_assets'|trans }}</div>
        <div>
            <span class="value">{{ highRiskAssets }}</span>
        </div>
    </div>

    <div class="kpi-card">
        <div class="icon">‚è±Ô∏è</div>
        <div class="label">{{ 'asset.stats.avg_rto'|trans }}</div>
        <div>
            <span class="value">{{ avgRTO }}</span>
            <span class="unit">h</span>
        </div>
    </div>
</div>

{# Business Impact Analysis #}
<h2>{{ 'asset.section.business_impact'|trans }}</h2>

<div class="module-grid mb-4">
    <div class="card border-left-danger">
        <div class="fs-2-mb-sm">üî¥</div>
        <h3>{{ 'asset.impact.critical'|trans }}</h3>
        <div class="mt-2">
            <strong class="fs-15-danger">{{ assetsByImpact.critical|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'asset.description.critical_impact'|trans }}
        </p>
        <div class="mt-2">
            <small><strong>{{ 'asset.field.avg_rto'|trans }}:</strong> {{ avgRTOByCriticality.critical }}h</small>
        </div>
    </div>

    <div class="card border-left-warning">
        <div class="fs-2-mb-sm">üü°</div>
        <h3>{{ 'asset.impact.high'|trans }}</h3>
        <div class="mt-2">
            <strong class="fs-15-warning">{{ assetsByImpact.high|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'asset.description.high_impact'|trans }}
        </p>
        <div class="mt-2">
            <small><strong>{{ 'asset.field.avg_rto'|trans }}:</strong> {{ avgRTOByCriticality.high }}h</small>
        </div>
    </div>

    <div class="card border-left-info">
        <div class="fs-2-mb-sm">üîµ</div>
        <h3>{{ 'asset.impact.medium'|trans }}</h3>
        <div class="mt-2">
            <strong class="fs-15-info">{{ assetsByImpact.medium|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'asset.description.medium_impact'|trans }}
        </p>
        <div class="mt-2">
            <small><strong>{{ 'asset.field.avg_rto'|trans }}:</strong> {{ avgRTOByCriticality.medium }}h</small>
        </div>
    </div>

    <div class="card border-left-secondary">
        <div class="fs-2-mb-sm">‚ö™</div>
        <h3>{{ 'asset.impact.low'|trans }}</h3>
        <div class="mt-2">
            <strong class="fs-15">{{ assetsByImpact.low|length }}</strong>
        </div>
        <p class="text-muted-mt-xs">
            {{ 'asset.description.low_impact'|trans }}
        </p>
        <div class="mt-2">
            <small><strong>{{ 'asset.field.avg_rto'|trans }}:</strong> {{ avgRTOByCriticality.low }}h</small>
        </div>
    </div>
</div>

{# Recovery Time Objectives (RTO) Analysis #}
<h2>{{ 'asset.section.rto_analysis'|trans }}</h2>

<div class="card mb-4">
    <p class="text-muted-mb-md">
        {{ 'asset.description.rto_analysis'|trans }}
    </p>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>{{ 'asset.field.rto_category'|trans }}</th>
                    <th class="text-center">{{ 'asset.field.asset_count'|trans }}</th>
                    <th>{{ 'asset.field.examples'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <strong>{{ 'asset.rto.immediate'|trans }}</strong>
                        <br><small class="text-muted">&lt; 1h</small>
                    </td>
                    <td class="text-center">
                        <span class="badge badge-danger">{{ rtoCategories.immediate|length }}</span>
                    </td>
                    <td>
                        {% for asset in rtoCategories.immediate|slice(0, 3) %}
                            <span class="badge badge-secondary mr-xs">{{ asset.name }}</span>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>{{ 'asset.rto.urgent'|trans }}</strong>
                        <br><small class="text-muted">1-4h</small>
                    </td>
                    <td class="text-center">
                        <span class="badge badge-warning">{{ rtoCategories.urgent|length }}</span>
                    </td>
                    <td>
                        {% for asset in rtoCategories.urgent|slice(0, 3) %}
                            <span class="badge badge-secondary mr-xs">{{ asset.name }}</span>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>{{ 'asset.rto.standard'|trans }}</strong>
                        <br><small class="text-muted">4-24h</small>
                    </td>
                    <td class="text-center">
                        <span class="badge badge-info">{{ rtoCategories.standard|length }}</span>
                    </td>
                    <td>
                        {% for asset in rtoCategories.standard|slice(0, 3) %}
                            <span class="badge badge-secondary mr-xs">{{ asset.name }}</span>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>{{ 'asset.rto.flexible'|trans }}</strong>
                        <br><small class="text-muted">&gt; 24h</small>
                    </td>
                    <td class="text-center">
                        <span class="badge badge-secondary">{{ rtoCategories.flexible|length }}</span>
                    </td>
                    <td>
                        {% for asset in rtoCategories.flexible|slice(0, 3) %}
                            <span class="badge badge-secondary mr-xs">{{ asset.name }}</span>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

{# Critical Assets Details #}
<h2>{{ 'asset.section.critical_assets'|trans }}</h2>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>{{ 'asset.field.asset_name'|trans }}</th>
                <th>{{ 'asset.field.type'|trans }}</th>
                <th>{{ 'asset.field.business_criticality'|trans }}</th>
                <th>{{ 'asset.field.rto'|trans }}</th>
                <th>{{ 'asset.field.rpo'|trans }}</th>
                <th>{{ 'asset.field.recovery_strategy'|trans }}</th>
                <th class="text-center">{{ 'common.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for asset in criticalAssetsList %}
            <tr>
                <td>
                    <strong>{{ asset.name }}</strong>
                    {% if asset.isBusinessCritical %}
                        <span class="badge badge-danger ml-xs">
                            {{ 'asset.badge.business_critical'|trans }}
                        </span>
                    {% endif %}
                </td>
                <td>
                    <span class="badge badge-info">{{ ('asset.type.' ~ asset.type)|trans }}</span>
                </td>
                <td>
                    {% set criticalityColors = {
                        'critical': 'danger',
                        'high': 'warning',
                        'medium': 'info',
                        'low': 'secondary'
                    } %}
                    <span class="badge badge-{{ criticalityColors[asset.businessCriticality] ?? 'secondary' }}">
                        {{ ('asset.criticality.' ~ asset.businessCriticality)|trans }}
                    </span>
                </td>
                <td>
                    <strong>{{ asset.rto }}h</strong>
                </td>
                <td>
                    <strong>{{ asset.rpo }}h</strong>
                </td>
                <td>
                    <small class="text-muted">
                        {{ asset.recoveryStrategy|default('-') }}
                    </small>
                </td>
                <td class="text-center">
                    <a href="{{ path('app_asset_show', {id: asset.id}) }}" class="btn btn-sm">
                        üëÅ {{ 'common.view'|trans }}
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7" class="text-center-p-xl">
                    {{ 'asset.message.no_critical_assets'|trans }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# Dependency Map #}
<div class="card mt-4">
    <h2>{{ 'asset.section.dependency_insights'|trans }}</h2>
    <p class="text-muted-mt-sm-mb-md">
        {{ 'asset.description.dependencies'|trans }}
    </p>

    <div class="stats-grid grid-auto-fit-250">
        <div class="stat-item">
            <strong>{{ assetsWithDependencies }}</strong>
            <span>{{ 'asset.stats.with_dependencies'|trans }}</span>
        </div>
        <div class="stat-item">
            <strong>{{ avgDependencies|round(1) }}</strong>
            <span>{{ 'asset.stats.avg_dependencies'|trans }}</span>
        </div>
        <div class="stat-item">
            <strong>{{ singlePointsOfFailure }}</strong>
            <span>{{ 'asset.stats.single_points_failure'|trans }}</span>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Neuer Benutzer{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-person-plus"></i> Neuer Benutzer</h1>
        <a href="{{ path('user_management_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Zurück
        </a>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Benutzer erstellen</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    {# Basic Information #}
                    <h5 class="mb-3"><i class="bi bi-info-circle"></i> Grundinformationen</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.lastName) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.email) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.department) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.jobTitle) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.phoneNumber) }}
                    </div>

                    <hr class="my-4">

                    {# Authentication #}
                    <h5 class="mb-3"><i class="bi bi-shield-lock"></i> Authentifizierung</h5>
                    <div class="mb-3">
                        {{ form_row(form.plainPassword) }}
                    </div>

                    <hr class="my-4">

                    {# Roles & Permissions #}
                    <h5 class="mb-3"><i class="bi bi-shield"></i> Rollen & Berechtigungen</h5>

                    <div class="mb-3">
                        {{ form_label(form.roles) }}
                        {% for child in form.roles %}
                            <div class="form-check">
                                {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                        {% endfor %}
                        {{ form_help(form.roles) }}
                        {{ form_errors(form.roles) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.customRoles) }}
                        {% if form.customRoles|length > 0 %}
                            {% for child in form.customRoles %}
                                <div class="form-check">
                                    {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted">Keine benutzerdefinierten Rollen verfügbar.</p>
                        {% endif %}
                        {{ form_help(form.customRoles) }}
                        {{ form_errors(form.customRoles) }}
                    </div>

                    <hr class="my-4">

                    {# Status #}
                    <h5 class="mb-3"><i class="bi bi-toggle-on"></i> Status</h5>
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            {{ form_widget(form.isActive) }}
                            {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        {{ form_help(form.isActive) }}
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            {{ form_widget(form.isVerified) }}
                            {{ form_label(form.isVerified, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        {{ form_help(form.isVerified) }}
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('user_management_index') }}" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Abbrechen
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Benutzer erstellen
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

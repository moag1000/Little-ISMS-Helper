{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'mfa' %}
{% block title %}{{ user.fullName }} - {{ 'mfa.title'|trans({}, 'mfa') }}{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-shield-lock" aria-hidden="true"></i>
            {{ 'mfa.title'|trans({}, 'mfa') }}: {{ user.fullName }}
        </h1>
        <a href="{{ path('user_management_show', {id: user.id}) }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>

    {# MFA Status #}
    <div class="alert {{ mfa_enabled ? 'alert-success' : 'alert-warning' }} mb-4">
        <div class="d-flex align-items-center">
            <i class="bi {{ mfa_enabled ? 'bi-shield-check' : 'bi-shield-exclamation' }} fs-1 me-3"></i>
            <div>
                <h2 class="mb-1">
                    {% if mfa_enabled %}
                        {{ 'mfa.enabled'|trans({}, 'mfa') }}
                    {% else %}
                        {{ 'mfa.disabled'|trans({}, 'mfa') }}
                    {% endif %}
                </h2>
                <p class="mb-0">
                    {% if mfa_enabled %}
                        {{ 'mfa.enabled_description'|trans({}, 'mfa') }}
                    {% else %}
                        {{ 'mfa.disabled_description'|trans({}, 'mfa') }}
                    {% endif %}
                </p>
            </div>
        </div>
    </div>

    {# MFA Statistics #}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h2 class="card-title text-muted">{{ 'mfa.statistics.active_tokens'|trans({}, 'mfa') }}</h2>
                    <p class="display-6 text-primary">{{ active_tokens_count }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h2 class="card-title text-muted">{{ 'mfa.statistics.total_tokens'|trans({}, 'mfa') }}</h2>
                    <p class="display-6 text-info">{{ mfa_tokens|length }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body">
                    <h2 class="card-title text-muted">{{ 'mfa.statistics.by_type'|trans({}, 'mfa') }}</h2>
                    {% for type, count in tokens_by_type %}
                        <div class="d-flex justify-content-between">
                            <span>{{ type|upper }}</span>
                            {% include '_components/_badge.html.twig' with { variant: 'secondary', content: count } %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    {# MFA Tokens List #}
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">
                <i class="bi bi-key" aria-hidden="true"></i> {{ 'mfa.tokens'|trans({}, 'mfa') }}
            </h2>
        </div>
        <div class="card-body">
            {% if mfa_tokens|length > 0 %}
                {% embed '_components/_table.html.twig' with {
                    'class': 'table-hover',
                    'noMargin': true,
                    'responsive': true
                } %}
                    {% block table_head %}
                        <tr>
                            <th scope="col">{{ 'mfa.token_type_label'|trans({}, 'mfa') }}</th>
                            <th scope="col">{{ 'mfa.device_name'|trans({}, 'mfa') }}</th>
                            <th scope="col">{{ 'mfa.enrolled_at'|trans({}, 'mfa') }}</th>
                            <th scope="col">{{ 'mfa.last_used'|trans({}, 'mfa') }}</th>
                            <th scope="col" class="text-center">{{ 'mfa.usage_count'|trans({}, 'mfa') }}</th>
                            <th scope="col" class="text-center">{{ 'mfa.table.status'|trans({}, 'mfa') }}</th>
                            <th scope="col" class="text-end">{{ 'mfa.table.action'|trans({}, 'mfa') }}</th>
                        </tr>
                    {% endblock %}
                    {% block table_body %}
                        {% for token in mfa_tokens %}
                            <tr class="{{ not token.isActive ? 'table-secondary' : '' }}">
                                <td>
                                    {% if token.tokenType == 'totp' %}
                                        <i class="bi bi-phone" aria-hidden="true"></i> {{ 'mfa.token_type.totp'|trans({}, 'mfa') }}
                                    {% elseif token.tokenType == 'webauthn' %}
                                        <i class="bi bi-fingerprint" aria-hidden="true"></i> {{ 'mfa.token_type.webauthn'|trans({}, 'mfa') }}
                                    {% elseif token.tokenType == 'sms' %}
                                        <i class="bi bi-chat" aria-hidden="true"></i> {{ 'mfa.token_type.sms'|trans({}, 'mfa') }}
                                    {% elseif token.tokenType == 'hardware' %}
                                        <i class="bi bi-cpu" aria-hidden="true"></i> {{ 'mfa.token_type.hardware'|trans({}, 'mfa') }}
                                    {% elseif token.tokenType == 'backup' %}
                                        <i class="bi bi-lock" aria-hidden="true"></i> {{ 'mfa.token_type.backup'|trans({}, 'mfa') }}
                                    {% else %}
                                        <i class="bi bi-question-circle" aria-hidden="true"></i> {{ token.tokenType }}
                                    {% endif %}
                                </td>
                                <td>
                                    {{ token.deviceName ?? '-' }}
                                    {% if token.isPrimary %}
                                        {% include '_components/_badge.html.twig' with { variant: 'primary', content: 'mfa.is_primary'|trans({}, 'mfa') } %}
                                    {% endif %}
                                </td>
                                <td>{{ token.enrolledAt|date('d.m.Y H:i') }}</td>
                                <td>
                                    {% if token.lastUsedAt %}
                                        {{ token.lastUsedAt|date('d.m.Y H:i') }}
                                    {% else %}
                                        <span class="text-muted">{{ 'mfa.never_used'|trans({}, 'mfa') }}</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    {% include '_components/_badge.html.twig' with { variant: 'info', content: token.usageCount } %}
                                </td>
                                <td class="text-center">
                                    {% if token.isActive %}
                                        {% if token.isExpired %}
                                            {% include '_components/_badge.html.twig' with { variant: 'danger', content: 'mfa.status.expired'|trans({}, 'mfa') } %}
                                        {% else %}
                                            {% include '_components/_badge.html.twig' with { variant: 'success', content: 'mfa.status.active'|trans({}, 'mfa') } %}
                                        {% endif %}
                                    {% else %}
                                        {% include '_components/_badge.html.twig' with { variant: 'secondary', content: 'mfa.status.inactive'|trans({}, 'mfa') } %}
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                                        <form method="post"
                                              action="{{ path('user_management_mfa_reset', {id: user.id, tokenId: token.id}) }}"
                                              style="display: inline;"
                                              data-controller="ui-actions"
                                              data-action="submit->ui-actions#confirm"
                                              data-ui-actions-message-param="{{ 'mfa.admin.confirm_reset'|trans({}, 'mfa') }}">
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('mfa_reset_' ~ token.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash" aria-hidden="true"></i> {{ 'mfa.action.reset'|trans({}, 'mfa') }}
                                            </button>
                                        </form>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    {% endblock %}
                {% endembed %}
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle" aria-hidden="true"></i>
                    {{ 'mfa.no_tokens_registered'|trans({}, 'mfa') }}
                </div>
            {% endif %}
        </div>
    </div>

    {# Info Box for Super Admins #}
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="alert alert-warning mt-4">
            <h3><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'mfa.admin.notice_title'|trans({}, 'mfa') }}</h3>
            <p class="mb-0">
                {{ 'mfa.admin.notice_text'|trans({}, 'mfa') }}
            </p>
        </div>
    {% endif %}
</div>
{% endblock admin_content %}

{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'user.edit'|trans({}, 'user') }} - {{ user.fullName }}{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.admin'|trans({}, 'nav'), url: path('admin_dashboard') },
            { label: 'nav.users'|trans({}, 'nav'), url: path('user_management_index') },
            { label: user.fullName, url: path('user_management_show', {id: user.id}) },
            { label: 'common.edit'|trans({}, 'messages') }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-person-gear" aria-hidden="true"></i>
            {{ 'user.edit'|trans({}, 'user') }}
        </h1>
        <div>
            <a href="{{ path('user_management_show', {'id': user.id}) }}" class="btn btn-outline-info">
                <i class="bi bi-eye" aria-hidden="true"></i>
                {{ 'common.view'|trans({}, 'messages') }}
            </a>
            <a href="{{ path('user_management_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left" aria-hidden="true"></i>
                {{ 'common.back'|trans({}, 'messages') }}
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            {# Role Help Component - explains system vs custom roles #}
            {{ include('_components/_role_help.html.twig') }}

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">{{ user.fullName }} {{ 'user.edit_suffix'|trans({}, 'user') }}</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {% include '_components/_auto_form.html.twig' with {
                            'form': form,
                            'sections': {
                                'basic_info': {
                                    'label': 'user.section.basic_info'|trans({}, 'user'),
                                    'fields': ['firstName', 'lastName', 'email', 'department', 'jobTitle', 'phoneNumber', 'avatarFile']
                                },
                                'tenant': {
                                    'label': 'user.section.tenant'|trans({}, 'user'),
                                    'fields': ['tenant']
                                },
                                'authentication': {
                                    'label': 'user.section.authentication'|trans({}, 'user'),
                                    'fields': ['plainPassword']
                                },
                                'roles': {
                                    'label': 'user.section.roles'|trans({}, 'user'),
                                    'fields': ['roles', 'customRoles']
                                },
                                'status': {
                                    'label': 'user.section.status'|trans({}, 'user'),
                                    'fields': ['isActive', 'isVerified']
                                }
                            },
                            'col_widths': {
                                'firstName': 6,
                                'lastName': 6,
                                'email': 12,
                                'department': 6,
                                'jobTitle': 6,
                                'phoneNumber': 6,
                                'avatarFile': 12,
                                'tenant': 12,
                                'plainPassword': 12,
                                'roles': 12,
                                'customRoles': 12,
                                'isActive': 12,
                                'isVerified': 12
                            },
                            'translation_domain': 'user'
                        } %}

                        {# Auth Provider Info (Edit Mode Only) #}
                        <div class="alert alert-info" role="status">
                            <i class="bi bi-info-circle" aria-hidden="true"></i>
                            <strong>{{ 'user.field.auth_provider'|trans({}, 'user') }}:</strong>
                            {% if user.authProvider == 'azure_oauth' %}
                                Azure OAuth
                            {% elseif user.authProvider == 'azure_saml' %}
                                Azure SAML
                            {% else %}
                                {{ 'user.auth_provider.local'|trans({}, 'user') }}
                            {% endif %}
                        </div>

                        {# Metadata (Edit Mode Only) #}
                        <div class="alert alert-secondary" role="status">
                            <small>
                                <strong>{{ 'user.field.created_at'|trans({}, 'user') }}:</strong> {{ user.createdAt|date('d.m.Y H:i') }}<br>
                                {% if user.updatedAt %}
                                    <strong>{{ 'user.field.updated_at'|trans({}, 'user') }}:</strong> {{ user.updatedAt|date('d.m.Y H:i') }}<br>
                                {% endif %}
                                {% if user.lastLoginAt %}
                                    <strong>{{ 'user.field.last_login'|trans({}, 'user') }}:</strong> {{ user.lastLoginAt|date('d.m.Y H:i') }}
                                {% endif %}
                            </small>
                        </div>

                        {# Form Actions #}
                        <div class="form-actions d-flex gap-2 justify-content-between mt-4">
                            <a href="{{ path('user_management_show', {'id': user.id}) }}" class="btn btn-secondary">
                                <i class="bi bi-x-circle" aria-hidden="true"></i>
                                {{ 'common.cancel'|trans({}, 'messages') }}
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle" aria-hidden="true"></i>
                                {{ 'user.save_changes'|trans({}, 'user') }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock admin_content %}

{% block javascripts %}
{{ parent() }}
<script>
    // Initialize Bootstrap tooltips for role checkboxes
    document.addEventListener('DOMContentLoaded', function() {
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        tooltipTriggerList.forEach(function(el) {
            new bootstrap.Tooltip(el);
        });
    });
</script>
{% endblock %}

{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'user' %}

{% block title %}{{ 'user.page.title'|trans({}, 'user') }}{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.admin'|trans({}, 'nav'), url: path('admin_dashboard') },
            { label: 'nav.users'|trans({}, 'nav') }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people" aria-hidden="true"></i> {{ 'user.page.title'|trans({}, 'user') }}</h1>
        <a href="{{ path('user_management_new') }}" class="btn btn-primary" data-turbo-frame="_top">
            <i class="bi bi-person-plus" aria-hidden="true"></i> {{ 'user.action.new_user'|trans({}, 'user') }}
        </a>
    </div>

    {# Notifications Container #}
    <div id="notifications" class="mb-3"></div>

    {# Statistics Cards #}
    <turbo-frame id="user-stats">
        <div class="row mb-4">
            <div class="col-md-3">
                {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'primary' } %}
                    {% block card_body %}
                        <div class="text-center">
                            <h2 class="card-title text-muted">{{ 'user.stats.total'|trans({}, 'user') }}</h2>
                            <p class="display-6 text-primary">
                                <span id="user-total-count">{{ statistics.total ?? users|length }}</span>
                            </p>
                            <small>{{ 'user.stats.users'|trans({}, 'user') }}</small>
                        </div>
                    {% endblock %}
                {% endembed %}
            </div>
            <div class="col-md-3">
                {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'success' } %}
                    {% block card_body %}
                        <div class="text-center">
                            <h2 class="card-title text-muted">{{ 'user.stats.active'|trans({}, 'user') }}</h2>
                            <p class="display-6 text-success">
                                <span id="user-active-count">{{ statistics.active ?? 0 }}</span>
                            </p>
                            <small>{{ 'user.stats.active_users'|trans({}, 'user') }}</small>
                        </div>
                    {% endblock %}
                {% endembed %}
            </div>
            <div class="col-md-3">
                {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'warning' } %}
                    {% block card_body %}
                        <div class="text-center">
                            <h2 class="card-title text-muted">{{ 'user.stats.admins'|trans({}, 'user') }}</h2>
                            <p class="display-6 text-warning">
                                <span id="user-admin-count">{{ statistics.admins ?? 0 }}</span>
                            </p>
                            <small>{{ 'user.stats.administrators'|trans({}, 'user') }}</small>
                        </div>
                    {% endblock %}
                {% endembed %}
            </div>
            <div class="col-md-3">
                {% embed '_components/_card.html.twig' with { 'variant': 'bordered', 'borderColor': 'info' } %}
                    {% block card_body %}
                        <div class="text-center">
                            <h2 class="card-title text-muted">{{ 'user.stats.today_active'|trans({}, 'user') }}</h2>
                            <p class="display-6 text-info">{{ statistics.today_active ?? 0 }}</p>
                            <small>{{ 'user.stats.logins_today'|trans({}, 'user') }}</small>
                        </div>
                    {% endblock %}
                {% endembed %}
            </div>
        </div>
    </turbo-frame>

    {# User List #}
    <turbo-frame id="users-list">
        {% embed '_components/_card.html.twig' %}
            {% block card_header %}
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-list-ul" aria-hidden="true"></i> {{ 'user.message.all_users'|trans({}, 'user') }}
                    </h2>
                </div>
            {% endblock %}
            {% block card_body %}
                {% if users|length > 0 %}
                    {% embed '_components/_table.html.twig' with {
                        'noMargin': true
                    } %}
                        {% block table_head %}
                            <tr>
                                <th scope="col" style="width: 60px;"></th>
                                <th scope="col">{{ 'user.table.name'|trans({}, 'user') }}</th>
                                <th scope="col">{{ 'user.table.email'|trans({}, 'user') }}</th>
                                <th scope="col">{{ 'user.table.roles'|trans({}, 'user') }}</th>
                                <th scope="col">{{ 'user.table.auth_provider'|trans({}, 'user') }}</th>
                                <th scope="col">{{ 'user.table.status'|trans({}, 'user') }}</th>
                                <th scope="col">{{ 'user.table.last_login'|trans({}, 'user') }}</th>
                                <th scope="col">{{ 'user.table.actions'|trans({}, 'user') }}</th>
                            </tr>
                        {% endblock %}
                        {% block table_body_attrs %}id="users-table-body"{% endblock %}
                        {% block table_body %}
                            {% for user in users %}
                                <tr id="user-{{ user.id }}">
                                    <td>
                                        {% if user.profilePicture %}
                                            <img src="{{ asset(user.profilePicture) }}"
                                                 alt="{{ user.firstName }} {{ user.lastName }}"
                                                 class="rounded-circle"
                                                 style="width: 40px; height: 40px; object-fit: cover;">
                                        {% else %}
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                                 style="width: 40px; height: 40px; font-weight: 600;">
                                                {{ user.firstName|slice(0, 1)|upper }}{{ user.lastName|slice(0, 1)|upper }}
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('user_management_show', {'id': user.id}) }}"
                                           data-turbo-frame="_top">
                                            {{ user.firstName }} {{ user.lastName }}
                                        </a>
                                    </td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            {% include '_components/_badge.html.twig' with { variant: 'secondary', content: role } %}
                                        {% endfor %}
                                        {% for customRole in user.customRoles %}
                                            {% include '_components/_badge.html.twig' with { variant: 'info', content: customRole.name } %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% if user.authProvider == 'azure_oauth' %}
                                            <i class="bi bi-microsoft" aria-hidden="true"></i> {{ 'user.auth.azure_oauth'|trans({}, 'user') }}
                                        {% elseif user.authProvider == 'azure_saml' %}
                                            <i class="bi bi-microsoft" aria-hidden="true"></i> {{ 'user.auth.azure_saml'|trans({}, 'user') }}
                                        {% else %}
                                            <i class="bi bi-person-circle" aria-hidden="true"></i> {{ 'user.auth.local'|trans({}, 'user') }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if user.isActive %}
                                            {% include '_components/_badge.html.twig' with { variant: 'success', icon: 'bi-check-circle', content: 'user.status.active'|trans({}, 'user') } %}
                                        {% else %}
                                            {% include '_components/_badge.html.twig' with { variant: 'danger', icon: 'bi-x-circle', content: 'user.status.inactive'|trans({}, 'user') } %}
                                        {% endif %}
                                        {% if not user.isVerified %}
                                            {% include '_components/_badge.html.twig' with { variant: 'warning', content: 'user.status.not_verified'|trans({}, 'user') } %}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if user.lastLoginAt %}
                                            {{ user.lastLoginAt|date('d.m.Y H:i') }}
                                        {% else %}
                                            <span class="text-muted">{{ 'user.status.never'|trans({}, 'user') }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('user_management_show', {'id': user.id}) }}"
                                               class="btn btn-outline-primary" title="{{ 'common.view'|trans({}, 'messages') }}"
                                               data-turbo-frame="_top" aria-label="{{ 'common.view'|trans({}, 'messages') }}">
                                                <i class="bi bi-eye" aria-hidden="true"></i>
                                            </a>
                                            <a href="{{ path('user_management_edit', {'id': user.id}) }}"
                                               class="btn btn-outline-secondary" title="{{ 'common.edit'|trans({}, 'messages') }}"
                                               data-turbo-frame="_top" aria-label="{{ 'common.edit'|trans({}, 'messages') }}">
                                                <i class="bi bi-pencil" aria-hidden="true"></i>
                                            </a>
                                            {% if user.id != app.user.id %}
                                                <button type="button" class="btn btn-outline-danger"
                                                        title="{{ 'common.delete'|trans({}, 'messages') }}"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteModal{{ user.id }}" aria-label="{{ 'common.delete'|trans({}, 'messages') }}">
                                                    <i class="bi bi-trash" aria-hidden="true"></i>
                                                </button>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>

                                {# Delete Confirmation Modal #}
                                <div class="modal fade" id="deleteModal{{ user.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h2 class="modal-title">{{ 'user.action.delete_user'|trans({}, 'user') }}</h2>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
                                            </div>
                                            <div class="modal-body">
                                                {{ 'user.confirm.delete'|trans({'%name%': user.firstName ~ ' ' ~ user.lastName}, 'user') }}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'common.cancel'|trans({}, 'messages') }}</button>
                                                <form method="post" action="{{ path('user_management_delete', {'id': user.id}) }}" style="display: inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash" aria-hidden="true"></i> {{ 'common.delete'|trans({}, 'messages') }}</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}
                {% else %}
                    {% include '_components/_empty_state.html.twig' with {
                        icon: 'bi-people',
                        title: 'user.empty.title'|trans({}, 'user'),
                        description: 'user.empty.description'|trans({}, 'user'),
                        action: { label: 'user.action.new_user'|trans({}, 'user'), url: path('user_management_new'), icon: 'bi-person-plus' }
                    } %}
                {% endif %}
            {% endblock %}
        {% endembed %}
    </turbo-frame>
</div>

<style>
turbo-frame[busy] {
    opacity: 0.6;
    pointer-events: none;
}
</style>
{% endblock admin_content %}

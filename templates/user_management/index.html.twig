{% extends 'base.html.twig' %}

{% block title %}Benutzerverwaltung{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people"></i> Benutzerverwaltung</h1>
        <a href="{{ path('user_management_new') }}" class="btn btn-primary" data-turbo-frame="_top">
            <i class="bi bi-person-plus"></i> Neuer Benutzer
        </a>
    </div>

    {# Notifications Container #}
    <div id="notifications" class="mb-3"></div>

    {# Statistics Cards #}
    <turbo-frame id="user-stats">
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <h5 class="card-title text-muted">Gesamt</h5>
                        <p class="display-6 text-primary">
                            <span id="user-total-count">{{ statistics.total ?? users|length }}</span>
                        </p>
                        <small>Benutzer</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h5 class="card-title text-muted">Aktiv</h5>
                        <p class="display-6 text-success">
                            <span id="user-active-count">{{ statistics.active ?? 0 }}</span>
                        </p>
                        <small>Aktive Benutzer</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <h5 class="card-title text-muted">Admins</h5>
                        <p class="display-6 text-warning">
                            <span id="user-admin-count">{{ statistics.admins ?? 0 }}</span>
                        </p>
                        <small>Administratoren</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-info">
                    <div class="card-body text-center">
                        <h5 class="card-title text-muted">Heute aktiv</h5>
                        <p class="display-6 text-info">{{ statistics.today_active ?? 0 }}</p>
                        <small>Anmeldungen heute</small>
                    </div>
                </div>
            </div>
        </div>
    </turbo-frame>

    {# User List #}
    <turbo-frame id="users-list">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul"></i> Alle Benutzer
                </h5>
            </div>
            <div class="card-body">
                {% if users|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>E-Mail</th>
                                    <th>Rollen</th>
                                    <th>Auth Provider</th>
                                    <th>Status</th>
                                    <th>Letzte Anmeldung</th>
                                    <th>Aktionen</th>
                                </tr>
                            </thead>
                            <tbody id="users-table-body">
                                {% for user in users %}
                                    <tr id="user-{{ user.id }}">
                                        <td>
                                            <a href="{{ path('user_management_show', {'id': user.id}) }}"
                                               data-turbo-frame="_top">
                                                {{ user.firstName }} {{ user.lastName }}
                                            </a>
                                        </td>
                                        <td>{{ user.email }}</td>
                                        <td>
                                            {% for role in user.roles %}
                                                <span class="badge bg-secondary">{{ role }}</span>
                                            {% endfor %}
                                            {% for customRole in user.customRoles %}
                                                <span class="badge bg-info">{{ customRole.name }}</span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% if user.authProvider == 'azure_oauth' %}
                                                <i class="bi bi-microsoft"></i> Azure OAuth
                                            {% elseif user.authProvider == 'azure_saml' %}
                                                <i class="bi bi-microsoft"></i> Azure SAML
                                            {% else %}
                                                <i class="bi bi-person-circle"></i> Lokal
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if user.isActive %}
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Aktiv
                                                </span>
                                            {% else %}
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Inaktiv
                                                </span>
                                            {% endif %}
                                            {% if not user.isVerified %}
                                                <span class="badge bg-warning">Nicht verifiziert</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if user.lastLoginAt %}
                                                {{ user.lastLoginAt|date('d.m.Y H:i') }}
                                            {% else %}
                                                <span class="text-muted">Nie</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="{{ path('user_management_show', {'id': user.id}) }}"
                                                   class="btn btn-outline-primary" title="Ansehen"
                                                   data-turbo-frame="_top">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('user_management_edit', {'id': user.id}) }}"
                                                   class="btn btn-outline-secondary" title="Bearbeiten"
                                                   data-turbo-frame="_top">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                {% if user.id != app.user.id %}
                                                    <button type="button" class="btn btn-outline-danger"
                                                            title="Löschen"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteModal{{ user.id }}">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>

                                    {# Delete Confirmation Modal #}
                                    <div class="modal fade" id="deleteModal{{ user.id }}" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Benutzer löschen</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Möchten Sie den Benutzer <strong>{{ user.firstName }} {{ user.lastName }}</strong> wirklich löschen?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                                                    <form method="post" action="{{ path('user_management_delete', {'id': user.id}) }}" style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                        <button type="submit" class="btn btn-danger">Löschen</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        Noch keine Benutzer vorhanden.
                        <a href="{{ path('user_management_new') }}" class="alert-link">Erstellen Sie den ersten Benutzer</a>.
                    </div>
                {% endif %}
            </div>
        </div>
    </turbo-frame>
</div>

<style>
turbo-frame[busy] {
    opacity: 0.6;
    pointer-events: none;
}
</style>
{% endblock %}

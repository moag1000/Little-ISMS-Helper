{% extends 'admin/layout.html.twig' %}
{% trans_default_domain 'user' %}

{% block title %}{{ 'user.import.title'|trans({}, 'user') }}{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-upload" aria-hidden="true"></i> {{ 'user.import.title'|trans({}, 'user') }}</h1>
        <a href="{{ path('user_management_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
        </a>
    </div>

    {# Instructions #}
    <div class="alert alert-info mb-4">
        <h2><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'user.import.description'|trans({}, 'user') }}</h2>
        <p class="mb-2">{{ 'user.import.format'|trans({}, 'user') }}</p>
        <code>email, first_name, last_name, password, is_active, roles</code>

        <hr>

        <h3>{{ 'user.import.example_csv'|trans({}, 'user') }}</h3>
        <pre class="mb-0">email,first_name,last_name,password,is_active,roles
john.doe@example.com,John,Doe,SecurePass123,yes,"Admin,User"
jane.smith@example.com,Jane,Smith,SecurePass456,yes,"User"</pre>
    </div>

    {# Import Form #}
    {% embed '_components/_card.html.twig' %}
        {% block card_header %}
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">
                    <i class="bi bi-file-earmark-arrow-up" aria-hidden="true"></i> {{ 'user.import.upload_title'|trans({}, 'user') }}
                </h2>
            </div>
        {% endblock %}
        {% block card_body %}
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="import_file" class="form-label">{{ 'user.import.file_label'|trans({}, 'user') }}</label>
                    <input type="file"
                           class="form-control"
                           id="import_file"
                           name="import_file"
                           accept=".csv"
                           required>
                    <div class="form-text">
                        {{ 'user.import.file_help'|trans({}, 'user') }}
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="{{ path('user_management_index') }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'common.cancel'|trans({}, 'messages') }}
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload" aria-hidden="true"></i> {{ 'user.import.submit'|trans({}, 'user') }}
                    </button>
                </div>
            </form>
        {% endblock %}
    {% endembed %}

    {# CSV Template Download #}
    {% embed '_components/_card.html.twig' with { 'class': 'mt-4' } %}
        {% block card_header %}
            <div class="card-header bg-secondary text-white">
                <h2 class="mb-0">
                    <i class="bi bi-download" aria-hidden="true"></i> {{ 'user.import.template_title'|trans({}, 'user') }}
                </h2>
            </div>
        {% endblock %}
        {% block card_body %}
            <p>{{ 'user.import.template_description'|trans({}, 'user') }}</p>
            <a href="data:text/csv;charset=utf-8,email%2Cfirst_name%2Clast_name%2Cpassword%2Cis_active%2Croles%0A"
               download="user_import_template.csv"
               class="btn btn-outline-primary">
                <i class="bi bi-file-earmark-spreadsheet" aria-hidden="true"></i> {{ 'user.import.template_download'|trans({}, 'user') }}
            </a>
        {% endblock %}
    {% endembed %}

    {# Important Notes #}
    <div class="alert alert-warning mt-4">
        <h3><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'user.import.notes_title'|trans({}, 'user') }}</h3>
        <ul class="mb-0">
            <li>{{ 'user.import.note_existing_email'|trans({}, 'user') }}</li>
            <li>{{ 'user.import.note_random_password'|trans({}, 'user') }}</li>
            <li>{{ 'user.import.note_role_case'|trans({}, 'user') }}</li>
            <li>{{ 'user_management.import_irreversible'|trans({}, 'user') }}</li>
            <li>{{ 'user.import.note_default_role'|trans({}, 'user') }}</li>
        </ul>
    </div>
</div>
{% endblock admin_content %}

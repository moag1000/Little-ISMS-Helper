{% extends 'admin/layout.html.twig' %}

{% block title %}Benutzer: {{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    {% include '_components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'nav.admin'|trans({}, 'nav'), url: path('admin_dashboard') },
            { label: 'nav.users'|trans({}, 'nav'), url: path('user_management_index') },
            { label: user.firstName ~ ' ' ~ user.lastName }
        ]
    } %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            {% if user.profilePicture %}
                <img src="{{ asset(user.profilePicture) }}"
                     alt="{{ user.firstName }} {{ user.lastName }}"
                     class="rounded-circle me-3 profile-avatar profile-avatar-lg">
            {% else %}
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3 profile-avatar profile-avatar-lg">
                    {{ user.firstName|slice(0, 1)|upper }}{{ user.lastName|slice(0, 1)|upper }}
                </div>
            {% endif %}
            <div>
                <h1>{{ user.firstName }} {{ user.lastName }}</h1>
                <p class="text-muted mb-0">{{ user.email }}</p>
            </div>
        </div>
        <div>
            <a href="{{ path('user_management_edit', {'id': user.id}) }}" class="btn btn-secondary">
                <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'common.edit'|trans({}, 'messages') }}
            </a>
            <a href="{{ path('user_management_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left" aria-hidden="true"></i> {{ 'common.back'|trans({}, 'messages') }}
            </a>
        </div>
    </div>

    <div class="row">
        {# Basic Information #}
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> {{ 'user.section.basic_info'|trans({}, 'user') }}</h3>
                </div>
                <div class="card-body">
                    {% embed '_components/_table.html.twig' with {
                        'class': 'table-sm',
                        'noMargin': true
                    } %}
                        {% block table_body %}
                            <tr>
                                <th scope="row" width="40%">{{ 'user.label.profile_picture'|trans({}, 'user') }}</th>
                                <td>
                                    {% if user.profilePicture %}
                                        <img src="{{ asset(user.profilePicture) }}"
                                             alt="{{ user.firstName }} {{ user.lastName }}"
                                             class="rounded-circle profile-avatar profile-avatar-md">
                                    {% else %}
                                        <span class="text-muted">{{ 'user.label.no_profile_picture'|trans({}, 'user') }}</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row" width="40%">{{ 'user.label.first_name'|trans({}, 'user') }}</th>
                                <td>{{ user.firstName }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'user.label.last_name'|trans({}, 'user') }}</th>
                                <td>{{ user.lastName }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'user.label.email'|trans({}, 'user') }}</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'user.label.department'|trans({}, 'user') }}</th>
                                <td>{{ user.department ?? '-' }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'user.label.position'|trans({}, 'user') }}</th>
                                <td>{{ user.jobTitle ?? '-' }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'user.label.phone'|trans({}, 'user') }}</th>
                                <td>{{ user.phoneNumber ?? '-' }}</td>
                            </tr>
                        {% endblock %}
                    {% endembed %}
                </div>
            </div>
        </div>

        {# Security & Status #}
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-shield-check" aria-hidden="true"></i> {{ 'user.section.security_status'|trans({}, 'user') }}</h3>
                </div>
                <div class="card-body">
                    {% embed '_components/_table.html.twig' with {
                        'class': 'table-sm',
                        'noMargin': true
                    } %}
                        {% block table_body %}
                            <tr>
                                <th scope="row" width="40%">{{ 'user.label.status'|trans({}, 'user') }}</th>
                                <td>
                                    {% if user.isActive %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'user.status.active'|trans({}, 'user') }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle" aria-hidden="true"></i> {{ 'user.status.inactive'|trans({}, 'user') }}
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'user.label.verified'|trans({}, 'user') }}</th>
                                <td>
                                    {% if user.isVerified %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle" aria-hidden="true"></i> {{ 'user.label.yes'|trans({}, 'user') }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-warning">
                                            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> {{ 'user.label.no'|trans({}, 'user') }}
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'user.label.auth_provider'|trans({}, 'user') }}</th>
                                <td>
                                    {% if user.authProvider == 'azure_oauth' %}
                                        <i class="bi bi-microsoft" aria-hidden="true"></i> {{ 'user.auth.azure_oauth'|trans({}, 'user') }}
                                    {% elseif user.authProvider == 'azure_saml' %}
                                        <i class="bi bi-microsoft" aria-hidden="true"></i> {{ 'user.auth.azure_saml'|trans({}, 'user') }}
                                    {% else %}
                                        <i class="bi bi-person-circle" aria-hidden="true"></i> {{ 'user.auth.local'|trans({}, 'user') }}
                                    {% endif %}
                                </td>
                            </tr>
                            {% if user.azureObjectId %}
                                <tr>
                                    <th scope="row">{{ 'user.label.azure_object_id'|trans({}, 'user') }}</th>
                                    <td><code>{{ user.azureObjectId }}</code></td>
                                </tr>
                            {% endif %}
                            <tr>
                                <th scope="row">{{ 'user.label.created_at'|trans({}, 'user') }}</th>
                                <td>{{ user.createdAt|date('d.m.Y H:i') }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'user.label.last_login'|trans({}, 'user') }}</th>
                                <td>
                                    {% if user.lastLoginAt %}
                                        {{ user.lastLoginAt|date('d.m.Y H:i') }}
                                    {% else %}
                                        <span class="text-muted">{{ 'user.status.never'|trans({}, 'user') }}</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endblock %}
                    {% endembed %}
                </div>
            </div>
        </div>
    </div>

    {# Roles & Permissions #}
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-shield" aria-hidden="true"></i> {{ 'user.section.system_roles'|trans({}, 'user') }}</h3>
                </div>
                <div class="card-body">
                    {% if user.roles|length > 0 %}
                        <ul class="list-group">
                            {% for role in user.roles %}
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>
                                            <i class="bi bi-shield-fill text-warning" aria-hidden="true"></i>
                                            {{ role }}
                                        </span>
                                        {% if role == 'ROLE_SUPER_ADMIN' %}
                                            <span class="badge bg-danger">Super Admin</span>
                                        {% elseif role == 'ROLE_ADMIN' %}
                                            <span class="badge bg-warning">Admin</span>
                                        {% elseif role == 'ROLE_MANAGER' %}
                                            <span class="badge bg-info">Manager</span>
                                        {% elseif role == 'ROLE_AUDITOR' %}
                                            <span class="badge bg-primary">Auditor</span>
                                        {% else %}
                                            <span class="badge bg-secondary">User</span>
                                        {% endif %}
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            {{ 'user.message.no_system_roles'|trans({}, 'user') }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0"><i class="bi bi-key" aria-hidden="true"></i> {{ 'user.section.custom_roles'|trans({}, 'user') }}</h3>
                </div>
                <div class="card-body">
                    {% if user.customRoles|length > 0 %}
                        <ul class="list-group">
                            {% for customRole in user.customRoles %}
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>{{ customRole.name }}</strong>
                                            {% if customRole.description %}
                                                <br>
                                                <small class="text-muted">{{ customRole.description }}</small>
                                            {% endif %}
                                        </div>
                                        <span class="badge bg-info">{{ 'user.label.permissions_count'|trans({'%count%': customRole.permissions|length}, 'user') }}</span>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            {{ 'user.message.no_custom_roles_assigned'|trans({}, 'user') }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# All Permissions #}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h3 class="mb-0"><i class="bi bi-unlock" aria-hidden="true"></i> {{ 'user.section.all_permissions'|trans({}, 'user') }}</h3>
                </div>
                <div class="card-body">
                    {% set allPermissions = [] %}
                    {% for customRole in user.customRoles %}
                        {% for permission in customRole.permissions %}
                            {% set allPermissions = allPermissions|merge([permission]) %}
                        {% endfor %}
                    {% endfor %}

                    {% if allPermissions|length > 0 %}
                        <div class="row">
                            {% for permission in allPermissions %}
                                <div class="col-md-3 mb-2">
                                    <span class="badge bg-secondary w-100">
                                        <i class="bi bi-check" aria-hidden="true"></i> {{ permission.name }}
                                    </span>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            {{ 'user.message.no_specific_permissions'|trans({}, 'user') }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Actions #}
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"><i class="bi bi-gear" aria-hidden="true"></i> {{ 'user.section.actions'|trans({}, 'user') }}</h3>
        </div>
        <div class="card-body">
            <div class="btn-group" role="group">
                <a href="{{ path('user_management_edit', {'id': user.id}) }}" class="btn btn-primary">
                    <i class="bi bi-pencil" aria-hidden="true"></i> {{ 'common.edit'|trans({}, 'messages') }}
                </a>
                {% if user.id != app.user.id %}
                    {% if user.isActive %}
                        <form method="post" action="{{ path('user_management_toggle_active', {'id': user.id}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle_active' ~ user.id) }}">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-pause-circle" aria-hidden="true"></i> {{ 'user.action.deactivate'|trans({}, 'user') }}
                            </button>
                        </form>
                    {% else %}
                        <form method="post" action="{{ path('user_management_toggle_active', {'id': user.id}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle_active' ~ user.id) }}">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-play-circle" aria-hidden="true"></i> {{ 'common.activate'|trans({}, 'messages') }}
                            </button>
                        </form>
                    {% endif %}
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash" aria-hidden="true"></i> {{ 'common.delete'|trans({}, 'messages') }}
                    </button>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{# Delete Confirmation Modal #}
{% if user.id != app.user.id %}
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">{{ 'user.modal.delete_user'|trans({}, 'user') }}</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'action.close'|trans({}, 'messages') }}"></button>
            </div>
            <div class="modal-body">
                {{ 'user.modal.delete_confirm'|trans({'%name%': user.firstName ~ ' ' ~ user.lastName}, 'user')|raw }}
                <br><br>
                <strong>{{ 'user.modal.delete_warning'|trans({}, 'user') }}</strong>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'common.cancel'|trans({}, 'messages') }}</button>
                <form method="post" action="{{ path('user_management_delete', {'id': user.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash" aria-hidden="true"></i> {{ 'common.delete'|trans({}, 'messages') }}</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock admin_content %}

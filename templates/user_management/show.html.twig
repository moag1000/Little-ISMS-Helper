{% extends 'admin/layout.html.twig' %}

{% block title %}Benutzer: {{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block admin_content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            {% if user.profilePicture %}
                <img src="{{ asset(user.profilePicture) }}"
                     alt="{{ user.firstName }} {{ user.lastName }}"
                     class="rounded-circle me-3"
                     style="width: 80px; height: 80px; object-fit: cover; border: 2px solid #0d6efd;">
            {% else %}
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                     style="width: 80px; height: 80px; font-size: 2rem; font-weight: 600; border: 2px solid #0d6efd;">
                    {{ user.firstName|slice(0, 1)|upper }}{{ user.lastName|slice(0, 1)|upper }}
                </div>
            {% endif %}
            <div>
                <h1>{{ user.firstName }} {{ user.lastName }}</h1>
                <p class="text-muted mb-0">{{ user.email }}</p>
            </div>
        </div>
        <div>
            <a href="{{ path('user_management_edit', {'id': user.id}) }}" class="btn btn-secondary">
                <i class="bi bi-pencil" aria-hidden="true"></i> Bearbeiten
            </a>
            <a href="{{ path('user_management_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left" aria-hidden="true"></i> Zurück
            </a>
        </div>
    </div>

    <div class="row">
        {# Basic Information #}
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-info-circle" aria-hidden="true"></i> Grundinformationen</h3>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th scope="row" width="40%">Profilbild:</th>
                                <td>
                                    {% if user.profilePicture %}
                                        <img src="{{ asset(user.profilePicture) }}"
                                             alt="{{ user.firstName }} {{ user.lastName }}"
                                             class="rounded-circle"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                    {% else %}
                                        <span class="text-muted">Kein Profilbild</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row" width="40%">Vorname:</th>
                                <td>{{ user.firstName }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Nachname:</th>
                                <td>{{ user.lastName }}</td>
                            </tr>
                            <tr>
                                <th scope="row">E-Mail:</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Abteilung:</th>
                                <td>{{ user.department ?? '-' }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Position:</th>
                                <td>{{ user.jobTitle ?? '-' }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Telefon:</th>
                                <td>{{ user.phoneNumber ?? '-' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Security & Status #}
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-shield-check" aria-hidden="true"></i> Sicherheit & Status</h3>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th scope="row" width="40%">Status:</th>
                                <td>
                                    {% if user.isActive %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle" aria-hidden="true"></i> Aktiv
                                        </span>
                                    {% else %}
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle" aria-hidden="true"></i> Inaktiv
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Verifiziert:</th>
                                <td>
                                    {% if user.isVerified %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle" aria-hidden="true"></i> Ja
                                        </span>
                                    {% else %}
                                        <span class="badge bg-warning">
                                            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> Nein
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Auth Provider:</th>
                                <td>
                                    {% if user.authProvider == 'azure_oauth' %}
                                        <i class="bi bi-microsoft" aria-hidden="true"></i> Azure OAuth
                                    {% elseif user.authProvider == 'azure_saml' %}
                                        <i class="bi bi-microsoft" aria-hidden="true"></i> Azure SAML
                                    {% else %}
                                        <i class="bi bi-person-circle" aria-hidden="true"></i> Lokal
                                    {% endif %}
                                </td>
                            </tr>
                            {% if user.azureObjectId %}
                                <tr>
                                    <th scope="row">Azure Object ID:</th>
                                    <td><code>{{ user.azureObjectId }}</code></td>
                                </tr>
                            {% endif %}
                            <tr>
                                <th scope="row">Erstellt am:</th>
                                <td>{{ user.createdAt|date('d.m.Y H:i') }}</td>
                            </tr>
                            <tr>
                                <th scope="row">Letzte Anmeldung:</th>
                                <td>
                                    {% if user.lastLoginAt %}
                                        {{ user.lastLoginAt|date('d.m.Y H:i') }}
                                    {% else %}
                                        <span class="text-muted">Nie</span>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {# Roles & Permissions #}
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-shield" aria-hidden="true"></i> Systemrollen</h3>
                </div>
                <div class="card-body">
                    {% if user.roles|length > 0 %}
                        <div class="list-group">
                            {% for role in user.roles %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>
                                            <i class="bi bi-shield-fill text-warning" aria-hidden="true"></i>
                                            {{ role }}
                                        </span>
                                        {% if role == 'ROLE_SUPER_ADMIN' %}
                                            <span class="badge bg-danger">Super Admin</span>
                                        {% elseif role == 'ROLE_ADMIN' %}
                                            <span class="badge bg-warning">Admin</span>
                                        {% elseif role == 'ROLE_MANAGER' %}
                                            <span class="badge bg-info">Manager</span>
                                        {% elseif role == 'ROLE_AUDITOR' %}
                                            <span class="badge bg-primary">Auditor</span>
                                        {% else %}
                                            <span class="badge bg-secondary">User</span>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            Keine Systemrollen zugewiesen.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0"><i class="bi bi-key" aria-hidden="true"></i> Benutzerdefinierte Rollen</h3>
                </div>
                <div class="card-body">
                    {% if user.customRoles|length > 0 %}
                        <div class="list-group">
                            {% for customRole in user.customRoles %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>{{ customRole.name }}</strong>
                                            {% if customRole.description %}
                                                <br>
                                                <small class="text-muted">{{ customRole.description }}</small>
                                            {% endif %}
                                        </div>
                                        <span class="badge bg-info">{{ customRole.permissions|length }} Berechtigungen</span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            Keine benutzerdefinierten Rollen zugewiesen.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# All Permissions #}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h3 class="mb-0"><i class="bi bi-unlock" aria-hidden="true"></i> Alle Berechtigungen</h3>
                </div>
                <div class="card-body">
                    {% set allPermissions = [] %}
                    {% for customRole in user.customRoles %}
                        {% for permission in customRole.permissions %}
                            {% set allPermissions = allPermissions|merge([permission]) %}
                        {% endfor %}
                    {% endfor %}

                    {% if allPermissions|length > 0 %}
                        <div class="row">
                            {% for permission in allPermissions %}
                                <div class="col-md-3 mb-2">
                                    <span class="badge bg-secondary w-100">
                                        <i class="bi bi-check" aria-hidden="true"></i> {{ permission.name }}
                                    </span>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            Keine spezifischen Berechtigungen zugewiesen. Berechtigungen werden durch Systemrollen vererbt.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Actions #}
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"><i class="bi bi-gear" aria-hidden="true"></i> Aktionen</h3>
        </div>
        <div class="card-body">
            <div class="btn-group" role="group">
                <a href="{{ path('user_management_edit', {'id': user.id}) }}" class="btn btn-primary">
                    <i class="bi bi-pencil" aria-hidden="true"></i> Bearbeiten
                </a>
                {% if user.id != app.user.id %}
                    {% if user.isActive %}
                        <form method="post" action="{{ path('user_management_deactivate', {'id': user.id}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('deactivate' ~ user.id) }}">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-pause-circle" aria-hidden="true"></i> Deaktivieren
                            </button>
                        </form>
                    {% else %}
                        <form method="post" action="{{ path('user_management_activate', {'id': user.id}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('activate' ~ user.id) }}">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-play-circle" aria-hidden="true"></i> Aktivieren
                            </button>
                        </form>
                    {% endif %}
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash" aria-hidden="true"></i> Löschen
                    </button>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{# Delete Confirmation Modal #}
{% if user.id != app.user.id %}
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Benutzer löschen</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Möchten Sie den Benutzer <strong>{{ user.firstName }} {{ user.lastName }}</strong> wirklich löschen?
                <br><br>
                <strong>Achtung:</strong> Diese Aktion kann nicht rückgängig gemacht werden.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                <form method="post" action="{{ path('user_management_delete', {'id': user.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="submit" class="btn btn-danger">Löschen</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock admin_content %}

# Docker Environment Configuration
# Copy this file to .env.docker.local and customize for your environment
# WICHTIG: .env.docker.local sollte in .gitignore sein!

# PostgreSQL Database
POSTGRES_DB=little_isms
POSTGRES_USER=isms_user
# ⚠️ WICHTIG: Ändern Sie dieses Passwort für Produktion!
POSTGRES_PASSWORD=isms_password

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@isms.local
# ⚠️ WICHTIG: Ändern Sie dieses Passwort für Produktion!
PGADMIN_DEFAULT_PASSWORD=admin

# Application Environment
APP_ENV=dev
APP_DEBUG=1

# Ports (ändern wenn bereits belegt)
APP_PORT=8000
DB_PORT=5432
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
PGADMIN_PORT=5050
